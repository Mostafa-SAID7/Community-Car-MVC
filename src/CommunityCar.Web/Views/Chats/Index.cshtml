@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> SharedLocalizer
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-2xl flex h-[calc(100vh-10rem)] overflow-hidden mb-8 group/chat-main">
    <!-- Chat Sidebar -->
    <div class="w-80 border-r border-border/50 flex flex-col bg-muted/5 backdrop-blur-sm shrink-0">
        <div class="p-5 border-b border-border/50 bg-muted/20">
            <h2 class="text-sm font-black flex items-center gap-2 mb-4 uppercase tracking-widest text-foreground">
                <i data-lucide="message-square" class="text-primary w-5 h-5"></i>
                @Localizer["HeaderTitle"]
            </h2>
            <div class="relative group/search">
                <input type="text" class="w-full pl-10 pr-4 py-2.5 rounded-xl bg-background border border-border/50 text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none placeholder:text-muted-foreground/60" placeholder="@Localizer["SearchPlaceholder"]" id="chat-search">
                <i data-lucide="search" class="absolute left-3.5 top-1/2 -translate-y-1/2 w-4 h-4 text-muted-foreground group-focus-within/search:text-primary transition-colors"></i>
            </div>
        </div>
        
        <div class="flex-1 overflow-y-auto no-scrollbar divide-y divide-border/20" id="conversations-list">
            <!-- Example Conversation 1 -->
            <div class="flex items-center gap-4 p-4 cursor-pointer hover:bg-primary/5 transition-all border-l-4 border-l-transparent relative group/conv" data-conversation-id="sample-1">
                <div class="relative shrink-0">
                    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary to-primary/80 flex items-center justify-center text-primary-foreground font-black text-xs shadow-lg group-hover/conv:scale-105 transition-transform">JD</div>
                    <div class="absolute bottom-0 right-0 w-3.5 h-3.5 bg-green-500 border-2 border-background rounded-full ring-1 ring-border shadow-sm"></div>
                </div>
                <div class="flex-1 min-w-0">
                    <div class="flex justify-between items-center mb-0.5">
                        <span class="font-black text-sm text-foreground tracking-tight">John Doe</span>
                        <span class="text-[9px] font-black uppercase text-muted-foreground opacity-60">2m ago</span>
                    </div>
                    <div class="text-[11px] font-medium text-muted-foreground truncate opacity-80 group-hover/conv:opacity-100 transition-opacity">Hey, how's your car project going?</div>
                </div>
                <div class="absolute right-4 top-1/2 -translate-y-1/2 w-5 h-5 bg-primary text-primary-foreground text-[10px] font-black rounded-lg flex items-center justify-center shadow-lg shadow-primary/20">2</div>
            </div>
            
            <!-- Example Conversation 2 -->
            <div class="flex items-center gap-4 p-4 cursor-pointer hover:bg-primary/5 transition-all border-l-4 border-l-transparent relative group/conv" data-conversation-id="sample-2">
                <div class="relative shrink-0">
                    <div class="w-12 h-12 rounded-full bg-muted border border-border flex items-center justify-center font-black text-xs text-muted-foreground shadow-inner group-hover/conv:scale-105 transition-transform">SM</div>
                </div>
                <div class="flex-1 min-w-0">
                    <div class="flex justify-between items-center mb-0.5">
                        <span class="font-black text-sm text-foreground tracking-tight">Sarah Miller</span>
                        <span class="text-[9px] font-black uppercase text-muted-foreground opacity-60">1h ago</span>
                    </div>
                    <div class="text-[11px] font-medium text-muted-foreground truncate opacity-80 group-hover/conv:opacity-100 transition-opacity">Thanks for the help with the engine!</div>
                </div>
            </div>
        </div>

        <div class="p-4 bg-muted/20 border-t border-border/50">
            <button class="w-full py-3 bg-primary text-primary-foreground rounded-xl text-[10px] font-black uppercase tracking-widest hover:opacity-90 active:scale-95 transition-all shadow-lg shadow-primary/20 flex items-center justify-center gap-2 group/new">
                <i data-lucide="plus" class="w-3.5 h-3.5 group-hover:rotate-90 transition-transform"></i>
                @Localizer["StartThread"]
            </button>
        </div>
    </div>
    
    <!-- Chat Main Area -->
    <div class="flex-1 flex flex-col bg-background/30 relative">
        <!-- Empty State -->
        <div class="flex-1 flex flex-col items-center justify-center text-center p-12 animate-in fade-in zoom-in-95 duration-500" id="chat-empty-state">
            <div class="w-24 h-24 bg-muted rounded-full flex items-center justify-center mb-8 shadow-inner ring-1 ring-border/50">
                <i data-lucide="messages-square" class="w-10 h-10 text-muted-foreground opacity-30"></i>
            </div>
            <h3 class="text-2xl font-black text-foreground mb-3 tracking-tight">@Localizer["SelectConversation"]</h3>
            <p class="text-sm text-muted-foreground max-w-xs mx-auto mb-8 font-medium">@Localizer["ConnectWithEnthusiasts"]</p>
            <button class="inline-flex items-center gap-2 px-8 py-3 bg-background border border-border hover:border-primary hover:text-primary rounded-2xl text-xs font-black uppercase tracking-widest transition-all shadow-xl shadow-black/5" id="new-chat-btn">
                <i data-lucide="plus-circle" class="w-4 h-4"></i>
                @Localizer["NewConversation"]
            </button>
        </div>
        
        <!-- Chat Header (hidden initially) -->
        <div class="flex justify-between items-center p-5 border-b border-border/50 bg-muted/20 backdrop-blur-md sticky top-0 z-10" id="chat-header" style="display: none;">
            <div class="flex items-center gap-4">
                <div class="relative">
                    <div class="w-11 h-11 rounded-full bg-primary flex items-center justify-center font-black text-xs text-primary-foreground shadow-lg shadow-primary/10 overflow-hidden ring-2 ring-background" id="chat-avatar">JD</div>
                    <div class="absolute bottom-0 right-0 w-3.5 h-3.5 bg-green-500 border-2 border-background rounded-full ring-1 ring-border" id="chat-online-indicator"></div>
                </div>
                <div>
                    <h3 class="text-sm font-black text-foreground m-0 tracking-tight" id="chat-title">John Doe</h3>
                    <div class="flex items-center gap-1.5 mt-0.5">
                        <div class="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse"></div>
                        <span class="text-[10px] font-black uppercase tracking-widest text-green-600 dark:text-green-500" id="chat-status">@Localizer["Online"]</span>
                    </div>
                </div>
            </div>
            <div class="flex items-center gap-2">
                <button class="w-9 h-9 flex items-center justify-center rounded-xl bg-muted/50 hover:bg-primary/10 hover:text-primary text-muted-foreground transition-all border border-transparent hover:border-primary/20" title="@Localizer["Profile"]">
                    <i data-lucide="user" class="w-4 h-4"></i>
                </button>
                <button class="w-9 h-9 flex items-center justify-center rounded-xl bg-muted/50 hover:bg-muted text-muted-foreground transition-all border border-transparent hover:border-border" title="@Localizer["Settings"]">
                    <i data-lucide="settings" class="w-4 h-4"></i>
                </button>
            </div>
        </div>
        
        <!-- Messages Area (hidden initially) -->
        <div class="flex-1 overflow-y-auto p-6 flex flex-col gap-6 no-scrollbar h-full scroll-smooth" id="chat-messages" style="display: none;">
            <!-- Dynamic data -->
        </div>
        
        <!-- Message Input (hidden initially) -->
        <div class="p-6 border-t border-border/50 bg-background/50 backdrop-blur-xl" id="chat-input-area" style="display: none;">
            <div class="bg-card border border-border/50 rounded-2xl p-2 transition-all focus-within:ring-4 focus-within:ring-primary/10 focus-within:border-primary/30 shadow-inner group/msg">
                <div class="flex items-end gap-3 px-3 py-2">
                    <button class="mb-1 w-8 h-8 flex items-center justify-center text-muted-foreground hover:bg-muted rounded-lg transition-all" title="@Localizer["Attach"]">
                        <i data-lucide="paperclip" class="w-4 h-4"></i>
                    </button>
                    <textarea class="flex-1 bg-transparent border-none outline-none text-sm font-medium py-1.5 px-0 text-foreground placeholder:text-muted-foreground/60 resize-none max-h-40 min-h-[22px] no-scrollbar leading-relaxed" id="message-input" placeholder="@Localizer["ComposeMessage"]" rows="1"></textarea>
                    <div class="flex items-center gap-1 mb-1">
                        <button class="w-8 h-8 flex items-center justify-center text-muted-foreground hover:bg-muted rounded-lg transition-all" title="@Localizer["Emoji"]">
                            <i data-lucide="smile" class="w-4 h-4"></i>
                        </button>
                        <button class="ml-1 w-10 h-10 flex items-center justify-center bg-primary text-primary-foreground rounded-xl shadow-lg shadow-primary/20 hover:scale-110 active:scale-95 transition-all disabled:opacity-30 disabled:hover:scale-100" id="send-message-btn" title="@Localizer["Send"]" disabled>
                            <i data-lucide="send" class="w-4 h-4"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_LocalizationScript")
    <script src="~/lib/signalr/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>
    <!-- Preservation of original script logic with Tailwind updates -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const conversationItems = document.querySelectorAll('[data-conversation-id]');
            const chatEmptyState = document.getElementById('chat-empty-state');
            const chatHeader = document.getElementById('chat-header');
            const chatMessages = document.getElementById('chat-messages');
            const chatInputArea = document.getElementById('chat-input-area');
            const messageInput = document.getElementById('message-input');
            const sendBtn = document.getElementById('send-message-btn');
            
            conversationItems.forEach(item => {
                item.addEventListener('click', function() {
                    conversationItems.forEach(i => i.classList.remove('bg-primary/10', 'border-primary', 'active'));
                    this.classList.add('bg-primary/10', 'border-primary', 'active');
                    
                    chatEmptyState.style.display = 'none';
                    chatHeader.style.display = 'flex';
                    chatMessages.style.display = 'flex';
                    chatInputArea.style.display = 'block';
                    
                    // Trigger fake initial messages for demo
                    loadFakeMessages();
                });
            });

            function loadFakeMessages() {
                chatMessages.innerHTML = `
                    <div class="flex justify-center my-6"><span class="px-4 py-1.5 bg-muted/40 text-[10px] font-black uppercase tracking-widest text-muted-foreground rounded-full border border-border">Today</span></div>
                    
                    <div class="flex items-start gap-3 animate-in slide-in-from-left-4 duration-500">
                        <div class="w-8 h-8 rounded-full bg-primary flex items-center justify-center text-[10px] font-black text-white shrink-0 shadow-md">JD</div>
                        <div class="flex flex-col gap-1.5 max-w-[80%]">
                            <div class="px-4 py-3 bg-muted/40 border border-border rounded-2xl rounded-tl-none shadow-sm text-sm font-medium text-foreground leading-relaxed">
                                Hey, how's your car project going? Have you managed to find the part you were looking for?
                            </div>
                            <span class="text-[9px] font-bold text-muted-foreground uppercase opacity-60">10:30 AM</span>
                        </div>
                    </div>

                    <div class="flex items-start justify-end gap-3 animate-in slide-in-from-right-4 duration-500">
                        <div class="flex flex-col gap-1.5 max-w-[80%] items-end text-right">
                            <div class="px-4 py-3 bg-primary text-primary-foreground rounded-2xl rounded-tr-none shadow-lg shadow-primary/20 text-sm font-medium leading-relaxed">
                                It's going great! Just finished installing the new exhaust system. Sounds amazing. Still looking for the interior trim though.
                            </div>
                            <div class="flex items-center gap-2">
                                <span class="text-[9px] font-bold text-muted-foreground uppercase opacity-60">10:32 AM</span>
                                <i data-lucide="check-check" class="w-3 h-3 text-primary"></i>
                            </div>
                        </div>
                        <div class="w-8 h-8 rounded-full bg-muted border border-border flex items-center justify-center text-[10px] font-black text-muted-foreground shrink-0 shadow-inner">ME</div>
                    </div>
                `;
                lucide.createIcons();
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }

            messageInput.addEventListener('input', function() {
                const hasContent = this.value.trim().length > 0;
                sendBtn.disabled = !hasContent;
                this.style.height = 'auto';
                this.style.height = Math.min(this.scrollHeight, 160) + 'px';
            });
        });
    </script>
}
