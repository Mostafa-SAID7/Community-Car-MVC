@model CommunityCar.Application.Features.Account.ViewModels.Authentication.TwoFactorVM
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = "Two-Factor Authentication";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile-leetcode.css" asp-append-version="true" />
}

<div class="profile-container py-4 animate-in fade-in slide-in-from-bottom-4 duration-500">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="space-y-6">
            
            <!-- Header -->
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-gradient-to-br from-primary to-primary/80 text-primary-foreground mb-4 shadow-lg">
                    <i data-lucide="shield-check" class="w-8 h-8"></i>
                </div>
                <h1 class="text-3xl font-bold text-foreground mb-2">Two-Factor Authentication</h1>
                <p class="text-muted-foreground">Add an extra layer of security to your account</p>
            </div>

            <!-- Status Card -->
            <div class="leetcode-card p-6">
                <div class="flex items-center justify-between mb-6">
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 rounded-full @(Model.IsEnabled ? "bg-green-100 text-green-600" : "bg-orange-100 text-orange-600") flex items-center justify-center">
                            <i data-lucide="@(Model.IsEnabled ? "shield-check" : "shield-alert")" class="w-6 h-6"></i>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold text-foreground">
                                @(Model.IsEnabled ? "Two-Factor Authentication is Enabled" : "Two-Factor Authentication is Disabled")
                            </h3>
                            <p class="text-sm text-muted-foreground">
                                @(Model.IsEnabled ? "Your account is protected with 2FA" : "Enable 2FA to secure your account")
                            </p>
                        </div>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="px-3 py-1 rounded-full text-xs font-medium @(Model.IsEnabled ? "bg-green-100 text-green-800" : "bg-orange-100 text-orange-800")">
                            @(Model.IsEnabled ? "Enabled" : "Disabled")
                        </span>
                    </div>
                </div>

                @if (!Model.IsEnabled)
                {
                    <!-- Setup 2FA -->
                    <div class="space-y-6">
                        <div class="border-t border-border pt-6">
                            <h4 class="text-lg font-semibold text-foreground mb-4">Set up Two-Factor Authentication</h4>
                            
                            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                                <!-- QR Code Section -->
                                <div class="space-y-4">
                                    <h5 class="font-medium text-foreground">1. Scan QR Code</h5>
                                    <p class="text-sm text-muted-foreground">
                                        Use an authenticator app like Google Authenticator, Authy, or Microsoft Authenticator to scan this QR code:
                                    </p>
                                    
                                    @if (!string.IsNullOrEmpty(Model.AuthenticatorUri))
                                    {
                                        <div class="flex justify-center p-4 bg-white rounded-lg border">
                                            <div id="qrcode" class="qr-code"></div>
                                        </div>
                                    }
                                    
                                    <!-- Manual Entry -->
                                    <div class="mt-4">
                                        <h6 class="text-sm font-medium text-foreground mb-2">Or enter this key manually:</h6>
                                        <div class="flex items-center gap-2">
                                            <code class="flex-1 px-3 py-2 bg-muted rounded text-sm font-mono break-all">@Model.AuthenticatorKey</code>
                                            <button type="button" onclick="copyToClipboard('@Model.AuthenticatorKey')" class="px-3 py-2 bg-primary text-primary-foreground rounded text-sm hover:bg-primary/90 transition-colors">
                                                Copy
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <!-- Verification Section -->
                                <div class="space-y-4">
                                    <h5 class="font-medium text-foreground">2. Enter Verification Code</h5>
                                    <p class="text-sm text-muted-foreground">
                                        Enter the 6-digit code from your authenticator app to complete setup:
                                    </p>
                                    
                                    <form asp-action="EnableTwoFactor" method="post" class="space-y-4">
                                        <input type="hidden" name="ManualEntryKey" value="@Model.AuthenticatorKey" />
                                        
                                        <div>
                                            <label class="block text-sm font-medium text-foreground mb-2">Verification Code</label>
                                            <input type="text" name="VerificationCode" class="w-full px-4 py-3 bg-background border border-border rounded-lg text-foreground font-mono text-center text-lg tracking-widest focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all" placeholder="000000" maxlength="6" pattern="[0-9]{6}" required />
                                        </div>
                                        
                                        <button type="submit" class="w-full bg-primary text-primary-foreground hover:bg-primary/90 font-semibold py-3 px-4 rounded-lg transition-all btn-glow">
                                            Enable Two-Factor Authentication
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Manage 2FA -->
                    <div class="space-y-6">
                        <div class="border-t border-border pt-6">
                            <h4 class="text-lg font-semibold text-foreground mb-4">Manage Two-Factor Authentication</h4>
                            
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <!-- Recovery Codes -->
                                <div class="space-y-4">
                                    <div class="flex items-center gap-2">
                                        <i data-lucide="key" class="w-5 h-5 text-primary"></i>
                                        <h5 class="font-medium text-foreground">Recovery Codes</h5>
                                    </div>
                                    <p class="text-sm text-muted-foreground">
                                        Generate backup codes in case you lose access to your authenticator app.
                                    </p>
                                    <button type="button" class="inline-flex items-center gap-2 px-4 py-2 bg-secondary text-secondary-foreground hover:bg-secondary/80 rounded-lg text-sm font-medium transition-all">
                                        <i data-lucide="download" class="w-4 h-4"></i>
                                        Generate Recovery Codes
                                    </button>
                                </div>

                                <!-- Reset 2FA -->
                                <div class="space-y-4">
                                    <div class="flex items-center gap-2">
                                        <i data-lucide="refresh-cw" class="w-5 h-5 text-orange-500"></i>
                                        <h5 class="font-medium text-foreground">Reset Authenticator</h5>
                                    </div>
                                    <p class="text-sm text-muted-foreground">
                                        Reset your authenticator app if you've lost access to your device.
                                    </p>
                                    <button type="button" class="inline-flex items-center gap-2 px-4 py-2 bg-orange-100 text-orange-700 hover:bg-orange-200 rounded-lg text-sm font-medium transition-all">
                                        <i data-lucide="refresh-cw" class="w-4 h-4"></i>
                                        Reset Authenticator
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Disable 2FA -->
                        <div class="border-t border-border pt-6">
                            <div class="bg-red-50 dark:bg-red-950/20 border border-red-200 dark:border-red-800 rounded-lg p-6">
                                <div class="flex items-start gap-4">
                                    <div class="w-8 h-8 rounded-full bg-red-100 text-red-600 flex items-center justify-center flex-shrink-0">
                                        <i data-lucide="alert-triangle" class="w-4 h-4"></i>
                                    </div>
                                    <div class="flex-1">
                                        <h5 class="font-medium text-red-800 dark:text-red-200 mb-2">Disable Two-Factor Authentication</h5>
                                        <p class="text-sm text-red-700 dark:text-red-300 mb-4">
                                            Disabling 2FA will make your account less secure. Only disable if you're having issues with your authenticator app.
                                        </p>
                                        
                                        <form asp-action="DisableTwoFactor" method="post" class="space-y-4">
                                            <div>
                                                <label class="block text-sm font-medium text-red-800 dark:text-red-200 mb-2">Enter your password to confirm</label>
                                                <input type="password" name="Password" class="w-full max-w-sm px-3 py-2 bg-white dark:bg-gray-800 border border-red-300 dark:border-red-600 rounded text-sm focus:outline-none focus:ring-2 focus:ring-red-500/50 focus:border-red-500" required />
                                            </div>
                                            
                                            <button type="submit" class="inline-flex items-center gap-2 px-4 py-2 bg-red-600 text-white hover:bg-red-700 rounded-lg text-sm font-medium transition-all">
                                                <i data-lucide="shield-off" class="w-4 h-4"></i>
                                                Disable Two-Factor Authentication
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Back Button -->
            <div class="text-center">
                <a href="/profile/settings" class="inline-flex items-center gap-2 px-6 py-3 bg-secondary text-secondary-foreground hover:bg-secondary/80 rounded-lg font-medium transition-all">
                    <i data-lucide="arrow-left" class="w-4 h-4"></i>
                    Back to Settings
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @if (!string.IsNullOrEmpty(Model.AuthenticatorUri))
    {
        <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.3/build/qrcode.min.js"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // Generate QR Code
                const qrCodeElement = document.getElementById('qrcode');
                if (qrCodeElement && '@Model.AuthenticatorUri') {
                    QRCode.toCanvas(qrCodeElement, '@Model.AuthenticatorUri', {
                        width: 200,
                        margin: 2,
                        color: {
                            dark: '#000000',
                            light: '#FFFFFF'
                        }
                    }, function (error) {
                        if (error) console.error(error);
                    });
                }
            });

            function copyToClipboard(text) {
                navigator.clipboard.writeText(text).then(function() {
                    // Show success message
                    const button = event.target;
                    const originalText = button.textContent;
                    button.textContent = 'Copied!';
                    button.classList.add('bg-green-600', 'hover:bg-green-700');
                    button.classList.remove('bg-primary', 'hover:bg-primary/90');
                    
                    setTimeout(() => {
                        button.textContent = originalText;
                        button.classList.remove('bg-green-600', 'hover:bg-green-700');
                        button.classList.add('bg-primary', 'hover:bg-primary/90');
                    }, 2000);
                }).catch(function(err) {
                    console.error('Could not copy text: ', err);
                });
            }
        </script>
    }

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Handle TempData messages
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
            toastr.success('@Html.Raw(Html.Encode(TempData["SuccessMessage"].ToString()).Replace("'", "\\'"))');
            </text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
            toastr.error('@Html.Raw(Html.Encode(TempData["ErrorMessage"].ToString()).Replace("'", "\\'"))');
            </text>
        }
    </script>
}