@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<aside class="w-100 d-flex flex-column gap-4">
    <div class="card card-premium shadow-sm">
        <div class="card-header border-0 bg-transparent p-4 pb-0">
            <h6 class="d-flex align-items-center gap-2 fw-black text-uppercase tracking-wider small text-primary-red">
                <i data-lucide="calendar" style="width: 18px;"></i>
                @Localizer["SidebarEventsTitle"]
            </h6>
        </div>
        
        <div class="card-body p-4">
            <div class="d-flex flex-column gap-4">
                <div class="d-flex flex-column gap-3">
                    <h6 class="small fw-black text-uppercase tracking-widest text-muted opacity-50 mb-1" style="font-size: 0.65rem;">@Localizer["UpcomingEvents"]</h6>
                    @for (int i = 1; i <= 3; i++)
                    {
                        <div class="d-flex gap-3 align-items-center p-3 rounded-4 bg-muted-subtle border border-transparent hover-border-primary-red transition-all cursor-pointer group">
                            <div class="w-10 h-10 rounded-3 bg-primary-red bg-opacity-10 text-primary-red d-flex flex-column align-items-center justify-content-center fw-bold flex-shrink-0" style="width: 40px; height: 40px;">
                                <span style="font-size: 0.55rem; line-height: 1;">JAN</span>
                                <span style="font-size: 0.85rem; line-height: 1;">@(20 + i)</span>
                            </div>
                            <div class="flex-grow-1 min-w-0">
                                <p class="mb-0 small fw-bold text-truncate group-hover:text-primary-red transition-colors">Car Meetup City @i</p>
                                <p class="mb-0 text-muted opacity-50 text-uppercase tracking-widest" style="font-size: 0.6rem;">10:00 AM</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</aside>

