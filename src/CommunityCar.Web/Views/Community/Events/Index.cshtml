@model CommunityCar.Application.Features.Events.ViewModels.EventsIndexVM
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> SharedLocalizer
@inject IViewLocalizer Localizer
@{
    // Get current culture for localization
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");

    ViewData["Title"] = Localizer["Events"];
}

<div class="space-y-8 animate-in fade-in duration-700">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tight">@Localizer["CommunityEvents"]</h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">@Localizer["EventsSubtitle"]</p>
        </div>
        <a href="/events/create" class="inline-flex items-center gap-2.5 px-8 py-3 bg-primary text-primary-foreground hover:bg-primary/90 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-primary/20 active:scale-95 group">
            <i data-lucide="plus-circle" class="w-4 h-4 group-hover:scale-125 transition-transform"></i>
            @Localizer["CreateEvent"]
        </a>
    </div>

    <!-- Metrics Radar -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-primary/20">
            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="calendar" class="w-5 h-5"></i>
            </div>
            <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.Stats.TotalEvents</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["TotalEvents"]</div>
        </div>
        
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-green-500/10">
            <div class="w-10 h-10 rounded-xl bg-green-500/10 flex items-center justify-center text-green-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="calendar-check" class="w-5 h-5"></i>
            </div>
            <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.Stats.UpcomingEvents</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["Upcoming"]</div>
        </div>
        
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-orange-500/10">
            <div class="w-10 h-10 rounded-xl bg-orange-500/10 flex items-center justify-center text-orange-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="calendar-clock" class="w-5 h-5"></i>
            </div>
            <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.Stats.ActiveEvents</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["ActiveNow"]</div>
        </div>
        
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-blue-500/10">
            <div class="w-10 h-10 rounded-xl bg-blue-500/10 flex items-center justify-center text-blue-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="users" class="w-5 h-5"></i>
            </div>
            <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.Stats.TotalAttendees</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["TotalAttendees"]</div>
        </div>
    </div>

    <!-- Discovery Toolbar -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl space-y-6">
        <form method="get">
        <div class="flex flex-col lg:flex-row gap-4 items-center">
            <div class="relative flex-1 w-full group">
                <input type="text" name="SearchTerm" value="@Model.SearchRequest.SearchTerm" 
                       placeholder="@Localizer["SearchTerm"]" 
                       class="w-full bg-background border border-border pl-12 pr-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none">
                <i data-lucide="search" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-muted-foreground group-focus-within:text-primary transition-colors"></i>
            </div>
            
            <div class="flex gap-2 w-full lg:w-auto">
                <input type="text" name="Location" value="@Model.SearchRequest.Location" 
                       placeholder="@Localizer["Location"]" 
                       class="flex-1 lg:w-48 bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none">
                <button type="submit" class="h-[42px] px-6 py-2 rounded-xl bg-primary text-primary-foreground hover:bg-primary/90 text-[10px] font-black uppercase tracking-widest shadow-lg transition-all flex items-center justify-center gap-2 active:scale-95">
                    <i data-lucide="search" class="w-4 h-4"></i>
                    @Localizer["Search"]
                </button>
                <a href="/events" class="h-[42px] px-6 py-2 rounded-xl bg-background border border-border hover:border-primary hover:text-primary text-[10px] font-black uppercase tracking-widest shadow-lg shadow-black/5 transition-all flex items-center justify-center gap-2 active:scale-95">@Localizer["Clear"]</a>
            </div>
        </div>
        
        <div class="flex flex-wrap gap-4">
            <label class="flex items-center gap-2 text-sm font-medium">
                <input type="checkbox" name="IsUpcomingOnly" value="true" @(Model.SearchRequest.IsUpcomingOnly ? "checked" : "") class="rounded border-border text-primary focus:ring-primary">
                @Localizer["UpcomingOnly"]
            </label>
            <label class="flex items-center gap-2 text-sm font-medium">
                <input type="checkbox" name="IsFreeOnly" value="true" @(Model.SearchRequest.IsFreeOnly ? "checked" : "") class="rounded border-border text-primary focus:ring-primary">
                @Localizer["FreeEvents"]
            </label>
            <label class="flex items-center gap-2 text-sm font-medium">
                <input type="checkbox" name="HasAvailableSpots" value="true" @(Model.SearchRequest.HasAvailableSpots ? "checked" : "") class="rounded border-border text-primary focus:ring-primary">
                @Localizer["AvailableSpots"]
            </label>
        </div>
    </form>
    </div>

    <!-- Events Interface -->
    <div id="eventsContainer" class="min-h-[400px]">
    @if (Model.SearchResponse.Items.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
            @foreach (var eventItem in Model.SearchResponse.Items)
            {
                <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-300 group">
                    <div class="p-6">
                        <div class="flex items-start justify-between mb-4">
                            <div class="flex-1">
                                @{
                                    var displayTitle = isArabic && !string.IsNullOrEmpty(eventItem.TitleAr) ? eventItem.TitleAr : eventItem.Title;
                                    var displayDescription = isArabic && !string.IsNullOrEmpty(eventItem.DescriptionAr) ? eventItem.DescriptionAr : eventItem.Description;
                                }
                                <h3 class="text-lg font-bold text-foreground mb-2 group-hover:text-primary transition-colors">
                                    <a href="/events/@eventItem.Id">@displayTitle</a>
                                </h3>
                                <p class="text-sm text-muted-foreground line-clamp-2 mb-3">@displayDescription</p>
                            </div>
                            @if (eventItem.IsFree)
                            {
                                <span class="bg-green-500/10 text-green-600 dark:text-green-400 px-2 py-1 rounded-full text-xs font-medium">@Localizer["Free"]</span>
                            }
                            else if (eventItem.TicketPrice.HasValue)
                            {
                                <span class="bg-blue-500/10 text-blue-600 dark:text-blue-400 px-2 py-1 rounded-full text-xs font-medium">$@eventItem.TicketPrice.Value</span>
                            }
                        </div>

                        <div class="space-y-2 mb-4">
                            <div class="flex items-center gap-2 text-sm text-muted-foreground">
                                <i data-lucide="calendar" class="w-4 h-4"></i>
                                <span>@eventItem.StartTime.ToString("MMM dd, yyyy 'at' h:mm tt")</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm text-muted-foreground">
                                <i data-lucide="map-pin" class="w-4 h-4"></i>
                                <span>@eventItem.Location</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm text-muted-foreground">
                                <i data-lucide="users" class="w-4 h-4"></i>
                                <span>@string.Format(Localizer["AttendeesFormat"].Value, eventItem.AttendeeCount)</span>
                                @if (eventItem.MaxAttendees.HasValue)
                                {
                                    <span>@string.Format(Localizer["MaxAttendeesFormat"].Value, eventItem.MaxAttendees.Value)</span>
                                }
                            </div>
                        </div>

                        @if (eventItem.Tags.Any())
                        {
                            <div class="flex flex-wrap gap-1 mb-4">
                                @foreach (var tag in eventItem.Tags.Take(3))
                                {
                                    <span class="bg-primary/10 text-primary px-2 py-1 rounded-full text-xs font-medium">#@tag</span>
                                }
                                @if (eventItem.Tags.Count() > 3)
                                {
                                    <span class="text-xs text-muted-foreground">@string.Format(Localizer["MoreTagsFormat"].Value, (eventItem.Tags.Count() - 3))</span>
                                }
                            </div>
                        }

                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-2">
                                @if (eventItem.IsUpcoming)
                                {
                                    <span class="bg-green-500/10 text-green-600 dark:text-green-400 px-2 py-1 rounded-full text-xs font-medium">@Localizer["Upcoming"]</span>
                                }
                                else if (eventItem.IsActive)
                                {
                                    <span class="bg-orange-500/10 text-orange-600 dark:text-orange-400 px-2 py-1 rounded-full text-xs font-medium">@Localizer["Active"]</span>
                                }
                                else
                                {
                                    <span class="bg-gray-500/10 text-gray-600 dark:text-gray-400 px-2 py-1 rounded-full text-xs font-medium">@Localizer["Past"]</span>
                                }
                            </div>
                                <a href="/events/@eventItem.Id" class="btn btn-sm btn-outline">@Localizer["ViewDetails"]</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.SearchResponse.TotalCount > Model.SearchRequest.PageSize)
        {
            <div class="flex justify-center">
                <div class="flex items-center gap-2">
                    @{
                        var totalPages = (int)Math.Ceiling((double)Model.SearchResponse.TotalCount / Model.SearchRequest.PageSize);
                        var currentPage = Model.SearchRequest.Page;
                    }
                    
                    @if (currentPage > 1)
                    {
                        <a href="?page=@(currentPage - 1)&pageSize=@Model.SearchRequest.PageSize&searchTerm=@Model.SearchRequest.SearchTerm&location=@Model.SearchRequest.Location" 
                           class="btn btn-outline btn-sm">@Localizer["Previous"]</a>
                    }
                    
                    <span class="text-sm text-muted-foreground px-4">
                        @string.Format(Localizer["PaginationInfoFormat"].Value, currentPage, totalPages, Model.SearchResponse.TotalCount)
                    </span>
                    
                    @if (currentPage < totalPages)
                    {
                        <a href="?page=@(currentPage + 1)&pageSize=@Model.SearchRequest.PageSize&searchTerm=@Model.SearchRequest.SearchTerm&location=@Model.SearchRequest.Location" 
                           class="btn btn-outline btn-sm">@Localizer["Next"]</a>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-8 text-center">
            <div class="bg-primary/10 p-4 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
                <i data-lucide="calendar-x" class="w-8 h-8 text-primary"></i>
            </div>
            <h3 class="text-lg font-black text-foreground mb-2">@Localizer["NoEventsFound"]</h3>
            <p class="text-sm text-muted-foreground mb-4">
                @if (!string.IsNullOrEmpty(Model.SearchRequest.SearchTerm) || !string.IsNullOrEmpty(Model.SearchRequest.Location))
                {
                    <span>@Localizer["NoEventsMatch"]</span>
                }
                else
                {
                    <span>@Localizer["NoEventsScheduled"]</span>
                }
            </p>
            <div class="flex gap-2 justify-center">
                <a href="/events/create" class="inline-flex items-center gap-2.5 px-6 py-2.5 bg-primary text-primary-foreground hover:bg-primary/90 rounded-xl text-xs font-black uppercase tracking-widest transition-all shadow-lg shadow-primary/20 active:scale-95">
                    <i data-lucide="plus" class="w-4 h-4"></i>
                    @Localizer["CreateEvent"]
                </a>
                @if (!string.IsNullOrEmpty(Model.SearchRequest.SearchTerm) || !string.IsNullOrEmpty(Model.SearchRequest.Location))
                {
                    <a href="/events" class="inline-flex items-center gap-2.5 px-6 py-2.5 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95">@Localizer["ClearFilters"]</a>
                }
            </div>
        </div>
    }
</div>
