@model CommunityCar.Application.Features.Community.Stories.ViewModels.StoryVM
@inject IViewLocalizer Localizer
@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
    var displayTitle = Model?.Title ?? "Story";
    var displayCaption = isArabic && !string.IsNullOrEmpty(Model?.CaptionAr) ? Model.CaptionAr : Model?.Caption;
    
    ViewData["Title"] = displayTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUserId = ViewBag.CurrentUserId as Guid?;
}

<div class="container-fluid community-detail-container mx-auto py-4 animate-in fade-in">
     <!-- Skeleton Loader -->
    <div id="loading-skeleton" class="d-none vstack gap-4">
         <div class="row g-4">
             <div class="col-lg-8">
                 <div class="skeleton-card" style="height: 400px;"></div>
                 <div class="skeleton-card mt-4" style="height: 300px;"></div>
             </div>
             <div class="col-lg-4">
                 <div class="skeleton-card" style="height: 200px;"></div>
                 <div class="skeleton-card mt-4" style="height: 300px;"></div>
             </div>
         </div>
    </div>

    <!-- Main Content -->
    <div id="main-content">
        <!-- Story Navigation Strategy -->
        <div class="d-flex flex-column flex-md-row align-items-md-end justify-content-between gap-4 px-2 mb-4">
            <div class="vstack gap-4">
                <nav class="d-flex align-items-center gap-3 text-primary mb-3 nav-breadcrumb">
                    <i data-lucide="layers" class="icon-sm"></i> @Localizer["StoryPayload"]
                </nav>
                <h1 class="display-4 fw-black text-dark lh-1">@displayTitle</h1>
                <p class="small fw-medium text-muted opacity-75 mt-4 border-start border-4 border-primary border-opacity-25 ps-4 py-1 transmission-log">@Localizer["TransmissionBy"] @Model?.AuthorName</p>
            </div>
            
            <a asp-controller="Stories" asp-action="Index" asp-route-culture="@System.Globalization.CultureInfo.CurrentCulture.Name" class="btn btn-outline-secondary d-inline-flex align-items-center justify-content-center gap-2 px-4 py-2 rounded-4 back-btn">
                <i data-lucide="arrow-left" class="icon-md back-arrow"></i>
                @Localizer["ReturnToFeed"]
            </a>
        </div>

        @if (Model != null)
        {
            <div class="row g-4">
                <!-- Main Story Content -->
                <div class="col-lg-8">
                    <div class="vstack gap-4">
                        <!-- Story Media Archive -->
                        <div class="position-relative">
                            <div class="position-relative community-content-card border border-secondary border-opacity-25 rounded-5 shadow-lg overflow-hidden">
                                @if (!string.IsNullOrEmpty(Model.MediaUrl))
                                {
                                    <div class="ratio ratio-16x9">
                                        @if (Model.Type == StoryType.Video)
                                        {
                                            <video controls class="w-100 h-100 object-fit-cover">
                                                <source src="@Model.MediaUrl" type="video/mp4">
                                                Your browser does not support the video tag.
                                            </video>
                                        }
                                        else
                                        {
                                            <img src="@Model.MediaUrl" alt="@Model.Title" class="w-100 h-100 object-fit-cover" />
                                        }
                                        
                                        @if (Model.IsHighlighted)
                                        {
                                            <div class="position-absolute top-0 end-0 m-4">
                                                <div class="bg-warning rounded-4 d-flex align-items-center justify-content-center shadow-lg" style="width: 48px; height: 48px;">
                                                    <i data-lucide="star" class="icon-md text-white"></i>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="ratio ratio-16x9 bg-gradient-to-br from-primary-subtle to-info-subtle d-flex align-items-center justify-content-center">
                                        <div class="text-center">
                                            <i data-lucide="image" class="icon-xl text-muted opacity-25 mb-3"></i>
                                            <p class="xx-small fw-black text-uppercase text-muted opacity-50">SIGNAL_ONLY_BROADCAST</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Story Content Matrix -->
                        <div class="community-content-card border border-secondary border-opacity-25 rounded-5 shadow-lg p-4 p-md-5">
                            <!-- Author Metadata -->
                            <div class="d-flex align-items-center gap-4 mb-4 p-4 bg-light bg-opacity-25 border border-secondary border-opacity-25 rounded-4">
                                <div class="author-avatar rounded-3 overflow-hidden border border-secondary shadow-sm">
                                    <img src="@(Model.AuthorAvatar ?? "/images/default-avatar.png")" alt="@Model.AuthorName" class="w-100 h-100 object-fit-cover" />
                                </div>
                                <div class="flex-fill">
                                    <div class="xx-small fw-black text-uppercase text-muted opacity-50 mb-1">@Localizer["AuthenticatedSource"]</div>
                                    <div class="h5 fw-black text-dark mb-0">@Model.AuthorName</div>
                                </div>
                                <div class="text-end">
                                    <div class="xx-small fw-black text-uppercase text-muted opacity-50 mb-1">@Localizer["TemporalStamp"]</div>
                                    <div class="small fw-bold text-dark">@Model.TimeAgo</div>
                                </div>
                            </div>

                            <!-- Story Body -->
                            @if (!string.IsNullOrEmpty(displayCaption))
                            {
                                <div class="text-dark lh-lg fw-medium mb-4">
                                    @Html.Raw(displayCaption.Replace("\n", "<br>"))
                                </div>
                            }

                            <!-- Stats & Protocol Actions -->
                            <div class="d-flex flex-wrap align-items-center justify-content-between gap-4 pt-4 border-top border-secondary border-opacity-25">
                                <div class="d-flex align-items-center gap-4">
                                    <div class="d-flex align-items-center gap-2 text-muted">
                                        <i data-lucide="eye" class="icon-sm text-primary"></i>
                                        <span class="xx-small fw-black">@Model.ViewCount.ToString("N0")</span>
                                    </div>
                                    <div class="d-flex align-items-center gap-2 text-muted">
                                        <i data-lucide="heart" class="icon-sm text-danger"></i>
                                        <span class="xx-small fw-black">@Model.LikeCount.ToString("N0")</span>
                                    </div>
                                </div>

                                <div class="d-flex align-items-center gap-3">
                                    @if (currentUserId.HasValue)
                                    {
                                        <button onclick="toggleLike('@Model.Id')" class="btn btn-outline-danger d-inline-flex align-items-center gap-2 px-3 py-2 rounded-3 xx-small fw-black text-uppercase @(Model.IsLikedByUser ? "btn-danger" : "")">
                                            <i data-lucide="heart" class="icon-sm @(Model.IsLikedByUser ? "fill-current" : "")"></i>
                                            @Localizer[Model.IsLikedByUser ? "Liked" : "Like"]
                                        </button>
                                    }
                                    <button onclick="shareStory('@Model.Id')" class="btn btn-outline-primary d-inline-flex align-items-center gap-2 px-3 py-2 rounded-3 xx-small fw-black text-uppercase">
                                        <i data-lucide="share" class="icon-sm"></i> @Localizer["Broadcast"]
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Comments Section -->
                        @if (Model.AllowComments)
                        {
                            <div class="community-content-card border border-secondary border-opacity-25 rounded-5 shadow-lg p-4">
                                <h3 class="h5 fw-bold text-dark mb-4">Comments</h3>
                                
                                @if (currentUserId.HasValue)
                                {
                                    <!-- Add Comment Form -->
                                    <div class="d-flex gap-3 mb-4">
                                        <div class="avatar-sm rounded-circle overflow-hidden bg-light">
                                            <img src="/images/default-avatar.png" alt="You" class="w-100 h-100 object-fit-cover" />
                                        </div>
                                        <div class="flex-fill">
                                            <textarea id="commentText" 
                                                      rows="3" 
                                                      placeholder="Write a comment..."
                                                      class="form-control bg-light border-0 rounded-3 resize-none"></textarea>
                                            <div class="d-flex justify-content-end mt-2">
                                                <button type="button" 
                                                        onclick="addComment('@Model.Id')"
                                                        class="btn btn-primary px-4 py-2 rounded-3">
                                                    Post Comment
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                }

                                <!-- Comments List -->
                                <div id="commentsList">
                                    <!-- Comments will be loaded here -->
                                    <div class="text-center py-5 text-muted">
                                        <i data-lucide="message-circle" class="icon-xl mb-3 opacity-25"></i>
                                        <p class="mb-0">No comments yet. Be the first to comment!</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="col-lg-4">
                    <div class="vstack gap-4">
                        <!-- Story Info -->
                        <div class="community-content-card border border-secondary border-opacity-25 rounded-4 shadow-lg p-4">
                            <h3 class="h6 fw-bold text-dark mb-3">Story Info</h3>
                            
                            <div class="vstack gap-3 small">
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">Created</span>
                                    <span class="text-dark fw-medium">@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                                </div>
                                @if (Model.ExpiresAt.HasValue)
                                {
                                    <div class="d-flex justify-content-between">
                                        <span class="text-muted">Expires</span>
                                        <span class="text-dark fw-medium">
                                            @{
                                                var timeLeft = Model.ExpiresAt.Value - DateTime.UtcNow;
                                                if (timeLeft.TotalHours > 1)
                                                {
                                                    <span>@((int)timeLeft.TotalHours)h left</span>
                                                }
                                                else if (timeLeft.TotalMinutes > 0)
                                                {
                                                    <span>@((int)timeLeft.TotalMinutes)m left</span>
                                                }
                                                else
                                                {
                                                    <span class="text-danger">Expired</span>
                                                }
                                            }
                                        </span>
                                    </div>
                                }
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">Visibility</span>
                                    <span class="text-dark fw-medium">@Model.Visibility</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">Type</span>
                                    <span class="text-dark fw-medium">@Model.Type</span>
                                </div>
                            </div>
                        </div>

                        <!-- Related Stories -->
                        <div class="community-content-card border border-secondary border-opacity-25 rounded-4 shadow-lg p-4">
                            <h3 class="h6 fw-bold text-dark mb-3">More from @Model.AuthorName</h3>
                            
                            <div id="relatedStories">
                                <!-- Related stories will be loaded here -->
                                <div class="text-center py-4 text-muted small">
                                    Loading related stories...
                                </div>
                            </div>
                        </div>

                        <!-- Share Options -->
                        <div class="community-content-card border border-secondary border-opacity-25 rounded-4 shadow-lg p-4">
                            <h3 class="h6 fw-bold text-dark mb-3">Share Story</h3>
                            
                            <div class="row g-2">
                                <div class="col-6">
                                    <button type="button" 
                                            onclick="shareToSocial('twitter')"
                                            class="btn btn-primary w-100 d-flex align-items-center justify-content-center gap-2 py-2 rounded-3">
                                        <i data-lucide="twitter" class="icon-sm"></i>
                                        <span class="small">Twitter</span>
                                    </button>
                                </div>
                                <div class="col-6">
                                    <button type="button" 
                                            onclick="shareToSocial('facebook')"
                                            class="btn btn-info w-100 d-flex align-items-center justify-content-center gap-2 py-2 rounded-3">
                                        <i data-lucide="facebook" class="icon-sm"></i>
                                        <span class="small">Facebook</span>
                                    </button>
                                </div>
                                <div class="col-6">
                                    <button type="button" 
                                            onclick="copyStoryLink()"
                                            class="btn btn-outline-secondary w-100 d-flex align-items-center justify-content-center gap-2 py-2 rounded-3">
                                        <i data-lucide="link" class="icon-sm"></i>
                                        <span class="small">Copy Link</span>
                                    </button>
                                </div>
                                <div class="col-6">
                                    <button type="button" 
                                            onclick="reportStory('@Model.Id')"
                                            class="btn btn-outline-danger w-100 d-flex align-items-center justify-content-center gap-2 py-2 rounded-3">
                                        <i data-lucide="flag" class="icon-sm"></i>
                                        <span class="small">Report</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="error-icon-container bg-light rounded-circle d-flex align-items-center justify-content-center mx-auto mb-4">
                    <i data-lucide="alert-circle" class="error-icon text-muted"></i>
                </div>
                <h2 class="h3 fw-bold text-dark mb-2">Story Not Found</h2>
                <p class="text-muted mb-4">The story you're looking for doesn't exist or has been removed.</p>
                <a asp-controller="Stories" asp-action="Index" asp-route-culture="@System.Globalization.CultureInfo.CurrentCulture.Name" 
                   class="btn btn-primary d-inline-flex align-items-center gap-2 px-4 py-2 rounded-3">
                    <i data-lucide="arrow-left" class="icon-sm"></i>
                    Back to Stories
                </a>
            </div>
        }
    </div> <!-- End Main Content -->
</div>

@section Scripts {

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Skeleton.initPageLoad('loading-skeleton', 'main-content');
            loadRelatedStories();
        });

        function toggleLike(storyId) {
            fetch(`/${'@System.Globalization.CultureInfo.CurrentCulture.Name'}/stories/${storyId}/like`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload(); // Simple reload for now
                }
            })
            .catch(error => {
                console.error('Error toggling like:', error);
            });
        }

        function shareStory(storyId) {
            const url = window.location.href;
            if (navigator.share) {
                navigator.share({
                    title: '@Model?.Title',
                    text: 'Check out this story!',
                    url: url
                });
            } else {
                copyToClipboard(url);
            }
        }

        function shareToSocial(platform) {
            const url = encodeURIComponent(window.location.href);
            const text = encodeURIComponent('@Model?.Title');
            
            let shareUrl = '';
            switch (platform) {
                case 'twitter':
                    shareUrl = `https://twitter.com/intent/tweet?text=${text}&url=${url}`;
                    break;
                case 'facebook':
                    shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${url}`;
                    break;
            }
            
            if (shareUrl) {
                window.open(shareUrl, '_blank', 'width=600,height=400');
            }
        }

        function copyStoryLink() {
            copyToClipboard(window.location.href);
        }

        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                showNotification('Link copied to clipboard!', 'success');
            });
        }

        function addComment(storyId) {
            const commentText = document.getElementById('commentText');
            if (!commentText.value.trim()) return;

            // In a real implementation, you would make an API call here
            showNotification('Comment functionality coming soon!', 'info');
            commentText.value = '';
        }

        function reportStory(storyId) {
            const message = 'Are you sure you want to delete this story? This action cannot be undone.';
            const messageConfirm = 'Are you sure you want to report this story?';
            if (window.AlertModal) {
                 window.AlertModal.confirm(messageConfirm, 'Report Story', function(confirmed) {
                    if (confirmed) {
                        executeReportStory(storyId);
                    }
                });
            } else if (confirm(messageConfirm)) {
                executeReportStory(storyId);
            }
        }

        function executeReportStory(storyId) {
            fetch(`/${'@System.Globalization.CultureInfo.CurrentCulture.Name'}/stories/${storyId}/report`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ reason: 'Inappropriate content' })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification('Story reported successfully', 'success');
                }
            })
            .catch(error => {
                console.error('Error reporting story:', error);
            });
        }

        function loadRelatedStories() {
            const container = document.getElementById('relatedStories');
            
            fetch(`/${'@System.Globalization.CultureInfo.CurrentCulture.Name'}/stories/author/@Model?.AuthorId?pageSize=5`)
                .then(response => response.text())
                .then(html => {
                    // In a real implementation, you would parse and display related stories
                    container.innerHTML = '<div class="text-center py-4 text-muted-foreground text-sm">No other stories found</div>';
                })
                .catch(error => {
                    console.error('Error loading related stories:', error);
                    container.innerHTML = '<div class="text-center py-4 text-muted-foreground text-sm">Error loading stories</div>';
                });
        }

        function showNotification(message, type = 'info') {
            if (window.AlertModal) {
                switch(type) {
                    case 'success': window.AlertModal.success(message); break;
                    case 'error': window.AlertModal.error(message); break;
                    case 'warning': window.AlertModal.warning(message); break;
                    default: window.AlertModal.info(message); break;
                }
            } else {
                alert(message);
            }
        }
    </script>
}
