@model CommunityCar.Application.Features.Stories.ViewModels.StoryVM
@inject IViewLocalizer Localizer
@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
    var displayTitle = Model?.Title ?? "Story";
    var displayCaption = isArabic && !string.IsNullOrEmpty(Model?.CaptionAr) ? Model.CaptionAr : Model?.Caption;
    
    ViewData["Title"] = displayTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUserId = ViewBag.CurrentUserId as Guid?;
}

<div class="min-h-screen bg-background">
     <!-- Skeleton Loader -->
    <div id="loading-skeleton" class="hidden max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6 space-y-6 animate-in fade-in duration-700">
         <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
             <div class="lg:col-span-2 space-y-6">
                 <skeleton type="Card" class="h-96" />
                 <skeleton type="Card" class="h-64" />
             </div>
             <div class="space-y-6">
                 <skeleton type="Card" class="h-48" />
                 <skeleton type="Card" class="h-64" />
             </div>
         </div>
    </div>

    <!-- Main Content -->
    <div>
    <!-- Story Navigation Strategy -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
        <div class="flex flex-col md:flex-row md:items-end justify-between gap-8 px-2">
            <div class="space-y-4">
                <nav class="flex items-center gap-3 text-[10px] font-black uppercase tracking-[0.3em] text-primary mb-6">
                    <i data-lucide="layers" class="w-3.5 h-3.5 fill-current"></i> @Localizer["StoryPayload"]
                </nav>
                <h1 class="text-5xl font-black text-foreground tracking-tighter leading-none">@displayTitle</h1>
                <p class="text-sm font-medium text-muted-foreground opacity-70 mt-4 border-l-4 border-primary/20 pl-4 py-1 max-w-2xl">@Localizer["TransmissionBy"] @Model?.AuthorName</p>
            </div>
            
            <a asp-controller="Stories" asp-action="Index" asp-route-culture="@System.Globalization.CultureInfo.CurrentCulture.Name" class="inline-flex items-center justify-center gap-2 px-6 py-2.5 bg-muted/20 border border-border/50 hover:bg-muted/30 text-[10px] font-black uppercase tracking-widest rounded-xl transition-all active:scale-95 group/back">
                <i data-lucide="arrow-left" class="w-4 h-4 group-hover/back:-translate-x-1 transition-transform"></i>
                @Localizer["ReturnToFeed"]
            </a>
        </div>
    </div>

    @if (Model != null)
    {
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Main Story Content -->
                <div class="lg:col-span-2 space-y-6">
                    <!-- Story Media Archive -->
                    <div class="relative group">
                        <div class="absolute -inset-1 bg-gradient-to-r from-primary/10 to-blue-500/10 rounded-[2.5rem] blur-2xl opacity-50"></div>
                        <div class="relative bg-card rounded-[2.5rem] border border-border/50 overflow-hidden shadow-2xl">
                            @if (!string.IsNullOrEmpty(Model.MediaUrl))
                            {
                                <div class="aspect-[16/9] relative">
                                    @if (Model.Type == StoryType.Video)
                                    {
                                        <video controls class="w-full h-full object-cover">
                                            <source src="@Model.MediaUrl" type="video/mp4">
                                            Your browser does not support the video tag.
                                        </video>
                                    }
                                    else
                                    {
                                        <img src="@Model.MediaUrl" alt="@Model.Title" class="w-full h-full object-cover" />
                                    }
                                    
                                    @if (Model.IsHighlighted)
                                    {
                                        <div class="absolute top-6 right-6 w-12 h-12 bg-yellow-500 rounded-2xl flex items-center justify-center shadow-2xl shadow-yellow-500/40 border border-white/20">
                                            <i data-lucide="star" class="w-6 h-6 text-white fill-current"></i>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="aspect-[16/9] bg-gradient-to-br from-primary/10 to-accent/10 flex items-center justify-center">
                                    <div class="text-center">
                                        <i data-lucide="image" class="w-16 h-16 text-muted-foreground mx-auto mb-4 opacity-20"></i>
                                        <p class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">SIGNAL_ONLY_BROADCAST</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Story Content Matrix -->
                    <div class="bg-card/40 backdrop-blur-2xl border border-border/50 rounded-[2.5rem] p-8 md:p-10 shadow-xl">
                        <!-- Author Metadata -->
                        <div class="flex items-center gap-6 mb-8 p-6 bg-muted/20 border border-border/40 rounded-3xl">
                            <div class="w-14 h-14 rounded-2xl overflow-hidden ring-2 ring-primary/20 shadow-lg">
                                <img src="@(Model.AuthorAvatar ?? "/images/default-avatar.png")" alt="@Model.AuthorName" class="w-full h-full object-cover" />
                            </div>
                            <div class="flex-1">
                                <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40 mb-1">@Localizer["AuthenticatedSource"]</div>
                                <div class="text-lg font-black text-foreground">@Model.AuthorName</div>
                            </div>
                            <div class="text-right">
                                <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40 mb-1">@Localizer["TemporalStamp"]</div>
                                <div class="text-sm font-bold text-foreground">@Model.TimeAgo</div>
                            </div>
                        </div>

                        <!-- Story Body -->
                        @if (!string.IsNullOrEmpty(displayCaption))
                        {
                            <div class="prose prose-lg max-w-none text-foreground leading-relaxed font-medium mb-10">
                                @Html.Raw(displayCaption.Replace("\n", "<br>"))
                            </div>
                        }

                        <!-- Stats & Protocol Actions -->
                        <div class="flex flex-wrap items-center justify-between gap-6 pt-8 border-t border-border/30">
                            <div class="flex items-center gap-8">
                                <div class="flex items-center gap-2 text-muted-foreground">
                                    <i data-lucide="eye" class="w-4 h-4 text-primary"></i>
                                    <span class="text-xs font-black tabular-nums">@Model.ViewCount.ToString("N0")</span>
                                </div>
                                <div class="flex items-center gap-2 text-muted-foreground">
                                    <i data-lucide="heart" class="w-4 h-4 text-red-500"></i>
                                    <span class="text-xs font-black tabular-nums">@Model.LikeCount.ToString("N0")</span>
                                </div>
                            </div>

                            <div class="flex items-center gap-3">
                                @if (currentUserId.HasValue)
                                {
                                    <button onclick="toggleLike('@Model.Id')" class="inline-flex items-center gap-2 px-4 py-2 bg-background border border-border/50 hover:border-red-500/50 hover:text-red-500 rounded-xl text-[10px] font-bold uppercase tracking-wider transition-all @(Model.IsLikedByUser ? "text-red-500 border-red-500/20 bg-red-500/5" : "")">
                                        <i data-lucide="heart" class="w-4 h-4 mr-2 @(Model.IsLikedByUser ? "fill-current" : "")"></i>
                                        @Localizer[Model.IsLikedByUser ? "Liked" : "Like"]
                                    </button>
                                }
                                <button onclick="shareStory('@Model.Id')" class="inline-flex items-center gap-2 px-4 py-2 bg-background border border-border/50 hover:border-primary/50 hover:text-primary rounded-xl text-[10px] font-bold uppercase tracking-wider transition-all">
                                    <i data-lucide="share" class="w-4 h-4 mr-2"></i> @Localizer["Broadcast"]
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Comments Section -->
                    @if (Model.AllowComments)
                    {
                        <div class="bg-card rounded-xl border border-border p-6">
                            <h3 class="text-lg font-semibold text-foreground mb-4">Comments</h3>
                            
                            @if (currentUserId.HasValue)
                            {
                                <!-- Add Comment Form -->
                                <div class="flex gap-3 mb-6">
                                    <div class="w-10 h-10 rounded-full overflow-hidden bg-muted">
                                        <img src="/images/default-avatar.png" alt="You" class="w-full h-full object-cover" />
                                    </div>
                                    <div class="flex-1">
                                        <textarea id="commentText" 
                                                  rows="3" 
                                                  placeholder="Write a comment..."
                                                  class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary resize-none"></textarea>
                                        <div class="flex justify-end mt-2">
                                            <button type="button" 
                                                    onclick="addComment('@Model.Id')"
                                                    class="px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors">
                                                Post Comment
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Comments List -->
                            <div id="commentsList" class="space-y-4">
                                <!-- Comments will be loaded here -->
                                <div class="text-center py-8 text-muted-foreground">
                                    <i data-lucide="message-circle" class="w-8 h-8 mx-auto mb-2"></i>
                                    <p>No comments yet. Be the first to comment!</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Sidebar -->
                <div class="space-y-6">
                    <!-- Story Info -->
                    <div class="bg-card rounded-xl border border-border p-6">
                        <h3 class="text-lg font-semibold text-foreground mb-4">Story Info</h3>
                        
                        <div class="space-y-3 text-sm">
                            <div class="flex justify-between">
                                <span class="text-muted-foreground">Created</span>
                                <span class="text-foreground">@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                            </div>
                            @if (Model.ExpiresAt.HasValue)
                            {
                                <div class="flex justify-between">
                                    <span class="text-muted-foreground">Expires</span>
                                    <span class="text-foreground">
                                        @{
                                            var timeLeft = Model.ExpiresAt.Value - DateTime.UtcNow;
                                            if (timeLeft.TotalHours > 1)
                                            {
                                                <span>@((int)timeLeft.TotalHours)h left</span>
                                            }
                                            else if (timeLeft.TotalMinutes > 0)
                                            {
                                                <span>@((int)timeLeft.TotalMinutes)m left</span>
                                            }
                                            else
                                            {
                                                <span class="text-red-500">Expired</span>
                                            }
                                        }
                                    </span>
                                </div>
                            }
                            <div class="flex justify-between">
                                <span class="text-muted-foreground">Visibility</span>
                                <span class="text-foreground">@Model.Visibility</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-muted-foreground">Type</span>
                                <span class="text-foreground">@Model.Type</span>
                            </div>
                        </div>
                    </div>

                    <!-- Related Stories -->
                    <div class="bg-card rounded-xl border border-border p-6">
                        <h3 class="text-lg font-semibold text-foreground mb-4">More from @Model.AuthorName</h3>
                        
                        <div id="relatedStories" class="space-y-3">
                            <!-- Related stories will be loaded here -->
                            <div class="text-center py-4 text-muted-foreground text-sm">
                                Loading related stories...
                            </div>
                        </div>
                    </div>

                    <!-- Share Options -->
                    <div class="bg-card rounded-xl border border-border p-6">
                        <h3 class="text-lg font-semibold text-foreground mb-4">Share Story</h3>
                        
                        <div class="grid grid-cols-2 gap-3">
                            <button type="button" 
                                    onclick="shareToSocial('twitter')"
                                    class="flex items-center justify-center gap-2 p-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors">
                                <i data-lucide="twitter" class="w-4 h-4"></i>
                                <span class="text-sm">Twitter</span>
                            </button>
                            <button type="button" 
                                    onclick="shareToSocial('facebook')"
                                    class="flex items-center justify-center gap-2 p-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                                <i data-lucide="facebook" class="w-4 h-4"></i>
                                <span class="text-sm">Facebook</span>
                            </button>
                            <button type="button" 
                                    onclick="copyStoryLink()"
                                    class="flex items-center justify-center gap-2 p-3 bg-muted text-foreground rounded-lg hover:bg-accent transition-colors">
                                <i data-lucide="link" class="w-4 h-4"></i>
                                <span class="text-sm">Copy Link</span>
                            </button>
                            <button type="button" 
                                    onclick="reportStory('@Model.Id')"
                                    class="flex items-center justify-center gap-2 p-3 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors">
                                <i data-lucide="flag" class="w-4 h-4"></i>
                                <span class="text-sm">Report</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
            <div class="text-center">
                <div class="w-16 h-16 bg-muted rounded-full flex items-center justify-center mx-auto mb-4">
                    <i data-lucide="alert-circle" class="w-8 h-8 text-muted-foreground"></i>
                </div>
                <h2 class="text-2xl font-bold text-foreground mb-2">Story Not Found</h2>
                <p class="text-muted-foreground mb-6">The story you're looking for doesn't exist or has been removed.</p>
                <a asp-controller="Stories" asp-action="Index" asp-route-culture="@System.Globalization.CultureInfo.CurrentCulture.Name" 
                   class="inline-flex items-center gap-2 px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors">
                    <i data-lucide="arrow-left" class="w-4 h-4"></i>
                    Back to Stories
                </a>
            </div>
        </div>
    }
    </div> <!-- End Main Content -->
</div>

@section Scripts {
    <script src="~/js/stories.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Skeleton.initPageLoad('loading-skeleton', 'main-content');
            loadRelatedStories();
        });

        function toggleLike(storyId) {
            fetch(`/${'@System.Globalization.CultureInfo.CurrentCulture.Name'}/stories/${storyId}/like`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload(); // Simple reload for now
                }
            })
            .catch(error => {
                console.error('Error toggling like:', error);
            });
        }

        function shareStory(storyId) {
            const url = window.location.href;
            if (navigator.share) {
                navigator.share({
                    title: '@Model?.Title',
                    text: 'Check out this story!',
                    url: url
                });
            } else {
                copyToClipboard(url);
            }
        }

        function shareToSocial(platform) {
            const url = encodeURIComponent(window.location.href);
            const text = encodeURIComponent('@Model?.Title');
            
            let shareUrl = '';
            switch (platform) {
                case 'twitter':
                    shareUrl = `https://twitter.com/intent/tweet?text=${text}&url=${url}`;
                    break;
                case 'facebook':
                    shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${url}`;
                    break;
            }
            
            if (shareUrl) {
                window.open(shareUrl, '_blank', 'width=600,height=400');
            }
        }

        function copyStoryLink() {
            copyToClipboard(window.location.href);
        }

        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                showNotification('Link copied to clipboard!', 'success');
            });
        }

        function addComment(storyId) {
            const commentText = document.getElementById('commentText');
            if (!commentText.value.trim()) return;

            // In a real implementation, you would make an API call here
            showNotification('Comment functionality coming soon!', 'info');
            commentText.value = '';
        }

        function reportStory(storyId) {
            const message = 'Are you sure you want to delete this story? This action cannot be undone.';
            const messageConfirm = 'Are you sure you want to report this story?';
            if (window.AlertModal) {
                 window.AlertModal.confirm(messageConfirm, 'Report Story', function(confirmed) {
                    if (confirmed) {
                        executeReportStory(storyId);
                    }
                });
            } else if (confirm(messageConfirm)) {
                executeReportStory(storyId);
            }
        }

        function executeReportStory(storyId) {
            fetch(`/${'@System.Globalization.CultureInfo.CurrentCulture.Name'}/stories/${storyId}/report`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ reason: 'Inappropriate content' })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification('Story reported successfully', 'success');
                }
            })
            .catch(error => {
                console.error('Error reporting story:', error);
            });
        }

        function loadRelatedStories() {
            const container = document.getElementById('relatedStories');
            
            fetch(`/${'@System.Globalization.CultureInfo.CurrentCulture.Name'}/stories/author/@Model?.AuthorId?pageSize=5`)
                .then(response => response.text())
                .then(html => {
                    // In a real implementation, you would parse and display related stories
                    container.innerHTML = '<div class="text-center py-4 text-muted-foreground text-sm">No other stories found</div>';
                })
                .catch(error => {
                    console.error('Error loading related stories:', error);
                    container.innerHTML = '<div class="text-center py-4 text-muted-foreground text-sm">Error loading stories</div>';
                });
        }

        function showNotification(message, type = 'info') {
            if (window.AlertModal) {
                switch(type) {
                    case 'success': window.AlertModal.success(message); break;
                    case 'error': window.AlertModal.error(message); break;
                    case 'warning': window.AlertModal.warning(message); break;
                    default: window.AlertModal.info(message); break;
                }
            } else {
                alert(message);
            }
        }
    </script>
}
