@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<aside class="w-full space-y-6">
    <div class="bg-card/40 backdrop-blur-xl border border-border rounded-2xl p-6 shadow-sm">
        <h3 class="flex items-center gap-2 text-sm font-bold mb-6 uppercase tracking-wider text-primary">
            <i data-lucide="zap" class="w-4 h-4"></i>
            @Localizer["SidebarTitle"]
        </h3>
        
        <!-- Featured Experts -->
        <div class="space-y-6">
            <div class="space-y-4">
                <h4 class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["FeaturedExperts"]</h4>
                @for (int i = 1; i <= 2; i++)
                {
                    <div class="flex items-center gap-3 p-3 rounded-xl bg-accent/20 hover:bg-accent/40 transition-all cursor-pointer border border-transparent hover:border-border">
                        <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center font-bold text-primary">E@i</div>
                        <div class="flex-1 min-w-0">
                            <p class="text-xs font-bold truncate">@Localizer["ExpertName"] @i</p>
                            <p class="text-[9px] text-primary font-black uppercase tracking-tighter">@Localizer["VerifiedExpert"]</p>
                        </div>
                    </div>
                }
            </div>

            <!-- Recent Contributions -->
            <div class="space-y-4">
                <h4 class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["RecentContributions"]</h4>
                <div class="space-y-3">
                    @for (int i = 1; i <= 3; i++)
                    {
                        <div class="flex gap-3 items-start group">
                            <div class="w-1 h-8 rounded-full bg-border group-hover:bg-primary transition-colors"></div>
                            <div class="flex-1">
                                <p class="text-xs font-medium leading-tight group-hover:text-primary transition-colors">@Localizer["SampleActivity"]</p>
                                <p class="text-[9px] text-muted-foreground mt-1">@Localizer["TwoHoursAgo"]</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Promo -->
    <div class="bg-card/40 backdrop-blur-xl border border-border rounded-2xl overflow-hidden shadow-sm relative group cursor-pointer">
        <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
        <img src="/images/logo/logo.png" class="w-full h-32 object-contain opacity-10 p-4 absolute -right-4 -bottom-4 rotate-12" />
        <div class="p-6 relative z-10">
            <h5 class="text-sm font-black mb-1">@Localizer["UpgradeExperience"]</h5>
            <p class="text-[10px] text-muted-foreground mb-4">@Localizer["UpgradeDescription"]</p>
            <span class="text-[9px] font-black uppercase tracking-[0.2em] text-primary flex items-center gap-2 group-hover:translate-x-1 transition-transform">
                @Localizer["LearnMore"] <i data-lucide="arrow-right" class="w-3 h-3"></i>
            </span>
        </div>
    </div>
</aside>
