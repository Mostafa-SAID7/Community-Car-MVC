@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!-- Community Sidebar (Design System) -->
<aside class="w-full d-flex flex-column gap-4">
    <!-- Main Card -->
    <div class="card card-premium">
        <div class="card-header border-0 bg-transparent p-4 pb-0">
            <h6 class="d-flex align-items-center gap-2 fw-black text-uppercase tracking-wider small text-primary-red">
                <i data-lucide="zap" style="width: 18px;"></i>
                @Localizer["SidebarTitle"]
            </h6>
        </div>
        
        <div class="card-body p-4">
            <!-- Featured Experts -->
            <div class="mb-5">
                <h6 class="small fw-black text-uppercase tracking-widest text-muted opacity-50 mb-3" style="font-size: 0.65rem;">@Localizer["FeaturedExperts"]</h6>
                <div class="d-flex flex-column gap-3">
                    @for (int i = 1; i <= 2; i++)
                    {
                        <div class="d-flex align-items-center gap-3 p-3 rounded-4 bg-muted-subtle border border-transparent hover-border-primary-red transition-all cursor-pointer group">
                            <div class="user-avatar-container p-0 m-0 border-0 shadow-sm">
                                <div class="bg-primary-red-subtle text-primary-red rounded-circle d-flex align-items-center justify-content-center fw-bold" style="width: 40px; height: 40px;">E@i</div>
                            </div>
                            <div class="flex-grow-1 min-w-0">
                                <p class="mb-0 small fw-bold text-truncate">@Localizer["ExpertName"] @i</p>
                                <p class="mb-0 text-primary-red fw-black text-uppercase tracking-tighter" style="font-size: 0.6rem;">@Localizer["VerifiedExpert"]</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Recent Contributions -->
            <div>
                <h6 class="small fw-black text-uppercase tracking-widest text-muted opacity-50 mb-3" style="font-size: 0.65rem;">@Localizer["RecentContributions"]</h6>
                <div class="d-flex flex-column gap-3">
                    @for (int i = 1; i <= 3; i++)
                    {
                        <div class="d-flex gap-3 align-items-start group cursor-pointer">
                            <div class="bg-primary-red-subtle rounded-pill transition-colors group-hover-bg-primary-red" style="width: 3px; height: 32px;"></div>
                            <div class="flex-grow-1">
                                <p class="mb-0 small fw-medium text-body leading-tight group-hover-text-primary-red transition-colors">@Localizer["SampleActivity"]</p>
                                <p class="mb-0 text-muted opacity-50 text-uppercase tracking-widest" style="font-size: 0.6rem;">@Localizer["TwoHoursAgo"]</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Promo Card -->
    <div class="card card-premium overflow-hidden position-relative group cursor-pointer border-0 bg-primary-red animate-float">
        <div class="position-absolute end-0 bottom-0 p-3 opacity-10 rotate-12">
             <i data-lucide="award" style="width: 80px; height: 80px; color: white;"></i>
        </div>
        <div class="card-body p-4 position-relative z-1">
            <h6 class="fw-black text-white mb-1">@Localizer["UpgradeExperience"]</h6>
            <p class="text-white opacity-75 mb-3 small" style="font-size: 0.75rem;">@Localizer["UpgradeDescription"]</p>
            <span class="text-white fw-black text-uppercase tracking-widest d-flex align-items-center gap-2 group-hover-translate-x-2 transition-transform" style="font-size: 0.65rem;">
                @Localizer["LearnMore"] <i data-lucide="arrow-right" style="width: 12px;"></i>
            </span>
        </div>
    </div>
</aside>
