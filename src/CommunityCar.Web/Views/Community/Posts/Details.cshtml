@model CommunityCar.Domain.Entities.Community.Posts.Post
@{
    ViewData["Title"] = $"{Model.Title} - Posts";
}

<div class="post-detail-container">
    <a href="@Url.Action("Index", "Posts")" class="post-back-nav">
        <i data-lucide="arrow-left" class="me-1" style="width: 16px;"></i>Back to Posts
    </a>

    <div class="post-detail-card">
        <!-- Header -->
        <div class="post-detail-header">
            <div class="post-author-info">
                <div class="post-avatar" style="width: 48px; height: 48px;">
                    <i data-lucide="user" style="width: 24px;"></i>
                </div>
                <div class="post-author-details">
                    <span class="post-author-name" style="font-size: 1rem;">@(Model.AuthorId == Guid.Empty ? "Anonymous" : "User")</span>
                    <span class="post-timestamp">Posted on @Model.CreatedAt.ToString("MMMM dd, yyyy at HH:mm")</span>
                </div>
            </div>
            <span class="post-type-badge post-type-@Model.Type.ToString().ToLower()">
                @Model.Type.ToString()
            </span>
        </div>

        <!-- Meta -->
        <div class="post-detail-meta">
            <div style="display: flex; gap: 2rem; font-size: 0.85rem; color: hsl(var(--color-muted-foreground));">
                <span><i data-lucide="clock" style="width: 14px; margin-right: 0.25rem;"></i>Created: @Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                @if (Model.UpdatedAt.HasValue)
                {
                    <span><i data-lucide="edit" style="width: 14px; margin-right: 0.25rem;"></i>Updated: @Model.UpdatedAt.Value.ToString("MMM dd, yyyy")</span>
                }
            </div>
        </div>

        <!-- Content -->
        <h1 class="post-title" style="font-size: 2rem; margin-bottom: 1.5rem;">@Model.Title</h1>
        <div class="post-detail-content">
            @Html.Raw(Model.Content.Replace("\n", "<br/>"))
        </div>

        <!-- Actions -->
        <div class="post-actions">
            <button class="post-action-btn" style="font-size: 1rem; padding: 0.5rem 1rem;">
                <i data-lucide="heart"></i>
                <span>Like (0)</span>
            </button>
            <button class="post-action-btn" style="font-size: 1rem; padding: 0.5rem 1rem;">
                <i data-lucide="message-circle"></i>
                <span>Comment (0)</span>
            </button>
            <button class="post-action-btn" style="font-size: 1rem; padding: 0.5rem 1rem;">
                <i data-lucide="share-2"></i>
                <span>Share</span>
            </button>
            <button class="post-action-btn" style="font-size: 1rem; padding: 0.5rem 1rem; margin-left: auto;">
                <i data-lucide="bookmark"></i>
                <span>Save</span>
            </button>
        </div>
    </div>

    <!-- Engagement Section -->
    <div class="post-detail-card post-engagement">
        <h3 class="h5 mb-3">Engagement</h3>
        <div class="post-stats">
            <div class="post-stat-item">
                <span class="post-stat-value">0</span>
                <span class="post-stat-label">Likes</span>
            </div>
            <div class="post-stat-item">
                <span class="post-stat-value">0</span>
                <span class="post-stat-label">Comments</span>
            </div>
            <div class="post-stat-item">
                <span class="post-stat-value">0</span>
                <span class="post-stat-label">Shares</span>
            </div>
            <div class="post-stat-item">
                <span class="post-stat-value">0</span>
                <span class="post-stat-label">Views</span>
            </div>
        </div>
        
        <div style="padding-top: 1rem; border-top: 1px solid hsl(var(--color-border));">
            <p class="text-muted text-center mb-0" style="font-size: 0.9rem;">
                <i data-lucide="info" style="width: 16px; margin-right: 0.5rem;"></i>
                Comments and interactions coming soon!
            </p>
        </div>
    </div>

    <!-- Related Info Card -->
    <div class="post-detail-card">
        <h3 class="h6 mb-3 text-muted">Post Information</h3>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; font-size: 0.9rem;">
            <div>
                <strong>Post ID:</strong><br/>
                <code style="font-size: 0.75rem; color: hsl(var(--color-muted-foreground));">@Model.Id</code>
            </div>
            <div>
                <strong>Author ID:</strong><br/>
                <code style="font-size: 0.75rem; color: hsl(var(--color-muted-foreground));">@Model.AuthorId</code>
            </div>
            <div>
                <strong>Post Type:</strong><br/>
                <span>@Model.Type.ToString()</span>
            </div>
            @if (!string.IsNullOrEmpty(Model.CreatedBy))
            {
                <div>
                    <strong>Created By:</strong><br/>
                    <span>@Model.CreatedBy</span>
                </div>
            }
        </div>
    </div>
</div>
