@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["CreateNewPost"];
}

<div class="space-y-8 animate-in fade-in duration-700">
    <!-- Breadcrumb -->
    <nav class="flex items-center gap-3 text-[10px] font-black uppercase tracking-widest text-muted-foreground/60 px-2">
        <a href="@Url.Action("Index", "Posts")" class="hover:text-primary transition-colors flex items-center gap-2">
            <i data-lucide="chevron-left" class="w-3.5 h-3.5"></i> @Localizer["InteractionFeed"]
        </a>
        <i data-lucide="chevron-right" class="w-3 h-3 opacity-30"></i>
        <span class="text-foreground">@Localizer["NewBroadcast"]</span>
    </nav>

    <!-- Header -->
    <div class="text-center">
        <h1 class="text-3xl font-black text-foreground tracking-tight mb-3">@Localizer["CreateNewPost"]</h1>
        <p class="text-muted-foreground font-medium opacity-80 max-w-2xl mx-auto">@Localizer["CreateSubtitle"]</p>
    </div>

    <!-- Create Form -->
    <div class="max-w-4xl mx-auto">
        <form method="post" action="@Url.Action("Create", "Posts")" class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-8 shadow-xl space-y-8">
            @Html.AntiForgeryToken()

            <!-- Post Type Selection -->
            <div class="space-y-6">
                <h2 class="text-xl font-black text-foreground flex items-center gap-3">
                    <i data-lucide="radio" class="w-5 h-5"></i>
                    @Localizer["BroadcastType"]
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    <div class="flex items-start gap-4 p-4 bg-muted/20 border border-border/30 rounded-xl hover:border-primary/30 transition-colors cursor-pointer" onclick="selectPostType('Text', this)">
                        <input type="radio" id="type-text" name="type" value="Text" checked class="mt-1 text-primary focus:ring-primary">
                        <div class="flex-1">
                            <label for="type-text" class="block text-sm font-black text-foreground mb-1 cursor-pointer">
                                <i data-lucide="type" class="w-4 h-4 inline mr-2"></i>
                                @Localizer["TextPost"]
                            </label>
                            <p class="text-xs text-muted-foreground opacity-80">@Localizer["TextPostDesc"]</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-4 p-4 bg-muted/20 border border-border/30 rounded-xl hover:border-primary/30 transition-colors cursor-pointer" onclick="selectPostType('Image', this)">
                        <input type="radio" id="type-image" name="type" value="Image" class="mt-1 text-primary focus:ring-primary">
                        <div class="flex-1">
                            <label for="type-image" class="block text-sm font-black text-foreground mb-1 cursor-pointer">
                                <i data-lucide="image" class="w-4 h-4 inline mr-2"></i>
                                @Localizer["PhotoPost"]
                            </label>
                            <p class="text-xs text-muted-foreground opacity-80">@Localizer["PhotoPostDesc"]</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-4 p-4 bg-muted/20 border border-border/30 rounded-xl hover:border-primary/30 transition-colors cursor-pointer" onclick="selectPostType('Link', this)">
                        <input type="radio" id="type-link" name="type" value="Link" class="mt-1 text-primary focus:ring-primary">
                        <div class="flex-1">
                            <label for="type-link" class="block text-sm font-black text-foreground mb-1 cursor-pointer">
                                <i data-lucide="link" class="w-4 h-4 inline mr-2"></i>
                                @Localizer["LinkShare"]
                            </label>
                            <p class="text-xs text-muted-foreground opacity-80">@Localizer["LinkShareDesc"]</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-4 p-4 bg-muted/20 border border-border/30 rounded-xl hover:border-primary/30 transition-colors cursor-pointer" onclick="selectPostType('Poll', this)">
                        <input type="radio" id="type-poll" name="type" value="Poll" class="mt-1 text-primary focus:ring-primary">
                        <div class="flex-1">
                            <label for="type-poll" class="block text-sm font-black text-foreground mb-1 cursor-pointer">
                                <i data-lucide="bar-chart-3" class="w-4 h-4 inline mr-2"></i>
                                @Localizer["Poll"]
                            </label>
                            <p class="text-xs text-muted-foreground opacity-80">@Localizer["PollDesc"]</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Post Content -->
            <div class="space-y-6 pt-6 border-t border-border/20">
                <h2 class="text-xl font-black text-foreground flex items-center gap-3">
                    <i data-lucide="edit-3" class="w-5 h-5"></i>
                    @Localizer["Content"]
                </h2>

                <div class="space-y-6">
                    <div>
                        <label for="title" class="block text-sm font-black text-foreground mb-2">@Localizer["Title"]</label>
                        <input type="text" id="title" name="title" required maxlength="200" 
                               data-placeholder-text="@Localizer["TitlePlaceholder"]"
                               data-placeholder-image="@Localizer["ImageTitlePlaceholder"]"
                               data-placeholder-link="@Localizer["LinkTitlePlaceholder"]"
                               data-placeholder-poll="@Localizer["PollTitlePlaceholder"]"
                               class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none"
                               placeholder="@Localizer["TitlePlaceholder"]">
                        <p class="text-xs text-muted-foreground mt-1 opacity-60">@Localizer["TitleHelp"]</p>
                    </div>

                    <div>
                        <label for="content" class="block text-sm font-black text-foreground mb-2">@Localizer["ContentLabel"]</label>
                        <textarea id="content" name="content" required maxlength="5000" rows="8"
                                  data-placeholder-text="@Localizer["ContentPlaceholder"]"
                                  data-placeholder-image="@Localizer["ImageContentPlaceholder"]"
                                  data-placeholder-link="@Localizer["LinkContentPlaceholder"]"
                                  data-placeholder-poll="@Localizer["PollContentPlaceholder"]"
                                  class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none resize-none"
                                  placeholder="@Localizer["ContentPlaceholder"]"></textarea>
                        <div class="flex justify-between items-center mt-2">
                            <p class="text-xs text-muted-foreground opacity-60">@Localizer["ContentHelp"]</p>
                            <span class="text-xs text-muted-foreground opacity-60" id="contentCounter">0 / 5000</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Options -->
            <div class="space-y-6 pt-6 border-t border-border/20">
                <h2 class="text-xl font-black text-foreground flex items-center gap-3">
                    <i data-lucide="settings" class="w-5 h-5"></i>
                    @Localizer["Options"]
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="tags" class="block text-sm font-black text-foreground mb-2">@Localizer["Tags"]</label>
                        <input type="text" id="tags" name="tags" maxlength="200"
                               class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none"
                               placeholder="@Localizer["TagsPlaceholder"]">
                        <p class="text-xs text-muted-foreground mt-1 opacity-60">@Localizer["TagsHelp"]</p>
                    </div>

                    <div>
                        <label for="group" class="block text-sm font-black text-foreground mb-2">@Localizer["PostToGroup"]</label>
                        <select id="group" name="groupId" 
                                class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none appearance-none">
                            <option value="">@Localizer["GeneralFeed"]</option>
                            <option value="group1">Classic Mustang Enthusiasts</option>
                            <option value="group2">Vintage Car Restoration</option>
                            <option value="group3">American Muscle</option>
                            <option value="group4">European Classics</option>
                        </select>
                        <p class="text-xs text-muted-foreground mt-1 opacity-60">@Localizer["GroupHelp"]</p>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-border/20">
                <button type="submit" class="flex-1 px-8 py-4 bg-primary text-primary-foreground hover:bg-primary/90 rounded-2xl font-black text-sm uppercase tracking-widest transition-all shadow-lg shadow-primary/20 active:scale-95 flex items-center justify-center gap-3">
                    <i data-lucide="send" class="w-5 h-5"></i>
                    @Localizer["BroadcastPost"]
                </button>
                <button type="button" class="flex-1 px-8 py-4 bg-muted/20 border border-border hover:border-primary hover:text-primary rounded-2xl font-black text-sm uppercase tracking-widest transition-all shadow-sm active:scale-95 flex items-center justify-center gap-3">
                    <i data-lucide="save" class="w-5 h-5"></i>
                    @Localizer["SaveDraft"]
                </button>
                <a href="@Url.Action("Index", "Posts")" class="flex-1 px-8 py-4 bg-background border border-border hover:border-primary hover:text-primary rounded-2xl font-black text-sm uppercase tracking-widest transition-all shadow-sm active:scale-95 flex items-center justify-center gap-3">
                    <i data-lucide="x" class="w-5 h-5"></i>
                    @Localizer["Cancel"]
                </a>
            </div>
        </form>
    </div>

    <!-- Guidelines -->
    <div class="max-w-4xl mx-auto bg-muted/10 border border-border/30 rounded-2xl p-6">
        <h3 class="text-lg font-black text-foreground mb-4 flex items-center gap-2">
            <i data-lucide="shield-check" class="w-5 h-5 text-green-500"></i>
            @Localizer["CommunityGuidelines"]
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-muted-foreground">
            <div class="flex items-start gap-3">
                <i data-lucide="check-circle" class="w-4 h-4 text-green-500 mt-0.5 shrink-0"></i>
                <div>
                    <strong class="text-foreground">@Localizer["BeHelpful"]</strong> @Localizer["BeHelpfulDesc"]
                </div>
            </div>
            <div class="flex items-start gap-3">
                <i data-lucide="check-circle" class="w-4 h-4 text-green-500 mt-0.5 shrink-0"></i>
                <div>
                    <strong class="text-foreground">@Localizer["StayOnTopic"]</strong> @Localizer["StayOnTopicDesc"]
                </div>
            </div>
            <div class="flex items-start gap-3">
                <i data-lucide="check-circle" class="w-4 h-4 text-green-500 mt-0.5 shrink-0"></i>
                <div>
                    <strong class="text-foreground">@Localizer["BeRespectful"]</strong> @Localizer["BeRespectfulDesc"]
                </div>
            </div>
            <div class="flex items-start gap-3">
                <i data-lucide="check-circle" class="w-4 h-4 text-green-500 mt-0.5 shrink-0"></i>
                <div>
                    <strong class="text-foreground">@Localizer["UseClearTitles"]</strong> @Localizer["UseClearTitlesDesc"]
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/posts-create.js" asp-append-version="true"></script>
}
