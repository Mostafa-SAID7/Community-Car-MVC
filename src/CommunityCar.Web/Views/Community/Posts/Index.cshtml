@model IEnumerable<CommunityCar.Domain.Entities.Community.Posts.Post>
@{
    ViewData["Title"] = "Interaction Feed";
}

<div class="space-y-8 animate-in fade-in duration-700">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tight">Interaction Feed</h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">Real-time broadcast from the automotive community</p>
        </div>
        <a href="#" class="inline-flex items-center gap-2.5 px-8 py-3 bg-primary text-primary-foreground hover:bg-primary/90 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-primary/20 active:scale-95 group">
            <i data-lucide="plus" class="w-4 h-4 group-hover:scale-125 transition-transform"></i>
            Broadcast Story
        </a>
    </div>

    <!-- Feed Controller -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl flex flex-col md:flex-row gap-4 items-center">
        <div class="relative flex-1 w-full group">
            <input type="text" class="w-full bg-background border border-border pl-12 pr-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" placeholder="Search the feed..." id="postsSearchInput">
            <i data-lucide="search" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-muted-foreground group-focus-within/search:text-primary transition-colors"></i>
        </div>
        
        <div class="flex gap-2 w-full md:w-auto">
            <button class="flex-1 md:flex-none h-[46px] px-6 rounded-xl bg-background border border-border hover:border-primary hover:text-primary transition-all flex items-center justify-center shadow-lg shadow-black/5 active:scale-95 group/btn" id="togglePostViewBtn">
                <i data-lucide="layout-grid" class="w-4 h-4 group-hover/btn:scale-110 transition-transform"></i>
            </button>
            <button class="flex-1 md:flex-none h-[46px] px-6 rounded-xl bg-background border border-border hover:border-primary hover:text-primary transition-all flex items-center justify-center shadow-lg shadow-black/5 active:scale-95 group/btn">
                <i data-lucide="filter" class="w-4 h-4 group-hover/btn:scale-110 transition-transform"></i>
            </button>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="py-20 flex flex-col items-center justify-center text-center bg-muted/10 border-2 border-dashed border-border rounded-3xl">
            <div class="w-20 h-20 bg-muted/40 rounded-full flex items-center justify-center mb-6 shadow-inner animate-pulse">
                <i data-lucide="radio-receiver" class="w-10 h-10 text-muted-foreground opacity-30"></i>
            </div>
            <h3 class="text-2xl font-black text-foreground mb-3 tracking-tight">Signal Lost</h3>
            <p class="text-sm text-muted-foreground max-w-sm mx-auto font-medium opacity-80 mb-10">No broadcast signals detected in your current radius. Be the first to start the frequency.</p>
            <a href="#" class="px-10 py-4 bg-primary text-primary-foreground hover:bg-primary/90 rounded-2xl font-black text-xs uppercase tracking-widest transition-all shadow-xl shadow-primary/20 active:scale-95">Initial Transmission</a>
        </div>
    }
    else
    {
        <div class="flex flex-col gap-8" id="postsList">
            @foreach (var post in Model)
            {
                <a href="@Url.Action("Details", "Posts", new { id = post.Id })" class="group/post block bg-card/40 backdrop-blur-md border border-border rounded-2xl overflow-hidden shadow-lg transition-all hover:border-primary/30 hover:shadow-2xl hover:-translate-y-1 relative">
                    <div class="p-8">
                        <div class="flex justify-between items-start mb-6">
                            <div class="flex items-center gap-4">
                                <div class="w-12 h-12 rounded-xl bg-muted border border-border flex items-center justify-center overflow-hidden shrink-0 shadow-inner group-hover/post:scale-105 transition-transform duration-500">
                                    <i data-lucide="user" class="w-6 h-6 text-muted-foreground opacity-40"></i>
                                </div>
                                <div>
                                    <span class="block text-sm font-black text-foreground tracking-tight underline decoration-primary decoration-4 underline-offset-4 decoration-transparent group-hover/post:decoration-primary transition-all duration-500">@(post.AuthorId == Guid.Empty ? "Protocol Guest" : "Verified Agent")</span>
                                    <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@post.CreatedAt.ToString("MMM dd, yyyy")</span>
                                </div>
                            </div>
                            <span class="px-4 py-1.5 rounded-lg text-[9px] font-black uppercase tracking-widest bg-primary/5 text-primary border border-primary/10 shadow-sm">
                                @post.Type
                            </span>
                        </div>

                        <h3 class="text-2xl font-black text-foreground mb-3 tracking-tighter group-hover/post:text-primary transition-colors">@post.Title</h3>
                        <p class="text-muted-foreground font-medium leading-relaxed opacity-80 group-hover/post:opacity-100 transition-opacity line-clamp-3">@post.Content</p>

                        <div class="flex items-center gap-6 mt-8 pt-6 border-t border-border/20">
                            <div class="flex items-center gap-2 group/action cursor-pointer">
                                <div class="w-9 h-9 flex items-center justify-center rounded-xl bg-muted/40 text-muted-foreground group-hover/action:bg-red-500/10 group-hover/action:text-red-600 transition-all">
                                    <i data-lucide="heart" class="w-4 h-4"></i>
                                </div>
                                <span class="text-[11px] font-black tabular-nums">128</span>
                            </div>
                            <div class="flex items-center gap-2 group/action cursor-pointer">
                                <div class="w-9 h-9 flex items-center justify-center rounded-xl bg-muted/40 text-muted-foreground group-hover/action:bg-blue-500/10 group-hover/action:text-blue-600 transition-all">
                                    <i data-lucide="message-circle" class="w-4 h-4"></i>
                                </div>
                                <span class="text-[11px] font-black tabular-nums">42</span>
                            </div>
                            <div class="ml-auto">
                                <div class="w-9 h-9 flex items-center justify-center rounded-xl bg-muted/40 text-muted-foreground hover:bg-green-500/10 hover:text-green-600 transition-all cursor-pointer">
                                    <i data-lucide="share-2" class="w-4 h-4"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
    }
</div>
