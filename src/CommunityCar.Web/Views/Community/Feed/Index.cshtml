@model CommunityCar.Application.Features.Feed.DTOs.FeedResponse
@{
    ViewData["Title"] = "Community Feed";
    var feedType = ViewBag.FeedType as string ?? "personalized";
    var currentUserId = ViewBag.CurrentUserId as Guid?;
}

<div class="feed-container">
    <!-- Enhanced Stories Section -->
    <div class="card card-glass mb-6 stories-section">
        <div class="card-body">
            <div class="flex justify-between items-center mb-3">
                <h5 class="mb-0 text-lg font-semibold">Stories</h5>
                <small class="text-muted">Share your car moments</small>
            </div>
            
            <div class="flex gap-4 overflow-x-auto pb-2 custom-scroll stories-container" id="storiesContainer">
                <!-- Add Story Button -->
                <div class="story-item add-story" onclick="openCreateStoryModal()">
                    <div class="story-avatar">
                        <i data-lucide="plus"></i>
                    </div>
                    <div class="story-label">Add Story</div>
                </div>

                <!-- Existing Stories -->
                @foreach (var story in Model.Stories.Take(10))
                {
                    <div class="story-item" onclick="openStoryViewer('@story.Id')">
                        <div class="story-avatar @(story.IsViewed ? "viewed" : "")">
                            @if (!story.IsViewed)
                            {
                                <div class="story-ring"></div>
                            }
                            <img src="@(story.ThumbnailUrl ?? story.MediaUrl)" alt="@story.AuthorName" />
                        </div>
                        <div class="story-label">@story.AuthorName</div>
                        @if (!string.IsNullOrEmpty(story.TimeRemaining))
                        {
                            <div class="story-time">@story.TimeRemaining</div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Feed Navigation -->
    <div class="feed-nav flex justify-center mb-6">
        <div class="nav-pills">
            <a class="nav-link @(feedType == "personalized" ? "active" : "")" href="?feedType=personalized">
                <i class="fas fa-home"></i> For You
            </a>
            <a class="nav-link @(feedType == "trending" ? "active" : "")" href="?feedType=trending">
                <i class="fas fa-fire"></i> Trending
            </a>
            <a class="nav-link @(feedType == "friends" ? "active" : "")" href="?feedType=friends">
                <i class="fas fa-users"></i> Friends
            </a>
        </div>
    </div>

    <!-- Create Post Section -->
    @if (currentUserId.HasValue)
    {
        <div class="card card-glass create-post-card mb-6">
            <div class="card-body">
                <div class="flex items-center gap-3">
                    <div class="user-avatar shrink-0 w-10 h-10 rounded-full overflow-hidden">
                        <img src="/images/default-avatar.png" alt="Your Avatar" class="w-full h-full object-cover" />
                    </div>
                    <input type="text" class="create-post-input" placeholder="What's on your mind about cars?" readonly onclick="openCreatePostModal()" />
                </div>
                <div class="create-post-actions">
                    <button class="btn btn-ghost flex-1 justify-center gap-2" onclick="openCreatePostModal('photo')">
                        <i class="fas fa-camera text-success"></i> Photo
                    </button>
                    <button class="btn btn-ghost flex-1 justify-center gap-2" onclick="openCreatePostModal('review')">
                        <i class="fas fa-star text-warning"></i> Review
                    </button>
                    <button class="btn btn-ghost flex-1 justify-center gap-2" onclick="openCreatePostModal('question')">
                        <i class="fas fa-question-circle text-info"></i> Ask
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Feed Items -->
    <div class="feed-items flex flex-col gap-6">
        @foreach (var item in Model.FeedItems)
        {
            <div class="card card-glass feed-item" data-content-id="@item.Id" data-content-type="@item.ContentType">
                <div class="card-body">
                    <!-- Post Header -->
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="user-avatar relative w-10 h-10 rounded-full overflow-hidden shrink-0">
                                <img src="@(item.AuthorAvatar ?? "/images/default-avatar.png")" alt="@item.AuthorName" class="w-full h-full object-cover" />
                                @if (item.IsVerified)
                                {
                                    <i class="fas fa-check-circle verified-badge absolute bottom-0 right-0 bg-white rounded-full text-blue-500 text-[10px] p-[1px]"></i>
                                }
                            </div>
                            <div>
                                <h6 class="text-base font-semibold m-0 leading-tight">@item.AuthorName</h6>
                                <small class="text-muted text-xs">
                                    @item.TimeAgo
                                    @if (!string.IsNullOrEmpty(item.Location))
                                    {
                                        <span> • <i class="fas fa-map-marker-alt"></i> @item.Location</span>
                                    }
                                </small>
                                @if (!string.IsNullOrEmpty(item.ReasonForShowing))
                                {
                                    <div class="reason-badge inline-block text-[10px] px-1.5 py-0.5 bg-red-100 text-red-600 rounded-full ml-2">@item.ReasonForShowing</div>
                                }
                            </div>
                        </div>
                        <div class="custom-dropdown relative">
                            <button class="btn btn-ghost btn-icon dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="fas fa-ellipsis-h"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#" onclick="bookmarkContent('@item.Id', '@item.ContentType')">
                                    <i class="fas fa-bookmark w-4 text-center mr-2"></i> Save Post
                                </a></li>
                                <li><a class="dropdown-item" href="#" onclick="hideContent('@item.Id')">
                                    <i class="fas fa-eye-slash w-4 text-center mr-2"></i> Hide
                                </a></li>
                                <li><a class="dropdown-item" href="#" onclick="reportContent('@item.Id', '@item.ContentType')">
                                    <i class="fas fa-flag w-4 text-center mr-2"></i> Report
                                </a></li>
                            </ul>
                        </div>
                    </div>

                    <!-- Post Content -->
                    <div class="post-content mb-4">
                        @if (!string.IsNullOrEmpty(item.Title))
                        {
                            <h5 class="text-lg font-semibold mb-2">@item.Title</h5>
                        }
                        
                        @if (!string.IsNullOrEmpty(item.Summary))
                        {
                            <p class="text-base text-foreground mb-2">@item.Summary</p>
                        }
                        else if (!string.IsNullOrEmpty(item.Content))
                        {
                            <p class="text-base text-foreground mb-2">@(item.Content.Length > 300 ? item.Content.Substring(0, 300) + "..." : item.Content)</p>
                        }

                        <!-- Car Information -->
                        @if (!string.IsNullOrEmpty(item.CarDisplayName))
                        {
                            <div class="car-info inline-flex items-center gap-2 bg-muted/20 px-3 py-1.5 rounded-lg text-sm font-medium text-foreground mb-3">
                                <i class="fas fa-car text-red-500"></i> @item.CarDisplayName
                            </div>
                        }

                        <!-- Rating for Reviews -->
                        @if (item.Rating.HasValue)
                        {
                            <div class="rating flex items-center mb-3">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star @(i <= item.Rating ? "text-warning" : "text-muted") text-sm mr-0.5"></i>
                                }
                                <span class="ml-2 text-sm font-medium">@item.Rating.Value/5</span>
                            </div>
                        }

                        <!-- Tags -->
                        @if (item.Tags.Any())
                        {
                            <div class="tags flex flex-wrap gap-2 mb-3">
                                @foreach (var tag in item.Tags.Take(5))
                                {
                                    <span class="tag text-xs font-medium text-red-500 bg-red-50 dark:bg-red-900/20 px-2 py-0.5 rounded-full">#@tag</span>
                                }
                            </div>
                        }

                        <!-- Media -->
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <div class="post-media rounded-xl overflow-hidden mb-3">
                                <img src="@item.ImageUrl" alt="Post Image" class="w-full h-auto object-cover cursor-pointer hover:opacity-95 transition-opacity" onclick="openImageModal('@item.ImageUrl')" />
                            </div>
                        }
                        else if (item.ImageUrls.Any())
                        {
                            <div class="post-media rounded-xl overflow-hidden mb-3">
                                <div class="image-gallery grid grid-cols-2 gap-1">
                                    @foreach (var imageUrl in item.ImageUrls.Take(4))
                                    {
                                        <img src="@imageUrl" alt="Post Image" class="w-full h-40 object-cover cursor-pointer hover:opacity-95 transition-opacity" onclick="openImageModal('@imageUrl')" />
                                    }
                                </div>
                                @if (item.ImageUrls.Count() > 4)
                                {
                                    <div class="more-images text-center mt-2 text-sm text-muted">
                                        +@(item.ImageUrls.Count() - 4) more images
                                    </div>
                                }
                            </div>
                        }

                        <!-- Engagement Stats -->
                        <div class="engagement-stats border-t border-border pt-3 mt-2">
                            <div class="flex justify-between items-center text-sm text-muted-foreground">
                                <div class="stats-left flex gap-4">
                                    @if (item.LikeCount > 0)
                                    {
                                        <span class="stat-item flex items-center gap-1">
                                            <i class="fas fa-heart text-red-500"></i> @item.LikeCount
                                        </span>
                                    }
                                    @if (item.ViewCount > 0)
                                    {
                                        <span class="stat-item flex items-center gap-1">
                                            <i class="fas fa-eye"></i> @item.ViewCount
                                        </span>
                                    }
                                </div>
                                <div class="stats-right flex gap-4">
                                    @if (item.CommentCount > 0)
                                    {
                                        <span class="stat-item">@item.CommentCount comments</span>
                                    }
                                    @if (item.ShareCount > 0)
                                    {
                                        <span class="stat-item">@item.ShareCount shares</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Post Actions -->
                    <div class="post-actions flex border-t border-border pt-2 gap-1">
                        <button class="btn btn-ghost flex-1 justify-center gap-2 @(item.IsLikedByUser ? "text-red-500" : "text-muted-foreground")" onclick="toggleLike('@item.Id', '@item.ContentType')">
                            <i class="@(item.IsLikedByUser ? "fas" : "far") fa-heart"></i> Like
                        </button>
                        <button class="btn btn-ghost flex-1 justify-center gap-2 text-muted-foreground" onclick="toggleComments('@item.Id')">
                            <i class="far fa-comment"></i> Comment
                        </button>
                        <button class="btn btn-ghost flex-1 justify-center gap-2 text-muted-foreground" onclick="shareContent('@item.Id', '@item.ContentType')">
                            <i class="fas fa-share"></i> Share
                        </button>
                        <button class="btn btn-ghost btn-icon text-muted-foreground ml-auto @(item.IsBookmarkedByUser ? "text-yellow-500" : "")" onclick="bookmarkContent('@item.Id', '@item.ContentType')">
                            <i class="@(item.IsBookmarkedByUser ? "fas" : "far") fa-bookmark"></i>
                        </button>
                    </div>

                    <!-- Comments Section (Initially Hidden) -->
                    <div class="comments-section mt-4" id="comments-@item.Id" style="display: none;">
                        <div class="bg-muted/30 rounded-lg p-3">
                            <div class="comment-input mb-3">
                                <div class="flex gap-2">
                                    <div class="user-avatar w-8 h-8 rounded-full overflow-hidden shrink-0">
                                        <img src="/images/default-avatar.png" alt="Your Avatar" class="w-full h-full object-cover" />
                                    </div>
                                    <input type="text" class="form-control rounded-full text-sm" placeholder="Write a comment..." onkeypress="handleCommentSubmit(event, '@item.Id', '@item.ContentType')" />
                                </div>
                            </div>
                            <div class="comments-list">
                                <!-- Comments will be loaded dynamically -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Load More Button -->
    @if (Model.HasMoreContent)
    {
        <div class="text-center">
            <button class="btn btn-primary" onclick="loadMoreContent()">
                <i class="fas fa-spinner fa-spin" style="display: none;"></i>
                Load More Posts
            </button>
        </div>
    }
</div>

<!-- Create Story Modal -->
<div class="modal fade" id="createStoryModal" tabindex="-1" aria-labelledby="createStoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createStoryModalLabel">Create New Story</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createStoryForm">
                    <!-- Media Upload -->
                    <div class="mb-3">
                        <label for="storyMedia" class="form-label">Upload Media</label>
                        <input type="file" class="form-control" id="storyMedia" accept="image/*,video/*" required>
                        <div class="form-text">Upload an image or video for your story</div>
                    </div>

                    <!-- Story Type -->
                    <div class="mb-3">
                        <label for="storyType" class="form-label">Story Type</label>
                        <select class="form-select" id="storyType">
                            <option value="0">Image</option>
                            <option value="1">Video</option>
                            <option value="2">Text</option>
                            <option value="4">Location</option>
                            <option value="6">Event</option>
                        </select>
                    </div>

                    <!-- Caption -->
                    <div class="mb-3">
                        <label for="storyCaption" class="form-label">Caption</label>
                        <textarea class="form-control" id="storyCaption" rows="3" maxlength="500" placeholder="What's happening?"></textarea>
                        <div class="form-text">
                            <span id="captionCount">0</span>/500 characters
                        </div>
                    </div>

                    <!-- Car Information -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label for="carMake" class="form-label">Car Make</label>
                            <input type="text" class="form-control" id="carMake" placeholder="e.g., Toyota">
                        </div>
                        <div class="col-md-4">
                            <label for="carModel" class="form-label">Car Model</label>
                            <input type="text" class="form-control" id="carModel" placeholder="e.g., Camry">
                        </div>
                        <div class="col-md-4">
                            <label for="carYear" class="form-label">Year</label>
                            <input type="number" class="form-control" id="carYear" min="1900" max="2030" placeholder="2023">
                        </div>
                    </div>

                    <!-- Event Type -->
                    <div class="mb-3">
                        <label for="eventType" class="form-label">Event Type</label>
                        <select class="form-select" id="eventType">
                            <option value="">Select event type (optional)</option>
                            <option value="Road Trip">Road Trip</option>
                            <option value="Car Show">Car Show</option>
                            <option value="Maintenance">Maintenance</option>
                            <option value="Racing">Racing</option>
                            <option value="Meetup">Car Meetup</option>
                            <option value="Modification">Modification</option>
                            <option value="Scenic Drive">Scenic Drive</option>
                        </select>
                    </div>

                    <!-- Location -->
                    <div class="mb-3">
                        <label for="locationName" class="form-label">Location</label>
                        <input type="text" class="form-control" id="locationName" placeholder="Add location (optional)">
                        <div class="form-check mt-2">
                            <input class="form-check-input" type="checkbox" id="useCurrentLocation">
                            <label class="form-check-label" for="useCurrentLocation">
                                Use current location
                            </label>
                        </div>
                    </div>

                    <!-- Tags -->
                    <div class="mb-3">
                        <label for="storyTags" class="form-label">Tags</label>
                        <input type="text" class="form-control" id="storyTags" placeholder="Add tags separated by commas">
                        <div class="form-text">e.g., #roadtrip, #toyota, #scenic</div>
                    </div>

                    <!-- Privacy Settings -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="storyVisibility" class="form-label">Visibility</label>
                            <select class="form-select" id="storyVisibility">
                                <option value="0">Public</option>
                                <option value="1">Friends</option>
                                <option value="2">Private</option>
                                <option value="3">Close Friends</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="storyDuration" class="form-label">Duration (hours)</label>
                            <select class="form-select" id="storyDuration">
                                <option value="1">1 hour</option>
                                <option value="6">6 hours</option>
                                <option value="12">12 hours</option>
                                <option value="24" selected>24 hours</option>
                                <option value="48">48 hours</option>
                                <option value="168">1 week</option>
                            </select>
                        </div>
                    </div>

                    <!-- Interaction Settings -->
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="allowReplies" checked>
                            <label class="form-check-label" for="allowReplies">
                                Allow replies
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="allowSharing" checked>
                            <label class="form-check-label" for="allowSharing">
                                Allow sharing
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="createStory()" id="createStoryBtn">
                    <span class="spinner-border spinner-border-sm me-2 d-none" id="createStorySpinner"></span>
                    Create Story
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Story Viewer Modal -->
<div class="modal fade" id="storyViewerModal" tabindex="-1" aria-labelledby="storyViewerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header border-0">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-secondary me-2" style="width: 40px; height: 40px;"></div>
                    <div>
                        <h6 class="mb-0" id="storyAuthorName">Author Name</h6>
                        <small class="text-muted" id="storyTimeAgo">2 hours ago</small>
                    </div>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <div id="storyMediaContainer" class="text-center">
                    <!-- Story media will be loaded here -->
                </div>
                <div class="p-3">
                    <p id="storyCaption" class="mb-2"></p>
                    <div id="storyTags" class="mb-2"></div>
                    <div id="storyLocation" class="text-muted small"></div>
                </div>
            </div>
            <div class="modal-footer border-0">
                <div class="d-flex justify-content-between w-100">
                    <div class="d-flex gap-3">
                        <button class="btn btn-link text-white p-0" onclick="likeStory()">
                            <i data-lucide="heart" class="me-1"></i>
                            <span id="storyLikeCount">0</span>
                        </button>
                        <button class="btn btn-link text-white p-0">
                            <i data-lucide="message-circle" class="me-1"></i>
                            Reply
                        </button>
                        <button class="btn btn-link text-white p-0">
                            <i data-lucide="share" class="me-1"></i>
                            Share
                        </button>
                    </div>
                    <div class="text-muted small">
                        <i data-lucide="eye" class="me-1"></i>
                        <span id="storyViewCount">0</span> views
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/feed.js"></script>
    <script src="~/js/stories.js"></script>
    <script>
        // Initialize feed functionality
        $(document).ready(function() {
            initializeFeed();
            loadStoriesData();
            
            // Auto-refresh every 5 minutes
            setInterval(function() {
                refreshFeedStats();
            }, 300000);
        });
    </script>
}