@using Microsoft.Extensions.Localization
@model CommunityCar.Application.Features.Community.Feed.ViewModels.FeedVM
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer ViewLocalizer
@{
    ViewData["Title"] = ViewLocalizer["PageTitle"];
    Layout = "~/Views/Shared/_MainAppLayout.cshtml";
    var feedType = ViewBag.FeedType as string ?? "personalized";
    var currentUserId = ViewBag.CurrentUserId as Guid?;
    
    // Get current culture for localization
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
}

@* Anti-forgery token for AJAX requests *@
@Html.AntiForgeryToken()

<div class="animate-in fade-in duration-700">
    <!-- Page Header with Backdrop Accent -->
    <div class="mb-5">
        <div class="row align-items-center justify-content-between g-4">
            <div class="col-md-auto">
                <h1 class="display-4 fw-black text-gradient tracking-tighter mb-1">@ViewLocalizer["FeedTitle"]</h1>
                <p class="small text-uppercase tracking-widest text-muted opacity-50 fw-bold">@ViewLocalizer["FeedSubtitle"]</p>
            </div>
            <div class="col-md-auto">
                <button class="btn btn-primary-red px-4 py-3 rounded-4 shadow-lg animate-heartbeat" onclick="openCreatePostModal()">
                    <i data-lucide="plus" class="me-2"></i>
                    @ViewLocalizer["CreatePost"]
                </button>
            </div>
        </div>
    </div>

    <!-- Enhanced Stories Section -->
    <div class="card card-premium mb-5 overflow-hidden border-0">
        <div class="card-header border-0 bg-transparent p-4 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-3">
                <span class="badge bg-primary-red-subtle text-primary-red rounded-pill px-3 py-2 small fw-bold text-uppercase">@ViewLocalizer["Live"]</span>
                <h5 class="mb-0 fw-black text-uppercase tracking-wider small opacity-75">@ViewLocalizer["Stories"]</h5>
            </div>
            <span class="small text-muted opacity-50 text-uppercase tracking-widest d-none d-sm-block">@ViewLocalizer["ShareYourCarMoments"]</span>
        </div>
        
        <div class="card-body p-4 pt-0">
            <div class="d-flex gap-4 overflow-x-auto pb-4 custom-scroll" id="storiesContainer">
                <!-- Add Story Button -->
                <div class="flex-shrink-0 d-flex flex-column align-items-center gap-2 cursor-pointer group" onclick="openCreateStoryModal()">
                    <div class="rounded-4 bg-light border-2 border-dashed border-secondary-subtle d-flex align-items-center justify-content-center transition-all hover-border-primary-red" style="width: 70px; height: 70px;">
                        <i data-lucide="plus" class="text-muted opacity-50"></i>
                    </div>
                    <span class="small fw-bold text-muted text-uppercase tracking-tighter">@ViewLocalizer["Add"]</span>
                </div>

                <!-- Existing Stories -->
                @foreach (var story in Model.Stories.Take(10))
                {
                    <div class="flex-shrink-0 d-flex flex-column align-items-center gap-2 cursor-pointer transition-all hover-scale" onclick="openStoryViewer('@story.Id')">
                        <div class="rounded-4 p-1 @(!story.IsViewed ? "bg-primary-red" : "bg-light") shadow-sm" style="width: 70px; height: 70px;">
                            <div class="w-100 h-100 rounded-4 overflow-hidden border border-white">
                                <img src="@(story.ThumbnailUrl ?? story.MediaUrl)" alt="@story.AuthorName" class="w-100 h-100 object-fit-cover @(story.IsViewed ? "opacity-50" : "")" />
                            </div>
                        </div>
                        <span class="small fw-bold text-truncate text-uppercase tracking-tighter" style="max-width: 70px;">@story.AuthorName.Split(' ')[0]</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Feed Navigation -->
    <div class="d-flex justify-content-center mb-5">
        <div class="bg-light rounded-pill p-1 shadow-sm d-flex gap-1 border">
            <a class="btn rounded-pill px-4 py-2 small fw-bold text-uppercase tracking-wider @(feedType == "personalized" ? "bg-white shadow-sm border" : "text-muted hover-bg-white")" 
               asp-controller="Feed" asp-action="Index" asp-route-culture="@currentCulture" asp-route-feedType="personalized">
                <i data-lucide="home" class="me-2" style="width: 14px;"></i> @ViewLocalizer["ForYou"]
            </a>
            <a class="btn rounded-pill px-4 py-2 small fw-bold text-uppercase tracking-wider @(feedType == "trending" ? "bg-white shadow-sm border" : "text-muted hover-bg-white")" 
               asp-controller="Feed" asp-action="Trending" asp-route-culture="@currentCulture">
                <i data-lucide="flame" class="me-2 text-primary-red" style="width: 14px;"></i> @ViewLocalizer["Trending"]
            </a>
            <a class="btn rounded-pill px-4 py-2 small fw-bold text-uppercase tracking-wider @(feedType == "friends" ? "bg-white shadow-sm border" : "text-muted hover-bg-white")" 
               asp-controller="Feed" asp-action="Friends" asp-route-culture="@currentCulture">
                <i data-lucide="users" class="me-2" style="width: 14px;"></i> @ViewLocalizer["Friends"]
            </a>
        </div>
    </div>

    <!-- Create Post Section -->
    @if (currentUserId.HasValue)
    {
        <div class="card card-premium mb-5 p-4 p-md-5 position-relative overflow-hidden border-0">
            <div class="position-absolute end-0 top-0 translate-middle bg-primary-red-subtle rounded-circle opacity-10" style="width: 200px; height: 200px;"></div>
            
            <div class="position-relative d-flex align-items-center gap-4">
                <div class="user-avatar-container shadow-sm p-0 m-0">
                    <img src="/images/default-avatar.png" alt="Your Avatar" class="rounded-circle object-fit-cover" width="50" height="50" />
                </div>
                <div class="flex-grow-1">
                    <button class="btn btn-light w-100 text-start py-3 px-4 rounded-4 border text-muted shadow-sm hover-bg-white" onclick="openCreatePostModal()">
                        @ViewLocalizer["WhatsOnYourMind"]
                    </button>
                </div>
            </div>
            
            <div class="d-flex align-items-center gap-2 mt-4 pt-4 border-top">
                <button class="btn btn-ghost flex-grow-1 py-3 small fw-bold text-uppercase tracking-widest text-muted" onclick="openCreatePostModal('photo')">
                    <i data-lucide="camera" class="me-2 text-success" style="width: 18px;"></i> @ViewLocalizer["Photo"]
                </button>
                <div class="vr mx-2 opacity-10"></div>
                <button class="btn btn-ghost flex-grow-1 py-3 small fw-bold text-uppercase tracking-widest text-muted" onclick="openCreatePostModal('review')">
                    <i data-lucide="star" class="me-2 text-warning" style="width: 18px;"></i> @ViewLocalizer["Review"]
                </button>
                <div class="vr mx-2 opacity-10"></div>
                <button class="btn btn-ghost flex-grow-1 py-3 small fw-bold text-uppercase tracking-widest text-muted" onclick="openCreatePostModal('question')">
                    <i data-lucide="help-circle" class="me-2 text-info" style="width: 18px;"></i> @ViewLocalizer["Ask"]
                </button>
            </div>
        </div>
    }

    <!-- Feed Items -->
    <div id="feed-skeleton" class="hidden d-none flex-column gap-5">
        <div class="card card-premium p-5 animate-pulse"></div>
    </div>

    <div class="d-flex flex-column gap-4" id="feed-container">
        @foreach (var item in Model.FeedItems.Take(20))
        {
            <div class="card card-premium mb-5 border-0 animate-in fade-in duration-500" data-content-id="@item.Id" data-content-type="@item.ContentType">
                
                @await Html.PartialAsync("Components/_StatsOverlay", new CommunityCar.Application.Features.Shared.ViewModels.StatsOverlayVM
                {
                    EntityId = item.Id.ToString(),
                    EntityType = item.ContentType,
                    CommentCount = item.CommentCount,
                    LikeCount = item.LikeCount,
                    ViewCount = item.ViewCount,
                    ShareCount = item.ShareCount,
                    IsLikedByUser = item.IsLikedByUser
                })

                <div class="card-header border-0 bg-transparent p-4 p-md-5 pb-0 d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        @if (item.AuthorId != Guid.Empty)
                        {
                            <a asp-controller="Profile" asp-action="ViewProfile" asp-route-id="@item.AuthorId" asp-route-culture="@currentCulture" class="user-avatar-container shadow-sm p-0 m-0">
                                <img src="@(item.AuthorAvatar ?? "/images/default-avatar.png")" alt="@item.AuthorName" class="rounded-circle object-fit-cover" width="48" height="48" />
                            </a>
                        }
                        else
                        {
                            <div class="user-avatar-container shadow-sm p-0 m-0">
                                <img src="@(item.AuthorAvatar ?? "/images/default-avatar.png")" alt="@item.AuthorName" class="rounded-circle object-fit-cover" width="48" height="48" />
                            </div>
                        }
                        <div>
                            <div class="d-flex align-items-center gap-2">
                                @if (item.AuthorId != Guid.Empty)
                                {
                                    <a asp-controller="Profile" asp-action="ViewProfile" asp-route-id="@item.AuthorId" asp-route-culture="@currentCulture" class="fw-black text-body text-decoration-none hover-text-primary-red small text-uppercase tracking-tight">@item.AuthorName</a>
                                }
                                else
                                {
                                    <span class="fw-black text-body small text-uppercase tracking-tight">@item.AuthorName</span>
                                }
                                @if (!string.IsNullOrEmpty(item.ReasonForShowing))
                                {
                                    <span class="badge bg-primary-red-subtle text-primary-red border-0 small py-1 px-2">@item.ReasonForShowing</span>
                                }
                            </div>
                            <div class="small text-muted opacity-50 fw-bold text-uppercase tracking-widest" style="font-size: 0.65rem;">
                                <span>@item.TimeAgo</span>
                                @if (!string.IsNullOrEmpty(item.Location))
                                {
                                    <span class="mx-1">•</span>
                                    <i data-lucide="map-pin" class="me-1" style="width: 10px;"></i> @item.Location
                                }
                            </div>
                        </div>
                    </div>
                    
                    <div class="dropdown">
                        <button class="btn btn-ghost rounded-circle p-2" type="button" data-bs-toggle="dropdown">
                            <i data-lucide="more-horizontal" style="width: 20px;"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 rounded-4 p-2">
                            <li><a class="dropdown-item rounded-3 py-2 small fw-bold text-uppercase" href="#" onclick="bookmarkContent('@item.Id', '@item.ContentType', event)"><i data-lucide="bookmark" class="me-2" style="width: 16px;"></i> @ViewLocalizer["SavePost"]</a></li>
                            <li><a class="dropdown-item rounded-3 py-2 small fw-bold text-uppercase" href="#" onclick="hideContent('@item.Id')"><i data-lucide="eye-off" class="me-2" style="width: 16px;"></i> @ViewLocalizer["Hide"]</a></li>
                            <li><hr class="dropdown-divider opacity-10"></li>
                            <li><a class="dropdown-item rounded-3 py-2 small fw-bold text-uppercase text-danger" href="#" onclick="reportContent('@item.Id', '@item.ContentType')"><i data-lucide="flag" class="me-2" style="width: 16px;"></i> @ViewLocalizer["Report"]</a></li>
                        </ul>
                    </div>
                </div>

                <div class="card-body p-4 p-md-5 pt-3">
                    <div class="mb-4">
                        @{
                            var displayTitle = isArabic && !string.IsNullOrEmpty(item.TitleAr) ? item.TitleAr : item.Title;
                            var displayContent = isArabic && !string.IsNullOrEmpty(item.ContentAr) ? item.ContentAr : item.Content;
                            var displaySummary = isArabic && !string.IsNullOrEmpty(item.SummaryAr) ? item.SummaryAr : item.Summary;
                        }

                        @if (!string.IsNullOrEmpty(displayTitle))
                        {
                            <h2 class="h3 fw-black tracking-tight mb-3">@displayTitle</h2>
                        }
                        
                        @if (!string.IsNullOrEmpty(displaySummary) || !string.IsNullOrEmpty(displayContent))
                        {
                            <div class="text-body opacity-80 leading-relaxed">
                                @(string.IsNullOrEmpty(displaySummary) ? (displayContent.Length > 280 ? displayContent.Substring(0, 280) + "..." : displayContent) : displaySummary)
                                @if (displayContent?.Length > 280)
                                {
                                    <a href="/@currentCulture/posts/@item.Id" class="text-primary-red fw-bold text-decoration-none small text-uppercase tracking-widest ms-2">@ViewLocalizer["ReadMore"]</a>
                                }
                            </div>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(item.CarDisplayName) || item.Rating.HasValue)
                    {
                        <div class="d-flex flex-wrap gap-3 mb-4">
                            @if (!string.IsNullOrEmpty(item.CarDisplayName))
                            {
                                <span class="badge bg-light text-body border py-2 px-3 rounded-3 small fw-bold text-uppercase tracking-wide">
                                    <i data-lucide="car-front" class="me-2 text-primary-red" style="width: 14px;"></i> @item.CarDisplayName
                                </span>
                            }
                            @if (item.Rating.HasValue)
                            {
                                <span class="badge shadow-sm border py-2 px-3 rounded-3 small fw-bold text-uppercase tracking-wide" style="background-color: #fff9f0; color: #d97706;">
                                    <i data-lucide="star" class="me-2 fill-current" style="width: 14px;"></i> @item.Rating.Value.ToString("F1") / 5.0
                                </span>
                            }
                        </div>
                    }

                    <!-- Media -->
                    @if (!string.IsNullOrEmpty(item.ImageUrl) || item.ImageUrls.Any())
                    {
                        <div class="rounded-5 overflow-hidden mb-4 shadow-sm border">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" alt="Post Image" class="w-100 object-fit-cover shadow-inner hover-scale cursor-zoom-in" style="max-height: 500px;" onclick="openImageModal('@item.ImageUrl')" />
                            }
                            else
                            {
                                <div class="row g-1 bg-light">
                                    @foreach (var imageUrl in item.ImageUrls.Take(4))
                                    {
                                        <div class="col-6">
                                            <div class="overflow-hidden" style="height: 250px;">
                                                <img src="@imageUrl" alt="Post Image" class="w-100 h-100 object-fit-cover hover-scale cursor-zoom-in" onclick="openImageModal('@imageUrl')" />
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }

                    @if (item.Tags.Any())
                    {
                        <div class="d-flex flex-wrap gap-2 mb-4">
                            @foreach (var tag in item.Tags.Take(6))
                            {
                                <a asp-controller="Feed" asp-action="Trending" asp-route-culture="@currentCulture" asp-route-topic="@tag" class="text-primary-red opacity-50 hover-opacity-100 text-decoration-none small fw-bold text-uppercase tracking-widest">#@tag</a>
                            }
                        </div>
                    }
                </div>

                <div class="border-top px-4 py-2">
                    @await Html.PartialAsync("Components/_ActionToolbar", new CommunityCar.Application.Features.Shared.ViewModels.ActionToolbarVM
                    {
                        EntityId = item.Id.ToString(),
                        EntityType = item.ContentType,
                        IsLikedByUser = item.IsLikedByUser,
                        IsBookmarkedByUser = item.IsBookmarkedByUser
                    })
                </div>

                <div class="bg-light p-4 pt-2">
                    @await Html.PartialAsync("Comments/Index", item.InitialComments)
                </div>
            </div>
        }
    </div>

    <!-- Infinite Scroll Trigger -->
    @if (Model.HasMoreContent)
    {
        <div class="py-16 text-center">
            <button class="inline-flex items-center gap-4 bg-card/40 backdrop-blur-xl border border-border/50 px-10 py-4 rounded-[2rem] text-[10px] font-black uppercase tracking-[0.2em] text-foreground hover:bg-primary hover:text-primary-foreground hover:border-primary transition-all shadow-2xl shadow-black/5 group" onclick="loadMoreFeedContent()">
                <i data-lucide="plus-circle" class="w-5 h-5 group-hover:rotate-90 transition-transform duration-700"></i>
                @ViewLocalizer["LoadMorePosts"]
            </button>
        </div>
    }

    <!-- Skeleton Loading Template (Hidden by default) -->
    <div id="skeleton-template" class="hidden">
        <partial name="_SkeletonLoading" model='"Post"' />
    </div>
</div>

<!-- Conversion of Modals should happen in layout or partials if they are shared, but here is the content -->
<!-- I will omit the heavy Bootstrap HTML for modals and use Tailwind analogs -->

@section Scripts {


    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof $ !== 'undefined') {
                $(document).ready(function() {
                    if (typeof Skeleton !== 'undefined') Skeleton.initPageLoad('feed-skeleton', 'feed-container');
                    if (typeof initializeFeed === 'function') initializeFeed();
                    if (typeof initializeStories === 'function') initializeStories();
                });
            } else {
                if (typeof Skeleton !== 'undefined') Skeleton.initPageLoad('feed-skeleton', 'feed-container');
                if (typeof initializeFeed === 'function') initializeFeed();
                if (typeof initializeStories === 'function') initializeStories();
            }
        });
    </script>
}

@section SidebarRight {
    <partial name="~/Views/Community/_CommunitySidebar.cshtml" />
}