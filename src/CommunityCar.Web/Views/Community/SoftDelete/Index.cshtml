@model CommunityCar.Application.Features.Community.SoftDelete.ViewModels.DeletedContentSearchVM
@{
    ViewData["Title"] = "Deleted Content Management";
    Layout = "_DashboardLayout";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-foreground">Deleted Content Management</h1>
            <p class="text-muted-foreground">Manage and restore deleted community content</p>
        </div>
        <div class="flex gap-2">
            <button id="cleanup-btn" class="btn btn-outline-warning">
                <i class="fas fa-broom mr-2"></i>
                Cleanup Old Content
            </button>
            <a href="@Url.Action("Stats")" class="btn btn-outline-primary">
                <i class="fas fa-chart-bar mr-2"></i>
                View Statistics
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-card rounded-lg border p-4">
        <form method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium mb-1">Search</label>
                <input type="text" name="SearchTerm" value="@Model.Filter.SearchTerm" 
                       class="input w-full" placeholder="Search deleted content...">
            </div>
            <div>
                <label class="block text-sm font-medium mb-1">Content Type</label>
                <select name="ContentType" class="select-trigger w-full">
                    <option value="">All Types</option>
                    <option value="Post" selected="@(Model.Filter.ContentType == "Post")">Posts</option>
                    <option value="Story" selected="@(Model.Filter.ContentType == "Story")">Stories</option>
                    <option value="Group" selected="@(Model.Filter.ContentType == "Group")">Groups</option>
                    <option value="Comment" selected="@(Model.Filter.ContentType == "Comment")">Comments</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium mb-1">Deleted After</label>
                <input type="date" name="DeletedAfter" value="@Model.Filter.DeletedAfter?.ToString("yyyy-MM-dd")" 
                       class="input w-full">
            </div>
            <div class="flex items-end">
                <button type="submit" class="btn btn-primary w-full">
                    <i class="fas fa-search mr-2"></i>
                    Filter
                </button>
            </div>
        </form>
    </div>

    <!-- Results -->
    <div class="bg-card rounded-lg border">
        <div class="p-4 border-b">
            <div class="flex justify-between items-center">
                <h2 class="text-lg font-semibold">Deleted Content (@Model.TotalCount items)</h2>
                <div class="flex gap-2">
                    <button id="bulk-restore-btn" class="btn btn-outline-success btn-sm" disabled>
                        <i class="fas fa-undo mr-1"></i>
                        Restore Selected
                    </button>
                    <button id="bulk-delete-btn" class="btn btn-outline-danger btn-sm" disabled>
                        <i class="fas fa-trash mr-1"></i>
                        Permanent Delete
                    </button>
                </div>
            </div>
        </div>

        @if (Model.Items.Any())
        {
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-muted/50">
                        <tr>
                            <th class="p-3 text-left">
                                <input type="checkbox" id="select-all" class="rounded">
                            </th>
                            <th class="p-3 text-left">Content</th>
                            <th class="p-3 text-left">Type</th>
                            <th class="p-3 text-left">Author</th>
                            <th class="p-3 text-left">Deleted</th>
                            <th class="p-3 text-left">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr class="border-b hover:bg-muted/30" data-id="@item.Id">
                                <td class="p-3">
                                    <input type="checkbox" class="item-checkbox rounded" value="@item.Id">
                                </td>
                                <td class="p-3">
                                    <div>
                                        <div class="font-medium text-foreground">@item.Title</div>
                                        <div class="text-sm text-muted-foreground line-clamp-2">@item.ContentPreview</div>
                                    </div>
                                </td>
                                <td class="p-3">
                                    <span class="badge badge-outline">@item.ContentType</span>
                                </td>
                                <td class="p-3">
                                    <div class="text-sm">
                                        <div class="font-medium">@item.AuthorName</div>
                                        <div class="text-muted-foreground">@item.AuthorId.ToString()[..8]...</div>
                                    </div>
                                </td>
                                <td class="p-3">
                                    <div class="text-sm">
                                        <div>@item.DeletedAt.ToString("MMM dd, yyyy")</div>
                                        <div class="text-muted-foreground">by @item.DeletedBy</div>
                                    </div>
                                </td>
                                <td class="p-3">
                                    <div class="flex gap-1">
                                        @if (item.CanRestore)
                                        {
                                            <button class="btn btn-outline-success btn-sm restore-btn" 
                                                    data-id="@item.Id" data-type="@item.ContentType.ToLower()">
                                                <i class="fas fa-undo"></i>
                                            </button>
                                        }
                                        @if (item.CanPermanentDelete)
                                        {
                                            <button class="btn btn-outline-danger btn-sm permanent-delete-btn" 
                                                    data-id="@item.Id" data-type="@item.ContentType.ToLower()">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        }
                                        <a href="#" class="btn btn-outline-primary btn-sm view-btn" 
                                           data-id="@item.Id" data-type="@item.ContentType.ToLower()">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="p-4 border-t">
                    <nav class="flex justify-center">
                        <div class="flex gap-1">
                            @if (Model.HasPreviousPage)
                            {
                                <a href="?page=@(Model.Page - 1)&@Html.Raw(Context.Request.QueryString)" 
                                   class="btn btn-outline btn-sm">Previous</a>
                            }
                            
                            @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                            {
                                <a href="?page=@i&@Html.Raw(Context.Request.QueryString)" 
                                   class="btn @(i == Model.Page ? "btn-primary" : "btn-outline") btn-sm">@i</a>
                            }
                            
                            @if (Model.HasNextPage)
                            {
                                <a href="?page=@(Model.Page + 1)&@Html.Raw(Context.Request.QueryString)" 
                                   class="btn btn-outline btn-sm">Next</a>
                            }
                        </div>
                    </nav>
                </div>
            }
        }
        else
        {
            <div class="p-8 text-center text-muted-foreground">
                <i class="fas fa-inbox text-4xl mb-4"></i>
                <p>No deleted content found.</p>
            </div>
        }
    </div>
</div>

<!-- Cleanup Modal -->
<div id="cleanup-modal" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 hidden">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-card rounded-lg shadow-xl max-w-md w-full p-6">
            <h3 class="text-lg font-semibold mb-4">Cleanup Old Deleted Content</h3>
            <form id="cleanup-form">
                <div class="mb-4">
                    <label class="block text-sm font-medium mb-2">Delete content older than (days)</label>
                    <input type="number" id="cleanup-days" value="30" min="1" max="365" 
                           class="input w-full">
                    <p class="text-sm text-muted-foreground mt-1">
                        Content deleted more than this many days ago will be permanently removed.
                    </p>
                </div>
                <div class="flex gap-2 justify-end">
                    <button type="button" id="cleanup-cancel" class="btn btn-outline">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-broom mr-2"></i>
                        Start Cleanup
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Select all functionality
    const selectAllCheckbox = document.getElementById('select-all');
    const itemCheckboxes = document.querySelectorAll('.item-checkbox');
    const bulkRestoreBtn = document.getElementById('bulk-restore-btn');
    const bulkDeleteBtn = document.getElementById('bulk-delete-btn');

    selectAllCheckbox?.addEventListener('change', function() {
        itemCheckboxes.forEach(checkbox => {
            checkbox.checked = this.checked;
        });
        updateBulkButtons();
    });

    itemCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', updateBulkButtons);
    });

    function updateBulkButtons() {
        const checkedItems = document.querySelectorAll('.item-checkbox:checked');
        const hasSelection = checkedItems.length > 0;
        
        bulkRestoreBtn.disabled = !hasSelection;
        bulkDeleteBtn.disabled = !hasSelection;
    }

    // Individual restore buttons
    document.querySelectorAll('.restore-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const id = this.dataset.id;
            const type = this.dataset.type;
            
            if (confirm('Are you sure you want to restore this content?')) {
                restoreContent(id, type);
            }
        });
    });

    // Individual permanent delete buttons
    document.querySelectorAll('.permanent-delete-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const id = this.dataset.id;
            const type = this.dataset.type;
            
            if (confirm('Are you sure you want to permanently delete this content? This action cannot be undone.')) {
                permanentDeleteContent(id, type);
            }
        });
    });

    // Bulk restore
    bulkRestoreBtn?.addEventListener('click', function() {
        const checkedItems = Array.from(document.querySelectorAll('.item-checkbox:checked'));
        const ids = checkedItems.map(cb => cb.value);
        
        if (confirm(`Are you sure you want to restore ${ids.length} items?`)) {
            bulkRestoreContent(ids);
        }
    });

    // Bulk permanent delete
    bulkDeleteBtn?.addEventListener('click', function() {
        const checkedItems = Array.from(document.querySelectorAll('.item-checkbox:checked'));
        const ids = checkedItems.map(cb => cb.value);
        
        if (confirm(`Are you sure you want to permanently delete ${ids.length} items? This action cannot be undone.`)) {
            bulkPermanentDeleteContent(ids);
        }
    });

    // Cleanup modal
    const cleanupBtn = document.getElementById('cleanup-btn');
    const cleanupModal = document.getElementById('cleanup-modal');
    const cleanupCancel = document.getElementById('cleanup-cancel');
    const cleanupForm = document.getElementById('cleanup-form');

    cleanupBtn?.addEventListener('click', () => {
        cleanupModal.classList.remove('hidden');
    });

    cleanupCancel?.addEventListener('click', () => {
        cleanupModal.classList.add('hidden');
    });

    cleanupForm?.addEventListener('submit', function(e) {
        e.preventDefault();
        const days = document.getElementById('cleanup-days').value;
        
        if (confirm(`Are you sure you want to permanently delete all content older than ${days} days?`)) {
            performCleanup(days);
        }
    });

    // API functions
    async function restoreContent(id, type) {
        try {
            const response = await fetch(`/Community/SoftDelete/${type}s/${id}/Restore`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                },
                body: JSON.stringify({})
            });

            const result = await response.json();
            
            if (result.success) {
                showToast('Content restored successfully', 'success');
                location.reload();
            } else {
                showToast(result.message || 'Failed to restore content', 'error');
            }
        } catch (error) {
            showToast('An error occurred while restoring content', 'error');
        }
    }

    async function permanentDeleteContent(id, type) {
        try {
            const response = await fetch(`/Community/SoftDelete/${type}s/${id}/PermanentDelete`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                },
                body: JSON.stringify({ confirmPermanentDelete: true })
            });

            const result = await response.json();
            
            if (result.success) {
                showToast('Content permanently deleted', 'success');
                location.reload();
            } else {
                showToast(result.message || 'Failed to delete content', 'error');
            }
        } catch (error) {
            showToast('An error occurred while deleting content', 'error');
        }
    }

    async function bulkRestoreContent(ids) {
        try {
            const response = await fetch('/Community/SoftDelete/Posts/BulkRestore', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                },
                body: JSON.stringify({ ids: ids })
            });

            const result = await response.json();
            
            if (result.success) {
                showToast(`${result.totalSuccessful} items restored successfully`, 'success');
                location.reload();
            } else {
                showToast(result.message || 'Failed to restore content', 'error');
            }
        } catch (error) {
            showToast('An error occurred while restoring content', 'error');
        }
    }

    async function performCleanup(days) {
        try {
            const response = await fetch('/Community/SoftDelete/Cleanup', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                },
                body: JSON.stringify({ daysToKeepDeleted: parseInt(days) })
            });

            const result = await response.json();
            
            if (result.success) {
                showToast(`Cleanup completed. ${result.totalItemsCleaned} items removed.`, 'success');
                cleanupModal.classList.add('hidden');
                location.reload();
            } else {
                showToast(result.errorMessage || 'Cleanup failed', 'error');
            }
        } catch (error) {
            showToast('An error occurred during cleanup', 'error');
        }
    }

    function showToast(message, type) {
        // Simple toast implementation
        const toast = document.createElement('div');
        toast.className = `toast toast-${type} fixed top-4 right-4 z-50 p-4 rounded-lg shadow-lg`;
        toast.textContent = message;
        document.body.appendChild(toast);
        
        setTimeout(() => {
            toast.remove();
        }, 5000);
    }
});
</script>
}