@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IStringLocalizer<SharedResource> SharedLocalizer
@{
    ViewData["Title"] = Localizer["CreateCommunityHub"];
}

<div class="space-y-8 animate-in fade-in duration-700">
    <!-- Breadcrumb -->
    <nav class="flex items-center gap-3 text-[10px] font-black uppercase tracking-widest text-muted-foreground/60 px-2">
        <a href="@Url.Action("Index", "Groups")" class="hover:text-primary transition-colors flex items-center gap-2">
            <i data-lucide="chevron-left" class="w-3.5 h-3.5"></i> @Localizer["HubDirectory"]
        </a>
        <i data-lucide="chevron-right" class="w-3 h-3 opacity-30"></i>
        <span class="text-foreground">@Localizer["CreateHub"]</span>
    </nav>

    <!-- Header -->
    <div class="text-center">
        <h1 class="text-3xl font-black text-foreground tracking-tight mb-3">@Localizer["CreateCommunityHub"]</h1>
        <p class="text-muted-foreground font-medium opacity-80 max-w-2xl mx-auto">@Localizer["CreateHubSubtitle"]</p>
    </div>

    <!-- Create Form -->
    <div class="max-w-4xl mx-auto">
        <form method="post" action="@Url.Action("Create", "Groups")" class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-8 shadow-xl space-y-8">
            @Html.AntiForgeryToken()

            <!-- Basic Information -->
            <div class="space-y-6">
                <h2 class="text-xl font-black text-foreground flex items-center gap-3">
                    <i data-lucide="info" class="w-5 h-5"></i>
                    @Localizer["BasicInformation"]
                </h2>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <div class="lg:col-span-2">
                        <label for="name" class="block text-sm font-black text-foreground mb-2">@Localizer["HubName"] *</label>
                        <input type="text" id="name" name="name" required maxlength="100" 
                               class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none"
                               placeholder="@Localizer["HubNamePlaceholder"]" dir="auto">
                        <p class="text-xs text-muted-foreground mt-1 opacity-60">@Localizer["HubNameSubtitle"]</p>
                    </div>

                    <div>
                        <label for="category" class="block text-sm font-black text-foreground mb-2">@Localizer["Category"]</label>
                        <select id="category" name="category" 
                                class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none appearance-none">
                            <option value="">@Localizer["SelectCategory"]</option>
                            <option value="General">General</option>
                            <option value="Ford">Ford</option>
                            <option value="Chevrolet">Chevrolet</option>
                            <option value="BMW">BMW</option>
                            <option value="Mercedes">Mercedes</option>
                            <option value="Toyota">Toyota</option>
                            <option value="Honda">Honda</option>
                            <option value="American">American Muscle</option>
                            <option value="European">European Classics</option>
                            <option value="Japanese">Japanese Imports</option>
                            <option value="British">British Cars</option>
                            <option value="Italian">Italian Exotics</option>
                            <option value="Motorcycle">Motorcycles</option>
                            <option value="Trucks">Trucks & Vans</option>
                            <option value="Racing">Racing & Motorsport</option>
                            <option value="Modification">Modifications</option>
                            <option value="Restoration">Restoration</option>
                            <option value="Marketplace">Parts & Sales</option>
                        </select>
                    </div>

                    <div>
                        <label for="location" class="block text-sm font-black text-foreground mb-2">@Localizer["Location"]</label>
                        <input type="text" id="location" name="location" maxlength="100"
                               class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none"
                               placeholder="@Localizer["LocationPlaceholder"]" dir="auto">
                        <p class="text-xs text-muted-foreground mt-1 opacity-60">@Localizer["LocationSubtitle"]</p>
                    </div>

                    <div class="lg:col-span-2">
                        <label for="description" class="block text-sm font-black text-foreground mb-2">@Localizer["Description"] *</label>
                        <textarea id="description" name="description" required maxlength="500" rows="4"
                                  class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none resize-none"
                                  placeholder="@Localizer["DescriptionPlaceholder"]" dir="auto"></textarea>
                        <p class="text-xs text-muted-foreground mt-1 opacity-60">@Localizer["DescriptionSubtitle"]</p>
                    </div>
                </div>
            </div>

            <!-- Privacy Settings -->
            <div class="space-y-6 pt-6 border-t border-border/20">
                <h2 class="text-xl font-black text-foreground flex items-center gap-3">
                    <i data-lucide="shield" class="w-5 h-5"></i>
                    @Localizer["PrivacyAccess"]
                </h2>

                <div class="space-y-4">
                    <div class="flex items-start gap-4 p-4 bg-muted/20 border border-border/30 rounded-xl">
                        <input type="radio" id="privacy-public" name="privacy" value="Public" checked 
                               class="mt-1 text-primary focus:ring-primary">
                        <div class="flex-1">
                            <label for="privacy-public" class="block text-sm font-black text-foreground mb-1 cursor-pointer">
                                <i data-lucide="globe" class="w-4 h-4 inline mr-2"></i>
                                @Localizer["PublicHub"]
                            </label>
                            <p class="text-xs text-muted-foreground opacity-80">@Localizer["PublicHubSubtitle"]</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-4 p-4 bg-muted/20 border border-border/30 rounded-xl">
                        <input type="radio" id="privacy-private" name="privacy" value="Private" 
                               class="mt-1 text-primary focus:ring-primary">
                        <div class="flex-1">
                            <label for="privacy-private" class="block text-sm font-black text-foreground mb-1 cursor-pointer">
                                <i data-lucide="lock" class="w-4 h-4 inline mr-2"></i>
                                @Localizer["PrivateHub"]
                            </label>
                            <p class="text-xs text-muted-foreground opacity-80">@Localizer["PrivateHubSubtitle"]</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Community Guidelines -->
            <div class="space-y-6 pt-6 border-t border-border/20">
                <h2 class="text-xl font-black text-foreground flex items-center gap-3">
                    <i data-lucide="scroll-text" class="w-5 h-5"></i>
                    @Localizer["CommunityGuidelines"]
                </h2>

                <div>
                    <label for="rules" class="block text-sm font-black text-foreground mb-2">@Localizer["RulesGuidelines"]</label>
                    <textarea id="rules" name="rules" maxlength="1000" rows="4"
                              class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none resize-none"
                              placeholder="@Localizer["RulesPlaceholder"]" dir="auto"></textarea>
                    <p class="text-xs text-muted-foreground mt-1 opacity-60">@Localizer["RulesSubtitle"]</p>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-border/20">
                <button type="submit" class="flex-1 px-8 py-4 bg-primary text-primary-foreground hover:bg-primary/90 rounded-2xl font-black text-sm uppercase tracking-widest transition-all shadow-lg shadow-primary/20 active:scale-95 flex items-center justify-center gap-3">
                    <i data-lucide="plus-circle" class="w-5 h-5"></i>
                    @Localizer["CreateHub"]
                </button>
                <a href="@Url.Action("Index", "Groups")" class="flex-1 px-8 py-4 bg-background border border-border hover:border-primary hover:text-primary rounded-2xl font-black text-sm uppercase tracking-widest transition-all shadow-sm active:scale-95 flex items-center justify-center gap-3">
                    <i data-lucide="x" class="w-5 h-5"></i>
                    @Localizer["Cancel"]
                </a>
            </div>
        </form>
    </div>

    <!-- Tips -->
    <div class="max-w-4xl mx-auto bg-muted/10 border border-border/30 rounded-2xl p-6">
        <h3 class="text-lg font-black text-foreground mb-4 flex items-center gap-2">
            <i data-lucide="lightbulb" class="w-5 h-5 text-yellow-500"></i>
            @Localizer["TipsTitle"]
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-muted-foreground">
            <div class="flex items-start gap-3">
                <i data-lucide="check-circle" class="w-4 h-4 text-green-500 mt-0.5 shrink-0"></i>
                <div>
                    <strong class="text-foreground">@Localizer["Tip1Title"]:</strong> @Localizer["Tip1Desc"]
                </div>
            </div>
            <div class="flex items-start gap-3">
                <i data-lucide="check-circle" class="w-4 h-4 text-green-500 mt-0.5 shrink-0"></i>
                <div>
                    <strong class="text-foreground">@Localizer["Tip2Title"]:</strong> @Localizer["Tip2Desc"]
                </div>
            </div>
            <div class="flex items-start gap-3">
                <i data-lucide="check-circle" class="w-4 h-4 text-green-500 mt-0.5 shrink-0"></i>
                <div>
                    <strong class="text-foreground">@Localizer["Tip3Title"]:</strong> @Localizer["Tip3Desc"]
                </div>
            </div>
            <div class="flex items-start gap-3">
                <i data-lucide="check-circle" class="w-4 h-4 text-green-500 mt-0.5 shrink-0"></i>
                <div>
                    <strong class="text-foreground">@Localizer["Tip4Title"]:</strong> @Localizer["Tip4Desc"]
                </div>
            </div>
        </div>
    </div>
</div>