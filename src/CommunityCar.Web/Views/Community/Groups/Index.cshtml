@using Microsoft.Extensions.Localization
@model IEnumerable<CommunityCar.Application.Features.Community.Groups.DTOs.GroupSummaryVM>
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["CommunityGroups"];
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var totalCount = ViewBag.TotalCount ?? 0;
    var search = ViewBag.Search as string ?? "";
    var sortBy = ViewBag.SortBy as string ?? "newest";
    var filterPrivacy = ViewBag.FilterPrivacy as string ?? "all";
    
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
}

<div class="space-y-8 animate-in fade-in duration-700">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tight">@Localizer["CommunityGroups"]</h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">@Localizer["GroupsSubtitle"]</p>
        </div>
        <a asp-controller="Groups" asp-action="Create" asp-route-culture="@currentCulture" class="inline-flex items-center gap-2.5 px-8 py-3 bg-primary text-primary-foreground hover:bg-primary/90 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-primary/20 active:scale-95 group">
            <i data-lucide="plus-circle" class="w-4 h-4 group-hover:scale-110 transition-transform"></i>
            @Localizer["CreateHub"]
        </a>
    </div>

    <!-- Stats & Filters Toolbar -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl space-y-6">
        <form method="get" asp-controller="Groups" asp-action="Index" asp-route-culture="@currentCulture" id="groupsFilterForm">
            <div class="flex flex-col lg:flex-row gap-4">
                <div class="relative flex-1 group">
                    <input type="text" name="search" class="w-full bg-background border border-border pl-12 pr-4 py-3 rounded-2xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" placeholder="@Localizer["SearchPlaceholder"]" value="@search">
                    <i data-lucide="search" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-muted-foreground group-focus-within:text-primary transition-colors"></i>
                </div>
                
                <div class="flex gap-3">
                    <div class="relative">
                        <select name="sortBy" class="bg-background border border-border px-6 py-3 rounded-2xl text-[10px] font-black uppercase tracking-widest outline-none focus:ring-4 focus:ring-primary/10 transition-all appearance-none min-w-[160px]" onchange="this.form.submit()">
                            <option value="newest" selected="@(sortBy == "newest")">@Localizer["NewestFirst"]</option>
                            <option value="oldest" selected="@(sortBy == "oldest")">@Localizer["OldestFirst"]</option>
                            <option value="name" selected="@(sortBy == "name")">@Localizer["Alphabetical"]</option>
                        </select>
                        <i data-lucide="chevron-down" class="absolute right-4 top-1/2 -translate-y-1/2 w-3 h-3 text-muted-foreground pointer-events-none"></i>
                    </div>

                    <div class="relative">
                        <select name="filterPrivacy" class="bg-background border border-border px-6 py-3 rounded-2xl text-[10px] font-black uppercase tracking-widest outline-none focus:ring-4 focus:ring-primary/10 transition-all appearance-none min-w-[160px]" onchange="this.form.submit()">
                            <option value="all" selected="@(filterPrivacy == "all")">@Localizer["AllAccess"]</option>
                            <option value="public" selected="@(filterPrivacy == "public")">@Localizer["PublicHubs"]</option>
                            <option value="private" selected="@(filterPrivacy == "private")">@Localizer["PrivateHubs"]</option>
                        </select>
                        <i data-lucide="chevron-down" class="absolute right-4 top-1/2 -translate-y-1/2 w-3 h-3 text-muted-foreground pointer-events-none"></i>
                    </div>
                </div>
            </div>
        </form>

        <div class="flex items-center justify-between pt-4 border-t border-border/40">
            <p class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">
                @Localizer["HubDiscovery"]: <span class="text-foreground">@totalCount</span> @Localizer["GroupsAvailable"]
            </p>
            <div class="flex items-center gap-1.5 p-1 bg-muted rounded-lg border border-border/50">
                <button class="p-1 px-2 text-[8px] font-black bg-background shadow-sm rounded border border-border">@Localizer["GridView"]</button>
                <button class="p-1 px-2 text-[8px] font-black text-muted-foreground opacity-50">@Localizer["ListView"]</button>
            </div>
        </div>
    </div>

    <div id="groups-skeleton" class="hidden grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        @for (int i = 0; i < 6; i++)
        {
            <skeleton type="Card" />
        }
    </div>

    <div id="groups-content">
    @if (!Model.Any())
    {
        <div class="flex flex-col items-center justify-center py-20 bg-muted/10 border-2 border-dashed border-border rounded-2xl text-center">
            <div class="w-20 h-20 bg-muted rounded-full flex items-center justify-center mb-6 shadow-inner animate-pulse">
                <i data-lucide="users" class="w-10 h-10 text-muted-foreground opacity-30"></i>
            </div>
            <h3 class="text-2xl font-black text-foreground mb-3 tracking-tight">@Localizer["NoHubsFound"]</h3>
            <p class="text-sm text-muted-foreground max-w-sm mx-auto font-medium opacity-80 mb-8">@Localizer["NoHubsMessage"]</p>
            <a asp-controller="Groups" asp-action="Index" asp-route-culture="@currentCulture" class="px-8 py-3 bg-primary text-primary-foreground hover:bg-primary/90 rounded-2xl font-black text-xs uppercase tracking-widest transition-all shadow-xl shadow-primary/20 active:scale-95">@Localizer["ClearFilters"]</a>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var group in Model)
            {
                <a asp-controller="Groups" asp-action="Details" asp-route-id="@group.Id" asp-route-culture="@currentCulture" class="group/card block bg-card/40 backdrop-blur-md border border-border rounded-2xl overflow-hidden shadow-lg transition-all hover:border-primary/30 hover:shadow-2xl hover:-translate-y-1 flex flex-col h-full relative">
                    <div class="p-6 flex-1 flex flex-col">
                        <!-- Group Header -->
                        <div class="flex items-start gap-4 mb-6">
                            @{
                                var displayName = isArabic && !string.IsNullOrEmpty(group.NameAr) ? group.NameAr : group.Name;
                                var displayDescription = isArabic && !string.IsNullOrEmpty(group.DescriptionAr) ? group.DescriptionAr : group.Description;
                                var displayCategory = isArabic && !string.IsNullOrEmpty(group.CategoryAr) ? group.CategoryAr : group.Category;
                                var displayLocation = isArabic && !string.IsNullOrEmpty(group.LocationAr) ? group.LocationAr : group.Location;
                            }
                            <div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-primary to-primary/80 flex items-center justify-center font-black text-xl text-primary-foreground shrink-0 shadow-lg shadow-primary/20 group-hover/card:scale-110 group-hover/card:rotate-6 transition-all duration-300">
                                @displayName.Substring(0, 1).ToUpper()
                            </div>
                            <div class="min-w-0 flex-1">
                                <div class="flex items-center gap-2 mb-1.5">
                                    <h3 class="text-base font-black text-foreground truncate group-hover/card:text-primary transition-colors">@displayName</h3>
                                    @if (group.IsOfficial)
                                    {
                                        <i data-lucide="badge-check" class="w-4 h-4 text-red-500 fill-red-500/10" title="@Localizer["OfficialHub"]"></i>
                                    }
                                    else if (group.IsVerified)
                                    {
                                        <i data-lucide="shield-check" class="w-4 h-4 text-green-500 fill-green-500/10" title="@Localizer["VerifiedCommunity"]"></i>
                                    }
                                </div>
                                <div class="flex items-center flex-wrap gap-2">
                                    <span class="inline-flex items-center gap-1 text-[9px] font-black uppercase tracking-tighter text-muted-foreground bg-muted/50 px-2 py-0.5 rounded-md border border-border/30">
                                        <i data-lucide="tag" class="w-2.5 h-2.5"></i>
                                        @displayCategory
                                    </span>
                                    @if (!string.IsNullOrEmpty(displayLocation))
                                    {
                                        <span class="inline-flex items-center gap-1 text-[9px] font-black uppercase tracking-tighter text-muted-foreground bg-muted/50 px-2 py-0.5 rounded-md border border-border/30">
                                            <i data-lucide="map-pin" class="w-3 h-3 text-red-500/60"></i>
                                            @displayLocation
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>

                        <p class="text-[13px] text-muted-foreground leading-relaxed font-medium mb-6 line-clamp-2 opacity-80 group-hover/card:opacity-100 transition-opacity">@displayDescription</p>
                        
                        @if (group.Tags.Any())
                        {
                            <div class="flex flex-wrap gap-2 mb-6 mt-auto">
                                @foreach (var tag in group.Tags.Take(3))
                                {
                                    <span class="text-[9px] font-bold text-primary bg-primary/5 px-2.5 py-1 rounded-lg border border-primary/10 transition-colors group-hover/card:bg-primary/10">#@tag</span>
                                }
                            </div>
                        }
                    </div>

                    <div class="px-6 py-4 bg-muted/20 border-t border-border/30 mt-auto">
                        <div class="flex items-center justify-between w-full">
                            <div class="flex gap-4">
                                <div class="flex items-center gap-1.5" title="@Localizer["Members"]">
                                    <i data-lucide="users" class="w-3.5 h-3.5 text-muted-foreground"></i>
                                    <span class="text-xs font-black text-foreground tabular-nums">@(group.MemberCount >= 1000 ? $"{group.MemberCount / 1000.0:F1}k" : group.MemberCount.ToString())</span>
                                </div>
                                <div class="flex items-center gap-1.5" title="@Localizer["Activity"]">
                                    <i data-lucide="message-square" class="w-3.5 h-3.5 text-muted-foreground"></i>
                                    <span class="text-xs font-black text-foreground tabular-nums">@(group.PostCount >= 1000 ? $"{group.PostCount / 1000.0:F1}k" : group.PostCount.ToString())</span>
                                </div>
                            </div>
                            <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-background/50 border border-border text-[8px] font-black uppercase tracking-widest text-muted-foreground shadow-sm">
                                <i data-lucide="@(group.Privacy.ToString() == "Public" ? "globe" : "lock")" class="w-2.5 h-2.5"></i>
                                @Localizer[group.Privacy.ToString()]
                            </span>
                        </div>
                    </div>
                </a>
            }
        </div>
    }
</div>

        <!-- Pagination -->
        @if (totalPages > 1)
        {
            <div class="flex flex-col items-center mt-12 gap-4">
                <nav class="flex items-center gap-2 p-1.5 bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl">
                    <a asp-controller="Groups" asp-action="Index" asp-route-culture="@currentCulture" asp-route-search="@search" asp-route-sortBy="@sortBy" asp-route-filterPrivacy="@filterPrivacy" asp-route-page="@(currentPage - 1)" 
                       class="w-10 h-10 flex items-center justify-center rounded-2xl bg-background border border-border hover:border-primary hover:text-primary transition-all shadow-sm active:scale-95 @(currentPage <= 1 ? "opacity-30 pointer-events-none" : "")">
                        <i data-lucide="chevron-left" class="w-4 h-4"></i>
                    </a>

                    <div class="flex items-center gap-1 px-2">
                         @for (var i = 1; i <= totalPages; i++)
                         {
                            if (i == 1 || i == totalPages || (i >= currentPage - 2 && i <= currentPage + 2))
                            {
                                <a asp-controller="Groups" asp-action="Index" asp-route-culture="@currentCulture" asp-route-search="@search" asp-route-sortBy="@sortBy" asp-route-filterPrivacy="@filterPrivacy" asp-route-page="@i" 
                                   class="w-10 h-10 flex items-center justify-center rounded-2xl font-black text-xs transition-all @(i == currentPage ? "bg-primary text-primary-foreground shadow-lg shadow-primary/30 scale-110" : "hover:bg-muted text-muted-foreground hover:text-foreground")">
                                    @i
                                </a>
                            }
                            else if (i == 2 || i == totalPages - 1)
                            {
                                <span class="text-muted-foreground/40 px-1 font-black">...</span>
                            }
                         }
                    </div>

                    <a asp-controller="Groups" asp-action="Index" asp-route-culture="@currentCulture" asp-route-search="@search" asp-route-sortBy="@sortBy" asp-route-filterPrivacy="@filterPrivacy" asp-route-page="@(currentPage + 1)" 
                       class="w-10 h-10 flex items-center justify-center rounded-2xl bg-background border border-border hover:border-primary hover:text-primary transition-all shadow-sm active:scale-95 @(currentPage >= totalPages ? "opacity-30 pointer-events-none" : "")">
                        <i data-lucide="chevron-right" class="w-4 h-4"></i>
                    </a>
                </nav>
                <div class="text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-50">
                    @Localizer["Showing"] @Model.Count() @Localizer["Hubs"] @Localizer["FromPage"] @currentPage
                </div>
            </div>
        }
    }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Skeleton.initPageLoad('groups-skeleton', 'groups-content');
        });
    </script>
}
@section SidebarRight {
    <partial name="~/Views/Community/Groups/_GroupsSidebar.cshtml" />
}
