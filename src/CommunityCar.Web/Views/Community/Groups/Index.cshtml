@using Microsoft.Extensions.Localization
@model IEnumerable<CommunityCar.Application.Features.Community.Groups.ViewModels.GroupSummaryVM>
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["CommunityGroups"];
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var totalCount = ViewBag.TotalCount ?? 0;
    var search = ViewBag.Search as string ?? "";
    var sortBy = ViewBag.SortBy as string ?? "newest";
    var filterPrivacy = ViewBag.FilterPrivacy as string ?? "all";
    
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
}

<div class="d-flex flex-column gap-5 animate-in fade-in duration-700">
    <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-4">
        <div>
            <h1 class="display-5 fw-black text-gradient tracking-tight mb-2">@Localizer["CommunityGroups"]</h1>
            <p class="text-xs fw-bold text-muted-foreground text-uppercase tracking-widest opacity-60">@Localizer["GroupsSubtitle"]</p>
        </div>
        <div>
            <a asp-controller="Groups" asp-action="Create" asp-route-culture="@currentCulture" class="btn btn-primary-red px-4 py-3 rounded-4 fw-black text-uppercase tracking-widest text-[10px] shadow-lg d-flex align-items-center gap-2 group">
                <i data-lucide="plus-circle" class="w-4 h-4 group-hover:scale-125 transition-transform"></i>
                @Localizer["CreateHub"]
            </a>
        </div>
    </div>

    <!-- Discovery Toolbar -->
    <div class="card card-premium shadow-lg">
        <div class="card-body p-4 p-md-5">
            <form method="get" asp-controller="Groups" asp-action="Index" asp-route-culture="@currentCulture" id="groupsFilterForm" class="d-grid gap-4">
                <div class="row g-3 align-items-center">
                    <div class="col-12 col-lg-5">
                        <div class="position-relative group">
                            <i data-lucide="search" class="position-absolute start-3 top-50 translate-middle-y w-4 h-4 text-muted-foreground group-focus-within:text-primary-red transition-colors"></i>
                            <input type="text" name="search" value="@search" 
                                   placeholder="@Localizer["SearchPlaceholder"]" 
                                   class="form-control bg-muted-subtle border-border ps-5 py-2.5 rounded-4 text-sm focus-ring-primary" />
                        </div>
                    </div>
                    
                    <div class="col-12 col-md-6 col-lg-3">
                        <div class="position-relative">
                            <select name="sortBy" class="form-select bg-muted-subtle border-border py-2.5 rounded-4 text-[10px] fw-black text-uppercase tracking-widest focus-ring-primary" onchange="this.form.submit()">
                                <option value="newest" selected="@(sortBy == "newest")">@Localizer["NewestFirst"]</option>
                                <option value="oldest" selected="@(sortBy == "oldest")">@Localizer["OldestFirst"]</option>
                                <option value="name" selected="@(sortBy == "name")">@Localizer["Alphabetical"]</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-3">
                        <div class="position-relative">
                            <select name="filterPrivacy" class="form-select bg-muted-subtle border-border py-2.5 rounded-4 text-[10px] fw-black text-uppercase tracking-widest focus-ring-primary" onchange="this.form.submit()">
                                <option value="all" selected="@(filterPrivacy == "all")">@Localizer["AllAccess"]</option>
                                <option value="public" selected="@(filterPrivacy == "public")">@Localizer["PublicHubs"]</option>
                                <option value="private" selected="@(filterPrivacy == "private")">@Localizer["PrivateHubs"]</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-12 col-lg-1 d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary-red h-[42px] px-3 rounded-4 d-flex align-items-center justify-content-center active:scale-95 shadow-lg">
                            <i data-lucide="search" class="w-4 h-4"></i>
                        </button>
                    </div>
                </div>
            </form>

            <div class="d-flex align-items-center justify-content-between pt-4 border-top border-border border-opacity-40 mt-2">
                <p class="text-[10px] fw-black text-uppercase tracking-widest text-muted-foreground mb-0">
                    @Localizer["HubDiscovery"]: <span class="text-foreground">@totalCount</span> @Localizer["GroupsAvailable"]
                </p>
                <div class="d-flex align-items-center gap-1 p-1 bg-muted rounded-3 border border-border">
                    <button class="btn btn-sm p-1 px-2 text-[8px] fw-black bg-white shadow-sm rounded-2">@Localizer["GridView"]</button>
                    <button class="btn btn-sm p-1 px-2 text-[8px] fw-black text-muted-foreground opacity-50">@Localizer["ListView"]</button>
                </div>
            </div>
        </div>
    </div>

    <div id="groups-skeleton" class="d-none row g-4 mb-5">
        @for (int i = 0; i < 6; i++)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <skeleton type="Card" />
            </div>
        }
    </div>

    <div id="groups-content" class="min-vh-50">
        @if (!Model.Any())
        {
            <div class="card card-premium shadow-lg text-center p-5">
                <div class="card-body">
                    <div class="w-16 h-16 rounded-circle bg-primary-red bg-opacity-10 text-primary-red d-flex align-items-center justify-content-center mx-auto mb-4">
                        <i data-lucide="users" class="w-8 h-8"></i>
                    </div>
                    <h3 class="h4 fw-black text-gradient mb-2">@Localizer["NoHubsFound"]</h3>
                    <p class="text-sm text-muted-foreground mb-5 opacity-75 max-w-sm mx-auto">@Localizer["NoHubsMessage"]</p>
                    <a asp-controller="Groups" asp-action="Index" asp-route-culture="@currentCulture" class="btn btn-primary-red px-5 py-3 rounded-4 fw-black text-uppercase tracking-widest text-xs shadow-lg">@Localizer["ClearFilters"]</a>
                </div>
            </div>
        }
        else
        {
            <div class="row g-4 mb-5">
                @foreach (var group in Model)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <a asp-controller="Groups" asp-action="Details" asp-route-id="@group.Id" asp-route-culture="@currentCulture" class="card card-premium shadow-lg h-100 group-card text-decoration-none transition-all hover-translate-y-2 overflow-hidden d-flex flex-column">
                            <div class="card-body p-4 flex-grow-1">
                                <!-- Group Header -->
                                <div class="d-flex align-items-start gap-3 mb-4">
                                    @{
                                        var displayName = isArabic && !string.IsNullOrEmpty(group.NameAr) ? group.NameAr : group.Name;
                                        var displayDescription = isArabic && !string.IsNullOrEmpty(group.DescriptionAr) ? group.DescriptionAr : group.Description;
                                        var displayCategory = isArabic && !string.IsNullOrEmpty(group.CategoryAr) ? group.CategoryAr : group.Category;
                                        var displayLocation = isArabic && !string.IsNullOrEmpty(group.LocationAr) ? group.LocationAr : group.Location;
                                    }
                                    <div class="w-12 h-12 rounded-4 bg-primary-red d-flex align-items-center justify-content-center fw-black text-xl text-white flex-shrink-0 shadow-lg group-hover:scale-110 group-hover:rotate-6 transition-all duration-300">
                                        @displayName.Substring(0, 1).ToUpper()
                                    </div>
                                    <div class="min-w-0 flex-grow-1">
                                        <div class="d-flex align-items-center gap-2 mb-1">
                                            <h3 class="h6 fw-black text-foreground text-truncate mb-0 group-hover:text-primary-red transition-colors">@displayName</h3>
                                            @if (group.IsOfficial)
                                            {
                                                <i data-lucide="badge-check" class="w-4 h-4 text-primary-red" title="@Localizer["OfficialHub"]"></i>
                                            }
                                            else if (group.IsVerified)
                                            {
                                                <i data-lucide="shield-check" class="w-4 h-4 text-success" title="@Localizer["VerifiedCommunity"]"></i>
                                            }
                                        </div>
                                        <div class="d-flex align-items-center flex-wrap gap-2">
                                            <span class="badge bg-muted-subtle text-muted-foreground rounded-pill px-2 py-1 text-[8px] fw-black text-uppercase tracking-widest border border-border">
                                                <i data-lucide="tag" class="w-2.5 h-2.5 me-1"></i>
                                                @displayCategory
                                            </span>
                                            @if (!string.IsNullOrEmpty(displayLocation))
                                            {
                                                <span class="badge bg-muted-subtle text-muted-foreground rounded-pill px-2 py-1 text-[8px] fw-black text-uppercase tracking-widest border border-border">
                                                    <i data-lucide="map-pin" class="w-2.5 h-2.5 me-1 text-primary-red"></i>
                                                    @displayLocation
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <p class="text-[12px] text-muted-foreground leading-relaxed fw-medium mb-4 line-clamp-2 opacity-75">@displayDescription</p>
                                
                                @if (group.Tags.Any())
                                {
                                    <div class="d-flex flex-wrap gap-1 mb-2">
                                        @foreach (var tag in group.Tags.Take(3))
                                        {
                                            <span class="badge bg-primary-red bg-opacity-5 text-primary-red rounded-pill px-2.5 py-1 text-[9px] fw-bold">#@tag</span>
                                        }
                                    </div>
                                }
                            </div>

                            <div class="card-footer px-4 py-3 bg-muted-subtle border-top border-border border-opacity-30 mt-auto">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="d-flex gap-3">
                                        <div class="d-flex align-items-center gap-1.5" title="@Localizer["Members"]">
                                            <i data-lucide="users" class="w-3.5 h-3.5 text-muted-foreground"></i>
                                            <span class="text-[10px] fw-black text-foreground">@(group.MemberCount >= 1000 ? $"{group.MemberCount / 1000.0:F1}k" : group.MemberCount.ToString())</span>
                                        </div>
                                        <div class="d-flex align-items-center gap-1.5" title="@Localizer["Activity"]">
                                            <i data-lucide="message-square" class="w-3.5 h-3.5 text-muted-foreground"></i>
                                            <span class="text-[10px] fw-black text-foreground">@(group.PostCount >= 1000 ? $"{group.PostCount / 1000.0:F1}k" : group.PostCount.ToString())</span>
                                        </div>
                                    </div>
                                    <span class="badge bg-white bg-opacity-50 border border-border rounded-pill px-2 py-1 text-[8px] fw-black text-uppercase tracking-widest text-muted-foreground">
                                        <i data-lucide="@(group.Privacy.ToString() == "Public" ? "globe" : "lock")" class="w-2.5 h-2.5 me-1"></i>
                                        @Localizer[group.Privacy.ToString()]
                                    </span>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (totalPages > 1)
            {
                <div class="d-flex flex-column align-items-center pt-4 gap-3">
                    <nav aria-label="Groups pagination">
                        <ul class="pagination pagination-sm gap-2 align-items-center border-0 p-2 bg-card rounded-4 shadow-lg border border-border">
                            <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                                <a class="page-link rounded-3 border-border bg-white shadow-sm w-10 h-10 d-flex align-items-center justify-content-center text-foreground hover-bg-primary-red transition-all cursor-pointer" 
                                   asp-controller="Groups" asp-action="Index" asp-route-culture="@currentCulture" asp-route-search="@search" asp-route-sortBy="@sortBy" asp-route-filterPrivacy="@filterPrivacy" asp-route-page="@(currentPage - 1)">
                                    <i data-lucide="chevron-left" class="w-4 h-4"></i>
                                </a>
                            </li>

                            @for (var i = 1; i <= totalPages; i++)
                            {
                                if (i == 1 || i == totalPages || (i >= currentPage - 1 && i <= currentPage + 1))
                                {
                                    <li class="page-item mx-1">
                                        <a class="page-link rounded-3 border-0 w-10 h-10 d-flex align-items-center justify-content-center fw-black text-xs transition-all @(i == currentPage ? "bg-primary-red text-white shadow-lg" : "bg-transparent text-muted-foreground hover-bg-muted hover-text-foreground")" 
                                           asp-controller="Groups" asp-action="Index" asp-route-culture="@currentCulture" asp-route-search="@search" asp-route-sortBy="@sortBy" asp-route-filterPrivacy="@filterPrivacy" asp-route-page="@i">
                                            @i
                                        </a>
                                    </li>
                                }
                                else if (i == 2 || i == totalPages - 1)
                                {
                                    <li class="page-item disabled px-1 font-black opacity-30">...</li>
                                }
                            }

                            <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                                <a class="page-link rounded-3 border-border bg-white shadow-sm w-10 h-10 d-flex align-items-center justify-content-center text-foreground hover-bg-primary-red transition-all cursor-pointer" 
                                   asp-controller="Groups" asp-action="Index" asp-route-culture="@currentCulture" asp-route-search="@search" asp-route-sortBy="@sortBy" asp-route-filterPrivacy="@filterPrivacy" asp-route-page="@(currentPage + 1)">
                                    <i data-lucide="chevron-right" class="w-4 h-4"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <div class="text-[9px] fw-black text-uppercase tracking-widest text-muted-foreground opacity-50">
                        @Localizer["Showing"] @Model.Count() @Localizer["Hubs"] @Localizer["FromPage"] @currentPage
                    </div>
                </div>
            }
        }
    </div>
</div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Skeleton.initPageLoad('groups-skeleton', 'groups-content');
        });
    </script>
}
@section SidebarRight {
    <partial name="~/Views/Community/Groups/_GroupsSidebar.cshtml" />
}
