@using Microsoft.AspNetCore.Mvc.Localization
@model dynamic
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["EditGroup"];
}

<div class="max-w-4xl mx-auto space-y-8 animate-in fade-in duration-700">
    <div class="flex items-center gap-4">
        <a href="@Url.Action("Details", "Groups", new { id = Model.Id })" class="inline-flex items-center gap-2 px-4 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs font-bold transition-all">
            <i data-lucide="arrow-left" class="w-4 h-4"></i>
            @Localizer["BackToGroup"]
        </a>
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tight">@Localizer["EditGroup"]</h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">@Localizer["UpdateSettingsSubtitle"]</p>
        </div>
    </div>

    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
        <div class="p-8">
            <form method="post" action="@Url.Action("Edit", "Groups", new { id = Model.Id })" class="space-y-6">
                @Html.AntiForgeryToken()
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="md:col-span-2">
                        <label for="name" class="block text-sm font-bold text-foreground mb-2">@Localizer["GroupName"] *</label>
                        <input type="text" id="name" name="name" value="@Model.Name" required class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" placeholder="@Localizer["GroupNamePlaceholder"]" dir="auto">
                    </div>

                    <div class="md:col-span-2">
                        <label for="description" class="block text-sm font-bold text-foreground mb-2">@Localizer["Description"] *</label>
                        <textarea id="description" name="description" rows="4" required class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none resize-none" placeholder="@Localizer["DescriptionPlaceholder"]" dir="auto">@Model.Description</textarea>
                    </div>

                    <div>
                        <label for="privacy" class="block text-sm font-bold text-foreground mb-2">@Localizer["PrivacySetting"] *</label>
                        <select id="privacy" name="privacy" required class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none appearance-none">
                            @{
                                var privacyValue = Model.Privacy.ToString();
                            }
                            <option value="Public" selected="@(privacyValue == "Public")">@Localizer["PublicAccess"]</option>
                            <option value="Private" selected="@(privacyValue == "Private")">@Localizer["PrivateAccess"]</option>
                            <option value="Secret" selected="@(privacyValue == "Secret")">@Localizer["SecretAccess"]</option>
                        </select>
                    </div>

                    <div>
                        <label for="category" class="block text-sm font-bold text-foreground mb-2">@Localizer["Category"]</label>
                        <input type="text" id="category" name="category" value="@Model.Category" class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" placeholder="@Localizer["CategoryPlaceholder"]">
                    </div>

                    <div class="md:col-span-2">
                        <label for="location" class="block text-sm font-bold text-foreground mb-2">@Localizer["Location"]</label>
                        <input type="text" id="location" name="location" value="@Model.Location" class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" placeholder="@Localizer["LocationPlaceholder"]" dir="auto">
                    </div>

                    <div class="md:col-span-2">
                        <label for="rules" class="block text-sm font-bold text-foreground mb-2">@Localizer["GroupRules"]</label>
                        <textarea id="rules" name="rules" rows="6" class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none resize-none" placeholder="@Localizer["RulesPlaceholder"]" dir="auto">@Model.Rules</textarea>
                    </div>
                </div>

                <div class="flex items-center justify-between pt-6 border-t border-border/50">
                    <div class="flex items-center gap-4">
                        <label class="flex items-center gap-2 cursor-pointer group">
                            <input type="checkbox" name="requiresApproval" @(Model.RequiresApproval ? "checked" : "") class="w-4 h-4 rounded border-border text-primary focus:ring-primary/20">
                            <span class="text-sm font-medium text-muted-foreground group-hover:text-foreground transition-colors">@Localizer["RequireApprovalLabel"]</span>
                        </label>
                    </div>
                    
                    <div class="flex items-center gap-3">
                        <a href="@Url.Action("Details", "Groups", new { id = Model.Id })" class="px-6 py-3 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-sm font-bold transition-all">
                            @Localizer["Cancel"]
                        </a>
                        <button type="submit" class="px-8 py-3 bg-primary text-primary-foreground hover:bg-primary/90 rounded-xl text-sm font-bold transition-all shadow-lg shadow-primary/20 active:scale-95">
                            @Localizer["UpdateGroup"]
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize Lucide icons
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    </script>
}