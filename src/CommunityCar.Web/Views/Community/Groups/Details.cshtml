@using Microsoft.Extensions.Localization
@model CommunityCar.Application.Features.Groups.ViewModels.GroupVM
@inject IViewLocalizer Localizer
@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
    var displayName = isArabic && !string.IsNullOrEmpty(Model.NameAr) ? Model.NameAr : Model.Name;
    var displayCategory = isArabic && !string.IsNullOrEmpty(Model.CategoryAr) ? Model.CategoryAr : Model.Category;
    var displayDescription = isArabic && !string.IsNullOrEmpty(Model.DescriptionAr) ? Model.DescriptionAr : Model.Description;
    var displayRules = isArabic && !string.IsNullOrEmpty(Model.RulesAr) ? Model.RulesAr : Model.Rules;
    ViewData["Title"] = $"{displayName} - {Localizer["CommunityHub"]}";
}

<div class="space-y-8 animate-in fade-in duration-700">
    <div id="loading-skeleton" class="hidden space-y-8">
        <skeleton type="Line" class="w-32" />
        <skeleton type="Card" class="h-64" />
        <skeleton type="Card" class="h-96" />
    </div>

    <div class="space-y-8">
    <!-- Hub Navigation Strategy -->
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-8 px-2 mb-10">
        <div class="space-y-4">
            <nav class="flex items-center gap-3 text-[10px] font-black uppercase tracking-[0.3em] text-primary mb-6">
                <i data-lucide="users" class="w-3.5 h-3.5 fill-current"></i> @Localizer["CommunityPayload"]
            </nav>
            <h1 class="text-5xl font-black text-foreground tracking-tighter leading-none">@displayName</h1>
            <p class="text-sm font-medium text-muted-foreground opacity-70 mt-4 border-l-4 border-primary/20 pl-4 py-1 max-w-2xl">@Localizer["HubTransmissionDescription"]</p>
        </div>
        
        <a asp-controller="Groups" asp-action="Index" asp-route-culture="@currentCulture" class="inline-flex items-center justify-center gap-2.5 px-6 py-2.5 bg-background border border-border/50 hover:bg-muted/10 text-foreground text-[10px] font-black uppercase tracking-widest rounded-xl transition-all active:scale-95 group/back">
            <i data-lucide="arrow-left" class="w-4 h-4 group-hover/back:-translate-x-1 transition-transform"></i>
            @Localizer["ReturnToDirectory"]
        </a>
    </div>

    <div class="relative group mb-12">
        <div class="absolute -inset-1.5 bg-gradient-to-r from-primary/20 via-blue-500/5 to-primary/20 rounded-[3rem] blur-3xl opacity-10 group-hover:opacity-30 transition duration-1000"></div>
        
        <div class="relative bg-card/40 backdrop-blur-2xl border border-border/50 rounded-[2.5rem] shadow-2xl p-8 md:p-12 overflow-hidden">
            <div class="absolute top-0 right-0 w-64 h-64 bg-primary/5 rounded-full blur-3xl -mr-32 -mt-32"></div>
            
            <div class="flex flex-col lg:flex-row gap-12">
                <div class="flex-1 space-y-8">
                    <div class="flex items-start gap-8">
                        <div class="w-24 h-24 rounded-[2rem] bg-gradient-to-br from-primary to-primary/80 flex items-center justify-center font-black text-4xl text-primary-foreground shrink-0 shadow-2xl shadow-primary/30 ring-4 ring-primary/10">
                            @displayName.Substring(0, 1).ToUpper()
                        </div>
                        <div class="min-w-0 flex-1">
                            <div class="flex items-center gap-4 mb-3">
                                <h2 class="text-4xl font-black text-foreground tracking-tighter">@displayName</h2>
                                @if (Model.IsOfficial)
                                {
                                    <span class="px-3 py-1 rounded-xl bg-red-500/10 text-red-500 border border-red-500/20 text-[8px] font-black uppercase tracking-widest flex items-center gap-1.5">
                                        <i data-lucide="award" class="w-3 h-3"></i> OFFICIAL
                                    </span>
                                }
                            </div>
                            
                            <div class="flex items-center flex-wrap gap-4 mb-6">
                                <span class="px-4 py-1.5 rounded-2xl bg-primary/10 text-primary border border-primary/20 text-[9px] font-black uppercase tracking-widest">@displayCategory</span>
                                <span class="px-4 py-1.5 rounded-2xl bg-muted/20 text-muted-foreground border border-border/50 text-[9px] font-black uppercase tracking-widest">
                                    <i data-lucide="@(Model.Privacy.ToString() == "Public" ? "globe" : "lock")" class="w-3.5 h-3.5 inline mr-1.5"></i>
                                    @Model.Privacy.ToString()
                                </span>
                            </div>
                            
                            <p class="text-lg font-medium text-foreground/70 leading-relaxed max-w-3xl">@displayDescription</p>
                        </div>
                    </div>

                    @if (Model.Tags.Any())
                    {
                        <div class="flex flex-wrap gap-2 mb-6">
                            @foreach (var tag in Model.Tags)
                            {
                                <span class="text-xs font-bold text-primary bg-primary/5 px-3 py-1.5 rounded-lg border border-primary/10">#@tag</span>
                            }
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(displayRules))
                    {
                        <div class="bg-muted/20 border border-border/30 rounded-xl p-4">
                            <h3 class="text-sm font-black text-foreground mb-2 flex items-center gap-2">
                                <i data-lucide="scroll-text" class="w-4 h-4"></i>
                                @Localizer["CommunityGuidelines"]
                            </h3>
                            <p class="text-sm text-muted-foreground font-medium">@displayRules</p>
                        </div>
                    }
                </div>

                <div class="lg:w-80 space-y-8">
                    <!-- Join Action Strategy -->
                    <form method="post" asp-controller="Groups" asp-action="Join" asp-route-id="@Model.Id" asp-route-culture="@currentCulture">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="inline-flex items-center justify-center w-full py-4 bg-primary text-primary-foreground hover:bg-primary/90 font-black uppercase tracking-widest rounded-xl transition-all shadow-lg shadow-primary/20 active:scale-95">
                            <i data-lucide="user-plus" class="w-5 h-5 mr-3"></i>
                            @Localizer["InitializeConnection"]
                        </button>
                    </form>

                    <!-- Stats Architecture -->
                    <div class="p-8 bg-muted/20 border border-border/40 rounded-[2.5rem] space-y-8">
                        <div class="grid grid-cols-2 gap-8">
                            <div class="space-y-1">
                                <div class="text-3xl font-black text-foreground tabular-nums tracking-tighter leading-none">@(Model.MemberCount >= 1000 ? $"{Model.MemberCount / 1000.0:F1}k" : Model.MemberCount.ToString())</div>
                                <div class="text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["Nodes"]</div>
                            </div>
                            <div class="space-y-1">
                                <div class="text-3xl font-black text-foreground tabular-nums tracking-tighter leading-none">@(Model.PostCount >= 1000 ? $"{Model.PostCount / 1000.0:F1}k" : Model.PostCount.ToString())</div>
                                <div class="text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["Logs"]</div>
                            </div>
                        </div>
                    </div>

                    <!-- Rapid Access Controls -->
                    <div class="space-y-4">
                        <a href="#" class="inline-flex items-center justify-start w-full px-6 py-4 bg-background border border-border/50 hover:bg-muted/10 text-foreground font-bold uppercase tracking-widest rounded-xl transition-all active:scale-95 group/posts">
                            <i data-lucide="message-square" class="w-4 h-4 mr-3 text-primary group-hover/posts:scale-110 transition-transform"></i>
                            @Localizer["AccessPosts"]
                        </a>
                        <a href="#" class="inline-flex items-center justify-start w-full px-6 py-4 bg-background border border-border/50 hover:bg-muted/10 text-primary font-bold uppercase tracking-widest rounded-xl transition-all active:scale-95 group/share">
                            <i data-lucide="share-2" class="w-4 h-4 mr-3 group-hover/share:scale-110 transition-transform"></i>
                            @Localizer["BroadcastHub"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-8 shadow-xl">
        <h2 class="text-xl font-black text-foreground mb-6 flex items-center gap-3">
            <i data-lucide="activity" class="w-5 h-5"></i>
            @Localizer["RecentActivity"]
        </h2>
        <div class="text-center py-12">
            <div class="w-16 h-16 bg-muted/40 rounded-full flex items-center justify-center mb-4 mx-auto">
                <i data-lucide="message-square" class="w-8 h-8 text-muted-foreground opacity-30"></i>
            </div>
            <p class="text-muted-foreground font-medium">@Localizer["NoActivityToDisplay"]</p>
            <p class="text-sm text-muted-foreground opacity-60 mt-1">@Localizer["StartConversation"]</p>
        </div>
    </div>
    </div> <!-- End Main Content -->
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Skeleton.initPageLoad('loading-skeleton', 'main-content');
        });
    </script>
}