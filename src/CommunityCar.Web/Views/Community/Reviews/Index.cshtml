@{
    ViewData["Title"] = "Reviews";
}

<div class="container mx-auto px-4 py-8 max-w-4xl">
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden animate-in fade-in duration-700">
        <div class="p-8">
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-8">
                <div>
                    <h2 class="text-2xl font-black text-foreground flex items-center gap-3">
                        <div class="bg-primary/10 p-2 rounded-2xl text-primary">
                            <i data-lucide="star" class="w-6 h-6"></i>
                        </div>
                        Vehicle Reviews
                    </h2>
                    <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">Authentic owner experiences and expert ratings</p>
                </div>
                <button class="bg-primary text-primary-foreground px-6 py-2.5 rounded-2xl text-[10px] font-black uppercase tracking-widest shadow-lg shadow-primary/20 hover:opacity-90 active:scale-95 transition-all">Write Review</button>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Sample Review Card -->
                <div class="bg-background/50 border border-border/50 rounded-2xl p-6 hover:border-primary/20 transition-all group shadow-inner">
                    <div class="flex justify-between items-start mb-4">
                        <div class="min-w-0">
                            <h4 class="text-lg font-black text-foreground group-hover:text-primary transition-colors truncate">Tesla Model 3 Performance</h4>
                            <div class="flex items-center gap-2 mt-1 text-[10px] font-bold text-muted-foreground uppercase opacity-60">
                                <span>2024 Model</span>
                                <span>•</span>
                                <span>Owner Verifed</span>
                            </div>
                        </div>
                        <div class="flex items-center text-amber-500 gap-0.5">
                            <i data-lucide="star" class="w-4 h-4 fill-current"></i>
                            <i data-lucide="star" class="w-4 h-4 fill-current"></i>
                            <i data-lucide="star" class="w-4 h-4 fill-current"></i>
                            <i data-lucide="star" class="w-4 h-4 fill-current"></i>
                            <i data-lucide="star" class="w-4 h-4 fill-current"></i>
                        </div>
                    </div>
                    <p class="text-sm text-muted-foreground line-clamp-2 leading-relaxed font-medium mb-4 italic opacity-80">"Unbelievable acceleration and tech. The track mode is a game changer for weekend meets..."</p>
                    <div class="flex items-center gap-2 pt-4 border-t border-border/30">
                        <span class="text-[9px] font-black uppercase tracking-widest text-primary">Read Full Story →</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
