@using Microsoft.Extensions.Localization
@model CommunityCar.Application.Features.Community.Reviews.ViewModels.ReviewsSearchVM
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["VehicleReviews"];
    var searchRequest = ViewBag.SearchRequest as CommunityCar.Application.Features.Community.Reviews.ViewModels.ReviewsSearchVM;
}

<div class="container-fluid py-4 animate-in fade-in">
    <!-- Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-5 mt-2">
        <div>
            <h2 class="fw-black text-gradient mb-1"><i class="fas fa-medal me-2 small opacity-50"></i>@Localizer["VehicleReviews"]</h2>
            <p class="text-muted small text-uppercase tracking-widest opacity-50 fw-black">@Localizer["AuthenticOwnerExperiences"]</p>
        </div>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <a asp-controller="Reviews" asp-action="Create" asp-route-culture="@System.Globalization.CultureInfo.CurrentCulture.Name" class="btn btn-primary-red px-4 py-3 rounded-4 fw-black text-uppercase tracking-widest shadow-sm text-decoration-none" style="font-size: 0.75rem;">
                <i class="fas fa-plus-circle me-2"></i>@Localizer["WriteReview"]
            </a>
        }
    </div>

    <!-- Metrics Radar -->
    <div class="row g-4 mb-5">
        <div class="col-6 col-lg-3">
            <div class="card card-premium border-0 h-100 transition-all hover-translate-y">
                <div class="card-body p-4">
                    <div class="rounded-3 bg-primary bg-opacity-10 d-flex align-items-center justify-content-center mb-3" style="width: 42px; height: 42px;">
                        <i class="fas fa-star text-primary"></i>
                    </div>
                    <h2 class="fw-black mb-1">@Model.Stats.TotalReviews</h2>
                    <h6 class="text-muted small text-uppercase tracking-widest fw-black mb-0 opacity-50">@Localizer["TotalReviews"]</h6>
                </div>
            </div>
        </div>
        
        <div class="col-6 col-lg-3">
            <div class="card card-premium border-0 h-100 transition-all hover-translate-y">
                <div class="card-body p-4">
                    <div class="rounded-3 bg-warning bg-opacity-10 d-flex align-items-center justify-content-center mb-3" style="width: 42px; height: 42px;">
                        <i class="fas fa-award text-warning"></i>
                    </div>
                    <h2 class="fw-black mb-1">@Model.Stats.AverageRating.ToString("F1")</h2>
                    <h6 class="text-muted small text-uppercase tracking-widest fw-black mb-0 opacity-50">@Localizer["AverageRating"]</h6>
                </div>
            </div>
        </div>
        
        <div class="col-6 col-lg-3">
            <div class="card card-premium border-0 h-100 transition-all hover-translate-y">
                <div class="card-body p-4">
                    <div class="rounded-3 bg-success bg-opacity-10 d-flex align-items-center justify-content-center mb-3" style="width: 42px; height: 42px;">
                        <i class="fas fa-shield-alt text-success"></i>
                    </div>
                    <h2 class="fw-black mb-1">@Model.Stats.VerifiedPurchaseReviews</h2>
                    <h6 class="text-muted small text-uppercase tracking-widest fw-black mb-0 opacity-50">@Localizer["VerifiedPurchases"]</h6>
                </div>
            </div>
        </div>
        
        <div class="col-6 col-lg-3">
            <div class="card card-premium border-0 h-100 transition-all hover-translate-y">
                <div class="card-body p-4">
                    <div class="rounded-3 bg-info bg-opacity-10 d-flex align-items-center justify-content-center mb-3" style="width: 42px; height: 42px;">
                        <i class="fas fa-thumbs-up text-info"></i>
                    </div>
                    <h2 class="fw-black mb-1">@Model.Stats.TotalHelpfulVotes</h2>
                    <h6 class="text-muted small text-uppercase tracking-widest fw-black mb-0 opacity-50">@Localizer["HelpfulVotes"]</h6>
                </div>
            </div>
        </div>
    </div>

    <!-- Discovery Toolbar -->
    <div class="card card-premium border-0 mb-5 overflow-hidden">
        <div class="card-body p-4">
            <div class="row g-3 align-items-center">
                <div class="col-md">
                    <div class="input-group search-premium">
                        <span class="input-group-text bg-light border-0"><i class="fas fa-search opacity-50"></i></span>
                        <input type="text" class="form-control bg-light border-0 fw-bold" placeholder="@Localizer["SearchReviews"]" id="reviewsSearchInput" value="@(searchRequest?.SearchTerm ?? "")">
                    </div>
                </div>
                <div class="col-md-auto">
                    <button class="btn btn-dark px-4 py-2 rounded-3 fw-black text-uppercase tracking-widest w-100" style="font-size: 0.7rem;" id="toggleFiltersBtn">
                        <i class="fas fa-sliders-h me-2"></i>@Localizer["AdvancedFilters"]
                    </button>
                </div>
            </div>

            <!-- Hidden Filters Expansion -->
            <div class="collapse mt-4 pt-4 border-top border-light" id="filtersPanel">
                <div class="row g-4">
                    <div class="col-md-3">
                        <label class="text-muted xx-small fw-black text-uppercase tracking-widest mb-2 opacity-75">@Localizer["SortBy"]</label>
                        <select class="form-select form-select-premium" id="sortFilter">
                            <option value="Default" selected="@(searchRequest?.SortBy.ToString() == "Default")">@Localizer["Default"]</option>
                            <option value="Newest" selected="@(searchRequest?.SortBy.ToString() == "Newest")">@Localizer["Newest"]</option>
                            <option value="HighestRating" selected="@(searchRequest?.SortBy.ToString() == "HighestRating")">@Localizer["HighestRating"]</option>
                            <option value="MostHelpful" selected="@(searchRequest?.SortBy.ToString() == "MostHelpful")">@Localizer["MostHelpful"]</option>
                        </select>
                    </div>
                    
                    <div class="col-md-3">
                        <label class="text-muted xx-small fw-black text-uppercase tracking-widest mb-2 opacity-75">@Localizer["RatingTier"]</label>
                        <select class="form-select form-select-premium" id="ratingFilter">
                            <option value="">@Localizer["AllRatings"]</option>
                            <option value="5" selected="@(searchRequest?.Rating == 5)">5 ⭐ @Localizer["Excellent"]</option>
                            <option value="4" selected="@(searchRequest?.Rating == 4)">4 ⭐ @Localizer["VeryGood"]</option>
                            <option value="3" selected="@(searchRequest?.Rating == 3)">3 ⭐ @Localizer["Good"]</option>
                            <option value="2" selected="@(searchRequest?.Rating == 2)">2 ⭐ @Localizer["Fair"]</option>
                            <option value="1" selected="@(searchRequest?.Rating == 1)">1 ⭐ @Localizer["Poor"]</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="text-muted xx-small fw-black text-uppercase tracking-widest mb-2 opacity-75">@Localizer["CarMake"]</label>
                        <select class="form-select form-select-premium" id="carMakeFilter">
                            <option value="">@Localizer["AllMakes"]</option>
                            @foreach (var make in Model.AvailableCarMakes)
                            {
                                <option value="@make" selected="@(searchRequest?.CarMake == make)">@make</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="text-muted xx-small fw-black text-uppercase tracking-widest mb-2 opacity-75">@Localizer["VerificationState"]</label>
                        <div class="vstack gap-2">
                            <div class="form-check form-switch custom-switch p-0 d-flex justify-content-between align-items-center">
                                <label class="text-muted xx-small fw-black text-uppercase tracking-widest opacity-75 cursor-pointer" for="verifiedFilter">@Localizer["VerifiedOnly"]</label>
                                <input class="form-check-input" type="checkbox" id="verifiedFilter" checked="@(searchRequest?.IsVerifiedPurchase == true)">
                            </div>
                            <div class="form-check form-switch custom-switch p-0 d-flex justify-content-between align-items-center">
                                <label class="text-muted xx-small fw-black text-uppercase tracking-widest opacity-75 cursor-pointer" for="recommendedFilter">@Localizer["Recommended"]</label>
                                <input class="form-check-input" type="checkbox" id="recommendedFilter" checked="@(searchRequest?.IsRecommended == true)">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-4">
                    <button class="btn btn-sm btn-outline-danger fw-black text-uppercase tracking-widest rounded-3 px-4" style="font-size: 0.65rem;" onclick="resetFilters()">@Localizer["ResetMatrix"]</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Reviews Interface -->
    <div id="reviewsContainer" class="min-vh-50">
        <div id="reviews-skeleton" class="d-none vstack gap-4">
            @for (int i = 0; i < 4; i++)
            {
                <div class="card card-premium skeleton-loading" style="height: 200px;"></div>
            }
        </div>
        <div id="reviews-list-container" class="animate-in slide-in-bottom">
            <partial name="~/Views/Community/Reviews/_ReviewsList.cshtml" model="Model" />
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            Skeleton.initPageLoad('reviews-skeleton', 'reviews-list-container');
            const toggleFiltersBtn = document.getElementById('toggleFiltersBtn');
            const filtersPanel = document.getElementById('filtersPanel');
            
            toggleFiltersBtn?.addEventListener('click', () => {
                const bsCollapse = bootstrap.Collapse.getOrCreateInstance(filtersPanel);
                bsCollapse.toggle();
                toggleFiltersBtn.classList.toggle('btn-primary-red');
                toggleFiltersBtn.classList.toggle('btn-dark');
            });
        });
    </script>
    <script src="~/js/reviews.js"></script>
}
@section SidebarRight {
    <partial name="~/Views/Community/Reviews/_ReviewsSidebar.cshtml" />
}

<style>
    .transition-all { transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1); }
    .xx-small { font-size: 0.6rem; }
    .hover-translate-y:hover { transform: translateY(-5px); }
    .form-select-premium { 
        background-color: var(--bs-gray-100); 
        border: 2px solid transparent; 
        border-radius: 12px; 
        padding: 0.75rem 1rem; 
        font-weight: 700; 
        font-size: 0.85rem;
        transition: all 0.2s ease;
    }
    .form-select-premium:focus {
        background-color: #fff;
        border-color: var(--primary-red);
        box-shadow: 0 0 0 4px rgba(251, 44, 54, 0.1);
        outline: none;
    }
    .custom-switch .form-check-input {
        width: 2.5rem;
        height: 1.25rem;
        cursor: pointer;
    }
    .custom-switch .form-check-input:checked {
        background-color: var(--primary-red);
        border-color: var(--primary-red);
    }
    .cursor-pointer { cursor: pointer; }
</style>
