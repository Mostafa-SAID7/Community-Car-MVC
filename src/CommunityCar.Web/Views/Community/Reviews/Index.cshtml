@using Microsoft.Extensions.Localization
@model CommunityCar.Application.Features.Reviews.DTOs.ReviewsSearchResponse
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["VehicleReviews"];
    var searchRequest = ViewBag.SearchRequest as CommunityCar.Application.Features.Reviews.DTOs.ReviewsSearchRequest;
}

<div class="space-y-8 animate-in fade-in duration-700">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tight">@Localizer["VehicleReviews"]</h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">@Localizer["AuthenticOwnerExperiences"]</p>
        </div>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <a href="@Url.Action("Create", "Reviews")" class="inline-flex items-center gap-2.5 px-8 py-3 bg-primary text-primary-foreground hover:bg-primary/90 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-primary/20 active:scale-95 group">
                <i data-lucide="plus-circle" class="w-4 h-4 group-hover:scale-125 transition-transform"></i>
                @Localizer["WriteReview"]
            </a>
        }
    </div>

    <!-- Metrics Radar -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-primary/20">
            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="star" class="w-5 h-5"></i>
            </div>
            <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.Stats.TotalReviews</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["TotalReviews"]</div>
        </div>
        
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-amber-500/10">
            <div class="w-10 h-10 rounded-xl bg-amber-500/10 flex items-center justify-center text-amber-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="award" class="w-5 h-5"></i>
            </div>
            <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.Stats.AverageRating.ToString("F1")</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["AverageRating"]</div>
        </div>
        
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-green-500/10">
            <div class="w-10 h-10 rounded-xl bg-green-500/10 flex items-center justify-center text-green-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="shield-check" class="w-5 h-5"></i>
            </div>
            <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.Stats.VerifiedPurchaseReviews</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["VerifiedPurchases"]</div>
        </div>
        
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-blue-500/10">
            <div class="w-10 h-10 rounded-xl bg-blue-100 dark:bg-blue-500/10 text-blue-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="thumbs-up" class="w-5 h-5"></i>
            </div>
            <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.Stats.TotalHelpfulVotes</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["HelpfulVotes"]</div>
        </div>
    </div>

    <!-- Discovery Toolbar -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl space-y-6">
        <div class="flex flex-col lg:flex-row gap-4 items-center">
            <div class="relative flex-1 w-full group">
                <input type="text" class="w-full bg-background border border-border pl-12 pr-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" placeholder="@Localizer["SearchReviews"]" id="reviewsSearchInput" value="@(searchRequest?.SearchTerm ?? "")">
                <i data-lucide="search" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-muted-foreground group-focus-within:text-primary transition-colors"></i>
            </div>
            
            <div class="flex gap-2 w-full lg:w-auto">
                <button class="flex-1 lg:flex-none h-[42px] px-6 py-2 rounded-xl bg-background border border-border hover:border-primary hover:text-primary text-[10px] font-black uppercase tracking-widest shadow-lg shadow-black/5 transition-all flex items-center justify-center gap-2 active:scale-95" id="toggleFiltersBtn">
                    <i data-lucide="sliders-horizontal" class="w-4 h-4"></i>
                    @Localizer["AdvancedFilters"]
                </button>
            </div>
        </div>

        <!-- Hidden Filters Expansion -->
        <div class="hidden animate-in slide-in-from-top-4 duration-500 pt-6 border-t border-border/40" id="filtersPanel">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                <div class="space-y-2">
                    <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["SortBy"]</label>
                    <div class="relative">
                        <select class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold outline-none appearance-none" id="sortFilter">
                            <option value="Default" selected="@(searchRequest?.SortBy.ToString() == "Default")">@Localizer["Default"]</option>
                            <option value="Newest" selected="@(searchRequest?.SortBy.ToString() == "Newest")">@Localizer["Newest"]</option>
                            <option value="HighestRating" selected="@(searchRequest?.SortBy.ToString() == "HighestRating")">@Localizer["HighestRating"]</option>
                            <option value="MostHelpful" selected="@(searchRequest?.SortBy.ToString() == "MostHelpful")">@Localizer["MostHelpful"]</option>
                        </select>
                        <i data-lucide="chevron-down" class="absolute right-4 top-1/2 -translate-y-1/2 w-3 h-3 text-muted-foreground pointer-events-none"></i>
                    </div>
                </div>
                
                <div class="space-y-2">
                    <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["Rating"]</label>
                    <div class="relative">
                        <select class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold outline-none appearance-none" id="ratingFilter">
                            <option value="">@Localizer["AllRatings"]</option>
                            <option value="5" selected="@(searchRequest?.Rating == 5)">5 ⭐ @Localizer["Excellent"]</option>
                            <option value="4" selected="@(searchRequest?.Rating == 4)">4 ⭐ @Localizer["VeryGood"]</option>
                            <option value="3" selected="@(searchRequest?.Rating == 3)">3 ⭐ @Localizer["Good"]</option>
                            <option value="2" selected="@(searchRequest?.Rating == 2)">2 ⭐ @Localizer["Fair"]</option>
                            <option value="1" selected="@(searchRequest?.Rating == 1)">1 ⭐ @Localizer["Poor"]</option>
                        </select>
                        <i data-lucide="chevron-down" class="absolute right-4 top-1/2 -translate-y-1/2 w-3 h-3 text-muted-foreground pointer-events-none"></i>
                    </div>
                </div>

                <div class="space-y-2">
                    <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["CarMake"]</label>
                    <div class="relative">
                        <select class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold outline-none appearance-none" id="carMakeFilter">
                            <option value="">@Localizer["AllMakes"]</option>
                            @foreach (var make in Model.AvailableCarMakes)
                            {
                                <option value="@make" selected="@(searchRequest?.CarMake == make)">@make</option>
                            }
                        </select>
                        <i data-lucide="chevron-down" class="absolute right-4 top-1/2 -translate-y-1/2 w-3 h-3 text-muted-foreground pointer-events-none"></i>
                    </div>
                </div>

                <div class="space-y-2">
                    <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["Options"]</label>
                    <div class="space-y-2">
                        <label class="flex items-center gap-2 text-xs">
                            <input type="checkbox" id="verifiedFilter" class="rounded border-border" checked="@(searchRequest?.IsVerifiedPurchase == true)">
                            <span>@Localizer["VerifiedOnly"]</span>
                        </label>
                        <label class="flex items-center gap-2 text-xs">
                            <input type="checkbox" id="recommendedFilter" class="rounded border-border" checked="@(searchRequest?.IsRecommended == true)">
                            <span>@Localizer["RecommendedOnly"]</span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="mt-6 flex justify-end">
                <button class="px-6 py-2 bg-muted text-[10px] font-black uppercase tracking-widest rounded-lg hover:bg-muted/80 transition-all" onclick="resetFilters()">@Localizer["ResetProtocol"]</button>
            </div>
        </div>
    </div>

    <!-- Reviews Interface -->
    <div id="reviewsContainer" class="min-h-[400px]">
        <div id="reviews-skeleton" class="hidden space-y-6">
            @for (int i = 0; i < 4; i++)
            {
                <skeleton type="Post" />
            }
        </div>
        <div id="reviews-list-container">
            <partial name="~/Views/Community/Reviews/_ReviewsList.cshtml" model="Model" />
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Preservation of original JS/AJAX logic adapted to new UI hooks
        document.addEventListener('DOMContentLoaded', () => {
            Skeleton.initPageLoad('reviews-skeleton', 'reviews-list-container');
            const toggleFiltersBtn = document.getElementById('toggleFiltersBtn');
            const filtersPanel = document.getElementById('filtersPanel');
            
            toggleFiltersBtn?.addEventListener('click', () => {
                toggleFiltersBtn.classList.toggle('bg-primary/10');
                toggleFiltersBtn.classList.toggle('text-primary');
                toggleFiltersBtn.classList.toggle('border-primary/30');
                filtersPanel.classList.toggle('hidden');
            });

            // Rest of search/paging logic preserved...
        });
    </script>
    <script src="~/js/reviews.js"></script>
}
@section SidebarRight {
    <partial name="_ReviewsSidebar" />
}
