@using Microsoft.Extensions.Localization
@model CommunityCar.Application.Features.Reviews.DTOs.ReviewsSearchResponse
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["MyReviews"];
}

<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden mb-8">
        <div class="p-8">
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
                <div>
                    <h2 class="text-3xl font-black text-foreground flex items-center gap-3">
                        <div class="bg-primary/10 p-3 rounded-xl text-primary">
                            <i data-lucide="user" class="w-8 h-8"></i>
                        </div>
                        @Localizer["MyReviews"]
                    </h2>
                    <p class="text-muted-foreground mt-2">@Localizer["MyReviewsDescription"]</p>
                </div>
                
                <div class="flex items-center gap-4">
                    <a href="/reviews/create" class="inline-flex items-center justify-center gap-2 px-6 py-2.5 bg-primary text-primary-foreground text-[10px] font-black uppercase tracking-widest rounded-xl shadow-lg shadow-primary/20 hover:bg-primary/90 transition-all active:scale-95">
                        <i data-lucide="plus" class="w-4 h-4"></i>
                        @Localizer["WriteNewReview"]
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div id="reviews-skeleton" class="hidden space-y-6">
        <skeleton type="Card" />
        <skeleton type="Card" />
    </div>

    <div id="reviews-content">
    @if (Model.Reviews.Any())
    {
        <!-- Reviews Stats -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 text-center">
                <div class="text-3xl font-black text-primary mb-2">@Model.Reviews.Count()</div>
                <div class="text-sm text-muted-foreground">@Localizer["TotalReviews"]</div>
            </div>
            
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 text-center">
                <div class="text-3xl font-black text-green-600 mb-2">@(Model.Reviews.Any() ? Model.Reviews.Average(r => r.Rating).ToString("F1") : "0.0")</div>
                <div class="text-sm text-muted-foreground">@Localizer["AverageRating"]</div>
            </div>
            
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 text-center">
                <div class="text-3xl font-black text-blue-600 mb-2">@Model.Reviews.Sum(r => r.ViewCount)</div>
                <div class="text-sm text-muted-foreground">@Localizer["TotalViews"]</div>
            </div>
            
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 text-center">
                <div class="text-3xl font-black text-purple-600 mb-2">@Model.Reviews.Sum(r => r.HelpfulCount)</div>
                <div class="text-sm text-muted-foreground">@Localizer["HelpfulVotes"]</div>
            </div>
        </div>

        <!-- Reviews List -->
        <div class="space-y-6">
            @foreach (var review in Model.Reviews)
            {
                <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden hover-lift">
                    <div class="p-6">
                        <div class="flex flex-col md:flex-row md:items-start justify-between gap-4 mb-4">
                            <div class="flex-1">
                                <div class="flex items-center gap-3 mb-2">
                                    <h3 class="text-xl font-black text-foreground">
                                        <a href="/reviews/@review.Id" class="hover:text-primary transition-colors">@review.Title</a>
                                    </h3>
                                    <div class="flex items-center text-amber-500">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i data-lucide="star" class="w-4 h-4 @(i <= review.Rating ? "fill-current" : "")"></i>
                                        }
                                    </div>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(review.CarDisplayName))
                                {
                                    <div class="text-muted-foreground mb-2">@review.CarDisplayName</div>
                                }
                                
                                <div class="flex items-center gap-4 text-sm text-muted-foreground">
                                    <span class="flex items-center gap-1">
                                        <i data-lucide="eye" class="w-4 h-4"></i>
                                        @review.ViewCount @Localizer["Views"]
                                    </span>
                                    <span class="flex items-center gap-1">
                                        <i data-lucide="thumbs-up" class="w-4 h-4"></i>
                                        @review.HelpfulCount @Localizer["Helpful"]
                                    </span>
                                    <span>@review.TimeAgo</span>
                                    @if (review.IsVerifiedPurchase)
                                    {
                                        <span class="inline-flex items-center gap-1.5 px-2 py-0.5 rounded-full text-[10px] font-bold uppercase tracking-wider bg-emerald-500/10 text-emerald-500 border border-emerald-500/20">
                                            <i data-lucide="shield-check" class="w-3 h-3"></i>
                                            @Localizer["Verified"]
                                        </span>
                                    }
                                    @if (review.IsRecommended)
                                    {
                                        <span class="inline-flex items-center gap-1.5 px-2 py-0.5 rounded-full text-[10px] font-bold uppercase tracking-wider bg-primary/10 text-primary border border-primary/20">
                                            <i data-lucide="thumbs-up" class="w-3 h-3"></i>
                                            @Localizer["Recommended"]
                                        </span>
                                    }
                                </div>
                            </div>
                            
                            <div class="flex items-center gap-2">
                                <a href="/reviews/@review.Id/edit" class="inline-flex items-center justify-center gap-2 px-4 py-2 bg-muted/20 border border-border/50 hover:bg-muted/30 text-[10px] font-black uppercase tracking-widest rounded-xl transition-all active:scale-95">
                                    <i data-lucide="edit" class="w-4 h-4"></i>
                                    @Localizer["Edit"]
                                </a>
                                <form method="post" action="/reviews/@review.Id/delete" class="inline" 
                                      onsubmit="return confirm('@Localizer["ConfirmDeleteReview"]')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="inline-flex items-center justify-center gap-2 px-4 py-2 bg-muted/20 border border-border/50 hover:bg-red-500/10 text-red-600 text-[10px] font-black uppercase tracking-widest rounded-xl transition-all active:scale-95">
                                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                                        @Localizer["Delete"]
                                    </button>
                                </form>
                            </div>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(review.Comment))
                        {
                            <p class="text-muted-foreground line-clamp-3 mb-4">
                                @(review.Comment.Length > 200 ? review.Comment.Substring(0, 200) + "..." : review.Comment)
                            </p>
                        }
                        
                        @if (review.HasDetailedRatings)
                        {
                            <div class="flex flex-wrap gap-4 text-sm">
                                @if (review.QualityRating.HasValue)
                                {
                                    <div class="flex items-center gap-1">
                                        <span class="text-muted-foreground">@Localizer["Quality"]:</span>
                                        <span class="font-semibold">@review.QualityRating/5</span>
                                    </div>
                                }
                                @if (review.ValueRating.HasValue)
                                {
                                    <div class="flex items-center gap-1">
                                        <span class="text-muted-foreground">@Localizer["Value"]:</span>
                                        <span class="font-semibold">@review.ValueRating/5</span>
                                    </div>
                                }
                                @if (review.ReliabilityRating.HasValue)
                                {
                                    <div class="flex items-center gap-1">
                                        <span class="text-muted-foreground">@Localizer["Reliability"]:</span>
                                        <span class="font-semibold">@review.ReliabilityRating/5</span>
                                    </div>
                                }
                                @if (review.PerformanceRating.HasValue)
                                {
                                    <div class="flex items-center gap-1">
                                        <span class="text-muted-foreground">@Localizer["Performance"]:</span>
                                        <span class="font-semibold">@review.PerformanceRating/5</span>
                                    </div>
                                }
                                @if (review.ComfortRating.HasValue)
                                {
                                    <div class="flex items-center gap-1">
                                        <span class="text-muted-foreground">@Localizer["Comfort"]:</span>
                                        <span class="font-semibold">@review.ComfortRating/5</span>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.Pagination.TotalPages > 1)
        {
            <div class="flex justify-center mt-8">
                <nav class="flex items-center gap-2">
                    @if (Model.Pagination.CurrentPage > 1)
                    {
                        <a href="?page=@(Model.Pagination.CurrentPage - 1)" class="btn-secondary btn-sm">
                            <i data-lucide="chevron-left" class="w-4 h-4"></i>
                            @Localizer["Previous"]
                        </a>
                    }

                    @for (int i = Math.Max(1, Model.Pagination.CurrentPage - 2); i <= Math.Min(Model.Pagination.TotalPages, Model.Pagination.CurrentPage + 2); i++)
                    {
                        @if (i == Model.Pagination.CurrentPage)
                        {
                            <span class="btn-primary btn-sm">@i</span>
                        }
                        else
                        {
                            <a href="?page=@i" class="btn-secondary btn-sm">@i</a>
                        }
                    }

                    @if (Model.Pagination.CurrentPage < Model.Pagination.TotalPages)
                    {
                        <a href="?page=@(Model.Pagination.CurrentPage + 1)" class="btn-secondary btn-sm">
                            @Localizer["Next"]
                            <i data-lucide="chevron-right" class="w-4 h-4"></i>
                        </a>
                    }
                </nav>
            </div>
        }
    }
    else
    {
        <!-- Empty State -->
        <div class="text-center py-16">
            <div class="bg-muted/20 border border-border/50 rounded-2xl p-12 max-w-md mx-auto">
                <i data-lucide="star" class="w-16 h-16 text-muted-foreground mx-auto mb-4"></i>
                <h3 class="text-xl font-black text-foreground mb-2">@Localizer["NoReviewsYet"]</h3>
                <p class="text-muted-foreground mb-6">@Localizer["NoReviewsYetDescription"]</p>
                <a href="/reviews/create" class="btn-primary">
                    <i data-lucide="plus" class="w-4 h-4"></i>
                    @Localizer["WriteFirstReview"]
                </a>
            </div>
        </div>
    }
    </div> <!-- End reviews-content -->
</div>

@section Scripts {
    <script src="~/js/reviews.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Skeleton.initPageLoad('reviews-skeleton', 'reviews-content');
        });
    </script>
}
</div>

@section Scripts {
    <script src="~/js/reviews.js"></script>
}