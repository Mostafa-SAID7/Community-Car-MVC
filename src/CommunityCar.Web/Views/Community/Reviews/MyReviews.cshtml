@using Microsoft.Extensions.Localization
@model CommunityCar.Application.Features.Community.Reviews.ViewModels.ReviewsSearchVM
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["MyReviews"];
}

<div class="container mx-auto px-4 py-4">
    <!-- Header -->
    <div class="card bg-opacity-25 backdrop-blur border rounded-4 shadow-lg overflow-hidden mb-5">
        <div class="card-body p-4 p-md-5">
            <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-4">
                <div>
                    <h2 class="h2 fw-black d-flex align-items-center gap-3 mb-2">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-4 text-primary">
                            <i data-lucide="user" style="width: 32px; height: 32px;"></i>
                        </div>
                        @Localizer["MyReviews"]
                    </h2>
                    <p class="text-muted mb-0">@Localizer["MyReviewsDescription"]</p>
                </div>
                
                <div class="d-flex align-items-center gap-3">
                    <a href="/reviews/create" class="btn btn-primary d-inline-flex align-items-center justify-content-center gap-2 px-5 py-3 rounded-4 shadow small fw-black text-uppercase">
                        <i data-lucide="plus" style="width: 16px; height: 16px;"></i>
                        @Localizer["WriteNewReview"]
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div id="reviews-skeleton" class="d-none vstack gap-4">
        <skeleton type="Card" />
        <skeleton type="Card" />
    </div>

    <div id="reviews-content">
    @if (Model.Reviews.Any())
    {
        <!-- Reviews Stats -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 mb-5">
            <div class="col">
                <div class="card bg-opacity-25 backdrop-blur border rounded-4 p-4 text-center">
                    <div class="display-4 fw-black text-primary mb-2">@Model.Reviews.Count()</div>
                    <div class="small text-muted">@Localizer["TotalReviews"]</div>
                </div>
            </div>
            
            <div class="col">
                <div class="card bg-opacity-25 backdrop-blur border rounded-4 p-4 text-center">
                    <div class="display-4 fw-black text-success mb-2">@(Model.Reviews.Any() ? Model.Reviews.Average(r => r.Rating).ToString("F1") : "0.0")</div>
                    <div class="small text-muted">@Localizer["AverageRating"]</div>
                </div>
            </div>
            
            <div class="col">
                <div class="card bg-opacity-25 backdrop-blur border rounded-4 p-4 text-center">
                    <div class="display-4 fw-black text-info mb-2">@Model.Reviews.Sum(r => r.ViewCount)</div>
                    <div class="small text-muted">@Localizer["TotalViews"]</div>
                </div>
            </div>
            
            <div class="col">
                <div class="card bg-opacity-25 backdrop-blur border rounded-4 p-4 text-center">
                    <div class="display-4 fw-black text-purple mb-2">@Model.Reviews.Sum(r => r.HelpfulCount)</div>
                    <div class="small text-muted">@Localizer["HelpfulVotes"]</div>
                </div>
            </div>
        </div>

        <!-- Reviews List -->
        <div class="vstack gap-4">
            @foreach (var review in Model.Reviews)
            {
                <div class="card bg-opacity-25 backdrop-blur border rounded-4 shadow-lg overflow-hidden hover-lift">
                    <div class="card-body p-4">
                        <div class="d-flex flex-column flex-md-row align-items-md-start justify-content-between gap-4 mb-4">
                            <div class="flex-grow-1">
                                <div class="d-flex align-items-center gap-3 mb-2">
                                    <h3 class="h4 fw-black mb-0">
                                        <a href="/reviews/@review.Id" class="text-decoration-none text-dark hover-text-primary">@review.Title</a>
                                    </h3>
                                    <div class="d-flex align-items-center text-warning">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i data-lucide="star" style="width: 16px; height: 16px;" class="@(i <= review.Rating ? "fill-current" : "")"></i>
                                        }
                                    </div>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(review.CarDisplayName))
                                {
                                    <div class="text-muted mb-2">@review.CarDisplayName</div>
                                }
                                
                                <div class="d-flex align-items-center gap-4 small text-muted flex-wrap">
                                    <span class="d-flex align-items-center gap-1">
                                        <i data-lucide="eye" style="width: 16px; height: 16px;"></i>
                                        @review.ViewCount @Localizer["Views"]
                                    </span>
                                    <span class="d-flex align-items-center gap-1">
                                        <i data-lucide="thumbs-up" style="width: 16px; height: 16px;"></i>
                                        @review.HelpfulCount @Localizer["Helpful"]
                                    </span>
                                    <span>@review.TimeAgo</span>
                                    @if (review.IsVerifiedPurchase)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 d-inline-flex align-items-center gap-1 rounded-pill" style="font-size: 0.65rem; padding: 2px 8px;">
                                            <i data-lucide="shield-check" style="width: 12px; height: 12px;"></i>
                                            @Localizer["Verified"]
                                        </span>
                                    }
                                    @if (review.IsRecommended)
                                    {
                                        <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 d-inline-flex align-items-center gap-1 rounded-pill" style="font-size: 0.65rem; padding: 2px 8px;">
                                            <i data-lucide="thumbs-up" style="width: 12px; height: 12px;"></i>
                                            @Localizer["Recommended"]
                                        </span>
                                    }
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-center gap-2 flex-shrink-0">
                                <a href="/reviews/@review.Id/edit" class="btn btn-outline-secondary d-inline-flex align-items-center justify-content-center gap-2 px-4 py-2 rounded-4 small fw-black text-uppercase">
                                    <i data-lucide="edit" style="width: 16px; height: 16px;"></i>
                                    @Localizer["Edit"]
                                </a>
                                <form method="post" action="/reviews/@review.Id/delete" class="d-inline" 
                                      onsubmit="return confirm('@Localizer["ConfirmDeleteReview"]')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger d-inline-flex align-items-center justify-content-center gap-2 px-4 py-2 rounded-4 small fw-black text-uppercase">
                                        <i data-lucide="trash-2" style="width: 16px; height: 16px;"></i>
                                        @Localizer["Delete"]
                                    </button>
                                </form>
                            </div>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(review.Comment))
                        {
                            <p class="text-muted mb-4" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden;">
                                @(review.Comment.Length > 200 ? review.Comment.Substring(0, 200) + "..." : review.Comment)
                            </p>
                        }
                        
                        @if (review.HasDetailedRatings)
                        {
                            <div class="d-flex flex-wrap gap-4 small">
                                @if (review.QualityRating.HasValue)
                                {
                                    <div class="d-flex align-items-center gap-1">
                                        <span class="text-muted">@Localizer["Quality"]:</span>
                                        <span class="fw-semibold">@review.QualityRating/5</span>
                                    </div>
                                }
                                @if (review.ValueRating.HasValue)
                                {
                                    <div class="d-flex align-items-center gap-1">
                                        <span class="text-muted">@Localizer["Value"]:</span>
                                        <span class="fw-semibold">@review.ValueRating/5</span>
                                    </div>
                                }
                                @if (review.ReliabilityRating.HasValue)
                                {
                                    <div class="d-flex align-items-center gap-1">
                                        <span class="text-muted">@Localizer["Reliability"]:</span>
                                        <span class="fw-semibold">@review.ReliabilityRating/5</span>
                                    </div>
                                }
                                @if (review.PerformanceRating.HasValue)
                                {
                                    <div class="d-flex align-items-center gap-1">
                                        <span class="text-muted">@Localizer["Performance"]:</span>
                                        <span class="fw-semibold">@review.PerformanceRating/5</span>
                                    </div>
                                }
                                @if (review.ComfortRating.HasValue)
                                {
                                    <div class="d-flex align-items-center gap-1">
                                        <span class="text-muted">@Localizer["Comfort"]:</span>
                                        <span class="fw-semibold">@review.ComfortRating/5</span>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.Pagination.TotalPages > 1)
        {
            <div class="d-flex justify-content-center mt-5">
                <nav class="d-flex align-items-center gap-2">
                    @if (Model.Pagination.CurrentPage > 1)
                    {
                        <a href="?page=@(Model.Pagination.CurrentPage - 1)" class="btn btn-outline-secondary btn-sm d-inline-flex align-items-center gap-2">
                            <i data-lucide="chevron-left" style="width: 16px; height: 16px;"></i>
                            @Localizer["Previous"]
                        </a>
                    }

                    @for (int i = Math.Max(1, Model.Pagination.CurrentPage - 2); i <= Math.Min(Model.Pagination.TotalPages, Model.Pagination.CurrentPage + 2); i++)
                    {
                        @if (i == Model.Pagination.CurrentPage)
                        {
                            <span class="btn btn-primary btn-sm">@i</span>
                        }
                        else
                        {
                            <a href="?page=@i" class="btn btn-outline-secondary btn-sm">@i</a>
                        }
                    }

                    @if (Model.Pagination.CurrentPage < Model.Pagination.TotalPages)
                    {
                        <a href="?page=@(Model.Pagination.CurrentPage + 1)" class="btn btn-outline-secondary btn-sm d-inline-flex align-items-center gap-2">
                            @Localizer["Next"]
                            <i data-lucide="chevron-right" style="width: 16px; height: 16px;"></i>
                        </a>
                    }
                </nav>
            </div>
        }
    }
    else
    {
        <!-- Empty State -->
        <div class="text-center py-5">
            <div class="card bg-secondary bg-opacity-10 border border-opacity-50 rounded-4 p-5 mx-auto" style="max-width: 28rem;">
                <i data-lucide="star" style="width: 64px; height: 64px;" class="text-muted mx-auto mb-4"></i>
                <h3 class="h4 fw-black mb-2">@Localizer["NoReviewsYet"]</h3>
                <p class="text-muted mb-4">@Localizer["NoReviewsYetDescription"]</p>
                <a href="/reviews/create" class="btn btn-primary d-inline-flex align-items-center gap-2">
                    <i data-lucide="plus" style="width: 16px; height: 16px;"></i>
                    @Localizer["WriteFirstReview"]
                </a>
            </div>
        </div>
    }
    </div> <!-- End reviews-content -->
</div>

@section Scripts {
    <script src="~/js/reviews.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Skeleton.initPageLoad('reviews-skeleton', 'reviews-content');
        });
    </script>
}
