@using Microsoft.Extensions.Localization
@model CommunityCar.Application.Features.Community.Reviews.ViewModels.ReviewsSearchVM
@inject IViewLocalizer Localizer
@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
}

@if (Model.Reviews.Any())
{
    <!-- Reviews Grid -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
        @foreach (var review in Model.Reviews)
        {
            <div class="col">
                <div class="card bg-opacity-25 backdrop-blur border rounded-4 shadow-lg overflow-hidden hover-lift h-100">
                    <div class="card-body p-4">
                        <!-- Header -->
                        <div class="d-flex justify-content-between align-items-start mb-4">
                            <div class="flex-grow-1 text-truncate me-3">
                                <h4 class="h5 fw-black mb-0 text-truncate">
                                    @{
                                        var displayTitle = isArabic && !string.IsNullOrEmpty(review.TitleAr) ? review.TitleAr : review.Title;
                                    }
                                    <a href="/reviews/@review.Id" class="text-decoration-none text-dark hover-text-primary">@displayTitle</a>
                                </h4>
                                @if (!string.IsNullOrEmpty(review.CarDisplayName))
                                {
                                    <div class="small text-muted mt-1">@review.CarDisplayName</div>
                                }
                                <div class="d-flex align-items-center gap-2 mt-1" style="font-size: 0.75rem;">
                                    <span class="text-muted">@review.ReviewerName</span>
                                    @if (review.IsVerifiedPurchase)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 d-inline-flex align-items-center gap-1 rounded-pill" style="font-size: 0.65rem; padding: 2px 8px;">
                                            <i data-lucide="shield-check" style="width: 12px; height: 12px;"></i>
                                            @Localizer["Verified"]
                                        </span>
                                    }
                                </div>
                            </div>
                            <div class="d-flex flex-column align-items-end gap-1">
                                <!-- Star Rating -->
                                <div class="d-flex align-items-center text-warning">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i data-lucide="star" style="width: 16px; height: 16px;" class="@(i <= review.Rating ? "fill-current" : "")"></i>
                                    }
                                </div>
                                <span class="small text-muted">@review.Rating/5</span>
                            </div>
                        </div>

                        <!-- Comment Preview -->
                        <p class="small text-muted mb-4" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; line-height: 1.6;">
                            @{
                                var displayComment = isArabic && !string.IsNullOrEmpty(review.CommentAr) ? review.CommentAr : review.Comment;
                            }
                            "@displayComment"
                        </p>

                        <!-- Pros/Cons Preview -->
                        @if (review.Pros.Any() || review.Cons.Any())
                        {
                            <div class="row g-2 mb-4" style="font-size: 0.75rem;">
                                @if (review.Pros.Any())
                                {
                                    <div class="col-6">
                                        <div class="text-success fw-semibold mb-1">
                                            <i data-lucide="plus" style="width: 12px; height: 12px;" class="d-inline"></i>
                                            @Localizer["Pros"]
                                        </div>
                                        <div class="text-muted">
                                            @string.Join(", ", review.Pros.Take(2))
                                            @if (review.Pros.Count() > 2)
                                            {
                                                <span>...</span>
                                            }
                                        </div>
                                    </div>
                                }
                                @if (review.Cons.Any())
                                {
                                    <div class="col-6">
                                        <div class="text-danger fw-semibold mb-1">
                                            <i data-lucide="minus" style="width: 12px; height: 12px;" class="d-inline"></i>
                                            @Localizer["Cons"]
                                        </div>
                                        <div class="text-muted">
                                            @string.Join(", ", review.Cons.Take(2))
                                            @if (review.Cons.Count() > 2)
                                            {
                                                <span>...</span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }

                        <!-- Recommendation -->
                        @if (review.IsRecommended)
                        {
                            <div class="d-flex align-items-center gap-2 mb-4">
                                <i data-lucide="thumbs-up" style="width: 16px; height: 16px;" class="text-success"></i>
                                <span class="small text-success fw-semibold">@Localizer["Recommended"]</span>
                            </div>
                        }

                        <!-- Footer -->
                        <div class="d-flex align-items-center justify-content-between small text-muted pt-4 border-top border-opacity-25">
                            <div class="d-flex align-items-center gap-4">
                                <span class="d-flex align-items-center gap-1">
                                    <i data-lucide="eye" style="width: 16px; height: 16px;"></i>
                                    @review.ViewCount
                                </span>
                                <span class="d-flex align-items-center gap-1">
                                    <i data-lucide="thumbs-up" style="width: 16px; height: 16px;"></i>
                                    @review.HelpfulCount
                                </span>
                                @if (review.HasImages)
                                {
                                    <span class="d-flex align-items-center gap-1">
                                        <i data-lucide="image" style="width: 16px; height: 16px;"></i>
                                        @review.ImageUrls.Count()
                                    </span>
                                }
                            </div>
                            <span>@review.TimeAgo</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.Pagination.TotalPages > 1)
    {
        <div class="d-flex justify-content-center">
            <nav class="d-flex align-items-center gap-2">
                @{
                    var queryString = ViewContext.HttpContext.Request.QueryString.Value;
                    var additionalParams = "";
                    if (!string.IsNullOrEmpty(queryString) && queryString.Length > 1)
                    {
                        additionalParams = "&" + queryString.Substring(1);
                    }
                }

                @if (Model.Pagination.CurrentPage > 1)
                {
                    <a href="?page=@(Model.Pagination.CurrentPage - 1)@Html.Raw(additionalParams)" 
                       class="btn btn-outline-secondary d-inline-flex align-items-center gap-2 px-4 py-2 rounded-4 small fw-bold text-uppercase">
                        <i data-lucide="chevron-left" style="width: 16px; height: 16px;"></i>
                        @Localizer["Previous"]
                    </a>
                }

                @for (int i = Math.Max(1, Model.Pagination.CurrentPage - 2); i <= Math.Min(Model.Pagination.TotalPages, Model.Pagination.CurrentPage + 2); i++)
                {
                    @if (i == Model.Pagination.CurrentPage)
                    {
                        <span class="btn btn-primary d-inline-flex align-items-center justify-content-center rounded-4 shadow" style="width: 40px; height: 40px; font-size: 0.65rem; font-weight: 900;">@i</span>
                    }
                    else
                    {
                        <a href="?page=@i@Html.Raw(additionalParams)" 
                           class="btn btn-outline-secondary d-inline-flex align-items-center justify-content-center rounded-4" style="width: 40px; height: 40px; font-size: 0.65rem; font-weight: 900;">@i</a>
                    }
                }

                @if (Model.Pagination.CurrentPage < Model.Pagination.TotalPages)
                {
                    <a href="?page=@(Model.Pagination.CurrentPage + 1)@Html.Raw(additionalParams)" 
                       class="btn btn-outline-secondary d-inline-flex align-items-center gap-2 px-4 py-2 rounded-4 small fw-bold text-uppercase pagination-link" data-page="@(Model.Pagination.CurrentPage + 1)">
                        @Localizer["Next"]
                        <i data-lucide="chevron-right" style="width: 16px; height: 16px;"></i>
                    </a>
                }
            </nav>
        </div>
    }
}
else
{
    <!-- Empty State -->
    <div class="text-center py-5">
        <div class="card bg-secondary bg-opacity-10 border border-opacity-50 rounded-4 p-5 mx-auto" style="max-width: 28rem;">
            <i data-lucide="star" style="width: 64px; height: 64px;" class="text-muted mx-auto mb-4"></i>
            <h3 class="h4 fw-black mb-2">@Localizer["NoReviewsFound"]</h3>
            <p class="text-muted mb-4">@Localizer["NoReviewsFoundDescription"]</p>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a href="/reviews/create" class="btn btn-primary d-inline-flex align-items-center justify-content-center gap-2 px-5 py-3 rounded-4 shadow small fw-black text-uppercase">
                    <i data-lucide="plus" style="width: 16px; height: 16px;"></i>
                    @Localizer["WriteFirstReview"]
                </a>
            }
        </div>
    </div>
}