@using Microsoft.Extensions.Localization
@model CommunityCar.Application.Features.Community.Reviews.ViewModels.ReviewVM
@inject IViewLocalizer Localizer

@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
    var displayTitle = isArabic && !string.IsNullOrEmpty(Model.TitleAr) ? Model.TitleAr : Model.Title;
    var displayComment = isArabic && !string.IsNullOrEmpty(Model.CommentAr) ? Model.CommentAr : Model.Comment;
    ViewData["Title"] = displayTitle;
}

<!-- Review Navigation Strategy -->
<div id="mainContent" class="max-w-4xl mx-auto space-y-10 animate-in fade-in duration-1000 px-4">
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-8 px-2 mb-10">
        <div class="space-y-4">
            <nav class="flex items-center gap-3 text-[10px] font-black uppercase tracking-[0.3em] text-primary mb-6">
                <i data-lucide="star" class="w-3.5 h-3.5 fill-current"></i> @Localizer["ReviewBy"] @(Model.ReviewerName ?? "Anonymous")
            </nav>
            <h1 class="text-5xl font-black text-foreground tracking-tighter leading-none">@displayTitle</h1>
            <p class="text-sm font-medium text-muted-foreground opacity-70 mt-4 border-l-4 border-primary/20 pl-4 py-1 max-w-2xl">@Model.CarDisplayName</p>
        </div>
        
        <a asp-controller="Reviews" asp-action="Index" asp-route-culture="@System.Globalization.CultureInfo.CurrentCulture.Name" class="inline-flex items-center justify-center gap-2 px-6 py-2.5 bg-muted/20 border border-border/50 hover:bg-muted/30 text-[10px] font-black uppercase tracking-widest rounded-xl transition-all active:scale-95 group/back">
            <i data-lucide="arrow-left" class="w-4 h-4 group-hover/back:-translate-x-1 transition-transform"></i>
            @Localizer["BackToReviews"]
        </a>
    </div>
    <!-- Main Review Card -->
    <div class="relative group mb-12">
        <div class="absolute -inset-1.5 bg-gradient-to-r from-primary/20 via-blue-500/5 to-primary/20 rounded-[3rem] blur-3xl opacity-10 group-hover:opacity-30 transition duration-1000"></div>
        
        <div class="relative bg-card/40 backdrop-blur-2xl border border-border/50 rounded-[2.5rem] shadow-2xl p-8 md:p-12 overflow-hidden">
            <div class="absolute top-0 right-0 w-64 h-64 bg-primary/5 rounded-full blur-3xl -mr-32 -mt-32"></div>
            
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-12">
                <div class="flex-1 space-y-8">
                    <div class="flex flex-wrap items-center gap-4">
                        @if (Model.IsVerifiedPurchase)
                        {
                            <span class="px-3 py-1.5 rounded-xl bg-green-500/10 text-green-500 border border-green-500/20 text-[8px] font-black uppercase tracking-widest flex items-center gap-1.5">
                                <i data-lucide="shield-check" class="w-3 h-3"></i> VERIFIED SOURCE
                            </span>
                        }
                        @if (Model.IsRecommended)
                        {
                            <span class="px-3 py-1.5 rounded-xl bg-primary/10 text-primary border border-primary/20 text-[8px] font-black uppercase tracking-widest flex items-center gap-1.5">
                                <i data-lucide="thumbs-up" class="w-3 h-3"></i> RECOMMENDED
                            </span>
                        }
                    </div>

                    <div class="flex items-center gap-6">
                        <div class="w-16 h-16 rounded-2xl bg-muted/20 border border-border/50 flex items-center justify-center font-black text-2xl text-foreground">
                            @(string.IsNullOrEmpty(Model.ReviewerName) ? "?" : Model.ReviewerName.Substring(0, 1).ToUpper())
                        </div>
                        <div>
                            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40 mb-1">@Localizer["ReviewAuthor"]</div>
                            <div class="text-xl font-black text-foreground">@(Model.ReviewerName ?? "Anonymous")</div>
                        </div>
                    </div>
                </div>

                <div class="text-center md:text-right">
                    <div class="inline-flex flex-col items-center p-8 bg-primary/10 rounded-[2rem] border border-primary/20 shadow-2xl shadow-primary/10 min-w-[160px]">
                        <div class="text-5xl font-black text-primary tabular-nums tracking-tighter mb-2">@Model.Rating.ToString("F1")</div>
                        <div class="flex gap-1 text-primary mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i data-lucide="star" class="w-4 h-4 @(i <= Model.Rating ? "fill-current" : "")"></i>
                            }
                        </div>
                        <div class="text-[9px] font-black uppercase tracking-widest text-primary/60">@Localizer["OverallRating"]</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

            <!-- Detailed Ratings -->
            @if (Model.HasDetailedRatings)
            {
                <div class="bg-background/50 rounded-2xl p-6 mb-8">
                    <h3 class="text-lg font-black text-foreground mb-4">@Localizer["DetailedRatings"]</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
                        @if (Model.QualityRating.HasValue)
                        {
                            <div class="text-center">
                                <div class="text-2xl font-black text-foreground">@Model.QualityRating</div>
                                <div class="text-sm text-muted-foreground">@Localizer["Quality"]</div>
                            </div>
                        }
                        @if (Model.ValueRating.HasValue)
                        {
                            <div class="text-center">
                                <div class="text-2xl font-black text-foreground">@Model.ValueRating</div>
                                <div class="text-sm text-muted-foreground">@Localizer["Value"]</div>
                            </div>
                        }
                        @if (Model.ReliabilityRating.HasValue)
                        {
                            <div class="text-center">
                                <div class="text-2xl font-black text-foreground">@Model.ReliabilityRating</div>
                                <div class="text-sm text-muted-foreground">@Localizer["Reliability"]</div>
                            </div>
                        }
                        @if (Model.PerformanceRating.HasValue)
                        {
                            <div class="text-center">
                                <div class="text-2xl font-black text-foreground">@Model.PerformanceRating</div>
                                <div class="text-sm text-muted-foreground">@Localizer["Performance"]</div>
                            </div>
                        }
                        @if (Model.ComfortRating.HasValue)
                        {
                            <div class="text-center">
                                <div class="text-2xl font-black text-foreground">@Model.ComfortRating</div>
                                <div class="text-sm text-muted-foreground">@Localizer["Comfort"]</div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Review Content -->
            <div class="prose prose-lg max-w-none mb-8">
                <p class="text-foreground leading-relaxed">@displayComment</p>
            </div>

            <!-- Pros and Cons -->
            @if (Model.Pros.Any() || Model.Cons.Any())
            {
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                    @if (Model.Pros.Any())
                    {
                        <div class="bg-green-50 dark:bg-green-900/20 rounded-2xl p-6">
                            <h4 class="text-lg font-black text-green-800 dark:text-green-200 mb-4 flex items-center gap-2">
                                <i data-lucide="plus" class="w-5 h-5"></i>
                                @Localizer["Pros"]
                            </h4>
                            <ul class="space-y-2">
                                @foreach (var pro in Model.Pros)
                                {
                                    <li class="text-green-700 dark:text-green-300 flex items-start gap-2">
                                        <i data-lucide="check" class="w-4 h-4 mt-0.5 flex-shrink-0"></i>
                                        @pro
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                    
                    @if (Model.Cons.Any())
                    {
                        <div class="bg-red-50 dark:bg-red-900/20 rounded-2xl p-6">
                            <h4 class="text-lg font-black text-red-800 dark:text-red-200 mb-4 flex items-center gap-2">
                                <i data-lucide="minus" class="w-5 h-5"></i>
                                @Localizer["Cons"]
                            </h4>
                            <ul class="space-y-2">
                                @foreach (var con in Model.Cons)
                                {
                                    <li class="text-red-700 dark:text-red-300 flex items-start gap-2">
                                        <i data-lucide="x" class="w-4 h-4 mt-0.5 flex-shrink-0"></i>
                                        @con
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            }

            <!-- Images -->
            @if (Model.HasImages)
            {
                <div class="mb-8">
                    <h4 class="text-lg font-black text-foreground mb-4">@Localizer["Photos"]</h4>
                    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                        @foreach (var imageUrl in Model.ImageUrls)
                        {
                            <div class="aspect-square rounded-2xl overflow-hidden">
                                <img src="@imageUrl" alt="@Model.Title" 
                                     class="w-full h-full object-cover hover:scale-105 transition-transform duration-300 cursor-pointer"
                                     onclick="openImageModal('@imageUrl')" />
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Vehicle Details -->
            @if (Model.Mileage.HasValue || Model.OwnershipDuration.HasValue || Model.PurchaseDate.HasValue)
            {
                <div class="bg-background/50 rounded-2xl p-6 mb-8">
                    <h4 class="text-lg font-black text-foreground mb-4">@Localizer["VehicleDetails"]</h4>
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-4 text-sm">
                        @if (Model.Mileage.HasValue)
                        {
                            <div>
                                <div class="text-muted-foreground">@Localizer["Mileage"]</div>
                                <div class="font-semibold">@Model.Mileage.Value.ToString("N0") @Localizer["Miles"]</div>
                            </div>
                        }
                        @if (Model.OwnershipDuration.HasValue)
                        {
                            <div>
                                <div class="text-muted-foreground">@Localizer["OwnershipDuration"]</div>
                                <div class="font-semibold">@Model.OwnershipDuration.Value @Localizer["Months"]</div>
                            </div>
                        }
                        @if (Model.PurchaseDate.HasValue)
                        {
                            <div>
                                <div class="text-muted-foreground">@Localizer["PurchaseDate"]</div>
                                <div class="font-semibold">@Model.PurchaseDate.Value.ToString("MMM yyyy")</div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Actions -->
            <div class="flex flex-wrap items-center justify-between gap-4 pt-6 border-t border-border/30">
                <div class="flex items-center gap-4">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <button onclick="markHelpful('@Model.Id', true)" class="inline-flex items-center gap-2 px-4 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95" id="helpfulBtn">
                            <i data-lucide="thumbs-up" class="w-4 h-4"></i>
                            @Localizer["Helpful"] (@Model.HelpfulCount)
                        </button>
                        <button onclick="flagReview('@Model.Id')" class="inline-flex items-center gap-2 px-4 py-2 bg-background border border-red-200 hover:border-red-500 text-red-600 hover:text-red-700 rounded-xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95">
                            <i data-lucide="flag" class="w-4 h-4"></i>
                            @Localizer["Flag"]
                        </button>
                    }
                </div>
                
                @if (User.Identity?.IsAuthenticated == true && ViewBag.CurrentUserId?.ToString() == Model.ReviewerId.ToString())
                {
                    <div class="flex items-center gap-2">
                        <a href="/reviews/@Model.Id/edit" class="inline-flex items-center gap-2 px-4 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95">
                            <i data-lucide="edit" class="w-4 h-4"></i>
                            @Localizer["Edit"]
                        </a>
                        <form method="post" action="/reviews/@Model.Id/delete" class="inline" 
                              onsubmit="return confirm('@Localizer["ConfirmDeleteReview"]')">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="inline-flex items-center gap-2 px-4 py-2 bg-background border border-red-200 hover:border-red-500 text-red-600 hover:text-red-700 rounded-xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95">
                                <i data-lucide="trash-2" class="w-4 h-4"></i>
                                @Localizer["Delete"]
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Back to Reviews -->
    <div class="text-center">
        <a asp-controller="Reviews" asp-action="Index" asp-route-culture="@System.Globalization.CultureInfo.CurrentCulture.Name" class="inline-flex items-center gap-2 px-6 py-3 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95">
            <i data-lucide="arrow-left" class="w-4 h-4"></i>
            @Localizer["BackToReviews"]
        </a>
    </div> <!-- End Main Content -->
</div>

@section Scripts {
    <script src="~/js/services/content-service.js" asp-append-version="true"></script>
    <script src="~/js/modules/content-module.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Skeleton.initPageLoad('loading-skeleton', 'main-content');
        });
    </script>
}