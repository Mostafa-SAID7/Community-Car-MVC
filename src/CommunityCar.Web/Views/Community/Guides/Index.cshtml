@using Microsoft.Extensions.Localization
@using CommunityCar.Domain.Enums
@using CommunityCar.Application.Features.Community.Guides.ViewModels
@model CommunityCar.Application.Features.Community.Guides.ViewModels.GuideListVM
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
    
    // Get current culture for localization
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
    
    // Helper function to get localized content
    string GetLocalizedTitle(GuideVM guide) => isArabic && !string.IsNullOrEmpty(guide.TitleAr) ? guide.TitleAr : guide.Title ?? string.Empty;
    string GetLocalizedSummary(GuideVM guide) => isArabic && !string.IsNullOrEmpty(guide.SummaryAr) ? guide.SummaryAr : guide.Summary ?? string.Empty;
}

<div class="space-y-8 animate-in fade-in duration-700">
    <!-- Header Section -->
    <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-6">
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tight flex items-center gap-3">
                <div class="bg-primary/10 p-2 rounded-xl text-primary">
                    <i data-lucide="book-open" class="w-6 h-6"></i>
                </div>
                @Localizer["Guides"]
            </h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">@Localizer["PageDescription"]</p>
        </div>
        <div class="flex items-center gap-3">
            <a asp-controller="Guides" asp-action="Create" asp-route-culture="@currentCulture" class="inline-flex items-center gap-2.5 px-8 py-3 bg-primary text-primary-foreground hover:bg-primary/90 rounded-2xl text-sm font-black uppercase tracking-widest transition-all shadow-lg shadow-primary/20 active:scale-95 group">
                <i data-lucide="plus" class="w-4 h-4 group-hover:scale-125 transition-transform"></i>
                @Localizer["CreateGuide"]
            </a>
        </div>
    </div>

    <!-- Search and Filters -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
        <div class="p-6">
            <form method="get" class="space-y-6">
                <!-- Search Bar -->
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                        <i data-lucide="search" class="w-5 h-5 text-muted-foreground"></i>
                    </div>
                    <input type="text" name="search" value="@Model.CurrentSearch" 
                           class="w-full pl-12 pr-4 py-3 bg-background border border-border rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" 
                           placeholder="@Localizer["SearchPlaceholder"]" />
                </div>

                <!-- Filter Pills -->
                <div class="flex flex-wrap gap-4">
                    <!-- Category Filter -->
                    <div class="flex items-center gap-2">
                        <label class="text-sm font-bold text-foreground">@Localizer["GuideCategory"]:</label>
                        <select name="category" class="bg-background border border-border rounded-lg px-3 py-2 text-sm font-medium focus:ring-2 focus:ring-primary/20 outline-none">
                            <option value="">@Localizer["FilterBy"] @Localizer["GuideCategory"]</option>
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category" selected="@(Model.CurrentCategory == category)">@Localizer[category]</option>
                            }
                        </select>
                    </div>

                    <!-- Difficulty Filter -->
                    <div class="flex items-center gap-2">
                        <label class="text-sm font-bold text-foreground">@Localizer["GuideDifficulty"]:</label>
                        <select name="difficulty" class="bg-background border border-border rounded-lg px-3 py-2 text-sm font-medium focus:ring-2 focus:ring-primary/20 outline-none">
                            <option value="">@Localizer["FilterBy"] @Localizer["GuideDifficulty"]</option>
                            <option value="@GuideDifficulty.Beginner" selected="@(Model.CurrentDifficulty == "Beginner")">@Localizer["Beginner"]</option>
                            <option value="@GuideDifficulty.Intermediate" selected="@(Model.CurrentDifficulty == "Intermediate")">@Localizer["Intermediate"]</option>
                            <option value="@GuideDifficulty.Advanced" selected="@(Model.CurrentDifficulty == "Advanced")">@Localizer["Advanced"]</option>
                        </select>
                    </div>

                    <!-- Sort Filter -->
                    <div class="flex items-center gap-2">
                        <label class="text-sm font-bold text-foreground">@Localizer["SortBy"]:</label>
                        <select name="sortBy" class="bg-background border border-border rounded-lg px-3 py-2 text-sm font-medium focus:ring-2 focus:ring-primary/20 outline-none">
                            <option value="newest" selected="@(Model.CurrentSortBy == "newest")">@Localizer["Newest"]</option>
                            <option value="popular" selected="@(Model.CurrentSortBy == "popular")">@Localizer["MostPopular"]</option>
                            <option value="rating" selected="@(Model.CurrentSortBy == "rating")">@Localizer["HighestRated"]</option>
                            <option value="bookmarks" selected="@(Model.CurrentSortBy == "bookmarks")">@Localizer["MostBookmarked"]</option>
                        </select>
                    </div>

                    <!-- Filter Actions -->
                    <div class="flex items-center gap-2 ml-auto">
                        <button type="submit" class="px-6 py-2 bg-primary text-primary-foreground hover:bg-primary/90 rounded-xl font-black text-xs uppercase tracking-widest transition-all shadow-lg shadow-primary/20 active:scale-95 flex items-center gap-2">
                            <i data-lucide="filter" class="w-4 h-4"></i>
                            @Localizer["ApplyFilters"]
                        </button>
                        <a asp-controller="Guides" asp-action="Index" asp-route-culture="@currentCulture" class="px-6 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-xl font-black text-xs uppercase tracking-widest transition-all shadow-sm active:scale-95 flex items-center gap-2">
                            <i data-lucide="x" class="w-4 h-4"></i>
                            @Localizer["ClearFilters"]
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Quick Categories -->
    <div class="flex flex-wrap gap-3">
        <a asp-controller="Guides" asp-action="Index" asp-route-culture="@currentCulture" asp-route-category="" class="inline-flex items-center gap-2 px-4 py-2 rounded-xl text-sm font-bold transition-all @(string.IsNullOrEmpty(Model.CurrentCategory) ? "bg-primary text-primary-foreground" : "bg-muted/30 text-muted-foreground hover:bg-muted/50 hover:text-foreground")">
            <i data-lucide="grid-3x3" class="w-4 h-4"></i>
            @Localizer["AllGuides"]
        </a>
        @foreach (var category in Model.Categories.Take(6))
        {
            <a asp-controller="Guides" asp-action="Index" asp-route-culture="@currentCulture" asp-route-category="@category" class="inline-flex items-center gap-2 px-4 py-2 rounded-xl text-sm font-bold transition-all @(Model.CurrentCategory == category ? "bg-primary text-primary-foreground" : "bg-muted/30 text-muted-foreground hover:bg-muted/50 hover:text-foreground")">
                @Localizer[category]
            </a>
        }
    </div>

    <!-- Results Info -->
    @if (Model.TotalCount > 0)
    {
        <div class="flex items-center justify-between">
            <p class="text-sm text-muted-foreground font-medium">
                @Localizer["ShowingResults", Model.Guides.Count, Model.TotalCount]
            </p>
            @if (!string.IsNullOrEmpty(Model.CurrentSearch) || !string.IsNullOrEmpty(Model.CurrentCategory))
            {
                <div class="flex items-center gap-2 text-sm">
                    <span class="text-muted-foreground">@Localizer["FilteredBy"]</span>
                    @if (!string.IsNullOrEmpty(Model.CurrentSearch))
                    {
                        <span class="px-2 py-1 bg-primary/10 text-primary rounded-lg text-xs font-bold">"@Model.CurrentSearch"</span>
                    }
                    @if (!string.IsNullOrEmpty(Model.CurrentCategory))
                    {
                        <span class="px-2 py-1 bg-primary/10 text-primary rounded-lg text-xs font-bold">@Localizer[Model.CurrentCategory]</span>
                    }
                </div>
            }
        </div>
    }

    <div id="guides-content">
        <partial name="~/Views/Community/Guides/_GuidesList.cshtml" model="Model" />
    </div>
</div>

@functions {
    private string GetDifficultyClasses(GuideDifficulty difficulty)
    {
        return difficulty switch
        {
            GuideDifficulty.Beginner => "bg-green-500/10 text-green-600 dark:text-green-400",
            GuideDifficulty.Intermediate => "bg-yellow-500/10 text-yellow-600 dark:text-yellow-400",
            GuideDifficulty.Advanced => "bg-red-500/10 text-red-600 dark:text-red-400",
            _ => "bg-muted/30 text-muted-foreground"
        };
    }
}

@section Scripts {
    <script src="~/js/services/content-service.js" asp-append-version="true"></script>
    <script src="~/js/modules/content-module.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (CC.Modules.Guides) CC.Modules.Guides.init();
        });
    </script>
}
@section SidebarRight {
    <partial name="~/Views/Community/Guides/_GuidesSidebar.cshtml" />
}
