@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<aside class="w-full space-y-6">
    <div class="bg-card/40 backdrop-blur-xl border border-border rounded-2xl p-6 shadow-sm">
        <h3 class="flex items-center gap-2 text-sm font-bold mb-6 uppercase tracking-wider text-primary">
            <i data-lucide="book-open" class="w-4 h-4"></i>
            Guides
        </h3>
        
        <div class="space-y-6">
            <div class="space-y-4">
                <h4 class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">Top Rated Guides</h4>
                @for (int i = 1; i <= 3; i++)
                {
                    <div class="p-3 rounded-xl bg-accent/20 hover:bg-accent/40 transition-all cursor-pointer border border-transparent hover:border-border">
                        <p class="text-xs font-bold leading-tight">Mastering Engine Tuning Part @i</p>
                        <div class="flex items-center gap-2 mt-2">
                            <i data-lucide="star" class="w-3 h-3 text-orange-400 fill-current"></i>
                            <span class="text-[9px] font-black">4.9</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</aside>
