@model CommunityCar.Application.Features.Maps.ViewModels.MapsStatsVM
@{
    ViewData["Title"] = "Maps";
}

<div class="space-y-8 animate-in fade-in duration-700">
    <!-- Maps Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tight">Interactive Maps</h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">Discover automotive locations, performance routes, and community spots</p>
        </div>
        <div class="flex items-center gap-3">
            <button type="button" class="inline-flex items-center gap-2.5 px-6 py-2.5 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95 group" data-bs-toggle="modal" data-bs-target="#addPOIModal">
                <i data-lucide="map-pin" class="w-4 h-4 group-hover:scale-110 transition-transform"></i>
                Add Location
            </button>
            <button type="button" class="inline-flex items-center gap-2.5 px-6 py-2.5 bg-primary text-primary-foreground hover:bg-primary/90 rounded-xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-primary/20 active:scale-95 group" data-bs-toggle="modal" data-bs-target="#addRouteModal">
                <i data-lucide="route" class="w-4 h-4 group-hover:scale-110 transition-transform"></i>
                Add Route
            </button>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg text-center group transition-all hover:border-primary/20">
            <div class="mx-auto w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="map-pin" class="w-6 h-6"></i>
            </div>
            <h4 class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.TotalPointsOfInterest</h4>
            <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">Locations</span>
        </div>
        
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg text-center group transition-all hover:border-primary/20">
            <div class="mx-auto w-12 h-12 rounded-xl bg-green-500/10 flex items-center justify-center text-green-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="route" class="w-6 h-6"></i>
            </div>
            <h4 class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.TotalRoutes</h4>
            <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">Routes</span>
        </div>
        
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg text-center group transition-all hover:border-primary/20">
            <div class="mx-auto w-12 h-12 rounded-xl bg-blue-500/10 flex items-center justify-center text-blue-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="check-circle" class="w-6 h-6"></i>
            </div>
            <h4 class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.TotalCheckIns</h4>
            <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">Check-ins</span>
        </div>
        
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg text-center group transition-all hover:border-primary/20">
            <div class="mx-auto w-12 h-12 rounded-xl bg-amber-500/10 flex items-center justify-center text-amber-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="shield-check" class="w-6 h-6"></i>
            </div>
            <h4 class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.VerifiedPOIs</h4>
            <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">Verified</span>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Map and Search Panel -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Advanced Filters -->
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-5 gap-4">
                    <div class="md:col-span-2 relative group">
                        <input type="text" class="w-full bg-background border border-border px-10 py-2.5 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" id="searchTerm" placeholder="Search for spots...">
                        <i data-lucide="search" class="absolute left-3.5 top-1/2 -translate-y-1/2 w-4 h-4 text-muted-foreground group-focus-within:text-primary transition-colors"></i>
                    </div>
                    <div>
                        <select class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold focus:ring-4 focus:ring-primary/10 transition-all outline-none appearance-none" id="poiType">
                            <option value="">All Types</option>
                            <option value="1">Auto Repair</option>
                            <option value="2">Dealership</option>
                            <option value="10">Meetup Point</option>
                            <option value="12">Race Track</option>
                        </select>
                    </div>
                    <div class="relative">
                        <input type="number" class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold focus:ring-4 focus:ring-primary/10 transition-all outline-none" id="radiusKm" placeholder="Radius" value="10">
                        <span class="absolute right-4 top-1/2 -translate-y-1/2 text-[9px] font-black text-muted-foreground uppercase">KM</span>
                    </div>
                    <button type="button" class="bg-primary text-primary-foreground px-6 py-2.5 rounded-xl text-[10px] font-black uppercase tracking-widest shadow-lg shadow-primary/20 hover:opacity-90 active:scale-95 transition-all flex items-center justify-center gap-2" onclick="searchLocations()">
                        <i data-lucide="navigation" class="w-3.5 h-3.5"></i>
                        Filter
                    </button>
                </div>
                
                <div class="flex flex-wrap gap-4 mt-6 pt-4 border-t border-border/40">
                    <label class="flex items-center gap-2 cursor-pointer group">
                        <input type="checkbox" id="verifiedOnly" class="w-4 h-4 rounded border-border text-primary focus:ring-primary/20">
                        <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground group-hover:text-foreground transition-colors">Verified Only</span>
                    </label>
                    <label class="flex items-center gap-2 cursor-pointer group">
                        <input type="checkbox" id="showRoutes" class="w-4 h-4 rounded border-border text-primary focus:ring-primary/20">
                        <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground group-hover:text-foreground transition-colors">Performance Routes</span>
                    </label>
                </div>
            </div>

            <!-- Map Display -->
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl overflow-hidden shadow-2xl relative group/map min-h-[500px]">
                <div id="mapContainer" class="absolute inset-0 w-full h-full flex flex-col items-center justify-center text-center p-8">
                    <div class="w-24 h-24 bg-muted/40 rounded-full flex items-center justify-center mb-6 shadow-inner ring-1 ring-border/50 animate-pulse">
                        <i data-lucide="map" class="w-10 h-10 text-muted-foreground opacity-30"></i>
                    </div>
                    <h4 class="text-xl font-black text-foreground mb-3 tracking-tight">Interactive Map Explorer</h4>
                    <p class="text-sm text-muted-foreground max-w-sm font-medium mb-8">Grant location access to see repair shops, race tracks, and scenic routes near you.</p>
                    <button type="button" class="px-8 py-3 bg-primary text-primary-foreground hover:bg-primary/90 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all shadow-xl shadow-primary/30 active:scale-95 flex items-center gap-2" onclick="getCurrentLocation()">
                        <i data-lucide="locate" class="w-4 h-4"></i>
                        Get My Location
                    </button>
                </div>
                
                <!-- Floating Map Tools -->
                <div class="absolute top-4 right-4 flex flex-col gap-2 z-10 opacity-0 group-hover/map:opacity-100 transition-opacity">
                    <button class="w-10 h-10 bg-background/80 backdrop-blur-lg border border-border rounded-xl shadow-lg flex items-center justify-center text-foreground hover:bg-primary hover:text-primary-foreground hover:border-primary transition-all"><i data-lucide="plus" class="w-4 h-4"></i></button>
                    <button class="w-10 h-10 bg-background/80 backdrop-blur-lg border border-border rounded-xl shadow-lg flex items-center justify-center text-foreground hover:bg-primary hover:text-primary-foreground hover:border-primary transition-all"><i data-lucide="minus" class="w-4 h-4"></i></button>
                    <button class="w-10 h-10 bg-background/80 backdrop-blur-lg border border-border rounded-xl shadow-lg flex items-center justify-center text-foreground hover:bg-primary hover:text-primary-foreground hover:border-primary transition-all"><i data-lucide="compass" class="w-4 h-4"></i></button>
                </div>
            </div>
        </div>

        <!-- Right Side Lists -->
        <div class="space-y-6">
            <!-- Popular Locations -->
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-lg overflow-hidden transition-all hover:border-primary/10">
                <div class="p-4 border-b border-border/50 bg-muted/20 px-6">
                    <h5 class="text-[10px] font-black uppercase tracking-widest text-foreground">Hotspots</h5>
                </div>
                <div class="p-2 space-y-1">
                    @if (Model.PopularPOIs.Any())
                    {
                        @foreach (var poi in Model.PopularPOIs.Take(5))
                        {
                            <div class="flex items-center gap-4 p-4 hover:bg-muted/30 rounded-xl transition-all group/poi cursor-pointer border border-transparent hover:border-border/40">
                                <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary border border-primary/20 shrink-0 group-hover/poi:scale-110 transition-transform">
                                    <i data-lucide="map-pin" class="w-4 h-4"></i>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <h6 class="text-[13px] font-black text-foreground leading-tight tracking-tight group-hover/poi:text-primary transition-colors truncate">@poi.Name</h6>
                                    <div class="flex items-center gap-2 mt-1">
                                        <div class="flex items-center text-amber-500 text-[8px]">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i data-lucide="star" class="w-2.5 h-2.5 @(i <= poi.AverageRating ? "fill-current" : "opacity-30")"></i>
                                            }
                                        </div>
                                        <span class="text-[9px] font-black uppercase text-muted-foreground opacity-50">@poi.CheckInCount Check-ins</span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="p-8 text-center opacity-30 italic text-xs font-medium">Scanning for popular spots...</div>
                    }
                </div>
            </div>

            <!-- Performance Routes -->
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-lg overflow-hidden transition-all hover:border-primary/10">
                <div class="p-4 border-b border-border/50 bg-muted/20 px-6">
                    <h5 class="text-[10px] font-black uppercase tracking-widest text-foreground">Top Routes</h5>
                </div>
                <div class="p-2 space-y-1">
                    @if (Model.PopularRoutes.Any())
                    {
                        @foreach (var route in Model.PopularRoutes.Take(5))
                        {
                            <div class="flex items-center gap-4 p-4 hover:bg-muted/30 rounded-xl transition-all group/route cursor-pointer border border-transparent hover:border-border/40">
                                <div class="w-10 h-10 rounded-xl bg-green-500/10 flex items-center justify-center text-green-600 border border-green-500/20 shrink-0 group-hover/route:scale-110 transition-transform">
                                    <i data-lucide="route" class="w-4 h-4"></i>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <h6 class="text-[13px] font-black text-foreground leading-tight tracking-tight group-hover/route:text-primary transition-colors truncate">@route.Name</h6>
                                    <div class="flex items-center gap-2 mt-1 text-[9px] font-black uppercase text-muted-foreground opacity-60">
                                        <span>@route.DistanceKm KM</span>
                                        <span>â€¢</span>
                                        <span>@route.Difficulty Level</span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/maps.js"></script>
}

<!-- Add POI Modal -->
<div class="modal fade" id="addPOIModal" tabindex="-1" aria-labelledby="addPOIModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPOIModalLabel">Add New Location</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addPOIForm">
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="poiName" class="form-label">Name *</label>
                            <input type="text" class="form-control" id="poiName" name="name" required>
                        </div>
                        <div class="col-md-6">
                            <label for="poiType" class="form-label">Type *</label>
                            <select class="form-select" id="poiType" name="type" required>
                                <option value="">Select Type</option>
                                <option value="1">Auto Repair</option>
                                <option value="2">Dealership</option>
                                <option value="3">Gas Station</option>
                                <option value="4">Auto Parts</option>
                                <option value="5">Tire Shop</option>
                                <option value="6">Service Center</option>
                                <option value="7">Car Wash</option>
                                <option value="8">Charging Station</option>
                                <option value="9">Parking</option>
                                <option value="10">Meetup Point</option>
                                <option value="11">Scenic Spot</option>
                                <option value="12">Race Track</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label for="poiDescription" class="form-label">Description *</label>
                            <textarea class="form-control" id="poiDescription" name="description" rows="3" required></textarea>
                        </div>
                        <div class="col-md-6">
                            <label for="poiLatitude" class="form-label">Latitude *</label>
                            <input type="number" class="form-control" id="poiLatitude" name="latitude" step="any" required>
                        </div>
                        <div class="col-md-6">
                            <label for="poiLongitude" class="form-label">Longitude *</label>
                            <input type="number" class="form-control" id="poiLongitude" name="longitude" step="any" required>
                        </div>
                        <div class="col-12">
                            <label for="poiAddress" class="form-label">Address</label>
                            <input type="text" class="form-control" id="poiAddress" name="address">
                        </div>
                        <div class="col-md-6">
                            <label for="poiPhone" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="poiPhone" name="phoneNumber">
                        </div>
                        <div class="col-md-6">
                            <label for="poiWebsite" class="form-label">Website</label>
                            <input type="url" class="form-control" id="poiWebsite" name="website">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="submitPOI()">Add Location</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Add Route Modal -->
<div class="modal fade" id="addRouteModal" tabindex="-1" aria-labelledby="addRouteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addRouteModalLabel">Add New Route</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addRouteForm">
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="routeName" class="form-label">Name *</label>
                            <input type="text" class="form-control" id="routeName" name="name" required>
                        </div>
                        <div class="col-md-6">
                            <label for="routeType" class="form-label">Type *</label>
                            <select class="form-select" id="routeType" name="type" required>
                                <option value="">Select Type</option>
                                <option value="1">Scenic</option>
                                <option value="2">Performance</option>
                                <option value="3">Off-Road</option>
                                <option value="4">Touring</option>
                                <option value="5">Commute</option>
                                <option value="6">Track</option>
                                <option value="7">Rally</option>
                                <option value="8">Cruise</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label for="routeDescription" class="form-label">Description *</label>
                            <textarea class="form-control" id="routeDescription" name="description" rows="3" required></textarea>
                        </div>
                        <div class="col-md-4">
                            <label for="routeDifficulty" class="form-label">Difficulty</label>
                            <select class="form-select" id="routeDifficulty" name="difficulty">
                                <option value="1">Beginner</option>
                                <option value="2">Intermediate</option>
                                <option value="3">Advanced</option>
                                <option value="4">Expert</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="routeDistance" class="form-label">Distance (km)</label>
                            <input type="number" class="form-control" id="routeDistance" name="distanceKm" step="0.1" min="0">
                        </div>
                        <div class="col-md-4">
                            <label for="routeDuration" class="form-label">Duration (minutes)</label>
                            <input type="number" class="form-control" id="routeDuration" name="estimatedDurationMinutes" min="0">
                        </div>
                        <div class="col-12">
                            <div class="form-check-group d-flex gap-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="routeScenic" name="isScenic">
                                    <label class="form-check-label" for="routeScenic">Scenic Route</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="routeTolls" name="hasTolls">
                                    <label class="form-check-label" for="routeTolls">Has Tolls</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="routeOffRoad" name="isOffRoad">
                                    <label class="form-check-label" for="routeOffRoad">Off-Road</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="submitRoute()">Add Route</button>
                </div>
            </form>
        </div>
    </div>
</div>
