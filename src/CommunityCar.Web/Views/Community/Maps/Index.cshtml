@using Microsoft.Extensions.Localization
@model CommunityCar.Application.Features.Community.Maps.ViewModels.MapsStatsVM
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["CommunityMaps"];
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
}

<div class="space-y-8 animate-in fade-in duration-700">
    <!-- Maps Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tight">@Localizer["InteractiveMaps"]</h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">@Localizer["MapsSubtitle"]</p>
        </div>
        <div class="flex items-center gap-3">
            <button type="button" class="inline-flex items-center gap-2.5 px-6 py-2.5 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95 group" data-bs-toggle="modal" data-bs-target="#addPOIModal">
                <i data-lucide="map-pin" class="w-4 h-4 group-hover:scale-110 transition-transform"></i>
                @Localizer["AddLocation"]
            </button>
            <button type="button" class="inline-flex items-center gap-2.5 px-6 py-2.5 bg-primary text-primary-foreground hover:bg-primary/90 rounded-xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-primary/20 active:scale-95 group" data-bs-toggle="modal" data-bs-target="#addRouteModal">
                <i data-lucide="route" class="w-4 h-4 group-hover:scale-110 transition-transform"></i>
                @Localizer["AddRoute"]
            </button>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg text-center group transition-all hover:border-primary/20">
            <div class="mx-auto w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="map-pin" class="w-6 h-6"></i>
            </div>
            <h4 class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.TotalPointsOfInterest</h4>
            <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["Locations"]</span>
        </div>
        
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg text-center group transition-all hover:border-primary/20">
            <div class="mx-auto w-12 h-12 rounded-xl bg-green-500/10 flex items-center justify-center text-green-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="route" class="w-6 h-6"></i>
            </div>
            <h4 class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.TotalRoutes</h4>
            <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["Routes"]</span>
        </div>
        
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg text-center group transition-all hover:border-primary/20">
            <div class="mx-auto w-12 h-12 rounded-xl bg-blue-500/10 flex items-center justify-center text-blue-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="check-circle" class="w-6 h-6"></i>
            </div>
            <h4 class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.TotalCheckIns</h4>
            <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["CheckIns"]</span>
        </div>
        
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg text-center group transition-all hover:border-primary/20">
            <div class="mx-auto w-12 h-12 rounded-xl bg-amber-500/10 flex items-center justify-center text-amber-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="shield-check" class="w-6 h-6"></i>
            </div>
            <h4 class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.VerifiedPOIs</h4>
            <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["Verified"]</span>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Map and Search Panel -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Advanced Filters -->
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-5 gap-4">
                    <div class="md:col-span-2 relative group">
                        <input type="text" class="w-full bg-background border border-border px-10 py-2.5 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" id="searchTerm" placeholder="@Localizer["SearchPlaceholderSpots"]">
                        <i data-lucide="search" class="absolute left-3.5 top-1/2 -translate-y-1/2 w-4 h-4 text-muted-foreground group-focus-within:text-primary transition-colors"></i>
                    </div>
                    <div>
                        <select class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold focus:ring-4 focus:ring-primary/10 transition-all outline-none appearance-none" id="poiType">
                            <option value="">@Localizer["AllTypes"]</option>
                            <option value="1">@Localizer["AutoRepair"]</option>
                            <option value="2">@Localizer["Dealership"]</option>
                            <option value="10">@Localizer["MeetupPoint"]</option>
                            <option value="12">@Localizer["RaceTrack"]</option>
                        </select>
                    </div>
                    <div class="relative">
                        <input type="number" class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold focus:ring-4 focus:ring-primary/10 transition-all outline-none" id="radiusKm" placeholder="@Localizer["Radius"]" value="10">
                        <span class="absolute right-4 top-1/2 -translate-y-1/2 text-[9px] font-black text-muted-foreground uppercase">@Localizer["KM"]</span>
                    </div>
                    <button type="button" class="bg-primary text-primary-foreground px-6 py-2.5 rounded-xl text-[10px] font-black uppercase tracking-widest shadow-lg shadow-primary/20 hover:opacity-90 active:scale-95 transition-all flex items-center justify-center gap-2" onclick="searchLocations()">
                        <i data-lucide="navigation" class="w-3.5 h-3.5"></i>
                        @Localizer["Filter"]
                    </button>
                </div>
                
                <div class="flex flex-wrap gap-4 mt-6 pt-4 border-t border-border/40">
                    <label class="flex items-center gap-2 cursor-pointer group">
                        <input type="checkbox" id="verifiedOnly" class="w-4 h-4 rounded border-border text-primary focus:ring-primary/20">
                        <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground group-hover:text-foreground transition-colors">@Localizer["VerifiedOnly"]</span>
                    </label>
                    <label class="flex items-center gap-2 cursor-pointer group">
                        <input type="checkbox" id="showRoutes" class="w-4 h-4 rounded border-border text-primary focus:ring-primary/20">
                        <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground group-hover:text-foreground transition-colors">@Localizer["PerformanceRoutes"]</span>
                    </label>
                </div>
            </div>

            <!-- Map Display -->
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl overflow-hidden shadow-2xl relative group/map min-h-[500px]">
                <div id="mapContainer" class="absolute inset-0 w-full h-full flex flex-col items-center justify-center text-center p-8">
                    <div class="w-24 h-24 bg-muted/40 rounded-full flex items-center justify-center mb-6 shadow-inner ring-1 ring-border/50 animate-pulse">
                        <i data-lucide="map" class="w-10 h-10 text-muted-foreground opacity-30"></i>
                    </div>
                    <h4 class="text-xl font-black text-foreground mb-3 tracking-tight">@Localizer["MapExplorerTitle"]</h4>
                    <p class="text-sm text-muted-foreground max-w-sm font-medium mb-8">@Localizer["MapExplorerSubtitle"]</p>
                    <button type="button" class="px-8 py-3 bg-primary text-primary-foreground hover:bg-primary/90 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all shadow-xl shadow-primary/30 active:scale-95 flex items-center gap-2" onclick="getCurrentLocation()">
                        <i data-lucide="locate" class="w-4 h-4"></i>
                        @Localizer["GetMyLocation"]
                    </button>
                </div>
                
                <!-- Floating Map Tools -->
                <div class="absolute top-4 right-4 flex flex-col gap-2 z-10 opacity-0 group-hover/map:opacity-100 transition-opacity">
                    <button class="w-10 h-10 bg-background/80 backdrop-blur-lg border border-border rounded-xl shadow-lg flex items-center justify-center text-foreground hover:bg-primary hover:text-primary-foreground hover:border-primary transition-all"><i data-lucide="plus" class="w-4 h-4"></i></button>
                    <button class="w-10 h-10 bg-background/80 backdrop-blur-lg border border-border rounded-xl shadow-lg flex items-center justify-center text-foreground hover:bg-primary hover:text-primary-foreground hover:border-primary transition-all"><i data-lucide="minus" class="w-4 h-4"></i></button>
                    <button class="w-10 h-10 bg-background/80 backdrop-blur-lg border border-border rounded-xl shadow-lg flex items-center justify-center text-foreground hover:bg-primary hover:text-primary-foreground hover:border-primary transition-all"><i data-lucide="compass" class="w-4 h-4"></i></button>
                </div>
            </div>
        </div>

        <!-- Right Side Lists -->
        <div class="space-y-6">
            <!-- Popular Locations -->
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-lg overflow-hidden transition-all hover:border-primary/10">
                <div class="p-4 border-b border-border/50 bg-muted/20 px-6">
                    <div class="flex items-center justify-between mb-6">
            <h5 class="text-[10px] font-black uppercase tracking-widest text-foreground">@Localizer["Hotspots"]</h5>
            <a asp-controller="Maps" asp-action="POI" asp-route-culture="@currentCulture" class="text-[9px] font-black uppercase tracking-widest text-primary hover:underline">@Localizer["ViewAll"]</a>
        </div>
                </div>
                <div class="p-2 space-y-1" id="hotspots-wrapper">
                    <div id="hotspots-skeleton" class="hidden space-y-2 p-4">
                        <skeleton type="Line" />
                        <skeleton type="Line" />
                    </div>
                    <div id="hotspots-content" class="max-h-[400px] overflow-y-auto pr-2 custom-scrollbar">
                    @if (Model.PopularPOIs.Any())
                    {
                        @foreach (var poi in Model.PopularPOIs.Take(3))
                        {
                            <div class="flex items-center gap-4 p-4 hover:bg-muted/30 rounded-xl transition-all group/poi cursor-pointer border border-transparent hover:border-border/40" onclick="showLocationDetails('@poi.Id')">
                                <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary border border-primary/20 shrink-0 group-hover/poi:scale-110 transition-transform">
                                    <i data-lucide="map-pin" class="w-4 h-4"></i>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <h6 class="text-[13px] font-black text-foreground leading-tight tracking-tight group-hover/poi:text-primary transition-colors truncate">
                                        <a asp-controller="Maps" asp-action="POIDetails" asp-route-id="@poi.Id" asp-route-culture="@currentCulture" onclick="event.stopPropagation();">
                                            @(isArabic && !string.IsNullOrEmpty(poi.NameAr) ? poi.NameAr : poi.Name)
                                        </a>
                                    </h6>
                                    <div class="flex items-center gap-2 mt-1">
                                        <div class="flex items-center text-amber-500 text-[8px]">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i data-lucide="star" class="w-2.5 h-2.5 @(i <= poi.AverageRating ? "fill-current" : "opacity-30")"></i>
                                            }
                                        </div>
                                        <span class="text-[9px] font-black uppercase text-muted-foreground opacity-50">@poi.CheckInCount Check-ins</span>
                                    </div>
                                </div>
                            </div>
                        }
                        <div id="hotspots-sentinel" class="h-4"></div>
                    }
                    else
                    {
                        <div class="p-8 text-center opacity-30 italic text-xs font-medium">Scanning for popular spots...</div>
                    }
                    </div>
                </div>
            </div>

            <!-- Performance Routes -->
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-lg overflow-hidden transition-all hover:border-primary/10">
                <div class="p-4 border-b border-border/50 bg-muted/20 px-6">
                    <div class="flex items-center justify-between mb-6">
                        <h5 class="text-[10px] font-black uppercase tracking-widest text-foreground">@Localizer["TopRoutes"]</h5>
                        <a asp-controller="Maps" asp-action="PerformanceRoutes" asp-route-culture="@currentCulture" class="text-[9px] font-black uppercase tracking-widest text-primary hover:underline">@Localizer["ViewAll"]</a>
                    </div>
                </div>
                <div class="p-2 space-y-1">
                    @if (Model.PopularRoutes.Any())
                    {
                        @foreach (var route in Model.PopularRoutes.Take(5))
                        {
                            <div class="flex items-center gap-4 p-4 hover:bg-muted/30 rounded-xl transition-all group/route cursor-pointer border border-transparent hover:border-border/40" onclick="showRouteDetails('@route.Id')">
                                <div class="w-10 h-10 rounded-xl bg-green-500/10 flex items-center justify-center text-green-600 border border-green-500/20 shrink-0 group-hover/route:scale-110 transition-transform">
                                    <i data-lucide="route" class="w-4 h-4"></i>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <h6 class="text-[13px] font-black text-foreground leading-tight tracking-tight group-hover/route:text-primary transition-colors truncate">
                                        <a asp-controller="Maps" asp-action="RouteDetails" asp-route-id="@route.Id" asp-route-culture="@currentCulture" onclick="event.stopPropagation();">
                                            @(isArabic && !string.IsNullOrEmpty(route.NameAr) ? route.NameAr : route.Name)
                                        </a>
                                    </h6>
                                    <div class="flex items-center gap-2 mt-1 text-[9px] font-black uppercase text-muted-foreground opacity-60">
                                        <span>@route.DistanceKm.ToString("F1") KM</span>
                                        <span>â€¢</span>
                                        <span>@route.Difficulty Level</span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<partial name="~/Views/Community/Maps/_MapsModals.cshtml" />

@section Scripts {
    <script src="~/js/maps.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Skeleton.initPageLoad('hotspots-skeleton', 'hotspots-content');
            Skeleton.initPageLoad('top-routes-skeleton', 'top-routes-content');
            
            // Initialize hotspots infinite scroll
            if (typeof initHotspotsInfiniteScroll === 'function') {
                initHotspotsInfiniteScroll();
            }
        });
    </script>
}

@section SidebarRight {
    <partial name="~/Views/Community/Maps/_MapsSidebar.cshtml" />
}
