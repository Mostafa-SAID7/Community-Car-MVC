@using Microsoft.Extensions.Localization
@model CommunityCar.Application.Features.Maps.DTOs.MapsSearchResponse
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PointsOfInterest"];
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
}

<div class="space-y-8 animate-in fade-in duration-700">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tight">@Localizer["PointsOfInterest"]</h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">@Localizer["DiscoverLocations"]</p>
        </div>
        <div class="flex items-center gap-3">
            <a href="/maps" class="inline-flex items-center gap-2.5 px-6 py-2.5 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95">
                <i data-lucide="map" class="w-4 h-4"></i>
                @Localizer["MapView"]
            </a>
            <button type="button" class="inline-flex items-center gap-2.5 px-6 py-2.5 bg-primary text-primary-foreground hover:bg-primary/90 rounded-xl text-xs font-black uppercase tracking-widest transition-all shadow-glow-primary active:scale-95" data-bs-toggle="modal" data-bs-target="#addPOIModal">
                <i data-lucide="plus" class="w-4 h-4"></i>
                @Localizer["AddLocation"]
            </button>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
        <form method="get" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-5 gap-4">
            <div class="md:col-span-2 relative group">
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="w-full bg-background border border-border px-10 py-2.5 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" placeholder="@Localizer["SearchPlaceholder"]">
                <i data-lucide="search" class="absolute left-3.5 top-1/2 -translate-y-1/2 w-4 h-4 text-muted-foreground group-focus-within:text-primary transition-colors"></i>
            </div>
            
            <div>
                <select name="type" class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold focus:ring-4 focus:ring-primary/10 transition-all outline-none appearance-none">
                    <option value="">@Localizer["AllTypes"]</option>
                    @{
                        var selectedType = ViewBag.Type?.ToString();
                    }
                    <option value="1" selected="@(selectedType == "1")">@Localizer["AutoRepairShop"]</option>
                    <option value="2" selected="@(selectedType == "2")">@Localizer["CarDealership"]</option>
                    <option value="3" selected="@(selectedType == "3")">@Localizer["GasStation"]</option>
                    <option value="4" selected="@(selectedType == "4")">@Localizer["ChargingStation"]</option>
                    <option value="5" selected="@(selectedType == "5")">@Localizer["CarWash"]</option>
                    <option value="6" selected="@(selectedType == "6")">@Localizer["TireShop"]</option>
                    <option value="7" selected="@(selectedType == "7")">@Localizer["AutoPartsStore"]</option>
                    <option value="10" selected="@(selectedType == "10")">@Localizer["MeetupPoint"]</option>
                    <option value="12" selected="@(selectedType == "12")">@Localizer["RaceTrack"]</option>
                </select>
            </div>
            
            <div>
                <select name="category" class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold focus:ring-4 focus:ring-primary/10 transition-all outline-none appearance-none">
                    <option value="">@Localizer["AllCategories"]</option>
                    @{
                        var selectedCategory = ViewBag.Category?.ToString();
                    }
                    <option value="1" selected="@(selectedCategory == "1")">@Localizer["Automotive"]</option>
                    <option value="2" selected="@(selectedCategory == "2")">@Localizer["Community"]</option>
                    <option value="3" selected="@(selectedCategory == "3")">@Localizer["Event"]</option>
                    <option value="5" selected="@(selectedCategory == "5")">@Localizer["Recreation"]</option>
                </select>
            </div>
            
            <button type="submit" class="bg-primary text-primary-foreground px-6 py-2.5 rounded-xl text-xs font-black uppercase tracking-widest shadow-lg shadow-primary/20 hover:opacity-90 active:scale-95 transition-all flex items-center justify-center gap-2">
                <i data-lucide="filter" class="w-3.5 h-3.5"></i>
                @Localizer["Filter"]
            </button>
        </form>
        
        <div class="flex flex-wrap gap-4 mt-6 pt-4 border-t border-border/40">
            <label class="flex items-center gap-2 cursor-pointer group">
                <input type="checkbox" name="isVerified" checked="@(ViewBag.IsVerified == "true")" class="w-4 h-4 rounded border-border text-primary focus:ring-primary/20">
                <span class="text-xs font-black uppercase tracking-widest text-muted-foreground group-hover:text-foreground transition-colors">@Localizer["VerifiedOnly"]</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer group">
                <input type="checkbox" name="isOpen24Hours" checked="@(ViewBag.IsOpen24Hours == "true")" class="w-4 h-4 rounded border-border text-primary focus:ring-primary/20">
                <span class="text-xs font-black uppercase tracking-widest text-muted-foreground group-hover:text-foreground transition-colors">@Localizer["Open24Hours"]</span>
            </label>
        </div>
    </div>

    <!-- Results -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
        <div class="p-6 border-b border-border/50 bg-muted/20">
            <div class="flex items-center justify-between">
                <h3 class="text-lg font-black text-foreground tracking-tight">
                    @string.Format(Localizer["LocationsFound"].Value, Model.TotalCount)
                </h3>
                <div class="flex items-center gap-2">
                    <select class="bg-background border border-border px-3 py-1.5 rounded-lg text-xs font-bold focus:ring-2 focus:ring-primary/20 transition-all outline-none appearance-none">
                        <option>@Localizer["SortByDistance"]</option>
                        <option>@Localizer["SortByRating"]</option>
                        <option>@Localizer["SortByName"]</option>
                        <option>@Localizer["SortByNewest"]</option>
                    </select>
                </div>
            </div>
        </div>
        
        </div>
        
        <div id="poi-list-skeleton" class="hidden divide-y divide-border/30">
             @for (int i = 0; i < 5; i++)
             {
                 <div class="p-6">
                     <div class="flex items-start gap-4">
                         <div class="w-16 h-16 rounded-2xl bg-muted animate-pulse"></div>
                         <div class="flex-1 space-y-2">
                             <div class="h-6 bg-muted rounded w-1/3 animate-pulse"></div>
                             <div class="h-4 bg-muted rounded w-2/3 animate-pulse"></div>
                         </div>
                     </div>
                 </div>
             }
         </div>

        <div id="poi-list-content">
        @if (Model.Items.Any())
        {
            <div class="divide-y divide-border/30">
                @foreach (var poi in Model.Items)
                {
                    <div class="p-6 hover:bg-muted/20 transition-all group cursor-pointer" onclick="window.location.href='/maps/poi/@poi.Id'">
                        <div class="flex items-start gap-4">
                            <div class="w-16 h-16 rounded-2xl bg-primary/10 flex items-center justify-center text-primary border border-primary/20 shrink-0 group-hover:scale-105 transition-transform">
                                <i data-lucide="map-pin" class="w-8 h-8"></i>
                            </div>
                            
                            <div class="flex-1 min-w-0">
                                <div class="flex items-start justify-between gap-4 mb-2">
                                    <div class="flex-1">
                                        @{
                                            var displayName = isArabic && !string.IsNullOrEmpty(poi.NameAr) ? poi.NameAr : poi.Name;
                                            var displayDescription = isArabic && !string.IsNullOrEmpty(poi.DescriptionAr) ? poi.DescriptionAr : poi.Description;
                                            var displayAddress = isArabic && !string.IsNullOrEmpty(poi.AddressAr) ? poi.AddressAr : poi.Address;
                                        }
                                        <h4 class="text-lg font-black text-foreground leading-tight tracking-tight group-hover:text-primary transition-colors">@displayName</h4>
                                        <p class="text-sm text-muted-foreground font-medium mt-1 line-clamp-2">@displayDescription</p>
                                    </div>
                                    
                                    <div class="text-right shrink-0">
                                        @if (poi.AverageRating > 0)
                                        {
                                            <div class="flex items-center gap-1 mb-1">
                                                <i data-lucide="star" class="w-4 h-4 text-amber-500 fill-current"></i>
                                                <span class="text-sm font-bold text-foreground">@poi.AverageRating.ToString("F1")</span>
                                                <span class="text-xs text-muted-foreground">(@poi.ReviewCount)</span>
                                            </div>
                                        }
                                        @if (poi.DistanceKm.HasValue)
                                        {
                                            <p class="text-xs text-muted-foreground">@string.Format(Localizer["KmAway"].Value, poi.DistanceKm.Value.ToString("F1"))</p>
                                        }
                                    </div>
                                </div>
                                
                                <div class="flex items-center gap-4 mb-3">
                                    @if (!string.IsNullOrEmpty(displayAddress))
                                    {
                                        <div class="flex items-center gap-1.5 text-xs text-muted-foreground">
                                            <i data-lucide="map-pin" class="w-3 h-3"></i>
                                            <span>@displayAddress</span>
                                        </div>
                                    }
                                    
                                    <div class="flex items-center gap-1.5 text-xs text-muted-foreground">
                                        <i data-lucide="eye" class="w-3 h-3"></i>
                                        <span>@string.Format(Localizer["Views"].Value, poi.ViewCount)</span>
                                    </div>
                                    
                                    <div class="flex items-center gap-1.5 text-xs text-muted-foreground">
                                        <i data-lucide="check-circle" class="w-3 h-3"></i>
                                        <span>@string.Format(Localizer["CheckInsCount"].Value, poi.CheckInCount)</span>
                                    </div>
                                </div>
                                
                                <div class="flex flex-wrap items-center gap-2">
                                    @if (poi.IsVerified)
                                    {
                                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-green-500/10 text-green-600 rounded-md text-xs font-bold border border-green-500/20">
                                            <i data-lucide="shield-check" class="w-3 h-3"></i>
                                            @Localizer["Verified"]
                                        </span>
                                    }
                                    
                                    @if (poi.IsOpen24Hours)
                                    {
                                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-blue-500/10 text-blue-600 rounded-md text-xs font-bold border border-blue-500/20">
                                            <i data-lucide="clock" class="w-3 h-3"></i>
                                            24/7
                                        </span>
                                    }
                                    
                                    @if (poi.IsTemporarilyClosed)
                                    {
                                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-red-500/10 text-red-600 rounded-md text-xs font-bold border border-red-500/20">
                                            <i data-lucide="x-circle" class="w-3 h-3"></i>
                                            @Localizer["Closed"]
                                        </span>
                                    }
                                    
                                    <span class="inline-flex items-center gap-1 px-2 py-1 bg-muted/30 text-muted-foreground rounded-md text-xs font-bold">
                                        <i data-lucide="tag" class="w-3 h-3"></i>
                                        @poi.Type.ToString().Replace("_", " ")
                                    </span>
                                    
                                    @if (poi.Services.Any())
                                    {
                                        @foreach (var service in poi.Services.Take(2))
                                        {
                                            <span class="px-2 py-1 bg-primary/10 text-primary rounded-md text-xs font-medium border border-primary/20">@service</span>
                                        }
                                        @if (poi.Services.Count > 2)
                                        {
                                            <span class="text-xs text-muted-foreground">+@(poi.Services.Count - 2) more</span>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="p-6 border-t border-border/50 bg-muted/10">
                    <div class="flex items-center justify-between">
                        <p class="text-sm text-muted-foreground">
                            Showing @((Model.Page - 1) * Model.PageSize + 1) to @Math.Min(Model.Page * Model.PageSize, Model.TotalCount) of @Model.TotalCount results
                        </p>
                        
                        <div class="flex items-center gap-2">
                            @if (Model.HasPreviousPage)
                            {
                                <a href="?page=@(Model.Page - 1)@(ViewBag.QueryString)" class="px-3 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-lg text-xs font-bold transition-all">
                                    <i data-lucide="chevron-left" class="w-4 h-4"></i>
                                </a>
                            }
                            
                            @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                            {
                                <a href="?page=@i@(ViewBag.QueryString)" class="px-3 py-2 @(i == Model.Page ? "bg-primary text-primary-foreground" : "bg-background border border-border hover:border-primary hover:text-primary") rounded-lg text-xs font-bold transition-all">
                                    @i
                                </a>
                            }
                            
                            @if (Model.HasNextPage)
                            {
                                <a href="?page=@(Model.Page + 1)@(ViewBag.QueryString)" class="px-3 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-lg text-xs font-bold transition-all">
                                    <i data-lucide="chevron-right" class="w-4 h-4"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="p-12 text-center">
                <div class="w-16 h-16 rounded-full bg-muted/20 flex items-center justify-center mx-auto mb-4">
                    <i data-lucide="map-pin" class="w-8 h-8 text-muted-foreground/50"></i>
                </div>
                <h3 class="text-lg font-bold text-foreground mb-2">@Localizer["NoLocationsFound"]</h3>
                <p class="text-muted-foreground mb-6">@Localizer["NoLocationsSubtitle"]</p>
                <button type="button" class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-primary-foreground hover:bg-primary/90 rounded-xl text-sm font-bold transition-all" data-bs-toggle="modal" data-bs-target="#addPOIModal">
                    <i data-lucide="plus" class="w-4 h-4"></i>
                    @Localizer["AddNewLocation"]
                </button>
            </div>
        }
        </div>
    </div>
</div>
    </div>
</div>

<!-- Add POI Modal -->
<div class="modal fade" id="addPOIModal" tabindex="-1" aria-labelledby="addPOIModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content bg-card border border-border rounded-2xl shadow-2xl">
            <div class="modal-header border-b border-border/30 p-6">
                <h5 class="modal-title text-xl font-black text-foreground tracking-tight" id="addPOIModalLabel">Add New Location</h5>
                <button type="button" class="inline-flex items-center justify-center w-8 h-8 rounded-xl bg-background border border-border hover:border-red-500 hover:text-red-600 transition-all" data-bs-dismiss="modal" aria-label="Close">
                    <i data-lucide="x" class="w-4 h-4"></i>
                </button>
            </div>
            <form id="addPOIForm">
                <div class="modal-body p-6 space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="poiName" class="block text-sm font-black uppercase tracking-widest text-foreground mb-2">Name *</label>
                            <input type="text" class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" id="poiName" name="name" required>
                        </div>
                        <div>
                            <label for="poiTypeModal" class="block text-sm font-black uppercase tracking-widest text-foreground mb-2">Type *</label>
                            <div class="relative">
                                <select class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none appearance-none" id="poiTypeModal" name="type" required>
                                    <option value="">Select Type</option>
                                    <option value="1">Auto Repair Shop</option>
                                    <option value="2">Car Dealership</option>
                                    <option value="3">Gas Station</option>
                                    <option value="4">Charging Station</option>
                                    <option value="5">Car Wash</option>
                                    <option value="6">Tire Shop</option>
                                    <option value="7">Auto Parts Store</option>
                                    <option value="10">Meetup Point</option>
                                    <option value="12">Race Track</option>
                                </select>
                                <i data-lucide="chevron-down" class="absolute right-4 top-1/2 -translate-y-1/2 w-4 h-4 text-muted-foreground pointer-events-none"></i>
                            </div>
                        </div>
                    </div>
                    <div>
                        <label for="poiDescription" class="block text-sm font-black uppercase tracking-widest text-foreground mb-2">Description *</label>
                        <textarea class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none resize-none" id="poiDescription" name="description" rows="3" required></textarea>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="poiLatitude" class="block text-sm font-black uppercase tracking-widest text-foreground mb-2">Latitude *</label>
                            <input type="number" class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" id="poiLatitude" name="latitude" step="any" required>
                        </div>
                        <div>
                            <label for="poiLongitude" class="block text-sm font-black uppercase tracking-widest text-foreground mb-2">Longitude *</label>
                            <input type="number" class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" id="poiLongitude" name="longitude" step="any" required>
                        </div>
                    </div>
                    <div>
                        <label for="poiAddress" class="block text-sm font-black uppercase tracking-widest text-foreground mb-2">Address</label>
                        <input type="text" class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" id="poiAddress" name="address">
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="poiPhone" class="block text-sm font-black uppercase tracking-widest text-foreground mb-2">Phone Number</label>
                            <input type="tel" class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" id="poiPhone" name="phoneNumber">
                        </div>
                        <div>
                            <label for="poiWebsite" class="block text-sm font-black uppercase tracking-widest text-foreground mb-2">Website</label>
                            <input type="url" class="w-full bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" id="poiWebsite" name="website">
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-t border-border/30 p-6 flex gap-4 justify-end">
                    <button type="button" class="inline-flex items-center gap-2 px-6 py-3 bg-background border border-border hover:border-muted-foreground hover:text-muted-foreground rounded-xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95" data-bs-dismiss="modal">
                        <i data-lucide="x" class="w-4 h-4"></i>
                        Cancel
                    </button>
                    <button type="button" class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-primary-foreground hover:bg-primary/90 rounded-xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-primary/20 active:scale-95" onclick="submitPOI()">
                        <i data-lucide="map-pin" class="w-4 h-4"></i>
                        Add Location
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/maps.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Skeleton.initPageLoad('poi-list-skeleton', 'poi-list-content');
            
            // Initialize Lucide icons
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        });
    </script>
}