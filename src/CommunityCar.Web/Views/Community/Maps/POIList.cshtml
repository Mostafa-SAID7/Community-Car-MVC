@model CommunityCar.Application.Features.Maps.DTOs.MapsSearchResponse
@{
    ViewData["Title"] = "Points of Interest";
}

<div class="space-y-8 animate-in fade-in duration-700">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tight">Points of Interest</h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">Discover automotive locations and community spots</p>
        </div>
        <div class="flex items-center gap-3">
            <a href="/maps" class="inline-flex items-center gap-2.5 px-6 py-2.5 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95">
                <i data-lucide="map" class="w-4 h-4"></i>
                Map View
            </a>
            <button type="button" class="inline-flex items-center gap-2.5 px-6 py-2.5 bg-primary text-primary-foreground hover:bg-primary/90 rounded-xl text-xs font-black uppercase tracking-widest transition-all shadow-lg shadow-primary/20 active:scale-95" data-bs-toggle="modal" data-bs-target="#addPOIModal">
                <i data-lucide="plus" class="w-4 h-4"></i>
                Add Location
            </button>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
        <form method="get" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-5 gap-4">
            <div class="md:col-span-2 relative group">
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="w-full bg-background border border-border px-10 py-2.5 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" placeholder="Search locations...">
                <i data-lucide="search" class="absolute left-3.5 top-1/2 -translate-y-1/2 w-4 h-4 text-muted-foreground group-focus-within:text-primary transition-colors"></i>
            </div>
            
            <div>
                <!select name="type" class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold focus:ring-4 focus:ring-primary/10 transition-all outline-none appearance-none">
                    <!option value="">All Types</!option>
                    @{
                        var selectedType = ViewBag.Type?.ToString();
                    }
                    <!option value="1" @(selectedType == "1" ? "selected" : "")>Auto Repair Shop</!option>
                    <!option value="2" @(selectedType == "2" ? "selected" : "")>Car Dealership</!option>
                    <!option value="3" @(selectedType == "3" ? "selected" : "")>Gas Station</!option>
                    <!option value="4" @(selectedType == "4" ? "selected" : "")>Charging Station</!option>
                    <!option value="5" @(selectedType == "5" ? "selected" : "")>Car Wash</!option>
                    <!option value="6" @(selectedType == "6" ? "selected" : "")>Tire Shop</!option>
                    <!option value="7" @(selectedType == "7" ? "selected" : "")>Auto Parts Store</!option>
                    <!option value="10" @(selectedType == "10" ? "selected" : "")>Meetup Point</!option>
                    <!option value="12" @(selectedType == "12" ? "selected" : "")>Race Track</!option>
                </!select>
            </div>
            
            <div>
                <!select name="category" class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold focus:ring-4 focus:ring-primary/10 transition-all outline-none appearance-none">
                    <!option value="">All Categories</!option>
                    @{
                        var selectedCategory = ViewBag.Category?.ToString();
                    }
                    <!option value="1" @(selectedCategory == "1" ? "selected" : "")>Automotive</!option>
                    <!option value="2" @(selectedCategory == "2" ? "selected" : "")>Community</!option>
                    <!option value="3" @(selectedCategory == "3" ? "selected" : "")>Event</!option>
                    <!option value="5" @(selectedCategory == "5" ? "selected" : "")>Recreation</!option>
                </!select>
            </div>
            
            <button type="submit" class="bg-primary text-primary-foreground px-6 py-2.5 rounded-xl text-xs font-black uppercase tracking-widest shadow-lg shadow-primary/20 hover:opacity-90 active:scale-95 transition-all flex items-center justify-center gap-2">
                <i data-lucide="filter" class="w-3.5 h-3.5"></i>
                Filter
            </button>
        </form>
        
        <div class="flex flex-wrap gap-4 mt-6 pt-4 border-t border-border/40">
            <label class="flex items-center gap-2 cursor-pointer group">
                <input type="checkbox" name="isVerified" @(ViewBag.IsVerified == "true" ? "checked" : "") class="w-4 h-4 rounded border-border text-primary focus:ring-primary/20">
                <span class="text-xs font-black uppercase tracking-widest text-muted-foreground group-hover:text-foreground transition-colors">Verified Only</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer group">
                <input type="checkbox" name="isOpen24Hours" @(ViewBag.IsOpen24Hours == "true" ? "checked" : "") class="w-4 h-4 rounded border-border text-primary focus:ring-primary/20">
                <span class="text-xs font-black uppercase tracking-widest text-muted-foreground group-hover:text-foreground transition-colors">24/7 Only</span>
            </label>
        </div>
    </div>

    <!-- Results -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
        <div class="p-6 border-b border-border/50 bg-muted/20">
            <div class="flex items-center justify-between">
                <h3 class="text-lg font-black text-foreground tracking-tight">
                    @Model.TotalCount Locations Found
                </h3>
                <div class="flex items-center gap-2">
                    <select class="bg-background border border-border px-3 py-1.5 rounded-lg text-xs font-bold focus:ring-2 focus:ring-primary/20 transition-all outline-none appearance-none">
                        <option>Sort by Distance</option>
                        <option>Sort by Rating</option>
                        <option>Sort by Name</option>
                        <option>Sort by Newest</option>
                    </select>
                </div>
            </div>
        </div>
        
        @if (Model.Items.Any())
        {
            <div class="divide-y divide-border/30">
                @foreach (var poi in Model.Items)
                {
                    <div class="p-6 hover:bg-muted/20 transition-all group cursor-pointer" onclick="window.location.href='/maps/poi/@poi.Id'">
                        <div class="flex items-start gap-4">
                            <div class="w-16 h-16 rounded-2xl bg-primary/10 flex items-center justify-center text-primary border border-primary/20 shrink-0 group-hover:scale-105 transition-transform">
                                <i data-lucide="map-pin" class="w-8 h-8"></i>
                            </div>
                            
                            <div class="flex-1 min-w-0">
                                <div class="flex items-start justify-between gap-4 mb-2">
                                    <div class="flex-1">
                                        <h4 class="text-lg font-black text-foreground leading-tight tracking-tight group-hover:text-primary transition-colors">@poi.Name</h4>
                                        <p class="text-sm text-muted-foreground font-medium mt-1 line-clamp-2">@poi.Description</p>
                                    </div>
                                    
                                    <div class="text-right shrink-0">
                                        @if (poi.AverageRating > 0)
                                        {
                                            <div class="flex items-center gap-1 mb-1">
                                                <i data-lucide="star" class="w-4 h-4 text-amber-500 fill-current"></i>
                                                <span class="text-sm font-bold text-foreground">@poi.AverageRating.ToString("F1")</span>
                                                <span class="text-xs text-muted-foreground">(@poi.ReviewCount)</span>
                                            </div>
                                        }
                                        @if (poi.DistanceKm.HasValue)
                                        {
                                            <p class="text-xs text-muted-foreground">@poi.DistanceKm.Value.ToString("F1") km away</p>
                                        }
                                    </div>
                                </div>
                                
                                <div class="flex items-center gap-4 mb-3">
                                    @if (!string.IsNullOrEmpty(poi.Address))
                                    {
                                        <div class="flex items-center gap-1.5 text-xs text-muted-foreground">
                                            <i data-lucide="map-pin" class="w-3 h-3"></i>
                                            <span>@poi.Address</span>
                                        </div>
                                    }
                                    
                                    <div class="flex items-center gap-1.5 text-xs text-muted-foreground">
                                        <i data-lucide="eye" class="w-3 h-3"></i>
                                        <span>@poi.ViewCount views</span>
                                    </div>
                                    
                                    <div class="flex items-center gap-1.5 text-xs text-muted-foreground">
                                        <i data-lucide="check-circle" class="w-3 h-3"></i>
                                        <span>@poi.CheckInCount check-ins</span>
                                    </div>
                                </div>
                                
                                <div class="flex flex-wrap items-center gap-2">
                                    @if (poi.IsVerified)
                                    {
                                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-green-500/10 text-green-600 rounded-md text-xs font-bold border border-green-500/20">
                                            <i data-lucide="shield-check" class="w-3 h-3"></i>
                                            Verified
                                        </span>
                                    }
                                    
                                    @if (poi.IsOpen24Hours)
                                    {
                                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-blue-500/10 text-blue-600 rounded-md text-xs font-bold border border-blue-500/20">
                                            <i data-lucide="clock" class="w-3 h-3"></i>
                                            24/7
                                        </span>
                                    }
                                    
                                    @if (poi.IsTemporarilyClosed)
                                    {
                                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-red-500/10 text-red-600 rounded-md text-xs font-bold border border-red-500/20">
                                            <i data-lucide="x-circle" class="w-3 h-3"></i>
                                            Closed
                                        </span>
                                    }
                                    
                                    <span class="inline-flex items-center gap-1 px-2 py-1 bg-muted/30 text-muted-foreground rounded-md text-xs font-bold">
                                        <i data-lucide="tag" class="w-3 h-3"></i>
                                        @poi.Type.ToString().Replace("_", " ")
                                    </span>
                                    
                                    @if (poi.Services.Any())
                                    {
                                        @foreach (var service in poi.Services.Take(2))
                                        {
                                            <span class="px-2 py-1 bg-primary/10 text-primary rounded-md text-xs font-medium border border-primary/20">@service</span>
                                        }
                                        @if (poi.Services.Count > 2)
                                        {
                                            <span class="text-xs text-muted-foreground">+@(poi.Services.Count - 2) more</span>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="p-6 border-t border-border/50 bg-muted/10">
                    <div class="flex items-center justify-between">
                        <p class="text-sm text-muted-foreground">
                            Showing @((Model.Page - 1) * Model.PageSize + 1) to @Math.Min(Model.Page * Model.PageSize, Model.TotalCount) of @Model.TotalCount results
                        </p>
                        
                        <div class="flex items-center gap-2">
                            @if (Model.HasPreviousPage)
                            {
                                <a href="?page=@(Model.Page - 1)@(ViewBag.QueryString)" class="px-3 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-lg text-xs font-bold transition-all">
                                    <i data-lucide="chevron-left" class="w-4 h-4"></i>
                                </a>
                            }
                            
                            @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                            {
                                <a href="?page=@i@(ViewBag.QueryString)" class="px-3 py-2 @(i == Model.Page ? "bg-primary text-primary-foreground" : "bg-background border border-border hover:border-primary hover:text-primary") rounded-lg text-xs font-bold transition-all">
                                    @i
                                </a>
                            }
                            
                            @if (Model.HasNextPage)
                            {
                                <a href="?page=@(Model.Page + 1)@(ViewBag.QueryString)" class="px-3 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-lg text-xs font-bold transition-all">
                                    <i data-lucide="chevron-right" class="w-4 h-4"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="p-12 text-center">
                <div class="w-16 h-16 rounded-full bg-muted/20 flex items-center justify-center mx-auto mb-4">
                    <i data-lucide="map-pin" class="w-8 h-8 text-muted-foreground/50"></i>
                </div>
                <h3 class="text-lg font-bold text-foreground mb-2">No locations found</h3>
                <p class="text-muted-foreground mb-6">Try adjusting your search criteria or add a new location.</p>
                <button type="button" class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-primary-foreground hover:bg-primary/90 rounded-xl text-sm font-bold transition-all" data-bs-toggle="modal" data-bs-target="#addPOIModal">
                    <i data-lucide="plus" class="w-4 h-4"></i>
                    Add New Location
                </button>
            </div>
        }
    </div>
</div>

<!-- Add POI Modal (reuse from Index.cshtml) -->
<div class="modal fade" id="addPOIModal" tabindex="-1" aria-labelledby="addPOIModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPOIModalLabel">Add New Location</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addPOIForm">
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="poiName" class="form-label">Name *</label>
                            <input type="text" class="form-control" id="poiName" name="name" required>
                        </div>
                        <div class="col-md-6">
                            <label for="poiType" class="form-label">Type *</label>
                            <select class="form-select" id="poiType" name="type" required>
                                <option value="">Select Type</option>
                                <option value="1">Auto Repair Shop</option>
                                <option value="2">Car Dealership</option>
                                <option value="3">Gas Station</option>
                                <option value="4">Charging Station</option>
                                <option value="5">Car Wash</option>
                                <option value="6">Tire Shop</option>
                                <option value="7">Auto Parts Store</option>
                                <option value="10">Meetup Point</option>
                                <option value="12">Race Track</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label for="poiDescription" class="form-label">Description *</label>
                            <textarea class="form-control" id="poiDescription" name="description" rows="3" required></textarea>
                        </div>
                        <div class="col-md-6">
                            <label for="poiLatitude" class="form-label">Latitude *</label>
                            <input type="number" class="form-control" id="poiLatitude" name="latitude" step="any" required>
                        </div>
                        <div class="col-md-6">
                            <label for="poiLongitude" class="form-label">Longitude *</label>
                            <input type="number" class="form-control" id="poiLongitude" name="longitude" step="any" required>
                        </div>
                        <div class="col-12">
                            <label for="poiAddress" class="form-label">Address</label>
                            <input type="text" class="form-control" id="poiAddress" name="address">
                        </div>
                        <div class="col-md-6">
                            <label for="poiPhone" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="poiPhone" name="phoneNumber">
                        </div>
                        <div class="col-md-6">
                            <label for="poiWebsite" class="form-label">Website</label>
                            <input type="url" class="form-control" id="poiWebsite" name="website">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="submitPOI()">Add Location</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/maps.js"></script>
    <script>
        // Initialize Lucide icons
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    </script>
}