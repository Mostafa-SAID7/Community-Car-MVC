@using Microsoft.Extensions.Localization
@model CommunityCar.Application.Features.Maps.ViewModels.RouteVM
@inject IViewLocalizer Localizer
@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
    var displayName = isArabic && !string.IsNullOrEmpty(Model.NameAr) ? Model.NameAr : Model.Name;
    var displaySurfaceType = isArabic && !string.IsNullOrEmpty(Model.SurfaceTypeAr) ? Model.SurfaceTypeAr : Model.SurfaceType;
    var displayBestTimeToVisit = isArabic && !string.IsNullOrEmpty(Model.BestTimeToVisitAr) ? Model.BestTimeToVisitAr : Model.BestTimeToVisit;
    var displaySafetyNotes = isArabic && !string.IsNullOrEmpty(Model.SafetyNotesAr) ? Model.SafetyNotesAr : Model.SafetyNotes;
    var displayCurrentConditions = isArabic && !string.IsNullOrEmpty(Model.CurrentConditionsAr) ? Model.CurrentConditionsAr : Model.CurrentConditions;
    ViewData["Title"] = displayName;
}

<div class="space-y-8 animate-in fade-in duration-700">
    <!-- Skeleton Loader -->
    <div id="route-skeleton" class="hidden space-y-8">
        <skeleton type="Card" class="h-48" />
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2 space-y-6">
                <skeleton type="Card" class="h-64" />
                <skeleton type="Card" class="h-96" />
            </div>
            <div class="space-y-6">
                <skeleton type="Card" />
                <skeleton type="Card" />
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div id="route-content">
    <!-- Route Navigation Strategy -->
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-8 px-2 mb-10">
        <div class="space-y-4">
            <nav class="flex items-center gap-3 text-[10px] font-black uppercase tracking-[0.3em] text-primary mb-6">
                <i data-lucide="route" class="w-3.5 h-3.5 fill-current"></i> @Localizer["RoutePayload"]
            </nav>
            <h1 class="text-5xl font-black text-foreground tracking-tighter leading-none">@displayName</h1>
            <p class="text-sm font-medium text-muted-foreground opacity-70 mt-4 border-l-4 border-primary/20 pl-4 py-1 max-w-2xl">@Model.Type.ToString() â€¢ @Model.DistanceKm.ToString("F1") KM ARCHIVE</p>
        </div>
        
        <div class="flex gap-3">
            <a href="/maps" class="inline-flex items-center justify-center gap-2.5 px-6 py-2.5 bg-background border border-border/50 hover:bg-muted/10 text-foreground text-[10px] font-black uppercase tracking-widest rounded-xl transition-all active:scale-95 group/back">
                <i data-lucide="arrow-left" class="w-4 h-4 group-hover/back:-translate-x-1 transition-transform"></i>
                @Localizer["ReturnToMap"]
            </a>
        </div>
    </div>

    <!-- Route Header & Visual Payload -->
    <div class="relative group mb-12">
        <div class="absolute -inset-1.5 bg-gradient-to-r from-primary/20 via-blue-500/5 to-primary/20 rounded-[3rem] blur-3xl opacity-10 group-hover:opacity-30 transition duration-1000"></div>
        
        <div class="relative bg-card/40 backdrop-blur-2xl border border-border/50 rounded-[2.5rem] shadow-2xl p-8 md:p-12 overflow-hidden">
            <div class="absolute top-0 right-0 w-96 h-96 bg-primary/5 rounded-full blur-3xl -mr-48 -mt-48"></div>
            
            <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-12">
                <div class="flex-1 space-y-8">
                    <div class="flex flex-wrap items-center gap-4">
                        <span class="px-3 py-1.5 rounded-xl bg-blue-500/10 text-blue-500 border border-blue-500/20 text-[8px] font-black uppercase tracking-widest flex items-center gap-1.5">
                            <i data-lucide="trending-up" class="w-3 h-3"></i> @Model.Difficulty.ToString()_DIFF
                        </span>
                        @if (Model.IsScenic)
                        {
                            <span class="px-3 py-1.5 rounded-xl bg-amber-500/10 text-amber-500 border border-amber-500/20 text-[8px] font-black uppercase tracking-widest flex items-center gap-1.5">
                                <i data-lucide="camera" class="w-3 h-3"></i> SCENIC_VISUALS
                            </span>
                        }
                    </div>

                    <div class="flex items-center gap-8">
                        <div class="w-20 h-20 rounded-[2rem] bg-green-500/10 border border-green-500/20 flex items-center justify-center text-green-600 shadow-2xl shadow-green-500/5">
                            <i data-lucide="route" class="w-10 h-10"></i>
                        </div>
                        <div>
                            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40 mb-1">@Localizer["RouteIdentifier"]</div>
                            <div class="text-2xl font-black text-foreground">@displayName</div>
                        </div>
                    </div>
                </div>

                <div class="flex flex-col sm:flex-row items-center gap-4">
                    <button onclick="completeRoute('@Model.Id')" class="inline-flex items-center justify-center px-8 py-3 bg-primary text-primary-foreground hover:bg-primary/90 font-black uppercase tracking-widest rounded-xl transition-all shadow-lg shadow-primary/20 active:scale-95">
                        <i data-lucide="check-circle" class="w-4 h-4 mr-2"></i> @Localizer["MarkComplete"]
                    </button>
                    <button class="inline-flex items-center justify-center px-8 py-3 bg-muted/20 border border-border/50 hover:bg-muted/30 text-foreground font-black uppercase tracking-widest rounded-xl transition-all active:scale-95">
                        <i data-lucide="share-2" class="w-4 h-4 mr-2"></i> @Localizer["Broadcast"]
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Left Column - Main Info -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Route Metrics -->
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
                <h3 class="text-lg font-black text-foreground mb-4 tracking-tight">@Localizer["RouteDetailsTitle"]</h3>
                
                <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                    <div class="text-center">
                        <div class="w-12 h-12 rounded-xl bg-blue-500/10 flex items-center justify-center text-blue-600 mx-auto mb-2">
                            <i data-lucide="map-pin" class="w-6 h-6"></i>
                        </div>
                        <p class="text-2xl font-black text-foreground">@Model.DistanceKm.ToString("F1")</p>
                        <p class="text-xs font-bold uppercase tracking-wider text-muted-foreground">@Localizer["Kilometers"]</p>
                    </div>
                    
                    <div class="text-center">
                        <div class="w-12 h-12 rounded-xl bg-green-500/10 flex items-center justify-center text-green-600 mx-auto mb-2">
                            <i data-lucide="clock" class="w-6 h-6"></i>
                        </div>
                        <p class="text-2xl font-black text-foreground">@string.Format(Localizer["HoursMinutesFormat"].Value, (Model.EstimatedDurationMinutes / 60), (Model.EstimatedDurationMinutes % 60))</p>
                        <p class="text-xs font-bold uppercase tracking-wider text-muted-foreground">@Localizer["Duration"]</p>
                    </div>
                    
                    <div class="text-center">
                        <div class="w-12 h-12 rounded-xl bg-amber-500/10 flex items-center justify-center text-amber-600 mx-auto mb-2">
                            <i data-lucide="star" class="w-6 h-6"></i>
                        </div>
                        <p class="text-2xl font-black text-foreground">@(Model.AverageRating > 0 ? Model.AverageRating.ToString("F1") : "N/A")</p>
                        <p class="text-xs font-bold uppercase tracking-wider text-muted-foreground">@Localizer["Rating"]</p>
                    </div>
                    
                    <div class="text-center">
                        <div class="w-12 h-12 rounded-xl bg-purple-500/10 flex items-center justify-center text-purple-600 mx-auto mb-2">
                            <i data-lucide="users" class="w-6 h-6"></i>
                        </div>
                        <p class="text-2xl font-black text-foreground">@Model.TimesCompleted</p>
                        <p class="text-xs font-bold uppercase tracking-wider text-muted-foreground">@Localizer["Completed"]</p>
                    </div>
                </div>
            </div>

            <!-- Route Characteristics -->
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
                <h3 class="text-lg font-black text-foreground mb-4 tracking-tight">@Localizer["RouteCharacteristics"]</h3>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <h4 class="text-sm font-bold text-foreground mb-3 uppercase tracking-wider">@Localizer["Features"]</h4>
                        <div class="space-y-2">
                            <div class="flex items-center gap-3">
                                <i data-lucide="@(Model.IsScenic ? "check" : "x")" class="w-4 h-4 @(Model.IsScenic ? "text-green-600" : "text-muted-foreground")"></i>
                                <span class="text-sm @(Model.IsScenic ? "text-foreground" : "text-muted-foreground")">@Localizer["ScenicViews"]</span>
                            </div>
                            <div class="flex items-center gap-3">
                                <i data-lucide="@(Model.HasTolls ? "check" : "x")" class="w-4 h-4 @(Model.HasTolls ? "text-red-600" : "text-green-600")"></i>
                                <span class="text-sm @(Model.HasTolls ? "text-foreground" : "text-muted-foreground")">@(Model.HasTolls ? Localizer["HasTolls"].Value : Localizer["NoTolls"].Value)</span>
                            </div>
                            <div class="flex items-center gap-3">
                                <i data-lucide="@(Model.IsOffRoad ? "check" : "x")" class="w-4 h-4 @(Model.IsOffRoad ? "text-orange-600" : "text-muted-foreground")"></i>
                                <span class="text-sm @(Model.IsOffRoad ? "text-foreground" : "text-muted-foreground")">@(Model.IsOffRoad ? Localizer["OffRoadSections"].Value : Localizer["PavedRoads"].Value)</span>
                            </div>
                        </div>
                    </div>
                    
                    <div>
                        <h4 class="text-sm font-bold text-foreground mb-3 uppercase tracking-wider">@Localizer["Details"]</h4>
                        <div class="space-y-2">
                            @if (!string.IsNullOrEmpty(displaySurfaceType))
                            {
                                <div class="flex items-center gap-3">
                                    <i data-lucide="layers" class="w-4 h-4 text-muted-foreground"></i>
                                    <span class="text-sm text-foreground">@displaySurfaceType</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(displayBestTimeToVisit))
                            {
                                <div class="flex items-center gap-3">
                                    <i data-lucide="calendar" class="w-4 h-4 text-muted-foreground"></i>
                                    <span class="text-sm text-foreground">@displayBestTimeToVisit</span>
                                </div>
                            }
                            <div class="flex items-center gap-3">
                                <i data-lucide="trending-up" class="w-4 h-4 text-muted-foreground"></i>
                                <span class="text-sm text-foreground">@string.Format(Localizer["Level"].Value, Model.Difficulty.ToString())</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Safety Information -->
            @if (!string.IsNullOrEmpty(Model.SafetyNotes) || !string.IsNullOrEmpty(Model.CurrentConditions))
            {
                <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
                    <h3 class="text-lg font-black text-foreground mb-4 tracking-tight">@Localizer["SafetyConditions"]</h3>
                    
                    @if (!string.IsNullOrEmpty(displaySafetyNotes))
                    {
                        <div class="mb-4 p-4 bg-amber-500/10 border border-amber-500/20 rounded-xl">
                            <div class="flex items-start gap-3">
                                <i data-lucide="alert-triangle" class="w-5 h-5 text-amber-600 mt-0.5 shrink-0"></i>
                                <div>
                                    <h4 class="font-bold text-amber-600 mb-1">@Localizer["SafetyNotes"]</h4>
                                    <p class="text-sm text-foreground">@displaySafetyNotes</p>
                                </div>
                            </div>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(displayCurrentConditions))
                    {
                        <div class="p-4 bg-blue-500/10 border border-blue-500/20 rounded-xl">
                            <div class="flex items-start gap-3">
                                <i data-lucide="info" class="w-5 h-5 text-blue-600 mt-0.5 shrink-0"></i>
                                <div>
                                    <h4 class="font-bold text-blue-600 mb-1">@Localizer["CurrentConditions"]</h4>
                                    <p class="text-sm text-foreground">@displayCurrentConditions</p>
                                    @if (Model.LastConditionUpdate.HasValue)
                                    {
                                        <p class="text-xs text-muted-foreground mt-1">@Localizer["Updated"] @Model.LastConditionUpdate.Value.ToString("MMM dd, yyyy")</p>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }

            <!-- Waypoints -->
            @if (Model.Waypoints.Any())
            {
                <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
                    <h3 class="text-lg font-black text-foreground mb-4 tracking-tight">@Localizer["RouteWaypoints"]</h3>
                    
                    <div class="space-y-4">
                        @foreach (var waypoint in Model.Waypoints.OrderBy(w => w.Order))
                        {
                            <div class="flex items-start gap-4 p-4 bg-muted/20 rounded-xl border border-border">
                                <div class="w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center text-primary font-bold text-sm shrink-0">
                                    @waypoint.Order
                                </div>
                                <div class="flex-1">
                                    @{
                                        var waypointName = isArabic && !string.IsNullOrEmpty(waypoint.NameAr) ? waypoint.NameAr : waypoint.Name;
                                        var waypointDesc = isArabic && !string.IsNullOrEmpty(waypoint.DescriptionAr) ? waypoint.DescriptionAr : waypoint.Description;
                                    }
                                    @if (!string.IsNullOrEmpty(waypointName))
                                    {
                                        <h4 class="font-bold text-foreground mb-1">@waypointName</h4>
                                    }
                                    @if (!string.IsNullOrEmpty(waypointDesc))
                                    {
                                        <p class="text-sm text-muted-foreground mb-2">@waypointDesc</p>
                                    }
                                    <p class="text-xs text-muted-foreground">@waypoint.Latitude.ToString("F4"), @waypoint.Longitude.ToString("F4")</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Tags -->
            @if (Model.Tags.Any())
            {
                <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
                    <h3 class="text-lg font-black text-foreground mb-4 tracking-tight">@Localizer["Tags"]</h3>
                    
                    <div class="flex flex-wrap gap-2">
                        @foreach (var tag in Model.Tags)
                        {
                            <span class="px-3 py-1.5 bg-muted/30 text-foreground rounded-lg text-sm font-medium border border-border">#@tag</span>
                        }
                    </div>
                </div>
            }

            <!-- Images -->
            @if (Model.ImageUrls.Any())
            {
                <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
                    <h3 class="text-lg font-black text-foreground mb-4 tracking-tight">@Localizer["RoutePhotos"]</h3>
                    
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                        @foreach (var imageUrl in Model.ImageUrls)
                        {
                            <div class="aspect-video rounded-xl overflow-hidden bg-muted/20 border border-border">
                                <img src="@imageUrl" alt="@Model.Name" class="w-full h-full object-cover hover:scale-105 transition-transform cursor-pointer" />
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Right Column - Stats & Actions -->
        <div class="space-y-6">
            <!-- Stats -->
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
                <h3 class="text-lg font-black text-foreground mb-4 tracking-tight">@Localizer["Statistics"]</h3>
                
                <div class="space-y-4">
                    <div class="flex items-center justify-between">
                        <span class="text-muted-foreground">@Localizer["Rating"]</span>
                        <div class="flex items-center gap-2">
                            @if (Model.AverageRating > 0)
                            {
                                <div class="flex items-center">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i data-lucide="star" class="w-4 h-4 @(i <= Model.AverageRating ? "text-amber-500 fill-current" : "text-muted-foreground/30")"></i>
                                    }
                                </div>
                                <span class="text-sm font-medium">@Model.AverageRating.ToString("F1")</span>
                                <span class="text-xs text-muted-foreground">(@Model.ReviewCount)</span>
                            }
                            else
                            {
                                <span class="text-sm text-muted-foreground">@Localizer["NoRatings"]</span>
                            }
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <span class="text-muted-foreground">@Localizer["Completed"]</span>
                        <span class="font-medium">@Model.TimesCompleted.ToString("N0")</span>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <span class="text-muted-foreground">@Localizer["Distance"]</span>
                        <span class="font-medium">@Model.DistanceKm.ToString("F1") @Localizer["Kilometers"]</span>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <span class="text-muted-foreground">@Localizer["Duration"]</span>
                        <span class="font-medium">@string.Format(Localizer["HoursMinutesFormat"].Value, (Model.EstimatedDurationMinutes / 60), (Model.EstimatedDurationMinutes % 60))</span>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <span class="text-muted-foreground">@Localizer["Added"]</span>
                        <span class="text-sm text-muted-foreground">@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
                <h3 class="text-lg font-black text-foreground mb-4 tracking-tight">@Localizer["QuickActions"]</h3>
                
                <div class="space-y-3">
                    <button type="button" class="w-full flex items-center gap-3 px-4 py-3 bg-primary/10 text-primary hover:bg-primary/20 rounded-xl transition-all border border-primary/20" onclick="completeRoute('@Model.Id')">
                        <i data-lucide="check-circle" class="w-5 h-5"></i>
                        <span class="font-medium">@Localizer["MarkAsCompleted"]</span>
                    </button>
                    
                    <button type="button" class="w-full flex items-center gap-3 px-4 py-3 bg-muted/20 text-foreground hover:bg-muted/30 rounded-xl transition-all border border-border">
                        <i data-lucide="navigation" class="w-5 h-5"></i>
                        <span class="font-medium">@Localizer["StartNavigation"]</span>
                    </button>
                    
                    <button type="button" class="w-full flex items-center gap-3 px-4 py-3 bg-muted/20 text-foreground hover:bg-muted/30 rounded-xl transition-all border border-border">
                        <i data-lucide="download" class="w-5 h-5"></i>
                        <span class="font-medium">@Localizer["DownloadGPX"]</span>
                    </button>
                    
                    <button type="button" class="w-full flex items-center gap-3 px-4 py-3 bg-muted/20 text-foreground hover:bg-muted/30 rounded-xl transition-all border border-border">
                        <i data-lucide="bookmark" class="w-5 h-5"></i>
                        <span class="font-medium">@Localizer["SaveRoute"]</span>
                    </button>
                </div>
            </div>

            <!-- Creator Info -->
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
                <h3 class="text-lg font-black text-foreground mb-4 tracking-tight">@Localizer["RouteCreator"]</h3>
                
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary font-bold">
                        @(Model.CreatedByName?.FirstOrDefault() ?? 'U')
                    </div>
                    <div>
                        <p class="font-medium text-foreground">@(Model.CreatedByName ?? Localizer["UnknownUser"].Value)</p>
                        <p class="text-sm text-muted-foreground">@Localizer["RouteCreator"]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div> <!-- End route-content -->
</div>

@section Scripts {
    <script src="~/js/maps.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Skeleton.initPageLoad('route-skeleton', 'route-content');
        });
        
        // Initialize Lucide icons
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
        
        function completeRoute(routeId) {
            if (confirm('Mark this route as completed? This will add it to your completed routes list.')) {
                fetch(`/maps/routes/${routeId}/complete`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                })
                .then(response => {
                    if (response.ok) {
                        showToast('Route marked as completed! Great job!', 'success');
                        // Optionally refresh the page to update completion count
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        showToast('Error marking route as completed. Please try again.', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error completing route:', error);
                    showToast('Error marking route as completed. Please try again.', 'error');
                });
            }
        }
    </script>
}