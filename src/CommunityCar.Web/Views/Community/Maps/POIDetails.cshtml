@using Microsoft.Extensions.Localization
@model CommunityCar.Application.Features.Community.Maps.ViewModels.PointOfInterestVM
@inject IViewLocalizer Localizer
@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
    var displayName = isArabic && !string.IsNullOrEmpty(Model.NameAr) ? Model.NameAr : Model.Name;
    var displayAddress = isArabic && !string.IsNullOrEmpty(Model.AddressAr) ? Model.AddressAr : Model.Address;
    ViewData["Title"] = displayName;
}

<div class="space-y-8 animate-in fade-in duration-700">
    <!-- Skeleton Loader -->
    <div id="poi-skeleton" class="hidden space-y-8">
        <skeleton type="Card" class="h-48" />
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2 space-y-6">
                <skeleton type="Card" class="h-64" />
                <skeleton type="Card" class="h-64" />
            </div>
            <div class="space-y-6">
                <skeleton type="Card" />
                <skeleton type="Card" />
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div id="poi-content">
    <!-- Maps Navigation Strategy -->
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-8 px-2 mb-10">
        <div class="space-y-4">
            <nav class="flex items-center gap-3 text-[10px] font-black uppercase tracking-[0.3em] text-primary mb-6">
                <i data-lucide="map-pin" class="w-3.5 h-3.5 fill-current"></i> @Localizer["POIPayload"]
            </nav>
            <h1 class="text-5xl font-black text-foreground tracking-tighter leading-none">@displayName</h1>
            <p class="text-sm font-medium text-muted-foreground opacity-70 mt-4 border-l-4 border-primary/20 pl-4 py-1 max-w-2xl">@Model.Type.ToString().Replace("_", " ") â€¢ @Localizer["CoordinateLock"]: @Model.Latitude.ToString("F4"), @Model.Longitude.ToString("F4")</p>
        </div>
        
        <div class="flex gap-3">
            <a asp-controller="Maps" asp-action="Index" asp-route-culture="@System.Globalization.CultureInfo.CurrentCulture.Name" class="inline-flex items-center justify-center gap-2.5 px-6 py-2.5 bg-background border border-border/50 hover:bg-muted/10 text-foreground text-[10px] font-black uppercase tracking-widest rounded-xl transition-all active:scale-95 group/back">
                <i data-lucide="arrow-left" class="w-4 h-4 group-hover/back:-translate-x-1 transition-transform"></i>
                @Localizer["ReturnToMap"]
            </a>
        </div>
    </div>

    <!-- POI Header & Visual Payload -->
    <div class="relative group mb-12">
        <div class="absolute -inset-1.5 bg-gradient-to-r from-primary/20 via-blue-500/5 to-primary/20 rounded-[3rem] blur-3xl opacity-10 group-hover:opacity-30 transition duration-1000"></div>
        
        <div class="relative bg-card/40 backdrop-blur-2xl border border-border/50 rounded-[2.5rem] shadow-2xl p-8 md:p-12 overflow-hidden">
            <div class="absolute top-0 right-0 w-96 h-96 bg-primary/5 rounded-full blur-3xl -mr-48 -mt-48"></div>
            
            <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-12">
                <div class="flex-1 space-y-8">
                    <div class="flex flex-wrap items-center gap-4">
                        @if (Model.IsVerified)
                        {
                            <span class="px-3 py-1.5 rounded-xl bg-green-500/10 text-green-500 border border-green-500/20 text-[8px] font-black uppercase tracking-widest flex items-center gap-1.5">
                                <i data-lucide="shield-check" class="w-3 h-3"></i> VERIFIED_LOCATION
                            </span>
                        }
                        @if (Model.IsOpen24Hours)
                        {
                            <span class="px-3 py-1.5 rounded-xl bg-blue-500/10 text-blue-500 border border-blue-500/20 text-[8px] font-black uppercase tracking-widest flex items-center gap-1.5">
                                <i data-lucide="clock" class="w-3 h-3"></i> 24_7_STATUS
                            </span>
                        }
                    </div>

                    <div class="flex items-center gap-8">
                        <div class="w-20 h-20 rounded-[2rem] bg-primary/10 border border-primary/20 flex items-center justify-center text-primary shadow-2xl shadow-primary/5">
                            <i data-lucide="map-pin" class="w-10 h-10"></i>
                        </div>
                        <div>
                            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40 mb-1">@Localizer["PrimaryIdentifier"]</div>
                            <div class="text-2xl font-black text-foreground">@displayName</div>
                        </div>
                    </div>
                </div>

                <div class="flex flex-col sm:flex-row items-center gap-4">
                    @if (Model.AllowCheckIns)
                    {
                        <button onclick="checkInToLocation('@Model.Id')" class="inline-flex items-center justify-center px-8 py-3 bg-primary text-primary-foreground hover:bg-primary/90 font-black uppercase tracking-widest rounded-xl transition-all shadow-lg shadow-primary/20 active:scale-95">
                            <i data-lucide="check-circle" class="w-4 h-4 mr-2"></i> @Localizer["CheckIn"]
                        </button>
                    }
                    <button class="inline-flex items-center justify-center px-8 py-3 bg-muted/20 border border-border/50 hover:bg-muted/30 text-foreground font-black uppercase tracking-widest rounded-xl transition-all active:scale-95">
                        <i data-lucide="share-2" class="w-4 h-4 mr-2"></i> @Localizer["Broadcast"]
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Left Column - Main Info -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Location & Contact -->
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
                <h3 class="text-lg font-black text-foreground mb-4 tracking-tight">@Localizer["LocationContact"]</h3>
                
                <div class="space-y-4">
                    @if (!string.IsNullOrEmpty(displayAddress))
                    {
                        <div class="flex items-start gap-3">
                            <i data-lucide="map-pin" class="w-5 h-5 text-muted-foreground mt-0.5 shrink-0"></i>
                            <div>
                                <p class="font-medium text-foreground">@displayAddress</p>
                                <p class="text-sm text-muted-foreground">@Model.Latitude.ToString("F4"), @Model.Longitude.ToString("F4")</p>
                            </div>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        <div class="flex items-center gap-3">
                            <i data-lucide="phone" class="w-5 h-5 text-muted-foreground shrink-0"></i>
                            <a href="tel:@Model.PhoneNumber" class="font-medium text-primary hover:underline">@Model.PhoneNumber</a>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.Website))
                    {
                        <div class="flex items-center gap-3">
                            <i data-lucide="globe" class="w-5 h-5 text-muted-foreground shrink-0"></i>
                            <a href="@Model.Website" target="_blank" class="font-medium text-primary hover:underline">@Localizer["VisitWebsite"]</a>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.OpeningHours))
                    {
                        <div class="flex items-start gap-3">
                            <i data-lucide="clock" class="w-5 h-5 text-muted-foreground mt-0.5 shrink-0"></i>
                            <div>
                                <p class="font-medium text-foreground">@Localizer["Hours"]</p>
                                <p class="text-sm text-muted-foreground">@Model.OpeningHours</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Services & Features -->
            @if (Model.Services.Any() || Model.PaymentMethods.Any() || Model.Amenities.Any())
            {
                <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
                    <h3 class="text-lg font-black text-foreground mb-4 tracking-tight">@Localizer["ServicesFeatures"]</h3>
                    
                    @if (Model.Services.Any())
                    {
                        <div class="mb-6">
                            <h4 class="text-sm font-bold text-foreground mb-3 uppercase tracking-wider">@Localizer["Services"]</h4>
                            <div class="flex flex-wrap gap-2">
                                @foreach (var service in Model.Services)
                                {
                                    <span class="px-3 py-1.5 bg-primary/10 text-primary rounded-lg text-sm font-medium border border-primary/20">@service</span>
                                }
                            </div>
                        </div>
                    }
                    
                    @if (Model.PaymentMethods.Any())
                    {
                        <div class="mb-6">
                            <h4 class="text-sm font-bold text-foreground mb-3 uppercase tracking-wider">@Localizer["PaymentMethods"]</h4>
                            <div class="flex flex-wrap gap-2">
                                @foreach (var method in Model.PaymentMethods)
                                {
                                    <span class="px-3 py-1.5 bg-green-500/10 text-green-600 rounded-lg text-sm font-medium border border-green-500/20">@method</span>
                                }
                            </div>
                        </div>
                    }
                    
                    @if (Model.Amenities.Any())
                    {
                        <div>
                            <h4 class="text-sm font-bold text-foreground mb-3 uppercase tracking-wider">@Localizer["Amenities"]</h4>
                            <div class="flex flex-wrap gap-2">
                                @foreach (var amenity in Model.Amenities)
                                {
                                    <span class="px-3 py-1.5 bg-blue-500/10 text-blue-600 rounded-lg text-sm font-medium border border-blue-500/20">@amenity</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            }

            <!-- Event Details (if applicable) -->
            @if (Model.EventStartTime.HasValue || Model.EventEndTime.HasValue)
            {
                <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
                    <h3 class="text-lg font-black text-foreground mb-4 tracking-tight">@Localizer["EventDetails"]</h3>
                    
                    <div class="space-y-4">
                        @if (Model.EventStartTime.HasValue)
                        {
                            <div class="flex items-center gap-3">
                                <i data-lucide="calendar" class="w-5 h-5 text-muted-foreground shrink-0"></i>
                                <div>
                                    <p class="font-medium text-foreground">@Localizer["StartTime"]</p>
                                    <p class="text-sm text-muted-foreground">@Model.EventStartTime.Value.ToString("MMM dd, yyyy h:mm tt")</p>
                                </div>
                            </div>
                        }
                        
                        @if (Model.EventEndTime.HasValue)
                        {
                            <div class="flex items-center gap-3">
                                <i data-lucide="calendar-x" class="w-5 h-5 text-muted-foreground shrink-0"></i>
                                <div>
                                    <p class="font-medium text-foreground">@Localizer["EndTime"]</p>
                                    <p class="text-sm text-muted-foreground">@Model.EventEndTime.Value.ToString("MMM dd, yyyy h:mm tt")</p>
                                </div>
                            </div>
                        }
                        
                        @if (Model.MaxAttendees.HasValue)
                        {
                            <div class="flex items-center gap-3">
                                <i data-lucide="users" class="w-5 h-5 text-muted-foreground shrink-0"></i>
                                <div>
                                    <p class="font-medium text-foreground">@Localizer["Capacity"]</p>
                                    <p class="text-sm text-muted-foreground">@string.Format(Localizer["AttendeesFormat"].Value, Model.CurrentAttendees, Model.MaxAttendees)</p>
                                </div>
                            </div>
                        }
                        
                        @if (Model.IsEventActive)
                        {
                            <div class="p-4 bg-green-500/10 border border-green-500/20 rounded-xl">
                                <p class="text-green-600 font-medium text-sm">@Localizer["EventActive"]</p>
                            </div>
                        }
                        else if (Model.IsEventUpcoming)
                        {
                            <div class="p-4 bg-blue-500/10 border border-blue-500/20 rounded-xl">
                                <p class="text-blue-600 font-medium text-sm">@Localizer["UpcomingEvent"]</p>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Images -->
            @if (Model.ImageUrls.Any())
            {
                <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
                    <h3 class="text-lg font-black text-foreground mb-4 tracking-tight">@Localizer["Photos"]</h3>
                    
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                        @foreach (var imageUrl in Model.ImageUrls)
                        {
                            <div class="aspect-square rounded-xl overflow-hidden bg-muted/20 border border-border">
                                <img src="@imageUrl" alt="@Model.Name" class="w-full h-full object-cover hover:scale-105 transition-transform cursor-pointer" />
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Reviews Section -->
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-lg font-black text-foreground tracking-tight">@Localizer["Reviews"]</h3>
                    <button type="button" class="inline-flex items-center gap-2 px-4 py-2 bg-primary text-primary-foreground hover:bg-primary/90 rounded-xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-primary/20 active:scale-95" data-bs-toggle="modal" data-bs-target="#addReviewModal">
                        <i data-lucide="plus" class="w-4 h-4"></i>
                        @Localizer["AddReview"]
                    </button>
                </div>

                @if (Model.Reviews.Any())
                {
                    <div class="space-y-6">
                        @foreach (var review in Model.Reviews.Take(5))
                        {
                            <div class="pb-6 border-b border-border/30 last:border-0 last:pb-0">
                                <div class="flex items-start justify-between gap-4 mb-3">
                                    <div class="flex items-center gap-3">
                                        <div class="w-10 h-10 rounded-full bg-muted/20 flex items-center justify-center text-muted-foreground border border-border">
                                            <i data-lucide="user" class="w-5 h-5"></i>
                                        </div>
                                        <div>
                                            <p class="text-sm font-bold text-foreground">@review.ReviewerName</p>
                                            <p class="text-xs text-muted-foreground">@review.CreatedAt.ToString("MMM dd, yyyy")</p>
                                        </div>
                                    </div>
                                    <div class="flex items-center gap-1">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i data-lucide="star" class="w-3.5 h-3.5 @(i <= review.Rating ? "text-amber-500 fill-current" : "text-muted-foreground/30")"></i>
                                        }
                                    </div>
                                </div>
                                <h4 class="text-sm font-bold text-foreground mb-1">@(isArabic && !string.IsNullOrEmpty(review.TitleAr) ? review.TitleAr : review.Title)</h4>
                                <p class="text-sm text-muted-foreground leading-relaxed">@(isArabic && !string.IsNullOrEmpty(review.CommentAr) ? review.CommentAr : review.Comment)</p>
                            </div>
                        }
                        
                        @if (Model.Reviews.Count > 5)
                        {
                            <div class="text-center pt-4">
                                <a href="/reviews/poi/@Model.Id" class="text-xs font-black uppercase tracking-widest text-primary hover:underline">@Localizer["ViewAllReviews"] (@Model.Reviews.Count)</a>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="py-8 text-center">
                        <div class="w-12 h-12 rounded-full bg-muted/20 flex items-center justify-center mx-auto mb-3">
                            <i data-lucide="message-square" class="w-6 h-6 text-muted-foreground/50"></i>
                        </div>
                        <p class="text-sm text-muted-foreground">@Localizer["NoReviewsYet"]</p>
                    </div>
                }
            </div>
        </div>

        <!-- Right Column - Stats & Actions -->
        <div class="space-y-6">
            <!-- Stats -->
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
                <h3 class="text-lg font-black text-foreground mb-4 tracking-tight">@Localizer["Statistics"]</h3>
                
                <div class="space-y-4">
                    <div class="flex items-center justify-between">
                        <span class="text-muted-foreground">@Localizer["Rating"]</span>
                        <div class="flex items-center gap-2">
                            @if (Model.AverageRating > 0)
                            {
                                <div class="flex items-center">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i data-lucide="star" class="w-4 h-4 @(i <= Model.AverageRating ? "text-amber-500 fill-current" : "text-muted-foreground/30")"></i>
                                    }
                                </div>
                                <span class="text-sm font-medium">@Model.AverageRating.ToString("F1")</span>
                                <span class="text-xs text-muted-foreground">(@Model.ReviewCount)</span>
                            }
                            else
                            {
                                <span class="text-sm text-muted-foreground">@Localizer["NoRatings"]</span>
                            }
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <span class="text-muted-foreground">@Localizer["Views"]</span>
                        <span class="font-medium">@Model.ViewCount.ToString("N0")</span>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <span class="text-muted-foreground">@Localizer["CheckIns"]</span>
                        <span class="font-medium">@Model.CheckInCount.ToString("N0")</span>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <span class="text-muted-foreground">@Localizer["Added"]</span>
                        <span class="text-sm text-muted-foreground">@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
                <h3 class="text-lg font-black text-foreground mb-4 tracking-tight">@Localizer["QuickActions"]</h3>
                
                <div class="space-y-3">
                    @if (Model.AllowCheckIns)
                    {
                        <button type="button" class="w-full flex items-center gap-3 px-4 py-3 bg-primary/10 text-primary hover:bg-primary/20 rounded-xl transition-all border border-primary/20" onclick="checkInToLocation('@Model.Id')">
                            <i data-lucide="check-circle" class="w-5 h-5"></i>
                            <span class="font-medium">@Localizer["CheckInHere"]</span>
                        </button>
                    }
                    
                    <button type="button" class="w-full flex items-center gap-3 px-4 py-3 bg-muted/20 text-foreground hover:bg-muted/30 rounded-xl transition-all border border-border" onclick="viewCheckIns('@Model.Id')">
                        <i data-lucide="users" class="w-5 h-5"></i>
                        <span class="font-medium">@Localizer["ViewCheckIns"]</span>
                    </button>
                    
                    <button type="button" class="w-full flex items-center gap-3 px-4 py-3 bg-muted/20 text-foreground hover:bg-muted/30 rounded-xl transition-all border border-border">
                        <i data-lucide="navigation" class="w-5 h-5"></i>
                        <span class="font-medium">@Localizer["GetDirections"]</span>
                    </button>
                    
                    <button type="button" class="w-full flex items-center gap-3 px-4 py-3 bg-muted/20 text-foreground hover:bg-muted/30 rounded-xl transition-all border border-border">
                        <i data-lucide="bookmark" class="w-5 h-5"></i>
                        <span class="font-medium">@Localizer["SaveLocation"]</span>
                    </button>
                </div>
            </div>

            <!-- Report -->
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
                <button type="button" class="w-full flex items-center gap-3 px-4 py-3 text-red-600 hover:bg-red-500/10 rounded-xl transition-all border border-red-500/20" onclick="reportLocation('@Model.Id')">
                    <i data-lucide="flag" class="w-5 h-5"></i>
                    <span class="font-medium">@Localizer["ReportIssue"]</span>
                </button>
            </div>
        </div>
    </div>
    </div> <!-- End poi-content -->
<partial name="~/Views/Community/Maps/_MapsModals.cshtml" />

@section Scripts {
    <script src="~/js/maps.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Skeleton.initPageLoad('poi-skeleton', 'poi-content');
        });
        
        // Initialize Lucide icons
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
        
        function reportLocation(poiId) {
            if (confirm('Report this location for inappropriate content or incorrect information?')) {
                fetch(`/maps/poi/${poiId}/report`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                })
                .then(response => {
                    if (response.ok) {
                        showToast('Location reported successfully. Thank you for your feedback.', 'success');
                    } else {
                        showToast('Error reporting location. Please try again.', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error reporting location:', error);
                    showToast('Error reporting location. Please try again.', 'error');
                });
            }
        }
        
        function viewCheckIns(poiId) {
            // This would typically open a modal or navigate to a check-ins page
            window.location.href = `/maps/poi/${poiId}/checkins`;
        }
    </script>
}