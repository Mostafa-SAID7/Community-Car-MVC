@using Microsoft.Extensions.Localization
@model CommunityCar.Application.Features.Community.Maps.ViewModels.MapsRouteSearchVM
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Routes"];
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
}

<div class="space-y-8 animate-in fade-in duration-700">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tight">@Localizer["DrivingRoutes"]</h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">@Localizer["DiscoverRoutes"]</p>
        </div>
        <div class="flex items-center gap-3">
            <a asp-controller="Maps" asp-action="Index" asp-route-culture="@System.Globalization.CultureInfo.CurrentCulture.Name" class="inline-flex items-center gap-2.5 px-6 py-2.5 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95">
                <i data-lucide="map" class="w-4 h-4"></i>
                @Localizer["MapView"]
            </a>
            <button type="button" class="inline-flex items-center gap-2.5 px-6 py-2.5 bg-primary text-primary-foreground hover:bg-primary/90 rounded-xl text-xs font-black uppercase tracking-widest transition-all shadow-glow-primary active:scale-95" data-bs-toggle="modal" data-bs-target="#addRouteModal">
                <i data-lucide="plus" class="w-4 h-4"></i>
                @Localizer["AddRoute"]
            </button>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
        <form method="get" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-6 gap-4">
            <div class="md:col-span-2 relative group">
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="w-full bg-background border border-border px-10 py-2.5 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" placeholder="@Localizer["SearchPlaceholder"]">
                <i data-lucide="search" class="absolute left-3.5 top-1/2 -translate-y-1/2 w-4 h-4 text-muted-foreground group-focus-within:text-primary transition-colors"></i>
            </div>
            
            <div>
                <select name="type" class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold focus:ring-4 focus:ring-primary/10 transition-all outline-none appearance-none">
                    <option value="">@Localizer["AllTypes"]</option>
                    @{
                        var selectedRouteType = ViewBag.Type?.ToString();
                    }
                    <option value="1" selected="@(selectedRouteType == "1")">@Localizer["Scenic"]</option>
                    <option value="2" selected="@(selectedRouteType == "2")">@Localizer["Performance"]</option>
                    <option value="3" selected="@(selectedRouteType == "3")">@Localizer["OffRoad"]</option>
                    <option value="4" selected="@(selectedRouteType == "4")">@Localizer["Touring"]</option>
                    <option value="5" selected="@(selectedRouteType == "5")">@Localizer["Commute"]</option>
                    <option value="6" selected="@(selectedRouteType == "6")">@Localizer["Track"]</option>
                    <option value="7" selected="@(selectedRouteType == "7")">@Localizer["Rally"]</option>
                    <option value="8" selected="@(selectedRouteType == "8")">@Localizer["Cruise"]</option>
                </select>
            </div>
            
            <div>
                <select name="difficulty" class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold focus:ring-4 focus:ring-primary/10 transition-all outline-none appearance-none">
                    <option value="">@Localizer["AllLevels"]</option>
                    @{
                        var selectedDifficulty = ViewBag.Difficulty?.ToString();
                    }
                    <option value="1" selected="@(selectedDifficulty == "1")">@Localizer["Beginner"]</option>
                    <option value="2" selected="@(selectedDifficulty == "2")">@Localizer["Intermediate"]</option>
                    <option value="3" selected="@(selectedDifficulty == "3")">@Localizer["Advanced"]</option>
                    <option value="4" selected="@(selectedDifficulty == "4")">@Localizer["Expert"]</option>
                </select>
            </div>
            
            <button type="submit" class="bg-primary text-primary-foreground px-6 py-2.5 rounded-xl text-xs font-black uppercase tracking-widest shadow-lg shadow-primary/20 hover:opacity-90 active:scale-95 transition-all flex items-center justify-center gap-2">
                <i data-lucide="filter" class="w-3.5 h-3.5"></i>
                @Localizer["Filter"]
            </button>
        </form>
        
        <div class="flex flex-wrap gap-4 mt-6 pt-4 border-t border-border/40">
            <label class="flex items-center gap-2 cursor-pointer group">
                <input type="checkbox" name="isScenic" checked="@(ViewBag.IsScenic == "true")" class="w-4 h-4 rounded border-border text-primary focus:ring-primary/20">
                <span class="text-xs font-black uppercase tracking-widest text-muted-foreground group-hover:text-foreground transition-colors">@Localizer["ScenicOnly"]</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer group">
                <input type="checkbox" name="isOffRoad" checked="@(ViewBag.IsOffRoad == "true")" class="w-4 h-4 rounded border-border text-primary focus:ring-primary/20">
                <span class="text-xs font-black uppercase tracking-widest text-muted-foreground group-hover:text-foreground transition-colors">@Localizer["OffRoad"]</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer group">
                <input type="checkbox" name="hasTolls" checked="@(ViewBag.HasTolls == "false")" class="w-4 h-4 rounded border-border text-primary focus:ring-primary/20">
                <span class="text-xs font-black uppercase tracking-widest text-muted-foreground group-hover:text-foreground transition-colors">@Localizer["NoTolls"]</span>
            </label>
        </div>
    </div>

    <!-- Results -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
        <div class="p-6 border-b border-border/50 bg-muted/20">
            <div class="flex items-center justify-between">
                <h3 class="text-lg font-black text-foreground tracking-tight">
                    @string.Format(Localizer["RoutesFound"].Value, Model.TotalCount)
                </h3>
                <div class="flex items-center gap-2">
                    <select class="bg-background border border-border px-3 py-1.5 rounded-lg text-xs font-bold focus:ring-2 focus:ring-primary/20 transition-all outline-none appearance-none">
                        <option>@Localizer["SortByDistance"]</option>
                        <option>@Localizer["SortByRating"]</option>
                        <option>@Localizer["SortByPopularity"]</option>
                        <option>@Localizer["SortByDifficulty"]</option>
                        <option>@Localizer["SortByNewest"]</option>
                    </select>
                </div>
            </div>
        </div>
        
        </div>
        
        <div id="route-list-skeleton" class="hidden divide-y divide-border/30">
             @for (int i = 0; i < 5; i++)
             {
                 <div class="p-6">
                     <div class="flex items-start gap-4">
                         <div class="w-16 h-16 rounded-2xl bg-muted animate-pulse"></div>
                         <div class="flex-1 space-y-2">
                             <div class="h-6 bg-muted rounded w-1/3 animate-pulse"></div>
                             <div class="h-4 bg-muted rounded w-2/3 animate-pulse"></div>
                         </div>
                     </div>
                 </div>
             }
         </div>

        <div id="route-list-content">
        @if (Model.Items.Any())
        {
            <div class="divide-y divide-border/30">
                @foreach (var route in Model.Items)
                {
                    <div class="p-6 hover:bg-muted/20 transition-all group cursor-pointer" onclick="window.location.href='/maps/routes/@route.Id'">
                        <div class="flex items-start gap-4">
                            <div class="w-16 h-16 rounded-2xl bg-green-500/10 flex items-center justify-center text-green-600 border border-green-500/20 shrink-0 group-hover:scale-105 transition-transform">
                                <i data-lucide="route" class="w-8 h-8"></i>
                            </div>
                            
                            <div class="flex-1 min-w-0">
                                <div class="flex items-start justify-between gap-4 mb-2">
                                    <div class="flex-1">
                                        @{
                                            var displayName = isArabic && !string.IsNullOrEmpty(route.NameAr) ? route.NameAr : route.Name;
                                            var displayDescription = isArabic && !string.IsNullOrEmpty(route.DescriptionAr) ? route.DescriptionAr : route.Description;
                                        }
                                        <h4 class="text-lg font-black text-foreground leading-tight tracking-tight group-hover:text-primary transition-colors">@displayName</h4>
                                        <p class="text-sm text-muted-foreground font-medium mt-1 line-clamp-2">@displayDescription</p>
                                    </div>
                                    
                                    <div class="text-right shrink-0">
                                        @if (route.AverageRating > 0)
                                        {
                                            <div class="flex items-center gap-1 mb-1">
                                                <i data-lucide="star" class="w-4 h-4 text-amber-500 fill-current"></i>
                                                <span class="text-sm font-bold text-foreground">@route.AverageRating.ToString("F1")</span>
                                                <span class="text-xs text-muted-foreground">(@route.ReviewCount)</span>
                                            </div>
                                        }
                                        <p class="text-xs text-muted-foreground">@string.Format(Localizer["CompletedCount"].Value, route.TimesCompleted)</p>
                                    </div>
                                </div>
                                
                                <div class="grid grid-cols-3 gap-4 mb-3 text-sm">
                                    <div class="flex items-center gap-2">
                                        <i data-lucide="map-pin" class="w-4 h-4 text-muted-foreground"></i>
                                        <span class="font-medium text-foreground">@route.DistanceKm.ToString("F1") @Localizer["KM"]</span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <i data-lucide="clock" class="w-4 h-4 text-muted-foreground"></i>
                                        <span class="font-medium text-foreground">@(route.EstimatedDurationMinutes / 60)@Localizer["Hour"] @(route.EstimatedDurationMinutes % 60)@Localizer["Minute"]</span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <i data-lucide="trending-up" class="w-4 h-4 text-muted-foreground"></i>
                                        <span class="font-medium text-foreground">@Localizer[route.Difficulty.ToString()]</span>
                                    </div>
                                </div>
                                
                                <div class="flex flex-wrap items-center gap-2">
                                    <span class="inline-flex items-center gap-1 px-2 py-1 bg-green-500/10 text-green-600 rounded-md text-xs font-bold border border-green-500/20">
                                        <i data-lucide="map" class="w-3 h-3"></i>
                                        @route.Type.ToString()
                                    </span>
                                    
                                    <span class="inline-flex items-center gap-1 px-2 py-1 bg-blue-500/10 text-blue-600 rounded-md text-xs font-bold border border-blue-500/20">
                                        <i data-lucide="trending-up" class="w-3 h-3"></i>
                                        @route.Difficulty
                                    </span>
                                    
                                    @if (route.IsScenic)
                                    {
                                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-amber-500/10 text-amber-600 rounded-md text-xs font-bold border border-amber-500/20">
                                            <i data-lucide="camera" class="w-3 h-3"></i>
                                            Scenic
                                        </span>
                                    }
                                    
                                    @if (route.IsOffRoad)
                                    {
                                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-orange-500/10 text-orange-600 rounded-md text-xs font-bold border border-orange-500/20">
                                            <i data-lucide="mountain" class="w-3 h-3"></i>
                                            @Localizer["OffRoad"]
                                        </span>
                                    }
                                    
                                    @if (route.HasTolls)
                                    {
                                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-red-500/10 text-red-600 rounded-md text-xs font-bold border border-red-500/20">
                                            <i data-lucide="dollar-sign" class="w-3 h-3"></i>
                                            Tolls
                                        </span>
                                    }
                                    
                                    @if (route.Tags.Any())
                                    {
                                        @foreach (var tag in route.Tags.Take(2))
                                        {
                                            <span class="px-2 py-1 bg-muted/30 text-muted-foreground rounded-md text-xs font-medium">#@tag</span>
                                        }
                                        @if (route.Tags.Count > 2)
                                        {
                                            <span class="text-xs text-muted-foreground">+@(route.Tags.Count - 2) more</span>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="p-6 border-t border-border/50 bg-muted/10">
                    <div class="flex items-center justify-between">
                        <p class="text-sm text-muted-foreground">
                            Showing @((Model.Page - 1) * Model.PageSize + 1) to @Math.Min(Model.Page * Model.PageSize, Model.TotalCount) of @Model.TotalCount results
                        </p>
                        
                        <div class="flex items-center gap-2">
                            @if (Model.HasPreviousPage)
                            {
                                <a href="?page=@(Model.Page - 1)@(ViewBag.QueryString)" class="px-3 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-lg text-xs font-bold transition-all">
                                    <i data-lucide="chevron-left" class="w-4 h-4"></i>
                                </a>
                            }
                            
                            @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                            {
                                <a href="?page=@i@(ViewBag.QueryString)" class="px-3 py-2 @(i == Model.Page ? "bg-primary text-primary-foreground" : "bg-background border border-border hover:border-primary hover:text-primary") rounded-lg text-xs font-bold transition-all">
                                    @i
                                </a>
                            }
                            
                            @if (Model.HasNextPage)
                            {
                                <a href="?page=@(Model.Page + 1)@(ViewBag.QueryString)" class="px-3 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-lg text-xs font-bold transition-all">
                                    <i data-lucide="chevron-right" class="w-4 h-4"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="p-12 text-center">
                <div class="w-16 h-16 rounded-full bg-muted/20 flex items-center justify-center mx-auto mb-4">
                    <i data-lucide="route" class="w-8 h-8 text-muted-foreground/50"></i>
                </div>
                <h3 class="text-lg font-bold text-foreground mb-2">@Localizer["NoRoutesFound"]</h3>
                <p class="text-muted-foreground mb-6">@Localizer["NoRoutesSubtitle"]</p>
                <button type="button" class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-primary-foreground hover:bg-primary/90 rounded-xl text-sm font-bold transition-all" data-bs-toggle="modal" data-bs-target="#addRouteModal">
                    <i data-lucide="plus" class="w-4 h-4"></i>
                    @Localizer["AddNewRoute"]
                </button>
            </div>
        }
        </div>
    </div>
</div>
<partial name="~/Views/Community/Maps/_MapsModals.cshtml" />

@section Scripts {
    <script src="~/js/maps.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Skeleton.initPageLoad('route-list-skeleton', 'route-list-content');
            
            // Initialize Lucide icons
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        });
    </script>
}