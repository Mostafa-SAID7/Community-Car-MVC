@model CommunityCar.Application.Features.Maps.DTOs.MapsRouteSearchResponse
@{
    ViewData["Title"] = "Routes";
}

<div class="space-y-8 animate-in fade-in duration-700">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tight">Driving Routes</h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">Discover scenic drives, performance routes, and adventure trails</p>
        </div>
        <div class="flex items-center gap-3">
            <a href="/maps" class="inline-flex items-center gap-2.5 px-6 py-2.5 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95">
                <i data-lucide="map" class="w-4 h-4"></i>
                Map View
            </a>
            <button type="button" class="inline-flex items-center gap-2.5 px-6 py-2.5 bg-primary text-primary-foreground hover:bg-primary/90 rounded-xl text-xs font-black uppercase tracking-widest transition-all shadow-lg shadow-primary/20 active:scale-95" data-bs-toggle="modal" data-bs-target="#addRouteModal">
                <i data-lucide="plus" class="w-4 h-4"></i>
                Add Route
            </button>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
        <form method="get" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-6 gap-4">
            <div class="md:col-span-2 relative group">
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="w-full bg-background border border-border px-10 py-2.5 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" placeholder="Search routes...">
                <i data-lucide="search" class="absolute left-3.5 top-1/2 -translate-y-1/2 w-4 h-4 text-muted-foreground group-focus-within:text-primary transition-colors"></i>
            </div>
            
            <div>
                <!select name="type" class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold focus:ring-4 focus:ring-primary/10 transition-all outline-none appearance-none">
                    <!option value="">All Types</!option>
                    @{
                        var selectedRouteType = ViewBag.Type?.ToString();
                    }
                    <!option value="1" @(selectedRouteType == "1" ? "selected" : "")>Scenic</!option>
                    <!option value="2" @(selectedRouteType == "2" ? "selected" : "")>Performance</!option>
                    <!option value="3" @(selectedRouteType == "3" ? "selected" : "")>Off-Road</!option>
                    <!option value="4" @(selectedRouteType == "4" ? "selected" : "")>Touring</!option>
                    <!option value="5" @(selectedRouteType == "5" ? "selected" : "")>Commute</!option>
                    <!option value="6" @(selectedRouteType == "6" ? "selected" : "")>Track</!option>
                    <!option value="7" @(selectedRouteType == "7" ? "selected" : "")>Rally</!option>
                    <!option value="8" @(selectedRouteType == "8" ? "selected" : "")>Cruise</!option>
                </!select>
            </div>
            
            <div>
                <!select name="difficulty" class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold focus:ring-4 focus:ring-primary/10 transition-all outline-none appearance-none">
                    <!option value="">All Levels</!option>
                    @{
                        var selectedDifficulty = ViewBag.Difficulty?.ToString();
                    }
                    <!option value="1" @(selectedDifficulty == "1" ? "selected" : "")>Beginner</!option>
                    <!option value="2" @(selectedDifficulty == "2" ? "selected" : "")>Intermediate</!option>
                    <!option value="3" @(selectedDifficulty == "3" ? "selected" : "")>Advanced</!option>
                    <!option value="4" @(selectedDifficulty == "4" ? "selected" : "")>Expert</!option>
                </!select>
            </div>
            
            <button type="submit" class="bg-primary text-primary-foreground px-6 py-2.5 rounded-xl text-xs font-black uppercase tracking-widest shadow-lg shadow-primary/20 hover:opacity-90 active:scale-95 transition-all flex items-center justify-center gap-2">
                <i data-lucide="filter" class="w-3.5 h-3.5"></i>
                Filter
            </button>
        </form>
        
        <div class="flex flex-wrap gap-4 mt-6 pt-4 border-t border-border/40">
            <label class="flex items-center gap-2 cursor-pointer group">
                <input type="checkbox" name="isScenic" @(ViewBag.IsScenic == "true" ? "checked" : "") class="w-4 h-4 rounded border-border text-primary focus:ring-primary/20">
                <span class="text-xs font-black uppercase tracking-widest text-muted-foreground group-hover:text-foreground transition-colors">Scenic Only</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer group">
                <input type="checkbox" name="isOffRoad" @(ViewBag.IsOffRoad == "true" ? "checked" : "") class="w-4 h-4 rounded border-border text-primary focus:ring-primary/20">
                <span class="text-xs font-black uppercase tracking-widest text-muted-foreground group-hover:text-foreground transition-colors">Off-Road</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer group">
                <input type="checkbox" name="hasTolls" @(ViewBag.HasTolls == "false" ? "checked" : "") class="w-4 h-4 rounded border-border text-primary focus:ring-primary/20">
                <span class="text-xs font-black uppercase tracking-widest text-muted-foreground group-hover:text-foreground transition-colors">No Tolls</span>
            </label>
        </div>
    </div>

    <!-- Results -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
        <div class="p-6 border-b border-border/50 bg-muted/20">
            <div class="flex items-center justify-between">
                <h3 class="text-lg font-black text-foreground tracking-tight">
                    @Model.TotalCount Routes Found
                </h3>
                <div class="flex items-center gap-2">
                    <select class="bg-background border border-border px-3 py-1.5 rounded-lg text-xs font-bold focus:ring-2 focus:ring-primary/20 transition-all outline-none appearance-none">
                        <option>Sort by Distance</option>
                        <option>Sort by Rating</option>
                        <option>Sort by Popularity</option>
                        <option>Sort by Difficulty</option>
                        <option>Sort by Newest</option>
                    </select>
                </div>
            </div>
        </div>
        
        @if (Model.Items.Any())
        {
            <div class="divide-y divide-border/30">
                @foreach (var route in Model.Items)
                {
                    <div class="p-6 hover:bg-muted/20 transition-all group cursor-pointer" onclick="window.location.href='/maps/routes/@route.Id'">
                        <div class="flex items-start gap-4">
                            <div class="w-16 h-16 rounded-2xl bg-green-500/10 flex items-center justify-center text-green-600 border border-green-500/20 shrink-0 group-hover:scale-105 transition-transform">
                                <i data-lucide="route" class="w-8 h-8"></i>
                            </div>
                            
                            <div class="flex-1 min-w-0">
                                <div class="flex items-start justify-between gap-4 mb-2">
                                    <div class="flex-1">
                                        <h4 class="text-lg font-black text-foreground leading-tight tracking-tight group-hover:text-primary transition-colors">@route.Name</h4>
                                        <p class="text-sm text-muted-foreground font-medium mt-1 line-clamp-2">@route.Description</p>
                                    </div>
                                    
                                    <div class="text-right shrink-0">
                                        @if (route.AverageRating > 0)
                                        {
                                            <div class="flex items-center gap-1 mb-1">
                                                <i data-lucide="star" class="w-4 h-4 text-amber-500 fill-current"></i>
                                                <span class="text-sm font-bold text-foreground">@route.AverageRating.ToString("F1")</span>
                                                <span class="text-xs text-muted-foreground">(@route.ReviewCount)</span>
                                            </div>
                                        }
                                        <p class="text-xs text-muted-foreground">@route.TimesCompleted completed</p>
                                    </div>
                                </div>
                                
                                <div class="grid grid-cols-3 gap-4 mb-3 text-sm">
                                    <div class="flex items-center gap-2">
                                        <i data-lucide="map-pin" class="w-4 h-4 text-muted-foreground"></i>
                                        <span class="font-medium text-foreground">@route.DistanceKm.ToString("F1") km</span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <i data-lucide="clock" class="w-4 h-4 text-muted-foreground"></i>
                                        <span class="font-medium text-foreground">@(route.EstimatedDurationMinutes / 60)h @(route.EstimatedDurationMinutes % 60)m</span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <i data-lucide="trending-up" class="w-4 h-4 text-muted-foreground"></i>
                                        <span class="font-medium text-foreground">@route.Difficulty</span>
                                    </div>
                                </div>
                                
                                <div class="flex flex-wrap items-center gap-2">
                                    <span class="inline-flex items-center gap-1 px-2 py-1 bg-green-500/10 text-green-600 rounded-md text-xs font-bold border border-green-500/20">
                                        <i data-lucide="map" class="w-3 h-3"></i>
                                        @route.Type.ToString()
                                    </span>
                                    
                                    <span class="inline-flex items-center gap-1 px-2 py-1 bg-blue-500/10 text-blue-600 rounded-md text-xs font-bold border border-blue-500/20">
                                        <i data-lucide="trending-up" class="w-3 h-3"></i>
                                        @route.Difficulty
                                    </span>
                                    
                                    @if (route.IsScenic)
                                    {
                                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-amber-500/10 text-amber-600 rounded-md text-xs font-bold border border-amber-500/20">
                                            <i data-lucide="camera" class="w-3 h-3"></i>
                                            Scenic
                                        </span>
                                    }
                                    
                                    @if (route.IsOffRoad)
                                    {
                                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-orange-500/10 text-orange-600 rounded-md text-xs font-bold border border-orange-500/20">
                                            <i data-lucide="mountain" class="w-3 h-3"></i>
                                            Off-Road
                                        </span>
                                    }
                                    
                                    @if (route.HasTolls)
                                    {
                                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-red-500/10 text-red-600 rounded-md text-xs font-bold border border-red-500/20">
                                            <i data-lucide="dollar-sign" class="w-3 h-3"></i>
                                            Tolls
                                        </span>
                                    }
                                    
                                    @if (route.Tags.Any())
                                    {
                                        @foreach (var tag in route.Tags.Take(2))
                                        {
                                            <span class="px-2 py-1 bg-muted/30 text-muted-foreground rounded-md text-xs font-medium">#@tag</span>
                                        }
                                        @if (route.Tags.Count > 2)
                                        {
                                            <span class="text-xs text-muted-foreground">+@(route.Tags.Count - 2) more</span>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="p-6 border-t border-border/50 bg-muted/10">
                    <div class="flex items-center justify-between">
                        <p class="text-sm text-muted-foreground">
                            Showing @((Model.Page - 1) * Model.PageSize + 1) to @Math.Min(Model.Page * Model.PageSize, Model.TotalCount) of @Model.TotalCount results
                        </p>
                        
                        <div class="flex items-center gap-2">
                            @if (Model.HasPreviousPage)
                            {
                                <a href="?page=@(Model.Page - 1)@(ViewBag.QueryString)" class="px-3 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-lg text-xs font-bold transition-all">
                                    <i data-lucide="chevron-left" class="w-4 h-4"></i>
                                </a>
                            }
                            
                            @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                            {
                                <a href="?page=@i@(ViewBag.QueryString)" class="px-3 py-2 @(i == Model.Page ? "bg-primary text-primary-foreground" : "bg-background border border-border hover:border-primary hover:text-primary") rounded-lg text-xs font-bold transition-all">
                                    @i
                                </a>
                            }
                            
                            @if (Model.HasNextPage)
                            {
                                <a href="?page=@(Model.Page + 1)@(ViewBag.QueryString)" class="px-3 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-lg text-xs font-bold transition-all">
                                    <i data-lucide="chevron-right" class="w-4 h-4"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="p-12 text-center">
                <div class="w-16 h-16 rounded-full bg-muted/20 flex items-center justify-center mx-auto mb-4">
                    <i data-lucide="route" class="w-8 h-8 text-muted-foreground/50"></i>
                </div>
                <h3 class="text-lg font-bold text-foreground mb-2">No routes found</h3>
                <p class="text-muted-foreground mb-6">Try adjusting your search criteria or add a new route.</p>
                <button type="button" class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-primary-foreground hover:bg-primary/90 rounded-xl text-sm font-bold transition-all" data-bs-toggle="modal" data-bs-target="#addRouteModal">
                    <i data-lucide="plus" class="w-4 h-4"></i>
                    Add New Route
                </button>
            </div>
        }
    </div>
</div>

<!-- Add Route Modal (reuse from Index.cshtml) -->
<div class="modal fade" id="addRouteModal" tabindex="-1" aria-labelledby="addRouteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addRouteModalLabel">Add New Route</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addRouteForm">
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="routeName" class="form-label">Name *</label>
                            <input type="text" class="form-control" id="routeName" name="name" required>
                        </div>
                        <div class="col-md-6">
                            <label for="routeType" class="form-label">Type *</label>
                            <select class="form-select" id="routeType" name="type" required>
                                <option value="">Select Type</option>
                                <option value="1">Scenic</option>
                                <option value="2">Performance</option>
                                <option value="3">Off-Road</option>
                                <option value="4">Touring</option>
                                <option value="5">Commute</option>
                                <option value="6">Track</option>
                                <option value="7">Rally</option>
                                <option value="8">Cruise</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label for="routeDescription" class="form-label">Description *</label>
                            <textarea class="form-control" id="routeDescription" name="description" rows="3" required></textarea>
                        </div>
                        <div class="col-md-4">
                            <label for="routeDifficulty" class="form-label">Difficulty</label>
                            <select class="form-select" id="routeDifficulty" name="difficulty">
                                <option value="1">Beginner</option>
                                <option value="2">Intermediate</option>
                                <option value="3">Advanced</option>
                                <option value="4">Expert</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="routeDistance" class="form-label">Distance (km)</label>
                            <input type="number" class="form-control" id="routeDistance" name="distanceKm" step="0.1" min="0">
                        </div>
                        <div class="col-md-4">
                            <label for="routeDuration" class="form-label">Duration (minutes)</label>
                            <input type="number" class="form-control" id="routeDuration" name="estimatedDurationMinutes" min="0">
                        </div>
                        <div class="col-12">
                            <div class="form-check-group d-flex gap-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="routeScenic" name="isScenic">
                                    <label class="form-check-label" for="routeScenic">Scenic Route</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="routeTolls" name="hasTolls">
                                    <label class="form-check-label" for="routeTolls">Has Tolls</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="routeOffRoad" name="isOffRoad">
                                    <label class="form-check-label" for="routeOffRoad">Off-Road</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="submitRoute()">Add Route</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/maps.js"></script>
    <script>
        // Initialize Lucide icons
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    </script>
}