@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<aside class="w-full space-y-6">
    <div class="bg-card/40 backdrop-blur-xl border border-border rounded-2xl p-6 shadow-sm">
        <h3 class="flex items-center gap-2 text-sm font-bold mb-6 uppercase tracking-wider text-primary">
            <i data-lucide="map-pin" class="w-4 h-4"></i>
            Maps
        </h3>
        
        <div class="space-y-6">
            <div class="grid grid-cols-1 gap-3 mb-6 pb-6 border-b border-border/40">
                <button type="button" class="w-full inline-flex items-center gap-2.5 px-4 py-3 bg-primary text-primary-foreground hover:bg-primary/90 rounded-xl text-[10px] font-black uppercase tracking-widest transition-all shadow-glow-primary active:scale-95" data-bs-toggle="modal" data-bs-target="#addPOIModal">
                    <i data-lucide="plus" class="w-4 h-4"></i>
                    @Localizer["AddLocation"]
                </button>
                <button type="button" class="w-full inline-flex items-center gap-2.5 px-4 py-3 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg active:scale-95" data-bs-toggle="modal" data-bs-target="#addRouteModal">
                    <i data-lucide="route" class="w-4 h-4"></i>
                    @Localizer["AddRoute"]
                </button>
            </div>

            <div class="space-y-4">
                <h4 class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">Nearby Workshops</h4>
                @for (int i = 1; i <= 3; i++)
                {
                    <div class="flex items-center gap-3 p-3 rounded-xl bg-accent/20 hover:bg-accent/40 transition-all cursor-pointer">
                        <div class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center text-primary">
                            <i data-lucide="wrench" class="w-4 h-4"></i>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-xs font-bold truncate">Quick Fix Workshop @i</p>
                            <p class="text-[9px] text-muted-foreground">@i.2 km away</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</aside>
