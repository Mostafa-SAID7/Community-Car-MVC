@using Microsoft.Extensions.Localization
@model IEnumerable<CommunityCar.Application.Features.News.ViewModels.NewsItemVM>
@inject IStringLocalizer<SharedResource> SharedLocalizer
@inject IViewLocalizer Localizer

@if (Model.Any())
{
    @foreach (var newsItem in Model)
    {
        <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-300 group">
            @if (!string.IsNullOrEmpty(newsItem.ImageUrl))
            {
                <div class="relative h-48 overflow-hidden">
                    <img src="@newsItem.ImageUrl" alt="@newsItem.Headline" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" loading="lazy" />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
                    
                    <!-- Category Badge -->
                    <div class="absolute top-3 left-3">
                        <span class="badge badge-default bg-primary/90 text-primary-foreground">
                            @newsItem.Category
                        </span>
                    </div>
                    
                    <!-- Featured Badge -->
                    @if (newsItem.IsFeatured)
                    {
                        <div class="absolute top-3 right-3">
                            <span class="badge badge-default bg-yellow-500 text-yellow-50">
                                <i data-lucide="star" class="w-3 h-3"></i>
                            </span>
                        </div>
                    }
                </div>
            }
            
            <div class="p-4">
                <!-- Meta Info -->
                <div class="flex items-center justify-between mb-3">
                    @if (string.IsNullOrEmpty(newsItem.ImageUrl))
                    {
                        <span class="badge badge-outline">@newsItem.Category</span>
                    }
                    <div class="text-xs text-muted-foreground">
                        @newsItem.PublishedAt?.ToString("MMM dd") ?? newsItem.CreatedAt.ToString("MMM dd")
                    </div>
                </div>
                
                <!-- Title -->
                <h3 class="text-lg font-bold text-foreground mb-2 line-clamp-2 group-hover:text-primary transition-colors">
                    <a href="/news/@newsItem.Id">@newsItem.Headline</a>
                </h3>
                
                <!-- Summary -->
                @if (!string.IsNullOrEmpty(newsItem.Summary))
                {
                    <p class="text-sm text-muted-foreground mb-3 line-clamp-3">@newsItem.Summary</p>
                }
                
                <!-- Car Info -->
                @if (!string.IsNullOrEmpty(newsItem.CarMake))
                {
                    <div class="mb-3">
                        <span class="badge badge-secondary text-xs">@newsItem.CarMake @newsItem.CarModel</span>
                    </div>
                }
                
                <!-- Tags -->
                @if (newsItem.Tags.Any())
                {
                    <div class="flex flex-wrap gap-1 mb-3">
                        @foreach (var tag in newsItem.Tags.Take(2))
                        {
                            <span class="badge badge-outline text-xs">#@tag</span>
                        }
                        @if (newsItem.Tags.Count() > 2)
                        {
                            <span class="text-xs text-muted-foreground">+@(newsItem.Tags.Count() - 2)</span>
                        }
                    </div>
                }
                
                <!-- Stats -->
                <div class="flex items-center justify-between text-xs text-muted-foreground">
                    <div class="flex items-center gap-3">
                        <span class="flex items-center gap-1">
                            <i data-lucide="eye" class="w-3 h-3"></i>
                            @newsItem.ViewCount
                        </span>
                        <span class="flex items-center gap-1">
                            <i data-lucide="heart" class="w-3 h-3"></i>
                            @newsItem.LikeCount
                        </span>
                        <span class="flex items-center gap-1">
                            <i data-lucide="message-circle" class="w-3 h-3"></i>
                            @newsItem.CommentCount
                        </span>
                    </div>
                    
                    <!-- Quick Actions -->
                    <div class="flex items-center gap-1">
                        <button onclick="quickLike('@newsItem.Id', this)" class="p-1 hover:text-red-500 transition-colors @(newsItem.IsLikedByCurrentUser ? "text-red-500" : "")" title="Like">
                            <i data-lucide="heart" class="w-3 h-3 @(newsItem.IsLikedByCurrentUser ? "fill-current" : "")"></i>
                        </button>
                        <button onclick="quickBookmark('@newsItem.Id', this)" class="p-1 hover:text-yellow-500 transition-colors @(newsItem.IsBookmarkedByCurrentUser ? "text-yellow-500" : "")" title="Bookmark">
                            <i data-lucide="bookmark" class="w-3 h-3 @(newsItem.IsBookmarkedByCurrentUser ? "fill-current" : "")"></i>
                        </button>
                        <button onclick="quickShare('@newsItem.Id', '@newsItem.Headline')" class="p-1 hover:text-primary transition-colors" title="Share">
                            <i data-lucide="share-2" class="w-3 h-3"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="col-span-full text-center py-8">
        <div class="bg-muted/20 border border-border/50 rounded-2xl p-6">
            <i data-lucide="newspaper" class="w-12 h-12 text-muted-foreground mx-auto mb-3"></i>
            <p class="text-muted-foreground">No related articles found.</p>
        </div>
    </div>
}

<script>
    // Quick action functions for related news
    async function quickLike(newsId, button) {
        if (!@(User.Identity?.IsAuthenticated == true ? "true" : "false")) {
            showToast('Please log in to like articles', 'warning');
            return;
        }

        const isLiked = button.classList.contains('text-red-500');
        const action = isLiked ? 'unlike' : 'like';
        
        try {
            const response = await fetch(`/news/${newsId}/${action}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': getAntiForgeryToken()
                }
            });
            
            const result = await response.json();
            if (result.success) {
                const heartIcon = button.querySelector('i');
                if (isLiked) {
                    button.classList.remove('text-red-500');
                    heartIcon.classList.remove('fill-current');
                } else {
                    button.classList.add('text-red-500');
                    heartIcon.classList.add('fill-current');
                }
                showToast(isLiked ? 'Unliked' : 'Liked', 'success');
            }
        } catch (error) {
            showToast('Error updating like status', 'error');
        }
    }

    async function quickBookmark(newsId, button) {
        if (!@(User.Identity?.IsAuthenticated == true ? "true" : "false")) {
            showToast('Please log in to bookmark articles', 'warning');
            return;
        }

        const isBookmarked = button.classList.contains('text-yellow-500');
        const action = isBookmarked ? 'unbookmark' : 'bookmark';
        
        try {
            const response = await fetch(`/news/${newsId}/${action}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': getAntiForgeryToken()
                }
            });
            
            const result = await response.json();
            if (result.success) {
                const bookmarkIcon = button.querySelector('i');
                if (isBookmarked) {
                    button.classList.remove('text-yellow-500');
                    bookmarkIcon.classList.remove('fill-current');
                } else {
                    button.classList.add('text-yellow-500');
                    bookmarkIcon.classList.add('fill-current');
                }
                showToast(isBookmarked ? 'Bookmark removed' : 'Bookmarked', 'success');
            }
        } catch (error) {
            showToast('Error updating bookmark status', 'error');
        }
    }

    function quickShare(newsId, title) {
        const url = `${window.location.origin}/news/${newsId}`;
        
        if (navigator.share) {
            navigator.share({
                title: title,
                url: url
            }).then(() => {
                showToast('Article shared successfully', 'success');
            }).catch((error) => {
                if (error.name !== 'AbortError') {
                    fallbackShare(url);
                }
            });
        } else {
            fallbackShare(url);
        }
    }

    function fallbackShare(url) {
        if (navigator.clipboard) {
            navigator.clipboard.writeText(url).then(() => {
                showToast('Link copied to clipboard', 'success');
            });
        }
    }

    function getAntiForgeryToken() {
        return document.querySelector('input[name="__RequestVerificationToken"]')?.value ||
               document.querySelector('meta[name="__RequestVerificationToken"]')?.content;
    }

    function showToast(message, type = 'info') {
        if (window.ToasterSystem) {
            window.ToasterSystem.show(message, type);
        } else if (window.notify) {
            window.notify[type](message);
        }
    }
</script>