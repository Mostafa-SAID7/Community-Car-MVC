@using Microsoft.Extensions.Localization
@model CommunityCar.Application.Features.News.ViewModels.NewsSearchResponse
@inject IStringLocalizer<SharedResource> SharedLocalizer
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
    var searchRequest = ViewBag.SearchRequest as CommunityCar.Application.Features.News.DTOs.NewsSearchRequest;
}

<div class="space-y-8 animate-in fade-in duration-700">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tight">@Localizer["HeaderTitle"]</h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">@Localizer["HeaderSubtitle"]</p>
        </div>
        <div class="flex items-center gap-4">
            <div class="text-center">
                <div class="text-2xl font-black text-primary">@Model.TotalCount</div>
                <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@SharedLocalizer["Articles"]</div>
            </div>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a href="/news/create" class="inline-flex items-center gap-2.5 px-8 py-3 bg-primary text-primary-foreground hover:bg-primary/90 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-primary/20 active:scale-95 group">
                    <i data-lucide="plus-circle" class="w-4 h-4 group-hover:scale-125 transition-transform"></i>
                    @Localizer["CreateNews"]
                </a>
            }
        </div>
    </div>

    <!-- Category Gateway -->
    <div class="bg-gradient-to-r from-primary/10 to-blue-500/10 rounded-2xl p-6 border border-primary/20 flex flex-col md:flex-row items-center justify-between gap-4">
        <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-xl bg-primary/20 flex items-center justify-center text-primary">
                <i data-lucide="layout-grid" class="w-6 h-6"></i>
            </div>
            <div>
                <h3 class="text-sm font-black uppercase tracking-widest text-foreground">@Localizer["Categories"]</h3>
                <p class="text-xs text-muted-foreground font-medium">@Localizer["ExploreByCategorySubtitle"]</p>
            </div>
        </div>
        <a href="/news/categories" class="px-6 py-2 bg-background border border-primary/30 hover:bg-primary hover:text-primary-foreground text-primary rounded-xl text-[10px] font-black uppercase tracking-widest transition-all active:scale-95">
            @Localizer["BrowseAllCategories"]
        </a>
    </div>

    <!-- Metrics Radar -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-primary/20">
            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="newspaper" class="w-5 h-5"></i>
            </div>
            <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.TotalCount</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["TotalArticles"]</div>
        </div>
        
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-green-500/10">
            <div class="w-10 h-10 rounded-xl bg-green-500/10 flex items-center justify-center text-green-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="star" class="w-5 h-5"></i>
            </div>
            <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.Items.Count(x => x.IsFeatured)</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["Featured"]</div>
        </div>
        
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-amber-500/10">
            <div class="w-10 h-10 rounded-xl bg-amber-500/10 flex items-center justify-center text-amber-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="eye" class="w-5 h-5"></i>
            </div>
            <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.Items.Sum(x => x.ViewCount)</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["TotalViews"]</div>
        </div>
        
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-blue-500/10">
            <div class="w-10 h-10 rounded-xl bg-blue-500/10 flex items-center justify-center text-blue-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="heart" class="w-5 h-5"></i>
            </div>
            <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.Items.Sum(x => x.LikeCount)</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["TotalLikes"]</div>
        </div>
    </div>

    <!-- Discovery Toolbar -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl space-y-6">
        <form method="get" id="newsSearchForm">
            <div class="flex flex-col lg:flex-row gap-4 items-center">
                <div class="relative flex-1 w-full group">
                    <input type="text" name="search" value="@searchRequest?.SearchTerm" 
                           placeholder="@Localizer["SearchPlaceholder"]" 
                           class="w-full bg-background border border-border pl-12 pr-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none">
                    <i data-lucide="search" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-muted-foreground group-focus-within:text-primary transition-colors"></i>
                </div>
                
                <div class="flex gap-2 w-full lg:w-auto">
                    <button type="button" class="flex-1 lg:flex-none h-[42px] px-6 py-2 rounded-xl bg-background border border-border hover:border-primary hover:text-primary text-[10px] font-black uppercase tracking-widest shadow-lg shadow-black/5 transition-all flex items-center justify-center gap-2 active:scale-95" id="toggleFiltersBtn">
                        <i data-lucide="sliders-horizontal" class="w-4 h-4"></i>
                        @Localizer["AdvancedFilters"]
                    </button>
                    <button type="submit" class="h-[42px] px-6 py-2 rounded-xl bg-primary text-primary-foreground hover:bg-primary/90 text-[10px] font-black uppercase tracking-widest shadow-lg transition-all flex items-center justify-center gap-2 active:scale-95">
                        <i data-lucide="search" class="w-4 h-4"></i>
                        @Localizer["Search"]
                    </button>
                    <a href="/news" class="h-[42px] px-6 py-2 rounded-xl bg-background border border-border hover:border-primary hover:text-primary text-[10px] font-black uppercase tracking-widest shadow-lg shadow-black/5 transition-all flex items-center justify-center gap-2 active:scale-95">
                        <i data-lucide="x" class="w-4 h-4"></i>
                        @Localizer["ClearFilters"]
                    </a>
                </div>
            </div>

            <!-- Hidden Filters Expansion -->
            <div class="hidden animate-in slide-in-from-top-4 duration-500 pt-6 border-t border-border/40" id="filtersPanel">
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                    <div class="space-y-2">
                        <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["Category"]</label>
                        <div class="relative">
                            <select name="category" class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold outline-none appearance-none">
                                <option value="">@Localizer["AllCategories"]</option>
                                <option value="General" selected="@(searchRequest?.Category == CommunityCar.Domain.Enums.NewsCategory.General)">@Localizer["General"]</option>
                                <option value="CarReviews" selected="@(searchRequest?.Category == CommunityCar.Domain.Enums.NewsCategory.CarReviews)">@Localizer["CarReviews"]</option>
                                <option value="Industry" selected="@(searchRequest?.Category == CommunityCar.Domain.Enums.NewsCategory.Industry)">@Localizer["Industry"]</option>
                                <option value="Technology" selected="@(searchRequest?.Category == CommunityCar.Domain.Enums.NewsCategory.Technology)">@Localizer["Technology"]</option>
                                <option value="Events" selected="@(searchRequest?.Category == CommunityCar.Domain.Enums.NewsCategory.Events)">@Localizer["Events"]</option>
                                <option value="Tips" selected="@(searchRequest?.Category == CommunityCar.Domain.Enums.NewsCategory.Tips)">@Localizer["Tips"]</option>
                            </select>
                            <i data-lucide="chevron-down" class="absolute right-4 top-1/2 -translate-y-1/2 w-3 h-3 text-muted-foreground pointer-events-none"></i>
                        </div>
                    </div>
                    
                    <div class="space-y-2">
                        <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["SortBy"]</label>
                        <div class="relative">
                            <select name="sortBy" class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold outline-none appearance-none">
                                <option value="newest" selected="@(searchRequest?.SortBy == "newest")">@Localizer["Newest"]</option>
                                <option value="oldest" selected="@(searchRequest?.SortBy == "oldest")">@Localizer["Oldest"]</option>
                                <option value="mostViewed" selected="@(searchRequest?.SortBy == "mostViewed")">@Localizer["MostViewed"]</option>
                                <option value="mostLiked" selected="@(searchRequest?.SortBy == "mostLiked")">@Localizer["MostLiked"]</option>
                                <option value="featured" selected="@(searchRequest?.SortBy == "featured")">@Localizer["Featured"]</option>
                            </select>
                            <i data-lucide="chevron-down" class="absolute right-4 top-1/2 -translate-y-1/2 w-3 h-3 text-muted-foreground pointer-events-none"></i>
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["CarMake"]</label>
                        <input type="text" name="carMake" value="@searchRequest?.CarMake" 
                               placeholder="@Localizer["CarMake"]" 
                               class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold outline-none focus:ring-4 focus:ring-primary/10 transition-all">
                    </div>
                    
                    <div class="space-y-2">
                        <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["CarModel"]</label>
                        <input type="text" name="carModel" value="@searchRequest?.CarModel" 
                               placeholder="@Localizer["CarModel"]" 
                               class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold outline-none focus:ring-4 focus:ring-primary/10 transition-all">
                    </div>
                </div>
                <div class="mt-6 flex justify-end">
                    <button type="button" onclick="resetFilters()" class="px-6 py-2 bg-muted text-[10px] font-black uppercase tracking-widest rounded-lg hover:bg-muted/80 transition-all">Reset Protocol</button>
                </div>
            </div>
        </form>
    </div>

    <!-- Quick Category Links -->
    <div class="flex flex-wrap gap-2 mb-6">
        <a href="/news/category/General" class="inline-flex items-center gap-2 px-4 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs font-bold transition-all shadow-lg shadow-black/5 active:scale-95">
            @Localizer["General"]
        </a>
        <a href="/news/category/CarReviews" class="inline-flex items-center gap-2 px-4 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs font-bold transition-all shadow-lg shadow-black/5 active:scale-95">
            @Localizer["CarReviews"]
        </a>
        <a href="/news/category/Industry" class="inline-flex items-center gap-2 px-4 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs font-bold transition-all shadow-lg shadow-black/5 active:scale-95">
            @Localizer["Industry"]
        </a>
        <a href="/news/category/Technology" class="inline-flex items-center gap-2 px-4 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs font-bold transition-all shadow-lg shadow-black/5 active:scale-95">
            @Localizer["Technology"]
        </a>
        <a href="/news/category/Events" class="inline-flex items-center gap-2 px-4 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs font-bold transition-all shadow-lg shadow-black/5 active:scale-95">
            @Localizer["Events"]
        </a>
        <a href="/news/category/Tips" class="inline-flex items-center gap-2 px-4 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs font-bold transition-all shadow-lg shadow-black/5 active:scale-95">
            @Localizer["Tips"]
        </a>
    </div>

    <div id="newsContent" class="min-h-[400px]">
        <div id="news-skeleton" class="hidden space-y-6">
            @for (int i = 0; i < 4; i++)
            {
                <skeleton type="Post" />
            }
        </div>
        <div id="news-list-container">
            @await Html.PartialAsync("~/Views/Community/News/_NewsList.cshtml", Model)
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/news.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Skeleton.initPageLoad('news-skeleton', 'news-list-container');
        });
    </script>
}