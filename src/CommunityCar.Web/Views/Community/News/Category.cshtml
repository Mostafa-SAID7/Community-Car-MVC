@model CommunityCar.Application.Features.News.ViewModels.NewsSearchResponse
@using CommunityCar.Domain.Enums
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> SharedLocalizer
@inject IViewLocalizer Localizer
@{
    // Get current culture for localization
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");

    var category = ViewBag.Category as NewsCategory?;
    var categoryName = category != null ? SharedLocalizer[category.Value.ToString()].Value : Localizer["AllNews"].Value;
    var categoryDescription = GetLocalizedCategoryDescription(category);
    ViewData["Title"] = $"{categoryName} - {Localizer["News"]}";
    Layout = "_Layout";
}

<div class="space-y-8">
    <!-- Category Header -->
    <div class="text-center py-12 bg-gradient-to-br from-primary/5 to-blue-500/5 rounded-2xl border border-border">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-primary/10 rounded-full mb-4">
            <i data-lucide="@GetCategoryIcon(category)" class="w-8 h-8 text-primary"></i>
        </div>
        <h1 class="text-3xl font-black text-foreground mb-2">@categoryName</h1>
        <p class="text-muted-foreground max-w-2xl mx-auto">@categoryDescription</p>
        
        @if (Model.TotalCount > 0)
        {
            <div class="mt-4 text-sm text-muted-foreground">
                <span class="font-medium">@Model.TotalCount</span> @Localizer["ArticlesFound"]
            </div>
        }
    </div>

    <!-- Category Navigation -->
    <div class="flex flex-wrap gap-2 justify-center">
        <a href="/news" class="inline-flex items-center px-4 py-2 rounded-xl text-sm font-medium transition-all @(category == null ? "bg-primary text-primary-foreground" : "bg-muted hover:bg-muted/80 text-muted-foreground hover:text-foreground")">
            @Localizer["AllNews"]
        </a>
        @foreach (NewsCategory cat in Enum.GetValues<NewsCategory>())
        {
            <a href="/news/category/@cat" class="inline-flex items-center px-4 py-2 rounded-xl text-sm font-medium transition-all @(category == cat ? "bg-primary text-primary-foreground" : "bg-muted hover:bg-muted/80 text-muted-foreground hover:text-foreground")">
                @SharedLocalizer[cat.ToString()]
            </a>
        }
    </div>

    <!-- News Content -->
    @if (Model.Items?.Any() == true)
    {
        <!-- News Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var newsItem in Model.Items)
            {
                <article class="bg-background border border-border rounded-2xl overflow-hidden hover:shadow-lg transition-all group">
                    @if (!string.IsNullOrEmpty(newsItem.ImageUrl))
                    {
                        <div class="aspect-video overflow-hidden">
                            <img src="@newsItem.ImageUrl" alt="@(isArabic && !string.IsNullOrEmpty(newsItem.HeadlineAr) ? newsItem.HeadlineAr : newsItem.Headline)" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
                        </div>
                    }
                    
                    <div class="p-6">
                        <!-- Category Badge -->
                        <div class="flex items-center gap-2 mb-3">
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-primary/10 text-primary">
                                <i data-lucide="@GetCategoryIcon(newsItem.Category)" class="w-3 h-3 mr-1"></i>
                                @newsItem.Category.ToString().Replace("Car", "Car ")
                            </span>
                            @if (newsItem.IsFeatured)
                            {
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400">
                                    <i data-lucide="star" class="w-3 h-3 mr-1"></i>
                                    @Localizer["Featured"]
                                </span>
                            }
                        </div>

                        <!-- Title -->
                        <h3 class="text-lg font-bold text-foreground mb-2 line-clamp-2 group-hover:text-primary transition-colors">
                            <a href="/news/@newsItem.Slug">@(isArabic && !string.IsNullOrEmpty(newsItem.HeadlineAr) ? newsItem.HeadlineAr : newsItem.Headline)</a>
                        </h3>

                        <!-- Summary -->
                        @{
                            var displaySummary = isArabic && !string.IsNullOrEmpty(newsItem.SummaryAr) ? newsItem.SummaryAr : newsItem.Summary;
                        }
                        @if (!string.IsNullOrEmpty(displaySummary))
                        {
                            <p class="text-sm text-muted-foreground mb-4 line-clamp-3">@displaySummary</p>
                        }

                        <!-- Car Info -->
                        @if (!string.IsNullOrEmpty(newsItem.CarMake) || !string.IsNullOrEmpty(newsItem.CarModel))
                        {
                            <div class="flex items-center gap-2 mb-3 text-sm text-muted-foreground">
                                <i data-lucide="car" class="w-4 h-4"></i>
                                <span>@($"{newsItem.CarYear} {newsItem.CarMake} {newsItem.CarModel}".Trim())</span>
                            </div>
                        }

                        <!-- Meta Info -->
                        <div class="flex items-center justify-between text-xs text-muted-foreground">
                            <div class="flex items-center gap-4">
                                <span class="flex items-center gap-1">
                                    <i data-lucide="calendar" class="w-3 h-3"></i>
                                    @newsItem.TimeAgo
                                </span>
                                <span class="flex items-center gap-1">
                                    <i data-lucide="eye" class="w-3 h-3"></i>
                                    @newsItem.ViewCount
                                </span>
                            </div>
                            <div class="flex items-center gap-2">
                                @if (newsItem.LikeCount > 0)
                                {
                                    <span class="flex items-center gap-1">
                                        <i data-lucide="heart" class="w-3 h-3"></i>
                                        @newsItem.LikeCount
                                    </span>
                                }
                                @if (newsItem.CommentCount > 0)
                                {
                                    <span class="flex items-center gap-1">
                                        <i data-lucide="message-circle" class="w-3 h-3"></i>
                                        @newsItem.CommentCount
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </article>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="flex items-center justify-center gap-2 mt-12">
                @if (Model.HasPreviousPage)
                {
                    <a href="/news/category/@category?page=@(Model.CurrentPage - 1)" class="inline-flex items-center px-4 py-2 bg-background border border-border rounded-lg hover:bg-muted transition-all">
                        <i data-lucide="chevron-left" class="w-4 h-4 mr-1"></i>
                        @Localizer["Previous"]
                    </a>
                }

                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                {
                    <a href="/news/category/@category?page=@i" class="inline-flex items-center justify-center w-10 h-10 rounded-lg transition-all @(i == Model.CurrentPage ? "bg-primary text-primary-foreground" : "bg-background border border-border hover:bg-muted")">
                        @i
                    </a>
                }

                @if (Model.HasNextPage)
                {
                    <a href="/news/category/@category?page=@(Model.CurrentPage + 1)" class="inline-flex items-center px-4 py-2 bg-background border border-border rounded-lg hover:bg-muted transition-all">
                        @Localizer["Next"]
                        <i data-lucide="chevron-right" class="w-4 h-4 ml-1"></i>
                    </a>
                }
            </div>
        }
    }
    else
    {
        <!-- Empty State -->
        <div class="text-center py-16">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-muted/30 rounded-full mb-4">
                <i data-lucide="newspaper" class="w-8 h-8 text-muted-foreground"></i>
            </div>
            <h3 class="text-xl font-bold text-foreground mb-2">@Localizer["NoArticlesFound"]</h3>
            <p class="text-muted-foreground mb-6">@string.Format(Localizer["NoArticlesInCategory"].Value, categoryName)</p>
            <a href="/news" class="inline-flex items-center px-6 py-3 bg-primary text-primary-foreground rounded-xl font-medium hover:bg-primary/90 transition-all">
                <i data-lucide="arrow-left" class="w-4 h-4 mr-2"></i>
                @Localizer["BackToAllNews"]
            </a>
        </div>
    }
</div>

@functions {
    private string GetLocalizedCategoryDescription(NewsCategory? category)
    {
        return category switch
        {
            NewsCategory.General => Localizer["GeneralDescription"].Value,
            NewsCategory.CarReviews => Localizer["CarReviewsDescription"].Value,
            NewsCategory.Industry => Localizer["IndustryDescription"].Value,
            NewsCategory.Technology => Localizer["TechnologyDescription"].Value,
            NewsCategory.Events => Localizer["EventsDescription"].Value,
            NewsCategory.Tips => Localizer["TipsDescription"].Value,
            _ => Localizer["DefaultDescription"].Value
        };
    }

    private string GetCategoryIcon(NewsCategory? category)
    {
        return category switch
        {
            NewsCategory.General => "newspaper",
            NewsCategory.CarReviews => "star",
            NewsCategory.Industry => "building-2",
            NewsCategory.Technology => "cpu",
            NewsCategory.Events => "calendar",
            NewsCategory.Tips => "lightbulb",
            _ => "newspaper"
        };
    }
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Lucide icons
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        });
    </script>
}