@using CommunityCar.Domain.Enums
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> SharedLocalizer
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["BrowseByCategories"];
    Layout = "_Layout";
}

<div class="space-y-8 animate-in fade-in duration-700">
    <div class="text-center py-12 bg-gradient-to-br from-primary/5 to-blue-500/5 rounded-3xl border border-border/50 shadow-xl overflow-hidden relative">
        <div class="absolute top-0 right-0 p-8 opacity-5">
            <i data-lucide="layers" class="w-64 h-64 -rotate-12"></i>
        </div>
        <div class="relative z-10">
            <h1 class="text-4xl font-black text-foreground tracking-tight mb-3">@Localizer["HeaderTitle"]</h1>
            <p class="text-muted-foreground max-w-2xl mx-auto font-medium opacity-80">@Localizer["HeaderSubtitle"]</p>
        </div>
    </div>

    <!-- Category Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (NewsCategory category in Enum.GetValues<NewsCategory>())
        {
            <a href="/news/category/@category" class="group bg-card/40 backdrop-blur-md border border-border rounded-2xl p-8 hover-lift shadow-lg hover:border-primary/30 transition-all flex flex-col items-center text-center">
                <div class="w-16 h-16 rounded-2xl bg-primary/10 flex items-center justify-center text-primary mb-6 group-hover:scale-110 group-hover:rotate-3 transition-transform duration-300">
                    <i data-lucide="@GetCategoryIcon(category)" class="w-8 h-8"></i>
                </div>
                <h3 class="text-xl font-black text-foreground mb-3 group-hover:text-primary transition-colors">@SharedLocalizer[category.ToString()]</h3>
                <p class="text-sm text-muted-foreground line-clamp-2 opacity-70">@GetLocalizedCategoryDescription(category)</p>
                <div class="mt-6 flex items-center gap-2 text-xs font-black uppercase tracking-widest text-primary opacity-0 group-hover:opacity-100 -translate-x-2 group-hover:translate-x-0 transition-all">
                    @Localizer["ViewArticles"]
                    <i data-lucide="arrow-right" class="w-3 h-3"></i>
                </div>
            </a>
        }
    </div>

    <div class="mt-12 text-center">
        <a href="/news" class="inline-flex items-center gap-2 px-8 py-3 bg-background border border-border hover:border-primary hover:text-primary rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95 group">
            <i data-lucide="arrow-left" class="w-4 h-4 group-hover:-translate-x-1 transition-transform"></i>
            @Localizer["BackToNewsFeed"]
        </a>
    </div>
</div>

@functions {
    private string GetLocalizedCategoryDescription(NewsCategory? category)
    {
        return category switch
        {
            NewsCategory.General => Localizer["GeneralDescription"].Value,
            NewsCategory.CarReviews => Localizer["CarReviewsDescription"].Value,
            NewsCategory.Industry => Localizer["IndustryDescription"].Value,
            NewsCategory.Technology => Localizer["TechnologyDescription"].Value,
            NewsCategory.Events => Localizer["EventsDescription"].Value,
            NewsCategory.Tips => Localizer["TipsDescription"].Value,
            _ => Localizer["DefaultDescription"].Value
        };
    }

    private string GetCategoryIcon(NewsCategory? category)
    {
        return category switch
        {
            NewsCategory.General => "newspaper",
            NewsCategory.CarReviews => "star",
            NewsCategory.Industry => "building-2",
            NewsCategory.Technology => "cpu",
            NewsCategory.Events => "calendar",
            NewsCategory.Tips => "lightbulb",
            _ => "newspaper"
        };
    }
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        });
    </script>
}
