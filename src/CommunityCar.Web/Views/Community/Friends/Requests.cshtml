@using Microsoft.Extensions.Localization
@model CommunityCar.Application.Features.Community.Friends.ViewModels.FriendRequestsVM
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="space-y-8 animate-in fade-in duration-700">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tight">@Localizer["HeaderTitle"]</h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">@Localizer["ManageRequestsSubtitle"]</p>
        </div>
        <a asp-controller="Friends" asp-action="Index" asp-route-culture="@System.Globalization.CultureInfo.CurrentCulture.Name" class="inline-flex items-center gap-2.5 px-6 py-3 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95 group">
            <i data-lucide="arrow-left" class="w-4 h-4 group-hover:scale-125 transition-transform"></i>
            @Localizer["BackToFriends"]
        </a>
    </div>

    <!-- Metrics -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-orange-500/20">
            <div class="w-10 h-10 rounded-xl bg-orange-500/10 flex items-center justify-center text-orange-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="inbox" class="w-5 h-5"></i>
            </div>
            <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.PendingRequests.Count()</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["ReceivedRequests"]</div>
        </div>
        
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-blue-500/20">
            <div class="w-10 h-10 rounded-xl bg-blue-500/10 flex items-center justify-center text-blue-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="send" class="w-5 h-5"></i>
            </div>
            <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.SentRequests.Count()</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["SentRequests"]</div>
        </div>
    </div>

    <div id="requests-skeleton" class="hidden grid grid-cols-1 lg:grid-cols-2 gap-8">
        <skeleton type="Card" />
        <skeleton type="Card" />
    </div>

    <div id="requests-content" class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Pending Requests (Received) -->
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
            <div class="p-6">
                <h3 class="text-lg font-black text-foreground mb-6 flex items-center gap-2">
                    <i data-lucide="inbox" class="w-5 h-5 text-orange-500"></i>
                    @Localizer["ReceivedRequests"] (@Model.PendingRequests.Count())
                </h3>
                
                @if (Model.PendingRequests.Any())
                {
                    <div class="space-y-4">
                        @foreach (var request in Model.PendingRequests)
                        {
                            <div class="bg-background/50 border border-border rounded-2xl p-4 group hover:bg-muted/40 transition-all hover:border-primary/20 hover:shadow-md">
                                <div class="flex items-start gap-4">
                                    <div class="relative">
                                        @if (!string.IsNullOrEmpty(request.ProfilePictureUrl))
                                        {
                                            <img src="@request.ProfilePictureUrl" alt="@request.FullName" class="w-12 h-12 rounded-full object-cover" />
                                        }
                                        else
                                        {
                                            <div class="w-12 h-12 rounded-full bg-primary flex items-center justify-center text-primary-foreground font-black text-xs">
                                                @request.FullName.Substring(0, Math.Min(2, request.FullName.Length)).ToUpper()
                                            </div>
                                        }
                                    </div>
                                    
                                    <div class="flex-1 min-w-0">
                                        <h4 class="text-sm font-black text-foreground">@request.FullName</h4>
                                        <p class="text-xs text-muted-foreground">@@@request.UserName</p>
                                        
                                        @if (!string.IsNullOrEmpty(request.City))
                                        {
                                            <p class="text-xs text-muted-foreground flex items-center gap-1 mt-1">
                                                <i data-lucide="map-pin" class="w-3 h-3"></i>
                                                @request.City@(!string.IsNullOrEmpty(request.Country) ? $", {request.Country}" : "")
                                            </p>
                                        }
                                        
                                        @if (request.MutualFriendsCount > 0)
                                        {
                                            <p class="text-xs text-muted-foreground mt-1 flex items-center gap-1">
                                                <i data-lucide="users" class="w-3 h-3"></i>
                                                @if (request.MutualFriendsCount == 1)
                                                {
                                                    @Localizer["OneMutualFriend"]
                                                }
                                                else
                                                {
                                                    @string.Format(Localizer["MutualFriendsCount"].Value, request.MutualFriendsCount)
                                                }
                                            </p>
                                        }
                                        
                                        @if (!string.IsNullOrEmpty(request.Bio))
                                        {
                                            <p class="text-xs text-muted-foreground mt-2 line-clamp-2">@request.Bio</p>
                                        }
                                        
                                        <p class="text-xs text-muted-foreground mt-2">@string.Format(Localizer["SentDate"].Value, request.RequestDate.ToString("MMM dd, yyyy"))</p>
                                    </div>
                                </div>
                                
                                <div class="flex gap-3 mt-4">
                                    <button class="inline-flex items-center gap-2 px-4 py-2 bg-green-500 text-white hover:bg-green-600 rounded-xl text-xs font-bold transition-all active:scale-95 flex-1 justify-center" onclick="acceptRequest('@request.FriendshipId')">
                                        <i data-lucide="check" class="w-3 h-3"></i>
                                        @Localizer["Accept"]
                                    </button>
                                    <button class="inline-flex items-center gap-2 px-4 py-2 bg-background border border-border hover:border-red-500 hover:text-red-600 rounded-xl text-xs font-bold transition-all active:scale-95 flex-1 justify-center" onclick="declineRequest('@request.FriendshipId')">
                                        <i data-lucide="x" class="w-3 h-3"></i>
                                        @Localizer["Decline"]
                                    </button>
                                    <button class="inline-flex items-center justify-center w-10 h-10 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs transition-all active:scale-95" onclick="viewProfile('@request.UserId')">
                                        <i data-lucide="user" class="w-4 h-4"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-12">
                        <i data-lucide="inbox" class="w-16 h-16 text-muted-foreground mx-auto mb-4"></i>
                        <h3 class="text-lg font-black text-foreground mb-2">@Localizer["NoPendingRequests"]</h3>
                        <p class="text-muted-foreground">@Localizer["NoPendingRequestsDescription"]</p>
                    </div>
                }
            </div>
        </div>

        <!-- Sent Requests -->
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
            <div class="p-6">
                <h3 class="text-lg font-black text-foreground mb-6 flex items-center gap-2">
                    <i data-lucide="send" class="w-5 h-5 text-blue-500"></i>
                    @Localizer["SentRequests"] (@Model.SentRequests.Count())
                </h3>
                
                @if (Model.SentRequests.Any())
                {
                    <div class="space-y-4">
                        @foreach (var request in Model.SentRequests)
                        {
                            <div class="bg-background/50 border border-border rounded-2xl p-4 group hover:bg-muted/40 transition-all hover:border-primary/20 hover:shadow-md">
                                <div class="flex items-start gap-4">
                                    <div class="relative">
                                        @if (!string.IsNullOrEmpty(request.ProfilePictureUrl))
                                        {
                                            <img src="@request.ProfilePictureUrl" alt="@request.FullName" class="w-12 h-12 rounded-full object-cover" />
                                        }
                                        else
                                        {
                                            <div class="w-12 h-12 rounded-full bg-primary flex items-center justify-center text-primary-foreground font-black text-xs">
                                                @request.FullName.Substring(0, Math.Min(2, request.FullName.Length)).ToUpper()
                                            </div>
                                        }
                                    </div>
                                    
                                    <div class="flex-1 min-w-0">
                                        <h4 class="text-sm font-black text-foreground">@request.FullName</h4>
                                        <p class="text-xs text-muted-foreground">@@@request.UserName</p>
                                        
                                        @if (!string.IsNullOrEmpty(request.City))
                                        {
                                            <p class="text-xs text-muted-foreground flex items-center gap-1 mt-1">
                                                <i data-lucide="map-pin" class="w-3 h-3"></i>
                                                @request.City@(!string.IsNullOrEmpty(request.Country) ? $", {request.Country}" : "")
                                            </p>
                                        }
                                        
                                        @if (request.MutualFriendsCount > 0)
                                        {
                                            <p class="text-xs text-muted-foreground mt-1 flex items-center gap-1">
                                                <i data-lucide="users" class="w-3 h-3"></i>
                                                @if (request.MutualFriendsCount == 1)
                                                {
                                                    @Localizer["OneMutualFriend"]
                                                }
                                                else
                                                {
                                                    @string.Format(Localizer["MutualFriendsCount"].Value, request.MutualFriendsCount)
                                                }
                                            </p>
                                        }
                                        
                                        <div class="flex items-center gap-2 mt-2">
                                            <span class="inline-flex items-center gap-1 px-2 py-1 bg-yellow-500/10 text-yellow-600 text-xs rounded-full">
                                                <i data-lucide="clock" class="w-3 h-3"></i>
                                                @Localizer["Pending"]
                                            </span>
                                            <span class="text-xs text-muted-foreground">@string.Format(Localizer["SentDate"].Value, request.RequestDate.ToString("MMM dd, yyyy"))</span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="flex gap-3 mt-4">
                                    <button class="inline-flex items-center gap-2 px-4 py-2 bg-background border border-border hover:border-red-500 hover:text-red-600 rounded-xl text-xs font-bold transition-all active:scale-95 flex-1 justify-center" onclick="cancelRequest('@request.FriendshipId')">
                                        <i data-lucide="x" class="w-3 h-3"></i>
                                        @Localizer["CancelRequest"]
                                    </button>
                                    <button class="inline-flex items-center justify-center w-10 h-10 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs transition-all active:scale-95" onclick="viewProfile('@request.UserId')">
                                        <i data-lucide="user" class="w-4 h-4"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-12">
                        <i data-lucide="send" class="w-16 h-16 text-muted-foreground mx-auto mb-4"></i>
                        <h3 class="text-lg font-black text-foreground mb-2">@Localizer["NoSentRequests"]</h3>
                        <p class="text-muted-foreground">@Localizer["NoSentRequestsDescription"]</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Skeleton.initPageLoad('requests-skeleton', 'requests-content');
        });

        async function acceptRequest(friendshipId) {
            try {
                const response = await fetch('/friends/accept-request', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: JSON.stringify({ friendshipId: friendshipId })
                });
                
                const result = await response.json();
                if (result.success) {
                    window.notify.success(result.message);
                    location.reload();
                } else {
                    window.notify.error(result.message);
                }
            } catch (error) {
                window.notify.error('An error occurred while accepting the friend request.');
            }
        }

        async function declineRequest(friendshipId) {
            try {
                const response = await fetch('/friends/decline-request', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: JSON.stringify({ friendshipId: friendshipId })
                });
                
                const result = await response.json();
                if (result.success) {
                    window.notify.success(result.message);
                    location.reload();
                } else {
                    window.notify.error(result.message);
                }
            } catch (error) {
                window.notify.error('An error occurred while declining the friend request.');
            }
        }

        async function cancelRequest(friendshipId) {
            if (!confirm('Are you sure you want to cancel this friend request?')) {
                return;
            }

            try {
                const response = await fetch('/friends/decline-request', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: JSON.stringify({ friendshipId: friendshipId })
                });
                
                const result = await response.json();
                if (result.success) {
                    window.notify.success('Friend request cancelled');
                    location.reload();
                } else {
                    window.notify.error(result.message);
                }
            } catch (error) {
                window.notify.error('An error occurred while cancelling the friend request.');
            }
        }

        function viewProfile(userId) {
            window.location.href = `/profile/${userId}`;
        }
    </script>
}