@using Microsoft.Extensions.Localization
@model CommunityCar.Application.Features.Friends.ViewModels.FriendsOverviewVM
@inject IStringLocalizer<SharedResource> SharedLocalizer
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="container mx-auto px-4 py-8 max-w-6xl">
    <!-- Header Section -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden animate-in fade-in duration-700 mb-6">
        <div class="p-8">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-black text-foreground flex items-center gap-3">
                    <div class="bg-primary/10 p-2 rounded-xl text-primary">
                        <i data-lucide="users" class="w-6 h-6"></i>
                    </div>
                    @Localizer["HeaderTitle"]
                </h2>
                <div class="flex items-center gap-4">
                    <div class="text-center">
                        <div class="text-2xl font-black text-primary">@Model.TotalFriends</div>
                        <div class="text-xs text-muted-foreground">@SharedLocalizer["Friends"]</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-black text-orange-500">@Model.PendingRequests</div>
                        <div class="text-xs text-muted-foreground">@Localizer["FriendRequests"]</div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="flex gap-3 mb-6">
                <a href="/friends/all" class="btn-primary">
                    <i data-lucide="users" class="w-4 h-4"></i>
                    @Localizer["AllFriends"]
                </a>
                <a href="/friends/requests" class="btn-secondary">
                    <i data-lucide="user-plus" class="w-4 h-4"></i>
                    @Localizer["FriendRequests"] (@Model.PendingRequests)
                </a>
                <a href="/friends/suggestions" class="btn-secondary">
                    <i data-lucide="user-search" class="w-4 h-4"></i>
                    @Localizer["FindFriends"]
                </a>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Recent Friends -->
        <div class="lg:col-span-2">
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
                <div class="p-6">
                    <h3 class="text-lg font-black text-foreground mb-4 flex items-center gap-2">
                        <i data-lucide="users" class="w-5 h-5 text-primary"></i>
                        @Localizer["RecentFriends"]
                    </h3>
                    
                    @if (Model.RecentFriends.Any())
                    {
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            @foreach (var friend in Model.RecentFriends)
                            {
                                <div class="flex items-center gap-4 p-4 bg-muted/20 border border-border/50 rounded-2xl group hover:bg-muted/40 transition-all hover:border-primary/20">
                                    <div class="relative">
                                        @if (!string.IsNullOrEmpty(friend.ProfilePictureUrl))
                                        {
                                            <img src="@friend.ProfilePictureUrl" alt="@friend.FullName" class="w-12 h-12 rounded-full object-cover" />
                                        }
                                        else
                                        {
                                            <div class="w-12 h-12 rounded-full bg-primary flex items-center justify-center text-primary-foreground font-black text-xs shadow-lg">
                                                @friend.FullName.Substring(0, Math.Min(2, friend.FullName.Length)).ToUpper()
                                            </div>
                                        }
                                        @if (friend.IsOnline)
                                        {
                                            <span class="absolute -bottom-1 -right-1 w-4 h-4 rounded-full bg-green-500 border-2 border-background"></span>
                                        }
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <div class="text-sm font-black text-foreground truncate">@friend.FullName</div>
                                        <div class="text-xs text-muted-foreground">
                                            @if (!string.IsNullOrEmpty(friend.City))
                                            {
                                                <span>@friend.City</span>
                                            }
                                            @if (friend.MutualFriendsCount > 0)
                                            {
                                                <span class="ml-2">• @friend.MutualFriendsCount mutual</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="flex gap-2">
                                        <a href="/chats?user=@friend.UserId" class="btn-sm btn-primary">
                                            <i data-lucide="message-circle" class="w-4 h-4"></i>
                                        </a>
                                        <button class="btn-sm btn-secondary" onclick="viewProfile('@friend.UserId')">
                                            <i data-lucide="user" class="w-4 h-4"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        @if (Model.TotalFriends > Model.RecentFriends.Count())
                        {
                            <div class="mt-4 text-center">
                                <a href="/friends/all" class="text-primary hover:text-primary/80 text-sm font-medium">
                                    View all @Model.TotalFriends friends →
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-8">
                            <i data-lucide="users" class="w-12 h-12 text-muted-foreground mx-auto mb-4"></i>
                            <p class="text-muted-foreground">No friends yet</p>
                            <a href="/friends/suggestions" class="btn-primary mt-4">Find Friends</a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            <!-- Friend Requests -->
            @if (Model.RecentRequests.Any())
            {
                <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
                    <div class="p-6">
                        <h3 class="text-lg font-black text-foreground mb-4 flex items-center gap-2">
                            <i data-lucide="user-plus" class="w-5 h-5 text-orange-500"></i>
                            Friend Requests
                        </h3>
                        
                        <div class="space-y-3">
                            @foreach (var request in Model.RecentRequests)
                            {
                                <div class="flex items-center gap-3 p-3 bg-muted/20 border border-border/50 rounded-xl">
                                    @if (!string.IsNullOrEmpty(request.ProfilePictureUrl))
                                    {
                                        <img src="@request.ProfilePictureUrl" alt="@request.FullName" class="w-10 h-10 rounded-full object-cover" />
                                    }
                                    else
                                    {
                                        <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center text-primary-foreground font-black text-xs">
                                            @request.FullName.Substring(0, Math.Min(2, request.FullName.Length)).ToUpper()
                                        </div>
                                    }
                                    <div class="flex-1 min-w-0">
                                        <div class="text-sm font-medium text-foreground truncate">@request.FullName</div>
                                        <div class="text-xs text-muted-foreground">@request.RequestDate.ToString("MMM dd")</div>
                                    </div>
                                    <div class="flex gap-1">
                                        <button class="btn-xs btn-primary" onclick="acceptRequest('@request.FriendshipId')">
                                            <i data-lucide="check" class="w-3 h-3"></i>
                                        </button>
                                        <button class="btn-xs btn-secondary" onclick="declineRequest('@request.FriendshipId')">
                                            <i data-lucide="x" class="w-3 h-3"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        @if (Model.PendingRequests > Model.RecentRequests.Count())
                        {
                            <div class="mt-4 text-center">
                                <a href="/friends/requests" class="text-primary hover:text-primary/80 text-sm font-medium">
                                    View all requests →
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Friend Suggestions -->
            @if (Model.Suggestions.Any())
            {
                <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
                    <div class="p-6">
                        <h3 class="text-lg font-black text-foreground mb-4 flex items-center gap-2">
                            <i data-lucide="user-search" class="w-5 h-5 text-blue-500"></i>
                            People You May Know
                        </h3>
                        
                        <div class="space-y-3">
                            @foreach (var suggestion in Model.Suggestions)
                            {
                                <div class="flex items-center gap-3 p-3 bg-muted/20 border border-border/50 rounded-xl">
                                    @if (!string.IsNullOrEmpty(suggestion.ProfilePictureUrl))
                                    {
                                        <img src="@suggestion.ProfilePictureUrl" alt="@suggestion.FullName" class="w-10 h-10 rounded-full object-cover" />
                                    }
                                    else
                                    {
                                        <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center text-primary-foreground font-black text-xs">
                                            @suggestion.FullName.Substring(0, Math.Min(2, suggestion.FullName.Length)).ToUpper()
                                        </div>
                                    }
                                    <div class="flex-1 min-w-0">
                                        <div class="text-sm font-medium text-foreground truncate">@suggestion.FullName</div>
                                        <div class="text-xs text-muted-foreground truncate">@suggestion.SuggestionReason</div>
                                    </div>
                                    <button class="btn-xs btn-primary" onclick="sendFriendRequest('@suggestion.UserId')">
                                        <i data-lucide="user-plus" class="w-3 h-3"></i>
                                    </button>
                                </div>
                            }
                        </div>
                        
                        <div class="mt-4 text-center">
                            <a href="/friends/suggestions" class="text-primary hover:text-primary/80 text-sm font-medium">
                                See more suggestions →
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_LocalizationScript")
    <script>
        async function sendFriendRequest(receiverId) {
            try {
                const response = await fetch('/friends/send-request', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: JSON.stringify({ receiverId: receiverId })
                });
                
                const result = await response.json();
                if (result.success) {
                    window.notify.success(result.message);
                    location.reload();
                } else {
                    window.notify.error(result.message);
                }
            } catch (error) {
                window.notify.error('An error occurred while sending the friend request.');
            }
        }

        async function acceptRequest(friendshipId) {
            try {
                const response = await fetch('/friends/accept-request', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: JSON.stringify({ friendshipId: friendshipId })
                });
                
                const result = await response.json();
                if (result.success) {
                    window.notify.success(result.message);
                    location.reload();
                } else {
                    window.notify.error(result.message);
                }
            } catch (error) {
                window.notify.error('An error occurred while accepting the friend request.');
            }
        }

        async function declineRequest(friendshipId) {
            try {
                const response = await fetch('/friends/decline-request', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: JSON.stringify({ friendshipId: friendshipId })
                });
                
                const result = await response.json();
                if (result.success) {
                    window.notify.success(result.message);
                    location.reload();
                } else {
                    window.notify.error(result.message);
                }
            } catch (error) {
                window.notify.error('An error occurred while declining the friend request.');
            }
        }

        function viewProfile(userId) {
            window.location.href = `/profile/${userId}`;
        }
    </script>
}
