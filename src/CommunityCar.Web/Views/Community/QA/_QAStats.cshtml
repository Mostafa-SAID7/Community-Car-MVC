@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model CommunityCar.Application.Features.Community.QA.ViewModels.QASearchStats

<!-- Metrics Radar -->
<div class="row g-4">
    <div class="col-6 col-lg-3">
        <div class="card card-premium p-4 h-100 border-0 animate-float" style="animation-delay: 0.1s">
            <div class="bg-primary-red-subtle text-primary-red rounded-4 p-3 d-flex align-items-center justify-content-center mb-3" style="width: 48px; height: 48px;">
                <i data-lucide="help-circle" style="width: 20px;"></i>
            </div>
            <div class="h2 fw-black text-dark mb-0 tabular-nums">@Model.TotalQuestions</div>
            <div class="small fw-black text-uppercase tracking-widest text-muted opacity-50">@Localizer["TotalQuestions"]</div>
        </div>
    </div>
    
    <div class="col-6 col-lg-3">
        <div class="card card-premium p-4 h-100 border-0 animate-float" style="animation-delay: 0.2s">
            <div class="bg-success-subtle text-success rounded-4 p-3 d-flex align-items-center justify-content-center mb-3" style="width: 48px; height: 48px;">
                <i data-lucide="check-circle" style="width: 20px;"></i>
            </div>
            <div class="h2 fw-black text-dark mb-0 tabular-nums">@Model.SolvedQuestions</div>
            <div class="small fw-black text-uppercase tracking-widest text-muted opacity-50">@Localizer["Solved"]</div>
        </div>
    </div>
    
    <div class="col-6 col-lg-3">
        <div class="card card-premium p-4 h-100 border-0 animate-float" style="animation-delay: 0.3s">
            <div class="bg-warning-subtle text-warning rounded-4 p-3 d-flex align-items-center justify-content-center mb-3" style="width: 48px; height: 48px;">
                <i data-lucide="alert-circle" style="width: 20px;"></i>
            </div>
            <div class="h2 fw-black text-dark mb-0 tabular-nums">@Model.OpenQuestions</div>
            <div class="small fw-black text-uppercase tracking-widest text-muted opacity-50">@Localizer["Open"]</div>
        </div>
    </div>
    
    <div class="col-6 col-lg-3">
        <div class="card card-premium p-4 h-100 border-0 animate-float" style="animation-delay: 0.4s">
            <div class="bg-info-subtle text-info rounded-4 p-3 d-flex align-items-center justify-content-center mb-3" style="width: 48px; height: 48px;">
                <i data-lucide="message-square" style="width: 20px;"></i>
            </div>
            <div class="h2 fw-black text-dark mb-0 tabular-nums">@Model.TotalAnswers</div>
            <div class="small fw-black text-uppercase tracking-widest text-muted opacity-50">@Localizer["TotalAnswers"]</div>
        </div>
    </div>
</div>