@inject IViewLocalizer Localizer
@model CommunityCar.Application.Features.QA.ViewModels.QuestionVM
@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
    var displayTitle = isArabic && !string.IsNullOrEmpty(Model.TitleAr) ? Model.TitleAr : Model.Title;
    var displayBody = isArabic && !string.IsNullOrEmpty(Model.BodyAr) ? Model.BodyAr : Model.Body;

    ViewData["Title"] = $"{displayTitle} - Protocol Details";
    var answers = ViewBag.Answers as IEnumerable<CommunityCar.Application.Features.QA.ViewModels.AnswerVM>;
}

<div class="max-w-6xl mx-auto space-y-8 animate-in fade-in duration-700">
    <!-- Breadcrumb Protocol -->
    <nav class="flex items-center gap-3 text-[10px] font-black uppercase tracking-widest text-muted-foreground/60 px-2">
        <a href="@Url.Action("Index", "QA")" class="hover:text-primary transition-colors flex items-center gap-2">
            <i data-lucide="chevron-left" class="w-3.5 h-3.5"></i> @Localizer["QARegistry"]
        </a>
        <span class="opacity-20">/</span>
        <span class="text-foreground/40">@Localizer["TransmissionDetail"]</span>
    </nav>
    
    <div class="relative group">
        <!-- Background Glow Accent -->
        <div class="absolute -inset-1 bg-gradient-to-r from-primary/20 via-transparent to-primary/20 rounded-[2.5rem] blur-2xl opacity-0 group-hover:opacity-100 transition duration-1000"></div>
        
        <div class="relative bg-card/40 backdrop-blur-xl border border-border/50 rounded-[2rem] shadow-2xl overflow-hidden">
            <!-- Header Section: High-Contrast Stats & Title -->
            <div class="flex flex-col lg:flex-row border-b border-border/30">
                <div class="flex-1 p-8 md:p-12 space-y-6">
                    <div class="space-y-4">
                        <div class="flex flex-wrap gap-2">
                            @if (Model.IsSolved)
                            {
                                <span class="px-3 py-1 rounded-2xl text-[9px] font-black uppercase tracking-widest bg-green-500/10 text-green-600 border border-green-500/20 flex items-center gap-1.5 shadow-sm">
                                    <i data-lucide="check-circle-2" class="w-3.5 h-3.5"></i> @Localizer["Solved"]
                                </span>
                            }
                            <span class="px-3 py-1 rounded-2xl text-[9px] font-black uppercase tracking-widest @(Model.DifficultyColor == "beginner" ? "bg-green-500/10 text-green-600 border-green-500/10" : "bg-primary/10 text-primary border-primary/10") border shadow-sm">
                                @Model.DifficultyDisplay @Localizer["Protocol"]
                            </span>
                        </div>
                        <h1 class="text-4xl md:text-5xl font-black text-foreground tracking-tighter leading-[1.1]">@displayTitle</h1>
                    </div>

                    <div class="flex items-center gap-6 pt-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 rounded-2xl bg-muted border border-border/50 flex items-center justify-center overflow-hidden shadow-inner group/avatar">
                                @if (!string.IsNullOrEmpty(Model.AuthorProfilePicture))
                                {
                                    <img src="@Model.AuthorProfilePicture" class="w-full h-full object-cover transition-transform group-hover/avatar:scale-110" />
                                }
                                else
                                {
                                    <i data-lucide="user" class="w-6 h-6 text-muted-foreground opacity-40"></i>
                                }
                            </div>
                            <div class="space-y-0.5">
                                <span class="block text-sm font-black text-foreground hover:text-primary cursor-pointer transition-colors">@Model.AuthorName</span>
                                <span class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["Posted"] @Model.TimeAgo</span>
                            </div>
                        </div>
                        <div class="h-8 w-px bg-border/40"></div>
                        <div class="flex gap-4">
                            @foreach (var tag in Model.Tags.Take(3))
                            {
                                <span class="text-[10px] font-black uppercase tracking-widest text-primary opacity-40 hover:opacity-100 transition-opacity cursor-pointer">#@tag</span>
                            }
                        </div>
                    </div>
                </div>

                <!-- Right Stats Panel: Engineering Aesthetic -->
                <div class="lg:w-72 bg-muted/20 border-l border-border/30 p-8 flex flex-col justify-center gap-8">
                    <div class="grid grid-cols-2 gap-8 lg:grid-cols-1">
                        <div class="space-y-1">
                            <span class="block text-[32px] font-black text-foreground leading-none tabular-nums tracking-tighter">@Model.VoteScore.ToString("D2")</span>
                            <span class="block text-[9px] font-black uppercase tracking-[0.2em] text-muted-foreground opacity-50">@Localizer["ScoreDelta"]</span>
                        </div>
                        <div class="space-y-1">
                            <span class="block text-[32px] font-black text-foreground leading-none tabular-nums tracking-tighter">@Model.ViewCount.ToString("N0")</span>
                            <span class="block text-[9px] font-black uppercase tracking-[0.2em] text-muted-foreground opacity-50">@Localizer["PulseHits"]</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Content Area: Typography-First Navigation -->
            <div class="flex flex-col md:flex-row relative">
                <!-- Sidebar Interaction Protocol -->
                <div class="md:w-24 border-r border-border/30 p-6 flex flex-col items-center gap-6 sticky top-0">
                    <div class="flex flex-col items-center gap-2">
                        <button class="w-12 h-12 flex items-center justify-center rounded-2xl bg-background border border-border shadow-sm hover:border-primary hover:text-primary transition-all active:scale-90 group/btn">
                            <i data-lucide="arrow-up" class="w-6 h-6 group-hover/btn:-translate-y-0.5 transition-transform"></i>
                        </button>
                        <span class="text-xs font-black tabular-nums py-1">@Model.VoteScore</span>
                        <button class="w-12 h-12 flex items-center justify-center rounded-2xl bg-background border border-border shadow-sm hover:border-destructive hover:text-destructive transition-all active:scale-90 group/btn">
                            <i data-lucide="arrow-down" class="w-6 h-6 group-hover/btn:translate-y-0.5 transition-transform"></i>
                        </button>
                    </div>
                    <div class="w-8 h-px bg-border/40"></div>
                    <button class="w-12 h-12 flex items-center justify-center rounded-2xl bg-background border border-border shadow-sm hover:border-amber-500 hover:text-amber-500 transition-all active:scale-90 @(Model.IsBookmarked ? "text-amber-500 bg-amber-500/5 border-amber-500/20" : "")">
                        <i data-lucide="bookmark" class="w-5 h-5 @(Model.IsBookmarked ? "fill-current" : "")"></i>
                    </button>
                    <button class="w-12 h-12 flex items-center justify-center rounded-2xl bg-background border border-border shadow-sm hover:border-blue-500 hover:text-blue-500 transition-all active:scale-90">
                        <i data-lucide="share-2" class="w-5 h-5"></i>
                    </button>
                </div>

                <!-- Main Body Content -->
                <div class="flex-1 p-8 md:p-12">
                    @if (!string.IsNullOrEmpty(Model.CarDisplayName))
                    {
                        <div class="mb-10 flex items-center gap-4 px-6 py-4 bg-primary/[0.03] border border-primary/10 rounded-2xl shadow-inner">
                            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary">
                                <i data-lucide="car-front" class="w-5 h-5"></i>
                            </div>
                            <div>
                                <span class="block text-[9px] font-black uppercase tracking-widest text-primary/60 mb-0.5">@Localizer["AssetIdentified"]</span>
                                <span class="block text-sm font-black text-foreground">@Model.CarDisplayName <span class="text-xs font-medium text-muted-foreground opacity-60 ml-2">(@Model.CarEngine)</span></span>
                            </div>
                        </div>
                    }

                    <div class="prose prose-lg dark:prose-invert max-w-none text-foreground/80 leading-relaxed font-medium">
                        @Html.Raw(displayBody.Replace("\n", "<br/>"))
                    </div>

                    <!-- Interactions Summary Footer -->
                    <div class="mt-12 pt-8 border-t border-border/30 flex items-center justify-between">
                         <div class="flex gap-3">
                             <button class="px-4 py-2 bg-muted/40 rounded-2xl text-[10px] font-black uppercase tracking-widest text-muted-foreground border border-border/50 hover:bg-muted/60 transition-all">@Localizer["ReportProtocol"]</button>
                         </div>
                         <div class="flex items-center gap-2">
                             <span class="text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-40">System Integrity:</span>
                             <span class="w-2 h-2 rounded-full bg-green-500 shadow-[0_0_8px_rgba(34,197,94,0.6)]"></span>
                         </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Answers Engine Title -->
    <div class="flex items-center justify-between px-4">
        <h3 class="text-xl font-black text-foreground tracking-tighter flex items-center gap-3">
            <span class="flex items-center justify-center w-8 h-8 rounded-2xl bg-primary text-primary-foreground text-xs leading-none">@Model.AnswerCount</span>
            @Localizer["ResponseFrequency"]
        </h3>
        <div class="flex items-center gap-4">
            <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["SortingPulse"]:</span>
            <div class="flex bg-muted/40 p-1 rounded-2xl border border-border/50">
                <button class="px-4 py-1.5 rounded-2xl text-[9px] font-black uppercase tracking-widest bg-background border border-border shadow-sm">@Localizer["HighConfidence"]</button>
                <button class="px-4 py-1.5 rounded-2xl text-[9px] font-black uppercase tracking-widest opacity-40 hover:opacity-100 transition-opacity">@Localizer["Chronological"]</button>
            </div>
        </div>
    </div>

    <!-- Answers Stream -->
    <div class="space-y-6">
        @if (answers != null && answers.Any())
        {
            @foreach (var answer in answers.OrderByDescending(a => a.IsAccepted).ThenByDescending(a => a.VoteScore))
            {
                <div class="relative group/answer animate-in fade-in slide-in-from-bottom-4 transition-all hover:-translate-y-1">
                    <div class="bg-card/40 backdrop-blur-md border border-border/50 rounded-[2rem] p-8 md:p-10 shadow-xl @(answer.IsAccepted ? "ring-2 ring-primary/20 bg-primary/[0.02]" : "")">
                        @if (answer.IsAccepted)
                        {
                            <div class="absolute -top-3 left-10 px-4 py-1 bg-primary text-primary-foreground rounded-full text-[9px] font-black uppercase tracking-widest shadow-lg shadow-primary/20">
                                @Localizer["VerifiedSolution"]
                            </div>
                        }
                        
                        <div class="flex flex-col md:flex-row gap-8">
                            <!-- Answer Stats Orbit -->
                            <div class="md:w-16 flex flex-col items-center gap-4 pt-2">
                                <button class="w-12 h-12 flex items-center justify-center rounded-2xl bg-muted/30 border border-border/50 hover:border-primary hover:text-primary transition-all active:scale-90 group/btn">
                                    <i data-lucide="chevron-up" class="w-6 h-6 group-hover/btn:-translate-y-0.5 transition-transform"></i>
                                </button>
                                <span class="text-lg font-black tabular-nums">@answer.VoteScore</span>
                                <button class="w-12 h-12 flex items-center justify-center rounded-2xl bg-muted/30 border border-border/50 hover:border-destructive hover:text-destructive transition-all active:scale-90 group/btn">
                                    <i data-lucide="chevron-down" class="w-6 h-6 group-hover/btn:translate-y-0.5 transition-transform"></i>
                                </button>
                            </div>

                            <div class="flex-1 space-y-8">
                                <!-- Answer Identity -->
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center gap-3">
                                        <div class="w-10 h-10 rounded-2xl bg-muted border border-border flex items-center justify-center overflow-hidden shadow-inner">
                                            @if (!string.IsNullOrEmpty(answer.AuthorProfilePicture))
                                            {
                                                <img src="@answer.AuthorProfilePicture" class="w-full h-full object-cover" />
                                            }
                                            else
                                            {
                                                <i data-lucide="user" class="w-4 h-4 text-muted-foreground opacity-40"></i>
                                            }
                                        </div>
                                        <div>
                                            <span class="block text-xs font-black text-foreground underline decoration-primary decoration-4 underline-offset-4 decoration-transparent hover:decoration-primary transition-all cursor-pointer">@answer.AuthorName</span>
                                            <span class="block text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-40">Active Enthusiast â€¢ @answer.TimeAgo</span>
                                        </div>
                                    </div>
                                    @if (answer.IsVerifiedByExpert)
                                    {
                                        <div class="flex items-center gap-2 px-3 py-1 bg-blue-500/10 text-blue-600 border border-blue-500/10 rounded-2xl shadow-sm">
                                            <i data-lucide="shield-check" class="w-3.5 h-3.5"></i>
                                            <span class="text-[9px] font-black uppercase tracking-widest">@Localizer["ExpertVerified"]</span>
                                        </div>
                                    }
                                </div>

                                <!-- Body -->
                                <div class="prose prose-sm dark:prose-invert max-w-none text-foreground/80 leading-relaxed font-medium">
                                    @{
                                        var displayAnswerBody = isArabic && !string.IsNullOrEmpty(answer.BodyAr) ? answer.BodyAr : answer.Body;
                                    }
                                    @Html.Raw(displayAnswerBody.Replace("\n", "<br/>"))
                                </div>

                                <!-- Interaction Bar Mirroring Main -->
                                <div class="flex items-center gap-6 pt-6 border-t border-border/20">
                                    <button class="flex items-center gap-2 text-[10px] font-black uppercase tracking-widest text-muted-foreground hover:text-primary transition-colors group/tool">
                                        <i data-lucide="thumbs-up" class="w-4 h-4 group-hover/tool:-translate-y-0.5 transition-transform"></i>
                                        @Localizer["HelpfulProtocol"] <span class="bg-muted px-2 py-0.5 rounded ml-1 text-foreground/40 tabular-nums">@answer.HelpfulCount</span>
                                    </button>
                                    <button class="flex items-center gap-2 text-[10px] font-black uppercase tracking-widest text-muted-foreground hover:text-blue-500 transition-colors group/tool ml-auto">
                                        <i data-lucide="message-square" class="w-4 h-4 group-hover/tool:scale-110 transition-transform"></i>
                                        @Localizer["CommentLayer"]
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="py-20 flex flex-col items-center justify-center text-center bg-muted/10 border-2 border-dashed border-border/40 rounded-[2.5rem] animate-pulse">
                <div class="w-16 h-16 bg-muted/40 rounded-2xl flex items-center justify-center mb-6">
                    <i data-lucide="signal-low" class="w-8 h-8 text-muted-foreground opacity-20"></i>
                </div>
                <h4 class="text-xl font-black text-foreground tracking-tight underline decoration-primary/40 decoration-4 underline-offset-8 mb-3">@Localizer["NoFeedbackSignals"]</h4>
                <p class="text-xs font-medium text-muted-foreground uppercase tracking-widest opacity-60">@Localizer["InitializeFirstResponse"]</p>
            </div>
        }
    </div>

    <!-- Final Input: High Precision Response Area -->
    @if (!Model.IsLocked)
    {
        <div class="bg-card/40 backdrop-blur-xl border border-border/50 rounded-[2.5rem] p-10 md:p-12 shadow-2xl relative overflow-hidden group/input">
            <div class="absolute -right-20 -top-20 w-80 h-80 bg-primary/5 rounded-full blur-3xl group-hover/input:bg-primary/10 transition-all duration-700"></div>
            
            <div class="relative space-y-10">
                <h3 class="text-3xl font-black text-foreground tracking-tighter flex items-center gap-4">
                    <div class="w-12 h-12 bg-primary/10 rounded-2xl flex items-center justify-center text-primary">
                        <i data-lucide="pen-tool" class="w-6 h-6"></i>
                    </div>
                    @Localizer["CommitResponse"]
                </h3>
                
                <form asp-action="Answer" asp-route-id="@Model.Id" method="post" class="space-y-8">
                    <div class="relative group/field">
                         <div class="absolute -inset-0.5 bg-gradient-to-r from-primary/20 to-blue-500/20 rounded-3xl blur opacity-0 group-focus-within/field:opacity-100 transition duration-500"></div>
                         <div class="relative bg-background/50 border border-border/50 rounded-[2rem] overflow-hidden focus-within:border-primary/50 transition-all shadow-inner">
                            <textarea name="body" class="w-full p-8 md:p-10 bg-transparent border-none focus:ring-0 resize-none min-h-[300px] text-foreground font-medium leading-relaxed placeholder:text-muted-foreground/40" placeholder="@Localizer["InitializeDataPayload"]" required></textarea>
                            
                            @if (isArabic)
                            {
                                <div class="mt-4 p-4 border-t border-border/30">
                                    <textarea name="bodyAr" class="w-full p-8 md:p-10 bg-transparent border-none focus:ring-0 resize-none min-h-[300px] text-foreground font-medium leading-relaxed placeholder:text-muted-foreground/40" placeholder="@Localizer["InitializeDataPayloadAr"]" dir="rtl"></textarea>
                                </div>
                            }
                            
                            <div class="p-4 bg-muted/20 border-t border-border/30 flex items-center gap-2">
                                <button type="button" class="w-10 h-10 flex items-center justify-center rounded-2xl bg-background border border-border hover:border-primary hover:text-primary transition-all"><i data-lucide="bold" class="w-4 h-4"></i></button>
                                <button type="button" class="w-10 h-10 flex items-center justify-center rounded-2xl bg-background border border-border hover:border-primary hover:text-primary transition-all"><i data-lucide="italic" class="w-4 h-4"></i></button>
                                <div class="w-px h-6 bg-border mx-2"></div>
                                <button type="button" class="w-10 h-10 flex items-center justify-center rounded-2xl bg-background border border-border hover:border-primary hover:text-primary transition-all"><i data-lucide="link" class="w-4 h-4"></i></button>
                                <button type="button" class="w-10 h-10 flex items-center justify-center rounded-2xl bg-background border border-border hover:border-primary hover:text-primary transition-all"><i data-lucide="code" class="w-4 h-4"></i></button>
                            </div>
                         </div>
                    </div>

                    <div class="flex items-center justify-between pt-4">
                        <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["EncryptionLayer"]: AES-256 Verified</span>
                        <button type="submit" class="px-12 py-5 bg-primary text-primary-foreground font-black text-xs uppercase tracking-[0.2em] rounded-2xl shadow-xl shadow-primary/30 hover:shadow-primary/50 hover:-translate-y-1 active:scale-[0.98] transition-all flex items-center gap-3">
                            @Localizer["PostResponse"] <i data-lucide="send" class="w-4 h-4"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="bg-destructive/5 border border-destructive/20 rounded-[2.5rem] p-16 text-center space-y-4">
            <div class="w-16 h-16 bg-destructive/10 rounded-full flex items-center justify-center mx-auto mb-6">
                <i data-lucide="lock" class="w-8 h-8 text-destructive"></i>
            </div>
            <h4 class="text-2xl font-black text-foreground tracking-tighter uppercase">@Localizer["ProtocolLocked"]</h4>
            <p class="text-sm font-medium text-muted-foreground max-w-sm mx-auto uppercase tracking-widest opacity-60">@Localizer["ArchivedProtocol"]</p>
        </div>
    }
</div>
