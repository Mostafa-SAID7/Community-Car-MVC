@inject IViewLocalizer Localizer
@model CommunityCar.Application.Features.QA.ViewModels.QuestionVM
@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
    var displayTitle = isArabic && !string.IsNullOrEmpty(Model.TitleAr) ? Model.TitleAr : Model.Title;
    var displayBody = isArabic && !string.IsNullOrEmpty(Model.BodyAr) ? Model.BodyAr : Model.Body;

    ViewData["Title"] = $"{displayTitle} - {Localizer["ProtocolDetailsSuffix"]}";
    var answers = ViewBag.Answers as IEnumerable<CommunityCar.Application.Features.QA.ViewModels.AnswerVM>;
}

<div class="max-w-4xl mx-auto space-y-8 animate-in fade-in duration-700">
    <!-- Skeleton Loader -->
    <div id="loading-skeleton" class="hidden space-y-8">
        <div class="space-y-4">
            <skeleton type="Line" class="w-32" /> <!-- Breadcrumb -->
            <skeleton type="Card" class="h-96" /> <!-- Hero -->
            <skeleton type="Line" /> <!-- Meta -->
        </div>
    </div>

    <div class="space-y-8">
        <!-- Navigation & Signal Strategy -->
        <div class="flex flex-col md:flex-row md:items-end justify-between gap-8 px-2">
            <div class="space-y-4">
                <nav class="flex items-center gap-3 text-[10px] font-black uppercase tracking-[0.3em] text-primary mb-6">
                    <i data-lucide="help-circle" class="w-3.5 h-3.5 fill-current"></i> @Localizer["QARegistry"]
                </nav>
                <h1 class="text-5xl font-black text-foreground tracking-tighter leading-none">@displayTitle</h1>
                <p class="text-sm font-medium text-muted-foreground opacity-70 mt-4 border-l-4 border-primary/20 pl-4 py-1 max-w-2xl">@Localizer["TransmissionDetail"]</p>
            </div>
            
            <a href="@Url.Action("Index", "QA")" class="inline-flex items-center justify-center gap-2 px-6 py-2.5 bg-muted/20 border border-border/50 hover:bg-muted/30 text-[10px] font-black uppercase tracking-widest rounded-xl transition-all active:scale-95 group/back">
                <i data-lucide="arrow-left" class="w-4 h-4 group-hover/back:-translate-x-1 transition-transform"></i>
                @Localizer["QARegistry"]
            </a>
        </div>

        <div class="relative group">
            <!-- Structural Glow -->
            <div class="absolute -inset-1 bg-gradient-to-r from-primary/10 via-transparent to-primary/10 rounded-[2.5rem] blur-3xl opacity-0 group-hover:opacity-100 transition duration-1000"></div>

            <div class="relative bg-card/40 backdrop-blur-2xl border border-border/50 rounded-[2.5rem] shadow-2xl overflow-hidden">
                <!-- Question Header: Hero Style -->
                <div class="p-8 md:p-14 space-y-8">
                    <div class="space-y-6">
                        <div class="flex items-center gap-3">
                            @if (Model.IsSolved)
                            {
                                <span class="px-4 py-1.5 rounded-2xl bg-green-500/10 text-green-500 border border-green-500/20 text-[9px] font-black uppercase tracking-widest">
                                    <i data-lucide="check-circle-2" class="w-3 h-3 mr-1"></i> @Localizer["Solved"] PROTOCOL
                                </span>
                            }
                            else
                            {
                                <span class="px-4 py-1.5 rounded-2xl bg-amber-500/10 text-amber-500 border border-amber-500/20 text-[9px] font-black uppercase tracking-widest">
                                    <i data-lucide="help-circle" class="w-3 h-3 mr-1"></i> OPEN QUERY
                                </span>
                            }
                            <span class="px-4 py-1.5 rounded-2xl bg-primary/10 text-primary border border-primary/20 text-[9px] font-black uppercase tracking-widest">
                                @Model.DifficultyDisplay LEVEL
                            </span>
                            <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@string.Format(Localizer["Frequency"].Value, Model.CreatedAt.ToString("MMM dd, yyyy"))</span>
                        </div>
                    </div>

                    <div class="flex items-center justify-between pt-6 border-t border-border/20">
                        <div class="flex items-center gap-4">
                            <div class="w-14 h-14 rounded-2xl bg-muted border border-border flex items-center justify-center overflow-hidden shadow-inner group/avatar">
                                @if (!string.IsNullOrEmpty(Model.AuthorProfilePicture))
                                {
                                    <img src="@Model.AuthorProfilePicture" class="w-full h-full object-cover group-hover/avatar:scale-110 transition-transform" alt="@Model.AuthorName" />
                                }
                                else
                                {
                                    <i data-lucide="user" class="w-7 h-7 text-muted-foreground opacity-30 group-hover/avatar:scale-110 transition-transform"></i>
                                }
                            </div>
                            <div>
                                <span class="block text-sm font-black text-foreground underline decoration-primary decoration-4 underline-offset-4 decoration-transparent hover:decoration-primary transition-all cursor-pointer">@Model.AuthorName</span>
                                <span class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["SystemContributor"]</span>
                            </div>
                        </div>
                        
                        <div class="hidden sm:flex gap-8">
                            <div class="text-right">
                                <span class="block text-xl font-black text-foreground leading-none tracking-tighter">@Model.ViewCount.ToString("N0")</span>
                                <span class="block text-[8px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["ViewCount"]</span>
                            </div>
                            <div class="text-right">
                                <span class="block text-xl font-black text-foreground leading-none tracking-tighter">@Model.AnswerCount</span>
                                <span class="block text-[8px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["Responses"]</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Content Fluidity -->
                <div class="px-8 md:px-14 py-12 bg-muted/10 border-y border-border/20">
                    @if (!string.IsNullOrEmpty(Model.CarDisplayName))
                    {
                        <div class="mb-8 p-6 bg-primary/5 border border-primary/10 rounded-2xl">
                            <div class="flex items-center gap-4">
                                <div class="w-12 h-12 rounded-2xl bg-primary/10 flex items-center justify-center text-primary">
                                    <i data-lucide="car-front" class="w-6 h-6"></i>
                                </div>
                                <div>
                                    <span class="block text-[10px] font-black uppercase tracking-widest text-primary/80 mb-1">@Localizer["AssetIdentified"]</span>
                                    <span class="block text-lg font-black text-foreground">@Model.CarDisplayName</span>
                                    @if (!string.IsNullOrEmpty(Model.CarEngine))
                                    {
                                        <span class="block text-sm text-muted-foreground">@Model.CarEngine</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <div class="prose prose-lg dark:prose-invert max-w-none text-foreground/80 leading-[1.8] font-medium">
                        @Html.Raw(displayBody.Replace("\n", "<br/>"))
                    </div>

                    <!-- Tags -->
                    @if (Model.Tags.Any())
                    {
                        <div class="mt-8 pt-8 border-t border-border/20">
                            <div class="flex flex-wrap gap-3">
                                @foreach (var tag in Model.Tags)
                                {
                                    <span class="px-3 py-1.5 rounded-xl bg-muted/40 text-muted-foreground text-[10px] font-black uppercase tracking-widest hover:bg-muted/60 transition-colors cursor-pointer">
                                        #@tag
                                    </span>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- Interaction Control Strip -->
                <div class="p-8 md:px-14 flex items-center justify-between bg-card/40">
                    <div class="flex items-center gap-8">
                        <button class="flex items-center gap-3 group/tool text-[10px] font-black uppercase tracking-widest text-muted-foreground hover:text-green-500 transition-all">
                            <div class="w-10 h-10 flex items-center justify-center rounded-2xl bg-muted/40 group-hover/tool:bg-green-500/10">
                                <i data-lucide="arrow-up" class="w-4 h-4 group-hover/tool:fill-current"></i>
                            </div>
                            @Localizer["VoteUp"] (@Model.VoteScore)
                        </button>
                        <button class="flex items-center gap-3 group/tool text-[10px] font-black uppercase tracking-widest text-muted-foreground hover:text-blue-500 transition-all">
                            <div class="w-10 h-10 flex items-center justify-center rounded-2xl bg-muted/40 group-hover/tool:bg-blue-500/10">
                                <i data-lucide="message-circle" class="w-4 h-4"></i>
                            </div>
                            @Localizer["JoinDiscussion"]
                        </button>
                    </div>

                    <div class="flex gap-3">
                        <button class="w-12 h-12 flex items-center justify-center rounded-2xl bg-muted border border-border/50 hover:border-primary hover:text-primary transition-all active:scale-90">
                            <i data-lucide="share-2" class="w-5 h-5"></i>
                        </button>
                        <button class="w-12 h-12 flex items-center justify-center rounded-2xl bg-muted border border-border/50 hover:border-primary hover:text-primary transition-all active:scale-90 @(Model.IsBookmarked ? "text-amber-500 bg-amber-500/5 border-amber-500/20" : "")">
                            <i data-lucide="bookmark" class="w-5 h-5 @(Model.IsBookmarked ? "fill-current" : "")"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Answers Section -->
        <div class="bg-card border border-border rounded-2xl shadow-lg overflow-hidden">
            <div class="p-6 sm:p-8 border-b border-border">
                <div class="flex items-center justify-between flex-wrap gap-4">
                    <h2 class="text-xl font-bold text-foreground flex items-center gap-3">
                        <span class="flex items-center justify-center w-8 h-8 rounded-lg bg-primary text-primary-foreground text-sm font-bold">@Model.AnswerCount</span>
                        @Localizer["ResponseFrequency"]
                    </h2>
                    <div class="flex items-center gap-3">
                        <span class="text-xs text-muted-foreground">@Localizer["SortingPulse"]:</span>
                        <div class="flex bg-muted rounded-lg p-1">
                            <button class="px-3 py-1.5 rounded-md text-xs font-medium bg-background border border-border shadow-sm">@Localizer["HighConfidence"]</button>
                            <button class="px-3 py-1.5 rounded-md text-xs font-medium text-muted-foreground hover:text-foreground transition-colors">@Localizer["Chronological"]</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="divide-y divide-border">
                @if (answers != null && answers.Any())
                {
                    @foreach (var answer in answers.OrderByDescending(a => a.IsAccepted).ThenByDescending(a => a.VoteScore))
                    {
                        <div class="p-6 sm:p-8 @(answer.IsAccepted ? "bg-primary/5 border-l-4 border-primary" : "")">
                            @if (answer.IsAccepted)
                            {
                                <div class="mb-4">
                                    <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-medium bg-primary text-primary-foreground">
                                        <i data-lucide="check-circle-2" class="w-3.5 h-3.5"></i>
                                        @Localizer["VerifiedSolution"]
                                    </span>
                                </div>
                            }
                            
                            <div class="flex gap-6">
                                <!-- Vote Controls -->
                                <div class="flex flex-col items-center gap-2 pt-2">
                                    <button class="w-10 h-10 flex items-center justify-center rounded-lg bg-background border border-border hover:border-primary hover:text-primary transition-all">
                                        <i data-lucide="chevron-up" class="w-5 h-5"></i>
                                    </button>
                                    <span class="text-sm font-bold tabular-nums">@answer.VoteScore</span>
                                    <button class="w-10 h-10 flex items-center justify-center rounded-lg bg-background border border-border hover:border-destructive hover:text-destructive transition-all">
                                        <i data-lucide="chevron-down" class="w-5 h-5"></i>
                                    </button>
                                </div>

                                <div class="flex-1 space-y-4">
                                    <!-- Answer Header -->
                                    <div class="flex items-center justify-between flex-wrap gap-4">
                                        <div class="flex items-center gap-3">
                                            <div class="w-8 h-8 rounded-full bg-muted border border-border flex items-center justify-center overflow-hidden">
                                                @if (!string.IsNullOrEmpty(answer.AuthorProfilePicture))
                                                {
                                                    <img src="@answer.AuthorProfilePicture" class="w-full h-full object-cover" alt="@answer.AuthorName" />
                                                }
                                                else
                                                {
                                                    <i data-lucide="user" class="w-4 h-4 text-muted-foreground"></i>
                                                }
                                            </div>
                                            <div>
                                                <span class="block text-sm font-medium text-foreground">@answer.AuthorName</span>
                                                <span class="block text-xs text-muted-foreground">@answer.TimeAgo</span>
                                            </div>
                                        </div>
                                        @if (answer.IsVerifiedByExpert)
                                        {
                                            <div class="flex items-center gap-1.5 px-2.5 py-1 bg-blue-500/10 text-blue-600 border border-blue-500/20 rounded-full">
                                                <i data-lucide="shield-check" class="w-3.5 h-3.5"></i>
                                                <span class="text-xs font-medium">@Localizer["ExpertVerified"]</span>
                                            </div>
                                        }
                                    </div>

                                    <!-- Answer Content -->
                                    <div class="prose prose-sm max-w-none text-foreground/90 leading-relaxed">
                                        @{
                                            var displayAnswerBody = isArabic && !string.IsNullOrEmpty(answer.BodyAr) ? answer.BodyAr : answer.Body;
                                        }
                                        @Html.Raw(displayAnswerBody.Replace("\n", "<br/>"))
                                    </div>

                                    <!-- Answer Actions -->
                                    <div class="flex items-center gap-4 pt-4 border-t border-border">
                                        <button class="flex items-center gap-2 text-xs text-muted-foreground hover:text-primary transition-colors">
                                            <i data-lucide="thumbs-up" class="w-4 h-4"></i>
                                            @Localizer["HelpfulProtocol"] (@answer.HelpfulCount)
                                        </button>
                                        <button class="flex items-center gap-2 text-xs text-muted-foreground hover:text-blue-500 transition-colors">
                                            <i data-lucide="message-square" class="w-4 h-4"></i>
                                            @Localizer["CommentLayer"]
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="p-12 text-center">
                        <div class="w-16 h-16 bg-muted rounded-full flex items-center justify-center mx-auto mb-4">
                            <i data-lucide="message-square" class="w-8 h-8 text-muted-foreground"></i>
                        </div>
                        <h3 class="text-lg font-medium text-foreground mb-2">@Localizer["NoFeedbackSignals"]</h3>
                        <p class="text-sm text-muted-foreground">@Localizer["InitializeFirstResponse"]</p>
                    </div>
                }
            </div>
        </div>

        <!-- Add Answer Form -->
        @if (!Model.IsLocked)
        {
            <div class="bg-card border border-border rounded-2xl shadow-lg overflow-hidden">
                <div class="p-6 sm:p-8 border-b border-border">
                    <h3 class="text-xl font-bold text-foreground flex items-center gap-3">
                        <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center text-primary">
                            <i data-lucide="pen-tool" class="w-5 h-5"></i>
                        </div>
                        @Localizer["CommitResponse"]
                    </h3>
                </div>
                
                <form asp-action="Answer" asp-route-id="@Model.Id" method="post" class="p-6 sm:p-8 space-y-6">
                    <div class="space-y-2">
                        <label class="text-sm font-medium text-foreground">@Localizer["YourAnswer"]</label>
                        <div class="relative">
                            <textarea name="body" class="w-full p-4 bg-background/50 border border-border rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all resize-none min-h-[200px]" placeholder="@Localizer["InitializeDataPayload"]" required></textarea>
                            
                            @if (isArabic)
                            {
                                <div class="mt-4">
                                    <label class="text-sm font-medium text-foreground">@Localizer["ArabicAnswer"]</label>
                                    <textarea name="bodyAr" class="w-full p-4 bg-background/50 border border-border rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all resize-none min-h-[200px] mt-2" placeholder="@Localizer["InitializeDataPayloadAr"]" dir="rtl"></textarea>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="flex items-center justify-between pt-4 border-t border-border">
                        <div class="flex items-center gap-2 text-xs text-muted-foreground">
                            <i data-lucide="shield-check" class="w-4 h-4"></i>
                            @Localizer["EncryptionLayer"]: @Localizer["AESVerified"]
                        </div>
                        <button type="submit" class="px-6 py-3 bg-primary text-primary-foreground font-medium text-sm rounded-lg shadow-lg hover:bg-primary/90 hover:shadow-xl transition-all flex items-center gap-2">
                            @Localizer["PostResponse"]
                            <i data-lucide="send" class="w-4 h-4"></i>
                        </button>
                    </div>
                </form>
            </div>
        }
        else
        {
            <div class="bg-destructive/5 border border-destructive/20 rounded-2xl p-8 text-center">
                <div class="w-12 h-12 bg-destructive/10 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i data-lucide="lock" class="w-6 h-6 text-destructive"></i>
                </div>
                <h4 class="text-lg font-bold text-foreground mb-2">@Localizer["ProtocolLocked"]</h4>
                <p class="text-sm text-muted-foreground">@Localizer["ArchivedProtocol"]</p>
            </div>
        }

        <!-- System Metadata Trace -->
        <div class="p-8 bg-muted/20 border border-border/40 rounded-[2.5rem] grid grid-cols-1 md:grid-cols-4 gap-8">
            <div class="space-y-1">
                <span class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["TransportID"]</span>
                <code class="text-xs font-mono text-primary font-bold">@Model.Id.ToString().Substring(0, 18)...</code>
            </div>
            <div class="space-y-1">
                <span class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["CipherFormat"]</span>
                <span class="text-xs font-black text-foreground">UTF-8 QA</span>
            </div>
            <div class="space-y-1">
                <span class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["Originator"]</span>
                <span class="text-xs font-black text-foreground">QA-PROTOCOL</span>
            </div>
            <div class="space-y-1 text-right flex flex-col items-end">
                <span class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["Status"]</span>
                <span class="flex items-center gap-2 text-xs font-black @(Model.IsSolved ? "text-green-500" : "text-amber-500")">
                    <span class="w-1.5 h-1.5 rounded-full @(Model.IsSolved ? "bg-green-500" : "bg-amber-500") animate-pulse"></span>
                    @(Model.IsSolved ? Localizer["SolvedArchive"] : Localizer["ActiveQuery"])
                </span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof Skeleton !== 'undefined') {
                Skeleton.initPageLoad('loading-skeleton', 'main-content');
            }
            
            // Initialize Lucide icons
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        });
    </script>
}
