@inject IViewLocalizer Localizer
@model CommunityCar.Application.Features.QA.ViewModels.QuestionVM
@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
    var displayTitle = isArabic && !string.IsNullOrEmpty(Model.TitleAr) ? Model.TitleAr : Model.Title;
    var displayBody = isArabic && !string.IsNullOrEmpty(Model.BodyAr) ? Model.BodyAr : Model.Body;

    ViewData["Title"] = $"{displayTitle} - {Localizer["ProtocolDetailsSuffix"]}";
    var answers = ViewBag.Answers as IEnumerable<CommunityCar.Application.Features.QA.ViewModels.AnswerVM>;
}

<div class="max-w-6xl mx-auto space-y-8 animate-in fade-in duration-700 pt-20">
    <div id="loading-skeleton" class="hidden space-y-8">
        <skeleton type="Line" class="w-1/4" />
        <skeleton type="Card" class="h-64" />
        <skeleton type="Card" class="h-96" />
    </div>

    <div id="main-content" class="space-y-8">
        <!-- Breadcrumb Navigation -->
        <nav class="flex items-center gap-2 text-sm text-muted-foreground mb-6">
            <a href="@Url.Action("Index", "QA")" class="hover:text-primary transition-colors flex items-center gap-1">
                <i data-lucide="chevron-left" class="w-4 h-4"></i> @Localizer["QARegistry"]
            </a>
            <span>/</span>
            <span class="text-foreground">@Localizer["TransmissionDetail"]</span>
        </nav>

        <!-- Question Card - Clean form-like design -->
        <div class="bg-card border border-border rounded-2xl shadow-lg overflow-hidden">
            <!-- Question Header -->
            <div class="p-6 sm:p-8 border-b border-border">
                <div class="flex flex-wrap gap-2 mb-4">
                    @if (Model.IsSolved)
                    {
                        <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-medium bg-green-500/10 text-green-600 border border-green-500/20">
                            <i data-lucide="check-circle-2" class="w-3.5 h-3.5"></i> @Localizer["Solved"]
                        </span>
                    }
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium @(Model.DifficultyColor == "beginner" ? "bg-green-500/10 text-green-600 border border-green-500/20" : "bg-primary/10 text-primary border border-primary/20")">
                        @Model.DifficultyDisplay
                    </span>
                </div>
                
                <h1 class="text-2xl sm:text-3xl font-bold text-foreground mb-4 leading-tight">@displayTitle</h1>
                
                <div class="flex items-center justify-between flex-wrap gap-4">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-muted border border-border flex items-center justify-center overflow-hidden">
                            @if (!string.IsNullOrEmpty(Model.AuthorProfilePicture))
                            {
                                <img src="@Model.AuthorProfilePicture" class="w-full h-full object-cover" alt="@Model.AuthorName" />
                            }
                            else
                            {
                                <i data-lucide="user" class="w-5 h-5 text-muted-foreground"></i>
                            }
                        </div>
                        <div>
                            <span class="block text-sm font-medium text-foreground">@Model.AuthorName</span>
                            <span class="block text-xs text-muted-foreground">@Localizer["Posted"] @Model.TimeAgo</span>
                        </div>
                    </div>
                    
                    <div class="flex items-center gap-4 text-sm text-muted-foreground">
                        <span class="flex items-center gap-1">
                            <i data-lucide="eye" class="w-4 h-4"></i>
                            @Model.ViewCount.ToString("N0")
                        </span>
                        <span class="flex items-center gap-1">
                            <i data-lucide="arrow-up" class="w-4 h-4"></i>
                            @Model.VoteScore
                        </span>
                    </div>
                </div>
            </div>

            <!-- Question Content -->
            <div class="p-6 sm:p-8">
                @if (!string.IsNullOrEmpty(Model.CarDisplayName))
                {
                    <div class="mb-6 p-4 bg-primary/5 border border-primary/10 rounded-lg">
                        <div class="flex items-center gap-3">
                            <div class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center text-primary">
                                <i data-lucide="car-front" class="w-4 h-4"></i>
                            </div>
                            <div>
                                <span class="block text-xs font-medium text-primary/80 uppercase tracking-wide">@Localizer["AssetIdentified"]</span>
                                <span class="block text-sm font-medium text-foreground">@Model.CarDisplayName <span class="text-xs text-muted-foreground ml-2">(@Model.CarEngine)</span></span>
                            </div>
                        </div>
                    </div>
                }

                <div class="prose prose-sm max-w-none text-foreground/90 leading-relaxed">
                    @Html.Raw(displayBody.Replace("\n", "<br/>"))
                </div>

                <!-- Tags -->
                @if (Model.Tags.Any())
                {
                    <div class="mt-6 pt-6 border-t border-border">
                        <div class="flex flex-wrap gap-2">
                            @foreach (var tag in Model.Tags)
                            {
                                <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-medium bg-muted text-muted-foreground hover:bg-muted/80 transition-colors cursor-pointer">
                                    #@tag
                                </span>
                            }
                        </div>
                    </div>
                }

                <!-- Action Buttons -->
                <div class="mt-6 pt-6 border-t border-border flex items-center justify-between flex-wrap gap-4">
                    <div class="flex items-center gap-3">
                        <button class="flex items-center gap-2 px-4 py-2 bg-background border border-border rounded-lg text-sm font-medium hover:bg-accent transition-colors">
                            <i data-lucide="arrow-up" class="w-4 h-4"></i>
                            @Model.VoteScore
                        </button>
                        <button class="flex items-center gap-2 px-4 py-2 bg-background border border-border rounded-lg text-sm font-medium hover:bg-accent transition-colors @(Model.IsBookmarked ? "text-amber-500 bg-amber-500/5 border-amber-500/20" : "")">
                            <i data-lucide="bookmark" class="w-4 h-4 @(Model.IsBookmarked ? "fill-current" : "")"></i>
                            @Localizer["Bookmark"]
                        </button>
                        <button class="flex items-center gap-2 px-4 py-2 bg-background border border-border rounded-lg text-sm font-medium hover:bg-accent transition-colors">
                            <i data-lucide="share-2" class="w-4 h-4"></i>
                            @Localizer["Share"]
                        </button>
                    </div>
                    <button class="text-xs text-muted-foreground hover:text-foreground transition-colors">
                        @Localizer["ReportProtocol"]
                    </button>
                </div>
            </div>
        </div>

        <!-- Answers Section -->
        <div class="bg-card border border-border rounded-2xl shadow-lg overflow-hidden">
            <div class="p-6 sm:p-8 border-b border-border">
                <div class="flex items-center justify-between flex-wrap gap-4">
                    <h2 class="text-xl font-bold text-foreground flex items-center gap-3">
                        <span class="flex items-center justify-center w-8 h-8 rounded-lg bg-primary text-primary-foreground text-sm font-bold">@Model.AnswerCount</span>
                        @Localizer["ResponseFrequency"]
                    </h2>
                    <div class="flex items-center gap-3">
                        <span class="text-xs text-muted-foreground">@Localizer["SortingPulse"]:</span>
                        <div class="flex bg-muted rounded-lg p-1">
                            <button class="px-3 py-1.5 rounded-md text-xs font-medium bg-background border border-border shadow-sm">@Localizer["HighConfidence"]</button>
                            <button class="px-3 py-1.5 rounded-md text-xs font-medium text-muted-foreground hover:text-foreground transition-colors">@Localizer["Chronological"]</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="divide-y divide-border">
                @if (answers != null && answers.Any())
                {
                    @foreach (var answer in answers.OrderByDescending(a => a.IsAccepted).ThenByDescending(a => a.VoteScore))
                    {
                        <div class="p-6 sm:p-8 @(answer.IsAccepted ? "bg-primary/5 border-l-4 border-primary" : "")">
                            @if (answer.IsAccepted)
                            {
                                <div class="mb-4">
                                    <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-medium bg-primary text-primary-foreground">
                                        <i data-lucide="check-circle-2" class="w-3.5 h-3.5"></i>
                                        @Localizer["VerifiedSolution"]
                                    </span>
                                </div>
                            }
                            
                            <div class="flex gap-6">
                                <!-- Vote Controls -->
                                <div class="flex flex-col items-center gap-2 pt-2">
                                    <button class="w-10 h-10 flex items-center justify-center rounded-lg bg-background border border-border hover:border-primary hover:text-primary transition-all">
                                        <i data-lucide="chevron-up" class="w-5 h-5"></i>
                                    </button>
                                    <span class="text-sm font-bold tabular-nums">@answer.VoteScore</span>
                                    <button class="w-10 h-10 flex items-center justify-center rounded-lg bg-background border border-border hover:border-destructive hover:text-destructive transition-all">
                                        <i data-lucide="chevron-down" class="w-5 h-5"></i>
                                    </button>
                                </div>

                                <div class="flex-1 space-y-4">
                                    <!-- Answer Header -->
                                    <div class="flex items-center justify-between flex-wrap gap-4">
                                        <div class="flex items-center gap-3">
                                            <div class="w-8 h-8 rounded-full bg-muted border border-border flex items-center justify-center overflow-hidden">
                                                @if (!string.IsNullOrEmpty(answer.AuthorProfilePicture))
                                                {
                                                    <img src="@answer.AuthorProfilePicture" class="w-full h-full object-cover" alt="@answer.AuthorName" />
                                                }
                                                else
                                                {
                                                    <i data-lucide="user" class="w-4 h-4 text-muted-foreground"></i>
                                                }
                                            </div>
                                            <div>
                                                <span class="block text-sm font-medium text-foreground">@answer.AuthorName</span>
                                                <span class="block text-xs text-muted-foreground">@answer.TimeAgo</span>
                                            </div>
                                        </div>
                                        @if (answer.IsVerifiedByExpert)
                                        {
                                            <div class="flex items-center gap-1.5 px-2.5 py-1 bg-blue-500/10 text-blue-600 border border-blue-500/20 rounded-full">
                                                <i data-lucide="shield-check" class="w-3.5 h-3.5"></i>
                                                <span class="text-xs font-medium">@Localizer["ExpertVerified"]</span>
                                            </div>
                                        }
                                    </div>

                                    <!-- Answer Content -->
                                    <div class="prose prose-sm max-w-none text-foreground/90 leading-relaxed">
                                        @{
                                            var displayAnswerBody = isArabic && !string.IsNullOrEmpty(answer.BodyAr) ? answer.BodyAr : answer.Body;
                                        }
                                        @Html.Raw(displayAnswerBody.Replace("\n", "<br/>"))
                                    </div>

                                    <!-- Answer Actions -->
                                    <div class="flex items-center gap-4 pt-4 border-t border-border">
                                        <button class="flex items-center gap-2 text-xs text-muted-foreground hover:text-primary transition-colors">
                                            <i data-lucide="thumbs-up" class="w-4 h-4"></i>
                                            @Localizer["HelpfulProtocol"] (@answer.HelpfulCount)
                                        </button>
                                        <button class="flex items-center gap-2 text-xs text-muted-foreground hover:text-blue-500 transition-colors">
                                            <i data-lucide="message-square" class="w-4 h-4"></i>
                                            @Localizer["CommentLayer"]
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="p-12 text-center">
                        <div class="w-16 h-16 bg-muted rounded-full flex items-center justify-center mx-auto mb-4">
                            <i data-lucide="message-square" class="w-8 h-8 text-muted-foreground"></i>
                        </div>
                        <h3 class="text-lg font-medium text-foreground mb-2">@Localizer["NoFeedbackSignals"]</h3>
                        <p class="text-sm text-muted-foreground">@Localizer["InitializeFirstResponse"]</p>
                    </div>
                }
            </div>
        </div>

        <!-- Add Answer Form -->
        @if (!Model.IsLocked)
        {
            <div class="bg-card border border-border rounded-2xl shadow-lg overflow-hidden">
                <div class="p-6 sm:p-8 border-b border-border">
                    <h3 class="text-xl font-bold text-foreground flex items-center gap-3">
                        <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center text-primary">
                            <i data-lucide="pen-tool" class="w-5 h-5"></i>
                        </div>
                        @Localizer["CommitResponse"]
                    </h3>
                </div>
                
                <form asp-action="Answer" asp-route-id="@Model.Id" method="post" class="p-6 sm:p-8 space-y-6">
                    <div class="space-y-2">
                        <label class="text-sm font-medium text-foreground">@Localizer["YourAnswer"]</label>
                        <div class="relative">
                            <textarea name="body" class="w-full p-4 bg-background/50 border border-border rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all resize-none min-h-[200px]" placeholder="@Localizer["InitializeDataPayload"]" required></textarea>
                            
                            @if (isArabic)
                            {
                                <div class="mt-4">
                                    <label class="text-sm font-medium text-foreground">@Localizer["ArabicAnswer"]</label>
                                    <textarea name="bodyAr" class="w-full p-4 bg-background/50 border border-border rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all resize-none min-h-[200px] mt-2" placeholder="@Localizer["InitializeDataPayloadAr"]" dir="rtl"></textarea>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="flex items-center justify-between pt-4 border-t border-border">
                        <div class="flex items-center gap-2 text-xs text-muted-foreground">
                            <i data-lucide="shield-check" class="w-4 h-4"></i>
                            @Localizer["EncryptionLayer"]: @Localizer["AESVerified"]
                        </div>
                        <button type="submit" class="px-6 py-3 bg-primary text-primary-foreground font-medium text-sm rounded-lg shadow-lg hover:bg-primary/90 hover:shadow-xl transition-all flex items-center gap-2">
                            @Localizer["PostResponse"]
                            <i data-lucide="send" class="w-4 h-4"></i>
                        </button>
                    </div>
                </form>
            </div>
        }
        else
        {
            <div class="bg-destructive/5 border border-destructive/20 rounded-2xl p-8 text-center">
                <div class="w-12 h-12 bg-destructive/10 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i data-lucide="lock" class="w-6 h-6 text-destructive"></i>
                </div>
                <h4 class="text-lg font-bold text-foreground mb-2">@Localizer["ProtocolLocked"]</h4>
                <p class="text-sm text-muted-foreground">@Localizer["ArchivedProtocol"]</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Initialize Lucide icons
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    </script>
}
