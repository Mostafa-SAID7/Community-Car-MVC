@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<aside class="w-100 d-flex flex-column gap-4">
    <!-- QA Statistics -->
    <div class="card card-premium p-4 border-0 shadow-sm">
        <h6 class="fw-black text-uppercase tracking-widest text-primary-red d-flex align-items-center gap-2 mb-4">
            <i data-lucide="bar-chart-2" style="width: 16px;"></i>
            @Localizer["QAStats"]
        </h6>
        <div class="row g-3">
            <div class="col-6">
                <div class="p-3 rounded-4 bg-light border text-center">
                    <span class="x-small fw-black text-uppercase tracking-widest text-muted opacity-50 d-block mb-1">@Localizer["TotalQuestions"]</span>
                    <p class="h4 fw-black text-dark mb-0">1.2k</p>
                </div>
            </div>
            <div class="col-6">
                <div class="p-3 rounded-4 bg-light border text-center">
                    <span class="x-small fw-black text-uppercase tracking-widest text-muted opacity-50 d-block mb-1">@Localizer["UnsolvedQuestions"]</span>
                    <p class="h4 fw-black text-warning mb-0">42</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Expert Contributors -->
    <div class="card card-premium p-4 border-0 shadow-sm">
        <h6 class="fw-black text-uppercase tracking-widest text-dark d-flex align-items-center gap-2 mb-4">
            <i data-lucide="award" class="text-primary-red" style="width: 16px;"></i>
            @Localizer["ExpertContributors"]
        </h6>
        <div class="d-flex flex-column gap-3">
            @for (int i = 1; i <= 3; i++)
            {
                <div class="d-flex align-items-center gap-3 group cursor-pointer hover-translate-x-1 transition-all">
                    <div class="user-avatar-container shadow-sm border p-0 m-0" style="width: 40px; height: 40px;">
                        <img src="/images/default-avatar.png" class="rounded-circle object-fit-cover w-100 h-100" />
                    </div>
                    <div class="flex-grow-1 min-w-0">
                        <p class="small fw-black text-dark mb-0 truncate group-hover-text-primary-red transition-all">Expert User @i</p>
                        <p class="x-small fw-bold text-muted opacity-50 mb-0">@(100 * i) Answers</p>
                    </div>
                    <i data-lucide="chevron-right" class="text-muted opacity-0 group-hover-opacity-100 transition-all" style="width: 12px;"></i>
                </div>
            }
        </div>
    </div>

    <!-- Popular Tags -->
    <div class="card card-premium p-4 border-0 shadow-sm">
        <h6 class="fw-black text-uppercase tracking-widest text-dark d-flex align-items-center gap-2 mb-4">
            <i data-lucide="tag" class="text-primary-red" style="width: 16px;"></i>
            @Localizer["PopularTags"]
        </h6>
        <div class="d-flex flex-wrap gap-2">
            @foreach (var tag in new[] { "Engine", "Tuning", "Reviews", "Repair", "Electric", "Classic" })
            {
                <span class="badge bg-light text-muted border px-3 py-2 rounded-pill x-small fw-black text-uppercase tracking-widest hover-bg-primary-red-subtle hover-text-primary-red transition-all cursor-pointer">
                    #@tag
                </span>
            }
        </div>
    </div>

    <!-- CTA -->
    <div class="card border-0 rounded-5 p-4 text-white shadow-lg position-relative overflow-hidden group" style="background: linear-gradient(135deg, var(--primary-red) 0%, #b30000 100%);">
        <div class="position-absolute end-0 top-0 translate-middle-y translate-middle-x bg-white opacity-10 rounded-circle blur-3xl group-hover-scale-150 transition-transform duration-700" style="width: 100px; height: 100px;"></div>
        <h5 class="fw-black mb-2 position-relative z-1">@Localizer["AskExpert"]</h5>
        <p class="small opacity-90 mb-4 position-relative z-1 leading-relaxed fw-medium">Get professional advice from our verified automotive experts.</p>
        <button class="btn btn-white w-100 py-3 rounded-4 small fw-black text-uppercase tracking-widest hover-translate-y-1 transition-all position-relative z-1">
            Ask Now
        </button>
    </div>
</aside>
