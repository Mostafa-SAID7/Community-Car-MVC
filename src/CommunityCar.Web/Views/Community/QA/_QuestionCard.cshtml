@inject IViewLocalizer Localizer
@model CommunityCar.Application.Features.QA.ViewModels.QuestionVM
@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
    var displayTitle = isArabic && !string.IsNullOrEmpty(Model.TitleAr) ? Model.TitleAr : Model.Title;
}

<a href="@Url.Action("Details", "QA", new { slug = Model.Slug })" class="group/question block bg-card/40 backdrop-blur-md border border-border rounded-2xl overflow-hidden shadow-lg transition-all hover:border-primary/30 hover:shadow-2xl hover:-translate-y-1 relative @(Model.IsPinned ? "ring-2 ring-primary/20" : "")" data-difficulty="@Model.Difficulty" data-status="@(Model.IsSolved ? "solved" : "open")" data-car-make="@Model.CarMake">
    
    @if (Model.IsPinned)
    {
        <div class="absolute top-2 left-6 px-3 py-1 bg-primary text-primary-foreground rounded-full text-[8px] font-black uppercase tracking-widest shadow-lg shadow-primary/20">
            <i data-lucide="pin" class="w-2.5 h-2.5 mr-1"></i>@Localizer["Pinned"]
        </div>
    }

    <div class="p-8">
        <!-- Header with Author and Status -->
        <div class="flex justify-between items-start mb-6">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-muted border border-border flex items-center justify-center overflow-hidden shrink-0 shadow-inner group-hover/question:scale-105 transition-transform duration-500">
                    @if (!string.IsNullOrEmpty(Model.AuthorProfilePicture))
                    {
                        <img src="@Model.AuthorProfilePicture" alt="@Model.AuthorName" class="w-full h-full object-cover" />
                    }
                    else
                    {
                        <i data-lucide="user" class="w-6 h-6 text-muted-foreground opacity-40"></i>
                    }
                </div>
                <div>
                    <span class="block text-sm font-black text-foreground tracking-tight underline decoration-primary decoration-4 underline-offset-4 decoration-transparent group-hover/question:decoration-primary transition-all duration-500">@Model.AuthorName</span>
                    <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@(Model.LastActivityAt != Model.CreatedAt ? Localizer["Active"] : Localizer["Asked"]) @(Model.LastActivityAt != Model.CreatedAt ? Model.LastActivityTimeAgo : Model.TimeAgo)</span>
                </div>
            </div>
            <div class="flex items-center gap-2">
                @if (Model.IsSolved)
                {
                    <span class="px-3 py-1.5 rounded-lg text-[9px] font-black uppercase tracking-widest bg-green-500/10 text-green-600 border border-green-500/20 shadow-sm flex items-center gap-1.5">
                        <i data-lucide="check-circle" class="w-3 h-3"></i>@Localizer["Solved"]
                    </span>
                }
                else
                {
                    <span class="px-3 py-1.5 rounded-lg text-[9px] font-black uppercase tracking-widest bg-amber-500/10 text-amber-600 border border-amber-500/20 shadow-sm flex items-center gap-1.5">
                        <i data-lucide="help-circle" class="w-3 h-3"></i>@Localizer["Open"]
                    </span>
                }
                <span class="px-3 py-1.5 rounded-lg text-[9px] font-black uppercase tracking-widest bg-primary/5 text-primary border border-primary/10 shadow-sm">
                    @Model.DifficultyDisplay
                </span>
            </div>
        </div>

        <!-- Question Title -->
        <h3 class="text-2xl font-black text-foreground mb-4 tracking-tighter group-hover/question:text-primary transition-colors line-clamp-2">@displayTitle</h3>
        
        <!-- Car Context -->
        @if (!string.IsNullOrEmpty(Model.CarDisplayName))
        {
            <div class="flex items-center gap-3 mb-4 px-4 py-2 bg-primary/[0.03] border border-primary/10 rounded-xl shadow-inner">
                <div class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center text-primary">
                    <i data-lucide="car-front" class="w-4 h-4"></i>
                </div>
                <div>
                    <span class="block text-xs font-black text-foreground">@Model.CarDisplayName</span>
                    <span class="block text-[9px] font-black uppercase tracking-widest text-primary/60">@Localizer["VehicleContext"]</span>
                </div>
            </div>
        }
        
        <!-- Tags -->
        @if (Model.Tags.Any())
        {
            <div class="flex flex-wrap gap-2 mb-6">
                @foreach (var tag in Model.Tags.Take(4))
                {
                    <span class="text-[9px] font-bold text-primary bg-primary/5 px-2.5 py-1 rounded-lg border border-primary/10 transition-colors group-hover/question:bg-primary/10">#@tag</span>
                }
            </div>
        }

        <!-- Stats Footer -->
        <div class="flex items-center justify-between pt-6 border-t border-border/20">
            <div class="flex items-center gap-6">
                <div class="flex items-center gap-2 group/stat cursor-pointer">
                    <div class="w-9 h-9 flex items-center justify-center rounded-xl bg-muted/40 text-muted-foreground group-hover/stat:bg-green-500/10 group-hover/stat:text-green-600 transition-all">
                        <i data-lucide="arrow-up" class="w-4 h-4"></i>
                    </div>
                    <span class="text-[11px] font-black tabular-nums @(Model.VoteScore > 0 ? "text-green-600" : "")">@Model.VoteScore</span>
                </div>
                <div class="flex items-center gap-2 group/stat cursor-pointer">
                    <div class="w-9 h-9 flex items-center justify-center rounded-xl bg-muted/40 text-muted-foreground group-hover/stat:bg-blue-500/10 group-hover/stat:text-blue-600 transition-all">
                        <i data-lucide="message-circle" class="w-4 h-4"></i>
                    </div>
                    <span class="text-[11px] font-black tabular-nums @(Model.AnswerCount > 0 ? "text-blue-600" : "")">@Model.AnswerCount</span>
                </div>
                <div class="flex items-center gap-2 group/stat cursor-pointer">
                    <div class="w-9 h-9 flex items-center justify-center rounded-xl bg-muted/40 text-muted-foreground group-hover/stat:bg-purple-500/10 group-hover/stat:text-purple-600 transition-all">
                        <i data-lucide="eye" class="w-4 h-4"></i>
                    </div>
                    <span class="text-[11px] font-black tabular-nums">@Model.ViewCount</span>
                </div>
            </div>
            <div class="text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-40">
                @Localizer["ProtocolID"]: #@Model.Id.ToString().Substring(0, 8)
            </div>
        </div>
    </div>
</a>