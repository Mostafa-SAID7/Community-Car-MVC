@{
    ViewData["Title"] = "Ask a Question - Community Car";
}

<div class="qa-container">
    <a href="@Url.Action("Index", "QA")" class="qa-back-nav">
        <i data-lucide="arrow-left" class="me-1" style="width: 16px;"></i>Back to Q&A
    </a>
    
    <div class="qa-glass-card">
        <div class="qa-create-header">
            <h1 class="h3 font-weight-bold mb-0">Ask a Public Question</h1>
            <p class="text-muted mb-0 small mt-2">Get help from the community of car enthusiasts.</p>
        </div>
        
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>
            
            <div class="qa-form-group">
                <label for="title" class="qa-label">Title</label>
                <span class="qa-help-text">Be specific and imagine you're asking a question to another person.</span>
                <input type="text" name="title" id="title" class="form-control bg-transparent" placeholder="e.g. How to replace the transmission fluid on a 1967 Mustang?" required>
            </div>

            <div class="qa-form-group">
                <label for="body" class="qa-label">Detail your problem</label>
                <span class="qa-help-text">Include all the information someone would need to answer your question.</span>
                <textarea name="body" id="body" class="qa-textarea" rows="10" placeholder="Describe your question in detail..." required></textarea>
            </div>

            <div class="qa-actions">
                <button type="submit" class="btn btn-primary px-4">Post Question</button>
                <a href="@Url.Action("Index", "QA")" class="btn btn-ghost px-4">Cancel</a>
            </div>
        </form>
    </div>
    
    <div class="qa-tips-grid">
        <div class="qa-tip-card">
            <h4 class="qa-tip-title">1. Summarize the problem</h4>
            <ul class="qa-tip-list">
                <li>Include what you've tried</li>
                <li>State your car's model and year</li>
            </ul>
        </div>
        <div class="qa-tip-card">
            <h4 class="qa-tip-title">2. Describe what you tried</h4>
            <ul class="qa-tip-list">
                <li>Show any error codes</li>
                <li>Mention tools you used</li>
            </ul>
        </div>
        <div class="qa-tip-card">
            <h4 class="qa-tip-title">3. Add tags</h4>
            <ul class="qa-tip-list">
                <li>Help others find your question</li>
                <li>Use relevant categories</li>
            </ul>
        </div>
    </div>
</div>
