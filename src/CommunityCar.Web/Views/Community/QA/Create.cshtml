@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IStringLocalizer<SharedResource> SharedLocalizer
@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
    ViewData["Title"] = Localizer["InitializeBroadcast"];
}

<div class="max-w-4xl mx-auto space-y-10 animate-in fade-in slide-in-from-bottom-8 duration-1000">
    <!-- Header Strategy -->
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 px-2">
        <div class="space-y-2">
            <nav class="flex items-center gap-3 text-[9px] font-black uppercase tracking-[0.3em] text-primary mb-4">
                <i data-lucide="zap" class="w-3.5 h-3.5 fill-current"></i> @Localizer["ActiveInquiryPayload"]
            </nav>
            <h1 class="text-5xl font-black text-foreground tracking-tighter leading-none">@Localizer["AssembleProtocol"]</h1>
            <p class="text-sm font-medium text-muted-foreground opacity-70 mt-3 border-l-4 border-primary/20 pl-4 py-1">@Localizer["ProtocolSubtitle"]</p>
        </div>
        <a href="@Url.Action("Index", "QA")" class="px-6 py-3 bg-muted/50 hover:bg-muted text-foreground rounded-xl text-[10px] font-black uppercase tracking-widest transition-all border border-border/50 flex items-center gap-2 group/back">
            <i data-lucide="arrow-left" class="w-4 h-4 group-hover/back:-translate-x-1 transition-transform"></i> @Localizer["ReturnToRegistry"]
        </a>
    </div>
    
    <!-- Central Form Logic -->
    <div class="relative group">
        <div class="absolute -inset-1.5 bg-gradient-to-r from-primary/30 via-blue-500/10 to-primary/30 rounded-[3rem] blur-3xl opacity-20 group-hover:opacity-40 transition duration-1000"></div>
        
        <div class="relative bg-card/40 backdrop-blur-2xl border border-border/50 rounded-[2.5rem] shadow-2xl p-8 md:p-12 overflow-hidden">
            <div class="absolute top-0 right-0 w-64 h-64 bg-primary/5 rounded-full blur-3xl -mr-32 -mt-32"></div>
            
            <form asp-action="Create" method="post" class="relative space-y-12">
                <div asp-validation-summary="ModelOnly" class="text-destructive font-black text-[10px] uppercase tracking-widest bg-destructive/5 border border-destructive/10 p-4 rounded-xl"></div>
                
                <!-- Field 1: Title Core -->
                <div class="space-y-4">
                    <div class="flex items-center justify-between">
                        <label for="title" class="text-[11px] font-black uppercase tracking-[0.25em] text-primary flex items-center gap-2">
                            <span class="w-1.5 h-1.5 rounded-full bg-primary shadow-[0_0_8px_rgba(var(--primary),0.8)]"></span>
                            @Localizer["InquiryHeader"] (English)
                        </label>
                        <span class="text-[9px] font-black uppercase text-muted-foreground opacity-30">Essential Payload</span>
                    </div>
                    <div class="group/input relative">
                        <div class="absolute -inset-px bg-gradient-to-r from-primary/20 to-transparent rounded-2xl opacity-0 group-focus-within/input:opacity-100 transition duration-500"></div>
                        <input type="text" name="title" id="title" class="relative w-full bg-background/50 border border-border/50 px-6 py-5 rounded-2xl text-lg font-black tracking-tight text-foreground placeholder:text-muted-foreground/30 outline-none focus:ring-4 focus:ring-primary/5 focus:border-primary/50 transition-all shadow-inner" placeholder="@Localizer["TitlePlaceholder"]" required>
                    </div>

                    <div class="flex items-center justify-between">
                        <label for="titleAr" class="text-[11px] font-black uppercase tracking-[0.25em] text-primary flex items-center gap-2">
                            <span class="w-1.5 h-1.5 rounded-full bg-primary shadow-[0_0_8px_rgba(var(--primary),0.8)]"></span>
                            @Localizer["InquiryHeader"] (@SharedLocalizer["Arabic"])
                        </label>
                    </div>
                    <div class="group/input relative">
                        <div class="absolute -inset-px bg-gradient-to-r from-primary/20 to-transparent rounded-2xl opacity-0 group-focus-within/input:opacity-100 transition duration-500"></div>
                        <input type="text" name="titleAr" id="titleAr" class="relative w-full bg-background/50 border border-border/50 px-6 py-5 rounded-2xl text-lg font-black tracking-tight text-foreground placeholder:text-muted-foreground/30 outline-none focus:ring-4 focus:ring-primary/5 focus:border-primary/50 transition-all shadow-inner text-right" dir="rtl" placeholder="@Localizer["TitleArPlaceholder"]">
                    </div>
                    <p class="text-[10px] font-medium text-muted-foreground/60 px-2 italic">@Localizer["TitleNote"]</p>
                </div>

                <!-- Field 2: Detail Matrix -->
                <div class="space-y-4">
                    <div class="flex items-center justify-between">
                        <label for="body" class="text-[11px] font-black uppercase tracking-[0.25em] text-primary flex items-center gap-2">
                            <span class="w-1.5 h-1.5 rounded-full bg-primary shadow-[0_0_8px_rgba(var(--primary),0.8)]"></span>
                            @Localizer["TechnicalBlueprint"] (English)
                        </label>
                        <span class="text-[9px] font-black uppercase text-muted-foreground opacity-30">Telemetry Data</span>
                    </div>
                    <div class="group/input relative">
                         <div class="absolute -inset-px bg-gradient-to-r from-primary/10 to-transparent rounded-3xl opacity-0 group-focus-within/input:opacity-100 transition duration-500"></div>
                         <div class="relative bg-background/50 border border-border/50 rounded-3xl overflow-hidden focus-within:border-primary/50 transition-all shadow-inner">
                            <textarea name="body" id="body" class="w-full p-8 bg-transparent border-none focus:ring-0 resize-none min-h-[350px] text-foreground font-medium leading-relaxed placeholder:text-muted-foreground/30" placeholder="@Localizer["BodyPlaceholder"]" required></textarea>
                         </div>
                    </div>

                    <div class="flex items-center justify-between">
                        <label for="bodyAr" class="text-[11px] font-black uppercase tracking-[0.25em] text-primary flex items-center gap-2">
                            <span class="w-1.5 h-1.5 rounded-full bg-primary shadow-[0_0_8px_rgba(var(--primary),0.8)]"></span>
                            @Localizer["TechnicalBlueprint"] (@SharedLocalizer["Arabic"])
                        </label>
                    </div>
                    <div class="group/input relative">
                         <div class="absolute -inset-px bg-gradient-to-r from-primary/10 to-transparent rounded-3xl opacity-0 group-focus-within/input:opacity-100 transition duration-500"></div>
                         <div class="relative bg-background/50 border border-border/50 rounded-3xl overflow-hidden focus-within:border-primary/50 transition-all shadow-inner">
                            <textarea name="bodyAr" id="bodyAr" class="w-full p-8 bg-transparent border-none focus:ring-0 resize-none min-h-[350px] text-foreground font-medium leading-relaxed placeholder:text-muted-foreground/30 text-right" dir="rtl" placeholder="@Localizer["BodyArPlaceholder"]"></textarea>
                         </div>
                    </div>
                </div>

                <!-- Submission Controls -->
                <div class="flex flex-col md:flex-row items-center gap-6 pt-6">
                    <button type="submit" class="w-full md:w-auto px-16 py-6 bg-primary text-primary-foreground font-black text-xs uppercase tracking-[0.3em] rounded-2xl shadow-2xl shadow-primary/30 hover:shadow-primary/50 hover:-translate-y-1 active:scale-[0.98] transition-all flex items-center justify-center gap-4 group/btn">
                        @Localizer["DeployProtocol"] <i data-lucide="arrow-right" class="w-4 h-4 group-hover/btn:translate-x-1 transition-transform"></i>
                    </button>
                    <div class="h-px w-full md:w-16 md:h-px bg-border/40 hidden md:block"></div>
                    <div class="flex items-center gap-3">
                         <span class="w-2 h-2 rounded-full bg-green-500 shadow-[0_0_8px_rgba(34,197,94,0.6)] animate-pulse"></span>
                         <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">Secure Broadcast Interface</span>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Strategy Protocol Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-card/30 backdrop-blur-md border border-border/50 rounded-3xl p-8 space-y-4 hover:border-primary/20 transition-colors group">
            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary group-hover:scale-110 transition-transform">
                <i data-lucide="crosshair" class="w-5 h-5"></i>
            </div>
            <h4 class="text-xs font-black uppercase tracking-widest text-foreground">Phase 1: Target Focus</h4>
            <ul class="text-[11px] font-medium text-muted-foreground/60 leading-relaxed space-y-2">
                <li class="flex items-start gap-2"><span class="text-primary mt-0.5">•</span> Precision model identifer</li>
                <li class="flex items-start gap-2"><span class="text-primary mt-0.5">•</span> Chassis/Engine iteration</li>
            </ul>
        </div>
        
        <div class="bg-card/30 backdrop-blur-md border border-border/50 rounded-3xl p-8 space-y-4 hover:border-blue-500/20 transition-colors group">
            <div class="w-10 h-10 rounded-xl bg-blue-500/10 flex items-center justify-center text-blue-500 group-hover:scale-110 transition-transform">
                <i data-lucide="activity" class="w-5 h-5"></i>
            </div>
            <h4 class="text-xs font-black uppercase tracking-widest text-foreground">Phase 2: Diagnostics</h4>
            <ul class="text-[11px] font-medium text-muted-foreground/60 leading-relaxed space-y-2">
                <li class="flex items-start gap-2"><span class="text-blue-500 mt-0.5">•</span> OBD-II Telemetry codes</li>
                <li class="flex items-start gap-2"><span class="text-blue-500 mt-0.5">•</span> Environmental conditions</li>
            </ul>
        </div>

        <div class="bg-card/30 backdrop-blur-md border border-border/50 rounded-3xl p-8 space-y-4 hover:border-amber-500/20 transition-colors group">
            <div class="w-10 h-10 rounded-xl bg-amber-500/10 flex items-center justify-center text-amber-500 group-hover:scale-110 transition-transform">
                <i data-lucide="hash" class="w-5 h-5"></i>
            </div>
            <h4 class="text-xs font-black uppercase tracking-widest text-foreground">Phase 3: Taxonomy</h4>
            <ul class="text-[11px] font-medium text-muted-foreground/60 leading-relaxed space-y-2">
                <li class="flex items-start gap-2"><span class="text-amber-500 mt-0.5">•</span> Component categorisation</li>
                <li class="flex items-start gap-2"><span class="text-amber-500 mt-0.5">•</span> Discovery optimization</li>
            </ul>
        </div>
    </div>
</div>
