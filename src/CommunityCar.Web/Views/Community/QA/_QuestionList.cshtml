@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model CommunityCar.Application.Features.QA.DTOs.QASearchResponse

<div class="flex flex-col gap-4" id="questionsList">
    @if (Model.Questions.Any())
    {
        @foreach (var question in Model.Questions)
        {
            <a href="@Url.Action("Details", "QA", new { id = question.Id })" class="card flex-row gap-6 p-6 items-center hover:shadow-md transition-all text-inherit no-underline mb-4 @(question.IsPinned ? "border-l-4 border-l-primary" : "")" data-difficulty="@question.Difficulty" data-status="@(question.IsSolved ? "solved" : "open")" data-car-make="@question.CarMake">
                <div class="flex-1 border-r border-border pr-6">
                    <div class="flex items-center gap-2 mb-3 text-muted text-xs">
                        <div class="flex items-center gap-2">
                            <div class="avatar-xs">
                                @if (!string.IsNullOrEmpty(question.AuthorProfilePicture))
                                {
                                    <img src="@question.AuthorProfilePicture" alt="@question.AuthorName" class="rounded-full w-full h-full object-cover" />
                                }
                                else
                                {
                                    <i data-lucide="user" class="w-3 h-3"></i>
                                }
                            </div>
                            <span class="font-semibold text-primary">@question.AuthorName</span>
                        </div>
                        <span class="opacity-70">â€¢ @(question.LastActivityAt != question.CreatedAt ? Localizer["Active"] : Localizer["Asked"]) @(question.LastActivityAt != question.CreatedAt ? question.LastActivityTimeAgo : question.TimeAgo)</span>
                    </div>

                    <!-- Title in Middle -->
                    <div class="flex justify-between items-start mb-3">
                        <h3 class="text-lg font-semibold m-0 text-primary leading-tight group-hover:text-red-600">
                            @if (question.IsPinned)
                            {
                                <i data-lucide="pin" style="width: 14px; margin-right: 0.25rem;"></i>
                            }
                            @question.Title
                        </h3>
                        <div class="flex items-center gap-2 shrink-0 ml-3">
                            @if (question.IsSolved)
                            {
                                <span class="badge badge-success badge-sm">
                                    <i data-lucide="check-circle" class="w-3 h-3 mr-1"></i>@Localizer["Solved"]
                                </span>
                            }
                            else
                            {
                                <span class="badge badge-warning badge-sm">
                                    <i data-lucide="help-circle" class="w-3 h-3 mr-1"></i>@Localizer["Open"]
                                </span>
                            }
                            <span class="badge badge-outline badge-sm">
                                @question.DifficultyDisplay
                            </span>
                        </div>
                    </div>
                    
                    <!-- Tags and Car Info at Bottom -->
                    <div class="flex items-center gap-4 flex-wrap mt-3 pt-3 border-t border-border">
                        @if (!string.IsNullOrEmpty(question.CarDisplayName))
                        {
                            <div class="flex items-center gap-2 text-sm text-muted">
                                <i data-lucide="car" class="w-4 h-4"></i>
                                <span>@question.CarDisplayName</span>
                            </div>
                        }
                        
                        @if (question.Tags.Any())
                        {
                            <div class="flex gap-2">
                                @foreach (var tag in question.Tags.Take(3))
                                {
                                    <span class="badge badge-secondary badge-xs">#@tag</span>
                                }
                            </div>
                        }
                    </div>
                </div>

                <!-- Stats on Right -->
                <div class="flex gap-4 p-3 bg-muted/40 rounded-md border border-border shrink-0">
                    <div class="flex flex-col items-center justify-center min-w-[60px] @(question.VoteScore > 0 ? "text-success" : "")">
                        <span class="font-bold text-base">@question.VoteScore</span>
                        <span class="text-xs text-muted">@Localizer["Votes"]</span>
                    </div>
                    <div class="flex flex-col items-center justify-center min-w-[60px] @(question.AnswerCount > 0 ? "text-primary font-semibold" : "")">
                        <span class="font-bold text-base">@question.AnswerCount</span>
                        <span class="text-xs text-muted">@Localizer["Answers"]</span>
                    </div>
                    <div class="flex flex-col items-center justify-center min-w-[60px] text-muted">
                        <span class="font-bold text-base">@question.ViewCount</span>
                        <span class="text-xs text-muted">@Localizer["Views"]</span>
                    </div>
                </div>
            </a>
        }

        @if (Model.Pagination.TotalPages > 1)
        {
            <div class="flex flex-col sm:flex-row justify-between items-center mt-6 gap-4 border-t border-border pt-4">
                <div class="text-sm text-muted">
                    @Localizer["Showing"] @Model.Pagination.StartItem-@Model.Pagination.EndItem @Localizer["Of"] @Model.Pagination.TotalItems @Localizer["Questions"]
                </div>
                
                <nav class="flex items-center gap-1">
                    @if (Model.Pagination.HasPreviousPage)
                    {
                        <a href="javascript:void(0)" onclick="changePage(@(Model.Pagination.CurrentPage - 1))" class="btn btn-secondary btn-sm">
                            <i data-lucide="chevron-left" class="w-4 h-4 mr-1"></i>
                            @Localizer["Previous"]
                        </a>
                    }
                    
                    @for (int i = Math.Max(1, Model.Pagination.CurrentPage - 2); i <= Math.Min(Model.Pagination.TotalPages, Model.Pagination.CurrentPage + 2); i++)
                    {
                        <a href="javascript:void(0)" onclick="changePage(@i)" class="btn btn-sm @(i == Model.Pagination.CurrentPage ? "btn-primary" : "btn-secondary")">
                            @i
                        </a>
                    }
                    
                    @if (Model.Pagination.HasNextPage)
                    {
                        <a href="javascript:void(0)" onclick="changePage(@(Model.Pagination.CurrentPage + 1))" class="btn btn-secondary btn-sm">
                            @Localizer["Next"]
                            <i data-lucide="chevron-right" class="w-4 h-4 ml-1"></i>
                        </a>
                    }
                </nav>
            </div>
        }
    }
    else
    {
        <div class="qa-empty-state">
            <div class="qa-empty-icon">
                <i data-lucide="help-circle"></i>
            </div>
            <h3>@Localizer["NoQuestionsFound"]</h3>
            <p>@Localizer["TryAdjustingFilters"]</p>
            <button class="btn btn-outline-primary mt-3" onclick="resetFilters()">@Localizer["ClearFilters"]</button>
        </div>
    }
</div>
