@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model CommunityCar.Application.Features.QA.DTOs.QASearchResponse
@{
    ViewData["Title"] = Localizer["PageTitle"];
    var searchRequest = ViewBag.SearchRequest as CommunityCar.Application.Features.QA.DTOs.QASearchRequest;
}

<div class="flex flex-col gap-6 w-full mb-8">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-foreground m-0">@Localizer["HeaderTitle"]</h1>
            <p class="text-muted text-base">@Localizer["HeaderSubtitle"]</p>
        </div>
        <a href="@Url.Action("Create", "QA")" class="btn btn-primary">
            <i data-lucide="plus-circle" class="mr-2 w-4 h-4"></i>@Localizer["AskQuestion"]
        </a>
    </div>

    <!-- Stats Cards Row -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
        <div class="card p-6 flex items-center gap-4 transition hover:shadow-md border-border/60">
            <div class="w-12 h-12 rounded-md flex items-center justify-center bg-primary/10 text-primary shrink-0">
                <i data-lucide="help-circle" class="w-6 h-6"></i>
            </div>
            <div class="flex flex-col gap-1">
                <span class="text-2xl font-bold leading-none text-foreground">@Model.Stats.TotalQuestions</span>
                <span class="text-sm font-medium text-muted">@Localizer["TotalQuestions"]</span>
            </div>
        </div>
        <div class="card p-6 flex items-center gap-4 transition hover:shadow-md border-green-200/50 dark:border-green-900/30">
            <div class="w-12 h-12 rounded-md flex items-center justify-center bg-green-100 text-green-600 dark:bg-green-500/10 dark:text-green-400 shrink-0">
                <i data-lucide="check-circle" class="w-6 h-6"></i>
            </div>
            <div class="flex flex-col gap-1">
                <span class="text-2xl font-bold leading-none text-foreground">@Model.Stats.SolvedQuestions</span>
                <span class="text-sm font-medium text-muted">@Localizer["Solved"]</span>
            </div>
        </div>
        <div class="card p-6 flex items-center gap-4 transition hover:shadow-md border-yellow-200/50 dark:border-yellow-900/30">
            <div class="w-12 h-12 rounded-md flex items-center justify-center bg-yellow-100 text-yellow-600 dark:bg-yellow-500/10 dark:text-yellow-400 shrink-0">
                <i data-lucide="alert-circle" class="w-6 h-6"></i>
            </div>
            <div class="flex flex-col gap-1">
                <span class="text-2xl font-bold leading-none text-foreground">@Model.Stats.OpenQuestions</span>
                <span class="text-sm font-medium text-muted">@Localizer["Open"]</span>
            </div>
        </div>
        <div class="card p-6 flex items-center gap-4 transition hover:shadow-md border-blue-200/50 dark:border-blue-900/30">
            <div class="w-12 h-12 rounded-md flex items-center justify-center bg-blue-100 text-blue-600 dark:bg-blue-500/10 dark:text-blue-400 shrink-0">
                <i data-lucide="message-square" class="w-6 h-6"></i>
            </div>
            <div class="flex flex-col gap-1">
                <span class="text-2xl font-bold leading-none text-foreground">@Model.Stats.TotalAnswers</span>
                <span class="text-sm font-medium text-muted">@Localizer["TotalAnswers"]</span>
            </div>
        </div>
    </div>

    <!-- Enhanced Search and Toolbar -->
    <div class="flex gap-4 items-center mb-6 flex-wrap">
        <div class="flex items-center bg-background border border-input rounded-md px-4 py-2 transition hover:border-primary focus-within:border-primary focus-within:ring-2 focus-within:ring-primary/10 grow">
            <span class="text-muted mr-3">
                <i data-lucide="search" class="w-5 h-5"></i>
            </span>
            <input type="text" class="bg-transparent border-none text-foreground w-full outline-none text-base placeholder-muted" placeholder="@Localizer["SearchPlaceholder"]" id="qaSearchInput" value="@(searchRequest?.SearchTerm ?? "")">
        </div>
        
        <!-- Toggle View Hidden since we are using list only for generic components -->
        <button class="btn btn-secondary btn-icon hidden" id="toggleViewBtn" title="@Localizer["ToggleView"]">
            <i data-lucide="layout-grid" class="w-5 h-5"></i>
        </button>
        
        <button class="btn btn-secondary btn-icon h-[42px] w-[42px] flex items-center justify-center p-0" id="toggleFiltersBtn" title="@Localizer["AdvancedFilters"]">
            <i data-lucide="sliders-horizontal" class="w-5 h-5"></i>
        </button>
    </div>

    <!-- Enhanced Filters Panel -->
    <div class="card p-6 hidden mb-6 shadow-lg animate-fade-in-down" id="filtersPanel">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="flex flex-col gap-2">
                <label class="text-sm font-semibold text-muted">@Localizer["SortBy"]</label>
                <select class="form-select bg-muted/50 border-input rounded-md px-3 py-2 text-sm focus:border-primary focus:ring-primary/20" id="sortFilter">
                    <option value="Newest" selected="@(searchRequest?.SortBy == CommunityCar.Application.Features.QA.DTOs.QASortBy.Newest)">@Localizer["Newest"]</option>
                    <option value="MostVotes" selected="@(searchRequest?.SortBy == CommunityCar.Application.Features.QA.DTOs.QASortBy.MostVotes)">@Localizer["MostVotes"]</option>
                    <option value="MostAnswers" selected="@(searchRequest?.SortBy == CommunityCar.Application.Features.QA.DTOs.QASortBy.MostAnswers)">@Localizer["MostAnswers"]</option>
                    <option value="RecentActivity" selected="@(searchRequest?.SortBy == CommunityCar.Application.Features.QA.DTOs.QASortBy.RecentActivity)">@Localizer["RecentActivity"]</option>
                    <option value="MostViews" selected="@(searchRequest?.SortBy == CommunityCar.Application.Features.QA.DTOs.QASortBy.MostViews)">@Localizer["MostViews"]</option>
                </select>
            </div>
            <div class="flex flex-col gap-2">
                <label class="text-sm font-semibold text-muted">@Localizer["Difficulty"]</label>
                <select class="form-select bg-muted/50 border-input rounded-md px-3 py-2 text-sm focus:border-primary focus:ring-primary/20" id="difficultyFilter">
                    <option value="">@Localizer["AllLevels"]</option>
                    <option value="Beginner" selected="@(searchRequest?.Difficulty == CommunityCar.Domain.Enums.DifficultyLevel.Beginner)">@Localizer["Beginner"]</option>
                    <option value="Intermediate" selected="@(searchRequest?.Difficulty == CommunityCar.Domain.Enums.DifficultyLevel.Intermediate)">@Localizer["Intermediate"]</option>
                    <option value="Advanced" selected="@(searchRequest?.Difficulty == CommunityCar.Domain.Enums.DifficultyLevel.Advanced)">@Localizer["Advanced"]</option>
                    <option value="Expert" selected="@(searchRequest?.Difficulty == CommunityCar.Domain.Enums.DifficultyLevel.Expert)">@Localizer["Expert"]</option>
                </select>
            </div>
            <div class="flex flex-col gap-2">
                <label class="text-sm font-semibold text-muted">@Localizer["Status"]</label>
                <select class="form-select bg-muted/50 border-input rounded-md px-3 py-2 text-sm focus:border-primary focus:ring-primary/20" id="statusFilter">
                    <option value="">@Localizer["All"]</option>
                    <option value="Open" selected="@(searchRequest?.Status == CommunityCar.Application.Features.QA.DTOs.QAStatus.Open)">@Localizer["Open"]</option>
                    <option value="Solved" selected="@(searchRequest?.Status == CommunityCar.Application.Features.QA.DTOs.QAStatus.Solved)">@Localizer["Solved"]</option>
                    <option value="Unanswered" selected="@(searchRequest?.Status == CommunityCar.Application.Features.QA.DTOs.QAStatus.Unanswered)">@Localizer["Unanswered"]</option>
                    <option value="Pinned" selected="@(searchRequest?.Status == CommunityCar.Application.Features.QA.DTOs.QAStatus.Pinned)">@Localizer["Pinned"]</option>
                </select>
            </div>
            <div class="flex flex-col gap-2">
                <label class="text-sm font-semibold text-muted">@Localizer["CarMake"]</label>
                <select class="form-select bg-muted/50 border-input rounded-md px-3 py-2 text-sm focus:border-primary focus:ring-primary/20" id="carMakeFilter">
                    <option value="">@Localizer["AllMakes"]</option>
                    @foreach (var make in Model.AvailableCarMakes)
                    {
                        <option value="@make" selected="@(searchRequest?.CarMake == make)">@make</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <!-- Questions List -->
    <div id="questionsContainer">
        <partial name="_QuestionList" model="Model" />
    </div>
</div>

@section SidebarRight {
    <aside class="sidebar sidebar-right sidebar-hidden-lg">
        <!-- QA Stats -->
        <div class="sidebar-section margin-bottom-4">
            <h3 class="sidebar-heading">
                <i class="fas fa-chart-bar"></i>
                @Localizer["QAStatistics"]
            </h3>
            <div class="sidebar-content">
                <div class="stats-grid">
                    <div class="stat-item">
                        <div class="stat-label">@Localizer["TotalQuestions"]</div>
                        <div class="stat-value">@Model.Stats.TotalQuestions</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">@Localizer["Solved"]</div>
                        <div class="stat-value text-success">@Model.Stats.SolvedQuestions</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">@Localizer["Open"]</div>
                        <div class="stat-value text-warning">@Model.Stats.OpenQuestions</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">@Localizer["TotalAnswers"]</div>
                        <div class="stat-value">@Model.Stats.TotalAnswers</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Popular Tags -->
        <div class="sidebar-section margin-bottom-4">
            <h3 class="sidebar-heading">
                <i class="fas fa-tags"></i>
                @Localizer["PopularTags"]
            </h3>
            <div class="sidebar-content">
                <div class="tags-container">
                    @foreach (var tag in Model.AvailableTags.Take(10))
                    {
                        <span class="trending-topic">#@tag</span>
                    }
                </div>
            </div>
        </div>

        <!-- Car Makes -->
        <div class="sidebar-section">
            <h3 class="sidebar-heading">
                <i class="fas fa-car"></i>
                @Localizer["PopularMakes"]
            </h3>
            <div class="sidebar-content">
                @foreach (var make in Model.AvailableCarMakes.Take(8))
                {
                    <div class="trending-item">
                        <div class="trending-topic">@make</div>
                        <div class="trending-meta">Popular</div>
                    </div>
                }
            </div>
        </div>
    </aside>
}

@section Styles {
    <!-- QA styles are now in components.css -->
}

@section Scripts {
    <script>
        let searchTimeout;
        let currentPage = 1;

        async function performSearch(page = 1) {
            currentPage = page;
            const searchTerm = document.getElementById('qaSearchInput').value;
            const sortBy = document.getElementById('sortFilter').value;
            const difficulty = document.getElementById('difficultyFilter').value;
            const status = document.getElementById('statusFilter').value;
            const carMake = document.getElementById('carMakeFilter').value;

            // Build query parameters
            const params = new URLSearchParams({
                SearchTerm: searchTerm,
                SortBy: sortBy,
                Page: page,
                PageSize: 20
            });

            if (difficulty) params.append('Difficulty', difficulty);
            if (status) params.append('Status', status);
            if (carMake) params.append('CarMake', carMake);

            const container = document.getElementById('questionsContainer');
            // Add a subtle loading state
            container.style.opacity = '0.6';
            container.style.pointerEvents = 'none';

            try {
                const response = await fetch(`@Url.Action("Index", "QA")?${params.toString()}`, {
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                });

                if (response.ok) {
                    const html = await response.text();
                    container.innerHTML = html;
                    
                    // Re-initialize Lucide icons for new content
                    if (window.lucide) {
                        lucide.createIcons();
                    }
                    
                    // Update URL without reloading
                    const newUrl = window.location.pathname + '?' + params.toString();
                    window.history.pushState({ path: newUrl }, '', newUrl);
                }
            } catch (error) {
                console.error('Error performing search:', error);
            } finally {
                container.style.opacity = '1';
                container.style.pointerEvents = 'auto';
            }
        }

        function changePage(page) {
            performSearch(page);
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function resetFilters() {
            document.getElementById('qaSearchInput').value = '';
            document.getElementById('sortFilter').value = 'Newest';
            document.getElementById('difficultyFilter').value = '';
            document.getElementById('statusFilter').value = '';
            document.getElementById('carMakeFilter').value = '';
            performSearch(1);
        }

        document.addEventListener('DOMContentLoaded', () => {
            const toggleFiltersBtn = document.getElementById('toggleFiltersBtn');
            const filtersPanel = document.getElementById('filtersPanel');
            const toggleViewBtn = document.getElementById('toggleViewBtn');
            const searchInput = document.getElementById('qaSearchInput');
            const filters = ['sortFilter', 'difficultyFilter', 'statusFilter', 'carMakeFilter'];

            // Toggle Filters Panel
            toggleFiltersBtn.addEventListener('click', () => {
                toggleFiltersBtn.classList.toggle('active');
                toggleFiltersBtn.classList.toggle('bg-primary/10');
                toggleFiltersBtn.classList.toggle('text-primary');
                
                if (filtersPanel.classList.contains('hidden')) {
                    filtersPanel.classList.remove('hidden');
                } else {
                    filtersPanel.classList.add('hidden');
                }
            });

            // Toggle View functionality removed for generic component standardization
            /*
            toggleViewBtn.addEventListener('click', () => {
                 // ...
            });
            */

            // AJAX filtering
            searchInput.addEventListener('input', () => {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => performSearch(1), 500);
            });

            filters.forEach(id => {
                const el = document.getElementById(id);
                if (el) {
                    el.addEventListener('change', () => performSearch(1));
                }
            });
        });
    </script>
}

