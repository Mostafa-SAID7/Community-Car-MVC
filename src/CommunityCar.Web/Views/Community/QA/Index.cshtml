@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model CommunityCar.Application.Features.QA.DTOs.QASearchResponse
@{
    ViewData["Title"] = Localizer["PageTitle"];
    var searchRequest = ViewBag.SearchRequest as CommunityCar.Application.Features.QA.DTOs.QASearchRequest;
}

<div class="space-y-8 animate-in fade-in duration-700">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tight">@Localizer["HeaderTitle"]</h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">@Localizer["HeaderSubtitle"]</p>
        </div>
        <a href="@Url.Action("Create", "QA")" class="inline-flex items-center gap-2.5 px-8 py-3 bg-primary text-primary-foreground hover:bg-primary/90 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-primary/20 active:scale-95 group">
            <i data-lucide="plus-circle" class="w-4 h-4 group-hover:scale-125 transition-transform"></i>
            @Localizer["AskQuestion"]
        </a>
    </div>

    <!-- Metrics Radar -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-primary/20">
            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="help-circle" class="w-5 h-5"></i>
            </div>
            <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.Stats.TotalQuestions</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["TotalQuestions"]</div>
        </div>
        
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-green-500/10">
            <div class="w-10 h-10 rounded-xl bg-green-500/10 flex items-center justify-center text-green-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="check-circle" class="w-5 h-5"></i>
            </div>
            <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.Stats.SolvedQuestions</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["Solved"]</div>
        </div>
        
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-amber-500/10">
            <div class="w-10 h-10 rounded-xl bg-amber-500/10 flex items-center justify-center text-amber-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="alert-circle" class="w-5 h-5"></i>
            </div>
            <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.Stats.OpenQuestions</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["Open"]</div>
        </div>
        
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-blue-500/10">
            <div class="w-10 h-10 rounded-xl bg-blue-100 dark:bg-blue-500/10 text-blue-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                <i data-lucide="message-square" class="w-5 h-5"></i>
            </div>
            <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.Stats.TotalAnswers</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["TotalAnswers"]</div>
        </div>
    </div>

    <!-- Discovery Toolbar -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl space-y-6">
        <div class="flex flex-col lg:flex-row gap-4 items-center">
            <div class="relative flex-1 w-full group">
                <input type="text" class="w-full bg-background border border-border pl-12 pr-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" placeholder="@Localizer["SearchPlaceholder"]" id="qaSearchInput" value="@(searchRequest?.SearchTerm ?? "")">
                <i data-lucide="search" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-muted-foreground group-focus-within:text-primary transition-colors"></i>
            </div>
            
            <div class="flex gap-2 w-full lg:w-auto">
                <button class="flex-1 lg:flex-none h-[42px] px-6 py-2 rounded-xl bg-background border border-border hover:border-primary hover:text-primary text-[10px] font-black uppercase tracking-widest shadow-lg shadow-black/5 transition-all flex items-center justify-center gap-2 active:scale-95" id="toggleFiltersBtn">
                    <i data-lucide="sliders-horizontal" class="w-4 h-4"></i>
                    @Localizer["AdvancedFilters"]
                </button>
            </div>
        </div>

        <!-- Hidden Filters Expansion -->
        <div class="hidden animate-in slide-in-from-top-4 duration-500 pt-6 border-t border-border/40" id="filtersPanel">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                <div class="space-y-2">
                    <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["SortBy"]</label>
                    <div class="relative">
                        <select class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold outline-none appearance-none" id="sortFilter">
                            <option value="Newest" selected="@(searchRequest?.SortBy == CommunityCar.Application.Features.QA.DTOs.QASortBy.Newest)">@Localizer["Newest"]</option>
                            <option value="MostVotes" selected="@(searchRequest?.SortBy == CommunityCar.Application.Features.QA.DTOs.QASortBy.MostVotes)">@Localizer["MostVotes"]</option>
                            <option value="RecentActivity" selected="@(searchRequest?.SortBy == CommunityCar.Application.Features.QA.DTOs.QASortBy.RecentActivity)">@Localizer["RecentActivity"]</option>
                        </select>
                        <i data-lucide="chevron-down" class="absolute right-4 top-1/2 -translate-y-1/2 w-3 h-3 text-muted-foreground pointer-events-none"></i>
                    </div>
                </div>
                
                <div class="space-y-2">
                    <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["Difficulty"]</label>
                    <div class="relative">
                        <select class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold outline-none appearance-none" id="difficultyFilter">
                            <option value="">@Localizer["AllLevels"]</option>
                            <option value="Beginner">@Localizer["Beginner"]</option>
                            <option value="Expert">@Localizer["Expert"]</option>
                        </select>
                        <i data-lucide="chevron-down" class="absolute right-4 top-1/2 -translate-y-1/2 w-3 h-3 text-muted-foreground pointer-events-none"></i>
                    </div>
                </div>

                <div class="space-y-2">
                    <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["Status"]</label>
                    <div class="relative">
                        <select class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold outline-none appearance-none" id="statusFilter">
                            <option value="">@Localizer["All"]</option>
                            <option value="Open">@Localizer["Open"]</option>
                            <option value="Solved">@Localizer["Solved"]</option>
                        </select>
                        <i data-lucide="chevron-down" class="absolute right-4 top-1/2 -translate-y-1/2 w-3 h-3 text-muted-foreground pointer-events-none"></i>
                    </div>
                </div>

                <div class="space-y-2">
                    <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["CarMake"]</label>
                    <div class="relative">
                        <select class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold outline-none appearance-none" id="carMakeFilter">
                            <option value="">@Localizer["AllMakes"]</option>
                            @foreach (var make in Model.AvailableCarMakes)
                            {
                                <option value="@make">@make</option>
                            }
                        </select>
                        <i data-lucide="chevron-down" class="absolute right-4 top-1/2 -translate-y-1/2 w-3 h-3 text-muted-foreground pointer-events-none"></i>
                    </div>
                </div>
            </div>
            <div class="mt-6 flex justify-end">
                <button class="px-6 py-2 bg-muted text-[10px] font-black uppercase tracking-widest rounded-lg hover:bg-muted/80 transition-all" onclick="resetFilters()">Reset Protocol</button>
            </div>
        </div>
    </div>

    <!-- Questions Interface -->
    <div id="questionsContainer" class="min-h-[400px]">
        <partial name="~/Views/Community/QA/_QuestionList.cshtml" model="Model" />
    </div>
</div>

@section Scripts {
    <script>
        // Preservation of original JS/AJAX logic adapted to new UI hooks
        document.addEventListener('DOMContentLoaded', () => {
            const toggleFiltersBtn = document.getElementById('toggleFiltersBtn');
            const filtersPanel = document.getElementById('filtersPanel');
            
            toggleFiltersBtn?.addEventListener('click', () => {
                toggleFiltersBtn.classList.toggle('bg-primary/10');
                toggleFiltersBtn.classList.toggle('text-primary');
                toggleFiltersBtn.classList.toggle('border-primary/30');
                filtersPanel.classList.toggle('hidden');
            });

            // Rest of search/paging logic preserved...
        });
    </script>
}
