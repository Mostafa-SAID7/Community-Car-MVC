@inject IViewLocalizer Localizer
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = Localizer["SystemMaintenanceControl"];
    ViewData["PageType"] = "Maintenance";
    bool isEnabled = ViewBag.IsMaintenanceEnabled ?? false;
    string message = ViewBag.MaintenanceMessage ?? "";
}

<div class="space-y-8 animate-in fade-in duration-700">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tight">@Localizer["SystemMaintenanceControl"]</h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">@Localizer["ManageSystemMaintenanceMode"]</p>
        </div>
        <div class="flex items-center gap-2">
            <div class="w-2 h-2 rounded-full @(isEnabled ? "bg-amber-500 animate-pulse" : "bg-green-500") shadow-glow"></div>
            <span class="text-xs font-bold uppercase tracking-widest text-muted-foreground">
                @(isEnabled ? Localizer["MaintenanceActive"] : Localizer["SystemOperational"])
            </span>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-6 bg-green-50 dark:bg-green-950/20 border border-green-200 dark:border-green-800 text-green-700 dark:text-green-300 px-6 py-4 rounded-2xl shadow-lg shadow-green-500/10 animate-in slide-in-from-top duration-300">
            <div class="flex items-center gap-3">
                <i data-lucide="check-circle" class="w-5 h-5"></i>
                <span class="font-medium">@TempData["SuccessMessage"]</span>
            </div>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="mb-6 bg-red-50 dark:bg-red-950/20 border border-red-200 dark:border-red-800 text-red-700 dark:text-red-300 px-6 py-4 rounded-2xl shadow-lg shadow-red-500/10 animate-in slide-in-from-top duration-300">
            <div class="flex items-center gap-3">
                <i data-lucide="alert-circle" class="w-5 h-5"></i>
                <span class="font-medium">@TempData["ErrorMessage"]</span>
            </div>
        </div>
    }

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Status Overview Card -->
        <div class="lg:col-span-2">
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-md overflow-hidden transition-all hover:border-primary/10 hover:shadow-lg group">
                <div class="p-6 border-b border-border/50 bg-muted/20">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-3">
                                @(isEnabled ? "ENABLED" : "DISABLED")
                            </p>
                        </div>
                    </div>

                    @if (isEnabled && !string.IsNullOrEmpty(message))
                    {
                        <div class="p-4 rounded-xl border border-amber-200 bg-amber-50 dark:border-amber-800 dark:bg-amber-950/50">
                            <div class="flex items-start gap-3">
                                <div class="w-6 h-6 rounded-lg bg-amber-500/20 text-amber-600 dark:text-amber-400 flex items-center justify-center flex-shrink-0 mt-0.5">
                                    <i data-lucide="info" class="w-3.5 h-3.5"></i>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-amber-800 dark:text-amber-200">Active Message</p>
                                    <p class="text-sm text-amber-700 dark:text-amber-300 mt-1">@message</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="space-y-4">
                    <div class="p-4 rounded-xl border border-border bg-card">
                        <h4 class="text-sm font-semibold text-foreground mb-3">Impact Information</h4>
                        <div class="space-y-3 text-sm">
                            <div class="flex items-center gap-2 text-muted-foreground">
                                <i data-lucide="users" class="w-4 h-4"></i>
                                <span>@(isEnabled ? "Users cannot access the application" : "All users have full access")</span>
                            </div>
                            <div class="flex items-center gap-2 text-muted-foreground">
                                <i data-lucide="shield" class="w-4 h-4"></i>
                                <span>@(isEnabled ? "Only administrators can access" : "Normal security policies active")</span>
                            </div>
                            <div class="flex items-center gap-2 text-muted-foreground">
                                <i data-lucide="clock" class="w-4 h-4"></i>
                                <span>Last updated: @DateTime.Now.ToString("MMM dd, yyyy HH:mm")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Control Panel -->
    <div class="eng-card">
        <div class="eng-card-header">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-xl bg-primary/10 text-primary flex items-center justify-center">
                    <i data-lucide="settings" class="w-5 h-5"></i>
                </div>
                <div>
                    <h3 class="eng-card-title">Maintenance Control</h3>
                    <p class="text-sm text-muted-foreground">Toggle maintenance mode and configure user message</p>
                </div>
            </div>
        </div>
        <div class="p-6">
            <form asp-action="Toggle" method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                
                <div class="space-y-4">
                    <div>
                        <label for="message" class="block text-sm font-medium text-foreground mb-2">
                            Maintenance Message
                        </label>
                        <p class="text-xs text-muted-foreground mb-3">
                            This message will be displayed to users when maintenance mode is enabled
                        </p>
                        <textarea 
                            name="message" 
                            id="message"
                            rows="4" 
                            class="w-full px-4 py-3 rounded-xl border border-border bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-colors resize-none"
                            placeholder="Enter a message to inform users about the maintenance...">@message</textarea>
                    </div>
                </div>
                
                <input type="hidden" name="isEnabled" value="@((!isEnabled).ToString().ToLower())" />
                
                <div class="flex items-center justify-between pt-4 border-t border-border">
                    <div class="flex items-center gap-2 text-sm text-muted-foreground">
                        <i data-lucide="alert-triangle" class="w-4 h-4 text-amber-500"></i>
                        <span>This action will @(isEnabled ? "restore normal access" : "restrict user access") immediately</span>
                    </div>
                    
                    <button 
                        type="submit" 
                        class="inline-flex items-center gap-2 px-6 py-3 rounded-xl font-medium transition-all duration-200 @(isEnabled ? "bg-green-500 hover:bg-green-600 text-white shadow-lg shadow-green-500/25 hover:shadow-green-500/40" : "bg-amber-500 hover:bg-amber-600 text-white shadow-lg shadow-amber-500/25 hover:shadow-amber-500/40") transform hover:scale-105 active:scale-95">
                        <i data-lucide="@(isEnabled ? "play" : "pause")" class="w-4 h-4"></i>
                        <span>@(isEnabled ? "Disable Maintenance Mode" : "Enable Maintenance Mode")</span>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Warning Information -->
    @if (!isEnabled)
    {
        <div class="eng-card border-amber-200 dark:border-amber-800">
            <div class="p-6">
                <div class="flex items-start gap-4">
                    <div class="w-10 h-10 rounded-xl bg-amber-500/10 text-amber-600 dark:text-amber-400 flex items-center justify-center flex-shrink-0">
                        <i data-lucide="alert-triangle" class="w-5 h-5"></i>
                    </div>
                    <div class="flex-1">
                        <h4 class="text-lg font-semibold text-foreground mb-2">Before Enabling Maintenance Mode</h4>
                        <div class="space-y-2 text-sm text-muted-foreground">
                            <div class="flex items-center gap-2">
                                <i data-lucide="check" class="w-4 h-4 text-green-500"></i>
                                <span>Ensure all critical operations are completed</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <i data-lucide="check" class="w-4 h-4 text-green-500"></i>
                                <span>Notify users in advance when possible</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <i data-lucide="check" class="w-4 h-4 text-green-500"></i>
                                <span>Prepare a clear maintenance message</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <i class="fas fa-check text-green-500 w-4"></i>
                                <span>Coordinate with your team</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-resize textarea
        const textarea = document.getElementById('message');
        if (textarea) {
            textarea.addEventListener('input', function() {
                this.style.height = 'auto';
                this.style.height = this.scrollHeight + 'px';
            });
        }

        // Form submission confirmation
        document.querySelector('form').addEventListener('submit', function(e) {
            const isCurrentlyEnabled = @(isEnabled.ToString().ToLower());
            const action = isCurrentlyEnabled ? 'disable' : 'enable';
            const message = `Are you sure you want to ${action} maintenance mode?`;
            
            if (!confirm(message)) {
                e.preventDefault();
            }
        });

        // Success/Error message handling
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
            // Show success notification
            setTimeout(() => {
                const notification = document.createElement('div');
                notification.className = 'fixed top-4 right-4 z-50 p-4 rounded-xl bg-green-500 text-white shadow-lg transform translate-x-full transition-transform duration-300';
                notification.innerHTML = `
                    <div class="flex items-center gap-3">
                        <i data-lucide="check-circle" class="w-4 h-4"></i>
                        <span>@TempData["SuccessMessage"]</span>
                    </div>
                `;
                document.body.appendChild(notification);
                
                setTimeout(() => notification.classList.remove('translate-x-full'), 100);
                setTimeout(() => {
                    notification.classList.add('translate-x-full');
                    setTimeout(() => notification.remove(), 300);
                }, 3000);
            }, 100);
            </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <text>
            // Show error notification
            setTimeout(() => {
                const notification = document.createElement('div');
                notification.className = 'fixed top-4 right-4 z-50 p-4 rounded-xl bg-red-500 text-white shadow-lg transform translate-x-full transition-transform duration-300';
                notification.innerHTML = `
                    <div class="flex items-center gap-3">
                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                        <span>@TempData["ErrorMessage"]</span>
                    </div>
                `;
                document.body.appendChild(notification);
                
                setTimeout(() => notification.classList.remove('translate-x-full'), 100);
                setTimeout(() => {
                    notification.classList.add('translate-x-full');
                    setTimeout(() => notification.remove(), 300);
                }, 3000);
            }, 100);
            </text>
        }
    </script>
}