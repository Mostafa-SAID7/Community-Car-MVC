@model CommunityCar.Domain.Entities.Auth.User
@{
    ViewData["Title"] = "My Profile";
}

<div class="feed-container">
    <div class="row">
        <div class="col-12">
            <!-- Profile Header Card -->
            <div class="feed-item mb-4 overflow-hidden">
                <div class="position-relative" style="height: 160px; background: linear-gradient(135deg, var(--color-red-600), var(--color-red-400));">
                    <div class="position-absolute bottom-0 start-0 w-100 p-4 d-flex align-items-end" style="background: linear-gradient(to top, rgba(0,0,0,0.6), transparent);">
                        <div class="user-avatar me-4" style="width: 100px; height: 100px; border: 4px solid var(--color-card); box-shadow: var(--shadow-lg);">
                            <img src="@(Model.ProfilePictureUrl ?? "/images/default-avatar.png")" alt="@Model.FullName" />
                        </div>
                        <div class="text-white pb-2">
                            <h2 class="mb-1 font-bold">@Model.FullName</h2>
                            <p class="mb-0 opacity-90"><i data-lucide="at-sign" size="14" class="me-1"></i>@Model.UserName</p>
                        </div>
                    </div>
                </div>
                
                <div class="p-4 bg-card border-top">
                    <div class="row text-center">
                        <div class="col-4 border-end">
                            <div class="font-bold h4 mb-0">0</div>
                            <div class="text-muted text-xs uppercase tracking-wider">Posts</div>
                        </div>
                        <div class="col-4 border-end">
                            <div class="font-bold h4 mb-0">0</div>
                            <div class="text-muted text-xs uppercase tracking-wider">Followers</div>
                        </div>
                        <div class="col-4">
                            <div class="font-bold h4 mb-0">0</div>
                            <div class="text-muted text-xs uppercase tracking-wider">Following</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Profile Info & Actions -->
            <div class="row">
                <div class="col-lg-4">
                    <div class="feed-item mb-4">
                        <div class="p-4 border-bottom bg-muted/10">
                            <h5 class="mb-0 font-bold d-flex align-items-center">
                                <i data-lucide="user" class="me-2 text-primary"></i> About
                            </h5>
                        </div>
                        <div class="p-4">
                            <div class="mb-3 d-flex align-items-center">
                                <i data-lucide="mail" class="me-3 text-muted" size="18"></i>
                                <div>
                                    <div class="text-xs text-muted">Email</div>
                                    <div class="font-medium">@Model.Email</div>
                                </div>
                            </div>
                            <div class="mb-3 d-flex align-items-center">
                                <i data-lucide="calendar" class="me-3 text-muted" size="18"></i>
                                <div>
                                    <div class="text-xs text-muted">Joined</div>
                                    <div class="font-medium">@Model.CreatedAt.ToString("MMMM yyyy")</div>
                                </div>
                            </div>
                            @if (Model.LastLoginAt.HasValue)
                            {
                                <div class="d-flex align-items-center">
                                    <i data-lucide="clock" class="me-3 text-muted" size="18"></i>
                                    <div>
                                        <div class="text-xs text-muted">Last Activity</div>
                                        <div class="font-medium">@Model.LastLoginAt.Value.ToString("g")</div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="p-4 border-top bg-muted/5">
                            <a href="/profile/settings" class="btn btn-primary w-100 py-2 rounded-lg font-bold">
                                <i data-lucide="settings" class="me-2" size="16"></i> Edit Profile
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">
                    <!-- Tabs for content -->
                    <div class="feed-nav mb-4">
                        <div class="nav nav-pills" role="tablist">
                            <button class="nav-link active">Recent Posts</button>
                            <button class="nav-link">Media</button>
                            <button class="nav-link">Liked Content</button>
                        </div>
                    </div>

                    <div class="feed-item p-5 text-center bg-muted/10 border-dashed">
                        <div class="mb-3">
                            <i data-lucide="image" size="48" class="text-muted opacity-20"></i>
                        </div>
                        <h5 class="text-muted">No posts yet</h5>
                        <p class="text-muted text-sm mb-4">Share your car journey with the community!</p>
                        <a href="/feed" class="btn btn-outline-primary btn-sm rounded-pill px-4">Create First Post</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/feed.css" />
}
