@model CommunityCar.Domain.Entities.Auth.User
@{
    ViewData["Title"] = "My Profile";
}

<div class="feed-container">
    <div class="w-full">
        <!-- Profile Header Card -->
        <div class="feed-item mb-4 overflow-hidden">
            <div class="relative" style="height: 160px; background: linear-gradient(135deg, var(--color-red-600), var(--color-red-400));">
                <div class="absolute bottom-0 left-0 w-full p-4 flex items-end" style="background: linear-gradient(to top, rgba(0,0,0,0.6), transparent);">
                    <div class="user-avatar-lg mr-4" style="border: 4px solid var(--color-card); box-shadow: var(--shadow-lg);">
                        <img src="@(Model.ProfilePictureUrl ?? "/images/default-avatar.png")" alt="@Model.FullName" />
                    </div>
                    <div class="text-white pb-2">
                        <h2 class="mb-1 font-bold">@Model.FullName</h2>
                        <p class="mb-0 opacity-90"><i data-lucide="at-sign" size="14" class="mr-1"></i>@Model.UserName</p>
                    </div>
                </div>
            </div>
            
            <div class="p-4 bg-card border-top">
                <div class="flex text-center">
                    <div class="flex-1 border-r">
                        <div class="font-bold text-2xl mb-0">0</div>
                        <div class="text-muted text-xs uppercase tracking-wider">Posts</div>
                    </div>
                    <div class="flex-1 border-r">
                        <div class="font-bold text-2xl mb-0">0</div>
                        <div class="text-muted text-xs uppercase tracking-wider">Followers</div>
                    </div>
                    <div class="flex-1">
                        <div class="font-bold text-2xl mb-0">0</div>
                        <div class="text-muted text-xs uppercase tracking-wider">Following</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Profile Info & Actions -->
        <div class="flex flex-wrap -mx-3">
            <div class="w-full lg:w-1/3 px-3">
                <div class="feed-item mb-4">
                    <div class="p-4 border-bottom bg-muted/10">
                        <h5 class="mb-0 font-bold flex items-center">
                            <i data-lucide="user" class="mr-2 text-primary"></i> About
                        </h5>
                    </div>
                    <div class="p-4">
                        <div class="mb-3 flex items-center">
                            <i data-lucide="mail" class="mr-3 text-muted" size="18"></i>
                            <div>
                                <div class="text-xs text-muted">Email</div>
                                <div class="font-medium">@Model.Email</div>
                            </div>
                        </div>
                        <div class="mb-3 flex items-center">
                            <i data-lucide="calendar" class="mr-3 text-muted" size="18"></i>
                            <div>
                                <div class="text-xs text-muted">Joined</div>
                                <div class="font-medium">@Model.CreatedAt.ToString("MMMM yyyy")</div>
                            </div>
                        </div>
                        @if (Model.LastLoginAt.HasValue)
                        {
                            <div class="flex items-center">
                                <i data-lucide="clock" class="mr-3 text-muted" size="18"></i>
                                <div>
                                    <div class="text-xs text-muted">Last Activity</div>
                                    <div class="font-medium">@Model.LastLoginAt.Value.ToString("g")</div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="p-4 border-top bg-muted/5">
                        <a href="/profile/settings" class="btn btn-primary w-full py-2 rounded-lg font-bold">
                            <i data-lucide="settings" class="mr-2" size="16"></i> Edit Profile
                        </a>
                    </div>
                </div>
            </div>

            <div class="w-full lg:w-2/3 px-3">
                <!-- Tabs for content -->
                <div class="feed-nav mb-4">
                    <div class="nav nav-pills" role="tablist">
                        <button class="nav-link active">Recent Posts</button>
                        <button class="nav-link">Media</button>
                        <button class="nav-link">Liked Content</button>
                    </div>
                </div>

                <div class="feed-item p-5 text-center bg-muted/10 border-dashed">
                    <div class="mb-3">
                        <i data-lucide="image" size="48" class="text-muted opacity-20"></i>
                    </div>
                    <h5 class="text-muted">No posts yet</h5>
                    <p class="text-muted text-sm mb-4">Share your car journey with the community!</p>
                    <a href="/feed" class="btn btn-outline btn-sm rounded-pill px-4">Create First Post</a>
                </div>
            </div>
        </div>
    </div>
</div>