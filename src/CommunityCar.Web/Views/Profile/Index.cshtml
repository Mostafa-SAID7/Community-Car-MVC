@model CommunityCar.Web.Models.Profile.ProfileIndexVM
@{
    ViewData["Title"] = "My Profile";
    ViewData["HideRightSidebar"] = true;
}

<div class="space-y-8 animate-in fade-in duration-1000">
    <!-- Premium Profile Hero -->
    <div class="relative group/hero -mx-3 sm:-mx-4 md:-mx-6 lg:-mx-8 -mt-3 sm:-mt-4 md:-mt-6 lg:-mt-8 mb-10">
        <!-- Banner -->
        <div class="h-60 sm:h-72 bg-gradient-to-br from-primary via-primary/80 to-indigo-600 shadow-2xl relative overflow-hidden sm:rounded-b-3xl">
            <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/carbon-fibre.png')] opacity-20 pointer-events-none"></div>
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
            
            <!-- Quick Actions Floating -->
            <div class="absolute top-6 right-6 flex gap-3">
                <a href="/profile/settings" class="bg-white/10 backdrop-blur-xl border border-white/20 hover:bg-white/20 px-6 py-2.5 rounded-2xl text-[10px] font-black uppercase tracking-widest text-white transition-all shadow-xl active:scale-95 flex items-center gap-2">
                    <i data-lucide="settings" class="w-3.5 h-3.5"></i>
                    Settings
                </a>
            </div>
        </div>

        <!-- Float Profile Info -->
        <div class="px-6 md:px-12 -mt-16 md:-mt-20 relative flex flex-col md:flex-row items-end gap-6 md:gap-8">
            <div class="relative group/avatar shrink-0">
                <div class="w-40 h-40 rounded-3xl bg-background p-1.5 shadow-2xl ring-1 ring-border/50">
                    <div class="w-full h-full rounded-2xl overflow-hidden border-2 border-border/50">
                        <img src="@(Model.ProfilePictureUrl ?? "/images/default-avatar.png")" alt="@Model.FullName" class="w-full h-full object-cover group-hover/avatar:scale-110 transition-transform duration-700" />
                    </div>
                </div>
                <div class="absolute -bottom-2 -right-2 w-10 h-10 bg-green-500 border-4 border-background rounded-full shadow-lg ring-1 ring-black/5 flex items-center justify-center text-white" title="Active Enthusiast">
                    <i data-lucide="zap" class="w-4 h-4 fill-current"></i>
                </div>
            </div>

            <div class="flex-1 pb-4">
                <div class="flex items-center gap-3">
                    <h2 class="text-4xl font-black text-foreground tracking-tighter">@Model.FullName</h2>
                    <span class="inline-flex px-3 py-1 rounded-2xl bg-primary/10 text-primary border border-primary/20 text-[10px] font-black uppercase tracking-widest">Enthusiast</span>
                </div>
                <div class="flex flex-wrap items-center gap-6 mt-3 text-muted-foreground font-bold text-sm">
                    <div class="flex items-center gap-2 transition-colors hover:text-primary cursor-default">
                        <i data-lucide="at-sign" class="w-4 h-4 opacity-50"></i>
                        @Model.Email
                    </div>
                    <div class="flex items-center gap-2 opacity-60">
                        <i data-lucide="calendar" class="w-4 h-4 opacity-50"></i>
                        Joined @Model.CreatedAt.ToString("MMM yyyy")
                    </div>
                </div>
            </div>

            <!-- Stats Bar (Hidden on mobile) -->
            <div class="hidden lg:flex items-center gap-8 bg-card/60 backdrop-blur-2xl border border-white/5 p-6 px-10 rounded-3xl shadow-2xl mb-4">
                <div class="text-center group/stat cursor-pointer">
                    <div class="text-2xl font-black text-foreground group-hover/stat:text-primary transition-colors">@Model.PostsCount</div>
                    <div class="text-[9px] font-black uppercase text-muted-foreground tracking-widest opacity-60">Posts</div>
                </div>
                <div class="w-px h-8 bg-border/20"></div>
                <div class="text-center group/stat cursor-pointer">
                    <div class="text-2xl font-black text-foreground group-hover/stat:text-primary transition-colors">@Model.CommentsCount</div>
                    <div class="text-[9px] font-black uppercase text-muted-foreground tracking-widest opacity-60">Comments</div>
                </div>
                <div class="w-px h-8 bg-border/20"></div>
                <div class="text-center group/stat cursor-pointer">
                    <div class="text-2xl font-black text-foreground group-hover/stat:text-primary transition-colors">@Model.LikesReceived</div>
                    <div class="text-[9px] font-black uppercase text-muted-foreground tracking-widest opacity-60">Likes</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 pt-6">
        <!-- Sidebar Info -->
        <div class="space-y-6">
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden group/about transition-all hover:border-primary/10">
                <div class="p-5 border-b border-border/50 bg-muted/20 px-8">
                    <h5 class="text-[10px] font-black uppercase tracking-widest text-foreground flex items-center gap-3">
                        <i data-lucide="fingerprint" class="w-4 h-4 text-primary"></i>
                        User Credentials
                    </h5>
                </div>
                <div class="p-8 space-y-6">
                    <div class="flex items-center gap-4 group/field">
                        <div class="w-10 h-10 rounded-xl bg-muted/50 flex items-center justify-center text-muted-foreground group-hover/field:bg-primary/10 group-hover/field:text-primary transition-all">
                            <i data-lucide="mail" class="w-5 h-5"></i>
                        </div>
                        <div>
                            <div class="text-[9px] font-black text-muted-foreground uppercase tracking-widest opacity-50">Email Address</div>
                            <div class="text-sm font-black text-foreground mt-0.5">@Model.Email</div>
                        </div>
                    </div>
                    
                    @if (Model.LastLoginAt.HasValue)
                    {
                        <div class="flex items-center gap-4 group/field">
                            <div class="w-10 h-10 rounded-xl bg-muted/50 flex items-center justify-center text-muted-foreground group-hover/field:bg-amber-500/10 group-hover/field:text-amber-600 transition-all">
                                <i data-lucide="monitor" class="w-5 h-5"></i>
                            </div>
                            <div>
                                <div class="text-[9px] font-black text-muted-foreground uppercase tracking-widest opacity-50">Last Active</div>
                                <div class="text-sm font-black text-foreground mt-0.5">@Model.LastLoginAt.Value.ToString("g")</div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Garage Preview -->
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden p-8 text-center border-dashed border-2 group/garage cursor-pointer hover:bg-muted/10 transition-all">
                <div class="w-16 h-16 bg-muted/30 rounded-full flex items-center justify-center mx-auto mb-6 group-hover/garage:scale-110 group-hover/garage:rotate-12 transition-all">
                    <i data-lucide="car-front" class="w-8 h-8 text-muted-foreground opacity-30"></i>
                </div>
                <h6 class="text-sm font-black text-foreground mb-1 tracking-tight">Empty Garage</h6>
                <p class="text-[11px] font-bold text-muted-foreground opacity-60">Add your vehicles to showcase them</p>
            </div>
        </div>

        <!-- Activity Area -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Navigation -->
            <div class="flex items-center gap-2 p-1.5 bg-card/40 backdrop-blur-2xl border border-border rounded-2xl shadow-inner shadow-black/5">
                <button class="flex-1 py-3 px-6 rounded-2xl text-[10px] font-black uppercase tracking-widest bg-background border border-border text-foreground shadow-lg shadow-black/5 transition-all active:scale-95">Recent Activity</button>
                <button class="flex-1 py-3 px-6 rounded-2xl text-[10px] font-black uppercase tracking-widest text-muted-foreground hover:text-foreground hover:bg-muted/30 transition-all">Media Kit</button>
                <button class="flex-1 py-3 px-6 rounded-2xl text-[10px] font-black uppercase tracking-widest text-muted-foreground hover:text-foreground hover:bg-muted/30 transition-all">Connections</button>
            </div>

            <div class="bg-card/40 backdrop-blur-md border border-border rounded-3xl p-20 text-center shadow-2xl relative overflow-hidden group/empty">
                <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-transparent to-transparent opacity-50"></div>
                
                <div class="relative z-10">
                    <div class="w-24 h-24 bg-background border border-border rounded-3xl flex items-center justify-center mx-auto mb-8 shadow-2xl group-hover/empty:scale-110 group-hover/empty:-rotate-3 transition-all duration-500">
                        <i data-lucide="party-popper" class="w-10 h-10 text-primary opacity-40"></i>
                    </div>
                    <h3 class="text-2xl font-black text-foreground mb-3 tracking-tight">Begin your journey</h3>
                    <p class="text-sm text-muted-foreground max-w-sm mx-auto mb-10 font-medium opacity-80 decoration-primary decoration-2">Your profile is a canvas for your automotive life. Share your first build update today.</p>
                    <a href="/feed" class="inline-flex items-center gap-3 px-10 py-4 bg-primary text-primary-foreground hover:bg-primary/90 rounded-2xl font-black text-[11px] uppercase tracking-widest transition-all shadow-2xl shadow-primary/30 active:scale-95 group/btn">
                        Broadcast First Story
                        <i data-lucide="arrow-right" class="w-4 h-4 group-hover/btn:translate-x-2 transition-transform"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>