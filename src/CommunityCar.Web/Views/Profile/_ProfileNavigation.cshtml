@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString()?.ToLower();
}

<div class="flex items-center gap-2 p-1.5 bg-card/40 backdrop-blur-2xl border border-border rounded-2xl shadow-inner shadow-black/5 mb-8">
    <a href="/profile" class="flex-1 py-3 px-6 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all active:scale-95 @(currentAction == "index" ? "bg-background border border-border text-foreground shadow-lg shadow-black/5" : "text-muted-foreground hover:text-foreground hover:bg-muted/30")">
        <i data-lucide="user" class="w-4 h-4 mr-2 inline"></i>
        Overview
    </a>
    <a href="/profile/gallery" class="flex-1 py-3 px-6 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all active:scale-95 @(currentAction == "gallery" ? "bg-background border border-border text-foreground shadow-lg shadow-black/5" : "text-muted-foreground hover:text-foreground hover:bg-muted/30")">
        <i data-lucide="image" class="w-4 h-4 mr-2 inline"></i>
        Gallery
    </a>
    <a href="/profile/interests" class="flex-1 py-3 px-6 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all active:scale-95 @(currentAction == "interests" ? "bg-background border border-border text-foreground shadow-lg shadow-black/5" : "text-muted-foreground hover:text-foreground hover:bg-muted/30")">
        <i data-lucide="heart" class="w-4 h-4 mr-2 inline"></i>
        Interests
    </a>
    <a href="/profile/badges" class="flex-1 py-3 px-6 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all active:scale-95 @(currentAction == "badges" ? "bg-background border border-border text-foreground shadow-lg shadow-black/5" : "text-muted-foreground hover:text-foreground hover:bg-muted/30")">
        <i data-lucide="award" class="w-4 h-4 mr-2 inline"></i>
        Badges
    </a>
    <a href="/profile/settings" class="flex-1 py-3 px-6 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all active:scale-95 @(currentAction == "settings" ? "bg-background border border-border text-foreground shadow-lg shadow-black/5" : "text-muted-foreground hover:text-foreground hover:bg-muted/30")">
        <i data-lucide="settings" class="w-4 h-4 mr-2 inline"></i>
        Settings
    </a>
</div>