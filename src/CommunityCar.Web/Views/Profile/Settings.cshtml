@model CommunityCar.Domain.Entities.Auth.User
@{
    ViewData["Title"] = "Account Settings";
}

<div class="container mx-auto px-4 py-6 max-w-4xl">
    <div class="bg-card border border-border rounded-lg shadow-sm overflow-hidden">
        <div class="p-4 border-b border-border bg-muted/10 flex items-center justify-between">
            <h5 class="text-lg font-bold flex items-center mb-0">
                <i data-lucide="settings" class="w-5 h-5 mr-2 text-primary"></i>Account Settings
            </h5>
            <a href="/profile" class="text-sm text-muted-foreground hover:text-foreground transition-colors">Back to Profile</a>
        </div>
        
        <div class="p-6">
            <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                <div class="mb-6 text-center">
                    <div class="w-30 h-30 mx-auto mb-3 rounded-full overflow-hidden border-4 border-primary/20">
                        <img src="@(Model.ProfilePictureUrl ?? "/images/default-avatar.png")" alt="Profile Picture" id="profile-preview" class="w-full h-full object-cover" />
                    </div>
                    <label class="inline-flex items-center justify-center border border-primary text-primary hover:bg-primary hover:text-primary-foreground font-medium py-2 px-6 rounded-full transition-colors cursor-pointer">
                        <span>Change Photo</span>
                        <input type="file" name="ProfilePicture" class="hidden" onchange="previewImage(this)" />
                    </label>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-foreground mb-2">Full Name</label>
                        <input type="text" class="w-full px-3 py-2 bg-background border border-input rounded-md text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-input" asp-for="FullName" placeholder="Enter your full name" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-foreground mb-2">Username</label>
                       <input type="text" class="w-full px-3 py-2 bg-muted border border-input rounded-md text-muted-foreground cursor-not-allowed" asp-for="UserName" readonly />
                    </div>
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-foreground mb-2">Email Address</label>
                        <input type="email" class="w-full px-3 py-2 bg-muted border border-input rounded-md text-muted-foreground cursor-not-allowed" asp-for="Email" readonly />
                        <p class="text-xs text-muted-foreground mt-1">Email cannot be changed manually for security.</p>
                    </div>
                </div>

                <hr class="my-6 border-border">

                <div class="flex items-center justify-between p-4 bg-muted/5 rounded-lg border border-border mb-6">
                    <div>
                        <h6 class="text-base font-bold text-foreground mb-1">Password & Security</h6>
                        <p class="text-sm text-muted-foreground mb-0">Manage your account authentication</p>
                    </div>
                    <a href="/profile/change-password" class="inline-flex items-center justify-center border border-primary text-primary hover:bg-primary hover:text-primary-foreground font-medium py-2 px-6 rounded-full transition-colors">
                        Change Password
                    </a>
                </div>

                <div class="pt-2">
                    <button type="submit" class="w-full bg-primary text-primary-foreground hover:bg-primary/90 font-semibold py-3 px-6 rounded-md transition-colors">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('profile-preview').src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
