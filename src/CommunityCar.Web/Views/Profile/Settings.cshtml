@section Scripts {
    <script>
        function showTab(tabName) {
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.add('hidden');
            });
            
            // Remove active class from all tabs
            document.querySelectorAll('[id$="Tab"]').forEach(tab => {
                tab.className = 'px-4 py-2 bg-background border border-border text-muted-foreground hover:text-foreground font-bold text-sm rounded-lg transition-all';
            });
            
            // Show selected tab content
            document.getElementById(tabName + 'Settings').classList.remove('hidden');
            
            // Add active class to selected tab
            document.getElementById(tabName + 'Tab').className = 'px-4 py-2 bg-primary text-primary-foreground font-bold text-sm rounded-lg transition-all';
        }
        
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('profile-preview').src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        
        function showActiveSessions() {
            if (window.AlertModal) {
                window.AlertModal.info('Active sessions management coming soon!', 'Active Sessions');
            } else {
                alert('Active sessions management coming soon!');
            }
        }
        
        function showDeleteAccountModal() {
            const message = 'Are you sure you want to delete your account? This action cannot be undone.';
            if (window.AlertModal) {
                window.AlertModal.confirm(message, 'Delete Account', function(confirmed) {
                    if (confirmed) {
                        // Implementation for account deletion
                        window.AlertModal.warning('Account deletion process would start here.', 'Action Required');
                    }
                });
            } else if (confirm(message)) {
                alert('Account deletion process would start here.');
            }
        }
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Lucide icons
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        });
    </script>
}
