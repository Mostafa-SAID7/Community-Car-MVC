@model CommunityCar.Domain.Entities.Auth.User
@{
    ViewData["Title"] = "Account Settings";
}

<div class="feed-container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="feed-item overflow-hidden">
                <div class="p-4 border-bottom bg-muted/10 d-flex align-items-center justify-content-between">
                    <h5 class="mb-0 font-bold d-flex align-items-center">
                        <i data-lucide="settings" class="me-2 text-primary"></i> Account Settings
                    </h5>
                    <a href="/profile" class="text-sm text-muted">Back to Profile</a>
                </div>
                
                <div class="p-4">
                    <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                        <div class="mb-4 text-center">
                            <div class="user-avatar mx-auto mb-3" style="width: 120px; height: 120px; border: 3px solid var(--color-red-100);">
                                <img src="@(Model.ProfilePictureUrl ?? "/images/default-avatar.png")" alt="Profile Picture" id="profile-preview" />
                            </div>
                            <label class="btn btn-outline-primary btn-sm rounded-pill px-4 cursor-pointer">
                                <span>Change Photo</span>
                                <input type="file" name="ProfilePicture" class="d-none" onchange="previewImage(this)" />
                            </label>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label font-medium text-sm">Full Name</label>
                                <input type="text" class="form-control" asp-for="FullName" placeholder="Enter your full name" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label font-medium text-sm">Username</label>
                                <input type="text" class="form-control" asp-for="UserName" readonly />
                            </div>
                            <div class="col-12">
                                <label class="form-label font-medium text-sm">Email Address</label>
                                <input type="email" class="form-control" asp-for="Email" readonly />
                                <div class="form-text text-xs">Email cannot be changed manually for security.</div>
                            </div>
                        </div>

                        <hr class="my-4 opacity-10">

                        <div class="d-flex align-items-center justify-content-between mb-4 p-3 bg-muted/5 rounded-lg border">
                            <div>
                                <h6 class="mb-1 font-bold">Password & Security</h6>
                                <p class="mb-0 text-sm text-muted">Manage your account authentication</p>
                            </div>
                            <a href="/profile/change-password" class="btn btn-outline-primary btn-sm rounded-pill px-4">Change Password</a>
                        </div>

                        <div class="pt-2">
                            <button type="submit" class="btn btn-primary px-5 py-2 font-bold rounded-lg w-100">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/feed.css" />
}

@section Scripts {
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('profile-preview').src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
