@model CommunityCar.Web.Models.Profile.ProfileSettingsVM
@{
    ViewData["Title"] = "Account Settings";
}

@await Html.PartialAsync("_ProfileHeader")

@await Html.PartialAsync("_ProfileNavigation")

<div class="max-w-4xl mx-auto">
    <div class="mb-8 border-b border-border pb-4 flex items-center justify-between">
        <h1 class="text-2xl font-black flex items-center mb-0">
            <i data-lucide="settings" class="w-6 h-6 mr-3 text-primary"></i>Account Settings
        </h1>
    </div>
    
    <!-- Settings Navigation -->
    <div class="flex flex-wrap gap-2 mb-8">
        <button onclick="showTab('profile')" id="profileTab" class="px-4 py-2 bg-primary text-primary-foreground font-bold text-sm rounded-lg transition-all">
            Profile
        </button>
        <button onclick="showTab('privacy')" id="privacyTab" class="px-4 py-2 bg-background border border-border text-muted-foreground hover:text-foreground font-bold text-sm rounded-lg transition-all">
            Privacy
        </button>
        <button onclick="showTab('notifications')" id="notificationsTab" class="px-4 py-2 bg-background border border-border text-muted-foreground hover:text-foreground font-bold text-sm rounded-lg transition-all">
            Notifications
        </button>
        <button onclick="showTab('security')" id="securityTab" class="px-4 py-2 bg-background border border-border text-muted-foreground hover:text-foreground font-bold text-sm rounded-lg transition-all">
            Security
        </button>
    </div>
    
    <!-- Profile Settings Tab -->
    <div id="profileSettings" class="tab-content">
        <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
            <div class="mb-10 text-center relative group/photo">
                <div class="w-32 h-32 mx-auto mb-6 rounded-3xl overflow-hidden border-4 border-primary/10 shadow-2xl relative">
                    <img src="@(Model.ProfilePictureUrl ?? "/images/default-avatar.png")" alt="Profile Picture" id="profile-preview" class="w-full h-full object-cover group-hover/photo:scale-110 transition-transform duration-500" />
                    <div class="absolute inset-0 bg-black/40 opacity-0 group-hover/photo:opacity-100 transition-opacity flex items-center justify-center">
                        <i data-lucide="camera" class="w-8 h-8 text-white"></i>
                    </div>
                </div>
                <label class="inline-flex items-center justify-center bg-primary/10 text-primary hover:bg-primary hover:text-primary-foreground font-black text-xs uppercase tracking-widest py-3 px-8 rounded-2xl transition-all cursor-pointer shadow-sm active:scale-95">
                    <span>Change Photo</span>
                    <input type="file" name="ProfilePicture" class="hidden" onchange="previewImage(this)" />
                </label>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">Full Name</label>
                    <input type="text" class="w-full px-4 py-3 bg-background border border-border rounded-xl text-foreground font-bold focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" asp-for="FullName" placeholder="Enter your full name" />
                </div>
                <div class="space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">Username (Email)</label>
                   <input type="text" class="w-full px-4 py-3 bg-muted/50 border border-border rounded-xl text-muted-foreground cursor-not-allowed font-bold" value="@Model.Email" readonly />
                </div>
                <div class="md:col-span-2 space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">Primary Email Address</label>
                    <input type="email" class="w-full px-4 py-3 bg-muted/50 border border-border rounded-xl text-muted-foreground cursor-not-allowed font-bold" asp-for="Email" readonly />
                    <p class="text-[10px] text-muted-foreground mt-2 opacity-60 font-medium">Email cannot be changed manually for security.</p>
                </div>
                <div class="space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">Phone Number</label>
                    <input type="tel" class="w-full px-4 py-3 bg-background border border-border rounded-xl text-foreground font-bold focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" asp-for="PhoneNumber" placeholder="Enter your phone number" />
                </div>
                <div class="space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">Country</label>
                    <input type="text" class="w-full px-4 py-3 bg-background border border-border rounded-xl text-foreground font-bold focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" asp-for="Country" placeholder="Enter your country" />
                </div>
                <div class="space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">City</label>
                    <input type="text" class="w-full px-4 py-3 bg-background border border-border rounded-xl text-foreground font-bold focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" asp-for="City" placeholder="Enter your city" />
                </div>
                <div class="space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">Country (Arabic)</label>
                    <input type="text" class="w-full px-4 py-3 bg-background border border-border rounded-xl text-foreground font-bold focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" asp-for="CountryAr" placeholder="أدخل الدولة بالعربية" dir="rtl" />
                </div>
                <div class="space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">City (Arabic)</label>
                    <input type="text" class="w-full px-4 py-3 bg-background border border-border rounded-xl text-foreground font-bold focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" asp-for="CityAr" placeholder="أدخل المدينة بالعربية" dir="rtl" />
                </div>
                <div class="md:col-span-2 space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">Bio</label>
                    <textarea class="w-full px-4 py-3 bg-background border border-border rounded-xl text-foreground font-bold focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all resize-none" asp-for="Bio" rows="4" placeholder="Tell us about yourself..."></textarea>
                </div>
                <div class="md:col-span-2 space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">Bio (Arabic)</label>
                    <textarea class="w-full px-4 py-3 bg-background border border-border rounded-xl text-foreground font-bold focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all resize-none" asp-for="BioAr" rows="4" placeholder="أخبرنا عن نفسك..." dir="rtl"></textarea>
                </div>
            </div>

            <div class="pt-6">
                <button type="submit" class="w-full bg-primary text-primary-foreground hover:bg-primary/90 font-black text-xs uppercase tracking-widest py-4 px-8 rounded-2xl transition-all shadow-xl shadow-primary/20 active:scale-95">
                    Save Profile Changes
                </button>
            </div>
        </form>
    </div>

    <!-- Privacy Settings Tab -->
    <div id="privacySettings" class="tab-content hidden">
        <form asp-action="UpdatePrivacySettings" method="post">
            <div class="space-y-8">
                <!-- Profile Visibility -->
                <div class="bg-background border border-border rounded-2xl p-6">
                    <h3 class="text-lg font-bold text-foreground mb-4 flex items-center gap-2">
                        <i data-lucide="eye" class="w-5 h-5 text-primary"></i>
                        Profile Visibility
                    </h3>
                    <div class="space-y-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">Public Profile</label>
                                <p class="text-sm text-muted-foreground">Allow others to find and view your profile</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="ProfileVisible" class="sr-only peer" checked />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">Show Email</label>
                                <p class="text-sm text-muted-foreground">Display your email address on your profile</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="EmailVisible" class="sr-only peer" />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">Show Phone Number</label>
                                <p class="text-sm text-muted-foreground">Display your phone number on your profile</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="PhoneVisible" class="sr-only peer" />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Communication Preferences -->
                <div class="bg-background border border-border rounded-2xl p-6">
                    <h3 class="text-lg font-bold text-foreground mb-4 flex items-center gap-2">
                        <i data-lucide="message-circle" class="w-5 h-5 text-primary"></i>
                        Communication
                    </h3>
                    <div class="space-y-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">Allow Direct Messages</label>
                                <p class="text-sm text-muted-foreground">Let other users send you private messages</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="AllowMessages" class="sr-only peer" checked />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">Allow Friend Requests</label>
                                <p class="text-sm text-muted-foreground">Let other users send you friend requests</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="AllowFriendRequests" class="sr-only peer" checked />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Content Privacy -->
                <div class="bg-background border border-border rounded-2xl p-6">
                    <h3 class="text-lg font-bold text-foreground mb-4 flex items-center gap-2">
                        <i data-lucide="shield" class="w-5 h-5 text-primary"></i>
                        Content Privacy
                    </h3>
                    <div class="space-y-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">Default Gallery Privacy</label>
                                <p class="text-sm text-muted-foreground">New uploads will be private by default</p>
                            </div>
                            <select name="DefaultGalleryPrivacy" class="px-3 py-2 bg-background border border-border rounded-lg text-foreground font-medium focus:outline-none focus:ring-2 focus:ring-primary/20">
                                <option value="public">Public</option>
                                <option value="private">Private</option>
                            </select>
                        </div>
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">Show Activity Status</label>
                                <p class="text-sm text-muted-foreground">Let others see when you're online</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="ShowActivityStatus" class="sr-only peer" checked />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="pt-6">
                <button type="submit" class="w-full bg-primary text-primary-foreground hover:bg-primary/90 font-black text-xs uppercase tracking-widest py-4 px-8 rounded-2xl transition-all shadow-xl shadow-primary/20 active:scale-95">
                    Save Privacy Settings
                </button>
            </div>
        </form>
    </div>

    <!-- Notifications Settings Tab -->
    <div id="notificationsSettings" class="tab-content hidden">
        <form asp-action="UpdateNotificationSettings" method="post">
            <div class="space-y-8">
                <!-- Email Notifications -->
                <div class="bg-background border border-border rounded-2xl p-6">
                    <h3 class="text-lg font-bold text-foreground mb-4 flex items-center gap-2">
                        <i data-lucide="mail" class="w-5 h-5 text-primary"></i>
                        Email Notifications
                    </h3>
                    <div class="space-y-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">General Notifications</label>
                                <p class="text-sm text-muted-foreground">Receive email notifications for important updates</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="EmailNotifications" class="sr-only peer" @(Model.EmailNotifications ? "checked" : "") />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">Marketing Emails</label>
                                <p class="text-sm text-muted-foreground">Receive promotional content and updates</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="MarketingEmails" class="sr-only peer" @(Model.MarketingEmails ? "checked" : "") />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Push Notifications -->
                <div class="bg-background border border-border rounded-2xl p-6">
                    <h3 class="text-lg font-bold text-foreground mb-4 flex items-center gap-2">
                        <i data-lucide="bell" class="w-5 h-5 text-primary"></i>
                        Push Notifications
                    </h3>
                    <div class="space-y-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">Browser Notifications</label>
                                <p class="text-sm text-muted-foreground">Receive push notifications in your browser</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="PushNotifications" class="sr-only peer" @(Model.PushNotifications ? "checked" : "") />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">SMS Notifications</label>
                                <p class="text-sm text-muted-foreground">Receive important alerts via SMS</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="SmsNotifications" class="sr-only peer" @(Model.SmsNotifications ? "checked" : "") />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="pt-6">
                <button type="submit" class="w-full bg-primary text-primary-foreground hover:bg-primary/90 font-black text-xs uppercase tracking-widest py-4 px-8 rounded-2xl transition-all shadow-xl shadow-primary/20 active:scale-95">
                    Save Notification Settings
                </button>
            </div>
        </form>
    </div>

    <!-- Security Settings Tab -->
    <div id="securitySettings" class="tab-content hidden">
        <div class="space-y-8">
            <!-- Password & Security -->
            <div class="bg-background border border-border rounded-2xl p-6">
                <h3 class="text-lg font-bold text-foreground mb-4 flex items-center gap-2">
                    <i data-lucide="lock" class="w-5 h-5 text-primary"></i>
                    Password & Security
                </h3>
                <div class="space-y-4">
                    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
                        <div>
                            <h6 class="font-medium text-foreground">Change Password</h6>
                            <p class="text-sm text-muted-foreground">Update your account password</p>
                        </div>
                        <a href="/profile/change-password" class="inline-flex items-center justify-center bg-primary/10 text-primary hover:bg-primary hover:text-primary-foreground font-bold text-sm py-2 px-4 rounded-lg transition-all">
                            Change Password
                        </a>
                    </div>
                    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
                        <div>
                            <h6 class="font-medium text-foreground">Two-Factor Authentication</h6>
                            <p class="text-sm text-muted-foreground">
                                @if (Model.IsTwoFactorEnabled)
                                {
                                    <span class="text-green-600">Enabled - Your account is protected</span>
                                }
                                else
                                {
                                    <span class="text-orange-600">Disabled - Consider enabling for better security</span>
                                }
                            </p>
                        </div>
                        <a href="/profile/two-factor" class="inline-flex items-center justify-center bg-primary/10 text-primary hover:bg-primary hover:text-primary-foreground font-bold text-sm py-2 px-4 rounded-lg transition-all">
                            @(Model.IsTwoFactorEnabled ? "Manage 2FA" : "Enable 2FA")
                        </a>
                    </div>
                </div>
            </div>

            <!-- Active Sessions -->
            <div class="bg-background border border-border rounded-2xl p-6">
                <h3 class="text-lg font-bold text-foreground mb-4 flex items-center gap-2">
                    <i data-lucide="monitor" class="w-5 h-5 text-primary"></i>
                    Active Sessions
                </h3>
                <div class="flex items-center justify-between">
                    <div>
                        <p class="font-medium text-foreground">@Model.ActiveSessions active session(s)</p>
                        <p class="text-sm text-muted-foreground">Manage your active login sessions</p>
                    </div>
                    <button onclick="showActiveSessions()" class="inline-flex items-center justify-center bg-primary/10 text-primary hover:bg-primary hover:text-primary-foreground font-bold text-sm py-2 px-4 rounded-lg transition-all">
                        View Sessions
                    </button>
                </div>
            </div>

            <!-- OAuth Connections -->
            <div class="bg-background border border-border rounded-2xl p-6">
                <h3 class="text-lg font-bold text-foreground mb-4 flex items-center gap-2">
                    <i data-lucide="link" class="w-5 h-5 text-primary"></i>
                    Connected Accounts
                </h3>
                <div class="space-y-4">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div class="w-8 h-8 bg-red-500 rounded-lg flex items-center justify-center">
                                <i data-lucide="mail" class="w-4 h-4 text-white"></i>
                            </div>
                            <div>
                                <p class="font-medium text-foreground">Google</p>
                                <p class="text-sm text-muted-foreground">
                                    @if (Model.HasGoogleAccount)
                                    {
                                        <span class="text-green-600">Connected</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted-foreground">Not connected</span>
                                    }
                                </p>
                            </div>
                        </div>
                        @if (Model.HasGoogleAccount)
                        {
                            <button class="text-red-500 hover:text-red-600 font-medium text-sm transition-colors">
                                Disconnect
                            </button>
                        }
                        else
                        {
                            <button class="text-primary hover:text-primary/80 font-medium text-sm transition-colors">
                                Connect
                            </button>
                        }
                    </div>
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                                <i data-lucide="facebook" class="w-4 h-4 text-white"></i>
                            </div>
                            <div>
                                <p class="font-medium text-foreground">Facebook</p>
                                <p class="text-sm text-muted-foreground">
                                    @if (Model.HasFacebookAccount)
                                    {
                                        <span class="text-green-600">Connected</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted-foreground">Not connected</span>
                                    }
                                </p>
                            </div>
                        </div>
                        @if (Model.HasFacebookAccount)
                        {
                            <button class="text-red-500 hover:text-red-600 font-medium text-sm transition-colors">
                                Disconnect
                            </button>
                        }
                        else
                        {
                            <button class="text-primary hover:text-primary/80 font-medium text-sm transition-colors">
                                Connect
                            </button>
                        }
                    </div>
                </div>
            </div>

            <!-- Danger Zone -->
            <div class="bg-red-50 dark:bg-red-950/20 border border-red-200 dark:border-red-800 rounded-2xl p-6">
                <h3 class="text-lg font-bold text-red-600 mb-4 flex items-center gap-2">
                    <i data-lucide="alert-triangle" class="w-5 h-5"></i>
                    Danger Zone
                </h3>
                <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
                    <div>
                        <h6 class="font-medium text-red-600">Delete Account</h6>
                        <p class="text-sm text-red-500">Permanently delete your account and all associated data</p>
                    </div>
