@{
    ViewData["Title"] = "My Interests";
    var currentUserId = ViewBag.CurrentUserId as Guid?;
}

@await Html.PartialAsync("_ProfileHeader")

@await Html.PartialAsync("_ProfileNavigation")

<div class="space-y-8 animate-in fade-in duration-700">
    <!-- Interests Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-2xl font-black text-foreground tracking-tight flex items-center gap-3">
                <i data-lucide="heart" class="w-6 h-6 text-primary"></i>
                My Interests
            </h1>
            <p class="text-sm text-muted-foreground mt-1">Discover and manage your automotive interests</p>
        </div>
    </div>

    <!-- Interest Categories -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Current Interests -->
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
                <div class="p-6 border-b border-border/50 bg-muted/20">
                    <h3 class="text-lg font-black text-foreground flex items-center gap-3">
                        <i data-lucide="star" class="w-5 h-5 text-primary"></i>
                        Your Top Interests
                    </h3>
                    <p class="text-sm text-muted-foreground mt-1">Based on your activity and engagement</p>
                </div>
                
                <div class="p-6">
                    <div id="userInterestsList" class="space-y-4">
                        <!-- Will be populated by JavaScript -->
                        <div class="flex items-center justify-center py-12">
                            <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-primary"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Interest Analytics -->
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
                <div class="p-6 border-b border-border/50 bg-muted/20">
                    <h3 class="text-lg font-black text-foreground flex items-center gap-3">
                        <i data-lucide="trending-up" class="w-5 h-5 text-primary"></i>
                        Interest Analytics
                    </h3>
                </div>
                
                <div class="p-6">
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                        <div class="text-center p-4 bg-muted/30 rounded-xl">
                            <div class="text-2xl font-black text-foreground mb-1" id="totalInterests">-</div>
                            <div class="text-xs font-bold text-muted-foreground uppercase tracking-widest">Total Interests</div>
                        </div>
                        <div class="text-center p-4 bg-muted/30 rounded-xl">
                            <div class="text-2xl font-black text-foreground mb-1" id="topCategory">-</div>
                            <div class="text-xs font-bold text-muted-foreground uppercase tracking-widest">Top Category</div>
                        </div>
                        <div class="text-center p-4 bg-muted/30 rounded-xl">
                            <div class="text-2xl font-black text-foreground mb-1" id="engagementScore">-</div>
                            <div class="text-xs font-bold text-muted-foreground uppercase tracking-widest">Engagement</div>
                        </div>
                        <div class="text-center p-4 bg-muted/30 rounded-xl">
                            <div class="text-2xl font-black text-foreground mb-1" id="lastUpdated">-</div>
                            <div class="text-xs font-bold text-muted-foreground uppercase tracking-widest">Last Updated</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            <!-- Suggested Interests -->
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
                <div class="p-6 border-b border-border/50 bg-muted/20">
                    <h3 class="text-lg font-black text-foreground flex items-center gap-3">
                        <i data-lucide="lightbulb" class="w-5 h-5 text-primary"></i>
                        Suggested
                    </h3>
                </div>
                
                <div class="p-6">
                    <div id="suggestedInterests" class="space-y-3">
                        <!-- Will be populated by JavaScript -->
                        <div class="flex items-center justify-center py-8">
                            <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-primary"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Interest Categories -->
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
                <div class="p-6 border-b border-border/50 bg-muted/20">
                    <h3 class="text-lg font-black text-foreground flex items-center gap-3">
                        <i data-lucide="grid-3x3" class="w-5 h-5 text-primary"></i>
                        Categories
                    </h3>
                </div>
                
                <div class="p-6">
                    <div class="space-y-3">
                        <div class="flex items-center justify-between p-3 rounded-lg hover:bg-muted/30 transition-colors cursor-pointer" onclick="filterByCategory('automotive')">
                            <div class="flex items-center gap-3">
                                <i data-lucide="car" class="w-4 h-4 text-primary"></i>
                                <span class="text-sm font-bold text-foreground">Automotive</span>
                            </div>
                            <span class="text-xs text-muted-foreground" id="automotiveCount">-</span>
                        </div>
                        <div class="flex items-center justify-between p-3 rounded-lg hover:bg-muted/30 transition-colors cursor-pointer" onclick="filterByCategory('performance')">
                            <div class="flex items-center gap-3">
                                <i data-lucide="zap" class="w-4 h-4 text-orange-500"></i>
                                <span class="text-sm font-bold text-foreground">Performance</span>
                            </div>
                            <span class="text-xs text-muted-foreground" id="performanceCount">-</span>
                        </div>
                        <div class="flex items-center justify-between p-3 rounded-lg hover:bg-muted/30 transition-colors cursor-pointer" onclick="filterByCategory('restoration')">
                            <div class="flex items-center gap-3">
                                <i data-lucide="wrench" class="w-4 h-4 text-green-500"></i>
                                <span class="text-sm font-bold text-foreground">Restoration</span>
                            </div>
                            <span class="text-xs text-muted-foreground" id="restorationCount">-</span>
                        </div>
                        <div class="flex items-center justify-between p-3 rounded-lg hover:bg-muted/30 transition-colors cursor-pointer" onclick="filterByCategory('community')">
                            <div class="flex items-center gap-3">
                                <i data-lucide="users" class="w-4 h-4 text-blue-500"></i>
                                <span class="text-sm font-bold text-foreground">Community</span>
                            </div>
                            <span class="text-xs text-muted-foreground" id="communityCount">-</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let userInterests = [];
        let suggestedInterests = [];
        
        document.addEventListener('DOMContentLoaded', function() {
            loadUserInterests();
            loadSuggestedInterests();
        });

        function loadUserInterests() {
            @if (currentUserId.HasValue)
            {
                <text>
                fetch(`/api/analytics/interests/@currentUserId?detailed=true`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            userInterests = data.data;
                            displayUserInterests(data.data);
                            updateAnalytics(data.data);
                        } else {
                            showEmptyInterests();
                        }
                    })
                    .catch(error => {
                        console.error('Error loading interests:', error);
                        showEmptyInterests();
                    });
                </text>
            }
        }

        function loadSuggestedInterests() {
            @if (currentUserId.HasValue)
            {
                <text>
                fetch(`/api/analytics/interests/@currentUserId/suggestions`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            suggestedInterests = data.data;
                            displaySuggestedInterests(data.data);
                        }
                    })
                    .catch(error => {
                        console.error('Error loading suggested interests:', error);
                    });
                </text>
            }
        }

        function displayUserInterests(interests) {
            const container = document.getElementById('userInterestsList');
            container.innerHTML = '';
            
            if (interests.length === 0) {
                showEmptyInterests();
                return;
            }
            
            interests.forEach((interest, index) => {
                const interestEl = document.createElement('div');
                interestEl.className = 'flex items-center justify-between p-4 bg-muted/20 rounded-xl hover:bg-muted/30 transition-all group';
                interestEl.innerHTML = `
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center text-primary font-black text-lg">
                            ${index + 1}
                        </div>
                        <div>
                            <div class="text-sm font-black text-foreground">${interest.displayName}</div>
                            <div class="text-xs text-muted-foreground">${interest.category || 'General'} â€¢ Score: ${Math.round(interest.score)}</div>
                        </div>
                    </div>
                    <div class="flex items-center gap-3">
                        <div class="w-16 bg-muted rounded-full h-2 overflow-hidden">
                            <div class="h-full bg-primary transition-all duration-500" style="width: ${Math.min(interest.score, 100)}%"></div>
                        </div>
                        <button class="opacity-0 group-hover:opacity-100 p-2 text-muted-foreground hover:text-destructive transition-all" onclick="removeInterest('${interest.id}')">
                            <i data-lucide="x" class="w-4 h-4"></i>
                        </button>
                    </div>
                `;
                container.appendChild(interestEl);
            });
        }

        function displaySuggestedInterests(suggestions) {
            const container = document.getElementById('suggestedInterests');
            container.innerHTML = '';
            
            if (suggestions.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-8">
                        <i data-lucide="check-circle" class="w-8 h-8 text-green-500 mx-auto mb-2"></i>
                        <p class="text-xs text-muted-foreground">No new suggestions</p>
                    </div>
                `;
                return;
            }
            
            suggestions.slice(0, 5).forEach(suggestion => {
                const suggestionEl = document.createElement('div');
                suggestionEl.className = 'flex items-center justify-between p-3 rounded-lg hover:bg-muted/30 transition-colors';
                suggestionEl.innerHTML = `
                    <div>
                        <div class="text-sm font-bold text-foreground">${suggestion.name}</div>
                        <div class="text-xs text-muted-foreground">${suggestion.reason}</div>
                    </div>
                    <button class="p-1 text-primary hover:bg-primary/10 rounded transition-all" onclick="addInterest('${suggestion.id}', '${suggestion.name}')">
                        <i data-lucide="plus" class="w-4 h-4"></i>
                    </button>
                `;
                container.appendChild(suggestionEl);
            });
        }

        function updateAnalytics(interests) {
            document.getElementById('totalInterests').textContent = interests.length;
            
            // Calculate top category
            const categories = {};
            interests.forEach(interest => {
                const category = interest.category || 'General';
                categories[category] = (categories[category] || 0) + 1;
            });
            
            const topCategory = Object.keys(categories).reduce((a, b) => categories[a] > categories[b] ? a : b, 'None');
            document.getElementById('topCategory').textContent = topCategory;
            
            // Calculate engagement score
            const avgScore = interests.length > 0 ? Math.round(interests.reduce((sum, i) => sum + i.score, 0) / interests.length) : 0;
            document.getElementById('engagementScore').textContent = avgScore + '%';
            
            document.getElementById('lastUpdated').textContent = 'Today';
            
            // Update category counts
            document.getElementById('automotiveCount').textContent = categories['Automotive'] || 0;
            document.getElementById('performanceCount').textContent = categories['Performance'] || 0;
            document.getElementById('restorationCount').textContent = categories['Restoration'] || 0;
            document.getElementById('communityCount').textContent = categories['Community'] || 0;
        }

        function showEmptyInterests() {
            const container = document.getElementById('userInterestsList');
            container.innerHTML = `
                <div class="text-center py-12">
                    <i data-lucide="heart" class="w-12 h-12 text-muted-foreground mx-auto mb-4 opacity-30"></i>
                    <h3 class="text-lg font-black text-foreground mb-2">No interests yet</h3>
                    <p class="text-sm text-muted-foreground mb-6">Start engaging with content to build your interest profile</p>
                    <a href="/feed" class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-primary-foreground rounded-xl text-sm font-bold hover:bg-primary/90 transition-all">
                        <i data-lucide="explore" class="w-4 h-4"></i>
                        Explore Content
                    </a>
                </div>
            `;
        }

        function addInterest(interestId, interestName) {
            // Mock implementation
            console.log('Adding interest:', interestName);
            // In real app, make API call to add interest
        }

        function removeInterest(interestId) {
            // Mock implementation
            console.log('Removing interest:', interestId);
            // In real app, make API call to remove interest
        }

        function filterByCategory(category) {
            // Mock implementation
            console.log('Filtering by category:', category);
            // In real app, filter and display interests by category
        }
    </script>
}