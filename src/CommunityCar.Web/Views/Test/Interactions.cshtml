@model CommunityCar.Application.Features.Interactions.ViewModels.InteractionSummaryVM
@{
    ViewData["Title"] = "Test Interactions";
}

<div class="container mx-auto px-4 mt-8">
    <h2 class="text-2xl font-bold mb-6">Test Interactions - Like, Comment, Share</h2>
    
    <div class="eng-card">
        <div class="eng-card-header">
            <h4 class="eng-card-title">Sample Question</h4>
        </div>
        <div class="p-6 space-y-4">
            <h5 class="text-lg font-bold">How do I change the oil in my car?</h5>
            <p class="text-muted-foreground">
                I have a 2020 Honda Civic and I want to learn how to change the oil myself. 
                What tools do I need and what are the steps involved? Any safety tips would be appreciated.
            </p>
            
            <!-- Interaction Bar -->
            <div class="pt-4 border-t border-border">
                <partial name="Reactions/_InteractionBar" model="Model" />
            </div>
        </div>
    </div>
    
    <div class="mt-8 p-6 bg-muted/30 rounded-2xl border border-border/50">
        <h4 class="text-lg font-black uppercase tracking-widest mb-4">Instructions:</h4>
        <ul class="space-y-2 text-sm text-muted-foreground">
            <li class="flex items-center gap-2">
                <div class="w-1.5 h-1.5 rounded-full bg-primary"></div>
                Click the reaction buttons (like, love, etc.) to test reactions
            </li>
            <li class="flex items-center gap-2">
                <div class="w-1.5 h-1.5 rounded-full bg-primary"></div>
                Click "Comments" to open the comment section
            </li>
            <li class="flex items-center gap-2">
                <div class="w-1.5 h-1.5 rounded-full bg-primary"></div>
                Try adding a comment in the comment form
            </li>
            <li class="flex items-center gap-2">
                <div class="w-1.5 h-1.5 rounded-full bg-primary"></div>
                Click "Share" to test the share modal
            </li>
            <li class="flex items-center gap-2">
                <div class="w-1.5 h-1.5 rounded-full bg-primary"></div>
                All interactions should work with AJAX and show toast notifications
            </li>
        </ul>
    </div>
</div>

@section Scripts {
    <script>
        console.log('Interactions test page loaded');
        console.log('Entity ID:', '@ViewBag.EntityId');
        console.log('Entity Type:', '@ViewBag.EntityType');
    </script>
}