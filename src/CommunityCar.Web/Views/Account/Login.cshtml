@model CommunityCar.Web.Models.Account.LoginVM
@{
    ViewData["Title"] = "Sign In";
    Layout = "_AuthLayout";
}

<div class="auth-header-clean">
    <div class="auth-logo-clean">CC</div>
    <h1 class="auth-title-clean">Welcome Back</h1>
    <p class="auth-subtitle-clean">Sign in to your CommunityCar account</p>
</div>

<form asp-action="Login" method="post" class="auth-form-clean">
    <div asp-validation-summary="ModelOnly" class="text-danger margin-bottom-3"></div>

    <div class="form-group">
        <label asp-for="Email" class="form-label">Email Address</label>
        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" class="form-control" placeholder="Enter your password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-check margin-bottom-3">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label">Remember me</label>
    </div>

    <button type="submit" class="btn btn-primary">
        Sign In
    </button>
</form>

<div class="auth-links-clean">
    <p><a asp-action="ForgotPassword">Forgot your password?</a></p>
    <p>Don't have an account? <a asp-action="Register">Sign up</a></p>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
