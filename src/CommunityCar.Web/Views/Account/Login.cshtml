@model CommunityCar.Web.Models.Account.LoginVM
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> SharedLocalizer
@inject IStringLocalizer<AccountResource> AccountLocalizer
@{
    ViewData["Title"] = AccountLocalizer["SignIn"];
    ViewData["FullWidth"] = true; // Use wide container
    Layout = "_AuthLayout";
}

@section Styles {
    <style>
        .login-grid {
            display: grid;
            grid-template-columns: 1fr;
            min-height: calc(100vh - 4rem);
        }
        
        @@media (min-width: 1024px) {
            .login-grid {
                grid-template-columns: 1.2fr 1fr;
            }
        }

        .animation-side {
            background: linear-gradient(to bottom right, rgba(0,0,0,0.2), rgba(0,0,0,0.4));
            position: relative;
            min-height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .car-frame {
            width: 100%;
            height: auto;
            max-width: 500px;
            z-index: 10;
            position: relative;
            filter: drop-shadow(0 20px 30px rgba(0,0,0,0.5));
        }

        /* Smoke effect container */
        #smoke-container {
            position: absolute;
            bottom: 30%;
            right: 25%;
            width: 40px;
            height: 40px;
            z-index: 5;
            pointer-events: none;
        }

        @@keyframes float-smoke {
            0% { transform: translateY(0) scale(0.5); opacity: 0; }
            20% { opacity: 0.6; }
            100% { transform: translateY(-100px) translateX(30px) scale(2); opacity: 0; }
        }

        .smoke-particle {
            position: absolute;
            background: rgba(200, 200, 200, 0.4);
            border-radius: 50%;
            filter: blur(8px);
            animation: float-smoke linear forwards;
        }
    </style>
}

<div class="login-grid">
    <!-- Left Side: Animation -->
    <div class="animation-side p-8 hidden lg:flex border-r border-border/20">
        <div id="smoke-container"></div>
        <img id="car-animation" src="/images/login_frames/frame_00.png" class="car-frame" alt="Car Assembly" />
    </div>

    <!-- Right Side: Form -->
    <div class="p-8 sm:p-10 flex flex-col justify-center">
        <div class="space-y-6">
            <!-- Logo and Header -->
            <div class="text-center">
                <div class="inline-flex items-center justify-center w-14 h-14 rounded-2xl bg-gradient-to-br from-primary to-primary/80 text-primary-foreground mb-4 shadow-lg">
                    <i data-lucide="car" class="w-7 h-7"></i>
                </div>
                <h1 class="text-2xl font-bold text-foreground mb-1">@AccountLocalizer["SignInTo"] @SharedLocalizer["AppName"]</h1>
                <p class="text-sm text-muted-foreground">@AccountLocalizer["WelcomeBack"]</p>
            </div>

            <!-- Form -->
            <form asp-action="Login" method="post" class="space-y-4">
                <div asp-validation-summary="ModelOnly" class="p-3 rounded-lg bg-destructive/10 text-destructive text-sm"></div>

                <div class="space-y-1.5">
                    <label asp-for="Email" class="text-xs font-medium text-muted-foreground uppercase tracking-wide">@AccountLocalizer["Email"]</label>
                    <input asp-for="Email" class="w-full px-4 py-3 bg-background/50 border border-border rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all" placeholder="name@work-email.com" />
                    <span asp-validation-for="Email" class="text-destructive text-xs"></span>
                </div>

                <div class="space-y-1.5">
                    <label asp-for="Password" class="text-xs font-medium text-muted-foreground uppercase tracking-wide">@AccountLocalizer["Password"]</label>
                    <input asp-for="Password" class="w-full px-4 py-3 bg-background/50 border border-border rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-destructive text-xs"></span>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-2">
                        <input asp-for="RememberMe" class="h-4 w-4 rounded border-input text-primary focus:ring-2 focus:ring-primary/50" />
                        <label asp-for="RememberMe" class="text-sm text-foreground">@AccountLocalizer["RememberMe"]</label>
                    </div>
                    <a asp-action="ForgotPassword" class="text-sm text-primary hover:text-primary/80 transition-colors">@AccountLocalizer["ForgotPassword"]?</a>
                </div>

                <button type="submit" id="login-button" class="w-full bg-primary text-primary-foreground hover:bg-primary/90 font-semibold py-3 px-4 rounded-lg transition-all btn-glow flex items-center justify-center gap-2">
                    <span id="button-text">@AccountLocalizer["LogIn"]</span>
                    <span id="button-spinner" class="hidden animate-spin rounded-full h-4 w-4 border-2 border-white border-t-transparent"></span>
                </button>
            </form>

            <!-- Divider -->
            <div class="relative">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-border"></div>
                </div>
                <div class="relative flex justify-center text-xs uppercase">
                    <span class="bg-transparent px-2 text-muted-foreground">@AccountLocalizer["Or"]</span>
                </div>
            </div>

            <!-- Social Login -->
            <div class="grid grid-cols-2 gap-3">
                <button type="button" class="flex items-center justify-center gap-2 px-4 py-2.5 bg-background border border-border hover:bg-accent rounded-lg text-sm font-medium transition-all group">
                    <svg class="w-5 h-5" viewBox="0 0 24 24"><path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/><path fill="#4285F4" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
                    <span class="hidden sm:inline">@AccountLocalizer["ContinueWithGoogle"]</span>
                </button>
                <button type="button" class="flex items-center justify-center gap-2 px-4 py-2.5 bg-background border border-border hover:bg-accent rounded-lg text-sm font-medium transition-all group">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                    <span class="hidden sm:inline">@AccountLocalizer["ContinueWithGitHub"]</span>
                </button>
            </div>

            <!-- Footer -->
            <div class="text-center">
                <p class="text-sm text-muted-foreground">
                    @AccountLocalizer["DontHaveAccount"] 
                    <a asp-action="Register" class="text-primary hover:text-primary/80 transition-colors font-semibold">@AccountLocalizer["SignUp"]</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const carImg = document.getElementById('car-animation');
            const smokeContainer = document.getElementById('smoke-container');
            const frames = Array.from({ length: 21 }, (_, i) => `/images/login_frames/frame_${i.toString().padStart(2, '0')}.png`);
            
            let currentFrameIdx = 0;
            const frameDelay = 150; // Dynamic delay for smooth 21-frame sequence

            // Preload frames
            frames.forEach(src => {
                const img = new Image();
                img.src = src;
            });

            function startAnimation() {
                if (carImg && currentFrameIdx < frames.length - 1) {
                    currentFrameIdx++;
                    carImg.src = frames[currentFrameIdx];
                    setTimeout(startAnimation, frameDelay);
                } else if (smokeContainer) {
                    // Animation finished, start smoke
                    setInterval(createSmokeParticle, 300);
                }
            }

            function createSmokeParticle() {
                if (!smokeContainer) return;
                const particle = document.createElement('div');
                particle.className = 'smoke-particle';
                
                // Random size and position within exhaust area
                const size = Math.random() * 20 + 20;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                particle.style.left = `${Math.random() * 20}px`;
                particle.style.bottom = `${Math.random() * 20}px`;
                
                // Animation duration
                const duration = Math.random() * 2 + 3;
                particle.style.animationDuration = `${duration}s`;
                
                smokeContainer.appendChild(particle);
                
                // Remove particle after animation
                setTimeout(() => particle.remove(), duration * 1000);
            }

            // Start assembly after a short initial delay
            setTimeout(startAnimation, 1000);

            // Handle login button loading
            const loginForm = document.querySelector('form[asp-action="Login"]');
            if (loginForm) {
                loginForm.addEventListener('submit', () => {
                    const btn = document.getElementById('login-button');
                    const text = document.getElementById('button-text');
                    const spinner = document.getElementById('button-spinner');
                    
                    if (btn && text && spinner) {
                        btn.disabled = true;
                        text.classList.add('opacity-50');
                        spinner.classList.remove('hidden');
                    }
                });
            }
        });
    </script>
}
