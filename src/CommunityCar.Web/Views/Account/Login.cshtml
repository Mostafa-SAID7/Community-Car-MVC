@model CommunityCar.Web.Models.Account.LoginVM
@{
    ViewData["Title"] = "Sign In";
    Layout = "_AuthLayout";
}

<div class="max-w-md mx-auto py-12 px-6">
    <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gradient-to-br from-primary to-primary/80 text-primary-foreground mb-4 shadow-lg">
            <span class="text-2xl font-bold">CC</span>
        </div>
        <h1 class="text-3xl font-bold text-foreground mb-2">Welcome Back</h1>
        <p class="text-muted-foreground">Sign in to your CommunityCar account</p>
    </div>

    <form asp-action="Login" method="post" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="p-3 rounded-md bg-destructive/10 text-destructive text-sm"></div>

        <div class="space-y-2">
            <label asp-for="Email" class="text-sm font-medium text-foreground">Email Address</label>
            <input asp-for="Email" class="w-full px-3 py-2 bg-background border border-input rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-ring placeholder:text-muted-foreground" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-destructive text-xs"></span>
        </div>

        <div class="space-y-2">
            <label asp-for="Password" class="text-sm font-medium text-foreground">Password</label>
            <input asp-for="Password" class="w-full px-3 py-2 bg-background border border-input rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-ring placeholder:text-muted-foreground" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-destructive text-xs"></span>
        </div>

        <div class="flex items-center gap-2">
            <input asp-for="RememberMe" class="h-4 w-4 rounded border-input text-primary focus:ring-2 focus:ring-ring" />
            <label asp-for="RememberMe" class="text-sm font-medium text-foreground">Remember me</label>
        </div>

        <button type="submit" class="w-full bg-primary text-primary-foreground hover:bg-primary/90 font-medium py-2 px-4 rounded-md transition-colors">
            Sign In
        </button>
    </form>

    <div class="mt-6 text-center space-y-2 text-sm">
        <p><a asp-action="ForgotPassword" class="text-primary hover:text-primary/80 transition-colors">Forgot your password?</a></p>
        <p class="text-muted-foreground">Don't have an account? <a asp-action="Register" class="text-primary hover:text-primary/80 transition-colors font-medium">Sign up</a></p>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
