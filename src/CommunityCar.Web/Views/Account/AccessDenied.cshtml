@{
    ViewData["Title"] = "Access Denied";
    Layout = "_AuthLayout";
}

<div class="auth-header-clean">
    <div class="auth-logo-clean">CC</div>
    <h1 class="auth-title-clean text-danger">Access Denied</h1>
    <p class="auth-subtitle-clean">You don't have permission to access this resource</p>
</div>

<div class="text-center">
    <div class="mb-4">
        <i data-lucide="shield-x" class="text-danger" style="width: 64px; height: 64px;"></i>
    </div>
    
    <p class="mb-4">
        You don't have the necessary permissions to view this page. 
        Please contact an administrator if you believe this is an error.
    </p>
    
    <div class="d-grid gap-2">
        <a href="javascript:history.back()" class="btn btn-outline-primary">Go Back</a>
        <a asp-controller="Feed" asp-action="Index" class="btn btn-primary">Go to Home</a>
    </div>
</div>