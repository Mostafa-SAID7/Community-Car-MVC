@{
    ViewData["Title"] = "Email Confirmation";
    Layout = "_AuthLayout";
}

<div class="auth-header-clean">
    <div class="auth-logo-clean">CC</div>
    @if (TempData["SuccessMessage"] != null)
    {
        <h1 class="auth-title-clean text-success">Email Confirmed!</h1>
        <p class="auth-subtitle-clean">Your account is now active</p>
    }
    else
    {
        <h1 class="auth-title-clean text-danger">Confirmation Failed</h1>
        <p class="auth-subtitle-clean">There was an issue with your confirmation</p>
    }
</div>

<div class="text-center">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mb-4">
            @TempData["SuccessMessage"]
        </div>
        <p class="mb-4">
            Your email has been successfully confirmed. You can now sign in to your account.
        </p>
        <a asp-action="Login" class="btn btn-primary">Sign In Now</a>
    }
    else
    {
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger mb-4">
                @TempData["ErrorMessage"]
            </div>
        }
        <p class="mb-4">
            There was an error confirming your email. The link may have expired or is invalid.
        </p>
        <a asp-action="Register" class="btn btn-primary">Register Again</a>
    }
</div>

<div class="auth-links-clean">
    <p><a asp-action="Login">Back to Sign In</a></p>
</div>