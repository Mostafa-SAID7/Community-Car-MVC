@model CommunityCar.Web.Models.Account.ForgotPasswordVM
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["ForgotPassword"];
    Layout = "_AuthLayout";
}

<div class="space-y-6">
    <div class="text-center">
        <div class="inline-flex items-center justify-center w-14 h-14 rounded-2xl bg-gradient-to-br from-primary to-primary/80 text-primary-foreground mb-4 shadow-lg">
            <i data-lucide="key" class="w-7 h-7"></i>
        </div>
        <h1 class="text-2xl font-bold text-foreground mb-1">@SharedLocalizer["ForgotPassword"]</h1>
        <p class="text-sm text-muted-foreground">@SharedLocalizer["ForgotPasswordDescription"]</p>
    </div>

    <form asp-action="ForgotPassword" method="post" class="space-y-4">
        <div asp-validation-summary="All" class="p-3 rounded-lg bg-destructive/10 text-destructive text-sm"></div>
        
        <div class="space-y-1.5">
            <label asp-for="Email" class="text-xs font-medium text-muted-foreground uppercase tracking-wide">@SharedLocalizer["Email"]</label>
            <input asp-for="Email" class="w-full px-4 py-3 bg-background/50 border border-border rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all placeholder:text-muted-foreground" placeholder="name@work-email.com" autocomplete="email" />
            <span asp-validation-for="Email" class="text-destructive text-xs"></span>
        </div>
        
        <button type="submit" class="w-full bg-primary text-primary-foreground hover:bg-primary/90 font-semibold py-3 px-4 rounded-lg transition-all btn-glow">
            @SharedLocalizer["SendResetLink"]
        </button>
    </form>

    <div class="text-center">
        <p class="text-sm text-muted-foreground">
            <a asp-action="Login" class="text-primary hover:text-primary/80 transition-colors font-semibold">‚Üê @SharedLocalizer["BackToSignIn"]</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}