@model CommunityCar.Web.Models.Account.RegisterVM
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> SharedLocalizer
@inject IStringLocalizer<AccountResource> AccountLocalizer
@{
    ViewData["Title"] = AccountLocalizer["SignUp"];
    ViewData["FullWidth"] = true; // Use wide container
    Layout = "_AuthLayout";
}

@section Styles {
    @* Register specific styles consolidated in app.css *@
}

<div class="login-grid">
    <!-- Left Side: Animation -->
    <div class="animation-side p-8 hidden lg:flex border-r border-border/10">
        <div class="car-frame-container">
            <div id="smoke-container" class="hidden"></div>
            <img id="car-animation" src="/images/login_frames/frame_00.png" class="car-frame" alt="Car Assembly" />
        </div>
    </div>

    <!-- Right Side: Form -->
    <div class="p-8 sm:p-12 flex flex-col justify-center bg-background/50 backdrop-blur-md overflow-y-auto">
        <div class="space-y-6 max-w-sm mx-auto w-full py-4">
            <!-- Logo and Header -->
            <div class="text-center">
                <div class="inline-flex items-center justify-center w-14 h-14 rounded-2xl bg-gradient-to-br from-primary to-primary/80 text-primary-foreground mb-4 shadow-lg ring-4 ring-primary/5">
                    <i data-lucide="user-plus" class="w-7 h-7"></i>
                </div>
                <h1 class="text-2xl font-bold text-foreground mb-1 tracking-tight">@AccountLocalizer["CreateAccount"]</h1>
                <p class="text-xs text-muted-foreground">@AccountLocalizer["JoinCommunity"]</p>
            </div>

            <!-- Social Registration -->
            <div class="grid grid-cols-2 gap-3">
                <button type="button" class="flex items-center justify-center gap-2 px-4 py-2.5 bg-background/50 border border-border/50 hover:bg-accent rounded-lg text-[10px] font-semibold transition-all">
                    <svg class="w-4 h-4" viewBox="0 0 24 24"><path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/><path fill="#4285F4" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
                    @AccountLocalizer["ContinueWithGoogle"]
                </button>
                <button type="button" class="flex items-center justify-center gap-2 px-4 py-2.5 bg-background/50 border border-border/50 hover:bg-accent rounded-lg text-[10px] font-semibold transition-all">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                    @AccountLocalizer["ContinueWithGitHub"]
                </button>
            </div>

            <div class="relative">
                <div class="absolute inset-0 flex items-center"><div class="w-full border-t border-border/50"></div></div>
                <div class="relative flex justify-center text-[10px] uppercase tracking-widest font-bold"><span class="bg-transparent px-4 text-muted-foreground/60">@AccountLocalizer["Or"]</span></div>
            </div>

            <!-- Form -->
            <form asp-action="Register" method="post" class="space-y-4">
                <div asp-validation-summary="ModelOnly" class="p-2 rounded-lg bg-destructive/10 text-destructive text-[10px]"></div>

                <div class="grid grid-cols-2 gap-3">
                    <div class="space-y-1">
                        <label asp-for="FirstName" class="text-[10px] font-bold text-muted-foreground uppercase tracking-widest pl-1">@AccountLocalizer["FirstName"]</label>
                        <input asp-for="FirstName" class="w-full px-3 py-2 bg-background/40 border border-border/50 rounded-xl text-xs focus:outline-none focus:ring-2 focus:ring-primary/40 transition-all placeholder:text-muted-foreground/40" placeholder="John" />
                    </div>
                    <div class="space-y-1">
                        <label asp-for="LastName" class="text-[10px] font-bold text-muted-foreground uppercase tracking-widest pl-1">@AccountLocalizer["LastName"]</label>
                        <input asp-for="LastName" class="w-full px-3 py-2 bg-background/40 border border-border/50 rounded-xl text-xs focus:outline-none focus:ring-2 focus:ring-primary/40 transition-all placeholder:text-muted-foreground/40" placeholder="Doe" />
                    </div>
                </div>

                <div class="space-y-1">
                    <label asp-for="Email" class="text-[10px] font-bold text-muted-foreground uppercase tracking-widest pl-1">@AccountLocalizer["Email"]</label>
                    <input asp-for="Email" class="w-full px-3 py-2 bg-background/40 border border-border/50 rounded-xl text-xs focus:outline-none focus:ring-2 focus:ring-primary/40 transition-all placeholder:text-muted-foreground/40" placeholder="john@example.com" />
                </div>

                <div class="grid grid-cols-2 gap-3">
                    <div class="space-y-1">
                        <label asp-for="Password" class="text-[10px] font-bold text-muted-foreground uppercase tracking-widest pl-1">@AccountLocalizer["Password"]</label>
                        <input asp-for="Password" type="password" class="w-full px-3 py-2.5 bg-background/40 border border-border/50 rounded-xl text-xs focus:outline-none focus:ring-2 focus:ring-primary/40 transition-all placeholder:text-muted-foreground/40" 
                               placeholder="••••••••" 
                               data-password-strength="true"
                               data-strength-label="@AccountLocalizer["PasswordStrength"]"
                               data-vweak="@AccountLocalizer["VeryWeak"]"
                               data-weak="@AccountLocalizer["Weak"]"
                               data-fair="@AccountLocalizer["Fair"]"
                               data-good="@AccountLocalizer["Good"]"
                               data-strong="@AccountLocalizer["Strong"]"
                               data-req-length="@AccountLocalizer["LengthRequirement"]"
                               data-req-lower="@AccountLocalizer["LowercaseRequirement"]"
                               data-req-upper="@AccountLocalizer["UppercaseRequirement"]"
                               data-req-number="@AccountLocalizer["NumberRequirement"]"
                               data-req-special="@AccountLocalizer["SpecialRequirement"]" />
                    </div>
                    <div class="space-y-1">
                        <label asp-for="ConfirmPassword" class="text-[10px] font-bold text-muted-foreground uppercase tracking-widest pl-1">@AccountLocalizer["Confirm"]</label>
                        <input asp-for="ConfirmPassword" type="password" class="w-full px-3 py-2.5 bg-background/40 border border-border/50 rounded-xl text-xs focus:outline-none focus:ring-2 focus:ring-primary/40 transition-all placeholder:text-muted-foreground/40" placeholder="••••••••" />
                    </div>
                </div>

                <button type="submit" id="register-button" class="w-full bg-primary text-primary-foreground hover:bg-primary/95 font-bold py-3 px-4 rounded-xl transition-all shadow-lg hover:shadow-primary/10 btn-glow mt-2 text-sm flex items-center justify-center gap-2">
                    <span id="button-text">@AccountLocalizer["CreateAccount"]</span>
                    <span id="button-spinner" class="hidden animate-spin rounded-full h-4 w-4 border-2 border-white border-t-transparent"></span>
                </button>
            </form>

            <div class="text-center pt-2">
                <p class="text-xs text-muted-foreground">
                    @AccountLocalizer["AlreadyHaveAccount"] 
                    <a asp-action="Login" class="text-primary hover:text-primary/80 transition-colors font-bold underline underline-offset-4">@AccountLocalizer["SignIn"]</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const carImg = document.getElementById('car-animation');
            const smokeContainer = document.getElementById('smoke-container');
            const frames = Array.from({ length: 21 }, (_, i) => `/images/login_frames/frame_${i.toString().padStart(2, '0')}.png`);
            
            let currentFrameIdx = 0;
            const frameDelay = 120; // Faster delay for the 21-frame progression

            frames.forEach(src => {
                const img = new Image();
                img.src = src;
            });

            function startAnimation() {
                if (currentFrameIdx < frames.length - 1) {
                    currentFrameIdx++;
                    carImg.src = frames[currentFrameIdx];
                    setTimeout(startAnimation, frameDelay);
                } else {
                    smokeContainer.style.display = 'block';
                    setInterval(createSmokeParticle, 200);
                }
            }

            function createSmokeParticle() {
                const particle = document.createElement('div');
                particle.className = 'smoke-particle';
                const size = Math.random() * 25 + 15;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                particle.style.left = `${Math.random() * 25}px`;
                particle.style.bottom = `${Math.random() * 25}px`;
                const duration = Math.random() * 1.5 + 2;
                particle.style.animationDuration = `${duration}s`;
                smokeContainer.appendChild(particle);
                setTimeout(() => particle.remove(), duration * 1000);
            }

            setTimeout(startAnimation, 1000);

            // Handle register button loading
            const registerForm = document.querySelector('form[asp-action="Register"]');
            if (registerForm) {
                registerForm.addEventListener('submit', () => {
                    const btn = document.getElementById('register-button');
                    const text = document.getElementById('button-text');
                    const spinner = document.getElementById('button-spinner');
                    
                    if (btn && text && spinner) {
                        btn.disabled = true;
                        text.classList.add('opacity-50');
                        spinner.classList.remove('hidden');
                    }
                });
            }
        });
    </script>
}
