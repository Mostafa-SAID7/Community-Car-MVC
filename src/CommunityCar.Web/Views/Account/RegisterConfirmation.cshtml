@{
    ViewData["Title"] = "Registration Confirmation";
    Layout = "_AuthLayout";
}

<div class="auth-header-clean">
    <div class="auth-logo-clean">CC</div>
    <h1 class="auth-title-clean">Check Your Email</h1>
    <p class="auth-subtitle-clean">We've sent you a confirmation link</p>
</div>

<div class="text-center">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mb-4">
            @TempData["SuccessMessage"]
        </div>
    }
    
    <p class="mb-4">
        We've sent a confirmation email to your email address. 
        Please check your inbox and click the confirmation link to activate your account.
    </p>
    
    <div class="mb-4">
        <p class="text-muted mb-2">Didn't receive the email?</p>
        <form asp-action="ResendEmailConfirmation" method="post" class="d-inline">
            <input type="hidden" name="email" value="@ViewBag.Email" />
            <button type="submit" class="btn btn-outline-primary">
                Resend Confirmation Email
            </button>
        </form>
    </div>
</div>

<div class="auth-links-clean">
    <p><a asp-action="Login">Back to Sign In</a></p>
</div>