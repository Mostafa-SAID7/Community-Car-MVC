@{
    ViewData["Title"] = "Password Reset Sent";
    Layout = "_AuthLayout";
}

<div class="auth-header-clean">
    <div class="auth-logo-clean">CC</div>
    <h1 class="auth-title-clean">Check Your Email</h1>
    <p class="auth-subtitle-clean">Password reset instructions sent</p>
</div>

<div class="text-center">
    <div class="mb-4">
        <i data-lucide="mail" class="text-primary" style="width: 64px; height: 64px;"></i>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-info mb-4">
            @TempData["SuccessMessage"]
        </div>
    }
    
    <p class="mb-4">
        If an account with that email address exists, we've sent you a password reset link.
        Please check your email and follow the instructions to reset your password.
    </p>
    
    <div class="d-grid">
        <a asp-action="Login" class="btn btn-primary">Back to Sign In</a>
    </div>
</div>