@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    // Extract data from ViewBag - this makes the partial completely flexible
    var userId = ViewBag.UserId?.ToString();
    var fullName = ViewBag.FullName as string ?? "User";
    var userName = ViewBag.UserName as string ?? "---";
    var profilePictureUrl = ViewBag.ProfilePictureUrl as string ?? "/images/default-avatar.png";
    var coverImageUrl = ViewBag.CoverImageUrl as string ?? "/images/default-cover.svg";
    var bio = ViewBag.Bio as string;
    var bioAr = ViewBag.BioAr as string;
    var city = ViewBag.City as string ?? "---";
    var country = ViewBag.Country as string ?? "---";
    var createdAt = ViewBag.CreatedAt is DateTime dt ? dt : DateTime.Now;
    
    // Stats from ViewBag
    var rank = ViewBag.Rank as int? ?? 0;
    var level = ViewBag.Level as int? ?? 0;
    var points = ViewBag.TotalPoints as int? ?? 0;
    var posts = ViewBag.PostsCount as int? ?? 0;
    var comments = ViewBag.CommentsCount as int? ?? 0;
    var likes = ViewBag.LikesReceived as int? ?? 0;
    var badges = ViewBag.BadgesCount as int? ?? 0;

    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
    var displayBio = isArabic && !string.IsNullOrEmpty(bioAr) ? bioAr : bio;
    
    var isOwnProfile = User.Identity?.IsAuthenticated == true && 
                       User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == userId;
}

<!-- Inner Profile Sidebar with Cover Background -->
<div class="relative group inner-profile-container">
    <!-- Cover Image Background -->
    <div class="absolute inset-0 rounded-[2rem] overflow-hidden">
        <img src="@(coverImageUrl)?v=@DateTime.Now.Ticks" alt="Cover" class="w-full h-full object-cover opacity-20 group-hover:opacity-30 transition-opacity duration-500" />
        <div class="absolute inset-0 bg-gradient-to-br from-background/80 via-background/60 to-background/40 backdrop-blur-sm"></div>
    </div>

    <!-- Structural Glow -->
    <div class="absolute -inset-1 bg-gradient-to-br from-primary/10 via-transparent to-primary/5 rounded-[2.5rem] blur-3xl opacity-0 group-hover:opacity-100 transition duration-1000"></div>

    <div class="relative bg-card/20 backdrop-blur-2xl border border-border/30 rounded-[2rem] shadow-2xl p-6 space-y-6 overflow-hidden">
        
        <!-- Profile Avatar Header Section -->
        <div class="flex flex-col items-center text-center space-y-4">
            <!-- Enhanced Avatar with Profile Photo Integration -->
            @{
                ViewData["Size"] = "medium";
                ViewData["Context"] = "sidebar";
                ViewData["ShowLevel"] = true;
                ViewData["ShowStatus"] = true;
            }
            <partial name="~/Views/Account/Profile/_ProfileAvatar.cshtml" />
            
            <!-- Compact Name and Username with Profile Integration -->
            <div class="space-y-1 w-full">
                <h3 class="text-lg font-black leading-tight text-center tracking-tight break-words text-foreground/90 drop-shadow-sm">@fullName</h3>
                <p class="text-[8px] font-black uppercase tracking-[0.2em] text-muted-foreground/60 text-center break-all">@@@userName</p>
                
                <!-- Profile Completion Bar -->
                <div class="w-full bg-muted/30 rounded-full h-1.5 mt-2">
                    <div class="bg-gradient-to-r from-primary to-primary/80 h-1.5 rounded-full transition-all duration-500" style="width: 85%"></div>
                </div>
                <p class="text-[7px] font-medium text-muted-foreground/50 uppercase tracking-widest">Profile 85% Complete</p>
            </div>
            
            <!-- Enhanced Rank Badge with Profile Integration -->
            <div class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-primary/10 to-primary/5 rounded-xl border border-primary/20 shadow-sm backdrop-blur-sm">
                <div class="w-3 h-3 bg-primary/20 rounded-full mr-2 flex items-center justify-center">
                    <div class="w-1.5 h-1.5 bg-primary rounded-full"></div>
                </div>
                <span class="text-[7px] font-black uppercase tracking-widest text-primary/70 mr-2">RANK</span>
                <span class="text-sm font-black text-foreground">#@rank.ToString("N0")</span>
            </div>
        </div>

        <!-- Compact Action Buttons Section -->
        <div class="space-y-3 pt-2 border-t border-border/20">
            @if (isOwnProfile)
            {
                <a asp-controller="ProfileSettings" asp-action="Index" asp-route-culture="@currentCulture" class="w-full inline-flex items-center justify-center gap-2 px-4 py-2 bg-primary/80 text-primary-foreground font-black text-[8px] uppercase tracking-widest rounded-lg shadow-md hover:bg-primary hover:shadow-lg hover:-translate-y-0.5 transition-all">
                    <i data-lucide="edit-3" class="w-3 h-3"></i>
                    <span>@Localizer["Edit"]</span>
                </a>
            }

            <!-- Compact Bio Section -->
            <div class="text-center px-3 py-2 bg-muted/10 rounded-lg border border-border/10">
                <p class="text-[10px] font-medium text-muted-foreground/80 italic leading-relaxed break-words line-clamp-2">
                    "@(string.IsNullOrEmpty(displayBio) ? Localizer["NoBio"].Value : displayBio)"
                </p>
            </div>
        </div>

        <!-- Compact Location Section -->
        <div class="space-y-2 pt-3 border-t border-border/20">
            <div class="flex items-center justify-between text-[8px] font-black uppercase tracking-widest">
                <span class="text-muted-foreground/50 flex items-center gap-1">
                    <i data-lucide="map-pin" class="w-2.5 h-2.5 text-primary"></i> 
                    @Localizer["Location"]
                </span>
                <span class="text-foreground/80 tracking-tight">@city</span>
            </div>
            <div class="flex items-center justify-between text-[8px] font-black uppercase tracking-widest">
                <span class="text-muted-foreground/50 flex items-center gap-1">
                    <i data-lucide="calendar" class="w-2.5 h-2.5 text-primary"></i> 
                    @Localizer["Joined"]
                </span>
                <span class="text-foreground/80 tracking-tight">@createdAt.ToString("MMM yyyy")</span>
            </div>
        </div>

        <!-- Compact Statistics Grid -->
        <div class="pt-4 border-t border-border/20">
            <div class="grid grid-cols-2 gap-2">
                <!-- Points -->
                <div class="p-2 rounded-lg bg-muted/15 border border-border/30 flex items-center gap-2 transition-all hover:bg-muted/25 group/stat">
                    <div class="w-6 h-6 rounded-lg bg-primary/15 flex items-center justify-center text-primary group-hover/stat:scale-110 transition-transform">
                        <i data-lucide="award" class="w-3 h-3"></i>
                    </div>
                    <div class="space-y-0">
                        <span class="block text-[6px] font-black uppercase tracking-widest text-muted-foreground/50">@Localizer["Points"]</span>
                        <span class="block text-sm font-black text-foreground/90 tracking-tighter leading-none">@points.ToString("N0")</span>
                    </div>
                </div>
                
                <!-- Level -->
                <div class="p-2 rounded-lg bg-muted/15 border border-border/30 flex items-center gap-2 transition-all hover:bg-muted/25 group/stat">
                    <div class="w-6 h-6 rounded-lg bg-primary/15 flex items-center justify-center text-primary group-hover/stat:scale-110 transition-transform">
                        <i data-lucide="trending-up" class="w-3 h-3"></i>
                    </div>
                    <div class="space-y-0">
                        <span class="block text-[6px] font-black uppercase tracking-widest text-muted-foreground/50">@Localizer["Level"]</span>
                        <span class="block text-sm font-black text-foreground/90 tracking-tighter leading-none">@level</span>
                    </div>
                </div>
                
                <!-- Posts -->
                <div class="p-2 rounded-lg bg-muted/15 border border-border/30 flex items-center gap-2 transition-all hover:bg-muted/25 group/stat">
                    <div class="w-6 h-6 rounded-lg bg-primary/15 flex items-center justify-center text-primary group-hover/stat:scale-110 transition-transform">
                        <i data-lucide="file-text" class="w-3 h-3"></i>
                    </div>
                    <div class="space-y-0">
                        <span class="block text-[6px] font-black uppercase tracking-widest text-muted-foreground/50">@Localizer["Posts"]</span>
                        <span class="block text-sm font-black text-foreground/90 tracking-tighter leading-none">@posts</span>
                    </div>
                </div>
                
                <!-- Badges -->
                <div class="p-2 rounded-lg bg-muted/15 border border-border/30 flex items-center gap-2 transition-all hover:bg-muted/25 group/stat">
                    <div class="w-6 h-6 rounded-lg bg-primary/15 flex items-center justify-center text-primary group-hover/stat:scale-110 transition-transform">
                        <i data-lucide="medal" class="w-3 h-3"></i>
                    </div>
                    <div class="space-y-0">
                        <span class="block text-[6px] font-black uppercase tracking-widest text-muted-foreground/50">@Localizer["Badges"]</span>
                        <span class="block text-sm font-black text-foreground/90 tracking-tighter leading-none">@badges</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>