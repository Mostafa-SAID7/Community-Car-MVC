@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    // Extract data from ViewBag - this makes the partial completely flexible
    var userId = ViewBag.UserId?.ToString();
    var fullName = ViewBag.FullName as string ?? "User";
    var userName = ViewBag.UserName as string ?? "---";
    var profilePictureUrl = ViewBag.ProfilePictureUrl as string ?? "/images/default-avatar.png";
    var coverImageUrl = ViewBag.CoverImageUrl as string ?? "/images/default-cover.svg";
    var bio = ViewBag.Bio as string;
    var bioAr = ViewBag.BioAr as string;
    var city = ViewBag.City as string ?? "---";
    var country = ViewBag.Country as string ?? "---";
    var createdAt = ViewBag.CreatedAt is DateTime dt ? dt : DateTime.Now;
    
    // Stats from ViewBag
    var rank = ViewBag.Rank as int? ?? 0;
    var level = ViewBag.Level as int? ?? 0;
    var points = ViewBag.TotalPoints as int? ?? 0;
    var posts = ViewBag.PostsCount as int? ?? 0;
    var comments = ViewBag.CommentsCount as int? ?? 0;
    var likes = ViewBag.LikesReceived as int? ?? 0;
    var badges = ViewBag.BadgesCount as int? ?? 0;

    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
    var displayBio = isArabic && !string.IsNullOrEmpty(bioAr) ? bioAr : bio;
    
    var isOwnProfile = User.Identity?.IsAuthenticated == true && 
                       User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == userId;
}

<!-- Inner Profile Sidebar with Cover Background -->
<div class="position-relative group inner-profile-container animate-in fade-in">
    <!-- Cover Image Background -->
    <div class="position-absolute inset-0 rounded-5 overflow-hidden shadow-lg">
        <img src="@(coverImageUrl)?v=@DateTime.Now.Ticks" alt="Cover" class="w-100 h-100 object-fit-cover opacity-20 transition-opacity duration-500 hover-opacity-30" />
        <div class="position-absolute inset-0 bg-white bg-opacity-80 backdrop-blur-sm" style="background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.85) 100%);"></div>
    </div>

    <!-- Structural Glow -->
    <div class="position-absolute translate-middle-x start-50 top-50 bg-danger bg-opacity-5 rounded-circle blur-3xl opacity-0 transition-all duration-1000 group-hover-opacity-100" style="width: 200px; height: 200px; z-index: -1;"></div>

    <div class="card card-premium border-0 bg-transparent rounded-5 p-4 p-md-5 vstack gap-4 position-relative z-1 shadow-2xl overflow-hidden">
        
        <!-- Profile Avatar Header Section -->
        <div class="d-flex flex-column align-items-center text-center gap-4 pt-2">
            <!-- Enhanced Avatar -->
            @{
                ViewData["Size"] = "medium";
                ViewData["Context"] = "sidebar";
                ViewData["ShowLevel"] = true;
                ViewData["ShowStatus"] = true;
            }
            <partial name="~/Views/Account/Profile/_ProfileAvatar.cshtml" />
            
            <!-- Compact Name and Username -->
            <div class="w-100">
                <h3 class="h2 fw-black tracking-tighter text-dark mb-1">@fullName</h3>
                <p class="xx-small fw-black text-uppercase tracking-widest text-muted opacity-50 mb-3">@@@userName</p>
                
                <!-- Profile Completion Bar -->
                <div class="bg-light rounded-pill overflow-hidden mb-1" style="height: 6px;">
                    <div class="bg-primary-red h-100 rounded-pill transition-all duration-1000" style="width: 85%"></div>
                </div>
                <p class="xx-small fw-bold text-muted text-uppercase tracking-widest opacity-40">Profile 85% Complete</p>
            </div>
            
            <!-- Enhanced Rank Badge -->
            <div class="d-inline-flex align-items-center px-4 py-2 bg-white bg-opacity-50 border border-light rounded-4 shadow-sm backdrop-blur">
                <div class="rounded-circle bg-primary-red bg-opacity-20 d-flex align-items-center justify-content-center me-3" style="width: 12px; height: 12px;">
                    <div class="rounded-circle bg-primary-red" style="width: 6px; height: 6px;"></div>
                </div>
                <span class="xx-small fw-black text-uppercase tracking-widest text-muted me-2">RANK</span>
                <span class="h5 fw-black text-dark mb-0">#@rank.ToString("N0")</span>
            </div>
        </div>

        <!-- Action Buttons Section -->
        <div class="vstack gap-2 pt-3 border-top border-light border-opacity-50">
            @if (isOwnProfile)
            {
                <a asp-controller="ProfileSettings" asp-action="Index" asp-route-culture="@currentCulture" class="btn btn-primary-red w-100 py-2 rounded-3 shadow-sm xx-small fw-black text-uppercase tracking-widest transition-all hover-translate-y">
                    <i class="fas fa-edit me-2"></i>@Localizer["Edit"]
                </a>
            }

            <!-- Compact Bio Section -->
            <div class="bg-light bg-opacity-50 p-3 rounded-4 border border-light text-center">
                <p class="xx-small fw-bold text-muted text-uppercase tracking-widest opacity-75 mb-0 italic">
                    "@(string.IsNullOrEmpty(displayBio) ? Localizer["NoBio"].Value : displayBio)"
                </p>
            </div>
        </div>

        <!-- Metadata Section -->
        <div class="vstack gap-2 pt-3 border-top border-light border-opacity-50">
            <div class="d-flex justify-content-between align-items-center xx-small fw-black text-uppercase tracking-widest">
                <span class="text-muted opacity-50 d-flex align-items-center gap-2">
                    <i class="fas fa-map-marker-alt text-primary-red"></i> @Localizer["Location"]
                </span>
                <span class="text-dark">@city</span>
            </div>
            <div class="d-flex justify-content-between align-items-center xx-small fw-black text-uppercase tracking-widest">
                <span class="text-muted opacity-50 d-flex align-items-center gap-2">
                    <i class="fas fa-calendar-alt text-primary-red"></i> @Localizer["Joined"]
                </span>
                <span class="text-dark">@createdAt.ToString("MMM yyyy")</span>
            </div>
        </div>

        <!-- Statistics Grid -->
        <div class="pt-4 border-top border-light border-opacity-50">
            <div class="row g-2">
                <!-- Points -->
                <div class="col-6">
                    <div class="p-3 rounded-4 bg-white bg-opacity-40 border border-light h-100 d-flex align-items-center gap-3 transition-all hover-white shadow-hover">
                        <div class="rounded-3 bg-primary-red bg-opacity-10 d-flex align-items-center justify-content-center text-primary-red" style="width: 32px; height: 32px;">
                            <i class="fas fa-award small"></i>
                        </div>
                        <div>
                            <span class="d-block text-muted xx-small fw-black text-uppercase tracking-tighter mb-1 opacity-50">@Localizer["Points"]</span>
                            <span class="h6 fw-black text-dark mb-0">@points.ToString("N0")</span>
                        </div>
                    </div>
                </div>
                
                <!-- Level -->
                <div class="col-6">
                    <div class="p-3 rounded-4 bg-white bg-opacity-40 border border-light h-100 d-flex align-items-center gap-3 transition-all hover-white shadow-hover">
                        <div class="rounded-3 bg-primary-red bg-opacity-10 d-flex align-items-center justify-content-center text-primary-red" style="width: 32px; height: 32px;">
                            <i class="fas fa-chart-line small"></i>
                        </div>
                        <div>
                            <span class="d-block text-muted xx-small fw-black text-uppercase tracking-tighter mb-1 opacity-50">@Localizer["Level"]</span>
                            <span class="h6 fw-black text-dark mb-0">@level</span>
                        </div>
                    </div>
                </div>
                
                <!-- Posts -->
                <div class="col-6">
                    <div class="p-3 rounded-4 bg-white bg-opacity-40 border border-light h-100 d-flex align-items-center gap-3 transition-all hover-white shadow-hover">
                        <div class="rounded-3 bg-primary-red bg-opacity-10 d-flex align-items-center justify-content-center text-primary-red" style="width: 32px; height: 32px;">
                            <i class="fas fa-pencil-alt small"></i>
                        </div>
                        <div>
                            <span class="d-block text-muted xx-small fw-black text-uppercase tracking-tighter mb-1 opacity-50">@Localizer["Posts"]</span>
                            <span class="h6 fw-black text-dark mb-0">@posts</span>
                        </div>
                    </div>
                </div>
                
                <!-- Badges -->
                <div class="col-6">
                    <div class="p-3 rounded-4 bg-white bg-opacity-40 border border-light h-100 d-flex align-items-center gap-3 transition-all hover-white shadow-hover">
                        <div class="rounded-3 bg-primary-red bg-opacity-10 d-flex align-items-center justify-content-center text-primary-red" style="width: 32px; height: 32px;">
                            <i class="fas fa-medal small"></i>
                        </div>
                        <div>
                            <span class="d-block text-muted xx-small fw-black text-uppercase tracking-tighter mb-1 opacity-50">@Localizer["Badges"]</span>
                            <span class="h6 fw-black text-dark mb-0">@badges</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .xx-small { font-size: 0.6rem; }
    .shadow-2xl { box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25); }
    .hover-opacity-30:hover { opacity: 0.3 !important; }
    .group-hover-opacity-100:hover { opacity: 1 !important; }
    .hover-translate-y:hover { transform: translateY(-3px); }
    .hover-white:hover { background-color: #fff !important; border-color: var(--primary-red) !important; }
    .shadow-hover:hover { box-shadow: 0 10px 20px -5px rgba(0,0,0,0.1); }
</style>