@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
    ViewData["HideLeftSidebar"] = true;
    ViewData["HideRightSidebar"] = true;
    ViewData["HideMainContainer"] = true;
    ViewData["HideMainContentId"] = true;
}

<div class="profile-container py-4 animate-in fade-in slide-in-from-bottom-4 duration-500">
    <div>
        @if (false)
        {
            <!-- Single Column Layout - No Sidebar -->
            <div class="space-y-6">
                <!-- Tab Navigation & Content -->
                <div class="bg-card border border-border rounded-2xl shadow-lg overflow-hidden">
                    <partial name="_ProfileNavigation" />

                    <div class="p-6 sm:p-8">
                        <!-- Interests Header -->
                        <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-8">
                            <div>
                                <h1 class="text-2xl font-black text-foreground tracking-tight flex items-center gap-3">
                                    <i data-lucide="heart" class="w-6 h-6 text-primary"></i>
                                    @Localizer["MyInterests"]
                                </h1>
                                <p class="text-sm text-muted-foreground mt-1">@Localizer["InterestsSubtitle"]</p>
                            </div>
                        </div>

                        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                            <div class="lg:col-span-2 space-y-6">
                                <div class="bg-card/20 border border-border rounded-xl p-6">
                                    <h3 class="text-sm font-bold text-foreground mb-4 flex items-center gap-2">
                                        <i data-lucide="star" class="w-4 h-4 text-primary"></i>
                                        @Localizer["TopInterests"]
                                    </h3>
                                    <div id="interests-list-container" class="min-h-[200px] flex items-center justify-center">
                                        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-primary"></div>
                                    </div>
                                </div>

                                <div class="bg-card/20 border border-border rounded-xl p-6">
                                    <h3 class="text-sm font-bold text-foreground mb-4 flex items-center gap-2">
                                        <i data-lucide="trending-up" class="w-4 h-4 text-primary"></i>
                                        @Localizer["InterestAnalytics"]
                                    </h3>
                                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                                        <div class="text-center p-4 bg-muted/30 rounded-xl">
                                            <div class="text-xl font-black text-foreground" id="totalInterests">-</div>
                                            <div class="text-[10px] font-bold text-muted-foreground uppercase">@Localizer["Total"]</div>
                                        </div>
                                        <div class="text-center p-4 bg-muted/30 rounded-xl">
                                            <div class="text-xl font-black text-foreground" id="engagementScore">-</div>
                                            <div class="text-[10px] font-bold text-muted-foreground uppercase">@Localizer["Score"]</div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="space-y-6">
                                <div class="bg-card/20 border border-border rounded-xl p-6">
                                    <h3 class="text-sm font-bold text-foreground mb-4 flex items-center gap-2">
                                        <i data-lucide="lightbulb" class="w-4 h-4 text-primary"></i>
                                        @Localizer["Suggested"]
                                    </h3>
                                    <div id="suggestedInterests" class="space-y-2">
                                        <div class="flex items-center justify-center py-8">
                                            <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-primary"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Grid Layout with Sidebar -->
            <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
                <!-- Left Sidebar -->
                <div class="lg:col-span-1">
                    <partial name="~/Views/Account/Profile/_ProfileSidebar.cshtml" />
                </div>
                
                <!-- Main Content -->
                <div class="lg:col-span-3 space-y-6">
                    <!-- Tab Navigation & Content -->
                    <div class="bg-card border border-border rounded-2xl shadow-lg overflow-hidden">
                        <partial name="~/Views/Account/Profile/_ProfileNavigation.cshtml" />

                        <div class="p-6 sm:p-8">
                            <!-- Interests Header -->
                            <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-8">
                                <div>
                                    <h1 class="text-2xl font-black text-foreground tracking-tight flex items-center gap-3">
                                        <i data-lucide="heart" class="w-6 h-6 text-primary"></i>
                                        @Localizer["MyInterests"]
                                    </h1>
                                    <p class="text-sm text-muted-foreground mt-1">@Localizer["InterestsSubtitle"]</p>
                                </div>
                            </div>

                            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                                <div class="lg:col-span-2 space-y-6">
                                    <div class="bg-card/20 border border-border rounded-xl p-6">
                                        <h3 class="text-sm font-bold text-foreground mb-4 flex items-center gap-2">
                                            <i data-lucide="star" class="w-4 h-4 text-primary"></i>
                                            @Localizer["TopInterests"]
                                        </h3>
                                        <div id="interests-list-container" class="min-h-[200px] flex items-center justify-center">
                                            <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-primary"></div>
                                        </div>
                                    </div>

                                    <div class="bg-card/20 border border-border rounded-xl p-6">
                                        <h3 class="text-sm font-bold text-foreground mb-4 flex items-center gap-2">
                                            <i data-lucide="trending-up" class="w-4 h-4 text-primary"></i>
                                            @Localizer["InterestAnalytics"]
                                        </h3>
                                        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                                            <div class="text-center p-4 bg-muted/30 rounded-xl">
                                                <div class="text-xl font-black text-foreground" id="totalInterests">-</div>
                                                <div class="text-[10px] font-bold text-muted-foreground uppercase">@Localizer["Total"]</div>
                                            </div>
                                            <div class="text-center p-4 bg-muted/30 rounded-xl">
                                                <div class="text-xl font-black text-foreground" id="engagementScore">-</div>
                                                <div class="text-[10px] font-bold text-muted-foreground uppercase">@Localizer["Score"]</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="space-y-6">
                                    <div class="bg-card/20 border border-border rounded-xl p-6">
                                        <h3 class="text-sm font-bold text-foreground mb-4 flex items-center gap-2">
                                            <i data-lucide="lightbulb" class="w-4 h-4 text-primary"></i>
                                            @Localizer["Suggested"]
                                        </h3>
                                        <div id="suggestedInterests" class="space-y-2">
                                            <div class="flex items-center justify-center py-8">
                                                <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-primary"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    </script>
    <script src="~/js/profile-interests.js" asp-append-version="true"></script>
}