@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
    var currentUserId = ViewBag.CurrentUserId as Guid?;
}

@await Html.PartialAsync("_ProfileHeader")

@await Html.PartialAsync("_ProfileNavigation")

<div class="space-y-8 animate-in fade-in duration-700">
    <!-- Interests Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-2xl font-black text-foreground tracking-tight flex items-center gap-3">
                <i data-lucide="heart" class="w-6 h-6 text-primary"></i>
                @Localizer["MyInterests"]
            </h1>
            <p class="text-sm text-muted-foreground mt-1">@Localizer["InterestsSubtitle"]</p>
        </div>
    </div>

    <!-- Interest Categories -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Current Interests -->
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
                <div class="p-6 border-b border-border/50 bg-muted/20">
                    <h3 class="text-lg font-black text-foreground flex items-center gap-3">
                        <i data-lucide="star" class="w-5 h-5 text-primary"></i>
                        @Localizer["TopInterests"]
                    </h3>
                    <p class="text-sm text-muted-foreground mt-1">@Localizer["TopInterestsSubtitle"]</p>
                </div>
                
                <div class="p-6">
                    <div id="userInterestsList" class="space-y-4">
                        <div id="interests-skeleton" class="hidden space-y-4">
                            <skeleton type="Line" />
                            <skeleton type="Line" />
                            <skeleton type="Line" />
                        </div>
                        <div id="interests-list-container">
                            <!-- Will be populated by JavaScript -->
                            <div class="flex items-center justify-center py-12">
                                <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-primary"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Interest Analytics -->
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
                <div class="p-6 border-b border-border/50 bg-muted/20">
                    <h3 class="text-lg font-black text-foreground flex items-center gap-3">
                        <i data-lucide="trending-up" class="w-5 h-5 text-primary"></i>
                        @Localizer["InterestAnalytics"]
                    </h3>
                </div>
                
                <div class="p-6">
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                        <div class="text-center p-4 bg-muted/30 rounded-xl">
                            <div class="text-2xl font-black text-foreground mb-1" id="totalInterests">-</div>
                            <div class="text-xs font-bold text-muted-foreground uppercase tracking-widest">@Localizer["TotalInterests"]</div>
                        </div>
                        <div class="text-center p-4 bg-muted/30 rounded-xl">
                            <div class="text-2xl font-black text-foreground mb-1" id="topCategory">-</div>
                            <div class="text-xs font-bold text-muted-foreground uppercase tracking-widest">@Localizer["TopCategory"]</div>
                        </div>
                        <div class="text-center p-4 bg-muted/30 rounded-xl">
                            <div class="text-2xl font-black text-foreground mb-1" id="engagementScore">-</div>
                            <div class="text-xs font-bold text-muted-foreground uppercase tracking-widest">@Localizer["Engagement"]</div>
                        </div>
                        <div class="text-center p-4 bg-muted/30 rounded-xl">
                            <div class="text-2xl font-black text-foreground mb-1" id="lastUpdated">-</div>
                            <div class="text-xs font-bold text-muted-foreground uppercase tracking-widest">@Localizer["LastUpdated"]</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            <!-- Suggested Interests -->
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
                <div class="p-6 border-b border-border/50 bg-muted/20">
                    <h3 class="text-lg font-black text-foreground flex items-center gap-3">
                        <i data-lucide="lightbulb" class="w-5 h-5 text-primary"></i>
                        @Localizer["Suggested"]
                    </h3>
                </div>
                
                <div class="p-6">
                    <div id="suggestedInterests" class="space-y-3">
                        <!-- Will be populated by JavaScript -->
                        <div class="flex items-center justify-center py-8">
                            <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-primary"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Interest Categories -->
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
                <div class="p-6 border-b border-border/50 bg-muted/20">
                    <h3 class="text-lg font-black text-foreground flex items-center gap-3">
                        <i data-lucide="grid-3x3" class="w-5 h-5 text-primary"></i>
                        @Localizer["Categories"]
                    </h3>
                </div>
                
                <div class="p-6">
                    <div class="space-y-3">
                        <div class="flex items-center justify-between p-3 rounded-lg hover:bg-muted/30 transition-colors cursor-pointer" data-action="filter-category" data-category="automotive">
                            <div class="flex items-center gap-3">
                                <i data-lucide="car" class="w-4 h-4 text-primary"></i>
                                <span class="text-sm font-bold text-foreground">@Localizer["Automotive"]</span>
                            </div>
                            <span class="text-xs text-muted-foreground" id="automotiveCount">-</span>
                        </div>
                        <div class="flex items-center justify-between p-3 rounded-lg hover:bg-muted/30 transition-colors cursor-pointer" data-action="filter-category" data-category="performance">
                            <div class="flex items-center gap-3">
                                <i data-lucide="zap" class="w-4 h-4 text-orange-500"></i>
                                <span class="text-sm font-bold text-foreground">@Localizer["Performance"]</span>
                            </div>
                            <span class="text-xs text-muted-foreground" id="performanceCount">-</span>
                        </div>
                        <div class="flex items-center justify-between p-3 rounded-lg hover:bg-muted/30 transition-colors cursor-pointer" data-action="filter-category" data-category="restoration">
                            <div class="flex items-center gap-3">
                                <i data-lucide="wrench" class="w-4 h-4 text-green-500"></i>
                                <span class="text-sm font-bold text-foreground">@Localizer["Restoration"]</span>
                            </div>
                            <span class="text-xs text-muted-foreground" id="restorationCount">-</span>
                        </div>
                        <div class="flex items-center justify-between p-3 rounded-lg hover:bg-muted/30 transition-colors cursor-pointer" data-action="filter-category" data-category="community">
                            <div class="flex items-center gap-3">
                                <i data-lucide="users" class="w-4 h-4 text-blue-500"></i>
                                <span class="text-sm font-bold text-foreground">@Localizer["Community"]</span>
                            </div>
                            <span class="text-xs text-muted-foreground" id="communityCount">-</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/profile-interests.js" asp-append-version="true"></script>
}