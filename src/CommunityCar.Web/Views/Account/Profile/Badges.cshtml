@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
    ViewData["HideLeftSidebar"] = true;
    ViewData["HideRightSidebar"] = true;
    ViewData["HideMainContainer"] = true;
    ViewData["HideMainContentId"] = true;
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
}

<div class="profile-container py-4 animate-in fade-in slide-in-from-bottom-4 duration-500">
    <div>
        @if (false)
        {
            <!-- Single Column Layout - No Sidebar -->
            <div class="space-y-6">
                <!-- Tab Navigation & Content -->
                <div class="bg-card border border-border rounded-2xl shadow-lg overflow-hidden">
                    <partial name="_ProfileNavigation" />

                    <div class="p-6 sm:p-8">
                        <!-- Badges Header -->
                        <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-8">
                            <div>
                                <h1 class="text-2xl font-black text-foreground tracking-tight flex items-center gap-3">
                                    <i data-lucide="award" class="w-6 h-6 text-primary"></i>
                                    @Localizer["MyBadges"]
                                </h1>
                                <p class="text-sm text-muted-foreground mt-1">@Localizer["BadgesSubtitle"]</p>
                            </div>
                        </div>

                        <!-- Achievement Stats Area -->
                        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
                            <div class="bg-muted/20 border border-border rounded-xl p-4">
                                <p class="text-[10px] font-bold uppercase text-profile-text-muted mb-1">@Localizer["TotalBadges"]</p>
                                <p class="text-xl font-black text-foreground" id="totalBadges">0</p>
                            </div>
                            <div class="bg-muted/20 border border-border rounded-xl p-4">
                                <p class="text-[10px] font-bold uppercase text-profile-text-muted mb-1">@Localizer["RareBadges"]</p>
                                <p class="text-xl font-black text-foreground" id="rareBadges">0</p>
                            </div>
                            <div class="bg-muted/20 border border-border rounded-xl p-4">
                                <p class="text-[10px] font-bold uppercase text-profile-text-muted mb-1">@Localizer["Recent"]</p>
                                <p class="text-xl font-black text-foreground" id="recentBadges">0</p>
                            </div>
                            <div class="bg-muted/20 border border-border rounded-xl p-4">
                                <p class="text-[10px] font-bold uppercase text-profile-text-muted mb-1">@Localizer["Progress"]</p>
                                <p class="text-xl font-black text-foreground" id="progressPercent">0%</p>
                            </div>
                        </div>

                        <!-- Badge Categories Grid -->
                        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                            <div class="lg:col-span-2 space-y-6">
                                <div class="bg-background border border-border rounded-xl p-6">
                                    <h3 class="text-sm font-bold text-foreground mb-4 flex items-center gap-2">
                                        <i data-lucide="trophy" class="w-4 h-4 text-primary"></i>
                                        @Localizer["EarnedBadges"]
                                    </h3>
                                    
                                    <div id="earnedBadges" class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                        <div class="flex flex-col items-center justify-center py-12 text-center opacity-30">
                                            <i data-lucide="award" class="w-12 h-12 mb-4"></i>
                                            <p class="text-sm font-bold">@Localizer["NoBadgesTitle"]</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="space-y-6">
                                <div class="bg-background border border-border rounded-xl p-6">
                                    <h3 class="text-sm font-bold text-foreground mb-4 flex items-center gap-2">
                                        <i data-lucide="grid-3x3" class="w-4 h-4 text-primary"></i>
                                        @Localizer["Categories"]
                                    </h3>
                                    <div class="space-y-2">
                                        <div class="flex items-center justify-between p-2 rounded-lg hover:bg-muted/30 transition-colors cursor-pointer text-xs">
                                            <span class="font-bold text-foreground">@Localizer["Community"]</span>
                                            <span class="text-muted-foreground">5</span>
                                        </div>
                                        <div class="flex items-center justify-between p-2 rounded-lg hover:bg-muted/30 transition-colors cursor-pointer text-xs">
                                            <span class="font-bold text-foreground">@Localizer["Automotive"]</span>
                                            <span class="text-muted-foreground">8</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Grid Layout with Sidebar -->
            <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
                <!-- Left Sidebar -->
                <div class="lg:col-span-1">
                    <partial name="_ProfileSidebar" />
                </div>
                
                <!-- Main Content -->
                <div class="lg:col-span-3 space-y-6">
                    <!-- Tab Navigation & Content -->
                    <div class="bg-card border border-border rounded-2xl shadow-lg overflow-hidden">
                        <partial name="_ProfileNavigation" />

                        <div class="p-6 sm:p-8">
                            <!-- Badges Header -->
                            <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-8">
                                <div>
                                    <h1 class="text-2xl font-black text-foreground tracking-tight flex items-center gap-3">
                                        <i data-lucide="award" class="w-6 h-6 text-primary"></i>
                                        @Localizer["MyBadges"]
                                    </h1>
                                    <p class="text-sm text-muted-foreground mt-1">@Localizer["BadgesSubtitle"]</p>
                                </div>
                            </div>

                            <!-- Achievement Stats Area -->
                            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
                                <div class="bg-muted/20 border border-border rounded-xl p-4">
                                    <p class="text-[10px] font-bold uppercase text-profile-text-muted mb-1">@Localizer["TotalBadges"]</p>
                                    <p class="text-xl font-black text-foreground" id="totalBadges">0</p>
                                </div>
                                <div class="bg-muted/20 border border-border rounded-xl p-4">
                                    <p class="text-[10px] font-bold uppercase text-profile-text-muted mb-1">@Localizer["RareBadges"]</p>
                                    <p class="text-xl font-black text-foreground" id="rareBadges">0</p>
                                </div>
                                <div class="bg-muted/20 border border-border rounded-xl p-4">
                                    <p class="text-[10px] font-bold uppercase text-profile-text-muted mb-1">@Localizer["Recent"]</p>
                                    <p class="text-xl font-black text-foreground" id="recentBadges">0</p>
                                </div>
                                <div class="bg-muted/20 border border-border rounded-xl p-4">
                                    <p class="text-[10px] font-bold uppercase text-profile-text-muted mb-1">@Localizer["Progress"]</p>
                                    <p class="text-xl font-black text-foreground" id="progressPercent">0%</p>
                                </div>
                            </div>

                            <!-- Badge Categories Grid -->
                            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                                <div class="lg:col-span-2 space-y-6">
                                    <div class="bg-background border border-border rounded-xl p-6">
                                        <h3 class="text-sm font-bold text-foreground mb-4 flex items-center gap-2">
                                            <i data-lucide="trophy" class="w-4 h-4 text-primary"></i>
                                            @Localizer["EarnedBadges"]
                                        </h3>
                                        
                                        <div id="earnedBadges" class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                            <div class="flex flex-col items-center justify-center py-12 text-center opacity-30">
                                                <i data-lucide="award" class="w-12 h-12 mb-4"></i>
                                                <p class="text-sm font-bold">@Localizer["NoBadgesTitle"]</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="space-y-6">
                                    <div class="bg-background border border-border rounded-xl p-6">
                                        <h3 class="text-sm font-bold text-foreground mb-4 flex items-center gap-2">
                                            <i data-lucide="grid-3x3" class="w-4 h-4 text-primary"></i>
                                            @Localizer["Categories"]
                                        </h3>
                                        <div class="space-y-2">
                                            <div class="flex items-center justify-between p-2 rounded-lg hover:bg-muted/30 transition-colors cursor-pointer text-xs">
                                                <span class="font-bold text-foreground">@Localizer["Community"]</span>
                                                <span class="text-muted-foreground">5</span>
                                            </div>
                                            <div class="flex items-center justify-between p-2 rounded-lg hover:bg-muted/30 transition-colors cursor-pointer text-xs">
                                                <span class="font-bold text-foreground">@Localizer["Automotive"]</span>
                                                <span class="text-muted-foreground">8</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    </script>
    <script src="~/js/profile-badges.js" asp-append-version="true"></script>
}