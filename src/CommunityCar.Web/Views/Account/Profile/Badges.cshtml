@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
    var currentUserId = ViewBag.CurrentUserId as Guid?;
}

@await Html.PartialAsync("~/Views/Account/Profile/_ProfileHeader.cshtml")

@await Html.PartialAsync("~/Views/Account/Profile/_ProfileNavigation.cshtml")

<div class="space-y-8 animate-in fade-in duration-700">
    <!-- Badges Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-2xl font-black text-foreground tracking-tight flex items-center gap-3">
                <i data-lucide="award" class="w-6 h-6 text-primary"></i>
                @Localizer["MyBadges"]
            </h1>
            <p class="text-sm text-muted-foreground mt-1">@Localizer["BadgesSubtitle"]</p>
        </div>
    </div>

    <!-- Achievement Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-gradient-to-br from-yellow-500/10 to-yellow-600/10 border border-yellow-500/20 rounded-2xl p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-yellow-600 font-bold text-sm">@Localizer["TotalBadges"]</p>
                    <p class="text-2xl font-black text-foreground" id="totalBadges">0</p>
                </div>
                <i data-lucide="award" class="w-8 h-8 text-yellow-500"></i>
            </div>
        </div>
        <div class="bg-gradient-to-br from-blue-500/10 to-blue-600/10 border border-blue-500/20 rounded-2xl p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-blue-600 font-bold text-sm">@Localizer["RareBadges"]</p>
                    <p class="text-2xl font-black text-foreground" id="rareBadges">0</p>
                </div>
                <i data-lucide="star" class="w-8 h-8 text-blue-500"></i>
            </div>
        </div>
        <div class="bg-gradient-to-br from-purple-500/10 to-purple-600/10 border border-purple-500/20 rounded-2xl p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-purple-600 font-bold text-sm">@Localizer["Recent"]</p>
                    <p class="text-2xl font-black text-foreground" id="recentBadges">0</p>
                </div>
                <i data-lucide="clock" class="w-8 h-8 text-purple-500"></i>
            </div>
        </div>
        <div class="bg-gradient-to-br from-green-500/10 to-green-600/10 border border-green-500/20 rounded-2xl p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-green-600 font-bold text-sm">@Localizer["Progress"]</p>
                    <p class="text-2xl font-black text-foreground" id="progressPercent">0%</p>
                </div>
                <i data-lucide="trending-up" class="w-8 h-8 text-green-500"></i>
            </div>
        </div>
    </div>

    <!-- Badge Categories -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Earned Badges -->
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-background border border-border rounded-2xl p-6">
                <h3 class="text-lg font-bold text-foreground mb-4 flex items-center gap-2">
                    <i data-lucide="trophy" class="w-5 h-5 text-primary"></i>
                    @Localizer["EarnedBadges"]
                </h3>
                
                <div id="badges-skeleton" class="hidden grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <skeleton type="Card" />
                    <skeleton type="Card" />
                </div>

                <div id="earnedBadges" class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <!-- Will be populated by JavaScript -->
                    <div class="flex items-center justify-center py-12">
                        <div class="text-center">
                            <i data-lucide="award" class="w-12 h-12 text-muted-foreground mx-auto mb-4 opacity-30"></i>
                            <h3 class="text-lg font-bold text-foreground mb-2">@Localizer["NoBadgesTitle"]</h3>
                            <p class="text-sm text-muted-foreground mb-6">@Localizer["NoBadgesSubtitle"]</p>
                            <a href="/feed" class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-primary-foreground rounded-xl text-sm font-bold hover:bg-primary/90 transition-all">
                                <i data-lucide="zap" class="w-4 h-4"></i>
                                @Localizer["GetStarted"]
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Badge Progress -->
            <div class="bg-background border border-border rounded-2xl p-6">
                <h3 class="text-lg font-bold text-foreground mb-4 flex items-center gap-2">
                    <i data-lucide="target" class="w-5 h-5 text-primary"></i>
                    @Localizer["InProgress"]
                </h3>
                
                <div id="progressBadges" class="space-y-4">
                    <!-- Sample progress badges -->
                    <div class="flex items-center justify-between p-4 bg-muted/20 rounded-xl">
                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 rounded-full bg-blue-500/10 flex items-center justify-center">
                                <i data-lucide="message-circle" class="w-6 h-6 text-blue-500"></i>
                            </div>
                            <div>
                                <h4 class="font-bold text-foreground">Community Helper</h4>
                                <p class="text-sm text-muted-foreground">Help 10 community members</p>
                            </div>
                        </div>
                        <div class="text-right">
                            <div class="text-sm font-bold text-foreground">3/10</div>
                            <div class="w-20 bg-muted rounded-full h-2 mt-1">
                                <div class="h-full bg-blue-500 rounded-full w-[30%]"></div>
                            </div>
                        </div>
                    </div>

                    <div class="flex items-center justify-between p-4 bg-muted/20 rounded-xl">
                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 rounded-full bg-green-500/10 flex items-center justify-center">
                                <i data-lucide="heart" class="w-6 h-6 text-green-500"></i>
                            </div>
                            <div>
                                <h4 class="font-bold text-foreground">Content Creator</h4>
                                <p class="text-sm text-muted-foreground">Share 5 posts with the community</p>
                            </div>
                        </div>
                        <div class="text-right">
                            <div class="text-sm font-bold text-foreground">1/5</div>
                            <div class="eng-progress-container h-1.5">
                                <div class="eng-progress-bar bg-green-500 w-[20%]"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Badge Categories Sidebar -->
        <div class="space-y-6">
            <!-- Available Badges -->
            <div class="bg-background border border-border rounded-2xl p-6">
                <h3 class="text-lg font-bold text-foreground mb-4 flex items-center gap-2">
                    <i data-lucide="grid-3x3" class="w-5 h-5 text-primary"></i>
                    @Localizer["Categories"]
                </h3>
                
                <div class="space-y-3">
                    <div class="flex items-center justify-between p-3 rounded-lg hover:bg-muted/30 transition-colors cursor-pointer">
                        <div class="flex items-center gap-3">
                            <i data-lucide="users" class="w-4 h-4 text-blue-500"></i>
                            <span class="text-sm font-bold text-foreground">@Localizer["Community"]</span>
                        </div>
                        <span class="text-xs text-muted-foreground">@Localizer["BadgesCount", 5]</span>
                    </div>
                    <div class="flex items-center justify-between p-3 rounded-lg hover:bg-muted/30 transition-colors cursor-pointer">
                        <div class="flex items-center gap-3">
                            <i data-lucide="car" class="w-4 h-4 text-red-500"></i>
                            <span class="text-sm font-bold text-foreground">@Localizer["Automotive"]</span>
                        </div>
                        <span class="text-xs text-muted-foreground">@Localizer["BadgesCount", 8]</span>
                    </div>
                    <div class="flex items-center justify-between p-3 rounded-lg hover:bg-muted/30 transition-colors cursor-pointer">
                        <div class="flex items-center gap-3">
                            <i data-lucide="edit" class="w-4 h-4 text-green-500"></i>
                            <span class="text-sm font-bold text-foreground">@Localizer["Content"]</span>
                        </div>
                        <span class="text-xs text-muted-foreground">@Localizer["BadgesCount", 6]</span>
                    </div>
                    <div class="flex items-center justify-between p-3 rounded-lg hover:bg-muted/30 transition-colors cursor-pointer">
                        <div class="flex items-center gap-3">
                            <i data-lucide="zap" class="w-4 h-4 text-yellow-500"></i>
                            <span class="text-sm font-bold text-foreground">@Localizer["Special"]</span>
                        </div>
                        <span class="text-xs text-muted-foreground">@Localizer["BadgesCount", 3]</span>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="bg-background border border-border rounded-2xl p-6">
                <h3 class="text-lg font-bold text-foreground mb-4 flex items-center gap-2">
                    <i data-lucide="activity" class="w-5 h-5 text-primary"></i>
                    @Localizer["RecentActivity"]
                </h3>
                
                <div class="space-y-3">
                    <div class="text-center py-8">
                        <i data-lucide="clock" class="w-8 h-8 text-muted-foreground mx-auto mb-2 opacity-30"></i>
                        <p class="text-sm text-muted-foreground">@Localizer["NoRecentActivity"]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/profile-badges.js" asp-append-version="true"></script>
}