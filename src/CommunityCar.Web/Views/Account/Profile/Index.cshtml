@model CommunityCar.Application.Features.Account.ViewModels.Core.ProfileIndexVM
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
    var displayBio = isArabic && !string.IsNullOrEmpty(Model.BioAr) ? Model.BioAr : Model.Bio;
    ViewData["Title"] = Localizer["PageTitle"];
    ViewData["HideRightSidebar"] = true;
}

<div class="space-y-8 animate-in fade-in duration-1000">
    <div id="profile-skeleton" class="hidden space-y-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <skeleton type="Card" />
            <div class="lg:col-span-2">
                <skeleton type="Post" />
            </div>
        </div>
    </div>

    <div id="profile-content" class="space-y-8">
        @await Html.PartialAsync("~/Views/Account/Profile/_ProfileHeader.cshtml", Model)
        @await Html.PartialAsync("~/Views/Account/Profile/_ProfileNavigation.cshtml")

    <!-- Main Content Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Sidebar Info -->
        <div class="space-y-6">
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden group/about transition-all hover:border-primary/10">
                <div class="p-5 border-b border-border/50 bg-muted/20 px-8">
                    <h5 class="text-[10px] font-black uppercase tracking-widest text-foreground flex items-center gap-3">
                        <i data-lucide="fingerprint" class="w-4 h-4 text-primary"></i>
                        @Localizer["UserCredentials"]
                    </h5>
                </div>
                <div class="p-8 space-y-6">
                    <div class="flex items-center gap-4 group/field">
                        <div class="w-10 h-10 rounded-xl bg-muted/50 flex items-center justify-center text-muted-foreground group-hover/field:bg-primary/10 group-hover/field:text-primary transition-all">
                            <i data-lucide="mail" class="w-5 h-5"></i>
                        </div>
                        <div>
                            <div class="text-[9px] font-black text-muted-foreground uppercase tracking-widest opacity-50">@Localizer["EmailAddress"]</div>
                            <div class="text-sm font-black text-foreground mt-0.5">@Model.Email</div>
                        </div>
                    </div>
                    
                    @if (Model.LastLoginAt.HasValue)
                    {
                        <div class="flex items-center gap-4 group/field">
                            <div class="w-10 h-10 rounded-xl bg-muted/50 flex items-center justify-center text-muted-foreground group-hover/field:bg-amber-500/10 group-hover/field:text-amber-600 transition-all">
                                <i data-lucide="monitor" class="w-5 h-5"></i>
                            </div>
                            <div>
                                <div class="text-[9px] font-black text-muted-foreground uppercase tracking-widest opacity-50">@Localizer["LastActive"]</div>
                                <div class="text-sm font-black text-foreground mt-0.5">@Model.LastLoginAt.Value.ToString("g")</div>
                            </div>
                        </div>
                    }

                    <div class="flex items-center gap-4 group/field">
                        <div class="w-10 h-10 rounded-xl bg-muted/50 flex items-center justify-center text-muted-foreground group-hover/field:bg-green-500/10 group-hover/field:text-green-600 transition-all">
                            <i data-lucide="shield-check" class="w-5 h-5"></i>
                        </div>
                        <div>
                            <div class="text-[9px] font-black text-muted-foreground uppercase tracking-widest opacity-50">@Localizer["AccountStatus"]</div>
                            <div class="text-sm font-black text-foreground mt-0.5 flex items-center gap-2">
                                @if (Model.IsEmailConfirmed)
                                {
                                    <span class="text-green-600">@Localizer["Verified"]</span>
                                    <i data-lucide="check-circle" class="w-4 h-4 text-green-500"></i>
                                }
                                else
                                {
                                    <span class="text-orange-600">@Localizer["PendingVerification"]</span>
                                    <i data-lucide="alert-circle" class="w-4 h-4 text-orange-500"></i>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
                <div class="p-5 border-b border-border/50 bg-muted/20 px-8">
                    <h5 class="text-[10px] font-black uppercase tracking-widest text-foreground flex items-center gap-3">
                        <i data-lucide="info" class="w-4 h-4 text-primary"></i>
                        @Localizer["AboutMe"]
                    </h5>
                </div>
                <div class="p-8">
                    <p class="text-sm text-muted-foreground leading-relaxed font-medium">
                        @if (!string.IsNullOrEmpty(displayBio))
                        {
                            @displayBio
                        }
                        else
                        {
                            <span class="italic opacity-60">@Localizer["NoBio"]</span>
                        }
                    </p>
                </div>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Stats Overview -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 text-center shadow-xl hover:border-primary/20 transition-all group/stat">
                    <i data-lucide="edit" class="w-8 h-8 text-primary mx-auto mb-3 group-hover/stat:scale-110 transition-transform"></i>
                    <div class="text-2xl font-black text-foreground tabular-nums">@Model.PostsCount</div>
                    <div class="text-[10px] font-black text-muted-foreground uppercase tracking-widest opacity-60">@Localizer["Posts"]</div>
                </div>
                <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 text-center shadow-xl hover:border-primary/20 transition-all group/stat">
                    <i data-lucide="users" class="w-8 h-8 text-primary mx-auto mb-3 group-hover/stat:scale-110 transition-transform"></i>
                    <div class="text-2xl font-black text-foreground tabular-nums">@Model.FriendsCount</div>
                    <div class="text-[10px] font-black text-muted-foreground uppercase tracking-widest opacity-60">@Localizer["Friends"]</div>
                </div>
                <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 text-center shadow-xl hover:border-primary/20 transition-all group/stat">
                    <i data-lucide="heart" class="w-8 h-8 text-primary mx-auto mb-3 group-hover/stat:scale-110 transition-transform"></i>
                    <div class="text-2xl font-black text-foreground tabular-nums">@Model.LikesReceivedCount</div>
                    <div class="text-[10px] font-black text-muted-foreground uppercase tracking-widest opacity-60">@Localizer["Likes"]</div>
                </div>
                <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 text-center shadow-xl hover:border-primary/20 transition-all group/stat">
                    <i data-lucide="award" class="w-8 h-8 text-primary mx-auto mb-3 group-hover/stat:scale-110 transition-transform"></i>
                    <div class="text-2xl font-black text-foreground tabular-nums">@Model.BadgesCount</div>
                    <div class="text-[10px] font-black text-muted-foreground uppercase tracking-widest opacity-60">@Localizer["Badges"]</div>
                </div>
            </div>

            <!-- Empty State -->
            <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
                <div class="p-12 text-center">
                    <div class="w-20 h-20 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-6">
                        <i data-lucide="zap" class="w-10 h-10 text-primary"></i>
                    </div>
                    <h3 class="text-xl font-black text-foreground mb-3 tracking-tight">@Localizer["StartJourneyTitle"]</h3>
                    <p class="text-sm text-muted-foreground mb-8 max-w-md mx-auto font-medium opacity-80">
                        @Localizer["StartJourneyMessage"]
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a href="/posts/create" class="inline-flex items-center gap-3 px-8 py-4 bg-primary text-primary-foreground hover:bg-primary/90 rounded-2xl font-black text-[11px] uppercase tracking-widest transition-all shadow-xl shadow-primary/30 active:scale-95 group/btn">
                            @Localizer["CreatePost"]
                            <i data-lucide="arrow-right" class="w-4 h-4 group-hover/btn:translate-x-2 transition-transform"></i>
                        </a>
                        <a href="/feed" class="inline-flex items-center gap-3 px-8 py-4 bg-background border border-border text-foreground hover:bg-muted/50 rounded-2xl font-black text-[11px] uppercase tracking-widest transition-all shadow-lg active:scale-95 group/btn">
                            <i data-lucide="rss" class="w-4 h-4"></i>
                            @Localizer["BrowseFeed"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>

@section Scripts {
}