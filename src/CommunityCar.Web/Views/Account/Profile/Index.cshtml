@model CommunityCar.Application.Features.Account.ViewModels.Core.ProfileIndexVM
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
    ViewData["Title"] = Localizer["PageTitle"];
    ViewData["HideLeftSidebar"] = true;
    ViewData["HideRightSidebar"] = true;
    ViewData["HideMainContainer"] = true;
    ViewData["HideMainContentId"] = true;
}

<div class=" mx-auto space-y-8 animate-in fade-in duration-700">
    <div class="space-y-8">
        @if (false)
        {
            <!-- Single Column Layout - No Sidebar -->
            <div class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Badges Card -->
                    <div class="bg-card border border-border rounded-2xl shadow-lg overflow-hidden">
                        <div class="p-6 sm:p-8">
                            <h3 class="text-sm font-bold uppercase tracking-wider text-muted-foreground mb-4 flex items-center justify-between">
                                <span><i data-lucide="award" class="w-4 h-4 inline mr-2 text-primary"></i> @Localizer["Badges"]</span>
                                <span class="text-primary">@Model.BadgesCount</span>
                            </h3>
                            @if (Model.BadgesCount > 0)
                            {
                                <div class="flex flex-wrap gap-2">
                                    @for(int i=0; i < Math.Min(5, Model.BadgesCount); i++)
                                    {
                                        <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center" title="Badge @(i+1)">
                                            <i data-lucide="award" class="w-6 h-6 text-primary"></i>
                                        </div>
                                    }
                                </div>
                                <div class="mt-4 p-4 bg-primary/5 border border-primary/10 rounded-lg">
                                    <div class="flex items-center gap-3">
                                        <div class="w-8 h-8 rounded bg-primary/20 flex items-center justify-center">
                                            <i data-lucide="shield-check" class="w-5 h-5 text-primary"></i>
                                        </div>
                                        <div>
                                            <div class="text-xs font-medium text-primary/80 uppercase tracking-wide">Most Recent</div>
                                            <div class="text-sm font-bold text-foreground">@Localizer["PioneerBadge"]</div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <p class="text-sm text-muted-foreground">@Localizer["NoBadgesEarned"]</p>
                            }
                        </div>
                    </div>

                    <!-- Activity Summary -->
                    <div class="bg-card border border-border rounded-2xl shadow-lg overflow-hidden">
                        <div class="p-6 sm:p-8">
                            <h3 class="text-sm font-bold uppercase tracking-wider text-muted-foreground mb-4 flex items-center justify-between">
                                <span><i data-lucide="calendar-days" class="w-4 h-4 inline mr-2 text-primary"></i> @Localizer["ActivityHeatmap"]</span>
                                <span class="text-xs font-medium text-muted-foreground">@Model.Stats.DaysActive days active</span>
                            </h3>
                            
                            <div class="heatmap-container">
                                <div class="heatmap-grid !grid-cols-[repeat(53,8px)]">
                                    @for (int i = 0; i < 53 * 7; i++)
                                    {
                                        var level = (i % 7 == 0 && i % 4 == 0) ? "level-" + (new Random().Next(1, 5)) : "";
                                        <div class="heatmap-cell @level"></div>
                                    }
                                </div>
                            </div>
                            
                            <div class="mt-4 flex items-center justify-between text-xs text-muted-foreground font-medium">
                                <div class="flex items-center gap-1">
                                    <span>Less</span>
                                    <div class="w-2 h-2 rounded-sm bg-muted/40"></div>
                                    <div class="w-2 h-2 rounded-sm bg-primary/60"></div>
                                    <span>More</span>
                                </div>
                                <div>Max streak: 12</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tab Navigation & Content -->
                <div class="bg-card border border-border rounded-2xl shadow-lg overflow-hidden">
                    <partial name="_ProfileNavigation" />

                    <div class="p-6 sm:p-8 min-h-[300px]">
                        <div class="flex flex-col items-center justify-center text-center py-12">
                            <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mb-6">
                                <i data-lucide="sparkles" class="w-8 h-8 text-primary"></i>
                            </div>
                            <h2 class="text-xl font-bold mb-2 text-foreground">@Localizer["WelcomeBack"], @Model.FullName!</h2>
                            <p class="text-muted-foreground max-w-sm mx-auto text-sm">
                                Navigate through the tabs to manage your profile exhibits and activities.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Grid Layout with Sidebar -->
            <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
                <!-- Left Sidebar -->
                <div class="lg:col-span-1">
                    <partial name="~/Views/Account/Profile/_ProfileSidebar.cshtml" />
                </div>
                
                <!-- Main Content -->
                <div class="lg:col-span-3 space-y-6">
                    <!-- Cover Image Header with Integrated Profile Avatar -->
                    @{
                        var coverImageUrl = ViewBag.CoverImageUrl as string ?? "/images/default-cover.svg";
                        var profilePictureUrl = ViewBag.ProfilePictureUrl as string ?? "/images/default-avatar.png";
                    }
                    <div class="relative h-64 rounded-2xl overflow-hidden shadow-lg mb-6">
                        <img src="@(coverImageUrl)?v=@DateTime.Now.Ticks" alt="Cover" class="w-full h-full object-cover" />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
                        
                        <!-- Profile Avatar integrated with cover -->
                        <div class="absolute bottom-6 left-6 flex items-end gap-4">
                            <!-- Large Profile Avatar -->
                            @{
                                ViewData["Size"] = "large";
                                ViewData["Context"] = "cover";
                                ViewData["ShowLevel"] = true;
                                ViewData["ShowStatus"] = true;
                            }
                            <partial name="~/Views/Account/Profile/_ProfileAvatar.cshtml" />
                            
                            <!-- Profile Info -->
                            <div class="text-white pb-2">
                                <h1 class="text-3xl font-black mb-1 drop-shadow-lg">@ViewBag.FullName</h1>
                                <p class="text-white/90 font-medium text-lg drop-shadow-md">@ViewBag.Bio</p>
                                <div class="flex items-center gap-4 mt-2">
                                    <div class="flex items-center gap-1 text-white/80">
                                        <i data-lucide="map-pin" class="w-4 h-4"></i>
                                        <span class="text-sm font-medium">@ViewBag.City, @ViewBag.Country</span>
                                    </div>
                                    <div class="flex items-center gap-1 text-white/80">
                                        <i data-lucide="award" class="w-4 h-4"></i>
                                        <span class="text-sm font-medium">@ViewBag.TotalPoints pts</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Inner Profile Sidebar positioned over cover -->
                        <div class="absolute top-6 right-6 w-80 hidden xl:block">
                            <partial name="~/Views/Account/Profile/_InnerProfileSidebar.cshtml" />
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Badges Card -->
                        <div class="bg-card border border-border rounded-2xl shadow-lg overflow-hidden">
                            <div class="p-6 sm:p-8">
                                <h3 class="text-sm font-bold uppercase tracking-wider text-muted-foreground mb-4 flex items-center justify-between">
                                    <span><i data-lucide="award" class="w-4 h-4 inline mr-2 text-primary"></i> @Localizer["Badges"]</span>
                                    <span class="text-primary">@Model.BadgesCount</span>
                                </h3>
                                @if (Model.BadgesCount > 0)
                                {
                                    <div class="flex flex-wrap gap-2">
                                        @for(int i=0; i < Math.Min(5, Model.BadgesCount); i++)
                                        {
                                            <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center" title="Badge @(i+1)">
                                                <i data-lucide="award" class="w-6 h-6 text-primary"></i>
                                            </div>
                                        }
                                    </div>
                                    <div class="mt-4 p-4 bg-primary/5 border border-primary/10 rounded-lg">
                                        <div class="flex items-center gap-3">
                                            <div class="w-8 h-8 rounded bg-primary/20 flex items-center justify-center">
                                                <i data-lucide="shield-check" class="w-5 h-5 text-primary"></i>
                                            </div>
                                            <div>
                                                <div class="text-xs font-medium text-primary/80 uppercase tracking-wide">Most Recent</div>
                                                <div class="text-sm font-bold text-foreground">@Localizer["PioneerBadge"]</div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <p class="text-sm text-muted-foreground">@Localizer["NoBadgesEarned"]</p>
                                }
                            </div>
                        </div>

                        <!-- Activity Summary -->
                        <div class="bg-card border border-border rounded-2xl shadow-lg overflow-hidden">
                            <div class="p-6 sm:p-8">
                                <h3 class="text-sm font-bold uppercase tracking-wider text-muted-foreground mb-4 flex items-center justify-between">
                                    <span><i data-lucide="calendar-days" class="w-4 h-4 inline mr-2 text-primary"></i> @Localizer["ActivityHeatmap"]</span>
                                    <span class="text-xs font-medium text-muted-foreground">@Model.Stats.DaysActive days active</span>
                                </h3>
                                
                                <div class="heatmap-container">
                                    <div class="heatmap-grid !grid-cols-[repeat(53,8px)]">
                                        @for (int i = 0; i < 53 * 7; i++)
                                        {
                                            var level = (i % 7 == 0 && i % 4 == 0) ? "level-" + (new Random().Next(1, 5)) : "";
                                            <div class="heatmap-cell @level"></div>
                                        }
                                    </div>
                                </div>
                                
                                <div class="mt-4 flex items-center justify-between text-xs text-muted-foreground font-medium">
                                    <div class="flex items-center gap-1">
                                        <span>Less</span>
                                        <div class="w-2 h-2 rounded-sm bg-muted/40"></div>
                                        <div class="w-2 h-2 rounded-sm bg-primary/60"></div>
                                        <span>More</span>
                                    </div>
                                    <div>Max streak: 12</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tab Navigation & Content -->
                    <div class="bg-card border border-border rounded-2xl shadow-lg overflow-hidden">
                        <partial name="~/Views/Account/Profile/_ProfileNavigation.cshtml" />

                        <div class="p-6 sm:p-8 min-h-[300px]">
                            <div class="flex flex-col items-center justify-center text-center py-12">
                                <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mb-6">
                                    <i data-lucide="sparkles" class="w-8 h-8 text-primary"></i>
                                </div>
                                <h2 class="text-xl font-bold mb-2 text-foreground">@Localizer["WelcomeBack"], @Model.FullName!</h2>
                                <p class="text-muted-foreground max-w-sm mx-auto text-sm">
                                    Navigate through the tabs to manage your profile exhibits and activities.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    </script>
}