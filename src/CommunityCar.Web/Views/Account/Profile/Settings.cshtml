@model CommunityCar.Application.Features.Account.ViewModels.Core.ProfileSettingsVM
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
}

@await Html.PartialAsync("_ProfileHeader")

@await Html.PartialAsync("_ProfileNavigation")

<div class="max-w-4xl mx-auto">
    <div class="mb-8 border-b border-border pb-4 flex items-center justify-between">
        <h1 class="text-2xl font-black flex items-center mb-0">
            <i data-lucide="settings" class="w-6 h-6 mr-3 text-primary"></i>@Localizer["AccountSettings"]
        </h1>
    </div>
    
    <!-- Settings Navigation -->
    <div class="flex flex-wrap gap-2 mb-8">
        <button data-action="show-tab" data-tab="profile" id="profileTab" class="px-4 py-2 bg-primary text-primary-foreground font-bold text-sm rounded-lg transition-all">
            @Localizer["Profile"]
        </button>
        <button data-action="show-tab" data-tab="privacy" id="privacyTab" class="px-4 py-2 bg-background border border-border text-muted-foreground hover:text-foreground font-bold text-sm rounded-lg transition-all">
            @Localizer["Privacy"]
        </button>
        <button data-action="show-tab" data-tab="notifications" id="notificationsTab" class="px-4 py-2 bg-background border border-border text-muted-foreground hover:text-foreground font-bold text-sm rounded-lg transition-all">
            @Localizer["Notifications"]
        </button>
        <button data-action="show-tab" data-tab="security" id="securityTab" class="px-4 py-2 bg-background border border-border text-muted-foreground hover:text-foreground font-bold text-sm rounded-lg transition-all">
            @Localizer["Security"]
        </button>
    </div>
    
    <!-- Profile Settings Tab -->
    <div id="profileSettings" class="tab-content">
        <form asp-controller="Profile" asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
            <div class="mb-10 text-center relative group/photo">
                <div class="w-32 h-32 mx-auto mb-6 rounded-3xl overflow-hidden border-4 border-primary/10 shadow-2xl relative">
                    <img src="@(Model.ProfilePictureUrl ?? "/images/default-avatar.png")" alt="Profile Picture" id="profile-preview" class="w-full h-full object-cover group-hover/photo:scale-110 transition-transform duration-500" />
                    <div class="absolute inset-0 bg-black/40 opacity-0 group-hover/photo:opacity-100 transition-opacity flex items-center justify-center">
                        <i data-lucide="camera" class="w-8 h-8 text-white"></i>
                    </div>
                </div>
                <label class="inline-flex items-center justify-center bg-primary/10 text-primary hover:bg-primary hover:text-primary-foreground font-black text-xs uppercase tracking-widest py-3 px-8 rounded-2xl transition-all cursor-pointer shadow-sm active:scale-95">
                    <span>@Localizer["ChangePhoto"]</span>
                    <input type="file" name="ProfilePicture" class="hidden" />
                </label>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">@Localizer["FullName"]</label>
                    <input type="text" class="w-full px-4 py-3 bg-background border border-border rounded-xl text-foreground font-bold focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" asp-for="FullName" placeholder="@Localizer["FullNamePlaceholder"]" />
                </div>
                <div class="space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">@Localizer["UsernameEmail"]</label>
                   <input type="text" class="w-full px-4 py-3 bg-muted/50 border border-border rounded-xl text-muted-foreground cursor-not-allowed font-bold" value="@Model.Email" readonly />
                </div>
                <div class="md:col-span-2 space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">@Localizer["PrimaryEmail"]</label>
                    <input type="email" class="w-full px-4 py-3 bg-muted/50 border border-border rounded-xl text-muted-foreground cursor-not-allowed font-bold" asp-for="Email" readonly />
                    <p class="text-[10px] text-muted-foreground mt-2 opacity-60 font-medium">@Localizer["EmailChangeRestriction"]</p>
                </div>
                <div class="space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">@Localizer["PhoneNumber"]</label>
                    <input type="tel" class="w-full px-4 py-3 bg-background border border-border rounded-xl text-foreground font-bold focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" asp-for="PhoneNumber" placeholder="@Localizer["PhoneNumberPlaceholder"]" />
                </div>
                <div class="space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">@Localizer["Country"]</label>
                    <input type="text" class="w-full px-4 py-3 bg-background border border-border rounded-xl text-foreground font-bold focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" asp-for="Country" placeholder="@Localizer["CountryPlaceholder"]" />
                </div>
                <div class="space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">@Localizer["City"]</label>
                    <input type="text" class="w-full px-4 py-3 bg-background border border-border rounded-xl text-foreground font-bold focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" asp-for="City" placeholder="@Localizer["CityPlaceholder"]" />
                </div>
                <div class="space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">@Localizer["CountryAr"]</label>
                    <input type="text" class="w-full px-4 py-3 bg-background border border-border rounded-xl text-foreground font-bold focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" asp-for="CountryAr" placeholder="@Localizer["CountryArPlaceholder"]" dir="rtl" />
                </div>
                <div class="space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">@Localizer["CityAr"]</label>
                    <input type="text" class="w-full px-4 py-3 bg-background border border-border rounded-xl text-foreground font-bold focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" asp-for="CityAr" placeholder="@Localizer["CityArPlaceholder"]" dir="rtl" />
                </div>
                <div class="md:col-span-2 space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">@Localizer["Bio"]</label>
                    <textarea class="w-full px-4 py-3 bg-background border border-border rounded-xl text-foreground font-bold focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all resize-none" asp-for="Bio" rows="4" placeholder="@Localizer["BioPlaceholder"]"></textarea>
                </div>
                <div class="md:col-span-2 space-y-2">
                    <label class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground ml-1">@Localizer["BioAr"]</label>
                    <textarea class="w-full px-4 py-3 bg-background border border-border rounded-xl text-foreground font-bold focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all resize-none" asp-for="BioAr" rows="4" placeholder="@Localizer["BioArPlaceholder"]" dir="rtl"></textarea>
                </div>
            </div>

            <div class="pt-6">
                <button type="submit" class="w-full bg-primary text-primary-foreground hover:bg-primary/90 font-black text-xs uppercase tracking-widest py-4 px-8 rounded-2xl transition-all shadow-xl shadow-primary/20 active:scale-95">
                    @Localizer["SaveProfileChanges"]
                </button>
            </div>
        </form>
    </div>

    <!-- Privacy Settings Tab -->
    <div id="privacySettings" class="tab-content hidden">
        <form asp-controller="ProfileSettings" asp-action="UpdatePrivacy" method="post">
            <div class="space-y-8">
                <!-- Profile Visibility -->
                <div class="bg-background border border-border rounded-2xl p-6">
                    <h3 class="text-lg font-bold text-foreground mb-4 flex items-center gap-2">
                        <i data-lucide="eye" class="w-5 h-5 text-primary"></i>
                        @Localizer["ProfileVisibility"]
                    </h3>
                    <div class="space-y-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">@Localizer["PublicProfile"]</label>
                                <p class="text-sm text-muted-foreground">@Localizer["PublicProfileDescription"]</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="ProfileVisible" class="sr-only peer" checked />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">@Localizer["ShowEmail"]</label>
                                <p class="text-sm text-muted-foreground">@Localizer["ShowEmailDescription"]</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="EmailVisible" class="sr-only peer" />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">@Localizer["ShowPhoneNumber"]</label>
                                <p class="text-sm text-muted-foreground">@Localizer["ShowPhoneDescription"]</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="PhoneVisible" class="sr-only peer" />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Communication Preferences -->
                <div class="bg-background border border-border rounded-2xl p-6">
                    <h3 class="text-lg font-bold text-foreground mb-4 flex items-center gap-2">
                        <i data-lucide="message-circle" class="w-5 h-5 text-primary"></i>
                        @Localizer["Communication"]
                    </h3>
                    <div class="space-y-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">@Localizer["AllowMessages"]</label>
                                <p class="text-sm text-muted-foreground">@Localizer["AllowMessagesDescription"]</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="AllowMessages" class="sr-only peer" checked />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">@Localizer["AllowFriendRequests"]</label>
                                <p class="text-sm text-muted-foreground">@Localizer["AllowFriendRequestsDescription"]</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="AllowFriendRequests" class="sr-only peer" checked />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Content Privacy -->
                <div class="bg-background border border-border rounded-2xl p-6">
                    <h3 class="text-lg font-bold text-foreground mb-4 flex items-center gap-2">
                        <i data-lucide="shield" class="w-5 h-5 text-primary"></i>
                        @Localizer["ContentPrivacy"]
                    </h3>
                    <div class="space-y-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">@Localizer["DefaultGalleryPrivacy"]</label>
                                <p class="text-sm text-muted-foreground">@Localizer["DefaultGalleryPrivacyDescription"]</p>
                            </div>
                            <select name="DefaultGalleryPrivacy" class="px-3 py-2 bg-background border border-border rounded-lg text-foreground font-medium focus:outline-none focus:ring-2 focus:ring-primary/20">
                                <option value="public">@Localizer["Public"]</option>
                                <option value="private">@Localizer["Private"]</option>
                            </select>
                        </div>
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">@Localizer["ShowActivityStatus"]</label>
                                <p class="text-sm text-muted-foreground">@Localizer["ShowActivityDescription"]</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="ShowActivityStatus" class="sr-only peer" checked />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="pt-6">
                <button type="submit" class="w-full bg-primary text-primary-foreground hover:bg-primary/90 font-black text-xs uppercase tracking-widest py-4 px-8 rounded-2xl transition-all shadow-xl shadow-primary/20 active:scale-95">
                    @Localizer["SavePrivacySettings"]
                </button>
            </div>
        </form>
    </div>

    <!-- Notifications Settings Tab -->
    <div id="notificationsSettings" class="tab-content hidden">
        <form asp-controller="ProfileSettings" asp-action="UpdateNotifications" method="post">
            <div class="space-y-8">
                <!-- Email Notifications -->
                <div class="bg-background border border-border rounded-2xl p-6">
                    <h3 class="text-lg font-bold text-foreground mb-4 flex items-center gap-2">
                        <i data-lucide="mail" class="w-5 h-5 text-primary"></i>
                        @Localizer["EmailNotifications"]
                    </h3>
                    <div class="space-y-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">@Localizer["GeneralNotifications"]</label>
                                <p class="text-sm text-muted-foreground">@Localizer["GeneralNotificationsDescription"]</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="EmailNotifications" class="sr-only peer" @(Model.EmailNotifications ? "checked" : "") />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">@Localizer["MarketingEmails"]</label>
                                <p class="text-sm text-muted-foreground">@Localizer["MarketingEmailsDescription"]</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="MarketingEmails" class="sr-only peer" @(Model.MarketingEmails ? "checked" : "") />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Push Notifications -->
                <div class="bg-background border border-border rounded-2xl p-6">
                    <h3 class="text-lg font-bold text-foreground mb-4 flex items-center gap-2">
                        <i data-lucide="bell" class="w-5 h-5 text-primary"></i>
                        @Localizer["PushNotifications"]
                    </h3>
                    <div class="space-y-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">@Localizer["BrowserNotifications"]</label>
                                <p class="text-sm text-muted-foreground">@Localizer["BrowserNotificationsDescription"]</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="PushNotifications" class="sr-only peer" @(Model.PushNotifications ? "checked" : "") />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                        <div class="flex items-center justify-between">
                            <div>
                                <label class="font-medium text-foreground">@Localizer["SmsNotifications"]</label>
                                <p class="text-sm text-muted-foreground">@Localizer["SmsNotificationsDescription"]</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" name="SmsNotifications" class="sr-only peer" @(Model.SmsNotifications ? "checked" : "") />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="pt-6">
                <button type="submit" class="w-full bg-primary text-primary-foreground hover:bg-primary/90 font-black text-xs uppercase tracking-widest py-4 px-8 rounded-2xl transition-all shadow-xl shadow-primary/20 active:scale-95">
                    @Localizer["SaveNotificationSettings"]
                </button>
            </div>
        </form>
    </div>

    <!-- Security Settings Tab -->
    <div id="securitySettings" class="tab-content hidden">
        <div class="space-y-8">
            <!-- Password & Security -->
            <div class="bg-background border border-border rounded-2xl p-6">
                <h3 class="text-lg font-bold text-foreground mb-4 flex items-center gap-2">
                    <i data-lucide="lock" class="w-5 h-5 text-primary"></i>
                    @Localizer["PasswordSecurity"]
                </h3>
                <div class="space-y-4">
                    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
                        <div>
                            <h6 class="font-medium text-foreground">@Localizer["ChangePassword"]</h6>
                            <p class="text-sm text-muted-foreground">@Localizer["ChangePasswordDescription"]</p>
                        </div>
                        <a href="/account/security/change-password" class="inline-flex items-center justify-center bg-primary/10 text-primary hover:bg-primary hover:text-primary-foreground font-bold text-sm py-2 px-4 rounded-lg transition-all">
                            @Localizer["ChangePassword"]
                        </a>
                    </div>
                    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
                        <div>
                            <h6 class="font-medium text-foreground">@Localizer["TwoFactorAuthentication"]</h6>
                            <p class="text-sm text-muted-foreground">
                                @if (Model.IsTwoFactorEnabled)
                                {
                                    <span class="text-green-600">@Localizer["TwoFactorEnabled"]</span>
                                }
                                else
                                {
                                    <span class="text-orange-600">@Localizer["TwoFactorDisabled"]</span>
                                }
                            </p>
                        </div>
                        <a href="/account/security/two-factor" class="inline-flex items-center justify-center bg-primary/10 text-primary hover:bg-primary hover:text-primary-foreground font-bold text-sm py-2 px-4 rounded-lg transition-all">
                            @(Model.IsTwoFactorEnabled ? "Manage 2FA" : "Enable 2FA")
                        </a>
                    </div>
                </div>
            </div>

            <!-- Active Sessions section moved to Security page -->

            <!-- OAuth Connections -->
            <div class="bg-background border border-border rounded-2xl p-6">
                <h3 class="text-lg font-bold text-foreground mb-4 flex items-center gap-2">
                    <i data-lucide="link" class="w-5 h-5 text-primary"></i>
                    @Localizer["ConnectedAccounts"]
                </h3>
                <div class="space-y-4">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div class="w-8 h-8 bg-red-500 rounded-lg flex items-center justify-center">
                                <i data-lucide="mail" class="w-4 h-4 text-white"></i>
                            </div>
                            <div>
                                <p class="font-medium text-foreground">Google</p>
                                <p class="text-sm text-muted-foreground">
                                    @if (Model.HasGoogleAccount)
                                    {
                                        <span class="text-green-600">@Localizer["Connected"]</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted-foreground">@Localizer["NotConnected"]</span>
                                    }
                                </p>
                            </div>
                        </div>
                        @if (Model.HasGoogleAccount)
                        {
                            <button class="text-red-500 hover:text-red-600 font-medium text-sm transition-colors">
                                @Localizer["Disconnect"]
                            </button>
                        }
                        else
                        {
                            <button class="text-primary hover:text-primary/80 font-medium text-sm transition-colors">
                                @Localizer["Connect"]
                            </button>
                        }
                    </div>
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                                <i data-lucide="facebook" class="w-4 h-4 text-white"></i>
                            </div>
                            <div>
                                <p class="font-medium text-foreground">Facebook</p>
                                <p class="text-sm text-muted-foreground">
                                    @if (Model.HasFacebookAccount)
                                    {
                                        <span class="text-green-600">@Localizer["Connected"]</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted-foreground">@Localizer["NotConnected"]</span>
                                    }
                                </p>
                            </div>
                        </div>
                        @if (Model.HasFacebookAccount)
                        {
                            <button class="text-red-500 hover:text-red-600 font-medium text-sm transition-colors">
                                @Localizer["Disconnect"]
                            </button>
                        }
                        else
                        {
                            <button class="text-primary hover:text-primary/80 font-medium text-sm transition-colors">
                                @Localizer["Connect"]
                            </button>
                        }
                    </div>
                </div>
            </div>

            <!-- Danger Zone -->
            <div class="bg-red-50 dark:bg-red-950/20 border border-red-200 dark:border-red-800 rounded-2xl p-6">
                <h3 class="text-lg font-bold text-red-600 mb-4 flex items-center gap-2">
                    <i data-lucide="alert-triangle" class="w-5 h-5"></i>
                    @Localizer["DangerZone"]
                </h3>
