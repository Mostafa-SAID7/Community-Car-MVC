@model CommunityCar.Application.Features.Account.ViewModels.Media.UserGalleryItemVM
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Model.Caption ?? "Image View";
    ViewData["HideLeftSidebar"] = true;
    ViewData["HideRightSidebar"] = true;
    ViewData["HideMainContainer"] = true;
    ViewData["HideMainContentId"] = true;
}

<div class="profile-container py-4 animate-in fade-in slide-in-from-bottom-4 duration-500">
    <div>
        
        <!-- Header -->
        <div class="mb-6 flex items-center justify-between">
            <div class="flex items-center gap-4">
                <button onclick="window.close()" class="inline-flex items-center text-muted-foreground hover:text-foreground transition-colors">
                    <i data-lucide="arrow-left" class="w-5 h-5 mr-2"></i>
                    @Localizer["Back"]
                </button>
                <h1 class="text-2xl font-bold text-foreground">@Localizer["ImageView"]</h1>
            </div>
            
            <!-- Privacy Status -->
            <div class="flex items-center gap-2">
                @if (Model.IsPublic)
                {
                    <span class="inline-flex items-center px-3 py-1 bg-green-500/10 text-green-600 text-sm font-medium rounded-full border border-green-500/20">
                        <i data-lucide="globe" class="w-4 h-4 mr-1"></i>
                        @Localizer["Public"]
                    </span>
                }
                else
                {
                    <span class="inline-flex items-center px-3 py-1 bg-orange-500/10 text-orange-600 text-sm font-medium rounded-full border border-orange-500/20">
                        <i data-lucide="lock" class="w-4 h-4 mr-1"></i>
                        @Localizer["Private"]
                    </span>
                }
            </div>
        </div>

        <!-- Main Content -->
        <div class="bg-card border border-border rounded-2xl shadow-lg overflow-hidden">
            <!-- Image Display -->
            <div class="relative bg-black/5 flex items-center justify-center min-h-[60vh]">
                <img src="@Model.ImageUrl" alt="@Model.Caption" 
                     class="max-w-full rounded-xl max-h-[80vh] object-contain rounded-lg shadow-2xl" />
                
                <!-- Download Button -->
                <div class="absolute top-4 right-4">
                    <a href="@Model.ImageUrl" download class="inline-flex items-center justify-center p-2 bg-black/50 hover:bg-black/70 text-white rounded-full transition-colors">
                        <i data-lucide="download" class="w-5 h-5"></i>
                    </a>
                </div>
            </div>

            <!-- Image Details -->
            <div class="p-6 border-t border-border">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    
                    <!-- Left Column - Caption & Description -->
                    <div class="space-y-4">
                        @if (!string.IsNullOrEmpty(Model.Caption))
                        {
                            <div>
                                <h3 class="text-lg font-semibold text-foreground mb-2">@Localizer["Caption"]</h3>
                                <p class="text-foreground">@Model.Caption</p>
                            </div>
                        }

                        <!-- Edit Caption Form -->
                        <div class="space-y-2">
                            <button id="editCaptionBtn" class="text-primary hover:text-primary/80 text-sm font-medium transition-colors">
                                <i data-lucide="edit-2" class="w-4 h-4 mr-1"></i>
                                @Localizer["EditCaption"]
                            </button>
                            
                            <form id="editCaptionForm" class="hidden space-y-3" asp-controller="Gallery" asp-action="UpdateCaption" asp-route-imageId="@Model.Id" method="post">
                                @Html.AntiForgeryToken()
                                <input type="text" name="caption" value="@Model.Caption" placeholder="@Localizer["EnterCaption"]"
                                       class="w-full px-3 py-2 border border-border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" />
                                <div class="flex gap-2">
                                    <button type="submit" class="bg-primary text-primary-foreground hover:bg-primary/90 font-medium text-sm py-1.5 px-3 rounded-lg transition-all">
                                        @Localizer["Save"]
                                    </button>
                                    <button type="button" id="cancelEditCaption" class="bg-background border border-border text-foreground hover:bg-muted font-medium text-sm py-1.5 px-3 rounded-lg transition-all">
                                        @Localizer["Cancel"]
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Right Column - Metadata -->
                    <div class="space-y-4">
                        <div class="grid grid-cols-2 gap-4 text-sm">
                            <div>
                                <span class="text-muted-foreground">@Localizer["Uploaded"]:</span>
                                <p class="font-medium text-foreground">@Model.TimeAgo</p>
                            </div>
                            <div>
                                <span class="text-muted-foreground">@Localizer["Views"]:</span>
                                <p class="font-medium text-foreground">@Model.ViewCount</p>
                            </div>
                            @if (Model.FileSize > 0)
                            {
                                <div>
                                    <span class="text-muted-foreground">@Localizer["FileSize"]:</span>
                                    <p class="font-medium text-foreground">@Model.FileSizeFormatted</p>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.MimeType))
                            {
                                <div>
                                    <span class="text-muted-foreground">@Localizer["Type"]:</span>
                                    <p class="font-medium text-foreground">@Model.MimeType</p>
                                </div>
                            }
                        </div>

                        <!-- Actions -->
                        <div class="pt-4 border-t border-border">
                            <h4 class="text-sm font-medium text-foreground mb-3">@Localizer["Actions"]</h4>
                            <div class="flex flex-wrap gap-2">
                                <button onclick="setAsProfilePicture('@Model.Id')" 
                                        class="inline-flex items-center justify-center bg-primary/10 text-primary hover:bg-primary hover:text-primary-foreground font-medium text-sm py-2 px-3 rounded-lg transition-all">
                                    <i data-lucide="user" class="w-4 h-4 mr-1"></i>
                                    @Localizer["SetAsProfilePicture"]
                                </button>
                                
                                <button onclick="setAsCoverImage('@Model.Id')" 
                                        class="inline-flex items-center justify-center bg-blue-500/10 text-blue-600 hover:bg-blue-500 hover:text-white font-medium text-sm py-2 px-3 rounded-lg transition-all">
                                    <i data-lucide="image" class="w-4 h-4 mr-1"></i>
                                    @Localizer["SetAsCover"]
                                </button>
                                
                                <button onclick="toggleVisibility('@Model.Id')" 
                                        class="inline-flex items-center justify-center bg-orange-500/10 text-orange-600 hover:bg-orange-500 hover:text-white font-medium text-sm py-2 px-3 rounded-lg transition-all">
                                    <i data-lucide="@(Model.IsPublic ? "eye-off" : "eye")" class="w-4 h-4 mr-1"></i>
                                    @(Model.IsPublic ? Localizer["MakePrivate"] : Localizer["MakePublic"])
                                </button>
                                
                                <button onclick="deleteImage('@Model.Id')" 
                                        class="inline-flex items-center justify-center bg-red-500/10 text-red-600 hover:bg-red-500 hover:text-white font-medium text-sm py-2 px-3 rounded-lg transition-all">
                                    <i data-lucide="trash-2" class="w-4 h-4 mr-1"></i>
                                    @Localizer["Delete"]
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Edit caption functionality
        document.getElementById('editCaptionBtn').addEventListener('click', function() {
            document.getElementById('editCaptionForm').classList.remove('hidden');
            this.style.display = 'none';
        });

        document.getElementById('cancelEditCaption').addEventListener('click', function() {
            document.getElementById('editCaptionForm').classList.add('hidden');
            document.getElementById('editCaptionBtn').style.display = 'block';
        });

        // Caption form submission
        document.getElementById('editCaptionForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.textContent;
            
            submitBtn.disabled = true;
            submitBtn.textContent = '@Localizer["Saving"]...';
            
            fetch(this.action, {
                method: 'POST',
                body: formData,
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || '@Localizer["SaveFailed"]');
                }
            })
            .catch(error => {
                console.error('Save error:', error);
                alert('@Localizer["SaveError"]');
            })
            .finally(() => {
                submitBtn.disabled = false;
                submitBtn.textContent = originalText;
            });
        });

        // Action functions
        function setAsProfilePicture(imageId) {
            if (confirm('@Localizer["ConfirmSetProfilePicture"]')) {
                fetch(`/profile/gallery/set-profile-picture/${imageId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                })
                .then(response => response.json())
                .then(data => {
                    alert(data.message);
                    if (data.success && window.opener) {
                        window.opener.location.reload();
                    }
                });
            }
        }

        function setAsCoverImage(imageId) {
            if (confirm('@Localizer["ConfirmSetCoverImage"]')) {
                fetch(`/profile/gallery/set-cover-image/${imageId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                })
                .then(response => response.json())
                .then(data => {
                    alert(data.message);
                    if (data.success && window.opener) {
                        window.opener.location.reload();
                    }
                });
            }
        }

        function toggleVisibility(imageId) {
            fetch(`/profile/gallery/toggle-visibility/${imageId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || '@Localizer["ActionFailed"]');
                }
            });
        }

        function deleteImage(imageId) {
            if (confirm('@Localizer["ConfirmDeleteImage"]')) {
                fetch(`/profile/gallery/delete/${imageId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        if (window.opener) {
                            window.opener.location.reload();
                            window.close();
                        } else {
                            window.location.href = '/profile/gallery';
                        }
                    } else {
                        alert(data.message || '@Localizer["DeleteFailed"]');
                    }
                });
            }
        }
    </script>
}