@using CommunityCar.Application.Features.Account.ViewModels.Activity
@model ProfileViewAnalyticsVM
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<!-- Analytics Header Matrix -->
<div class="card card-premium overflow-hidden border-0 shadow-lg mb-4 rounded-4">
    <div class="row g-0">
        <div class="col-lg-8 p-4 p-md-5 border-end border-light">
            <div class="mb-5">
                <span class="badge rounded-pill bg-primary-red bg-opacity-10 text-primary-red xx-small fw-black text-uppercase tracking-widest px-3 py-2 border border-primary-red border-opacity-10 mb-3 d-inline-flex align-items-center gap-2">
                    <i class="fas fa-microchip small"></i> @Localizer["AdvancedIntelligence"]
                </span>
                <h1 class="display-4 fw-black text-dark tracking-tighter mb-0">@Localizer["ViewAnalyticsMatrix"]</h1>
            </div>

            <div class="row g-4 pt-2">
                <div class="col-6 col-md-3">
                    <div class="h2 fw-black text-dark mb-1">@Model.Stats.TotalViews.ToString("N0")</div>
                    <div class="xx-small fw-black text-uppercase tracking-widest text-muted opacity-50">@Localizer["TotalViews"]</div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="h2 fw-black text-dark mb-1">@Model.Stats.UniqueViewers.ToString("N0")</div>
                    <div class="xx-small fw-black text-uppercase tracking-widest text-muted opacity-50">@Localizer["UniqueReach"]</div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="h2 fw-black text-dark mb-1">@Model.Stats.WeekViews.ToString("N0")</div>
                    <div class="xx-small fw-black text-uppercase tracking-widest text-muted opacity-50">@Localizer["WeeklyCycle"]</div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="h2 fw-black text-dark mb-1">@((int)Model.Stats.AverageViewDuration)s</div>
                    <div class="xx-small fw-black text-uppercase tracking-widest text-muted opacity-50">@Localizer["AvgEngagement"]</div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 bg-light bg-opacity-30 p-4 p-md-5 d-flex flex-column justify-content-center gap-4">
            @if (Model.Stats.LastViewedAt.HasValue)
            {
                <div class="p-3 bg-white rounded-4 shadow-sm border border-light transition-all hover-translate-y">
                    <div class="h6 fw-black mb-1 text-primary-red">@Model.Stats.LastViewedAt.Value.ToString("MMM dd, HH:mm")</div>
                    <div class="xx-small fw-black text-uppercase tracking-widest text-muted opacity-50">@Localizer["TerminalAccess"]</div>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.Stats.MostCommonViewSource))
            {
                <div class="p-3 bg-white rounded-4 shadow-sm border border-light transition-all hover-translate-y">
                    <div class="h6 fw-black mb-1 text-dark text-capitalize">@Model.Stats.MostCommonViewSource</div>
                    <div class="xx-small fw-black text-uppercase tracking-widest text-muted opacity-50">@Localizer["PrimarySource"]</div>
                </div>
            }
        </div>
    </div>
</div>

<div class="row g-4 mb-4">
    <!-- View Sources Matrix -->
    @if (Model.Stats.ViewSourceBreakdown.Any())
    {
        <div class="col-12 col-xl-7">
            <div class="card card-premium overflow-hidden border-0 shadow-lg rounded-4 h-100">
                <div class="card-header border-0 bg-transparent p-4 p-md-5 pb-0">
                    <h3 class="xx-small fw-black text-dark text-uppercase tracking-widest mb-0 d-flex align-items-center gap-3">
                        <span class="badge bg-primary-red rounded-pill px-3 py-2">@Model.Stats.ViewSourceBreakdown.Count</span>
                        @Localizer["TrafficSourcesIntel"]
                    </h3>
                </div>
                <div class="card-body p-4 p-md-5">
                    <div class="row g-3">
                        @foreach (var source in Model.Stats.ViewSourceBreakdown.OrderByDescending(x => x.Value))
                        {
                            var percentage = (source.Value * 100.0 / Model.Stats.TotalViews);
                            <div class="col-12">
                                <div class="p-4 bg-light bg-opacity-30 rounded-4 border border-light">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h4 class="small fw-black text-dark text-capitalize mb-0">@source.Key</h4>
                                        <span class="h5 fw-black text-primary-red mb-0">@source.Value</span>
                                    </div>
                                    <div class="progress bg-white rounded-pill overflow-hidden shadow-sm" style="height: 8px;">
                                        <div class="progress-bar bg-primary-red transition-all duration-1000" 
                                             role="progressbar" 
                                             style="width: @percentage.ToString("F1")%" 
                                             aria-valuenow="@percentage.ToString("F1")" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100"></div>
                                    </div>
                                    <div class="d-flex justify-content-between mt-2">
                                        <span class="xx-small fw-bold text-muted opacity-50">@Localizer["ContributionRatio"]</span>
                                        <span class="xx-small fw-black text-dark">@percentage.ToString("F1")%</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Top Viewers Intel -->
    @if (Model.TopViewers.Any())
    {
        <div class="col-12 col-xl-5">
            <div class="card card-premium overflow-hidden border-0 shadow-lg rounded-4 h-100">
                <div class="card-header border-0 bg-transparent p-4 p-md-5 pb-0">
                    <h3 class="xx-small fw-black text-dark text-uppercase tracking-widest mb-0 d-flex align-items-center gap-3">
                        <span class="badge bg-dark rounded-pill px-3 py-2">@Model.TopViewers.Count()</span>
                        @Localizer["FrequentAccessNodes"]
                    </h3>
                </div>
                <div class="card-body p-4 p-md-5">
                    <div class="vstack gap-3">
                        @foreach (var viewer in Model.TopViewers.Take(5))
                        {
                            <div class="d-flex align-items-center gap-3 p-3 bg-light bg-opacity-50 rounded-4 border border-light transition-all hover-translate-x">
                                <div class="flex-shrink-0">
                                    <div class="rounded-3 overflow-hidden border border-light shadow-sm" style="width: 50px; height: 50px;">
                                        @if (!string.IsNullOrEmpty(viewer.ViewerProfilePicture))
                                        {
                                            <img src="@viewer.ViewerProfilePicture" alt="@viewer.ViewerName" class="w-100 h-100 object-fit-cover" />
                                        }
                                        else
                                        {
                                            <div class="w-100 h-100 bg-white d-flex align-items-center justify-content-center text-muted">
                                                <i class="fas fa-user small opacity-20"></i>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="flex-grow-1 min-w-0">
                                    <div class="small fw-black text-dark truncate">@(viewer.ViewerName ?? Localizer["AnonymousUser"].Value)</div>
                                    <div class="xx-small text-muted fw-bold opacity-50">@viewer.ViewCount @Localizer["Views"] â€¢ @viewer.LastViewedAt.ToString("MMM dd")</div>
                                </div>
                                <div class="text-end">
                                    <div class="h5 fw-black text-primary-red mb-0">@viewer.ViewCount</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Recent Event Stream -->
@if (Model.RecentViews.Any())
{
    <div class="card card-premium overflow-hidden border-0 shadow-lg rounded-4 mb-4">
        <div class="card-header border-0 bg-transparent p-4 p-md-5 pb-0">
            <h3 class="xx-small fw-black text-dark text-uppercase tracking-widest mb-0 d-flex align-items-center gap-3">
                <span class="badge bg-primary-red rounded-pill px-3 py-2">@Model.RecentViews.Count()</span>
                @Localizer["RecentEventStream"]
            </h3>
        </div>
        <div class="card-body p-4 p-md-5">
            <div class="vstack gap-2">
                @foreach (var view in Model.RecentViews.Take(10))
                {
                    <div class="d-flex align-items-center justify-content-between p-3 border-bottom border-light hover-bg-light transition-all rounded-3">
                        <div class="d-flex align-items-center gap-3">
                            <div class="rounded-pill bg-light d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                <i class="fas @(view.IsAnonymous ? "fa-user-secret" : "fa-user") xx-small opacity-30"></i>
                            </div>
                            <div>
                                <span class="small fw-black text-dark">@(view.ViewerName ?? Localizer["AnonymousUser"].Value)</span>
                                @if (!string.IsNullOrEmpty(view.ViewSource))
                                {
                                    <span class="xx-small text-muted fw-bold ms-2 text-uppercase tracking-widest opacity-40">via @view.ViewSource</span>
                                }
                            </div>
                        </div>
                        <div class="xx-small fw-black text-muted text-uppercase tracking-widest opacity-50">@view.ViewedAt.ToString("MMM dd, HH:mm")</div>
                    </div>
                }
            </div>
        </div>
    </div>
}

<!-- Strategic Actions matrix -->
<div class="d-flex flex-wrap gap-3">
    <a href="@Url.Action("WhoViewedMyProfile")" class="btn btn-primary-red px-5 py-3 rounded-4 xx-small fw-black text-uppercase tracking-widest shadow-lg transition-all hover-translate-y">
        <i class="fas fa-users me-2 small"></i> @Localizer["FullIdentityReport"]
    </a>
    <a href="@Url.Action("MyViewHistory")" class="btn btn-white px-5 py-3 rounded-4 xx-small fw-black text-uppercase tracking-widest border border-light shadow-sm transition-all hover-translate-y">
        <i class="fas fa-history me-2 small"></i> @Localizer["AccessHistoryMatrix"]
    </a>
</div>

<style>
    .xx-small { font-size: 0.6rem; }
    .hover-translate-x:hover { transform: translateX(5px); }
    .hover-bg-light:hover { background-color: rgba(0,0,0,0.02); }
</style>