@using CommunityCar.Application.Features.Account.ViewModels.Activity
@model ProfileViewAnalyticsVM
@{
    ViewData["Title"] = "Profile View Analytics";
    ViewData["PageHeader"] = "View Analytics";
    ViewData["PageDescription"] = "Detailed analytics about your profile views";
}

<div class="max-w-6xl mx-auto space-y-8 animate-in fade-in duration-700">
    <!-- Breadcrumb -->
    <nav class="flex items-center gap-3 text-[10px] font-black uppercase tracking-widest text-muted-foreground/60 px-2">
        <a href="@Url.Action("WhoViewedMyProfile")" class="hover:text-primary transition-colors flex items-center gap-2">
            <i data-lucide="chevron-left" class="w-3.5 h-3.5"></i> Profile Views
        </a>
        <span class="opacity-20">/</span>
        <span class="text-foreground/40">Analytics</span>
    </nav>

    <!-- Analytics Header -->
    <div class="eng-card overflow-hidden">
        <div class="flex flex-col lg:flex-row border-b border-border/30">
            <div class="flex-1 p-8 md:p-12 space-y-6">
                <div class="space-y-4">
                    <div class="flex flex-wrap gap-2">
                        <span class="px-3 py-1 rounded-2xl text-[9px] font-black uppercase tracking-widest bg-purple-500/10 text-purple-600 border border-purple-500/20 flex items-center gap-1.5 shadow-sm">
                            <i data-lucide="bar-chart-3" class="w-3.5 h-3.5"></i> Advanced Analytics
                        </span>
                    </div>
                    <h1 class="text-4xl md:text-5xl font-black text-foreground tracking-tighter leading-[1.1]">Profile View Analytics</h1>
                </div>

                <div class="grid grid-cols-2 md:grid-cols-4 gap-6 pt-4">
                    <div class="space-y-2">
                        <span class="eng-stat-value text-[32px] leading-none tracking-tighter">@Model.Stats.TotalViews.ToString("N0")</span>
                        <span class="eng-stat-label tracking-[0.2em] opacity-50">Total Views</span>
                    </div>
                    <div class="space-y-2">
                        <span class="eng-stat-value text-[32px] leading-none tracking-tighter">@Model.Stats.UniqueViewers.ToString("N0")</span>
                        <span class="eng-stat-label tracking-[0.2em] opacity-50">Unique Viewers</span>
                    </div>
                    <div class="space-y-2">
                        <span class="eng-stat-value text-[32px] leading-none tracking-tighter">@Model.Stats.WeekViews.ToString("N0")</span>
                        <span class="eng-stat-label tracking-[0.2em] opacity-50">This Week</span>
                    </div>
                    <div class="space-y-2">
                        <span class="eng-stat-value text-[32px] leading-none tracking-tighter">@((int)Model.Stats.AverageViewDuration)s</span>
                        <span class="eng-stat-label tracking-[0.2em] opacity-50">Avg Duration</span>
                    </div>
                </div>
            </div>

            <div class="lg:w-72 bg-muted/20 border-l border-border/30 p-8 flex flex-col justify-center gap-8">
                @if (Model.Stats.LastViewedAt.HasValue)
                {
                    <div class="space-y-1">
                        <span class="eng-stat-value text-[20px] leading-none tracking-tighter">@Model.Stats.LastViewedAt.Value.ToString("MMM dd, HH:mm")</span>
                        <span class="eng-stat-label tracking-[0.2em] opacity-50">Last Viewed</span>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.Stats.MostCommonViewSource))
                {
                    <div class="space-y-1">
                        <span class="eng-stat-value text-[16px] leading-none tracking-tighter capitalize">@Model.Stats.MostCommonViewSource</span>
                        <span class="eng-stat-label tracking-[0.2em] opacity-50">Top Source</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- View Sources Breakdown -->
    @if (Model.Stats.ViewSourceBreakdown.Any())
    {
        <div class="eng-card overflow-hidden">
            <div class="border-b border-border/30 p-8 md:p-12">
                <h3 class="text-xl font-black text-foreground tracking-tighter flex items-center gap-3">
                    <span class="flex items-center justify-center w-8 h-8 rounded-2xl bg-blue-500 text-white text-xs leading-none">@Model.Stats.ViewSourceBreakdown.Count</span>
                    View Sources
                </h3>
            </div>

            <div class="p-8 md:p-12">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    @foreach (var source in Model.Stats.ViewSourceBreakdown.OrderByDescending(x => x.Value))
                    {
                        <div class="eng-card p-6">
                            <div class="flex items-center justify-between mb-4">
                                <h4 class="text-lg font-black text-foreground capitalize">@source.Key</h4>
                                <span class="text-2xl font-black text-primary">@source.Value</span>
                            </div>
                            <div class="w-full bg-muted/40 rounded-full h-2">
                                <div class="bg-primary h-2 rounded-full" style="width: @((source.Value * 100.0 / Model.Stats.TotalViews).ToString("F1"))%"></div>
                            </div>
                            <div class="text-xs text-muted-foreground mt-2">
                                @((source.Value * 100.0 / Model.Stats.TotalViews).ToString("F1"))% of total views
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Top Viewers -->
    @if (Model.TopViewers.Any())
    {
        <div class="eng-card overflow-hidden">
            <div class="border-b border-border/30 p-8 md:p-12">
                <h3 class="text-xl font-black text-foreground tracking-tighter flex items-center gap-3">
                    <span class="flex items-center justify-center w-8 h-8 rounded-2xl bg-green-500 text-white text-xs leading-none">@Model.TopViewers.Count()</span>
                    Top Viewers
                </h3>
            </div>

            <div class="p-8 md:p-12">
                <div class="space-y-4">
                    @foreach (var viewer in Model.TopViewers.Take(5))
                    {
                        <div class="flex items-center gap-4 p-4 bg-muted/20 rounded-2xl">
                            <div class="w-12 h-12 rounded-2xl bg-muted border border-border/50 overflow-hidden shadow-inner flex-shrink-0">
                                @if (!string.IsNullOrEmpty(viewer.ViewerProfilePicture))
                                {
                                    <img src="@viewer.ViewerProfilePicture" alt="@viewer.ViewerName" class="w-full h-full object-cover" />
                                }
                                else
                                {
                                    <div class="w-full h-full flex items-center justify-center text-muted-foreground">
                                        <i data-lucide="user" class="w-6 h-6"></i>
                                    </div>
                                }
                            </div>
                            <div class="flex-1">
                                <h4 class="font-black text-foreground">@(viewer.ViewerName ?? "Anonymous User")</h4>
                                <div class="text-sm text-muted-foreground">
                                    @viewer.ViewCount views â€¢ Last: @viewer.LastViewedAt.ToString("MMM dd")
                                </div>
                            </div>
                            <div class="text-right">
                                <div class="text-lg font-black text-primary">@viewer.ViewCount</div>
                                <div class="text-xs text-muted-foreground">views</div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Recent Views -->
    @if (Model.RecentViews.Any())
    {
        <div class="eng-card overflow-hidden">
            <div class="border-b border-border/30 p-8 md:p-12">
                <h3 class="text-xl font-black text-foreground tracking-tighter flex items-center gap-3">
                    <span class="flex items-center justify-center w-8 h-8 rounded-2xl bg-orange-500 text-white text-xs leading-none">@Model.RecentViews.Count()</span>
                    Recent Views
                </h3>
            </div>

            <div class="p-8 md:p-12">
                <div class="space-y-3">
                    @foreach (var view in Model.RecentViews.Take(10))
                    {
                        <div class="flex items-center gap-4 p-3 hover:bg-muted/10 rounded-xl transition-colors">
                            <div class="w-8 h-8 rounded-xl bg-muted border border-border/50 overflow-hidden flex-shrink-0">
                                @if (!view.IsAnonymous && !string.IsNullOrEmpty(view.ViewerProfilePicture))
                                {
                                    <img src="@view.ViewerProfilePicture" alt="@view.ViewerName" class="w-full h-full object-cover" />
                                }
                                else
                                {
                                    <div class="w-full h-full flex items-center justify-center text-muted-foreground">
                                        <i data-lucide="@(view.IsAnonymous ? "eye" : "user")" class="w-4 h-4"></i>
                                    </div>
                                }
                            </div>
                            <div class="flex-1">
                                <span class="font-medium text-foreground">@(view.ViewerName ?? "Anonymous User")</span>
                                @if (!string.IsNullOrEmpty(view.ViewSource))
                                {
                                    <span class="text-xs text-muted-foreground ml-2 capitalize">via @view.ViewSource</span>
                                }
                            </div>
                            <div class="text-sm text-muted-foreground">
                                @view.ViewedAt.ToString("MMM dd, HH:mm")
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Quick Actions -->
    <div class="flex flex-wrap gap-4">
        <a href="@Url.Action("WhoViewedMyProfile")" class="flex items-center gap-2 px-6 py-3 bg-primary text-primary-foreground font-black text-xs uppercase tracking-[0.2em] rounded-2xl hover:bg-primary/80 transition-all">
            <i data-lucide="users" class="w-4 h-4"></i>
            View All Viewers
        </a>
        <a href="@Url.Action("MyViewHistory")" class="flex items-center gap-2 px-6 py-3 bg-muted/40 text-foreground font-black text-xs uppercase tracking-[0.2em] rounded-2xl border border-border/50 hover:bg-muted/60 transition-all">
            <i data-lucide="history" class="w-4 h-4"></i>
            My View History
        </a>
    </div>
</div>