@using CommunityCar.Application.Features.Account.ViewModels.Activity
@model WhoViewedMyProfileVM
@{
    ViewData["Title"] = "Who Viewed My Profile";
    ViewData["PageHeader"] = "Profile Views";
    ViewData["PageDescription"] = "See who has been viewing your profile";
}

<div class="max-w-6xl mx-auto space-y-8 animate-in fade-in duration-700">
    <!-- Breadcrumb -->
    <nav class="flex items-center gap-3 text-[10px] font-black uppercase tracking-widest text-muted-foreground/60 px-2">
        <a href="@Url.Action("Index", "Profile")" class="hover:text-primary transition-colors flex items-center gap-2">
            <i data-lucide="chevron-left" class="w-3.5 h-3.5"></i> Profile
        </a>
        <span class="opacity-20">/</span>
        <span class="text-foreground/40">Profile Views</span>
    </nav>

    <!-- Stats Overview -->
    <div class="eng-card overflow-hidden">
        <div class="flex flex-col lg:flex-row border-b border-border/30">
            <div class="flex-1 p-8 md:p-12 space-y-6">
                <div class="space-y-4">
                    <div class="flex flex-wrap gap-2">
                        <span class="px-3 py-1 rounded-2xl text-[9px] font-black uppercase tracking-widest bg-blue-500/10 text-blue-600 border border-blue-500/20 flex items-center gap-1.5 shadow-sm">
                            <i data-lucide="eye" class="w-3.5 h-3.5"></i> Profile Analytics
                        </span>
                    </div>
                    <h1 class="text-4xl md:text-5xl font-black text-foreground tracking-tighter leading-[1.1]">Who Viewed My Profile</h1>
                </div>

                <div class="grid grid-cols-2 md:grid-cols-4 gap-6 pt-4">
                    <div class="space-y-2">
                        <span class="eng-stat-value text-[32px] leading-none tracking-tighter">@Model.Stats.TotalViews.ToString("N0")</span>
                        <span class="eng-stat-label tracking-[0.2em] opacity-50">Total Views</span>
                    </div>
                    <div class="space-y-2">
                        <span class="eng-stat-value text-[32px] leading-none tracking-tighter">@Model.Stats.UniqueViewers.ToString("N0")</span>
                        <span class="eng-stat-label tracking-[0.2em] opacity-50">Unique Viewers</span>
                    </div>
                    <div class="space-y-2">
                        <span class="eng-stat-value text-[32px] leading-none tracking-tighter">@Model.Stats.TodayViews.ToString("N0")</span>
                        <span class="eng-stat-label tracking-[0.2em] opacity-50">Today</span>
                    </div>
                    <div class="space-y-2">
                        <span class="eng-stat-value text-[32px] leading-none tracking-tighter">@Model.Stats.WeekViews.ToString("N0")</span>
                        <span class="eng-stat-label tracking-[0.2em] opacity-50">This Week</span>
                    </div>
                </div>
            </div>

            <div class="lg:w-72 bg-muted/20 border-l border-border/30 p-8 flex flex-col justify-center gap-8">
                @if (Model.Stats.LastViewedAt.HasValue)
                {
                    <div class="space-y-1">
                        <span class="eng-stat-value text-[20px] leading-none tracking-tighter">@Model.Stats.LastViewedAt.Value.ToString("MMM dd, HH:mm")</span>
                        <span class="eng-stat-label tracking-[0.2em] opacity-50">Last Viewed</span>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.Stats.MostCommonViewSource))
                {
                    <div class="space-y-1">
                        <span class="eng-stat-value text-[16px] leading-none tracking-tighter capitalize">@Model.Stats.MostCommonViewSource</span>
                        <span class="eng-stat-label tracking-[0.2em] opacity-50">Top Source</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Recent Viewers -->
    <div class="eng-card overflow-hidden">
        <div class="border-b border-border/30 p-8 md:p-12">
            <h3 class="text-xl font-black text-foreground tracking-tighter flex items-center gap-3">
                <span class="flex items-center justify-center w-8 h-8 rounded-2xl bg-primary text-primary-foreground text-xs leading-none">@Model.Viewers.Count()</span>
                Recent Viewers
            </h3>
        </div>

        <div class="p-8 md:p-12">
            @if (Model.Viewers.Any())
            {
                <div class="space-y-6">
                    @foreach (var viewer in Model.Viewers)
                    {
                        <div class="relative group/viewer animate-in fade-in slide-in-from-bottom-4 transition-all hover:-translate-y-1">
                            <div class="eng-card p-6 md:p-8">
                                <div class="flex items-center gap-6">
                                    <!-- Profile Picture -->
                                    <div class="w-16 h-16 rounded-2xl bg-muted border border-border/50 overflow-hidden shadow-inner flex-shrink-0">
                                        @if (!string.IsNullOrEmpty(viewer.ViewerProfilePicture))
                                        {
                                            <img src="@viewer.ViewerProfilePicture" alt="@viewer.ViewerName" class="w-full h-full object-cover" />
                                        }
                                        else
                                        {
                                            <div class="w-full h-full flex items-center justify-center text-muted-foreground">
                                                <i data-lucide="user" class="w-8 h-8"></i>
                                            </div>
                                        }
                                    </div>

                                    <div class="flex-1 space-y-3">
                                        <!-- Viewer Info -->
                                        <div class="flex items-center justify-between">
                                            <div class="space-y-1">
                                                <h4 class="text-lg font-black text-foreground tracking-tight">@(viewer.ViewerName ?? "Anonymous User")</h4>
                                                <div class="flex items-center gap-4 text-sm text-muted-foreground">
                                                    @if (!string.IsNullOrEmpty(viewer.ViewerLocation))
                                                    {
                                                        <span class="flex items-center gap-1">
                                                            <i data-lucide="map-pin" class="w-3.5 h-3.5"></i>
                                                            @viewer.ViewerLocation
                                                        </span>
                                                    }
                                                    @if (viewer.IsFollowing)
                                                    {
                                                        <span class="px-2 py-1 rounded-xl text-[9px] font-black uppercase tracking-widest bg-green-500/10 text-green-600 border border-green-500/20">
                                                            @if (viewer.IsMutualFollowing)
                                                            {
                                                                <text>Mutual Following</text>
                                                            }
                                                            else
                                                            {
                                                                <text>Following You</text>
                                                            }
                                                        </span>
                                                    }
                                                </div>
                                            </div>
                                            <div class="text-right space-y-1">
                                                <div class="text-sm font-black text-foreground">@viewer.ViewCount views</div>
                                                <div class="text-xs text-muted-foreground">@viewer.LastViewedAt.ToString("MMM dd, HH:mm")</div>
                                            </div>
                                        </div>

                                        <!-- View Stats -->
                                        <div class="grid grid-cols-3 gap-4 pt-3 border-t border-border/20">
                                            <div class="text-center">
                                                <div class="text-sm font-black text-foreground">@viewer.ViewCount</div>
                                                <div class="text-xs text-muted-foreground uppercase tracking-widest">Views</div>
                                            </div>
                                            <div class="text-center">
                                                <div class="text-sm font-black text-foreground">@((int)viewer.AverageViewDuration.TotalSeconds)s</div>
                                                <div class="text-xs text-muted-foreground uppercase tracking-widest">Avg Duration</div>
                                            </div>
                                            <div class="text-center">
                                                <div class="text-sm font-black text-foreground">@((DateTime.Now - viewer.FirstViewedAt).Days)d</div>
                                                <div class="text-xs text-muted-foreground uppercase tracking-widest">First View</div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Actions -->
                                    <div class="flex flex-col gap-2">
                                        <a href="@Url.Action("Details", "Profile", new { id = viewer.ViewerId })" class="w-12 h-12 flex items-center justify-center rounded-2xl bg-muted/30 border border-border/50 hover:border-primary hover:text-primary transition-all active:scale-90 group/btn">
                                            <i data-lucide="user" class="w-5 h-5 group-hover/btn:scale-110 transition-transform"></i>
                                        </a>
                                        @if (!viewer.IsFollowing)
                                        {
                                            <button onclick="followUser('@viewer.ViewerId')" class="w-12 h-12 flex items-center justify-center rounded-2xl bg-primary/10 border border-primary/20 text-primary hover:bg-primary hover:text-primary-foreground transition-all active:scale-90 group/btn">
                                                <i data-lucide="user-plus" class="w-5 h-5 group-hover/btn:scale-110 transition-transform"></i>
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.HasPreviousPage || Model.HasNextPage)
                {
                    <div class="flex justify-center gap-4 mt-12">
                        @if (Model.HasPreviousPage)
                        {
                            <a href="@Url.Action("WhoViewedMyProfile", new { page = Model.Page - 1, pageSize = Model.PageSize })" class="px-6 py-3 bg-muted/40 text-foreground font-black text-xs uppercase tracking-[0.2em] rounded-2xl border border-border/50 hover:bg-muted/60 transition-all">
                                Previous
                            </a>
                        }
                        @if (Model.HasNextPage)
                        {
                            <a href="@Url.Action("WhoViewedMyProfile", new { page = Model.Page + 1, pageSize = Model.PageSize })" class="px-6 py-3 bg-primary text-primary-foreground font-black text-xs uppercase tracking-[0.2em] rounded-2xl hover:bg-primary/80 transition-all">
                                Next
                            </a>
                        }
                    </div>
                }
            }
            else
            {
                <div class="py-20 flex flex-col items-center justify-center text-center bg-muted/10 border-2 border-dashed border-border/40 rounded-[2.5rem]">
                    <div class="w-16 h-16 bg-muted/40 rounded-2xl flex items-center justify-center mb-6">
                        <i data-lucide="eye-off" class="w-8 h-8 text-muted-foreground opacity-20"></i>
                    </div>
                    <h4 class="text-xl font-black text-foreground tracking-tight underline decoration-primary/40 decoration-4 underline-offset-8 mb-3">No Profile Views Yet</h4>
                    <p class="text-xs font-medium text-muted-foreground uppercase tracking-widest opacity-60">Your profile views will appear here once people start visiting your profile.</p>
                </div>
            }
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="flex flex-wrap gap-4">
        <a href="@Url.Action("ViewAnalytics")" class="flex items-center gap-2 px-6 py-3 bg-primary text-primary-foreground font-black text-xs uppercase tracking-[0.2em] rounded-2xl hover:bg-primary/80 transition-all">
            <i data-lucide="bar-chart-3" class="w-4 h-4"></i>
            View Analytics
        </a>
        <a href="@Url.Action("MyViewHistory")" class="flex items-center gap-2 px-6 py-3 bg-muted/40 text-foreground font-black text-xs uppercase tracking-[0.2em] rounded-2xl border border-border/50 hover:bg-muted/60 transition-all">
            <i data-lucide="history" class="w-4 h-4"></i>
            My View History
        </a>
    </div>
</div>

@section Scripts {
    <script>
        function followUser(userId) {
            // Implementation for following a user
            console.log('Following user:', userId);
        }
    </script>
}