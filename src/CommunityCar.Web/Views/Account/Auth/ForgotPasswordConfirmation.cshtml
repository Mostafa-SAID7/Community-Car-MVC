@{
    ViewData["Title"] = "Password Recovery Dispatched";
    Layout = "_AuthLayout";
}

<div class="container min-vh-100 d-flex flex-column justify-content-center py-5 animate-in fade-in slide-in-from-bottom-8 duration-1000">
    <div class="text-center mb-5">
        <div class="position-relative d-inline-flex align-items-center justify-content-center mb-4 group text-center">
            <div class="position-absolute inset-0 bg-primary opacity-10 rounded-circle blur-2xl"></div>
            <div class="position-relative w-24 h-24 rounded-4 bg-muted-subtle border border-border d-flex align-items-center justify-content-center shadow-xl transform rotate-3 hover:rotate-0 transition-transform duration-500" style="width: 96px; height: 96px;">
                <div class="position-relative">
                    <i data-lucide="shield-ellipsis" class="w-12 h-12 text-primary opacity-30" style="width: 48px; height: 48px;"></i>
                    <i data-lucide="mail" class="w-8 h-8 text-primary position-absolute top-50 start-50 translate-middle" style="width: 32px; height: 32px;"></i>
                </div>
            </div>
        </div>
        
        <div class="mb-5">
            <h1 class="display-5 fw-black text-gradient tracking-tighter mb-2">Instructions Sent</h1>
            <p class="text-xs fw-bold text-muted-foreground text-uppercase tracking-widest opacity-60">Credentials restoration in progress</p>
        </div>
    </div>

    <div class="card card-premium shadow-lg mx-auto text-center" style="max-width: 500px;">
        <div class="card-body p-5">
            <div class="mb-5">
                <p class="text-sm fw-medium text-foreground opacity-75 leading-relaxed text-uppercase tracking-wide">
                    If the provided frequency is registered in our network, a restoration link has been dispatched. 
                </p>
                <div class="h-1 bg-primary-red bg-opacity-10 rounded-pill mx-auto mt-4 mb-4" style="width: 40px;"></div>
                <p class="text-[10px] fw-black text-primary-red text-uppercase tracking-[0.2em] animate-pulse mb-0">Scanning inbox for payload...</p>
            </div>
            
            <div class="pt-3">
                <a asp-action="Login" class="btn btn-primary-red w-100 py-3 rounded-4 fw-black text-uppercase tracking-widest text-xs shadow-lg d-flex align-items-center justify-content-center gap-2">
                    Back to Gateway <i data-lucide="arrow-right" class="w-4 h-4"></i>
                </a>
            </div>
        </div>
    </div>

    <p class="text-center text-[9px] fw-black text-uppercase tracking-[0.3em] text-muted-foreground opacity-20 mt-5">Secure Recovery Protocol v4.0</p>
</div>
