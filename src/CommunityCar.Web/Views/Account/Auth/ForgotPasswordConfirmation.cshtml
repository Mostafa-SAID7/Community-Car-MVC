@{
    ViewData["Title"] = "Password Recovery Dispatched";
    Layout = "_AuthLayout";
}

<div class="max-w-md mx-auto space-y-10 animate-in fade-in slide-in-from-bottom-8 duration-1000">
    <div class="text-center space-y-6">
        <div class="relative inline-flex items-center justify-center">
            <div class="absolute inset-0 bg-primary/10 rounded-full blur-2xl"></div>
            <div class="relative w-24 h-24 rounded-[2rem] bg-background border border-border flex items-center justify-center shadow-xl transform rotate-3 hover:rotate-0 transition-transform duration-500">
                <div class="relative">
                    <i data-lucide="shield-ellipsis" class="w-12 h-12 text-primary opacity-30"></i>
                    <i data-lucide="mail" class="w-8 h-8 text-primary absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"></i>
                </div>
            </div>
        </div>
        
        <div class="space-y-2">
            <h1 class="text-4xl font-black text-foreground tracking-tighter">Instructions Sent</h1>
            <p class="text-sm font-medium text-muted-foreground uppercase tracking-widest opacity-60">Credentials restoration in progress</p>
        </div>
    </div>

    <div class="bg-card/40 backdrop-blur-xl border border-border/50 rounded-[2.5rem] p-10 shadow-2xl relative overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-primary/5 rounded-full blur-2xl -mr-16 -mt-16"></div>
        
        <div class="space-y-10 text-center relative">
            <p class="text-sm font-medium text-foreground/70 leading-relaxed uppercase tracking-wide">
                If the provided frequency is registered in our network, a restoration link has been dispatched. 
                <span class="block mt-4 text-[10px] font-black text-primary uppercase tracking-[0.2em] animate-pulse">Scanning inbox for payload...</span>
            </p>
            
            <div class="pt-6">
                <a asp-action="Login" class="inline-flex w-full items-center justify-center px-8 py-5 bg-foreground text-background font-black text-xs uppercase tracking-[0.2em] rounded-2xl shadow-xl hover:-translate-y-0.5 active:scale-[0.98] transition-all gap-3">
                    Back to Gateway <i data-lucide="arrow-right" class="w-4 h-4"></i>
                </a>
            </div>
        </div>
    </div>

    <p class="text-center text-[9px] font-black uppercase tracking-[0.3em] text-muted-foreground opacity-20">Secure Recovery Protocol v4.0</p>
</div>