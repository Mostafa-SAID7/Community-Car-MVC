@model CommunityCar.Application.Features.Account.ViewModels.Authentication.ForgotPasswordVM
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> SharedLocalizer
@inject IStringLocalizer<AccountResource> AccountLocalizer
@{
    ViewData["Title"] = AccountLocalizer["ForgotPassword"];
    ViewData["FullWidth"] = true; // Use wide container
    Layout = "_AuthLayout";
}

<div class="login-grid">
    <!-- Right Side: Form -->
    <div class="p-8 sm:p-10 flex flex-col justify-center">
        <div class="space-y-6 max-w-md mx-auto w-full">
            <!-- Logo and Header -->
            <div class="text-center">
                <div class="inline-flex items-center justify-center w-14 h-14 rounded-2xl bg-gradient-to-br from-primary to-primary/80 text-primary-foreground mb-4 shadow-lg">
                    <i data-lucide="key" class="w-7 h-7"></i>
                </div>
                <h1 class="text-2xl font-bold text-foreground mb-1">@AccountLocalizer["ForgotPassword"]</h1>
                <p class="text-sm text-muted-foreground">@AccountLocalizer["ForgotPasswordDescription"]</p>
            </div>

            <!-- Form -->
            <form asp-action="ForgotPassword" method="post" class="space-y-4">
                <div asp-validation-summary="ModelOnly" class="p-3 rounded-lg bg-destructive/10 text-destructive text-sm"></div>

                <div class="space-y-1.5">
                    <label asp-for="Email" class="text-xs font-medium text-muted-foreground uppercase tracking-wide">@AccountLocalizer["Email"]</label>
                    <input asp-for="Email" class="w-full px-4 py-3 bg-background/50 border border-border rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all" placeholder="name@work-email.com" autocomplete="email" />
                    <span asp-validation-for="Email" class="text-destructive text-xs"></span>
                </div>

                <button type="submit" class="w-full bg-primary text-primary-foreground hover:bg-primary/90 font-semibold py-3 px-4 rounded-lg transition-all btn-glow flex items-center justify-center gap-2">
                    @AccountLocalizer["SendResetLink"]
                </button>
            </form>

            <!-- Footer -->
            <div class="text-center">
                <p class="text-sm text-muted-foreground">
                    <a asp-action="Login" class="text-primary hover:text-primary/80 transition-colors font-semibold flex items-center justify-center gap-2">
                        <i data-lucide="arrow-left" class="w-4 h-4"></i>
                        @AccountLocalizer["BackToSignIn"]
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}