@model CommunityCar.Application.Features.Account.ViewModels.Authentication.ForgotPasswordVM
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> SharedLocalizer
@inject IStringLocalizer<AccountResource> AccountLocalizer
@{
    ViewData["Title"] = AccountLocalizer["ForgotPassword"];
    Layout = "_AuthLayout";
    ViewData["AuthSideImage"] = "https://images.unsplash.com/photo-1554224155-1696413565d3?q=80&w=2014&auto=format&fit=crop";
    ViewData["AuthSideCaption"] = "Securely recover your account and get back to managing your business.";
}

<!-- Logo Section -->
<a href="/" class="d-flex align-items-center gap-3 text-decoration-none text-dark mb-5">
    <i data-lucide="zap" class="text-warning" style="width: 24px; height: 24px;"></i>
    <span class="h4 fw-black mb-0">Havenix.</span>
</a>

<h1 class="display-5 fw-black mb-2">Recuperate Access</h1>
<p class="text-muted fw-medium mb-4">Enter your email to receive recovery protocols</p>

<!-- Forgot Password Form -->
<form asp-action="ForgotPassword" method="post" id="forgot-password-form">
    @Html.AntiForgeryToken()
    
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger border-0 mb-4 p-3" style="font-size: 0.85rem; border-radius: 0.75rem; background: #fef2f2; color: #991b1b;">
            @Html.ValidationSummary(false)
        </div>
    }

    <!-- Email Field -->
    <div class="mb-4">
        <label class="form-label text-uppercase fw-bold small text-muted" asp-for="Email">Email Address</label>
        <input asp-for="Email" class="form-control rounded-3 py-3 bg-light border-0" placeholder="Enter your registered email" required />
        <span asp-validation-for="Email" class="text-danger xx-small mt-1 d-block"></span>
    </div>

    <!-- Submit -->
    <button type="submit" class="btn btn-dark w-100 py-3 rounded-3 fw-bold" id="reset-button">
        Send Recovery Link
    </button>
</form>

<div class="text-center mt-5 text-muted fw-medium">
    Remembered your password? <a asp-action="Login" class="text-dark fw-bold text-decoration-none">Back to Sign In</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('forgot-password-form');
            const submitBtn = document.getElementById('reset-button');
            
            form.addEventListener('submit', function() {
                if ($(form).valid()) {
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Sending...';
                }
            });
        });
    </script>
}
