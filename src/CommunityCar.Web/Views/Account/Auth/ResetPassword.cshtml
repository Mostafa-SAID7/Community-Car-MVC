@model CommunityCar.Application.Features.Account.ViewModels.Authentication.ResetPasswordVM
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> SharedLocalizer
@inject IStringLocalizer<AccountResource> AccountLocalizer
@{
    ViewData["Title"] = AccountLocalizer["ResetPassword"];
    Layout = "_AuthLayout";
    ViewData["AuthSideImage"] = "https://images.unsplash.com/photo-1633265486232-44258849b380?q=80&w=2070&auto=format&fit=crop";
    ViewData["AuthSideCaption"] = "Establish your new credentials and regain full control of your automation hub.";
}

<!-- Logo Section -->
<a href="/" class="auth-logo">
    <i data-lucide="zap" class="w-6 h-6 text-warning"></i>
    <span>Havenix.</span>
</a>

<h1 class="auth-title">Reset Password</h1>
<p class="auth-subtitle">Define your new access credentials</p>

<!-- Reset Password Form -->
<form asp-action="ResetPassword" method="post" id="reset-password-form">
    @Html.AntiForgeryToken()
    <input asp-for="Token" type="hidden" />
    
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger border-0 mb-4 p-3" style="font-size: 0.85rem; border-radius: 0.75rem; background: #fef2f2; color: #991b1b;">
            @Html.ValidationSummary(false)
        </div>
    }

    <!-- Email Field (Readonly often better here but keeping as is for model binding) -->
    <div class="auth-input-group">
        <label class="auth-label" asp-for="Email">Email Address</label>
        <div class="auth-input-wrapper">
            <input asp-for="Email" class="auth-input" readonly />
        </div>
    </div>

    <!-- New Password -->
    <div class="auth-input-group">
        <label class="auth-label" asp-for="NewPassword">New Password</label>
        <div class="auth-input-wrapper">
            <input asp-for="NewPassword" type="password" class="auth-input" placeholder="••••••••" required />
        </div>
        <span asp-validation-for="NewPassword" class="text-danger xx-small mt-1 px-1"></span>
    </div>

    <!-- Confirm Password -->
    <div class="auth-input-group">
        <label class="auth-label" asp-for="ConfirmPassword">Confirm New Password</label>
        <div class="auth-input-wrapper">
            <input asp-for="ConfirmPassword" type="password" class="auth-input" placeholder="••••••••" required />
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger xx-small mt-1 px-1"></span>
    </div>

    <!-- Submit -->
    <button type="submit" class="btn-auth-primary" id="submit-button">
        Update Password
    </button>
</form>

<div class="auth-footer mt-5">
    <a asp-action="Login" class="auth-footer-link">Back to Sign In</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('reset-password-form');
            const submitBtn = document.getElementById('submit-button');
            
            form.addEventListener('submit', function() {
                if ($(form).valid()) {
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Updating...';
                }
            });
        });
    </script>
}
