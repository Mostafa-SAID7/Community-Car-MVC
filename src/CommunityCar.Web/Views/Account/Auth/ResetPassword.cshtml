@model CommunityCar.Application.Features.Account.ViewModels.Authentication.ResetPasswordVM
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> SharedLocalizer
@inject IStringLocalizer<AccountResource> AccountLocalizer
@{
    ViewData["Title"] = AccountLocalizer["ResetPassword"];
    Layout = "_AuthLayout";
    ViewData["AuthSideImage"] = "https://images.unsplash.com/photo-1633265486232-44258849b380?q=80&w=2070&auto=format&fit=crop";
    ViewData["AuthSideCaption"] = "Establish your new credentials and regain full control of your automation hub.";
}

<!-- Logo Section -->
<a href="/" class="d-flex align-items-center gap-3 text-decoration-none text-dark mb-5">
    <i data-lucide="zap" class="text-warning" style="width: 24px; height: 24px;"></i>
    <span class="h4 fw-black mb-0">Havenix.</span>
</a>

<h1 class="display-5 fw-black mb-2">Reset Password</h1>
<p class="text-muted fw-medium mb-4">Define your new access credentials</p>

<!-- Reset Password Form -->
<form asp-action="ResetPassword" method="post" id="reset-password-form">
    @Html.AntiForgeryToken()
    <input asp-for="Token" type="hidden" />
    
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger border-0 mb-4 p-3" style="font-size: 0.85rem; border-radius: 0.75rem; background: #fef2f2; color: #991b1b;">
            @Html.ValidationSummary(false)
        </div>
    }

    <!-- Email Field (Readonly often better here but keeping as is for model binding) -->
    <div class="mb-4">
        <label class="form-label text-uppercase fw-bold small text-muted" asp-for="Email">Email Address</label>
        <input asp-for="Email" class="form-control rounded-3 py-3 bg-light border-0" readonly />
    </div>

    <!-- New Password -->
    <div class="mb-4">
        <label class="form-label text-uppercase fw-bold small text-muted" asp-for="NewPassword">New Password</label>
        <input asp-for="NewPassword" type="password" class="form-control rounded-3 py-3 bg-light border-0" placeholder="••••••••" required />
        <span asp-validation-for="NewPassword" class="text-danger xx-small mt-1 d-block"></span>
    </div>

    <!-- Confirm Password -->
    <div class="mb-4">
        <label class="form-label text-uppercase fw-bold small text-muted" asp-for="ConfirmPassword">Confirm New Password</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control rounded-3 py-3 bg-light border-0" placeholder="••••••••" required />
        <span asp-validation-for="ConfirmPassword" class="text-danger xx-small mt-1 d-block"></span>
    </div>

    <!-- Submit -->
    <button type="submit" class="btn btn-dark w-100 py-3 rounded-3 fw-bold" id="submit-button">
        Update Password
    </button>
</form>

<div class="text-center mt-5 text-muted fw-medium">
    <a asp-action="Login" class="text-dark fw-bold text-decoration-none">Back to Sign In</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('reset-password-form');
            const submitBtn = document.getElementById('submit-button');
            
            form.addEventListener('submit', function() {
                if ($(form).valid()) {
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Updating...';
                }
            });
        });
    </script>
}
