@model CommunityCar.Application.Features.Account.ViewModels.Authentication.ChangePasswordVM
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = "Change Password";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
}

<div class="profile-container py-4 animate-in fade-in slide-in-from-bottom-4 duration-500">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="leetcode-card p-8">
            <!-- Header -->
            <div class="mb-8 border-b border-profile-border pb-4">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-2xl font-black flex items-center mb-2">
                            <i data-lucide="key" class="w-6 h-6 mr-3 text-primary"></i>
                            Change Password
                        </h1>
                        <p class="text-muted-foreground">Update your account password for better security</p>
                    </div>
                    <a href="/account/security" class="inline-flex items-center gap-2 px-4 py-2 bg-background border border-border hover:bg-accent rounded-lg text-sm font-medium transition-all">
                        <i data-lucide="arrow-left" class="w-4 h-4"></i>
                        Back to Security
                    </a>
                </div>
            </div>

            <!-- Password Requirements Info -->
            <div class="bg-blue-50 dark:bg-blue-950/20 border border-blue-200 dark:border-blue-800 rounded-2xl p-6 mb-8">
                <h3 class="text-lg font-bold text-blue-600 mb-3 flex items-center gap-2">
                    <i data-lucide="info" class="w-5 h-5"></i>
                    Password Requirements
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 text-sm text-blue-700 dark:text-blue-300">
                    <div class="flex items-center gap-2">
                        <i data-lucide="check" class="w-4 h-4"></i>
                        At least 8 characters long
                    </div>
                    <div class="flex items-center gap-2">
                        <i data-lucide="check" class="w-4 h-4"></i>
                        Contains uppercase letters
                    </div>
                    <div class="flex items-center gap-2">
                        <i data-lucide="check" class="w-4 h-4"></i>
                        Contains lowercase letters
                    </div>
                    <div class="flex items-center gap-2">
                        <i data-lucide="check" class="w-4 h-4"></i>
                        Contains numbers
                    </div>
                    <div class="flex items-center gap-2">
                        <i data-lucide="check" class="w-4 h-4"></i>
                        Contains special characters
                    </div>
                    <div class="flex items-center gap-2">
                        <i data-lucide="check" class="w-4 h-4"></i>
                        At least 4 unique characters
                    </div>
                </div>
            </div>

            <!-- Change Password Form -->
            <form asp-action="ChangePassword" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="p-4 rounded-lg bg-destructive/10 text-destructive text-sm"></div>

                <div class="space-y-2">
                    <label asp-for="OldPassword" class="block text-sm font-medium text-foreground">Current Password</label>
                    <div class="relative">
                        <input asp-for="OldPassword" type="password" class="w-full px-4 py-3 bg-background border border-border rounded-lg text-foreground focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all pr-12" placeholder="Enter your current password" />
                        <button type="button" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-muted-foreground hover:text-foreground transition-colors" onclick="togglePassword(this)">
                            <i data-lucide="eye" class="w-5 h-5"></i>
                        </button>
                    </div>
                    <span asp-validation-for="OldPassword" class="text-destructive text-sm"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="NewPassword" class="block text-sm font-medium text-foreground">New Password</label>
                    <div class="relative">
                        <input asp-for="NewPassword" type="password" class="w-full px-4 py-3 bg-background border border-border rounded-lg text-foreground focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all pr-12" placeholder="Enter your new password" />
                        <button type="button" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-muted-foreground hover:text-foreground transition-colors" onclick="togglePassword(this)">
                            <i data-lucide="eye" class="w-5 h-5"></i>
                        </button>
                    </div>
                    <span asp-validation-for="NewPassword" class="text-destructive text-sm"></span>
                    
                    <!-- Password Strength Indicator -->
                    <div class="mt-2">
                        <div class="flex items-center gap-2 mb-2">
                            <span class="text-sm text-muted-foreground">Password Strength:</span>
                            <span id="password-strength-text" class="text-sm font-medium">Weak</span>
                        </div>
                        <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                            <div id="password-strength-bar" class="bg-red-500 h-2 rounded-full transition-all duration-300" style="width: 0%"></div>
                        </div>
                    </div>
                </div>

                <div class="space-y-2">
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-foreground">Confirm New Password</label>
                    <div class="relative">
                        <input asp-for="ConfirmPassword" type="password" class="w-full px-4 py-3 bg-background border border-border rounded-lg text-foreground focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all pr-12" placeholder="Confirm your new password" />
                        <button type="button" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-muted-foreground hover:text-foreground transition-colors" onclick="togglePassword(this)">
                            <i data-lucide="eye" class="w-5 h-5"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-destructive text-sm"></span>
                </div>

                <div class="flex gap-4 pt-4">
                    <button type="submit" class="flex-1 bg-primary text-primary-foreground hover:bg-primary/90 font-bold py-3 px-4 rounded-lg transition-all shadow-lg shadow-primary/20">
                        <i data-lucide="save" class="w-4 h-4 mr-2"></i>
                        Change Password
                    </button>
                    <a href="/account/security" class="flex-1 bg-background border border-border hover:bg-accent text-foreground font-medium py-3 px-4 rounded-lg transition-all text-center">
                        Cancel
                    </a>
                </div>
            </form>

            <!-- Security Tips -->
            <div class="mt-8 bg-green-50 dark:bg-green-950/20 border border-green-200 dark:border-green-800 rounded-2xl p-6">
                <h3 class="text-lg font-bold text-green-600 mb-3 flex items-center gap-2">
                    <i data-lucide="shield-check" class="w-5 h-5"></i>
                    Security Tips
                </h3>
                <div class="space-y-2 text-sm text-green-700 dark:text-green-300">
                    <div class="flex items-start gap-2">
                        <i data-lucide="check" class="w-4 h-4 mt-0.5 flex-shrink-0"></i>
                        <span>Use a unique password that you don't use for other accounts</span>
                    </div>
                    <div class="flex items-start gap-2">
                        <i data-lucide="check" class="w-4 h-4 mt-0.5 flex-shrink-0"></i>
                        <span>Consider using a password manager to generate and store strong passwords</span>
                    </div>
                    <div class="flex items-start gap-2">
                        <i data-lucide="check" class="w-4 h-4 mt-0.5 flex-shrink-0"></i>
                        <span>Enable two-factor authentication for additional security</span>
                    </div>
                    <div class="flex items-start gap-2">
                        <i data-lucide="check" class="w-4 h-4 mt-0.5 flex-shrink-0"></i>
                        <span>Avoid using personal information like names, birthdays, or addresses</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Handle TempData messages
            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                toastr.success('@Html.Raw(Html.Encode(TempData["SuccessMessage"].ToString()).Replace("'", "\\'"))');
                </text>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <text>
                toastr.error('@Html.Raw(Html.Encode(TempData["ErrorMessage"].ToString()).Replace("'", "\\'"))');
                </text>
            }

            // Password strength checker
            const newPasswordInput = document.querySelector('input[name="NewPassword"]');
            const strengthBar = document.getElementById('password-strength-bar');
            const strengthText = document.getElementById('password-strength-text');

            if (newPasswordInput && strengthBar && strengthText) {
                newPasswordInput.addEventListener('input', function() {
                    const password = this.value;
                    const strength = calculatePasswordStrength(password);
                    updatePasswordStrength(strength);
                });
            }
        });

        function togglePassword(button) {
            const input = button.parentElement.querySelector('input');
            const icon = button.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.setAttribute('data-lucide', 'eye-off');
                lucide.createIcons();
            } else {
                input.type = 'password';
                icon.setAttribute('data-lucide', 'eye');
                lucide.createIcons();
            }
        }

        function calculatePasswordStrength(password) {
            let score = 0;
            
            if (password.length >= 8) score += 1;
            if (password.length >= 12) score += 1;
            if (/[a-z]/.test(password)) score += 1;
            if (/[A-Z]/.test(password)) score += 1;
            if (/[0-9]/.test(password)) score += 1;
            if (/[^A-Za-z0-9]/.test(password)) score += 1;
            
            return Math.min(score, 5);
        }

        function updatePasswordStrength(strength) {
            const strengthBar = document.getElementById('password-strength-bar');
            const strengthText = document.getElementById('password-strength-text');
            
            const colors = ['bg-red-500', 'bg-orange-500', 'bg-yellow-500', 'bg-blue-500', 'bg-green-500'];
            const texts = ['Very Weak', 'Weak', 'Fair', 'Good', 'Strong'];
            const widths = ['20%', '40%', '60%', '80%', '100%'];
            
            // Remove all color classes
            strengthBar.className = 'h-2 rounded-full transition-all duration-300';
            
            if (strength > 0) {
                strengthBar.classList.add(colors[strength - 1]);
                strengthBar.style.width = widths[strength - 1];
                strengthText.textContent = texts[strength - 1];
                strengthText.className = 'text-sm font-medium ' + colors[strength - 1].replace('bg-', 'text-');
            } else {
                strengthBar.style.width = '0%';
                strengthText.textContent = 'Too Short';
                strengthText.className = 'text-sm font-medium text-gray-500';
            }
        }
    </script>
}