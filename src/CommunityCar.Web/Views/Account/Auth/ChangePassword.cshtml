@model CommunityCar.Application.Features.Account.ViewModels.Authentication.ChangePasswordVM
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = "Change Password";
    Layout = "_Layout";
}

<div class="container py-5 animate-in fade-in slide-in-from-bottom-4 duration-500">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card card-premium shadow-lg border-0">
                <div class="card-body p-4 p-md-5">
                    <!-- Header -->
                    <div class="d-flex align-items-center justify-content-between mb-5 pb-4 border-bottom border-border">
                        <div>
                            <h1 class="h3 fw-black d-flex align-items-center mb-2 text-gradient">
                                <i data-lucide="key" class="w-6 h-6 me-3 text-primary-red"></i>
                                Change Password
                            </h1>
                            <p class="text-sm text-muted-foreground mb-0">Update your account password for better security</p>
                        </div>
                        <a href="/account/security" class="btn btn-outline-secondary btn-sm d-flex align-items-center gap-2 rounded-pill px-3">
                            <i data-lucide="arrow-left" class="w-4 h-4"></i>
                            Back to Security
                        </a>
                    </div>

                    <div class="row g-5">
                        <div class="col-12 col-md-7">
                            <!-- Change Password Form -->
                            <form asp-action="ChangePassword" method="post" class="d-grid gap-4">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 bg-danger-subtle text-danger py-2 text-xs"></div>

                                <div class="form-group">
                                    <label asp-for="OldPassword" class="text-xs fw-black text-uppercase tracking-widest text-primary-red opacity-75 mb-2 d-block">Current Password</label>
                                    <div class="position-relative">
                                        <input asp-for="OldPassword" type="password" class="form-control py-3 rounded-3 border-border bg-muted-subtle pr-5" placeholder="Enter your current password" />
                                        <button type="button" class="btn position-absolute top-50 end-0 translate-middle-y text-muted border-0 bg-transparent" onclick="togglePassword(this)">
                                            <i data-lucide="eye" class="w-5 h-5"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="OldPassword" class="text-danger text-xs mt-1 d-block"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="NewPassword" class="text-xs fw-black text-uppercase tracking-widest text-primary-red opacity-75 mb-2 d-block">New Password</label>
                                    <div class="position-relative">
                                        <input asp-for="NewPassword" type="password" class="form-control py-3 rounded-3 border-border bg-muted-subtle pr-5" placeholder="Enter your new password" />
                                        <button type="button" class="btn position-absolute top-50 end-0 translate-middle-y text-muted border-0 bg-transparent" onclick="togglePassword(this)">
                                            <i data-lucide="eye" class="w-5 h-5"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="NewPassword" class="text-danger text-xs mt-1 d-block"></span>
                                    
                                    <!-- Password Strength Indicator -->
                                    <div class="mt-3">
                                        <div class="d-flex align-items-center gap-2 mb-2">
                                            <span class="text-[10px] fw-black text-uppercase tracking-widest text-muted-foreground">Cipher Strength:</span>
                                            <span id="password-strength-text" class="text-[10px] fw-bold text-uppercase">Too Short</span>
                                        </div>
                                        <div class="progress h-1 border-0 bg-muted rounded-pill overflow-hidden" style="height: 4px;">
                                            <div id="password-strength-bar" class="progress-bar transition-all duration-300 rounded-pill" style="width: 0%"></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="ConfirmPassword" class="text-xs fw-black text-uppercase tracking-widest text-primary-red opacity-75 mb-2 d-block">Confirm New Password</label>
                                    <div class="position-relative">
                                        <input asp-for="ConfirmPassword" type="password" class="form-control py-3 rounded-3 border-border bg-muted-subtle pr-5" placeholder="Confirm your new password" />
                                        <button type="button" class="btn position-absolute top-50 end-0 translate-middle-y text-muted border-0 bg-transparent" onclick="togglePassword(this)">
                                            <i data-lucide="eye" class="w-5 h-5"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger text-xs mt-1 d-block"></span>
                                </div>

                                <div class="d-flex gap-3 pt-3">
                                    <button type="submit" class="btn btn-primary-red py-3 px-4 rounded-4 flex-grow-1 shadow-lg">
                                        <i data-lucide="save" class="w-4 h-4 me-2"></i>
                                        Update Link
                                    </button>
                                    <a href="/account/security" class="btn btn-outline-secondary py-3 px-4 rounded-4 flex-grow-1">
                                        Cancel
                                    </a>
                                </div>
                            </form>
                        </div>

                        <div class="col-12 col-md-5">
                            <div class="d-grid gap-4">
                                <!-- Password Requirements Info -->
                                <div class="card border-0 bg-primary-red bg-opacity-10 rounded-4 overflow-hidden h-100">
                                    <div class="card-body p-4">
                                        <h3 class="h6 fw-black text-primary-red mb-4 d-flex align-items-center gap-2 text-uppercase tracking-widest">
                                            <i data-lucide="info" class="w-5 h-5"></i>
                                            Core Requirements
                                        </h3>
                                        <div class="d-grid gap-3 text-xs fw-medium text-foreground opacity-75">
                                            <div class="d-flex align-items-center gap-2">
                                                <i data-lucide="check-circle-2" class="w-4 h-4 text-primary-red text-opacity-75"></i>
                                                At least 8 characters
                                            </div>
                                            <div class="d-flex align-items-center gap-2">
                                                <i data-lucide="check-circle-2" class="w-4 h-4 text-primary-red text-opacity-75"></i>
                                                Uppercase letters (A-Z)
                                            </div>
                                            <div class="d-flex align-items-center gap-2">
                                                <i data-lucide="check-circle-2" class="w-4 h-4 text-primary-red text-opacity-75"></i>
                                                Lowercase letters (a-z)
                                            </div>
                                            <div class="d-flex align-items-center gap-2">
                                                <i data-lucide="check-circle-2" class="w-4 h-4 text-primary-red text-opacity-75"></i>
                                                Numeric digits (0-9)
                                            </div>
                                            <div class="d-flex align-items-center gap-2">
                                                <i data-lucide="check-circle-2" class="w-4 h-4 text-primary-red text-opacity-75"></i>
                                                Special symbols (!@@#$%^*)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Security Tips -->
                                <div class="card border-0 bg-muted-subtle rounded-4 h-100">
                                    <div class="card-body p-4">
                                        <h3 class="h6 fw-black text-muted-foreground mb-4 d-flex align-items-center gap-2 text-uppercase tracking-widest">
                                            <i data-lucide="shield-check" class="w-5 h-5"></i>
                                            Security Protocol
                                        </h3>
                                        <div class="d-grid gap-3 text-xs text-muted-foreground">
                                            <div class="d-flex align-items-start gap-2">
                                                <i data-lucide="alert-triangle" class="w-4 h-4 mt-0.5 text-warning opacity-75"></i>
                                                <span>Never share your cipher with anyone, including staff.</span>
                                            </div>
                                            <div class="d-flex align-items-start gap-2">
                                                <i data-lucide="refresh-cw" class="w-4 h-4 mt-0.5 opacity-75"></i>
                                                <span>Update your cipher periodically for maximum security.</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Handle TempData messages
            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                toastr.success('@Html.Raw(Html.Encode(TempData["SuccessMessage"].ToString()).Replace("'", "\\'"))');
                </text>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <text>
                toastr.error('@Html.Raw(Html.Encode(TempData["ErrorMessage"].ToString()).Replace("'", "\\'"))');
                </text>
            }

            // Password strength checker
            const newPasswordInput = document.querySelector('input[name="NewPassword"]');
            const strengthBar = document.getElementById('password-strength-bar');
            const strengthText = document.getElementById('password-strength-text');

            if (newPasswordInput && strengthBar && strengthText) {
                newPasswordInput.addEventListener('input', function() {
                    const password = this.value;
                    const strength = calculatePasswordStrength(password);
                    updatePasswordStrength(strength);
                });
            }
        });

        function togglePassword(button) {
            const input = button.parentElement.querySelector('input');
            const icon = button.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.setAttribute('data-lucide', 'eye-off');
                lucide.createIcons();
            } else {
                input.type = 'password';
                icon.setAttribute('data-lucide', 'eye');
                lucide.createIcons();
            }
        }

        function calculatePasswordStrength(password) {
            let score = 0;
            
            if (password.length >= 8) score += 1;
            if (password.length >= 12) score += 1;
            if (/[a-z]/.test(password)) score += 1;
            if (/[A-Z]/.test(password)) score += 1;
            if (/[0-9]/.test(password)) score += 1;
            if (/[^A-Za-z0-9]/.test(password)) score += 1;
            
            return Math.min(score, 5);
        }

        function updatePasswordStrength(strength) {
            const strengthBar = document.getElementById('password-strength-bar');
            const strengthText = document.getElementById('password-strength-text');
            
            const colors = ['bg-red-500', 'bg-orange-500', 'bg-yellow-500', 'bg-blue-500', 'bg-green-500'];
            const texts = ['Very Weak', 'Weak', 'Fair', 'Good', 'Strong'];
            const widths = ['20%', '40%', '60%', '80%', '100%'];
            
            // Remove all color classes
            strengthBar.className = 'h-2 rounded-full transition-all duration-300';
            
            if (strength > 0) {
                strengthBar.classList.add(colors[strength - 1]);
                strengthBar.style.width = widths[strength - 1];
                strengthText.textContent = texts[strength - 1];
                strengthText.className = 'text-sm font-medium ' + colors[strength - 1].replace('bg-', 'text-');
            } else {
                strengthBar.style.width = '0%';
                strengthText.textContent = 'Too Short';
                strengthText.className = 'text-sm font-medium text-gray-500';
            }
        }
    </script>
}