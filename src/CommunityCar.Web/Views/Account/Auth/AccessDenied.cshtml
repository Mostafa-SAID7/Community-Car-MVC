@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<AccountResource> AccountLocalizer
@{
    ViewData["Title"] = "Unauthorized Protocol";
    Layout = "_AuthLayout";
}

<div class="max-w-md mx-auto space-y-10 animate-in fade-in slide-in-from-bottom-8 duration-700">
    <div class="text-center space-y-8">
        <div class="relative inline-flex items-center justify-center group">
            <div class="absolute -inset-8 bg-destructive/10 rounded-full blur-3xl group-hover:bg-destructive/20 transition-all duration-1000"></div>
            <div class="relative w-28 h-28 rounded-full border-4 border-destructive/20 flex items-center justify-center text-destructive overflow-hidden bg-background shadow-2xl">
                 <div class="absolute inset-x-0 bottom-0 h-1/2 bg-destructive/5"></div>
                 <i data-lucide="shield-alert" class="w-12 h-12 relative animate-pulse"></i>
            </div>
        </div>
        
        <div class="space-y-3">
            <h1 class="text-5xl font-black text-foreground tracking-tighter leading-none">ACCESS SHUTDOWN</h1>
            <p class="text-[11px] font-black uppercase tracking-[0.4em] text-destructive">Unauthorized Identity Fragment</p>
        </div>
    </div>

    <div class="bg-card/40 backdrop-blur-2xl border border-destructive/20 rounded-[2.5rem] p-10 shadow-2xl relative overflow-hidden group/card text-center">
        <div class="absolute inset-x-0 top-0 h-1.5 bg-gradient-to-r from-transparent via-destructive/30 to-transparent"></div>
        
        <div class="space-y-10 relative">
            <div class="space-y-4">
                <p class="text-xs font-black uppercase tracking-widest text-muted-foreground/80 leading-relaxed">
                    Your current protocol lacks the required authorization levels to penetrate this restricted node. 
                    <span class="block mt-4 text-xs font-black text-foreground underline decoration-destructive decoration-4 underline-offset-4">Security incident logged.</span>
                </p>
            </div>
            
            <div class="grid grid-cols-1 gap-4 pt-4">
                <a href="javascript:history.back()" class="w-full py-4 bg-muted/50 hover:bg-muted text-foreground border border-border/50 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all shadow-sm">
                    Retreat to Safe Node
                </a>
                <a asp-controller="Feed" asp-action="Index" class="w-full py-4 bg-primary text-primary-foreground rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all shadow-xl shadow-primary/20 hover:-translate-y-0.5 active:scale-95">
                    Return to Foundation
                </a>
            </div>
        </div>
    </div>

    <div class="flex items-center justify-center gap-3">
         <span class="text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-20">System ID: @Guid.NewGuid().ToString().Substring(0, 8).ToUpper()</span>
         <div class="w-4 h-px bg-border/20"></div>
         <span class="text-[9px] font-black uppercase tracking-widest text-destructive opacity-40">Security Clearance Level 0</span>
    </div>
</div>