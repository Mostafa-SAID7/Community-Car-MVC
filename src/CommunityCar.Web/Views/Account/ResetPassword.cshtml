@model CommunityCar.Web.Models.Account.ResetPasswordVM
@{
    ViewData["Title"] = "Reset Password";
    Layout = "_AuthLayout";
}

<div class="max-w-md mx-auto py-12 px-6">
    <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gradient-to-br from-primary to-primary/80 text-primary-foreground mb-4 shadow-lg">
            <span class="text-2xl font-bold">CC</span>
        </div>
        <h1 class="text-3xl font-bold text-foreground mb-2">Reset Password</h1>
        <p class="text-muted-foreground">Enter your new password</p>
    </div>

    <form asp-action="ResetPassword" method="post" class="space-y-4">
        <div asp-validation-summary="All" class="p-3 rounded-md bg-destructive/10 text-destructive text-sm"></div>
        
        <input asp-for="Token" type="hidden" />
        
        <div class="space-y-2">
            <label asp-for="Email" class="text-sm font-medium text-foreground">Email Address</label>
            <input asp-for="Email" class="w-full px-3 py-2 bg-background border border-input rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-ring placeholder:text-muted-foreground" placeholder="Enter your email address" />
            <span asp-validation-for="Email" class="text-destructive text-xs"></span>
        </div>
        
        <div class="space-y-2">
            <label asp-for="Password" class="text-sm font-medium text-foreground">New Password</label>
            <input asp-for="Password" class="w-full px-3 py-2 bg-background border border-input rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-ring placeholder:text-muted-foreground" placeholder="Enter your new password" />
            <span asp-validation-for="Password" class="text-destructive text-xs"></span>
        </div>
        
        <div class="space-y-2">
            <label asp-for="ConfirmPassword" class="text-sm font-medium text-foreground">Confirm New Password</label>
            <input asp-for="ConfirmPassword" class="w-full px-3 py-2 bg-background border border-input rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-ring placeholder:text-muted-foreground" placeholder="Confirm your new password" />
            <span asp-validation-for="ConfirmPassword" class="text-destructive text-xs"></span>
        </div>
        
        <button type="submit" class="w-full bg-primary text-primary-foreground hover:bg-primary/90 font-medium py-2 px-4 rounded-md transition-colors">
            Reset Password
        </button>
    </form>

    <div class="mt-6 text-center text-sm">
        <p><a asp-action="Login" class="text-primary hover:text-primary/80 transition-colors">Back to Sign In</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}