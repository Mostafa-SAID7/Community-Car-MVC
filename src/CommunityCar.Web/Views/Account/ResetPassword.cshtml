@model CommunityCar.Web.Models.Account.ResetPasswordVM
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> SharedLocalizer
@inject IStringLocalizer<AccountResource> AccountLocalizer
@{
    ViewData["Title"] = AccountLocalizer["ResetPassword"];
    Layout = "_AuthLayout";
}

<div class="space-y-8 p-4 sm:p-6">
    <div class="text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-gradient-to-br from-primary to-primary/80 text-primary-foreground mb-6 shadow-xl ring-4 ring-primary/5">
            <i data-lucide="lock" class="w-8 h-8"></i>
        </div>
        <h1 class="text-2xl font-bold text-foreground mb-2 tracking-tight">@AccountLocalizer["ResetPassword"]</h1>
        <p class="text-sm text-muted-foreground">@AccountLocalizer["ResetPasswordDescription"]</p>
    </div>

    <form asp-action="ResetPassword" method="post" class="space-y-5">
        <div asp-validation-summary="All" class="p-3 rounded-lg bg-destructive/10 text-destructive text-xs"></div>
        
        <input asp-for="Token" type="hidden" />
        
        <div class="space-y-1.5">
            <label asp-for="Email" class="text-[10px] font-bold text-muted-foreground uppercase tracking-widest pl-1">@AccountLocalizer["Email"]</label>
            <input asp-for="Email" class="w-full px-4 py-3.5 bg-background/40 border border-border/50 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-primary/40 focus:border-primary transition-all placeholder:text-muted-foreground/50" placeholder="name@work-email.com" autocomplete="email" />
            <span asp-validation-for="Email" class="text-destructive text-[10px] pl-1"></span>
        </div>
        
        <div class="space-y-1.5">
            <label asp-for="Password" class="text-[10px] font-bold text-muted-foreground uppercase tracking-widest pl-1">@AccountLocalizer["NewPassword"]</label>
            <input asp-for="Password" type="password" class="w-full px-4 py-3.5 bg-background/40 border border-border/50 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-primary/40 focus:border-primary transition-all placeholder:text-muted-foreground/50" placeholder="••••••••" autocomplete="new-password" />
            <span asp-validation-for="Password" class="text-destructive text-[10px] pl-1"></span>
        </div>
        
        <div class="space-y-1.5">
            <label asp-for="ConfirmPassword" class="text-[10px] font-bold text-muted-foreground uppercase tracking-widest pl-1">@AccountLocalizer["ConfirmPassword"]</label>
            <input asp-for="ConfirmPassword" type="password" class="w-full px-4 py-3.5 bg-background/40 border border-border/50 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-primary/40 focus:border-primary transition-all placeholder:text-muted-foreground/50" placeholder="••••••••" autocomplete="new-password" />
            <span asp-validation-for="ConfirmPassword" class="text-destructive text-[10px] pl-1"></span>
        </div>
        
        <button type="submit" class="w-full bg-primary text-primary-foreground hover:bg-primary/95 font-bold py-4 px-4 rounded-xl transition-all shadow-lg hover:shadow-primary/10 btn-glow mt-2">
            @AccountLocalizer["ResetPassword"]
        </button>
    </form>

    <div class="text-center border-t border-border/50 pt-6">
        <p class="text-sm text-muted-foreground">
            <a asp-action="Login" class="text-primary hover:text-primary/80 transition-colors font-bold underline underline-offset-4 flex items-center justify-center gap-2">
                <i data-lucide="arrow-left" class="w-4 h-4"></i>
                @AccountLocalizer["BackToSignIn"]
            </a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}