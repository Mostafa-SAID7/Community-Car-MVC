@model CommunityCar.Web.Models.Account.ResetPasswordVM
@{
    ViewData["Title"] = "Reset Password";
    Layout = "_AuthLayout";
}

<div class="auth-header-clean">
    <div class="auth-logo-clean">CC</div>
    <h1 class="auth-title-clean">Reset Password</h1>
    <p class="auth-subtitle-clean">Enter your new password</p>
</div>

<form asp-action="ResetPassword" method="post" class="auth-form-clean">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>
    
    <input asp-for="Token" type="hidden" />
    
    <div class="form-group">
        <label asp-for="Email" class="form-label">Email Address</label>
        <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Password" class="form-label">New Password</label>
        <input asp-for="Password" class="form-control" placeholder="Enter your new password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your new password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">
        Reset Password
    </button>
</form>

<div class="auth-links-clean">
    <p><a asp-action="Login">Back to Sign In</a></p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}