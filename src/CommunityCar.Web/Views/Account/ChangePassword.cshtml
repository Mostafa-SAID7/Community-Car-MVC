@model CommunityCar.Web.Models.Account.ChangePasswordVM
@{
    ViewData["Title"] = "Change Password";
    Layout = "_AuthLayout";
}

<div class="auth-header-clean">
    <div class="auth-logo-clean">CC</div>
    <h1 class="auth-title-clean">Change Password</h1>
    <p class="auth-subtitle-clean">Update your account password</p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mb-3">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="ChangePassword" method="post" class="auth-form-clean">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>
    
    <div class="form-group">
        <label asp-for="CurrentPassword" class="form-label">Current Password</label>
        <input asp-for="CurrentPassword" class="form-control" placeholder="Enter your current password" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="NewPassword" class="form-label">New Password</label>
        <input asp-for="NewPassword" class="form-control" placeholder="Enter your new password" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your new password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">
        <i data-lucide="key" style="width: 16px; height: 16px; margin-right: 8px;"></i>
        Change Password
    </button>
</form>

<div class="auth-links-clean">
    <p><a asp-controller="Profile" asp-action="Index">Back to Profile</a></p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}