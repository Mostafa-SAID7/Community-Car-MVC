@using CommunityCar.Domain.Constants
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<header class="fixed top-0 left-0 right-0 z-50 flex items-center justify-between gap-4 px-4 py-3 bg-background/80 backdrop-blur-md border-b border-border">
    <div class="flex items-center gap-3 bg-card/50 backdrop-blur-sm rounded-full px-4 py-2 border border-border shadow-sm">
        @if (ViewData["FullWidth"] == null) 
        {
            <button class="inline-flex items-center justify-center h-8 w-8 rounded-xl hover:bg-accent hover:text-accent-foreground transition-colors md:hidden" id="sidebar-toggle" aria-label="@Localizer["ToggleSidebar"]">
                <i data-lucide="menu" class="w-[18px] h-[18px]"></i>
            </button>
        }
        <a href="/" class="flex items-center gap-2 text-inherit no-underline">
            <div class="flex items-center justify-center w-10 h-10 rounded-full bg-gradient-to-br from-primary to-primary/80 shadow-md">
                <span class="text-xs font-bold text-primary-foreground">@Localizer["AppInitials"]</span>
            </div>
            <div class="hidden sm:flex flex-col justify-center">
                <span class="text-sm font-semibold text-foreground">@Localizer["AppName"]</span>
                <span class="font-bold text-xs text-muted-foreground whitespace-nowrap hidden lg:flex">@Localizer["AppTagline"]</span>
            </div>
        </a>
    </div>

    <div class="flex items-center gap-3 bg-card/50 backdrop-blur-sm rounded-full px-4 py-2 border border-border shadow-sm flex-1 max-w-2xl">
        <div class="hidden md:flex items-center gap-2 flex-1 max-w-md">
            <i data-lucide="search" class="w-4 h-4 text-muted-foreground"></i>
            <input type="text" placeholder="@Localizer["Search"]" class="flex-1 bg-transparent border-none outline-none text-sm placeholder:text-muted-foreground">
        </div>
        
        @if (ViewData["FullWidth"] == null)
        {
            <nav class="hidden md:flex items-center gap-1">
                <a href="/" class="inline-flex items-center gap-2 px-3 py-2 rounded-xl text-sm font-medium transition-colors hover:bg-accent hover:text-accent-foreground" aria-label="@Localizer["Home"]" title="@Localizer["Home"]">
                    <i data-lucide="home" class="w-[18px] h-[18px]"></i>
                    <span class="hidden xl:inline">@Localizer["Home"]</span>
                </a>
                <a href="/chats" class="inline-flex items-center gap-2 px-3 py-2 rounded-xl text-sm font-medium transition-colors hover:bg-accent hover:text-accent-foreground" aria-label="@Localizer["Chat"]" title="@Localizer["Chat"]">
                    <i data-lucide="message-circle" class="w-[18px] h-[18px]"></i>
                    <span class="hidden xl:inline">@Localizer["Chat"]</span>
                </a>
                <a href="/friends" class="inline-flex items-center gap-2 px-3 py-2 rounded-xl text-sm font-medium transition-colors hover:bg-accent hover:text-accent-foreground" aria-label="@Localizer["Friends"]" title="@Localizer["Friends"]">
                    <i data-lucide="users" class="w-[18px] h-[18px]"></i>
                    <span class="hidden xl:inline">@Localizer["Friends"]</span>
                </a>
            </nav>
        }
        
        @if (ViewData["FullWidth"] == null)
        {
            <!-- Mobile navigation icons (shown only on mobile) -->
            <nav class="flex md:hidden items-center justify-evenly flex-1 gap-2">
                <a href="/" class="inline-flex items-center justify-center px-4 py-3 rounded-xl text-sm font-medium transition-colors hover:bg-accent hover:text-accent-foreground flex-1" aria-label="@Localizer["Home"]" title="@Localizer["Home"]">
                    <i data-lucide="home" class="w-[20px] h-[20px]"></i>
                </a>
                <a href="/chats" class="inline-flex items-center justify-center px-4 py-3 rounded-xl text-sm font-medium transition-colors hover:bg-accent hover:text-accent-foreground flex-1" aria-label="@Localizer["Chat"]" title="@Localizer["Chat"]">
                    <i data-lucide="message-circle" class="w-[20px] h-[20px]"></i>
                </a>
                <a href="/friends" class="inline-flex items-center justify-center px-4 py-3 rounded-xl text-sm font-medium transition-colors hover:bg-accent hover:text-accent-foreground flex-1" aria-label="@Localizer["Friends"]" title="@Localizer["Friends"]">
                    <i data-lucide="users" class="w-[20px] h-[20px]"></i>
                </a>
            </nav>
        }
    </div>
    
    <div class="hidden md:flex items-center gap-2 bg-card/50 backdrop-blur-sm rounded-full px-3 py-2 border border-border shadow-sm">
        @if (User.IsInRole(Roles.SuperAdmin) || User.IsInRole(Roles.ContentAdmin) || User.IsInRole(Roles.DesignAdmin) || User.IsInRole(Roles.DatabaseAdmin))
        {
            <a href="/Dashboard" class="inline-flex items-center justify-center h-8 w-8 rounded-xl hover:bg-accent hover:text-accent-foreground transition-colors" aria-label="@Localizer["Dashboard"]" title="@Localizer["Dashboard"]">
                <i data-lucide="layout-dashboard" class="w-4 h-4"></i>
            </a>
        }
        <button class="inline-flex items-center justify-center h-8 w-8 rounded-xl hover:bg-accent hover:text-accent-foreground transition-colors" id="theme-toggle" aria-label="@Localizer["ToggleTheme"]" title="@Localizer["ToggleTheme"]">
            <i data-lucide="sun" id="sun-icon" class="w-4 h-4"></i>
            <i data-lucide="moon" id="moon-icon" class="w-4 h-4 hidden"></i>
        </button>
        
        <div class="relative notification-wrapper">
            <button class="inline-flex items-center justify-center h-8 w-8 rounded-xl hover:bg-accent hover:text-accent-foreground transition-colors notification-bell" aria-label="@Localizer["Notifications"]" title="@Localizer["Notifications"]">
                <i data-lucide="bell" class="w-4 h-4"></i>
                <span class="absolute -top-1 -right-1 flex h-4 w-4 items-center justify-center rounded-full bg-destructive text-[10px] font-bold text-destructive-foreground notification-badge hidden"></span>
            </button>
            
            <div class="absolute right-0 top-12 w-80 dropdown-content hidden notification-dropdown">
                <div class="flex items-center justify-between p-4 border-b border-border">
                    <h3 class="text-sm font-semibold">@Localizer["Notifications"]</h3>
                    <div class="flex items-center gap-2">
                        <button class="text-xs text-primary hover:text-primary/80 transition-colors mark-all-read-btn">@Localizer["MarkAllRead"]</button>
                    </div>
                </div>
                <div class="max-h-96 overflow-y-auto notification-list">
                    <div class="flex flex-col gap-2 p-4 notification-loading">
                        <skeleton type="Line" />
                        <skeleton type="Line" />
                        <skeleton type="Line" />
                    </div>
                </div>
            </div>
        </div>

        <button class="inline-flex items-center justify-center h-8 w-8 rounded-xl hover:bg-accent hover:text-accent-foreground transition-colors text-xs font-bold" id="lang-toggle">@(System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName.ToUpper() == "AR" ? "EN" : "AR")</button>
    </div>
</header>
