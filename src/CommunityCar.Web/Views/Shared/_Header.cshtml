<header class="header-wrapper">
    <div class="header-left-pill header-pill">
        <button class="btn btn-ghost btn-icon flex md:hidden" id="sidebar-toggle" aria-label="Toggle Sidebar">
            <i data-lucide="menu" class="w-[18px] h-[18px]"></i>
        </button>
        <a href="/" class="flex items-center text-inherit no-underline">
            <div class="brand-logo">
                <span class="text-xs font-bold text-white">CC</span>
            </div>
            <div class="hidden sm:flex flex-col justify-center">
                <span class="brand-tagline">Community Car</span>
                <span class="font-bold text-sm whitespace-nowrap hidden lg:flex">Fueling Culture</span>
            </div>
        </a>
    </div>

    <div class="header-center-pill header-pill">
        <div class="search-pill">
            <i data-lucide="search" class="w-4 h-4"></i>
            <input type="text" placeholder="@SharedLocalizer["Search"]" class="search-input">
        </div>
        
        <nav class="flex items-center gap-1">
            <a href="/" class="nav-link flex items-center" aria-label="@SharedLocalizer["Home"]">
                <i data-lucide="home" class="w-[18px] h-[18px]"></i>
                <span class="hidden xl:inline ml-2">@SharedLocalizer["Home"]</span>
            </a>
            <a href="/chats" class="nav-link flex items-center" aria-label="@SharedLocalizer["Chat"]">
                <i data-lucide="message-circle" class="w-[18px] h-[18px]"></i>
                <span class="hidden xl:inline ml-2">@SharedLocalizer["Chat"]</span>
            </a>
            <a href="/friends" class="nav-link flex items-center" aria-label="@SharedLocalizer["Friends"]">
                <i data-lucide="users" class="w-[18px] h-[18px]"></i>
                <span class="hidden xl:inline ml-2">@SharedLocalizer["Friends"]</span>
            </a>
        </nav>
    </div>
    
    <div class="header-right-pill header-pill">
        <button class="btn btn-ghost btn-icon" id="theme-toggle">
            <i data-lucide="sun" id="sun-icon" class="w-4 h-4"></i>
            <i data-lucide="moon" id="moon-icon" class="w-4 h-4 hidden"></i>
        </button>
        
        <div class="notification-wrapper">
            <button class="notification-bell btn btn-ghost btn-icon" aria-label="Notifications">
                <i data-lucide="bell" class="w-4 h-4"></i>
                <span class="notification-badge" style="display: none;"></span>
            </button>
            
            <div class="notification-dropdown">
                <div class="notification-dropdown-header">
                    <h3 class="notification-dropdown-title">Notifications</h3>
                    <div class="notification-actions">
                        <button class="notification-action-btn mark-all-read-btn">Mark all read</button>
                    </div>
                </div>
                <div class="notification-list">
                    <div class="notification-loading">
                        <i data-lucide="loader-2"></i>
                        Loading notifications...
                    </div>
                </div>
            </div>
        </div>

        <button class="btn btn-ghost user-initial" id="lang-toggle">AR</button>
    </div>
</header>
