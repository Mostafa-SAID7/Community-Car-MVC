@using CommunityCar.Domain.Constants
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<nav class="navbar navbar-expand-md app-header sticky-top">
    <div class="container-fluid">
        <!-- Brand / Sidebar Toggle -->
        <div class="d-flex align-items-center gap-2">
            @if (ViewData["FullWidth"] == null) 
            {
                <button class="btn btn-ghost d-md-none me-2" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <i data-lucide="menu"></i>
                </button>
            }

            <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                <div class="brand-logo bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 38px; height: 38px;">
                    <span class="fw-bold small">@Localizer["AppInitials"]</span>
                </div>
                <div class="d-flex flex-column lh-1">
                    <span class="fw-bold text-body">@Localizer["AppName"]</span>
                    <small class="text-muted d-none d-lg-block" style="font-size: 0.7em;">@Localizer["AppTagline"]</small>
                </div>
            </a>
        </div>

        <!-- Search Bar -->
        <div class="d-none d-md-block mx-auto flex-grow-1 px-4" style="max-width: 500px;">
            <div class="input-group search-group">
                <span class="input-group-text">
                    <i data-lucide="search" class="text-muted" style="width: 18px;"></i>
                </span>
                <input class="form-control" type="search" placeholder="@Localizer["Search"]" aria-label="Search">
            </div>
        </div>

        <!-- Right Side User Menu -->
        <div class="d-flex align-items-center gap-3">
             <!-- Nav Links (Desktop) -->
            @if (ViewData["FullWidth"] == null)
            {
                <div class="d-none d-md-flex align-items-center gap-2">
                    <a href="/" class="btn btn-ghost" title="@Localizer["Home"]">
                        <i data-lucide="home"></i>
                    </a>
                    <a href="/chats" class="btn btn-ghost" title="@Localizer["Chat"]">
                        <i data-lucide="message-circle"></i>
                    </a>
                    <a asp-controller="Friends" asp-action="Index" class="btn btn-ghost" title="@Localizer["Friends"]">
                        <i data-lucide="users"></i>
                    </a>
                </div>
            }

            <div class="vr d-none d-md-block"></div>

            <!-- Theme Toggle -->
             <button class="btn btn-link nav-link px-2 text-decoration-none" id="theme-toggle" title="@Localizer["ToggleTheme"]">
                <i data-lucide="sun" id="sun-icon"></i>
                <i data-lucide="moon" id="moon-icon" class="d-none"></i>
            </button>

            <!-- Language Toggle -->
            <button class="btn btn-sm btn-outline-secondary font-monospace" id="lang-toggle">
                @(System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName.ToUpper() == "AR" ? "EN" : "AR")
            </button>

            <!-- User Dropdown -->
            <div class="dropdown">
                <a href="#" class="user-avatar-container d-flex align-items-center text-decoration-none dropdown-toggle hidden-arrow" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        var profilePic = User.FindFirst("ProfilePictureUrl")?.Value;
                        if (!string.IsNullOrEmpty(profilePic))
                        {
                            <img src="@profilePic" alt="User" class="rounded-circle" width="38" height="38" />
                        }
                        else
                        {
                            <div class="bg-primary-subtle text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 38px; height: 38px;">
                                <span class="fw-bold">@(User.Identity.Name?.Substring(0, 1).ToUpper() ?? "U")</span>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="bg-light text-secondary rounded-circle d-flex align-items-center justify-content-center border" style="width: 38px; height: 38px;">
                            <i data-lucide="user" style="width: 20px;"></i>
                        </div>
                    }
                </a>
                
                <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="px-3 py-2">
                             <p class="mb-0 fw-bold">@(User.Identity.Name ?? "User")</p>
                             <small class="text-muted">@(User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? "")</small>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index">@Localizer["MyProfile"]</a></li>
                        <li><a class="dropdown-item" asp-controller="ProfileSettings" asp-action="Index">@Localizer["Settings"]</a></li>
                        
                        @if (User.IsInRole(Roles.SuperAdmin) || User.IsInRole(Roles.Admin))
                        {
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="Index">@Localizer["Dashboard"]</a></li>
                        }

                        <li><hr class="dropdown-divider"></li>
                         <li>
                             <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="dropdown-item text-danger">@Localizer["Logout"]</button>
                             </form>
                         </li>
                    }
                    else
                    {
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">@Localizer["Login"]</a></li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Register">@Localizer["Register"]</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</nav>
