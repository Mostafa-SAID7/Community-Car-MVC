@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<aside class="w-full space-y-6">
    <!-- QA Statistics -->
    <div class="bg-card/40 backdrop-blur-xl border border-border rounded-2xl p-6 shadow-sm">
        <h3 class="flex items-center gap-2 text-sm font-bold mb-4 uppercase tracking-wider text-primary">
            <i data-lucide="bar-chart-2" class="w-4 h-4"></i>
            @Localizer["QAStats"]
        </h3>
        <div class="grid grid-cols-2 gap-4">
            <div class="space-y-1 text-center p-3 rounded-xl bg-accent/50 border border-border/50">
                <span class="text-xs text-muted-foreground">@Localizer["TotalQuestions"]</span>
                <p class="text-lg font-black">1.2k</p>
            </div>
            <div class="space-y-1 text-center p-3 rounded-xl bg-accent/50 border border-border/50">
                <span class="text-xs text-muted-foreground">@Localizer["UnsolvedQuestions"]</span>
                <p class="text-lg font-black text-orange-500">42</p>
            </div>
        </div>
    </div>

    <!-- Expert Contributors -->
    <div class="bg-card/40 backdrop-blur-xl border border-border rounded-2xl p-6 shadow-sm">
        <h3 class="flex items-center gap-2 text-sm font-bold mb-4 uppercase tracking-wider">
            <i data-lucide="award" class="w-4 h-4 text-primary"></i>
            @Localizer["ExpertContributors"]
        </h3>
        <div class="space-y-4">
            @for (int i = 1; i <= 3; i++)
            {
                <div class="flex items-center gap-3 group cursor-pointer">
                    <div class="w-10 h-10 rounded-xl bg-muted border border-border/50 overflow-hidden ring-2 ring-primary/5 group-hover:ring-primary/20 transition-all">
                        <img src="/images/default-avatar.png" class="w-full h-full object-cover" />
                    </div>
                    <div class="flex-1 min-w-0">
                        <p class="text-xs font-bold truncate group-hover:text-primary transition-colors">Expert User @i</p>
                        <p class="text-[10px] text-muted-foreground">@(100 * i) Answers</p>
                    </div>
                    <i data-lucide="chevron-right" class="w-3 h-3 text-muted-foreground opacity-0 group-hover:opacity-100 transition-all"></i>
                </div>
            }
        </div>
    </div>

    <!-- Popular Tags -->
    <div class="bg-card/40 backdrop-blur-xl border border-border rounded-2xl p-6 shadow-sm">
        <h3 class="flex items-center gap-2 text-sm font-bold mb-4 uppercase tracking-wider">
            <i data-lucide="tag" class="w-4 h-4 text-primary"></i>
            @Localizer["PopularTags"]
        </h3>
        <div class="flex flex-wrap gap-2">
            @foreach (var tag in new[] { "Engine", "Tuning", "Reviews", "Repair", "Electric", "Classic" })
            {
                <span class="px-3 py-1.5 rounded-lg bg-accent text-[10px] font-bold text-foreground hover:bg-primary hover:text-primary-foreground transition-all cursor-pointer">
                    #@tag
                </span>
            }
        </div>
    </div>

    <!-- CTA -->
    <div class="bg-gradient-to-br from-primary to-primary/80 rounded-2xl p-6 text-primary-foreground shadow-lg shadow-primary/20 relative overflow-hidden group">
        <div class="absolute -right-8 -top-8 w-24 h-24 bg-white/10 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-700"></div>
        <h4 class="text-base font-black mb-2 relative z-10">@Localizer["AskExpert"]</h4>
        <p class="text-xs opacity-90 mb-4 relative z-10 leading-relaxed font-medium">Get professional advice from our verified automotive experts.</p>
        <button class="w-full py-3 bg-white text-primary rounded-xl text-[10px] font-black uppercase tracking-widest hover:scale-[1.02] transition-all relative z-10">
            Ask Now
        </button>
    </div>
</aside>
