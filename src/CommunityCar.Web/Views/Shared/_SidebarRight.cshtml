@using CommunityCar.Application.Features.Community.Feed.ViewModels
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer SharedLocalizer

@{
    var feedData = ViewData["FeedSidebarData"] as FeedResponseVM;
    var currentUserId = ViewBag.CurrentUserId as Guid?;
}

<!-- Right Sidebar (Premium Design System) -->
<div class="d-none d-xl-block h-100">
    <div class="sticky-top sidebar-sticky">
        @if (feedData != null)
        {
            <!-- Trending Topics -->
            <div class="card card-premium mb-4 animate-in fade-in slide-in-from-right duration-500">
                <div class="card-header border-0 bg-transparent pt-4 pb-2">
                    <h6 class="mb-0 d-flex align-items-center gap-2 fw-bold text-uppercase tracking-wider small opacity-75">
                        <i data-lucide="trending-up" class="text-primary-red sidebar-icon"></i>
                        @SharedLocalizer["TrendingTopics"]
                    </h6>
                </div>
                <div class="list-group list-group-flush px-2 pb-3">
                    @if (feedData.TrendingTopics?.Any() == true)
                    {
                        @foreach (var topic in feedData.TrendingTopics.Take(3))
                        {
                            <a href="#" class="list-group-item list-group-item-action border-0 rounded-4 mb-1 py-3 transition-all hover-bg-light">
                                <div class="d-flex w-100 justify-content-between align-items-center">
                                    <h6 class="mb-1 fw-bold text-gradient">#@topic.Topic</h6>
                                    <small class="text-muted opacity-50">@topic.TimeAgo</small>
                                </div>
                                <div class="d-flex align-items-baseline gap-2 mt-1">
                                    <small class="text-muted fw-semibold">@topic.PostCount @SharedLocalizer["PostsLabel"]</small>
                                    <span class="badge rounded-pill bg-primary-subtle text-primary-red border-0 px-2 py-1 badge-sm">
                                        @topic.TrendingReason
                                    </span>
                                </div>
                            </a>
                        }
                        <div class="text-center mt-2">
                             <a href="/feed/trending" class="btn btn-sm btn-link text-primary-red text-decoration-none fw-bold small">
                                @SharedLocalizer["ViewAllTrending"] <i data-lucide="chevron-right" class="icon-sm"></i>
                             </a>
                        </div>
                    }
                    else
                    {
                         <div class="p-5 text-center opacity-50">
                            <i data-lucide="hash" class="mb-2 icon-lg"></i>
                            <p class="small mb-0">@SharedLocalizer["NoTrendingTopics"]</p>
                        </div>
                    }
                </div>
            </div>

            <!-- People You May Know -->
            @if (feedData.SuggestedFriends?.Any() == true)
            {
                <div class="card card-premium mb-4 animate-in fade-in slide-in-from-right duration-700">
                     <div class="card-header border-0 bg-transparent pt-4 pb-2">
                        <h6 class="mb-0 d-flex align-items-center gap-2 fw-bold text-uppercase tracking-wider small opacity-75">
                            <i data-lucide="users" class="text-primary-red sidebar-icon"></i>
                            @SharedLocalizer["PeopleYouMayKnow"]
                        </h6>
                    </div>
                    <div class="list-group list-group-flush px-2 pb-3">
                        @foreach (var friend in feedData.SuggestedFriends.Take(3))
                        {
                            <div class="list-group-item d-flex gap-3 align-items-center border-0 py-3">
                                <div class="user-avatar-container shadow-sm p-0">
                                    <img src="@(friend.Avatar ?? "/images/default-avatar.png")" alt="@friend.Name"
                                            class="rounded-circle object-fit-cover avatar-md" />
                                </div>
                                
                                <div class="flex-grow-1 min-w-0">
                                    <h6 class="mb-0 text-truncate small fw-bold">@friend.Name</h6>
                                    <p class="mb-0 small text-muted text-truncate opacity-75">@friend.SuggestionReason</p>
                                </div>
                                
                                <button class="btn btn-sm btn-primary-red rounded-circle p-0 d-flex align-items-center justify-content-center shadow-sm btn-icon-sm"
                                    data-action="send-friend-request" data-user-id="@friend.UserId" title="@SharedLocalizer["AddFriend"]">
                                    <i data-lucide="user-plus" class="icon-sm"></i>
                                </button>
                            </div>
                        }
                        <div class="text-center mt-2">
                            <a href="/friends/suggestions" class="btn btn-sm btn-link text-primary-red text-decoration-none fw-bold small">
                                @SharedLocalizer["SeeAllSuggestions"] <i data-lucide="chevron-right" class="icon-sm"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }

            <!-- Community Stats -->
             <div class="card card-premium animate-in fade-in slide-in-from-right duration-1000">
                <div class="card-header border-0 bg-transparent pt-4 pb-2">
                    <h6 class="mb-0 d-flex align-items-center gap-2 fw-bold text-uppercase tracking-wider small opacity-75">
                        <i data-lucide="bar-chart-2" class="text-primary-red sidebar-icon"></i>
                        @SharedLocalizer["CommunityStats"]
                    </h6>
                </div>
                <div class="card-body pt-2 pb-4">
                     @if (feedData.Stats != null)
                    {
                        <div class="row g-3">
                            <div class="col-6">
                                <div class="p-3 bg-light rounded-4 text-center border-0 shadow-sm animate-float">
                                    <small class="text-muted d-block fw-bold text-uppercase opacity-50 stats-label">@SharedLocalizer["TotalPosts"]</small>
                                    <span class="fw-black fs-5 text-gradient">@feedData.Stats.TotalItems.ToString("N0")</span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="p-3 bg-light rounded-4 text-center border-0 shadow-sm">
                                    <small class="text-muted d-block fw-bold text-uppercase opacity-50 stats-label">@SharedLocalizer["ActiveStories"]</small>
                                    <span class="fw-black fs-5 text-gradient">@feedData.Stats.ActiveStoriesCount</span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="p-3 bg-light rounded-4 text-center border-0 shadow-sm">
                                    <small class="text-muted d-block fw-bold text-uppercase opacity-50 stats-label">@SharedLocalizer["TotalEngagement"]</small>
                                    <span class="fw-black fs-5 text-gradient">@((feedData.Stats.TotalLikes + feedData.Stats.TotalComments).ToString("N0"))</span>
                                </div>
                            </div>
                        </div>
                        <div class="text-center mt-3">
                             <div class="badge bg-secondary-subtle text-muted rounded-pill px-3 py-1 opacity-75 badge-sm">
                                <i data-lucide="refresh-cw" class="me-1 icon-xs"></i>
                                @SharedLocalizer["LastUpdated"]: @feedData.Stats.LastRefreshAgo
                             </div>
                        </div>
                    }
                    else
                    {
                        <p class="text-center text-muted small mb-0 opacity-50 py-4">@SharedLocalizer["StatsUnavailable"]</p>
                    }
                </div>
            </div>
        }
    </div>
</div>

@if (currentUserId.HasValue)
{
    <script src="~/js/sidebar-right.js" asp-append-version="true"></script>
}
