@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    // Extract data from ViewBag - this makes the partial completely flexible
    var userId = ViewBag.UserId?.ToString();
    var fullName = ViewBag.FullName as string ?? "User";
    var userName = ViewBag.UserName as string ?? "---";
    var profilePictureUrl = ViewBag.ProfilePictureUrl as string ?? "/images/default-avatar.png";
    var bio = ViewBag.Bio as string;
    var bioAr = ViewBag.BioAr as string;
    var city = ViewBag.City as string ?? "---";
    var country = ViewBag.Country as string ?? "---";
    var createdAt = ViewBag.CreatedAt is DateTime dt ? dt : DateTime.Now;
    
    // Stats from ViewBag
    var rank = ViewBag.Rank as int? ?? 0;
    var level = ViewBag.Level as int? ?? 0;
    var points = ViewBag.TotalPoints as int? ?? 0;
    var posts = ViewBag.PostsCount as int? ?? 0;
    var comments = ViewBag.CommentsCount as int? ?? 0;
    var likes = ViewBag.LikesReceived as int? ?? 0;
    var badges = ViewBag.BadgesCount as int? ?? 0;

    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
    var displayBio = isArabic && !string.IsNullOrEmpty(bioAr) ? bioAr : bio;
    
    var isOwnProfile = User.Identity?.IsAuthenticated == true && 
                       User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == userId;
}

<!-- Profile Identity & Core Stats in Layout Sidebar -->
<div class="space-y-6 profile-container">
    <!-- Avatar and Basic Info Section -->
    <div class="flex flex-col items-center text-center space-y-4">
        <div class="avatar-container shadow-xl">
            <img src="@profilePictureUrl" alt="@fullName" class="w-full h-full object-cover" />
        </div>
        
        <!-- Name and Username -->
        <div class="space-y-1 w-full">
            <h2 class="text-lg font-bold leading-tight text-center break-words">@fullName</h2>
            <p class="text-profile-text-muted text-xs font-medium text-center break-all">@@@userName</p>
        </div>
        
        <!-- Rank Badge -->
        <div class="inline-flex items-center px-3 py-1.5 bg-primary/10 rounded-full border border-primary/20">
            <span class="rank-badge mr-1.5">Rank</span>
            <span class="rank-value">#@rank.ToString("N0")</span>
        </div>
    </div>

    <!-- Action Buttons Section -->
    <div class="space-y-3">
        @if (isOwnProfile)
        {
            <a href="/profile/settings" class="btn-leetcode">
                <i data-lucide="edit-3" class="w-4 h-4"></i>
                <span>@Localizer["EditProfile"]</span>
            </a>
        }

        <!-- Bio Section -->
        <div class="text-center px-2">
            <p class="text-profile-text-muted text-xs leading-relaxed break-words">
                @(string.IsNullOrEmpty(displayBio) ? Localizer["NoBio"].Value : displayBio)
            </p>
        </div>
    </div>

    <!-- Location and Join Date Section -->
    <div class="pt-4 border-t border-profile-border space-y-3">
        <div class="flex items-center justify-between text-[11px] gap-2">
            <span class="text-profile-text-muted flex items-center gap-2 flex-shrink-0">
                <i data-lucide="map-pin" class="w-3.5 h-3.5 flex-shrink-0"></i> 
                <span class="hidden sm:inline">@Localizer["Location"]</span>
                <span class="sm:hidden">Loc</span>
            </span>
            <span class="font-semibold text-right truncate min-w-0">@city</span>
        </div>
        <div class="flex items-center justify-between text-[11px] gap-2">
            <span class="text-profile-text-muted flex items-center gap-2 flex-shrink-0">
                <i data-lucide="calendar" class="w-3.5 h-3.5 flex-shrink-0"></i> 
                <span class="hidden sm:inline">@Localizer["Joined"]</span>
                <span class="sm:hidden">Join</span>
            </span>
            <span class="font-semibold flex-shrink-0">@createdAt.ToString("MMM yyyy")</span>
        </div>
    </div>

    <!-- Statistics Section -->
    <div class="pt-4 border-t border-profile-border">
        <h3 class="text-[10px] font-bold uppercase tracking-wider text-profile-text-muted mb-4 flex items-center gap-2">
            <i data-lucide="bar-chart-3" class="w-3.5 h-3.5 flex-shrink-0"></i> 
            <span class="hidden sm:inline">@Localizer["Statistics"]</span>
            <span class="sm:hidden">Stats</span>
        </h3>
        
        <!-- Enhanced Responsive Stats Grid with Gallery-inspired styling - 2x2 Grid Layout -->
        <div class="stats-grid grid grid-cols-2 gap-3">
            <div class="stat-item group bg-gradient-to-r from-yellow-500/10 to-yellow-600/5 border border-yellow-500/20 hover:border-yellow-500/40 hover:from-yellow-500/15 hover:to-yellow-600/10" tabindex="0" role="button" aria-label="Points: @points.ToString("N0")">
                <div class="stat-content flex flex-col items-center text-center">
                    <div class="w-8 h-8 rounded-lg bg-yellow-500/20 flex items-center justify-center mb-2">
                        <i data-lucide="zap" class="w-4 h-4 text-yellow-600 flex-shrink-0"></i>
                    </div>
                    <div class="stat-info">
                        <span class="text-xs font-medium text-muted-foreground block">@Localizer["Points"]</span>
                        <span class="stat-value text-lg font-black text-foreground">@points.ToString("N0")</span>
                    </div>
                </div>
            </div>
            
            <div class="stat-item group bg-gradient-to-r from-primary/10 to-primary/5 border border-primary/20 hover:border-primary/40 hover:from-primary/15 hover:to-primary/10" tabindex="0" role="button" aria-label="Level: @level">
                <div class="stat-content flex flex-col items-center text-center">
                    <div class="w-8 h-8 rounded-lg bg-primary/20 flex items-center justify-center mb-2">
                        <i data-lucide="trending-up" class="w-4 h-4 text-primary flex-shrink-0"></i>
                    </div>
                    <div class="stat-info">
                        <span class="text-xs font-medium text-muted-foreground block">@Localizer["Level"]</span>
                        <span class="stat-value text-lg font-black text-foreground">@level</span>
                    </div>
                </div>
            </div>
            
            <div class="stat-item group bg-gradient-to-r from-purple-500/10 to-purple-600/5 border border-purple-500/20 hover:border-purple-500/40 hover:from-purple-500/15 hover:to-purple-600/10" tabindex="0" role="button" aria-label="Badges: @badges">
                <div class="stat-content flex flex-col items-center text-center">
                    <div class="w-8 h-8 rounded-lg bg-purple-500/20 flex items-center justify-center mb-2">
                        <i data-lucide="award" class="w-4 h-4 text-purple-600 flex-shrink-0"></i>
                    </div>
                    <div class="stat-info">
                        <span class="text-xs font-medium text-muted-foreground block">@Localizer["Badges"]</span>
                        <span class="stat-value text-lg font-black text-foreground">@badges</span>
                    </div>
                </div>
            </div>
            
            <div class="stat-item group bg-gradient-to-r from-blue-500/10 to-blue-600/5 border border-blue-500/20 hover:border-blue-500/40 hover:from-blue-500/15 hover:to-blue-600/10" tabindex="0" role="button" aria-label="Posts: @posts">
                <div class="stat-content flex flex-col items-center text-center">
                    <div class="w-8 h-8 rounded-lg bg-blue-500/20 flex items-center justify-center mb-2">
                        <i data-lucide="file-text" class="w-4 h-4 text-blue-600 flex-shrink-0"></i>
                    </div>
                    <div class="stat-info">
                        <span class="text-xs font-medium text-muted-foreground block">@Localizer["Posts"]</span>
                        <span class="stat-value text-lg font-black text-foreground">@posts</span>
                    </div>
                </div>
            </div>
            
            <div class="stat-item group bg-gradient-to-r from-green-500/10 to-green-600/5 border border-green-500/20 hover:border-green-500/40 hover:from-green-500/15 hover:to-green-600/10" tabindex="0" role="button" aria-label="Comments: @comments">
                <div class="stat-content flex flex-col items-center text-center">
                    <div class="w-8 h-8 rounded-lg bg-green-500/20 flex items-center justify-center mb-2">
                        <i data-lucide="message-square" class="w-4 h-4 text-green-600 flex-shrink-0"></i>
                    </div>
                    <div class="stat-info">
                        <span class="text-xs font-medium text-muted-foreground block">@Localizer["Comments"]</span>
                        <span class="stat-value text-lg font-black text-foreground">@comments</span>
                    </div>
                </div>
            </div>
            
            <div class="stat-item group bg-gradient-to-r from-red-500/10 to-red-600/5 border border-red-500/20 hover:border-red-500/40 hover:from-red-500/15 hover:to-red-600/10" tabindex="0" role="button" aria-label="Likes: @likes">
                <div class="stat-content flex flex-col items-center text-center">
                    <div class="w-8 h-8 rounded-lg bg-red-500/20 flex items-center justify-center mb-2">
                        <i data-lucide="heart" class="w-4 h-4 text-red-600 flex-shrink-0"></i>
                    </div>
                    <div class="stat-info">
                        <span class="text-xs font-medium text-muted-foreground block">@Localizer["Likes"]</span>
                        <span class="stat-value text-lg font-black text-foreground">@likes</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
