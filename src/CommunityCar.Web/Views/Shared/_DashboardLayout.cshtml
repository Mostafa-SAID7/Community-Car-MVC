<!DOCTYPE html>
<html lang="en" class="light">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="user-id"
        content="@(User.Identity?.IsAuthenticated == true ? User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value : "")" />
    <title>@ViewData["Title"] - Dashboard - CommunityCar</title>

    <performance-optimizations url="@Context.Request.Path" />
    <seo-meta page-type="@(ViewData["PageType"] ?? "Dashboard")" entity-id="@(ViewData["EntityId"] as Guid?)" />

    <link rel="icon" type="image/png" href="~/images/logo/logo.png">
    <link rel="alternate" type="application/rss+xml" title="CommunityCar RSS Feed"
        href="@Url.Action("RSS", "DashboardSEO")" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alexandria:wght@100..900&display=swap" rel="stylesheet">

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="~/css/app.min.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)

    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body class="font-sans antialiased dashboard-body">
    <partial name="_Header" />

    <!-- Main container with proper spacing for fixed header and sidebars -->
    <div class="flex pt-28 pb-8 min-h-screen" id="dashboard-container">
        <partial name="_DashboardSidebarLeft" />

        <!-- Main Content Area with responsive margins that adjust to sidebar width -->
        <main class="flex-1 transition-all duration-300 px-4" id="main-content" 
              style="margin-left: 5rem;">
            <div class="max-w-none w-full">
                <div class="bg-card/30 backdrop-blur-xl border border-border rounded-xl shadow-2xl p-6 md:p-8">
                    <!-- Header with sidebar toggle -->
                    <div class="mb-6 flex items-center justify-between">
                        <div>
                            <h1 class="text-2xl font-black text-foreground">@ViewData["Title"]</h1>
                            <p class="text-xs font-bold text-muted-foreground uppercase tracking-widest mt-1">
                                Manage your community platform and view real-time analytics.
                            </p>
                        </div>
                        <button id="sidebar-toggle" class="xl:hidden p-2 rounded-lg hover:bg-accent transition-colors">
                            <i data-lucide="menu" class="w-5 h-5"></i>
                        </button>
                    </div>
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <partial name="_AIAssistant" />

    <script src="~/lib/jquery/dist/jquery.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" defer></script>

    <!-- SignalR -->
    @if (User.Identity?.IsAuthenticated == true)
    {
        <script src="~/lib/signalr/signalr.min.js" defer></script>
        <script src="~/js/signalr-notifications.js" asp-append-version="true" defer></script>
    }

    <script src="~/js/site.js" asp-append-version="true" defer></script>
    <script src="~/js/notifications.js" asp-append-version="true" defer></script>
    <script src="~/js/ai-assistant.js" asp-append-version="true" defer></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            lucide.createIcons();
            
            // Dashboard sidebar responsive behavior
            const mainContent = document.getElementById('main-content');
            const sidebar = document.querySelector('.sidebar');
            const sidebarToggle = document.getElementById('sidebar-toggle');
            
            function updateMainContentMargin() {
                if (window.innerWidth >= 1280) { // xl breakpoint
                    // Large screens: sidebar is expanded (224px + 16px left margin + 16px gap = 256px)
                    mainContent.style.marginLeft = '15rem';
                } else if (window.innerWidth >= 768) { // md breakpoint
                    // Medium screens: sidebar is collapsed (64px + 16px left margin + 16px gap = 96px)
                    mainContent.style.marginLeft = '5rem';
                } else {
                    // Small screens: sidebar is hidden
                    mainContent.style.marginLeft = '1rem';
                }
            }
            
            // Update margin on load and resize
            updateMainContentMargin();
            window.addEventListener('resize', updateMainContentMargin);
            
            // Sidebar toggle for mobile
            if (sidebarToggle && sidebar) {
                sidebarToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('sidebar-visible');
                    document.body.classList.toggle('sidebar-visible');
                });
                
                // Close sidebar when clicking outside on mobile
                document.addEventListener('click', function(e) {
                    if (window.innerWidth < 768 && 
                        !sidebar.contains(e.target) && 
                        !sidebarToggle.contains(e.target) &&
                        sidebar.classList.contains('sidebar-visible')) {
                        sidebar.classList.remove('sidebar-visible');
                        document.body.classList.remove('sidebar-visible');
                    }
                });
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>