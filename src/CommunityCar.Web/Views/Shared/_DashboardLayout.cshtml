@using System.Globalization
<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName" dir="@(CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")" class="light">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="user-id"
        content="@(User.Identity?.IsAuthenticated == true ? User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value : "")" />
    <title>@ViewData["Title"] - Dashboard - CommunityCar</title>

    <!-- Theme initialization script (must be before any content) -->
    <script>
        (function() {
            const theme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            document.documentElement.classList.add(theme);
        })();
    </script>

    <performance-optimizations url="@Context.Request.Path" />
    <seo-meta page-type="@(ViewData["PageType"] ?? "Dashboard")" entity-id="@(ViewData["EntityId"] as Guid?)" />

    <link rel="icon" type="image/png" href="~/images/logo/logo.png">
    <link rel="alternate" type="application/rss+xml" title="CommunityCar RSS Feed"
        href="@Url.Action("RSS", "DashboardSEO")" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alexandria:wght@100..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lemonada:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Arabic:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="~/css/app.min.css" asp-append-version="true" />

    <!-- Dynamic Font Styles -->
    <partial name="_FontStyles" />

    @await RenderSectionAsync("Styles", required: false)

    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body class="font-sans antialiased dashboard-body">
    <partial name="_Header" />

    <!-- Main container aligned with sidebar positioning -->
    <div class="flex pb-4 sm:pb-6 md:pb-8 min-h-screen" id="dashboard-container">
        <partial name="_DashboardSidebarLeft" />

        <!-- Main Content Area positioned for dashboard layout -->
        @{
            var hideRightSidebar = ViewData["HideRightSidebar"] as bool? ?? false;
            var mainContentClass = hideRightSidebar ? "xl:mr-0 rtl:xl:mr-0 rtl:xl:ml-0" : "xl:mr-80 rtl:xl:mr-0 rtl:xl:ml-80";
        }
        <main class="flex-1 px-2 sm:px-3 md:px-4 lg:px-6 mt-24 sidebar-spacing @mainContentClass" id="main-content">
            <div class="max-w-none w-full overflow-x-hidden">
                <!-- Header with mobile navigation -->
                <div class="flex items-center justify-between mb-4 sm:mb-6">
                    <!-- Mobile sidebar toggle button -->
                    <div class="flex items-center gap-2 md:hidden">
                        <button id="mobile-sidebar-toggle" class="inline-flex items-center justify-center h-8 w-8 rounded-xl hover:bg-accent hover:text-accent-foreground" aria-label="Toggle Menu">
                            <i data-lucide="menu" class="w-4 h-4"></i>
                        </button>
                        
                        <!-- Separator -->
                        <div class="w-px h-6 bg-border mx-1"></div>
                        
                        <!-- Action icons -->
                        <div class="relative">
                            <button class="inline-flex items-center justify-center h-8 w-8 rounded-xl hover:bg-accent hover:text-accent-foreground dashboard-notification-bell" aria-label="Notifications">
                                <i data-lucide="bell" class="w-4 h-4"></i>
                                <span class="absolute -top-1 -right-1 flex h-4 w-4 items-center justify-center rounded-full bg-destructive text-[10px] font-bold text-destructive-foreground dashboard-notification-badge hidden"></span>
                            </button>
                            
                            <div class="absolute right-0 top-12 w-80 bg-card border border-border rounded-2xl shadow-lg hidden dashboard-notification-dropdown">
                                <div class="flex items-center justify-between p-4 border-b border-border">
                                    <h3 class="text-sm font-semibold">@SharedLocalizer["Notifications"]</h3>
                                    <div class="flex items-center gap-2">
                                        <button class="text-xs text-primary hover:text-primary/80 dashboard-mark-all-read-btn">@SharedLocalizer["MarkAllRead"]</button>
                                    </div>
                                </div>
                                <div class="max-h-96 overflow-y-auto dashboard-notification-list">
                                    <div class="flex flex-col items-center justify-center py-8 dashboard-notification-loading">
                                        <i data-lucide="loader-2" class="w-6 h-6 animate-spin text-muted-foreground"></i>
                                        <p class="text-sm text-muted-foreground mt-2">@SharedLocalizer["LoadingNotifications"]</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <button class="inline-flex items-center justify-center h-8 w-8 rounded-xl hover:bg-accent hover:text-accent-foreground text-xs font-bold" id="dashboard-lang-toggle">@(System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName.ToUpper() == "AR" ? "EN" : "AR")</button>

                        <button id="dashboard-right-sidebar-toggle" class="xl:hidden inline-flex items-center justify-center h-8 w-8 rounded-xl hover:bg-accent hover:text-accent-foreground" aria-label="Toggle Stats">
                            <i data-lucide="layout-sidebar" class="w-4 h-4"></i>
                        </button>
                    </div>
                    
                    <!-- Desktop title section -->
                    <div class="flex-1 text-center md:text-left hidden md:block">
                        <div>
                            <h1 class="text-xl sm:text-2xl md:text-3xl font-black text-foreground leading-tight">@ViewData["Title"]</h1>
                            <p class="text-xs sm:text-sm font-bold text-muted-foreground uppercase tracking-widest mt-1">
                                Manage your community platform and view real-time analytics.
                            </p>
                        </div>
                    </div>
                    
                    <!-- Mobile title (shown only on mobile) -->
                    <div class="flex-1 text-center md:hidden">
                        <h1 class="text-lg font-black text-foreground leading-tight">@ViewData["Title"]</h1>
                    </div>
                </div>
                
                <!-- Mobile-optimized content wrapper -->
                <div class="w-full overflow-x-hidden">
                    @RenderBody()
                </div>
            </div>
        </main>

        @if (!hideRightSidebar)
        {
            @if (IsSectionDefined("SidebarRight"))
            {
                <div class="fixed right-4 rtl:right-auto rtl:left-4 top-24 bottom-20 w-80 hidden xl:block">
                    @RenderSection("SidebarRight")
                </div>
            }
            else
            {
                <partial name="_DashboardSidebarRight" />
            }
        }
    </div>

    <partial name="_AIAssistant" />
    <partial name="_AlertModal" />

    <script src="~/lib/jquery/dist/jquery.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" defer></script>

    <!-- SignalR -->
    @if (User.Identity?.IsAuthenticated == true)
    {
        <script src="~/lib/signalr/signalr.min.js" defer></script>

    }

    <script src="~/js/site.js" asp-append-version="true" defer></script>
    <script src="~/js/notifications.js" asp-append-version="true" defer></script>
    <script src="~/js/ai-assistant.js" asp-append-version="true" defer></script>
    <script src="~/js/layout-interactions.js" asp-append-version="true" defer></script>
    <script src="~/js/comments.js" asp-append-version="true" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>