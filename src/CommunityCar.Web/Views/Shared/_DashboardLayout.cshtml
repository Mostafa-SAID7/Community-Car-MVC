@using System.Globalization
<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName" dir="@(CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")" class="light">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="user-id"
        content="@(User.Identity?.IsAuthenticated == true ? User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value : "")" />
    <title>@ViewData["Title"] - Dashboard - CommunityCar</title>

    <performance-optimizations url="@Context.Request.Path" />
    <seo-meta page-type="@(ViewData["PageType"] ?? "Dashboard")" entity-id="@(ViewData["EntityId"] as Guid?)" />

    <link rel="icon" type="image/png" href="~/images/logo/logo.png">
    <link rel="alternate" type="application/rss+xml" title="CommunityCar RSS Feed"
        href="@Url.Action("RSS", "DashboardSEO")" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alexandria:wght@100..900&display=swap" rel="stylesheet">

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="~/css/app.min.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)

    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body class="font-sans antialiased dashboard-body">
    <partial name="_Header" />

    <!-- Main container aligned with sidebar positioning -->
    <div class="flex pb-4 sm:pb-6 md:pb-8 min-h-screen" id="dashboard-container">
        <partial name="_DashboardSidebarLeft" />

        <!-- Main Content Area positioned for dashboard layout -->
        <main class="flex-1 transition-all duration-300 px-2 sm:px-3 md:px-4 mt-24 md:ml-20 xl:ml-60" id="main-content">
            <div class="max-w-none w-full overflow-x-hidden">
                <div class="bg-card/30 backdrop-blur-xl border border-border rounded-lg sm:rounded-xl shadow-lg sm:shadow-2xl p-3 sm:p-4 md:p-6 lg:p-8 w-full">
                    <!-- Header with mobile navigation -->
                    <div class="flex items-center justify-between mb-4 sm:mb-6">
                        <!-- Mobile dashboard navigation (hidden on desktop) -->
                        <div class="flex items-center gap-2 md:hidden">
                            <!-- Dashboard navigation icons -->
                            <a asp-controller="Overview" asp-action="Index" class="inline-flex items-center justify-center h-8 w-8 rounded-xl hover:bg-accent hover:text-accent-foreground transition-colors" aria-label="Overview">
                                <i data-lucide="layout-dashboard" class="w-4 h-4 text-primary"></i>
                            </a>
                            <a asp-controller="Analytics" asp-action="Index" class="inline-flex items-center justify-center h-8 w-8 rounded-xl hover:bg-accent hover:text-accent-foreground transition-colors" aria-label="Analytics">
                                <i data-lucide="bar-chart-3" class="w-4 h-4"></i>
                            </a>
                            <a asp-controller="Management" asp-action="Index" class="inline-flex items-center justify-center h-8 w-8 rounded-xl hover:bg-accent hover:text-accent-foreground transition-colors" aria-label="Management">
                                <i data-lucide="settings-2" class="w-4 h-4"></i>
                            </a>
                            <a asp-controller="Reports" asp-action="Index" class="inline-flex items-center justify-center h-8 w-8 rounded-xl hover:bg-accent hover:text-accent-foreground transition-colors" aria-label="Reports">
                                <i data-lucide="flag" class="w-4 h-4"></i>
                            </a>
                            <a asp-controller="Monitoring" asp-action="Index" class="inline-flex items-center justify-center h-8 w-8 rounded-xl hover:bg-accent hover:text-accent-foreground transition-colors" aria-label="Monitoring">
                                <i data-lucide="activity" class="w-4 h-4"></i>
                            </a>
                            <a asp-controller="Settings" asp-action="Index" class="inline-flex items-center justify-center h-8 w-8 rounded-xl hover:bg-accent hover:text-accent-foreground transition-colors" aria-label="Settings">
                                <i data-lucide="sliders" class="w-4 h-4"></i>
                            </a>
                            
                            <!-- Separator -->
                            <div class="w-px h-6 bg-border mx-1"></div>
                            
                            <!-- Action icons -->
                            <button class="inline-flex items-center justify-center h-8 w-8 rounded-xl hover:bg-accent hover:text-accent-foreground transition-colors" id="dashboard-theme-toggle">
                                <i data-lucide="sun" id="dashboard-sun-icon" class="w-4 h-4"></i>
                                <i data-lucide="moon" id="dashboard-moon-icon" class="w-4 h-4 hidden"></i>
                            </button>
                            
                            <div class="relative">
                                <button class="inline-flex items-center justify-center h-8 w-8 rounded-xl hover:bg-accent hover:text-accent-foreground transition-colors dashboard-notification-bell" aria-label="Notifications">
                                    <i data-lucide="bell" class="w-4 h-4"></i>
                                    <span class="absolute -top-1 -right-1 flex h-4 w-4 items-center justify-center rounded-full bg-destructive text-[10px] font-bold text-destructive-foreground dashboard-notification-badge" style="display: none;"></span>
                                </button>
                                
                                <div class="absolute right-0 top-12 w-80 bg-card border border-border rounded-2xl shadow-lg hidden dashboard-notification-dropdown">
                                    <div class="flex items-center justify-between p-4 border-b border-border">
                                        <h3 class="text-sm font-semibold">Notifications</h3>
                                        <div class="flex items-center gap-2">
                                            <button class="text-xs text-primary hover:text-primary/80 transition-colors dashboard-mark-all-read-btn">Mark all read</button>
                                        </div>
                                    </div>
                                    <div class="max-h-96 overflow-y-auto dashboard-notification-list">
                                        <div class="flex flex-col items-center justify-center py-8 dashboard-notification-loading">
                                            <i data-lucide="loader-2" class="w-6 h-6 animate-spin text-muted-foreground"></i>
                                            <p class="text-sm text-muted-foreground mt-2">Loading notifications...</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <button class="inline-flex items-center justify-center h-8 w-8 rounded-xl hover:bg-accent hover:text-accent-foreground transition-colors text-xs font-bold" id="dashboard-lang-toggle">AR</button>
                        </div>
                        
                        <!-- Desktop title section -->
                        <div class="flex-1 text-center md:text-left hidden md:block">
                            <div>
                                <h1 class="text-xl sm:text-2xl md:text-3xl font-black text-foreground leading-tight">@ViewData["Title"]</h1>
                                <p class="text-xs sm:text-sm font-bold text-muted-foreground uppercase tracking-widest mt-1">
                                    Manage your community platform and view real-time analytics.
                                </p>
                            </div>
                        </div>
                        
                        <!-- Mobile title (shown only on mobile) -->
                        <div class="flex-1 text-center md:hidden">
                            <h1 class="text-lg font-black text-foreground leading-tight">@ViewData["Title"]</h1>
                        </div>
                    </div>
                    
                    <!-- Mobile-optimized content wrapper -->
                    <div class="w-full overflow-x-hidden">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </main>
    </div>

    <partial name="_AIAssistant" />

    <script src="~/lib/jquery/dist/jquery.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" defer></script>

    <!-- SignalR -->
    @if (User.Identity?.IsAuthenticated == true)
    {
        <script src="~/lib/signalr/signalr.min.js" defer></script>

    }

    <script src="~/js/site.js" asp-append-version="true" defer></script>
    <script src="~/js/notifications.js" asp-append-version="true" defer></script>
    <script src="~/js/ai-assistant.js" asp-append-version="true" defer></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            lucide.createIcons();
            
            // Dashboard sidebar responsive behavior
            const mainContent = document.getElementById('main-content');
            const sidebar = document.querySelector('.sidebar');
            
            function updateMainContentMargin() {
                // CSS classes handle the responsive margins, JavaScript only handles mobile sidebar visibility
                // ml-4 md:ml-20 xl:ml-60 are set in CSS for responsive behavior
            }
            
            // Handle mobile viewport height
            function setMobileViewportHeight() {
                const vh = window.innerHeight * 0.01;
                document.documentElement.style.setProperty('--vh', `${vh}px`);
            }
            
            setMobileViewportHeight();
            window.addEventListener('resize', setMobileViewportHeight);
            window.addEventListener('orientationchange', setMobileViewportHeight);
            
            // Dashboard mobile theme toggle functionality
            const dashboardThemeToggle = document.getElementById('dashboard-theme-toggle');
            const dashboardSunIcon = document.getElementById('dashboard-sun-icon');
            const dashboardMoonIcon = document.getElementById('dashboard-moon-icon');
            const desktopThemeToggle = document.getElementById('theme-toggle');
            
            if (dashboardThemeToggle && desktopThemeToggle) {
                dashboardThemeToggle.addEventListener('click', function() {
                    // Trigger the desktop theme toggle
                    desktopThemeToggle.click();
                });
                
                // Sync dashboard icons with desktop theme state
                const observer = new MutationObserver(function(mutations) {
                    mutations.forEach(function(mutation) {
                        if (mutation.target.id === 'sun-icon' || mutation.target.id === 'moon-icon') {
                            const desktopSunHidden = document.getElementById('sun-icon').classList.contains('hidden');
                            const desktopMoonHidden = document.getElementById('moon-icon').classList.contains('hidden');
                            
                            if (desktopSunHidden) {
                                dashboardSunIcon.classList.add('hidden');
                                dashboardMoonIcon.classList.remove('hidden');
                            } else {
                                dashboardSunIcon.classList.remove('hidden');
                                dashboardMoonIcon.classList.add('hidden');
                            }
                        }
                    });
                });
                
                // Observe changes to desktop theme icons
                const desktopSunIcon = document.getElementById('sun-icon');
                const desktopMoonIcon = document.getElementById('moon-icon');
                if (desktopSunIcon && desktopMoonIcon) {
                    observer.observe(desktopSunIcon, { attributes: true, attributeFilter: ['class'] });
                    observer.observe(desktopMoonIcon, { attributes: true, attributeFilter: ['class'] });
                }
            }
            
            // Dashboard mobile language toggle functionality
            const dashboardLangToggle = document.getElementById('dashboard-lang-toggle');
            const desktopLangToggle = document.getElementById('lang-toggle');
            
            if (dashboardLangToggle && desktopLangToggle) {
                dashboardLangToggle.addEventListener('click', function() {
                    // Trigger the desktop language toggle
                    desktopLangToggle.click();
                });
                
                // Sync dashboard text with desktop
                dashboardLangToggle.textContent = desktopLangToggle.textContent;
            }
            
            // Dashboard mobile notification functionality
            const dashboardNotificationBell = document.querySelector('.dashboard-notification-bell');
            const dashboardNotificationDropdown = document.querySelector('.dashboard-notification-dropdown');
            const desktopNotificationBell = document.querySelector('.notification-bell');
            
            if (dashboardNotificationBell && desktopNotificationBell) {
                dashboardNotificationBell.addEventListener('click', function() {
                    dashboardNotificationDropdown.classList.toggle('hidden');
                });
                
                // Sync notification badge
                const desktopBadge = document.querySelector('.notification-badge');
                const dashboardBadge = document.querySelector('.dashboard-notification-badge');
                
                if (desktopBadge && dashboardBadge) {
                    const badgeObserver = new MutationObserver(function(mutations) {
                        mutations.forEach(function(mutation) {
                            if (mutation.target === desktopBadge) {
                                dashboardBadge.style.display = desktopBadge.style.display;
                                dashboardBadge.textContent = desktopBadge.textContent;
                            }
                        });
                    });
                    
                    badgeObserver.observe(desktopBadge, { attributes: true, childList: true, subtree: true });
                }
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>