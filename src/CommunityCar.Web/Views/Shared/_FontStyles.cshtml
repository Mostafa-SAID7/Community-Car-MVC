@using CommunityCar.Web.Helpers
@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var fontFamily = FontHelper.GetBodyFontFamily();
    var headingFontFamily = FontHelper.GetHeadingFontFamily();
    var direction = FontHelper.IsArabicCulture() ? "rtl" : "ltr";
}

<style>
    :root {
        --font-family: @fontFamily;
        --heading-font-family: @headingFontFamily;
        --text-direction: @direction;
    }
    
    body {
        font-family: var(--font-family);
        direction: var(--text-direction);
    }
    
    h1, h2, h3, h4, h5, h6 {
        font-family: var(--heading-font-family);
    }
</style>
