@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<aside class="w-full space-y-6">
    <div class="bg-card/40 backdrop-blur-xl border border-border rounded-2xl p-6 shadow-sm">
        <h3 class="flex items-center gap-2 text-sm font-bold mb-6 uppercase tracking-wider text-primary">
            <i data-lucide="star" class="w-4 h-4"></i>
            Reviews
        </h3>
        
        <div class="space-y-6">
            <div class="space-y-4">
                <h4 class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">Latest Car Reviews</h4>
                @for (int i = 1; i <= 3; i++)
                {
                    <div class="space-y-2 p-3 rounded-xl bg-accent/20 hover:bg-accent/40 transition-all cursor-pointer">
                        <p class="text-xs font-bold leading-tight">2026 Sports Sedan X@i</p>
                        <div class="flex items-center gap-1 text-orange-400">
                             @for(int s=0; s<5; s++) { <i data-lucide="star" class="w-2.5 h-2.5 fill-current"></i> }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</aside>
