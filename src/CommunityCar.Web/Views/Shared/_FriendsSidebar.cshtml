@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<aside class="w-full space-y-6">
    <div class="bg-card/40 backdrop-blur-xl border border-border rounded-2xl p-6 shadow-sm">
        <h3 class="flex items-center gap-2 text-sm font-bold mb-6 uppercase tracking-wider text-primary">
            <i data-lucide="user-plus" class="w-4 h-4"></i>
            Friends
        </h3>
        
        <div class="space-y-6">
            <div class="space-y-4">
                <h4 class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">People You May Know</h4>
                @for (int i = 1; i <= 3; i++)
                {
                    <div class="flex items-center gap-3 p-2 rounded-xl hover:bg-accent/30 transition-all cursor-pointer">
                        <div class="w-10 h-10 rounded-full bg-muted overflow-hidden">
                            <img src="/images/default-avatar.png" class="w-full h-full object-cover" />
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-xs font-bold truncate">Friend Suggestion @i</p>
                            <p class="text-[9px] text-muted-foreground">@i Mutual Friends</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</aside>
