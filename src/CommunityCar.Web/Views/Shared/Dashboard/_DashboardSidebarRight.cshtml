@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<CommunityCar.Web.SharedResource> SharedLocalizer

<!-- Dashboard Right Sidebar (Stats & System Health) -->
<div class="d-flex flex-column gap-4 p-3">
    <!-- System Status -->
    <div class="card card-premium p-4 border-0">
        <h6 class="d-flex align-items-center gap-2 small fw-black text-uppercase tracking-widest text-primary-red mb-4">
            <i data-lucide="activity" style="width: 14px; height: 14px;"></i>
            @Localizer["SystemStatus"]
        </h6>
        
        <div class="mb-4">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="small fw-bold text-muted opacity-50">@Localizer["CoreEngine"]</span>
                <span class="small fw-black text-uppercase text-success d-flex align-items-center gap-1">
                    <span class="bg-success rounded-circle" style="width: 6px; height: 6px;"></span>
                    @Localizer["Operational"]
                </span>
            </div>
            
            <div class="small fw-black text-uppercase tracking-tighter text-muted opacity-30 mb-1">@Localizer["LoadFactor"]</div>
            <div class="progress" style="height: 4px; background-color: rgba(0,0,0,0.05);">
                <div class="progress-bar bg-primary-red shadow-sm" style="width: 14%"></div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card card-premium p-4 border-0">
        <h6 class="d-flex align-items-center gap-2 small fw-black text-uppercase tracking-widest text-primary-red mb-4">
            <i data-lucide="zap" style="width: 14px; height: 14px;"></i>
            @Localizer["QuickActions"]
        </h6>
        
        <div class="row g-2">
            <div class="col-6">
                <a href="@Url.Action("Generate", "Reports")" class="d-flex flex-column align-items-center justify-content-center p-3 rounded-4 bg-light border hover-bg-primary-red-subtle transition-all text-decoration-none text-dark group">
                    <i data-lucide="file-plus" class="text-primary-red mb-2 group-hover-scale-110 transition-transform" style="width: 20px;"></i>
                    <span class="fw-black text-uppercase tracking-tighter text-center" style="font-size: 0.6rem;">@Localizer["NewReport"]</span>
                </a>
            </div>
            <div class="col-6">
                <a href="@Url.Action("Index", "SEO")" class="d-flex flex-column align-items-center justify-content-center p-3 rounded-4 bg-light border hover-bg-primary-red-subtle transition-all text-decoration-none text-dark group">
                    <i data-lucide="search" class="text-primary-red mb-2 group-hover-scale-110 transition-transform" style="width: 20px;"></i>
                    <span class="fw-black text-uppercase tracking-tighter text-center" style="font-size: 0.6rem;">@Localizer["SEOAudit"]</span>
                </a>
            </div>
            <div class="col-6">
                <a href="@Url.Action("Index", "Cache")" class="d-flex flex-column align-items-center justify-content-center p-3 rounded-4 bg-light border hover-bg-primary-red-subtle transition-all text-decoration-none text-dark group">
                    <i data-lucide="database" class="text-primary-red mb-2 group-hover-scale-110 transition-transform" style="width: 20px;"></i>
                    <span class="fw-black text-uppercase tracking-tighter text-center" style="font-size: 0.6rem;">@Localizer["FlushCache"]</span>
                </a>
            </div>
            <div class="col-6">
                <a href="@Url.Action("Index", "BackgroundJobs")" class="d-flex flex-column align-items-center justify-content-center p-3 rounded-4 bg-light border hover-bg-primary-red-subtle transition-all text-decoration-none text-dark group">
                    <i data-lucide="clock" class="text-primary-red mb-2 group-hover-scale-110 transition-transform" style="width: 20px;"></i>
                    <span class="fw-black text-uppercase tracking-tighter text-center" style="font-size: 0.6rem;">@Localizer["JobQueue"]</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Logs -->
    <div class="card card-premium p-4 border-0 flex-grow-1">
        <h6 class="d-flex align-items-center gap-2 small fw-black text-uppercase tracking-widest text-primary-red mb-4">
            <i data-lucide="list" style="width: 14px; height: 14px;"></i>
            @Localizer["SystemLogs"]
        </h6>
        
        <div class="d-flex flex-column gap-3">
            <div class="d-flex gap-3 align-items-start p-2 rounded-3 hover-bg-light transition-colors">
                <div class="bg-primary-red rounded-circle mt-1 shadow-sm" style="width: 6px; height: 6px;"></div>
                <div class="flex-grow-1">
                    <p class="mb-0 small fw-bold leading-tight">Admin login from 192.168.1.1</p>
                    <p class="mb-0 text-muted opacity-50 fw-black text-uppercase tracking-widest" style="font-size: 0.6rem;">2 mins ago</p>
                </div>
            </div>
            <div class="d-flex gap-3 align-items-start p-2 rounded-3 hover-bg-light transition-colors">
                <div class="bg-success rounded-circle mt-1 shadow-sm" style="width: 6px; height: 6px;"></div>
                <div class="flex-grow-1">
                    <p class="mb-0 small fw-bold leading-tight">Analytics Report generated</p>
                    <p class="mb-0 text-muted opacity-50 fw-black text-uppercase tracking-widest" style="font-size: 0.6rem;">15 mins ago</p>
                </div>
            </div>
        </div>
        
        <a href="@Url.Action("Index", "Monitoring")" class="btn btn-outline-secondary btn-sm w-100 mt-4 rounded-4 fw-black text-uppercase tracking-widest" style="font-size: 0.65rem;">
            @Localizer["FullDiagnostics"]
        </a>
    </div>

    <!-- AI Insights Footer -->
    <div class="card card-premium p-3 border-0 bg-primary-red text-white animate-float">
        <div class="d-flex align-items-center gap-2 mb-2">
            <i data-lucide="sparkles" style="width: 14px; height: 14px;"></i>
            <span class="small fw-black text-uppercase tracking-widest">AI Insights</span>
        </div>
        <p class="mb-0 small opacity-75" style="font-size: 0.7rem;">System performance optimized. No bottlenecks detected.</p>
    </div>
</div>
