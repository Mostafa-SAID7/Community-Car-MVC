@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@inject Microsoft.AspNetCore.Mvc.Localization.IHtmlLocalizer<CommunityCar.Web.SharedResource> SharedLocalizer

<!-- Dashboard Left Sidebar -->
<nav class="d-flex flex-column gap-2 p-3">
    <div class="small fw-black text-uppercase tracking-widest text-muted opacity-40 px-3 mb-2" style="font-size: 0.6rem;">Management</div>
    
    <a asp-controller="Overview" asp-action="Index"
        class="nav-link d-flex align-items-center gap-3 px-3 py-2 rounded-4 small fw-bold text-uppercase tracking-wider transition-all @(ViewContext.RouteData.Values["controller"]?.ToString() == "Overview" ? "bg-primary-red text-white shadow-sm" : "text-dark hover-bg-light")">
        <i data-lucide="layout-dashboard" style="width: 18px; height: 18px;"></i>
        <span>@SharedLocalizer["Overview"]</span>
    </a>

    <a asp-controller="Analytics" asp-action="Index"
        class="nav-link d-flex align-items-center gap-3 px-3 py-2 rounded-4 small fw-bold text-uppercase tracking-wider transition-all @(ViewContext.RouteData.Values["controller"]?.ToString() == "Analytics" ? "bg-primary-red text-white shadow-sm" : "text-dark hover-bg-light")">
        <i data-lucide="bar-chart-3" style="width: 18px; height: 18px;"></i>
        <span>@SharedLocalizer["Analytics"]</span>
    </a>

    <a asp-controller="AIManagement" asp-action="Index"
        class="nav-link d-flex align-items-center gap-3 px-3 py-2 rounded-4 small fw-bold text-uppercase tracking-wider transition-all @(ViewContext.RouteData.Values["controller"]?.ToString() == "AIManagement" ? "bg-primary-red text-white shadow-sm" : "text-dark hover-bg-light")">
        <i data-lucide="brain" style="width: 18px; height: 18px;"></i>
        <span>AI Management</span>
    </a>

    <div class="small fw-black text-uppercase tracking-widest text-muted opacity-40 px-3 mt-4 mb-2" style="font-size: 0.6rem;">System</div>

    <a asp-controller="Management" asp-action="Index"
        class="nav-link d-flex align-items-center gap-3 px-3 py-2 rounded-4 small fw-bold text-uppercase tracking-wider transition-all @(ViewContext.RouteData.Values["controller"]?.ToString() == "Management" ? "bg-primary-red text-white shadow-sm" : "text-dark hover-bg-light")">
        <i data-lucide="settings-2" style="width: 18px; height: 18px;"></i>
        <span>@SharedLocalizer["AdminControl"]</span>
    </a>

    <a asp-controller="Errors" asp-action="Index"
        class="nav-link d-flex align-items-center gap-3 px-3 py-2 rounded-4 small fw-bold text-uppercase tracking-wider transition-all @(ViewContext.RouteData.Values["controller"]?.ToString() == "Errors" ? "bg-primary-red text-white shadow-sm" : "text-dark hover-bg-light")">
        <i data-lucide="alert-triangle" style="width: 18px; height: 18px;"></i>
        <span>@SharedLocalizer["ErrorLogs"]</span>
    </a>

    <a asp-controller="Monitoring" asp-action="Index"
        class="nav-link d-flex align-items-center gap-3 px-3 py-2 rounded-4 small fw-bold text-uppercase tracking-wider transition-all @(ViewContext.RouteData.Values["controller"]?.ToString() == "Monitoring" ? "bg-primary-red text-white shadow-sm" : "text-dark hover-bg-light")">
        <i data-lucide="activity" style="width: 18px; height: 18px;"></i>
        <span>@SharedLocalizer["Monitoring"]</span>
    </a>

    <a asp-controller="Performance" asp-action="Index"
        class="nav-link d-flex align-items-center gap-3 px-3 py-2 rounded-4 small fw-bold text-uppercase tracking-wider transition-all @(ViewContext.RouteData.Values["controller"]?.ToString() == "Performance" ? "bg-primary-red text-white shadow-sm" : "text-dark hover-bg-light")">
        <i data-lucide="gauge" style="width: 18px; height: 18px;"></i>
        <span>@SharedLocalizer["Performance"]</span>
    </a>

    <div class="mt-auto pt-4 border-top">
        <a href="/"
            class="nav-link d-flex align-items-center gap-3 px-3 py-2 rounded-4 small fw-bold text-uppercase tracking-wider text-dark hover-bg-light">
            <i data-lucide="home" style="width: 18px; height: 18px;"></i>
            <span>@SharedLocalizer["BackToSite"]</span>
        </a>
    </div>
</nav>
