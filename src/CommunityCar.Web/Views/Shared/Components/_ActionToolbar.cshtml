@using Microsoft.Extensions.Localization
@model CommunityCar.Application.Features.Shared.ViewModels.ActionToolbarVM
@inject IStringLocalizer<SharedResource> SharedLocalizer

<!-- Action Toolbar: Mirroring QA Details Interaction Protocol -->
<div class="flex p-6 md:p-8 gap-4">
    <!-- Like Button -->
    @await Html.PartialAsync("Components/_ActionButton", new CommunityCar.Application.Features.Shared.ViewModels.ActionButtonVM
    {
        Type = "like",
        Action = "toggle-like",
        Label = SharedLocalizer["Like"],
        EntityId = Model.EntityId,
        EntityType = Model.EntityType,
        IsActive = Model.IsLikedByUser
    })
    
    <!-- Comment Button -->
    @await Html.PartialAsync("Components/_ActionButton", new CommunityCar.Application.Features.Shared.ViewModels.ActionButtonVM
    {
        Type = "comment",
        Action = "toggle-comments",
        Label = SharedLocalizer["Comment"],
        EntityId = Model.EntityId,
        EntityType = Model.EntityType,
        IsActive = false
    })
    
    <!-- Share Button -->
    @await Html.PartialAsync("Components/_ActionButton", new CommunityCar.Application.Features.Shared.ViewModels.ActionButtonVM
    {
        Type = "share",
        Action = "share-content",
        Label = SharedLocalizer["Share"],
        EntityId = Model.EntityId,
        EntityType = Model.EntityType,
        IsActive = false
    })
    
    <!-- Bookmark Button -->
    <button class="flex-1 py-3 flex items-center justify-center gap-2 text-[10px] font-black uppercase tracking-widest text-muted-foreground hover:text-yellow-500 hover:bg-yellow-500/5 rounded-xl transition-all group/bookmark @(Model.IsBookmarkedByUser ? "text-yellow-500 bg-yellow-500/5" : "")" 
            data-action="bookmark-content"
            data-entity-id="@Model.EntityId" 
            data-entity-type="@Model.EntityType">
        <i data-lucide="bookmark" class="w-4 h-4 group-hover/bookmark:scale-110 transition-all @(Model.IsBookmarkedByUser ? "fill-current" : "")"></i>
        <span>@SharedLocalizer["Save"]</span>
    </button>
</div>
