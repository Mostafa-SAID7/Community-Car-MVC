@model CommunityCar.Web.Models.Error.ErrorDetailsViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["ErrorDetails"];
    Layout = "_Layout";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-12">
    <!-- Modern Engineering Header -->
    <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-6 lg:gap-8 px-2 mb-8 lg:mb-12">
        <div class="space-y-3 lg:space-y-4">
            <nav class="flex items-center gap-3 text-[10px] font-black uppercase tracking-[0.3em] text-red-500 mb-4 lg:mb-6 font-mono">
                <i data-lucide="terminal" class="w-3.5 h-3.5 fill-current"></i> @Localizer["SystemFailureArchive"]
            </nav>
            <h1 class="text-3xl sm:text-4xl lg:text-5xl font-black text-foreground tracking-tighter leading-none">@Localizer["ApplicationError"]</h1>
            <p class="text-[10px] font-black text-muted-foreground opacity-50 mt-3 lg:mt-4 border-l-4 rtl:border-r-4 rtl:border-l-0 border-red-500/20 pl-4 rtl:pr-4 rtl:pl-0 py-1 tracking-[0.2em] font-mono leading-relaxed">
                @Localizer["CriticalExceptionDetected"] :: @Model?.ErrorId
            </p>
        </div>
        
        <div class="flex gap-3">
            <button data-action="go-back" class="inline-flex items-center justify-center gap-2.5 px-4 lg:px-6 py-2.5 bg-card border border-border/50 hover:bg-muted/10 text-foreground text-[10px] font-black uppercase tracking-widest rounded-xl transition-all active:scale-95 group/back">
                <i data-lucide="arrow-left" class="w-4 h-4 group-hover/back:-translate-x-1 rtl:group-hover/back:translate-x-1 rtl:rotate-180 transition-transform"></i>
                <span class="hidden sm:inline">@Localizer["RevertIndex"]</span>
                <span class="sm:hidden">@Localizer["Back"]</span>
            </button>
        </div>
    </div>

    <div class="grid grid-cols-1 xl:grid-cols-3 gap-6 lg:gap-8">
        <!-- Main Error Registry -->
        <div class="xl:col-span-2 space-y-6 lg:space-y-8">
            <!-- Error Summary Registry -->
            <div class="bg-card/30 backdrop-blur-xl border border-border/50 rounded-[2rem] shadow-xl transition-all duration-300 hover:border-primary/20 hover:shadow-2xl relative overflow-hidden group">
                <div class="absolute top-0 right-0 rtl:right-auto rtl:left-0 w-32 sm:w-48 lg:w-64 h-32 sm:h-48 lg:h-64 bg-red-500/5 rounded-full blur-3xl -mr-16 sm:-mr-24 lg:-mr-32 rtl:-ml-16 rtl:sm:-ml-24 rtl:lg:-ml-32 rtl:mr-0 -mt-16 sm:-mt-24 lg:-mt-32"></div>
                
                <div class="p-6 sm:p-8 lg:p-10 flex flex-col sm:flex-row items-start gap-6 lg:gap-8 relative z-10">
                    <div class="w-16 sm:w-20 h-16 sm:h-20 rounded-2xl sm:rounded-[2.5rem] bg-red-500/10 border border-red-500/20 flex items-center justify-center text-red-600 shadow-2xl shadow-red-500/5 shrink-0">
                        <i data-lucide="alert-octagon" class="w-8 sm:w-10 h-8 sm:h-10"></i>
                    </div>
                    <div class="flex-1 space-y-4 lg:space-y-6 min-w-0">
                        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-3">
                            <div class="text-[10px] font-black uppercase tracking-widest text-red-500 opacity-60">@Localizer["IncidentSummary"]</div>
                            <span class="px-3 py-1 bg-red-500/10 text-red-500 border border-red-500/20 rounded-xl text-[10px] font-black uppercase tracking-widest break-all">@Localizer["ErrorCode"]: @Model?.RequestId</span>
                        </div>
                        <h2 class="text-xl sm:text-2xl lg:text-3xl font-black text-foreground leading-tight tracking-tight" id="errorMessage">@Localizer["LoadingIncidentTelemetry"]</h2>
                        
                        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-6 pt-4 lg:pt-6 border-t border-border/20">
                            <div class="space-y-1">
                                <span class="text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["Timestamp"]</span>
                                <div class="text-[11px] font-bold text-foreground font-mono" id="errorTimestamp">--/--:--:--</div>
                            </div>
                            <div class="space-y-1">
                                <span class="text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["SourceNode"]</span>
                                <div class="text-[11px] font-bold text-foreground font-mono break-all" id="errorPath">@Localizer["LocatingNode"]</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Technical Trace Matrix -->
            <div class="bg-card/30 backdrop-blur-xl border border-border/50 rounded-[2rem] shadow-xl transition-all duration-300 hover:border-primary/20 hover:shadow-2xl">
                <div class="p-4 border-b border-border/30 bg-muted/20 flex justify-between items-center px-6">
                    <div class="flex flex-col sm:flex-row sm:items-center justify-between w-full gap-3">
                        <div class="flex items-center gap-3">
                            <div class="w-1.5 h-6 bg-red-500 rounded-full"></div>
                            <h3 class="text-xs font-black uppercase tracking-[0.2em] text-foreground">@Localizer["DiagnosticTraceMatrix"]</h3>
                        </div>
                        <button data-action="toggle-details" class="text-[10px] font-black uppercase tracking-widest text-primary hover:opacity-80 transition-opacity self-start sm:self-center">
                            <span id="toggleText">@Localizer["ShowDetails"]</span>
                        </button>
                    </div>
                </div>
                
                <div class="p-4 sm:p-6 hidden space-y-6 lg:space-y-8" id="technicalDetails">
                    <div class="space-y-4">
                        <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["ExceptionLog"]</label>
                        <div class="bg-black/90 rounded-2xl p-4 sm:p-6 border border-white/5 overflow-x-auto">
                            <pre class="text-xs text-red-400 font-mono whitespace-pre-wrap leading-relaxed" id="errorDetails">@Localizer["AwaitingManualOverride"]</pre>
                        </div>
                    </div>
                    
                    <div class="space-y-4">
                        <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["StackTelemetry"]</label>
                        <div class="bg-black/90 rounded-2xl p-4 sm:p-6 border border-white/5 overflow-x-auto custom-scrollbar">
                            <pre class="text-[10px] text-white/60 font-mono whitespace-pre leading-relaxed" id="stackTrace">@Localizer["RegistryLocked"]</pre>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Operational Sidebar -->
        <div class="space-y-6 lg:space-y-8">
            <!-- Directives Card -->
            <div class="bg-card/30 backdrop-blur-xl border border-border/50 rounded-[2rem] shadow-xl transition-all duration-300 hover:border-primary/20 hover:shadow-2xl">
                <div class="p-4 sm:p-6">
                    <div class="flex items-center gap-3 mb-6 lg:mb-8">
                        <div class="w-1 h-4 bg-primary rounded-full"></div>
                        <h3 class="text-xs sm:text-sm font-black text-foreground tracking-widest uppercase">@Localizer["OperationalDirectives"]</h3>
                    </div>

                    <div class="space-y-3 lg:space-y-4">
                        <button data-action="reload-page" class="inline-flex items-center justify-center w-full px-4 sm:px-6 h-12 sm:h-14 bg-primary text-primary-foreground hover:bg-primary/90 text-[10px] font-black uppercase tracking-widest rounded-xl transition-all shadow-lg shadow-primary/20 active:scale-95 group/retry">
                            <i data-lucide="refresh-cw" class="w-4 sm:w-5 h-4 sm:h-5 mr-3 sm:mr-4 rtl:mr-0 rtl:ml-3 rtl:sm:ml-4 group-hover/retry:rotate-180 transition-transform duration-700"></i> 
                            <span class="hidden sm:inline">@Localizer["ExecuteRetry"]</span>
                            <span class="sm:hidden">@Localizer["Retry"]</span>
                        </button>
                        <a href="/" class="inline-flex items-center justify-center w-full px-4 sm:px-6 h-12 sm:h-14 bg-card border border-border/50 hover:bg-muted/10 text-foreground text-[10px] font-black uppercase tracking-widest rounded-xl transition-all active:scale-95 group/home">
                            <i data-lucide="home" class="w-4 sm:w-5 h-4 sm:h-5 mr-3 sm:mr-4 rtl:mr-0 rtl:ml-3 rtl:sm:ml-4 opacity-70 group-hover/home:scale-110 transition-transform"></i> 
                            <span class="hidden sm:inline">@Localizer["AbortToBase"]</span>
                            <span class="sm:hidden">@Localizer["Home"]</span>
                        </a>
                        <button data-action="report-error" class="inline-flex items-center justify-center w-full px-4 sm:px-6 h-12 sm:h-14 bg-card border border-red-500/20 text-red-500 hover:bg-red-500/10 text-[10px] font-black uppercase tracking-widest rounded-xl transition-all active:scale-95 group/report">
                            <i data-lucide="flag" class="w-4 sm:w-5 h-4 sm:h-5 mr-3 sm:mr-4 rtl:mr-0 rtl:ml-3 rtl:sm:ml-4 group-hover/report:translate-y-0.5 transition-transform"></i> 
                            <span class="hidden sm:inline">@Localizer["FileIncidentReport"]</span>
                            <span class="sm:hidden">@Localizer["Report"]</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- System Intelligence -->
            <div class="bg-card/30 backdrop-blur-xl border border-border/50 rounded-[2rem] shadow-xl transition-all duration-300 hover:border-primary/20 hover:shadow-2xl">
                <div class="p-4 sm:p-6 bg-primary/5">
                    <h4 class="text-xs font-black uppercase tracking-widest text-primary mb-4">@Localizer["SystemIntelligence"]</h4>
                    <p class="text-xs font-medium text-muted-foreground leading-relaxed opacity-80 mb-6">
                        @Localizer["SystemIntelligenceDescription"]
                    </p>
                    <div class="space-y-4">
                        <a href="mailto:support@communitycar.com" class="flex items-center gap-3 text-[10px] font-black uppercase tracking-widest text-muted-foreground hover:text-primary transition-colors">
                            <i data-lucide="mail" class="w-4 h-4"></i> 
                            <span class="hidden sm:inline">@Localizer["UrgentRelay"]</span>
                            <span class="sm:hidden">@Localizer["Contact"]</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Error Reporting Modal -->
    <div id="reportModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden z-50 flex items-center justify-center p-4 animate-in fade-in duration-300">
        <div class="bg-card border border-border rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto animate-in zoom-in-95 duration-300">
            <div class="p-4 sm:p-6 border-b border-border">
                <div class="flex items-center justify-between">
                    <h3 class="text-lg sm:text-xl font-bold text-foreground flex items-center gap-2">
                        <i data-lucide="flag" class="w-5 h-5 text-red-500"></i>
                        @Localizer["ReportErrorIssue"]
                    </h3>
                    <button data-action="close-report-modal" class="text-muted-foreground hover:text-foreground">
                        <i data-lucide="x" class="w-6 h-6"></i>
                    </button>
                </div>
            </div>
            
            <form id="errorReportForm" class="p-4 sm:p-6 space-y-4 sm:space-y-6">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-bold text-foreground mb-2">@Localizer["YourName"]</label>
                        <input type="text" id="userName" name="userName" required class="w-full px-4 py-2 border border-border rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent bg-card text-foreground">
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-foreground mb-2">@Localizer["YourEmail"]</label>
                        <input type="email" id="userEmail" name="userEmail" required class="w-full px-4 py-2 border border-border rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent bg-card text-foreground">
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-bold text-foreground mb-2">@Localizer["PriorityLevel"]</label>
                    <select id="priority" name="priority" class="w-full px-4 py-2 border border-border rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent bg-card text-foreground">
                        <option value="Low">@Localizer["PriorityLow"]</option>
                        <option value="Medium" selected>@Localizer["PriorityMedium"]</option>
                        <option value="High">@Localizer["PriorityHigh"]</option>
                        <option value="Critical">@Localizer["PriorityCritical"]</option>
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-bold text-foreground mb-2">@Localizer["DescribeProblem"]</label>
                    <textarea id="description" name="description" rows="3" required placeholder="@Localizer["DescribeProblemPlaceholder"]" class="w-full px-4 py-2 border border-border rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent bg-card text-foreground resize-vertical"></textarea>
                </div>

                <div>
                    <label class="block text-sm font-bold text-foreground mb-2">@Localizer["StepsToReproduce"]</label>
                    <textarea id="stepsToReproduce" name="stepsToReproduce" rows="3" placeholder="@Localizer["StepsToReproducePlaceholder"]" class="w-full px-4 py-2 border border-border rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent bg-card text-foreground resize-vertical"></textarea>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-bold text-foreground mb-2">@Localizer["ExpectedBehavior"]</label>
                        <textarea id="expectedBehavior" name="expectedBehavior" rows="2" placeholder="@Localizer["ExpectedBehaviorPlaceholder"]" class="w-full px-4 py-2 border border-border rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent bg-card text-foreground resize-vertical"></textarea>
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-foreground mb-2">@Localizer["ActualBehavior"]</label>
                        <textarea id="actualBehavior" name="actualBehavior" rows="2" placeholder="@Localizer["ActualBehaviorPlaceholder"]" class="w-full px-4 py-2 border border-border rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent bg-card text-foreground resize-vertical"></textarea>
                    </div>
                </div>

                <div class="flex flex-col sm:flex-row items-center justify-end gap-4 pt-4 border-t border-border">
                    <button type="button" data-action="close-report-modal" class="w-full sm:w-auto px-6 py-2 text-muted-foreground hover:text-foreground font-medium">
                        @Localizer["Cancel"]
                    </button>
                    <button type="submit" class="w-full sm:w-auto inline-flex items-center justify-center px-6 py-2 bg-red-600 hover:bg-red-700 text-white font-bold rounded-lg transition-all">
                        <i data-lucide="send" class="w-4 h-4 mr-2 rtl:mr-0 rtl:ml-2"></i>
                        @Localizer["SubmitReport"]
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Success Modal -->
    <div id="successModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden z-50 flex items-center justify-center p-4 animate-in fade-in duration-300">
        <div class="bg-card border border-border rounded-2xl shadow-2xl max-w-md w-full animate-in zoom-in-95 duration-300">
            <div class="p-4 sm:p-6 text-center">
                <div class="w-16 h-16 bg-green-100 dark:bg-green-900/30 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i data-lucide="check-circle" class="w-8 h-8 text-green-600 dark:text-green-400"></i>
                </div>
                <h3 class="text-lg sm:text-xl font-bold text-foreground mb-2">@Localizer["ReportSubmitted"]</h3>
                <p class="text-muted-foreground mb-4">@Localizer["ReportSubmittedDescription"]</p>
                <div class="bg-muted rounded-lg p-4 mb-4">
                    <p class="text-sm text-foreground">
                        <strong>@Localizer["TicketId"]:</strong> <span id="ticketId" class="font-mono break-all"></span>
                    </p>
                </div>
                <button data-action="close-success-modal" class="w-full sm:w-auto px-6 py-2 bg-primary hover:bg-primary/90 text-primary-foreground font-bold rounded-lg transition-all">
                    @Localizer["Close"]
                </button>
            </div>
        </div>
    </div>

    <!-- Help Section -->
    <div class="mt-8 lg:mt-12 text-center">
        <div class="bg-blue-50/50 dark:bg-blue-900/20 border border-blue-200/50 dark:border-blue-800/50 rounded-xl p-4 sm:p-6 backdrop-blur-sm">
            <h3 class="text-lg font-bold text-blue-900 dark:text-blue-100 mb-2">@Localizer["NeedHelp"]</h3>
            <p class="text-blue-700 dark:text-blue-300 mb-4">@Localizer["NeedHelpDescription"]</p>
            <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
                <a href="mailto:support@communitycar.com" class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-medium">
                    <i data-lucide="mail" class="w-4 h-4 mr-2 rtl:mr-0 rtl:ml-2"></i>
                    @Localizer["EmailSupport"]
                </a>
                <a href="/help" class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-medium">
                    <i data-lucide="help-circle" class="w-4 h-4 mr-2 rtl:mr-0 rtl:ml-2"></i>
                    @Localizer["HelpCenter"]
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // JavaScript localization object
        window.errorHandlerLocalization = {
            hideDetails: '@Localizer["HideDetails"]',
            showDetails: '@Localizer["ShowDetails"]',
            sending: '@Localizer["Sending"]',
            submitFailed: '@Localizer["SubmitFailed"]',
            submitError: '@Localizer["SubmitError"]',
            mockMessage: '@Localizer["MockMessage"]',
            mockDetails: '@Localizer["MockDetails"]',
            mockStackTrace: '@Localizer["MockStackTrace"]'
        };
    </script>
    <script src="~/js/error-handler.js" asp-append-version="true"></script>
}