@{
    ViewData["Title"] = "404 - Navigation Coordinate Lost";
    Layout = "_AuthLayout";
}

<div class="max-w-4xl mx-auto space-y-12 animate-in border-in duration-1000 py-12">
    <div class="text-center space-y-10">
        <div class="relative inline-flex items-center justify-center group">
            <!-- 404 Glitch Effect Aesthetic -->
            <div class="absolute -inset-8 bg-primary/10 rounded-full blur-3xl group-hover:bg-primary/20 transition-all duration-1000"></div>
            <div class="text-[12rem] font-black text-foreground/5 tracking-tighter leading-none select-none">404</div>
            <div class="absolute inset-0 flex items-center justify-center translate-y-4">
                <div class="w-48 h-48 rounded-[3.5rem] bg-card/60 backdrop-blur-xl border border-border/50 flex flex-col items-center justify-center text-primary shadow-2xl group-hover:-translate-y-2 transition-transform duration-700">
                    <i data-lucide="compass" class="w-20 h-20 animate-[spin_12s_linear_infinite]"></i>
                    <span class="mt-4 text-[10px] font-black uppercase tracking-[0.3em] opacity-40">Compass Lost</span>
                </div>
            </div>
        </div>
        
        <div class="space-y-4 relative z-10">
            <h1 class="text-5xl font-black text-foreground tracking-tighter leading-none uppercase">Coordinate <br class="md:hidden"/> Not Found</h1>
            <p class="text-sm font-medium text-muted-foreground max-w-md mx-auto uppercase tracking-widest opacity-60 leading-relaxed px-4">The requested technical node does not exist in the current registry hierarchy.</p>
        </div>
    </div>

    <div class="flex flex-col md:flex-row items-center justify-center gap-4">
        <a href="javascript:history.back()" class="w-full md:w-auto px-12 py-5 bg-muted/50 border border-border/50 rounded-2xl text-[10px] font-black uppercase tracking-widest hover:border-primary transition-all flex items-center justify-center gap-3">
            <i data-lucide="arrow-left" class="w-4 h-4"></i> Retreat to Origin
        </a>
        <a asp-controller="Feed" asp-action="Index" class="w-full md:w-auto px-12 py-5 bg-primary text-primary-foreground rounded-2xl text-[10px] font-black uppercase tracking-widest shadow-xl shadow-primary/20 hover:shadow-primary/40 hover:-translate-y-1 active:scale-[0.98] transition-all flex items-center justify-center gap-3">
            Recalibrate Home <i data-lucide="home" class="w-4 h-4"></i>
        </a>
    </div>

    <div class="bg-card/30 backdrop-blur-md border border-border/40 rounded-[2.5rem] p-10 mt-12 overflow-hidden relative group/inspect">
        <div class="absolute top-0 right-0 p-6 opacity-10">
            <i data-lucide="microscope" class="w-24 h-24"></i>
        </div>
        <div class="space-y-6">
            <h4 class="text-xs font-black uppercase tracking-[0.2em] text-foreground border-l-4 border-primary pl-4">Diagnostic Trace</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 text-[10px] font-black uppercase tracking-widest opacity-40">
                <div class="space-y-1">
                    <span class="block">Node State: VOID</span>
                    <span class="block">Protocol: HTTPS/2</span>
                </div>
                <div class="space-y-1">
                    <span class="block">Trace ID: @Guid.NewGuid().ToString().Substring(0, 12).ToUpper()</span>
                    <span class="block">Handshake: FAILED</span>
                </div>
            </div>
        </div>
    </div>
</div>
