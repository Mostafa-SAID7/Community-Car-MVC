@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<AccountResource> AccountLocalizer
@{
    ViewData["Title"] = "Unauthorized Protocol";
    Layout = "_AuthLayout";
}

<div class="container min-vh-100 d-flex flex-column justify-content-center py-5 animate-in fade-in">
    <div class="text-center mb-5">
        <div class="position-relative d-inline-flex align-items-center justify-content-center mb-4">
            <div class="error-icon-container position-relative rounded-circle border border-danger border-opacity-25 d-flex align-items-center justify-content-center text-danger bg-white shadow-lg overflow-hidden">
                <div class="position-absolute bottom-0 start-0 end-0 bg-danger bg-opacity-5" style="height: 50%;"></div>
                <i data-lucide="shield-alert" class="icon-lg position-relative animate-pulse"></i>
            </div>
        </div>
        
        <div class="mb-5">
            <h1 class="display-4 fw-black text-gradient mb-2">ACCESS SHUTDOWN</h1>
            <p class="xx-small fw-black text-uppercase text-danger opacity-75">Unauthorized Identity Fragment</p>
        </div>
    </div>

    <div class="card card-premium shadow-lg mx-auto text-center" style="max-width: 500px;">
        <div class="card-body p-5">
            <div class="mb-5">
                <p class="xx-small fw-black text-uppercase text-muted opacity-75 mb-4">
                    Your current protocol lacks the required authorization levels to penetrate this restricted node. 
                </p>
                <div class="error-divider bg-danger bg-opacity-10 rounded-pill mx-auto mb-4"></div>
                <p class="xxx-small fw-black text-dark text-decoration-underline mb-0">
                    Security incident logged in primary mainframe.
                </p>
            </div>
            
            <div class="d-grid gap-3 pt-3">
                <a href="javascript:history.back()" class="btn btn-outline-secondary py-3 rounded-4 fw-black text-uppercase xxx-small">
                    Retreat to Safe Node
                </a>
                <a asp-controller="Feed" asp-action="Index" class="btn btn-primary-red py-3 rounded-4 fw-black text-uppercase xxx-small shadow-lg">
                    Return to Foundation
                </a>
            </div>
        </div>
    </div>

    <div class="d-flex align-items-center justify-content-center gap-3 mt-5 opacity-50">
         <span class="xxx-small fw-black text-uppercase text-muted">Mainframe ID: @Guid.NewGuid().ToString().Substring(0, 8).ToUpper()</span>
         <div class="vr bg-secondary" style="height: 10px;"></div>
         <span class="xxx-small fw-black text-uppercase text-danger">Clearance: Level 0</span>
    </div>
</div>
