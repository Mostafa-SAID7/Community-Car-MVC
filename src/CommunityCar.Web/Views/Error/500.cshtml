@{
    ViewData["Title"] = "500 - Major Protocol Anomaly";
    Layout = "_AuthLayout";
}

<div class="max-w-4xl mx-auto space-y-12 animate-in fade-in duration-1000 py-12">
    <div class="text-center space-y-8">
        <div class="relative inline-flex items-center justify-center group">
            <!-- Destructive Anomaly Glow -->
            <div class="absolute -inset-10 bg-destructive/10 rounded-full blur-3xl animate-pulse"></div>
            <div class="absolute -inset-20 bg-destructive/5 rounded-full blur-3xl animate-pulse delay-150"></div>
            
            <div class="relative w-40 h-40 rounded-[3rem] bg-card border border-destructive/20 flex items-center justify-center text-destructive shadow-2xl rotate-3 group-hover:rotate-0 transition-transform duration-700">
                <i data-lucide="flame" class="w-20 h-20 animate-bounce"></i>
                <i data-lucide="alert-triangle" class="w-10 h-10 absolute -top-4 -right-4 text-destructive drop-shadow-[0_0_10px_rgba(239,68,68,0.4)]"></i>
            </div>
        </div>
        
        <div class="space-y-4">
            <div class="inline-flex items-center gap-2 px-4 py-1.5 bg-destructive/10 border border-destructive/20 rounded-full text-destructive text-[10px] font-black uppercase tracking-widest">
                <span class="w-2 h-2 rounded-full bg-destructive animate-ping"></span>
                Registry Overload Fault
            </div>
            <h1 class="text-6xl font-black text-foreground tracking-tighter leading-none uppercase">PROTOCOL <br class="md:hidden"/> ANOMALY</h1>
            <p class="text-sm font-medium text-muted-foreground max-w-lg mx-auto uppercase tracking-widest opacity-60 leading-relaxed px-4">An internal system conflict has disrupted the community registry handshake. Tactical recovery is underway.</p>
        </div>
    </div>

    <!-- Fault Isolation Panel -->
    <div class="bg-black/95 rounded-[2.5rem] border border-white/5 p-12 shadow-2xl relative overflow-hidden group/console">
        <div class="absolute inset-0 bg-gradient-to-br from-destructive/[0.03] to-transparent pointer-events-none"></div>
        <div class="flex items-center justify-between mb-10 border-b border-white/10 pb-6">
            <span class="text-[10px] font-black uppercase tracking-widest text-destructive animate-pulse">Tactical Failover Active</span>
            <div class="flex gap-2.5">
                <div class="w-3 h-3 rounded-full bg-white/10"></div>
                <div class="w-3 h-3 rounded-full bg-white/10"></div>
                <div class="w-3 h-3 rounded-full bg-white/10"></div>
            </div>
        </div>
        
        <div class="space-y-8 font-mono">
            <div class="space-y-3">
                <span class="block text-[10px] font-black uppercase tracking-widest text-white/30">Fault Vector</span>
                <code class="block text-sm text-destructive font-black">EXCEPTION_CORE_REGISTRY_HANDSHAKE_TIMEOUT</code>
            </div>
            <div class="space-y-3">
                <span class="block text-[10px] font-black uppercase tracking-widest text-white/30">Recovery Protocol</span>
                <code class="block text-sm text-white/60 leading-relaxed">Initialized automatic sequence relay. Waiting for thermal stabilization of database cluster...</code>
            </div>
        </div>
        
        <div class="mt-12 pt-8 border-t border-white/5 flex flex-col md:flex-row items-center justify-between gap-6">
            <span class="text-[10px] font-black uppercase tracking-[0.2em] text-white/20">System Handled Archive 500-XJ</span>
            <button onclick="location.reload()" class="w-full md:w-auto px-10 py-4 bg-white/5 hover:bg-white/10 text-white rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all border border-white/10">Attempt Emergency Restart</button>
        </div>
    </div>

    <div class="flex flex-col md:flex-row items-center justify-center gap-6 pt-4">
        <a asp-controller="Feed" asp-action="Index" class="text-[10px] font-black uppercase tracking-widest text-muted-foreground hover:text-foreground transition-colors flex items-center gap-2">
            <i data-lucide="home" class="w-4 h-4"></i> Escape to Foundation
        </a>
        <div class="w-1.5 h-1.5 rounded-full bg-border md:block hidden"></div>
        <a href="#" class="text-[10px] font-black uppercase tracking-widest text-muted-foreground hover:text-foreground transition-colors flex items-center gap-2">
            <i data-lucide="message-square" class="w-4 h-4"></i> Notify Engineering Deck
        </a>
    </div>
</div>
