@model CommunityCar.Application.Features.Dashboard.Management.developer.ErrorReporting.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = "_Layout";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light bg-opacity-50">
    <div class="container" style="max-width: 500px;">
        <div class="card card-premium border-0 shadow-lg text-center p-5">
            <div class="rounded-circle bg-danger bg-opacity-10 d-inline-flex align-items-center justify-content-center mb-4 mx-auto" style="width: 80px; height: 80px;">
                <i class="fas fa-exclamation-triangle text-danger fs-1"></i>
            </div>
            
            <h3 class="fw-black text-uppercase tracking-tight mb-2">Protocol Violation</h3>
            <p class="text-muted small fw-bold text-uppercase tracking-widest opacity-75 mb-5">
                The application encountered an unexpected interrupt in the logic stream.
            </p>

            <div class="d-flex gap-3 mt-2">
                <button onclick="history.back()" class="btn btn-outline-danger flex-grow-1 py-3 rounded-4 fw-black text-uppercase tracking-widest shadow-sm" style="font-size: 0.75rem;">
                    <i class="fas fa-arrow-left me-2"></i>Revert State
                </button>
                <a href="/" class="btn btn-primary-red flex-grow-1 py-3 rounded-4 fw-black text-uppercase tracking-widest shadow-sm text-decoration-none" style="font-size: 0.75rem;">
                    <i class="fas fa-home me-2"></i>Return Hub
                </a>
            </div>

            @if (!string.IsNullOrEmpty(Model?.RequestId))
            {
                <div class="mt-5 pt-4 border-top">
                    <p class="text-muted xx-small fw-black text-uppercase tracking-widest opacity-50 mb-0">
                        TELEMETRY ID: <span class="text-dark">@Model.RequestId</span>
                    </p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .xx-small { font-size: 0.6rem; }
</style>