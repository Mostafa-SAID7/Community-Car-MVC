@{
    ViewData["Title"] = "Engine Maintenance - Community Car";
    Layout = "~/Views/Account/Auth/_AuthLayout.cshtml";
}

<div class="max-w-4xl mx-auto space-y-12 animate-in fade-in slide-in-from-bottom-10 duration-1000 py-12">
    <div class="text-center space-y-8">
        <div class="relative inline-flex items-center justify-center group">
            <!-- Animated Glow -->
            <div class="absolute -inset-12 bg-primary/20 rounded-full blur-3xl animate-pulse"></div>

            <!-- Car Engine Icon / Logo Area -->
            <div
                class="relative w-40 h-40 rounded-full bg-card border-4 border-primary/20 flex items-center justify-center text-primary shadow-2xl transition-transform duration-700">
                <div class="absolute inset-0 rounded-full border-t-4 border-primary animate-spin"></div>
                <i data-lucide="wrench" class="w-20 h-20"></i>
            </div>
        </div>

        <div class="space-y-4">
            <div
                class="inline-flex items-center gap-2 px-4 py-1.5 bg-primary/10 border border-primary/20 rounded-full text-primary text-[10px] font-black uppercase tracking-widest">
                <span class="w-2 h-2 rounded-full bg-primary animate-ping"></span>
                Pit Stop in Progress
            </div>
            <h1 class="text-6xl font-black text-foreground tracking-tighter leading-none italic uppercase">Under the
                Hood</h1>
            <p
                class="text-sm font-medium text-muted-foreground max-w-lg mx-auto uppercase tracking-widest opacity-60 leading-relaxed px-4 text-balance">
                We're currently fine-tuning the platform's engine for a smoother ride. The community will be back on the
                road shortly.
            </p>
        </div>
    </div>

    <!-- Friendly Status Info -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-card/40 backdrop-blur-xl border border-border/50 rounded-2xl p-8 space-y-2 text-center">
            <span
                class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">Estimated
                Uptime</span>
            <span class="block text-2xl font-black text-foreground tracking-tighter">BACK IN ~ 30 MINS</span>
        </div>
        <div
            class="bg-card/40 backdrop-blur-xl border border-border/50 rounded-2xl p-8 space-y-2 text-center bg-primary/[0.02] border-primary/20">
            <span class="block text-[10px] font-black uppercase tracking-widest text-primary/60">Community Status</span>
            <span class="block text-2xl font-black text-primary tracking-tighter uppercase">Scheduled Service</span>
        </div>
    </div>

    <!-- Communication Link -->
    <div
        class="p-8 bg-muted/20 border border-border/40 rounded-2xl flex flex-col md:flex-row items-center justify-between gap-6">
        <div class="flex items-center gap-4 text-center md:text-left">
            <div
                class="w-12 h-12 rounded-xl bg-primary text-primary-foreground flex items-center justify-center shadow-lg shrink-0">
                <i data-lucide="megaphone" class="w-6 h-6"></i>
            </div>
            <div>
                <span class="block text-xs font-black text-foreground uppercase tracking-tight">Stay Synchronized</span>
                <p class="text-[10px] font-medium text-muted-foreground uppercase tracking-widest opacity-60">Follow us
                    for updates during the maintenance</p>
            </div>
        </div>
        <a href="#"
            class="px-8 py-4 bg-card border border-border/50 rounded-xl text-[10px] font-black uppercase tracking-widest hover:border-primary transition-all shadow-sm">@@CommunityCarFans</a>
    </div>

    <div class="flex items-center justify-center gap-3 py-4 opacity-30">
        <span class="text-[9px] font-black uppercase tracking-widest">Community Car Performance Optimization</span>
    </div>
</div>