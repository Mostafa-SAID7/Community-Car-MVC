@model CommunityCar.Application.Features.SEO.ViewModels.SEOAnalysisVM
@{
    ViewData["Title"] = "SEO Dashboard";
    Layout = "_DashboardLayout";
}

    <div id="seo-skeleton" class="hidden space-y-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <skeleton type="Card" />
            <div class="lg:col-span-2">
                <skeleton type="Card" />
            </div>
        </div>
    </div>

    <div id="seo-content" class="space-y-8">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tight">Search Optimization</h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">Global visibility management and indexability metrics</p>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- SEO Score Card -->
        <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-8 shadow-xl text-center flex flex-col items-center justify-center group transition-all hover:border-primary/20">
            <h3 class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60 mb-8">Protocol Health Score</h3>
            
            <div class="relative w-40 h-40 flex items-center justify-center">
                <svg class="w-full h-full -rotate-90" viewBox="0 0 100 100">
                    <circle class="text-muted/10" stroke-width="10" stroke="currentColor" fill="transparent" r="40" cx="50" cy="50" />
                    <circle class="@(Model.Score >= 80 ? "text-green-500" : Model.Score >= 60 ? "text-primary" : "text-amber-500") transition-all duration-1000" stroke-width="10" stroke-dasharray="251.2" stroke-dashoffset="@(251.2 * (1 - (Model.Score / 100.0)))" stroke-linecap="round" stroke="currentColor" fill="transparent" r="40" cx="50" cy="50" />
                </svg>
                <div class="absolute inset-0 flex flex-col items-center justify-center">
                    <span class="text-5xl font-black text-foreground tabular-nums">@Model.Score</span>
                    <span class="text-[9px] font-black uppercase text-muted-foreground mt-1">Percentile</span>
                </div>
            </div>

            <div class="mt-8">
                @{
                    var grade = (Model?.Score ?? 0) >= 80 ? "Optimized" : 
                               (Model?.Score ?? 0) >= 60 ? "Commercial" : "Underperforming";
                    var gradeClass = (Model?.Score ?? 0) >= 80 ? "text-green-600 bg-green-500/10 border-green-500/20" : 
                                   (Model?.Score ?? 0) >= 60 ? "text-primary bg-primary/10 border-primary/20" : "text-amber-600 bg-amber-500/10 border-amber-500/20";
                }
                <span class="inline-flex px-6 py-2 rounded-full text-xs font-black uppercase tracking-widest border @gradeClass">@grade</span>
            </div>
        </div>

        <!-- Quick Actions Panel -->
        <div class="lg:col-span-2 bg-card/40 backdrop-blur-md border border-border rounded-2xl p-8 shadow-xl space-y-8 h-full">
            <h3 class="text-[11px] font-black uppercase tracking-widest text-primary flex items-center gap-2">
                <i data-lucide="zap" class="w-4 h-4"></i>
                Accelerated Actions
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="space-y-4">
                    <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60" for="analyzeUrl">Audit Single URI</label>
                    <div class="flex gap-2">
                        <input type="text" id="analyzeUrl" class="flex-1 bg-background border border-border px-4 py-3 rounded-xl text-sm font-medium focus:ring-4 focus:ring-primary/10 transition-all outline-none" value="/">
                        <button class="bg-primary text-primary-foreground px-6 py-3 rounded-xl text-[10px] font-black uppercase tracking-widest shadow-lg shadow-primary/20 hover:opacity-90 transition-all" data-action="analyze-page">Execute</button>
                    </div>
                </div>
                
                <div class="space-y-4">
                    <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">Engine Crawlability</label>
                    <div class="flex flex-wrap gap-3">
                        <a href="/SEO/Sitemap" class="flex-1 flex justify-center items-center gap-2 px-6 py-3 bg-muted/40 border border-border rounded-xl text-[10px] font-black uppercase tracking-widest text-foreground hover:bg-muted transition-all" target="_blank">
                             <i data-lucide="map" class="w-3.5 h-3.5"></i> Sitemap
                        </a>
                        <a href="/SEO/RSS" class="flex-1 flex justify-center items-center gap-2 px-6 py-3 bg-muted/40 border border-border rounded-xl text-[10px] font-black uppercase tracking-widest text-foreground hover:bg-muted transition-all" target="_blank">
                             <i data-lucide="rss" class="w-3.5 h-3.5"></i> RSS Feed
                        </a>
                    </div>
                </div>
            </div>

            <div class="bg-primary/5 border border-primary/10 rounded-2xl p-6 relative overflow-hidden group">
                <div class="absolute right-0 top-0 w-32 h-32 text-primary/5 -mr-8 -mt-8 rotate-12 group-hover:rotate-45 transition-transform duration-1000">
                    <i data-lucide="search" class="w-full h-full"></i>
                </div>
                <h4 class="text-sm font-black text-primary uppercase tracking-widest mb-2">Pro Tip</h4>
                <p class="text-xs font-medium text-foreground opacity-70 leading-relaxed max-w-lg">Optimize your image ALT tags and ensure title lengths are between 50-60 characters for maximum CTR on search engines.</p>
            </div>
        </div>
    </div>

    <!-- SEO Metrics -->
    @if (Model?.Metrics != null)
    {
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg text-center group transition-all hover:border-primary/20">
                <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.Metrics.TitleLength</div>
                <div class="text-[10px] font-black text-muted-foreground uppercase tracking-widest mb-3">Title Length</div>
                <span class="text-[9px] font-black uppercase px-2 py-0.5 rounded @(Model.Metrics.TitleLength >= 30 && Model.Metrics.TitleLength <= 60 ? "text-green-500 bg-green-500/5" : "text-amber-500 bg-amber-500/5")">
                    @(Model.Metrics.TitleLength >= 30 && Model.Metrics.TitleLength <= 60 ? "Optimal" : "Check Range")
                </span>
            </div>
            
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg text-center group transition-all hover:border-primary/20">
                <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.Metrics.DescriptionLength</div>
                <div class="text-[10px] font-black text-muted-foreground uppercase tracking-widest mb-3">Meta Description</div>
                <span class="text-[9px] font-black uppercase px-2 py-0.5 rounded @(Model.Metrics.DescriptionLength >= 120 && Model.Metrics.DescriptionLength <= 160 ? "text-green-500 bg-green-500/5" : "text-amber-500 bg-amber-500/5")">
                    @(Model.Metrics.DescriptionLength >= 120 && Model.Metrics.DescriptionLength <= 160 ? "Good" : "Optimize")
                </span>
            </div>
            
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg text-center group transition-all hover:border-primary/20">
                <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.Metrics.H1Count</div>
                <div class="text-[10px] font-black text-muted-foreground uppercase tracking-widest mb-3">H1 Tags</div>
                <span class="text-[9px] font-black uppercase px-2 py-0.5 rounded @(Model.Metrics.H1Count == 1 ? "text-green-500 bg-green-500/5" : "text-red-500 bg-red-500/5")">
                    @(Model.Metrics.H1Count == 1 ? "Perfect" : "Error")
                </span>
            </div>
            
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg text-center group transition-all hover:border-primary/20">
                <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@Model.Metrics.ImagesWithoutAlt</div>
                <div class="text-[10px] font-black text-muted-foreground uppercase tracking-widest mb-3">Missing Alts</div>
                <span class="text-[9px] font-black uppercase px-2 py-0.5 rounded @(Model.Metrics.ImagesWithoutAlt == 0 ? "text-green-500 bg-green-500/5" : "text-red-500 bg-red-500/5")">
                    @(Model.Metrics.ImagesWithoutAlt == 0 ? "Healthy" : "Fix Alts")
                </span>
            </div>
        </div>
    }

    <!-- Issues and Recommendations -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden shadow-red-500/5">
            <div class="p-4 border-b border-border/50 bg-muted/20 px-8 flex justify-between items-center">
                <h3 class="text-[10px] font-black uppercase tracking-widest text-foreground">Critical SEO Obstacles</h3>
                <i data-lucide="alert-triangle" class="w-4 h-4 text-red-500"></i>
            </div>
            <div class="divide-y divide-border/20">
                @if (Model?.Issues?.Any() == true)
                {
                    @foreach (var issue in Model.Issues)
                    {
                        <div class="p-6 hover:bg-red-500/5 transition-colors group/issue">
                            <div class="flex items-center gap-3 mb-3">
                                <span class="text-[9px] font-black uppercase tracking-widest text-red-600 bg-red-500/10 px-2 py-1 rounded border border-red-500/20">@issue.Severity Severity</span>
                                <span class="text-[10px] font-bold text-muted-foreground">Type: @issue.Type</span>
                            </div>
                            <h4 class="text-sm font-black text-foreground mb-2">@issue.Message</h4>
                            <div class="bg-red-500/5 border border-red-500/10 p-4 rounded-xl">
                                <span class="text-[9px] font-black text-red-700 uppercase block mb-1">Resolution Protocol</span>
                                <p class="text-[13px] font-medium text-foreground">@issue.Fix</p>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden shadow-primary/5">
            <div class="p-4 border-b border-border/50 bg-muted/20 px-8 flex justify-between items-center">
                <h3 class="text-[10px] font-black uppercase tracking-widest text-foreground">Growth Recommendations</h3>
                <i data-lucide="trending-up" class="w-4 h-4 text-primary"></i>
            </div>
            <div class="divide-y divide-border/20">
                @if (Model?.Recommendations?.Any() == true)
                {
                    @foreach (var recommendation in Model.Recommendations)
                    {
                        <div class="p-6 hover:bg-primary/5 transition-colors group/rec">
                            <div class="flex items-center gap-3 mb-3">
                                <span class="text-[9px] font-black uppercase tracking-widest text-primary bg-primary/10 px-2 py-1 rounded border border-primary/20">Priority: @recommendation.Priority</span>
                                <span class="text-[10px] font-bold text-muted-foreground">Impact: @recommendation.Impact</span>
                            </div>
                            <h4 class="text-sm font-black text-foreground mb-1">@recommendation.Title</h4>
                            <p class="text-[13px] font-medium text-muted-foreground mb-4">@recommendation.Description</p>
                            <div class="h-1 w-full bg-muted rounded-full overflow-hidden">
                                <div class="h-full bg-primary @(recommendation.Impact == "High" ? "w-full" : recommendation.Impact == "Medium" ? "w-2/3" : "w-1/3") opacity-40"></div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/dashboard-seo.js" asp-append-version="true"></script>
}