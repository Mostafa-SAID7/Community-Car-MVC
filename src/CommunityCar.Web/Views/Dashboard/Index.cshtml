@model CommunityCar.Application.Features.Dashboard.Overview.ViewModels.OverviewVM
@{
    ViewData["Title"] = "Dashboard";
    ViewData["PageTitle"] = "Dashboard Overview";
    ViewData["Description"] = "Main dashboard with system overview and key metrics";
}

<div class="container-fluid py-4 animate-in fade-in">
    <!-- Header Section -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-5 mt-2">
        <div>
            <h1 class="h2 fw-black text-gradient mb-1">Dashboard Overview</h1>
            <p class="text-muted small text-uppercase tracking-widest opacity-50 fw-black">Monitor your system performance and key metrics</p>
        </div>
        <div>
            <button type="button" class="btn btn-primary-red px-4 py-2 rounded-4 shadow-sm" onclick="refreshDashboard()">
                <i class="fas fa-sync-alt me-2"></i>Refresh
            </button>
        </div>
    </div>

    <!-- Quick Stats Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card card-premium h-100 border-0">
                <div class="card-body p-4 d-flex align-items-center gap-3">
                    <div class="rounded-4 bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; flex-shrink: 0;">
                        <i class="fas fa-users fs-5"></i>
                    </div>
                    <div>
                        <h3 class="fw-black mb-0">@(Model?.Stats?.TotalUsers ?? 0)</h3>
                        <p class="text-muted small text-uppercase tracking-widest mb-0 opacity-75">Total Users</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-premium h-100 border-0">
                <div class="card-body p-4 d-flex align-items-center gap-3">
                    <div class="rounded-4 bg-success bg-opacity-10 text-success d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; flex-shrink: 0;">
                        <i class="fas fa-chart-line fs-5"></i>
                    </div>
                    <div>
                        <h3 class="fw-black mb-0">@(Model?.Stats?.ActiveUsers ?? 0)</h3>
                        <p class="text-muted small text-uppercase tracking-widest mb-0 opacity-75">Active Users</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-premium h-100 border-0">
                <div class="card-body p-4 d-flex align-items-center gap-3">
                    <div class="rounded-4 bg-info bg-opacity-10 text-info d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; flex-shrink: 0;">
                        <i class="fas fa-file-alt fs-5"></i>
                    </div>
                    <div>
                        <h3 class="fw-black mb-0">@(Model?.Stats?.TotalContent ?? 0)</h3>
                        <p class="text-muted small text-uppercase tracking-widest mb-0 opacity-75">Total Content</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-premium h-100 border-0">
                <div class="card-body p-4 d-flex align-items-center gap-3">
                    <div class="rounded-4 bg-warning bg-opacity-10 text-warning d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; flex-shrink: 0;">
                        <i class="fas fa-heart fs-5"></i>
                    </div>
                    <div>
                        <h3 class="fw-black mb-0">@(Model?.Stats?.TotalEngagements ?? 0)</h3>
                        <p class="text-muted small text-uppercase tracking-widest mb-0 opacity-75">Engagements</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="row g-4 mb-5">
        <div class="col-md-8">
            <div class="card card-premium border-0 h-100">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h5 class="fw-black text-uppercase tracking-tight mb-0">User Growth</h5>
                </div>
                <div class="card-body p-4">
                    <canvas id="userGrowthChart" style="height: 300px; max-height: 300px;"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-premium border-0 h-100">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h5 class="fw-black text-uppercase tracking-tight mb-0">System Health</h5>
                </div>
                <div class="card-body p-4">
                    <div class="vstack gap-4">
                        <div class="d-flex align-items-center gap-3 p-3 rounded-4 @(Model?.SystemHealth?.IsHealthy == true ? "bg-success bg-opacity-10 text-success" : "bg-danger bg-opacity-10 text-danger")">
                            <i class="fas @(Model?.SystemHealth?.IsHealthy == true ? "fa-check-circle" : "fa-exclamation-triangle") fs-4"></i>
                            <span class="fw-bold fs-5">@(Model?.SystemHealth?.Status ?? "Unknown")</span>
                        </div>
                        
                        <div class="vstack gap-3">
                            <div>
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="text-muted small text-uppercase tracking-widest fw-bold">CPU Usage</span>
                                    <span class="fw-black">@(Model?.SystemHealth?.CpuUsage?.ToString("F1") ?? "0")%</span>
                                </div>
                                <div class="progress rounded-pill shadow-none bg-light" style="height: 8px;">
                                    <div class="progress-bar bg-primary-red" role="progressbar" style="width: @(Model?.SystemHealth?.CpuUsage ?? 0)%"></div>
                                </div>
                            </div>
                            <div>
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="text-muted small text-uppercase tracking-widest fw-bold">Memory Usage</span>
                                    <span class="fw-black">@(Model?.SystemHealth?.MemoryUsage?.ToString("F1") ?? "0")%</span>
                                </div>
                                <div class="progress rounded-pill shadow-none bg-light" style="height: 8px;">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: @(Model?.SystemHealth?.MemoryUsage ?? 0)%"></div>
                                </div>
                            </div>
                            <div>
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="text-muted small text-uppercase tracking-widest fw-bold">Disk Usage</span>
                                    <span class="fw-black">@(Model?.SystemHealth?.DiskUsage?.ToString("F1") ?? "0")%</span>
                                </div>
                                <div class="progress rounded-pill shadow-none bg-light" style="height: 8px;">
                                    <div class="progress-bar bg-info" role="progressbar" style="width: @(Model?.SystemHealth?.DiskUsage ?? 0)%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-md-12">
            <div class="card card-premium border-0">
                <div class="card-header bg-transparent border-0 pt-4 px-4 d-flex justify-content-between align-items-center">
                    <h5 class="fw-black text-uppercase tracking-tight mb-0">Recent Activity</h5>
                </div>
                <div class="card-body p-4">
                    <div id="recentActivityContainer">
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary-red" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/dashboard/overview.js"></script>
    <script>
        function refreshDashboard() {
            location.reload();
        }

        // Load recent activity
        $(document).ready(function() {
            loadRecentActivity();
            loadUserGrowthChart();
        });

        function loadRecentActivity() {
            $.get('@Url.Action("GetRecentActivity", "Overview")', function(data) {
                if (data.success) {
                    renderRecentActivity(data.data);
                } else {
                    $('#recentActivityContainer').html('<div class="text-center py-4"><p class="text-muted mb-0">Failed to load recent activity</p></div>');
                }
            });
        }

        function renderRecentActivity(activities) {
            let html = '<div class="vstack gap-3">';
            if (activities && activities.length > 0) {
                activities.forEach(function(activity) {
                    html += `
                        <div class="d-flex align-items-center gap-3 p-3 rounded-4 bg-light bg-opacity-50 border border-light">
                            <div class="rounded-circle bg-white shadow-sm d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; flex-shrink: 0;">
                                <i class="fas fa-${activity.icon || 'info-circle'} text-primary-red small"></i>
                            </div>
                            <div class="flex-grow-1">
                                <p class="mb-0 fw-bold">${activity.description}</p>
                                <small class="text-muted opacity-75 text-uppercase tracking-widest fw-black" style="font-size: 0.65rem;">${activity.timestamp}</small>
                            </div>
                        </div>
                    `;
                });
            } else {
                html += '<div class="text-center py-4"><p class="text-muted mb-0">No recent activity</p></div>';
            }
            html += '</div>';
            $('#recentActivityContainer').html(html);
        }

        function loadUserGrowthChart() {
            const ctx = document.getElementById('userGrowthChart').getContext('2d');
            const endDate = new Date();
            const startDate = new Date();
            startDate.setDate(endDate.getDate() - 30);

            $.get('@Url.Action("GetUserGrowthChart", "Overview")', {
                startDate: startDate.toISOString(),
                endDate: endDate.toISOString()
            }, function(data) {
                if (data.success) {
                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: data.data.map(d => d.label),
                            datasets: [{
                                label: 'User Growth',
                                data: data.data.map(d => d.value),
                                borderColor: '#fb2c36',
                                backgroundColor: 'rgba(251, 44, 54, 0.1)',
                                tension: 0.4,
                                fill: true,
                                pointBackgroundColor: '#fb2c36',
                                pointBorderColor: '#fff',
                                pointHoverRadius: 6,
                                pointRadius: 4
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    display: false
                                }
                            },
                            scales: {
                                x: {
                                    grid: {
                                        display: false
                                    }
                                },
                                y: {
                                    beginAtZero: true,
                                    grid: {
                                        color: 'rgba(0, 0, 0, 0.05)'
                                    }
                                }
                            }
                        }
                    });
                }
            });
        }
    </script>
}
