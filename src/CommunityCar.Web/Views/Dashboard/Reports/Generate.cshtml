@model CommunityCar.Application.Features.Dashboard.DTOs.ReportGenerationRequest
@{
    ViewData["Title"] = "Generate Report";
    ViewData["PageType"] = "Reports";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center space-x-4 mb-4">
                <a href="@Url.Action("Index", "Reports")" 
                   class="text-gray-600 hover:text-gray-900">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                </a>
                <h1 class="text-3xl font-bold text-gray-900">Generate Report</h1>
            </div>
            <p class="text-gray-600">Create a new report with custom parameters</p>
        </div>

        <!-- Form -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-xl font-semibold text-gray-900">Report Configuration</h2>
            </div>

            <form asp-action="Generate" method="post" class="p-6 space-y-6">
                @Html.AntiForgeryToken()
                
                <!-- Report Type -->
                <div>
                    <label asp-for="ReportType" class="block text-sm font-medium text-gray-700 mb-2">
                        Report Type
                    </label>
                    <select asp-for="ReportType" 
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                        <option value="">Select a report type</option>
                        <option value="UserAnalytics">User Analytics</option>
                        <option value="ContentAnalytics">Content Analytics</option>
                        <option value="PerformanceReport">Performance Report</option>
                        <option value="SecurityReport">Security Report</option>
                        <option value="ActivityReport">Activity Report</option>
                        <option value="EngagementReport">Engagement Report</option>
                        <option value="SystemHealthReport">System Health Report</option>
                    </select>
                    <span asp-validation-for="ReportType" class="text-red-600 text-sm"></span>
                </div>

                <!-- Date Range -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="StartDate" class="block text-sm font-medium text-gray-700 mb-2">
                            Start Date
                        </label>
                        <input asp-for="StartDate" type="date" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500" />
                        <span asp-validation-for="StartDate" class="text-red-600 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="EndDate" class="block text-sm font-medium text-gray-700 mb-2">
                            End Date
                        </label>
                        <input asp-for="EndDate" type="date" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500" />
                        <span asp-validation-for="EndDate" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <!-- Quick Date Range Buttons -->
                <div class="flex flex-wrap gap-2">
                    <button type="button" onclick="setDateRange(7)" 
                            class="px-3 py-1 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 text-sm">
                        Last 7 days
                    </button>
                    <button type="button" onclick="setDateRange(30)" 
                            class="px-3 py-1 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 text-sm">
                        Last 30 days
                    </button>
                    <button type="button" onclick="setDateRange(90)" 
                            class="px-3 py-1 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 text-sm">
                        Last 90 days
                    </button>
                    <button type="button" onclick="setDateRange(365)" 
                            class="px-3 py-1 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 text-sm">
                        Last year
                    </button>
                </div>

                <!-- Additional Parameters -->
                <div id="additional-parameters" class="space-y-4">
                    <h3 class="text-lg font-medium text-gray-900">Additional Parameters</h3>
                    <div class="bg-gray-50 rounded-lg p-4">
                        <p class="text-sm text-gray-600 mb-4">
                            Additional parameters will be shown based on the selected report type.
                        </p>
                        
                        <!-- User Analytics Parameters -->
                        <div id="user-analytics-params" class="hidden space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">User Segments</label>
                                <div class="space-y-2">
                                    <label class="inline-flex items-center">
                                        <input type="checkbox" name="Parameters[IncludeNewUsers]" value="true" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500">
                                        <span class="ml-2 text-sm text-gray-700">Include new users</span>
                                    </label>
                                    <label class="inline-flex items-center">
                                        <input type="checkbox" name="Parameters[IncludeActiveUsers]" value="true" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500">
                                        <span class="ml-2 text-sm text-gray-700">Include active users</span>
                                    </label>
                                    <label class="inline-flex items-center">
                                        <input type="checkbox" name="Parameters[IncludeInactiveUsers]" value="true" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500">
                                        <span class="ml-2 text-sm text-gray-700">Include inactive users</span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Content Analytics Parameters -->
                        <div id="content-analytics-params" class="hidden space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Content Types</label>
                                <div class="space-y-2">
                                    <label class="inline-flex items-center">
                                        <input type="checkbox" name="Parameters[IncludePosts]" value="true" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500">
                                        <span class="ml-2 text-sm text-gray-700">Posts</span>
                                    </label>
                                    <label class="inline-flex items-center">
                                        <input type="checkbox" name="Parameters[IncludeQuestions]" value="true" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500">
                                        <span class="ml-2 text-sm text-gray-700">Questions</span>
                                    </label>
                                    <label class="inline-flex items-center">
                                        <input type="checkbox" name="Parameters[IncludeReviews]" value="true" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500">
                                        <span class="ml-2 text-sm text-gray-700">Reviews</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Format Selection -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Output Format</label>
                    <div class="flex space-x-4">
                        <label class="inline-flex items-center">
                            <input type="radio" name="Parameters[Format]" value="PDF" checked class="text-primary-600 focus:ring-primary-500">
                            <span class="ml-2 text-sm text-gray-700">PDF</span>
                        </label>
                        <label class="inline-flex items-center">
                            <input type="radio" name="Parameters[Format]" value="Excel" class="text-primary-600 focus:ring-primary-500">
                            <span class="ml-2 text-sm text-gray-700">Excel</span>
                        </label>
                        <label class="inline-flex items-center">
                            <input type="radio" name="Parameters[Format]" value="CSV" class="text-primary-600 focus:ring-primary-500">
                            <span class="ml-2 text-sm text-gray-700">CSV</span>
                        </label>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex items-center justify-between pt-6 border-t border-gray-200">
                    <a href="@Url.Action("Index", "Reports")" 
                       class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400">
                        Cancel
                    </a>
                    <button type="submit" 
                            class="px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500">
                        Generate Report
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setDateRange(days) {
            const endDate = new Date();
            const startDate = new Date();
            startDate.setDate(endDate.getDate() - days);
            
            document.querySelector('input[name="StartDate"]').value = startDate.toISOString().split('T')[0];
            document.querySelector('input[name="EndDate"]').value = endDate.toISOString().split('T')[0];
        }

        // Show/hide additional parameters based on report type
        document.querySelector('select[name="ReportType"]').addEventListener('change', function() {
            const reportType = this.value;
            
            // Hide all parameter sections
            document.querySelectorAll('[id$="-params"]').forEach(el => el.classList.add('hidden'));
            
            // Show relevant parameters
            if (reportType === 'UserAnalytics') {
                document.getElementById('user-analytics-params').classList.remove('hidden');
            } else if (reportType === 'ContentAnalytics') {
                document.getElementById('content-analytics-params').classList.remove('hidden');
            }
        });

        // Set default date range (last 30 days)
        document.addEventListener('DOMContentLoaded', function() {
            setDateRange(30);
        });
    </script>
}