@inject IViewLocalizer Localizer
@model IEnumerable<CommunityCar.Application.Features.Dashboard.ViewModels.SystemReportVM>
@{
    ViewData["Title"] = Localizer["ReportsTitle"];
    ViewData["PageType"] = "Reports";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var pageSize = ViewBag.PageSize as int? ?? 20;
}

<div class="max-w-4xl mx-auto space-y-8 animate-in fade-in duration-700">
    <!-- Skeleton Loader -->
    <div id="loading-skeleton" class="hidden space-y-8">
        <div class="space-y-4">
            <skeleton type="Line" class="w-32" /> <!-- Breadcrumb -->
            <skeleton type="Card" class="h-96" /> <!-- Hero -->
            <skeleton type="Line" /> <!-- Meta -->
        </div>
    </div>

    <div class="space-y-8">
        <!-- Navigation & Signal Strategy -->
        <div class="flex flex-col md:flex-row md:items-end justify-between gap-8 px-2">
            <div class="space-y-4">
                <nav class="flex items-center gap-3 text-[10px] font-black uppercase tracking-[0.3em] text-primary mb-6">
                    <i data-lucide="bar-chart-3" class="w-3.5 h-3.5 fill-current"></i> @Localizer["SystemReports"]
                </nav>
                <h1 class="text-5xl font-black text-foreground tracking-tighter leading-none">@Localizer["Reports"]</h1>
                <p class="text-sm font-medium text-muted-foreground opacity-70 mt-4 border-l-4 border-primary/20 pl-4 py-1 max-w-2xl">@Localizer["ReportsDesc"]</p>
            </div>
            
            <a href="@Url.Action("Generate", "Reports")" 
               class="inline-flex items-center justify-center gap-2 px-6 py-2.5 bg-primary text-primary-foreground hover:bg-primary/90 rounded-xl text-[10px] font-black uppercase tracking-widest transition-all active:scale-95 group/generate shadow-lg shadow-primary/20">
                <i data-lucide="plus" class="w-4 h-4 group-hover/generate:rotate-90 transition-transform"></i>
                @Localizer["GenerateReport"]
            </a>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="p-4 bg-green-500/10 border border-green-500/20 rounded-2xl">
                <div class="flex items-center gap-3">
                    <div class="w-8 h-8 bg-green-500/10 rounded-lg flex items-center justify-center text-green-500">
                        <i data-lucide="check-circle" class="w-4 h-4"></i>
                    </div>
                    <span class="text-sm font-medium text-green-600">@TempData["SuccessMessage"]</span>
                </div>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="p-4 bg-red-500/10 border border-red-500/20 rounded-2xl">
                <div class="flex items-center gap-3">
                    <div class="w-8 h-8 bg-red-500/10 rounded-lg flex items-center justify-center text-red-500">
                        <i data-lucide="alert-circle" class="w-4 h-4"></i>
                    </div>
                    <span class="text-sm font-medium text-red-600">@TempData["ErrorMessage"]</span>
                </div>
            </div>
        }

        <div class="relative group">
            <!-- Structural Glow -->
            <div class="absolute -inset-1 bg-gradient-to-r from-primary/10 via-transparent to-primary/10 rounded-[2.5rem] blur-3xl opacity-0 group-hover:opacity-100 transition duration-1000"></div>

            <div class="relative bg-card/40 backdrop-blur-2xl border border-border/50 rounded-[2.5rem] shadow-2xl overflow-hidden">
                <!-- Reports Header: Hero Style -->
                <div class="p-8 md:p-14 space-y-8">
                    <div class="space-y-6">
                        <div class="flex items-center gap-3">
                            <span class="px-4 py-1.5 rounded-2xl bg-primary/10 text-primary border border-primary/20 text-[9px] font-black uppercase tracking-widest">
                                <i data-lucide="database" class="w-3 h-3 mr-1"></i> SYSTEM ANALYTICS
                            </span>
                            <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@string.Format("GENERATED {0}", DateTime.Now.ToString("MMM dd, yyyy"))</span>
                        </div>
                    </div>

                    <div class="flex items-center justify-between pt-6 border-t border-border/20">
                        <div class="flex items-center gap-4">
                            <div class="w-14 h-14 rounded-2xl bg-primary/10 border border-primary/20 flex items-center justify-center overflow-hidden shadow-inner group/avatar">
                                <i data-lucide="bar-chart-3" class="w-7 h-7 text-primary group-hover/avatar:scale-110 transition-transform"></i>
                            </div>
                            <div>
                                <span class="block text-sm font-black text-foreground underline decoration-primary decoration-4 underline-offset-4 decoration-transparent hover:decoration-primary transition-all cursor-pointer">@Localizer["GeneratedReports"]</span>
                                <span class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["SystemContributor"]</span>
                            </div>
                        </div>
                        
                        <div class="hidden sm:flex gap-8">
                            <div class="text-right">
                                <span class="block text-xl font-black text-foreground leading-none tracking-tighter">@(Model?.Count().ToString("N0") ?? "0")</span>
                                <span class="block text-[8px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["TotalReports"]</span>
                            </div>
                            <div class="text-right">
                                <span class="block text-xl font-black text-foreground leading-none tracking-tighter">@(Model?.Count(r => r.Status.ToLower() == "generated") ?? 0)</span>
                                <span class="block text-[8px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["Completed"]</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Content Fluidity -->
                <div class="px-8 md:px-14 py-12 bg-muted/10 border-y border-border/20">
                    <div id="reports-skeleton" class="hidden space-y-4">
                        <skeleton type="Line" />
                        <skeleton type="Line" />
                        <skeleton type="Line" />
                        <skeleton type="Line" />
                    </div>
                    <div id="reports-list-container">
                    @if (Model != null && Model.Any())
                    {
                        <div class="space-y-6">
                            @foreach (var report in Model)
                            {
                                <div class="bg-background/50 border border-border/40 rounded-2xl p-6 hover:bg-background/70 transition-all group/report">
                                    <div class="flex items-center justify-between">
                                        <div class="flex items-center gap-4">
                                            <div class="w-12 h-12 rounded-2xl bg-primary/10 flex items-center justify-center text-primary border border-primary/20 shrink-0 group-hover/report:scale-110 transition-transform">
                                                <i data-lucide="file-text" class="w-6 h-6"></i>
                                            </div>
                                            <div class="flex-1 min-w-0">
                                                <h6 class="text-[15px] font-black text-foreground leading-tight tracking-tight group-hover/report:text-primary transition-colors">
                                                    @report.ReportType
                                                </h6>
                                                <p class="text-sm text-muted-foreground mt-1">@report.Description</p>
                                                <div class="flex items-center gap-4 mt-2 text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">
                                                    <span>@report.StartDate.ToString("MMM dd") - @report.EndDate.ToString("MMM dd, yyyy")</span>
                                                    <span>â€¢</span>
                                                    <span>@report.CreatedAt.ToString("HH:mm")</span>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="flex items-center gap-4">
                                            @{
                                                var statusConfig = report.Status.ToLower() switch
                                                {
                                                    "generated" => new { Class = "bg-green-500/10 text-green-500 border-green-500/20", Icon = "check-circle", Text = "COMPLETED" },
                                                    "generating" => new { Class = "bg-amber-500/10 text-amber-500 border-amber-500/20", Icon = "loader-2", Text = "PROCESSING" },
                                                    "failed" => new { Class = "bg-red-500/10 text-red-500 border-red-500/20", Icon = "x-circle", Text = "FAILED" },
                                                    "scheduled" => new { Class = "bg-blue-500/10 text-blue-500 border-blue-500/20", Icon = "clock", Text = "SCHEDULED" },
                                                    _ => new { Class = "bg-muted/40 text-muted-foreground border-border/40", Icon = "help-circle", Text = "UNKNOWN" }
                                                };
                                            }
                                            <span class="px-4 py-1.5 rounded-2xl @statusConfig.Class border text-[9px] font-black uppercase tracking-widest">
                                                <i data-lucide="@statusConfig.Icon" class="w-3 h-3 mr-1 @(statusConfig.Icon == "loader-2" ? "animate-spin" : "")"></i>
                                                @statusConfig.Text
                                            </span>
                                            
                                            <div class="flex gap-2">
                                                <a href="@Url.Action("Details", "Reports", new { id = report.Id })" 
                                                   class="w-10 h-10 flex items-center justify-center rounded-xl bg-muted border border-border/50 hover:border-primary hover:text-primary transition-all active:scale-90">
                                                    <i data-lucide="eye" class="w-4 h-4"></i>
                                                </a>
                                                @if (report.Status.ToLower() == "generated")
                                                {
                                                    <a href="@Url.Action("Download", "Reports", new { id = report.Id })" 
                                                       class="w-10 h-10 flex items-center justify-center rounded-xl bg-muted border border-border/50 hover:border-primary hover:text-primary transition-all active:scale-90">
                                                        <i data-lucide="download" class="w-4 h-4"></i>
                                                    </a>
                                                }
                                                <form asp-action="Delete" asp-route-id="@report.Id" method="post" class="inline delete-report-form">
                                                    @Html.AntiForgeryToken()
                                                    <button type="button" 
                                                            class="w-10 h-10 flex items-center justify-center rounded-xl bg-muted border border-border/50 hover:border-red-500 hover:text-red-500 transition-all active:scale-90"
                                                            data-action="confirm-delete-report">
                                                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Pagination -->
                        @if (currentPage > 1 || Model.Count() >= pageSize)
                        {
                            <div class="mt-8 pt-8 border-t border-border/20">
                                <div class="flex items-center justify-between">
                                    <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">
                                        @string.Format(Localizer["ShowingPageOfReports"].Value, currentPage)
                                    </div>
                                    <div class="flex gap-3">
                                        @if (currentPage > 1)
                                        {
                                            <a href="@Url.Action("Index", new { page = currentPage - 1, pageSize })" 
                                               class="px-4 py-2 bg-muted border border-border/50 rounded-xl text-[10px] font-black uppercase tracking-widest hover:border-primary hover:text-primary transition-all">
                                                <i data-lucide="chevron-left" class="w-3 h-3 mr-1"></i>
                                                @Localizer["Previous"]
                                            </a>
                                        }
                                        <a href="@Url.Action("Index", new { page = currentPage + 1, pageSize })" 
                                           class="px-4 py-2 bg-muted border border-border/50 rounded-xl text-[10px] font-black uppercase tracking-widest hover:border-primary hover:text-primary transition-all">
                                            @Localizer["Next"]
                                            <i data-lucide="chevron-right" class="w-3 h-3 ml-1"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-12">
                            <div class="w-16 h-16 bg-muted/40 rounded-full flex items-center justify-center mx-auto mb-6 shadow-inner ring-1 ring-border/50">
                                <i data-lucide="file-text" class="w-8 h-8 text-muted-foreground opacity-30"></i>
                            </div>
                            <h3 class="text-xl font-black text-foreground mb-3 tracking-tight">@Localizer["NoReportsFound"]</h3>
                            <p class="text-sm text-muted-foreground max-w-sm mx-auto font-medium mb-8">@Localizer["NoReportsFoundDesc"]</p>
                            <a href="@Url.Action("Generate", "Reports")" 
                               class="inline-flex items-center gap-2 px-8 py-3 bg-primary text-primary-foreground hover:bg-primary/90 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all shadow-xl shadow-primary/30 active:scale-95">
                                <i data-lucide="plus" class="w-4 h-4"></i>
                                @Localizer["GenerateYourFirstReport"]
                            </a>
                        </div>
                    }
                    </div>
                </div>

                <!-- Interaction Control Strip -->
                <div class="p-8 md:px-14 flex items-center justify-between bg-card/40">
                    <div class="flex items-center gap-8">
                        <button class="flex items-center gap-3 group/tool text-[10px] font-black uppercase tracking-widest text-muted-foreground hover:text-primary transition-all">
                            <div class="w-10 h-10 flex items-center justify-center rounded-2xl bg-muted/40 group-hover/tool:bg-primary/10">
                                <i data-lucide="refresh-cw" class="w-4 h-4"></i>
                            </div>
                            @Localizer["RefreshReports"]
                        </button>
                        <button class="flex items-center gap-3 group/tool text-[10px] font-black uppercase tracking-widest text-muted-foreground hover:text-blue-500 transition-all">
                            <div class="w-10 h-10 flex items-center justify-center rounded-2xl bg-muted/40 group-hover/tool:bg-blue-500/10">
                                <i data-lucide="filter" class="w-4 h-4"></i>
                            </div>
                            @Localizer["FilterReports"]
                        </button>
                    </div>

                    <div class="flex gap-3">
                        <button class="w-12 h-12 flex items-center justify-center rounded-2xl bg-muted border border-border/50 hover:border-primary hover:text-primary transition-all active:scale-90">
                            <i data-lucide="download" class="w-5 h-5"></i>
                        </button>
                        <button class="w-12 h-12 flex items-center justify-center rounded-2xl bg-muted border border-border/50 hover:border-primary hover:text-primary transition-all active:scale-90">
                            <i data-lucide="settings" class="w-5 h-5"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- System Metadata Trace -->
        <div class="p-8 bg-muted/20 border border-border/40 rounded-[2.5rem] grid grid-cols-1 md:grid-cols-4 gap-8">
            <div class="space-y-1">
                <span class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["SystemID"]</span>
                <code class="text-xs font-mono text-primary font-bold">REPORTS-@DateTime.Now.ToString("yyyyMMdd")</code>
            </div>
            <div class="space-y-1">
                <span class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["DataFormat"]</span>
                <span class="text-xs font-black text-foreground">JSON/CSV</span>
            </div>
            <div class="space-y-1">
                <span class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["Generator"]</span>
                <span class="text-xs font-black text-foreground">DASHBOARD-ANALYTICS</span>
            </div>
            <div class="space-y-1 text-right flex flex-col items-end">
                <span class="block text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["Status"]</span>
                <span class="flex items-center gap-2 text-xs font-black text-green-500">
                    <span class="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse"></span>
                    @Localizer["SystemOnline"]
                </span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/dashboard-reports.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof Skeleton !== 'undefined') {
                Skeleton.initPageLoad('loading-skeleton', 'reports-list-container');
            }
            
            // Initialize Lucide icons
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        });
    </script>
}