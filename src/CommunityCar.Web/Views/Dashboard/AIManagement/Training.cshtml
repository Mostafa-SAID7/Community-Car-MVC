@model dynamic
@{
    ViewData["Title"] = "AI Training";
    Layout = "_DashboardLayout";
    ViewData["UseModernTheme"] = true;
}

@Html.AntiForgeryToken()

<div class="animate-slide-up">
    <!-- Top Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="page-title mb-2">AI Training</h1>
            <p class="text-muted fw-medium">Manage AI model training and performance</p>
        </div>
        <div class="d-flex align-items-center gap-3">
            <a asp-action="Index" class="btn-modern-outline d-flex align-items-center gap-2">
                <i data-lucide="arrow-left" class="w-4 h-4"></i>
                Back to Hub
            </a>
            <button class="btn-modern-primary" data-action="start-training">
                <i data-lucide="play" class="w-5 h-5"></i>
                Start Training Session
            </button>
        </div>
    </div>

    <!-- Model Status Cards -->
    <div class="row g-4 mb-5">
        @foreach (var trainingModel in Model.Models)
        {
            <div class="col-12 col-md-4">
                <div class="modern-action-card h-100 d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div>
                            <h4 class="fw-black mb-1">@trainingModel.Name</h4>
                            <span class="xx-small text-muted font-monospace opacity-60">VERSION @trainingModel.Version</span>
                        </div>
                        @{
                            var statusBadge = trainingModel.Status switch
                            {
                                "Active" => "modern-badge-success",
                                "Training" => "modern-badge-info",
                                _ => "modern-badge-outline"
                            };
                        }
                        <span class="modern-badge @statusBadge">@trainingModel.Status</span>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="small fw-bold">Accuracy</span>
                            <span class="small fw-black">@trainingModel.Accuracy%</span>
                        </div>
                        <div class="modern-progress">
                            <div class="modern-progress-bar bg-modern-lime" style="width: @trainingModel.Accuracy%; background-color: var(--modern-lime);"></div>
                        </div>
                    </div>

                    <div class="flex-grow-1 mb-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="xx-small text-muted fw-bold">DATASET SIZE</span>
                            <span class="xx-small fw-black">@trainingModel.DatasetSize.ToString("N0")</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="xx-small text-muted fw-bold">LAST TRAINED</span>
                            <span class="xx-small fw-black">@trainingModel.LastTrained.ToString("MMM dd, yyyy")</span>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button class="btn-modern-primary flex-grow-1 justify-content-center py-2" style="font-size: 0.75rem" data-action="retrain-model" data-model="@trainingModel.Name">
                            <i data-lucide="refresh-cw" class="w-4 h-4 mr-1"></i>
                            Retrain
                        </button>
                        <button class="btn-icon-modern" data-action="toggle-options" data-model="@trainingModel.Name">
                            <i data-lucide="more-horizontal" class="w-4 h-4"></i>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row g-4 mb-5">
        <!-- Training Queue -->
        <div class="col-12 col-lg-5">
            <div class="card-modern h-100">
                <h5 class="fw-black mb-4 d-flex align-items-center gap-2">
                    <i data-lucide="list" class="w-5 h-5 opacity-40"></i>
                    Training Queue
                </h5>
                <div class="d-flex flex-column">
                    @if (Model.TrainingQueue.Length > 0)
                    {
                        @foreach (var job in Model.TrainingQueue)
                        {
                            <div class="modern-queue-item">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="w-10 h-10 rounded-circle bg-light d-flex align-items-center justify-content-center text-primary">
                                        @if (job.Status == "In Progress")
                                        {
                                            <i data-lucide="loader" class="w-5 h-5 animate-spin"></i>
                                        }
                                        else
                                        {
                                            <i data-lucide="clock" class="w-5 h-5"></i>
                                        }
                                    </div>
                                    <div>
                                        <div class="small fw-bold">@job.Model</div>
                                        <div class="xx-small text-muted">@job.Status</div>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <div class="xx-small fw-black">@job.EstimatedTime</div>
                                    <div class="xx-small text-muted opacity-60">REMAINING</div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5 opacity-40">
                            <i data-lucide="inbox" class="w-10 h-10 mb-3"></i>
                            <p class="small fw-bold">No training jobs in queue</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- History -->
        <div class="col-12 col-lg-7">
            <div class="card-modern h-100 p-0 overflow-hidden">
                <div class="p-4 border-bottom">
                    <h5 class="fw-black mb-0 d-flex align-items-center gap-2">
                        <i data-lucide="history" class="w-5 h-5 opacity-40"></i>
                        Recent Training History
                    </h5>
                </div>
                <div class="modern-table-container border-0">
                    <table class="modern-table">
                        <thead>
                            <tr>
                                <th>Model</th>
                                <th>Date</th>
                                <th class="text-center">Result</th>
                                <th class="text-center">Delta</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var training in Model.RecentTraining)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-bold">@training.Model</div>
                                    </td>
                                    <td>
                                        <div class="small fw-bold">@training.Date.ToString("MMM dd, yyyy")</div>
                                        <div class="xx-small text-muted">@training.Date.ToString("HH:mm")</div>
                                    </td>
                                    <td class="text-center">
                                        <span class="modern-badge @(training.Result == "Success" ? "modern-badge-success" : "modern-badge-danger")">
                                            @training.Result
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="text-success fw-bold small">+@training.Improvement</span>
                                    </td>
                                    <td class="text-end">
                                        <div class="d-flex justify-content-end gap-2">
                                            <button class="btn-icon-modern">
                                                <i data-lucide="eye" class="w-4 h-4"></i>
                                            </button>
                                            <button class="btn-icon-modern">
                                                <i data-lucide="download" class="w-4 h-4"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/services/ai-service.js" asp-append-version="true"></script>
    <script src="~/js/modules/ai-module.js" asp-append-version="true"></script>
}
