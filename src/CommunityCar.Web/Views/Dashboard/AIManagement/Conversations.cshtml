@model dynamic
@{
    ViewData["Title"] = "AI Conversations";
    Layout = "_DashboardLayout";
}

<div class="space-y-6">
    <!-- Skeleton Loader -->
    <div id="conversations-skeleton" class="hidden space-y-6">
        <skeleton type="Card" class="h-64" />
        <skeleton type="Card" class="h-96" />
    </div>

    <div id="conversations-content">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-foreground">AI Conversations</h1>
            <p class="text-muted-foreground">Browse and manage AI chat conversations</p>
        </div>
        <div class="flex items-center gap-3">
            <a asp-action="Index" class="btn btn-outline">
                <i data-lucide="arrow-left" class="w-4 h-4 mr-2"></i>
                Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="card">
        <div class="card-content p-4">
            <div class="flex flex-wrap items-center gap-4">
                <div class="flex items-center gap-2">
                    <label class="text-sm font-medium text-foreground">Status:</label>
                    <select class="input w-32">
                        <option value="">All</option>
                        <option value="Active">Active</option>
                        <option value="Completed">Completed</option>
                        <option value="Resolved">Resolved</option>
                    </select>
                </div>
                <div class="flex items-center gap-2">
                    <label class="text-sm font-medium text-foreground">Sentiment:</label>
                    <select class="input w-32">
                        <option value="">All</option>
                        <option value="Positive">Positive</option>
                        <option value="Neutral">Neutral</option>
                        <option value="Negative">Negative</option>
                    </select>
                </div>
                <div class="flex items-center gap-2">
                    <label class="text-sm font-medium text-foreground">Date:</label>
                    <input type="date" class="input w-40">
                </div>
                <button class="btn btn-primary">
                    <i data-lucide="search" class="w-4 h-4 mr-2"></i>
                    Filter
                </button>
            </div>
        </div>
    </div>

    <!-- Conversations List -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Recent Conversations</h3>
            <p class="card-description">@Model.TotalCount total conversations</p>
        </div>
        <div class="card-content p-0">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="border-b border-border">
                        <tr class="text-left">
                            <th class="p-4 font-medium text-foreground">Conversation</th>
                            <th class="p-4 font-medium text-foreground">Messages</th>
                            <th class="p-4 font-medium text-foreground">Last Activity</th>
                            <th class="p-4 font-medium text-foreground">Status</th>
                            <th class="p-4 font-medium text-foreground">Sentiment</th>
                            <th class="p-4 font-medium text-foreground">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var conversation in Model.Conversations)
                        {
                            <tr class="border-b border-border hover:bg-muted/50">
                                <td class="p-4">
                                    <div>
                                        <div class="font-medium text-foreground">@conversation.Title</div>
                                        <div class="text-sm text-muted-foreground">ID: @conversation.Id.ToString().Substring(0, 8)...</div>
                                    </div>
                                </td>
                                <td class="p-4">
                                    <div class="flex items-center gap-2">
                                        <i data-lucide="message-circle" class="w-4 h-4 text-muted-foreground"></i>
                                        <span class="text-foreground">@conversation.MessageCount</span>
                                    </div>
                                </td>
                                <td class="p-4">
                                    <div class="text-sm text-foreground">@conversation.LastActivity.ToString("MMM dd, yyyy")</div>
                                    <div class="text-xs text-muted-foreground">@conversation.LastActivity.ToString("HH:mm")</div>
                                </td>
                                <td class="p-4">
                                    @{
                                        var statusClass = conversation.Status switch
                                        {
                                            "Active" => "bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400",
                                            "Completed" => "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400",
                                            "Resolved" => "bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-400",
                                            _ => "bg-gray-100 text-gray-800 dark:bg-gray-900/30 dark:text-gray-400"
                                        };
                                    }
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium @statusClass">
                                        @conversation.Status
                                    </span>
                                </td>
                                <td class="p-4">
                                    @{
                                        var sentimentClass = conversation.Sentiment switch
                                        {
                                            "Positive" => "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400",
                                            "Negative" => "bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400",
                                            _ => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400"
                                        };
                                    }
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium @sentimentClass">
                                        @conversation.Sentiment
                                    </span>
                                </td>
                                <td class="p-4">
                                    <div class="flex items-center gap-2">
                                        <a asp-action="ConversationDetails" asp-route-id="@conversation.Id" class="btn btn-sm btn-outline">
                                            <i data-lucide="eye" class="w-3 h-3 mr-1"></i>
                                            View
                                        </a>
                                        <button class="btn btn-sm btn-outline text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20">
                                            <i data-lucide="trash-2" class="w-3 h-3"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    <div class="flex items-center justify-between">
        <div class="text-sm text-muted-foreground">
            Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) to @(Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount)) of @Model.TotalCount conversations
        </div>
        <div class="flex items-center gap-2">
            @if (Model.CurrentPage > 1)
            {
                <a asp-action="Conversations" asp-route-page="@(Model.CurrentPage - 1)" class="btn btn-outline btn-sm">
                    <i data-lucide="chevron-left" class="w-4 h-4"></i>
                </a>
            }
            
            @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
            {
                <a asp-action="Conversations" asp-route-page="@i" class="btn btn-sm @(i == Model.CurrentPage ? "btn-primary" : "btn-outline")">
                    @i
                </a>
            }
            
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <a asp-action="Conversations" asp-route-page="@(Model.CurrentPage + 1)" class="btn btn-outline btn-sm">
                    <i data-lucide="chevron-right" class="w-4 h-4"></i>
                </a>
            }
        </div>
    </div>
    </div> <!-- End conversations-content -->
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize skeleton loading
            Skeleton.initPageLoad('conversations-skeleton', 'conversations-content');
            
            // Initialize icons
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        });
    </script>
}