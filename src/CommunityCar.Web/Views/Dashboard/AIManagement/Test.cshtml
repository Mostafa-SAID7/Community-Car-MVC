@{
    ViewData["Title"] = "AI Test Console";
    Layout = "_DashboardLayout";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-foreground">AI Test Console</h1>
            <p class="text-muted-foreground">Test AI responses and debug issues in real-time</p>
        </div>
        <div class="flex items-center gap-3">
            <button class="btn btn-outline" onclick="clearConsole()">
                <i data-lucide="trash-2" class="w-4 h-4 mr-2"></i>
                Clear
            </button>
            <button class="btn btn-outline" onclick="exportLog()">
                <i data-lucide="download" class="w-4 h-4 mr-2"></i>
                Export Log
            </button>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Test Input Panel -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Test Configuration -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Test Configuration</h3>
                    <p class="card-description">Configure test parameters</p>
                </div>
                <div class="card-content space-y-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="space-y-2">
                            <label class="text-sm font-medium text-foreground">Provider</label>
                            <select id="testProvider" class="input">
                                <option value="Gemini">Google Gemini</option>
                                <option value="HuggingFace">HuggingFace</option>
                            </select>
                        </div>
                        <div class="space-y-2">
                            <label class="text-sm font-medium text-foreground">Context</label>
                            <select id="testContext" class="input">
                                <option value="">No Context</option>
                                <option value="maintenance">Car Maintenance</option>
                                <option value="insurance">Insurance</option>
                                <option value="electric">Electric Vehicles</option>
                                <option value="safety">Safety</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Test Input -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Test Message</h3>
                    <p class="card-description">Enter a message to test AI response</p>
                </div>
                <div class="card-content space-y-4">
                    <div class="space-y-2">
                        <textarea id="testMessage" class="textarea min-h-[120px]" placeholder="Enter your test message here..."></textarea>
                    </div>
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-4">
                            <span class="text-sm text-muted-foreground" id="charCount">0 characters</span>
                            <div class="flex items-center gap-2">
                                <input type="checkbox" id="enableSentiment" checked class="rounded">
                                <label for="enableSentiment" class="text-sm text-foreground">Analyze Sentiment</label>
                            </div>
                        </div>
                        <button class="btn btn-primary" onclick="sendTestMessage()" id="sendButton">
                            <i data-lucide="send" class="w-4 h-4 mr-2"></i>
                            Send Test
                        </button>
                    </div>
                </div>
            </div>

            <!-- Quick Test Templates -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Quick Test Templates</h3>
                    <p class="card-description">Common test scenarios</p>
                </div>
                <div class="card-content">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                        <button class="btn btn-outline text-left justify-start" onclick="loadTemplate('maintenance')">
                            <i data-lucide="wrench" class="w-4 h-4 mr-2"></i>
                            Car Maintenance Question
                        </button>
                        <button class="btn btn-outline text-left justify-start" onclick="loadTemplate('insurance')">
                            <i data-lucide="shield" class="w-4 h-4 mr-2"></i>
                            Insurance Inquiry
                        </button>
                        <button class="btn btn-outline text-left justify-start" onclick="loadTemplate('problem')">
                            <i data-lucide="alert-triangle" class="w-4 h-4 mr-2"></i>
                            Problem Diagnosis
                        </button>
                        <button class="btn btn-outline text-left justify-start" onclick="loadTemplate('electric')">
                            <i data-lucide="zap" class="w-4 h-4 mr-2"></i>
                            Electric Vehicle Info
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Test Results Panel -->
        <div class="space-y-6">
            <!-- Current Test Status -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Test Status</h3>
                </div>
                <div class="card-content">
                    <div class="space-y-3">
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-muted-foreground">Status</span>
                            <span class="text-sm font-medium text-foreground" id="testStatus">Ready</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-muted-foreground">Response Time</span>
                            <span class="text-sm font-medium text-foreground" id="responseTime">-</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-muted-foreground">Confidence</span>
                            <span class="text-sm font-medium text-foreground" id="confidence">-</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-muted-foreground">Sentiment</span>
                            <span class="text-sm font-medium text-foreground" id="sentiment">-</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Test History -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Test History</h3>
                    <p class="card-description">Recent test results</p>
                </div>
                <div class="card-content">
                    <div class="space-y-2" id="testHistory">
                        <p class="text-sm text-muted-foreground text-center py-4">No tests run yet</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Test Results -->
    <div class="card" id="testResults" style="display: none;">
        <div class="card-header">
            <h3 class="card-title">Test Results</h3>
            <p class="card-description">AI response and analysis</p>
        </div>
        <div class="card-content space-y-6">
            <!-- AI Response -->
            <div class="space-y-2">
                <h4 class="font-medium text-foreground">AI Response</h4>
                <div class="p-4 rounded-lg bg-muted/50 border border-border">
                    <p class="text-foreground" id="aiResponse">Response will appear here...</p>
                </div>
            </div>

            <!-- Analysis Details -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Extracted Topics -->
                <div class="space-y-2">
                    <h4 class="font-medium text-foreground">Extracted Topics</h4>
                    <div class="flex flex-wrap gap-2" id="extractedTopics">
                        <!-- Topics will be added here -->
                    </div>
                </div>

                <!-- Suggestions -->
                <div class="space-y-2">
                    <h4 class="font-medium text-foreground">Suggestions</h4>
                    <div class="space-y-1" id="suggestions">
                        <!-- Suggestions will be added here -->
                    </div>
                </div>
            </div>

            <!-- Raw Response Data -->
            <div class="space-y-2">
                <div class="flex items-center justify-between">
                    <h4 class="font-medium text-foreground">Raw Response Data</h4>
                    <button class="btn btn-outline btn-sm" onclick="toggleRawData()">
                        <i data-lucide="code" class="w-4 h-4 mr-2"></i>
                        Toggle JSON
                    </button>
                </div>
                <div class="p-4 rounded-lg bg-muted/50 border border-border" id="rawData" style="display: none;">
                    <pre class="text-sm text-foreground overflow-x-auto" id="rawDataContent"></pre>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let testHistory = [];

        document.addEventListener('DOMContentLoaded', function() {
            // Initialize icons
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }

            // Character counter
            const testMessage = document.getElementById('testMessage');
            const charCount = document.getElementById('charCount');
            
            testMessage.addEventListener('input', function() {
                charCount.textContent = `${this.value.length} characters`;
            });
        });

        const templates = {
            maintenance: "When should I change my car's oil? I drive about 15,000 miles per year.",
            insurance: "What factors affect my car insurance premium? I'm a 25-year-old driver with a clean record.",
            problem: "My car is making a strange grinding noise when I brake. What could be the problem?",
            electric: "I'm considering buying an electric vehicle. What are the main advantages and disadvantages?"
        };

        function loadTemplate(type) {
            document.getElementById('testMessage').value = templates[type];
            document.getElementById('charCount').textContent = `${templates[type].length} characters`;
        }

        async function sendTestMessage() {
            const message = document.getElementById('testMessage').value.trim();
            if (!message) {
                alert('Please enter a test message');
                return;
            }

            const sendButton = document.getElementById('sendButton');
            const testStatus = document.getElementById('testStatus');
            const startTime = Date.now();

            // Update UI
            sendButton.disabled = true;
            sendButton.innerHTML = '<i data-lucide="loader-2" class="w-4 h-4 mr-2 animate-spin"></i>Testing...';
            testStatus.textContent = 'Processing...';

            try {
                const response = await fetch('@Url.Action("TestMessage")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify({
                        message: message,
                        context: document.getElementById('testContext').value
                    })
                });

                const data = await response.json();
                const responseTime = Date.now() - startTime;

                if (data.success) {
                    displayTestResults(data.data, responseTime);
                    addToHistory(message, data.data, responseTime);
                } else {
                    throw new Error(data.message || 'Test failed');
                }

                testStatus.textContent = 'Success';
            } catch (error) {
                console.error('Test error:', error);
                testStatus.textContent = 'Error';
                alert('Test failed: ' + error.message);
            } finally {
                // Reset button
                sendButton.disabled = false;
                sendButton.innerHTML = '<i data-lucide="send" class="w-4 h-4 mr-2"></i>Send Test';
                if (typeof lucide !== 'undefined') {
                    lucide.createIcons();
                }
            }
        }

        function displayTestResults(data, responseTime) {
            // Update status panel
            document.getElementById('responseTime').textContent = `${responseTime}ms`;
            document.getElementById('confidence').textContent = `${(data.confidence * 100).toFixed(1)}%`;
            document.getElementById('sentiment').textContent = data.sentiment || 'N/A';

            // Show results panel
            document.getElementById('testResults').style.display = 'block';
            
            // Display AI response
            document.getElementById('aiResponse').textContent = data.response;

            // Display extracted topics
            const topicsContainer = document.getElementById('extractedTopics');
            topicsContainer.innerHTML = '';
            if (data.topics && data.topics.length > 0) {
                data.topics.forEach(topic => {
                    const badge = document.createElement('span');
                    badge.className = 'inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-primary/10 text-primary';
                    badge.textContent = topic;
                    topicsContainer.appendChild(badge);
                });
            } else {
                topicsContainer.innerHTML = '<span class="text-sm text-muted-foreground">No topics extracted</span>';
            }

            // Display suggestions
            const suggestionsContainer = document.getElementById('suggestions');
            suggestionsContainer.innerHTML = '';
            if (data.suggestions && data.suggestions.length > 0) {
                data.suggestions.forEach(suggestion => {
                    const item = document.createElement('div');
                    item.className = 'text-sm text-muted-foreground';
                    item.textContent = `• ${suggestion}`;
                    suggestionsContainer.appendChild(item);
                });
            } else {
                suggestionsContainer.innerHTML = '<span class="text-sm text-muted-foreground">No suggestions available</span>';
            }

            // Store raw data
            document.getElementById('rawDataContent').textContent = JSON.stringify(data, null, 2);

            // Scroll to results
            document.getElementById('testResults').scrollIntoView({ behavior: 'smooth' });
        }

        function addToHistory(message, response, responseTime) {
            const historyItem = {
                timestamp: new Date(),
                message: message.substring(0, 50) + (message.length > 50 ? '...' : ''),
                responseTime: responseTime,
                confidence: response.confidence,
                success: true
            };

            testHistory.unshift(historyItem);
            if (testHistory.length > 10) {
                testHistory = testHistory.slice(0, 10);
            }

            updateHistoryDisplay();
        }

        function updateHistoryDisplay() {
            const historyContainer = document.getElementById('testHistory');
            
            if (testHistory.length === 0) {
                historyContainer.innerHTML = '<p class="text-sm text-muted-foreground text-center py-4">No tests run yet</p>';
                return;
            }

            historyContainer.innerHTML = '';
            testHistory.forEach((item, index) => {
                const historyItem = document.createElement('div');
                historyItem.className = 'flex items-center justify-between p-2 rounded-lg bg-muted/30 text-sm';
                historyItem.innerHTML = `
                    <div class="flex-1 truncate">
                        <span class="text-foreground">${item.message}</span>
                        <div class="text-xs text-muted-foreground">
                            ${item.timestamp.toLocaleTimeString()}
                        </div>
                    </div>
                    <div class="text-right">
                        <div class="text-xs text-muted-foreground">${item.responseTime}ms</div>
                        <div class="text-xs ${item.success ? 'text-green-600' : 'text-red-600'}">
                            ${item.success ? '✓' : '✗'}
                        </div>
                    </div>
                `;
                historyContainer.appendChild(historyItem);
            });
        }

        function toggleRawData() {
            const rawData = document.getElementById('rawData');
            rawData.style.display = rawData.style.display === 'none' ? 'block' : 'none';
        }

        function clearConsole() {
            if (confirm('Are you sure you want to clear the test console?')) {
                testHistory = [];
                updateHistoryDisplay();
                document.getElementById('testResults').style.display = 'none';
                document.getElementById('testMessage').value = '';
                document.getElementById('charCount').textContent = '0 characters';
                document.getElementById('testStatus').textContent = 'Ready';
                document.getElementById('responseTime').textContent = '-';
                document.getElementById('confidence').textContent = '-';
                document.getElementById('sentiment').textContent = '-';
            }
        }

        function exportLog() {
            if (testHistory.length === 0) {
                alert('No test history to export');
                return;
            }

            const data = {
                exportDate: new Date().toISOString(),
                testHistory: testHistory
            };

            const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `ai-test-log-${new Date().toISOString().split('T')[0]}.json`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }
    </script>
}