@model dynamic
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["AIManagementDashboard"];
    Layout = "_DashboardLayout";
}

    <div id="ai-skeleton" class="hidden space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <skeleton type="Card" />
            <skeleton type="Card" />
            <skeleton type="Card" />
            <skeleton type="Card" />
        </div>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <skeleton type="Card" />
            <skeleton type="Card" />
        </div>
    </div>

    <div id="ai-content" class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            @Html.CultureHeading(1, ViewData["Title"]?.ToString() ?? Localizer["AIManagementDashboard"].Value, new { @class = "text-2xl text-foreground" })
            @Html.CultureParagraph(Localizer["MonitorManageAI"].Value, new { @class = "text-muted-foreground" })
        </div>
        <div class="flex items-center gap-3">
            <a asp-action="Training" class="inline-flex items-center justify-center gap-2.5 px-6 py-2.5 bg-primary text-primary-foreground hover:bg-primary/90 text-[10px] font-black uppercase tracking-widest rounded-xl transition-all shadow-lg shadow-primary/20 active:scale-95 group/brain">
                <i data-lucide="brain" class="w-4 h-4 group-hover/brain:scale-110 transition-transform"></i>
                @Localizer["TrainingCenter"]
            </a>
            <a asp-action="Test" class="inline-flex items-center justify-center gap-2.5 px-6 py-2.5 bg-background border border-border/50 hover:bg-muted/10 text-foreground text-[10px] font-black uppercase tracking-widest rounded-xl transition-all active:scale-95 group/flask">
                <i data-lucide="flask" class="w-4 h-4 group-hover/flask:rotate-12 transition-transform"></i>
                @Localizer["TestConsole"]
            </a>
        </div>
    </div>

    <!-- Overview Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="eng-card">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-muted-foreground">@Localizer["TotalConversations"]</p>
                        <p class="text-2xl font-bold text-foreground">@(Model?.TotalConversations ?? 0)</p>
                    </div>
                    <div class="p-2 bg-blue-100 dark:bg-blue-900/30 rounded-lg">
                        <i data-lucide="message-circle" class="w-6 h-6 text-blue-600 dark:text-blue-400"></i>
                    </div>
                </div>
                <div class="mt-2 flex items-center text-sm">
                    <span class="text-green-600 font-medium">+@(Model?.WeeklyGrowth ?? 0)%</span>
                    <span class="text-muted-foreground ml-1">@Localizer["FromLastWeek"]</span>
                </div>
            </div>
        </div>

        <div class="eng-card">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-muted-foreground">@Localizer["ActiveUsers"]</p>
                        <p class="text-2xl font-bold text-foreground">@(Model?.ActiveUsers ?? 0)</p>
                    </div>
                    <div class="p-2 bg-green-100 dark:bg-green-900/30 rounded-lg">
                        <i data-lucide="users" class="w-6 h-6 text-green-600 dark:text-green-400"></i>
                    </div>
                </div>
                <div class="mt-2 flex items-center text-sm">
                    <span class="text-muted-foreground">@Localizer["CurrentlyOnline"]</span>
                </div>
            </div>
        </div>

        <div class="eng-card">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-muted-foreground">@Localizer["ResponseTime"]</p>
                        <p class="text-2xl font-bold text-foreground">@(Model?.ResponseTime ?? "N/A")</p>
                    </div>
                    <div class="p-2 bg-yellow-100 dark:bg-yellow-900/30 rounded-lg">
                        <i data-lucide="zap" class="w-6 h-6 text-yellow-600 dark:text-yellow-400"></i>
                    </div>
                </div>
                <div class="mt-2 flex items-center text-sm">
                    <span class="text-muted-foreground">@Localizer["AverageResponse"]</span>
                </div>
            </div>
        </div>

        <div class="eng-card">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-muted-foreground">@Localizer["SatisfactionRate"]</p>
                        <p class="text-2xl font-bold text-foreground">@(Model?.SatisfactionRate ?? 0)%</p>
                    </div>
                    <div class="p-2 bg-purple-100 dark:bg-purple-900/30 rounded-lg">
                        <i data-lucide="heart" class="w-6 h-6 text-purple-600 dark:text-purple-400"></i>
                    </div>
                </div>
                <div class="mt-2 flex items-center text-sm">
                    <span class="text-green-600 font-medium">@Localizer["Excellent"]</span>
                    <span class="text-muted-foreground ml-1">@Localizer["Rating"]</span>
                </div>
            </div>
        </div>
    </div>

    <!-- AI Models Status -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="eng-card">
            <div class="eng-card-header">
                <h3 class="eng-card-title">@Localizer["AIModelsStatus"]</h3>
                <p class="text-[10px] font-bold uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["CurrentStatusModels"]</p>
            </div>
            <div class="p-6">
                <div class="space-y-4">
                    <div class="flex items-center justify-between p-3 rounded-lg bg-muted/50">
                        <div class="flex items-center gap-3">
                            <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                            <span class="font-medium">@Localizer["ActiveModels"]</span>
                        </div>
                        <span class="text-2xl font-bold">@(Model?.ActiveModels ?? 0)</span>
                    </div>
                    <div class="flex items-center justify-between p-3 rounded-lg bg-muted/50">
                        <div class="flex items-center gap-3">
                            <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                            <span class="font-medium">@Localizer["TrainingJobs"]</span>
                        </div>
                        <span class="text-2xl font-bold">@(Model?.TrainingJobs ?? 0)</span>
                    </div>
                    <div class="flex items-center justify-between p-3 rounded-lg bg-muted/50">
                        <div class="flex items-center gap-3">
                            <div class="w-3 h-3 bg-purple-500 rounded-full"></div>
                            <span class="font-medium">@Localizer["RecentTraining"]</span>
                        </div>
                        <span class="text-2xl font-bold">@(Model?.RecentTrainingCount ?? 0)</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="eng-card">
            <div class="eng-card-header">
                <h3 class="eng-card-title">@Localizer["TopIntents"]</h3>
                <p class="text-[10px] font-bold uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["CommonUserIntents"]</p>
            </div>
            <div class="p-6">
                <div class="space-y-3">
                    @try
                    {
                        @if (Model?.TopIntents != null)
                        {
                            @foreach (var intent in Model.TopIntents)
                            {
                                <div class="flex items-center justify-between">
                                    <span class="text-sm text-foreground">@intent</span>
                                    <div class="eng-progress-container w-16 h-2">
                                        <div class="eng-progress-bar bg-primary w-[@(new Random().Next(40, 90))%]"></div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted-foreground text-sm">@Localizer["NoIntentData"]</p>
                        }
                    }
                    catch
                    {
                        <p class="text-red-500 text-sm">@Localizer["ErrorLoadingIntents"]</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="eng-card">
        <div class="eng-card-header">
            <h3 class="eng-card-title">@Localizer["RecentActivity"]</h3>
            <p class="text-[10px] font-bold uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["LatestAIInteractions"]</p>
        </div>
        <div class="p-6">
            <div class="space-y-4">
                @try
                {
                    @if (Model?.RecentActivity != null)
                    {
                        @foreach (var activity in Model.RecentActivity)
                        {
                            <div class="flex items-start gap-3 p-3 rounded-lg bg-muted/50">
                                <div class="w-8 h-8 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center">
                                    <i data-lucide="user" class="w-4 h-4 text-blue-600 dark:text-blue-400"></i>
                                </div>
                                <div class="flex-1">
                                    <div class="flex items-center justify-between">
                                        <span class="font-medium text-foreground">@activity.User</span>
                                        <span class="text-xs text-muted-foreground">@activity.Time</span>
                                    </div>
                                    <p class="text-sm text-muted-foreground mt-1">@activity.Message</p>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-8">
                            <i data-lucide="activity" class="w-12 h-12 text-muted-foreground mx-auto mb-4"></i>
                            <p class="text-muted-foreground">@Localizer["NoRecentActivity"]</p>
                        </div>
                    }
                }
                catch
                {
                    <div class="text-center py-8">
                        <i data-lucide="alert-circle" class="w-12 h-12 text-red-500 mx-auto mb-4"></i>
                        <p class="text-red-500">@Localizer["ErrorLoadingActivity"]</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <a asp-action="Training" class="eng-card hover:shadow-lg transition-shadow">
            <div class="p-6 text-center">
                <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-lg mx-auto mb-4 flex items-center justify-center">
                    <i data-lucide="brain" class="w-6 h-6 text-blue-600 dark:text-blue-400"></i>
                </div>
                <h3 class="font-semibold text-foreground mb-2">@Localizer["TrainingCenter"]</h3>
                <p class="text-sm text-muted-foreground">@Localizer["ManageAIModels"]</p>
            </div>
        </a>

        <a asp-action="Analytics" class="eng-card hover:shadow-lg transition-shadow">
            <div class="p-6 text-center">
                <div class="w-12 h-12 bg-green-100 dark:bg-green-900/30 rounded-lg mx-auto mb-4 flex items-center justify-center">
                    <i data-lucide="bar-chart-3" class="w-6 h-6 text-green-600 dark:text-green-400"></i>
                </div>
                <h3 class="font-semibold text-foreground mb-2">@Localizer["Analytics"]</h3>
                <p class="text-sm text-muted-foreground">@Localizer["ViewAIPerformance"]</p>
            </div>
        </a>

        <a asp-action="Settings" class="eng-card hover:shadow-lg transition-shadow">
            <div class="p-6 text-center">
                <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900/30 rounded-lg mx-auto mb-4 flex items-center justify-center">
                    <i data-lucide="settings" class="w-6 h-6 text-purple-600 dark:text-purple-400"></i>
                </div>
                <h3 class="font-semibold text-foreground mb-2">@Localizer["Settings"]</h3>
                <p class="text-sm text-muted-foreground">@Localizer["ConfigureAIModels"]</p>
            </div>
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/ai-dashboard.js" asp-append-version="true"></script>
}