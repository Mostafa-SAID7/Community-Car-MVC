@model AIManagementViewModel
@{
    ViewData["Title"] = "AI Management";
    Layout = "_DashboardLayout";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-foreground">AI Management</h1>
            <p class="text-muted-foreground">Monitor and manage your AI assistant system</p>
        </div>
        <div class="flex items-center gap-3">
            <a asp-action="Test" class="btn btn-outline">
                <i data-lucide="flask" class="w-4 h-4 mr-2"></i>
                Test Console
            </a>
            <a asp-action="Settings" class="btn btn-primary">
                <i data-lucide="settings" class="w-4 h-4 mr-2"></i>
                Settings
            </a>
        </div>
    </div>

    <!-- Status Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Provider Status -->
        <div class="card">
            <div class="card-content p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-muted-foreground">Current Provider</p>
                        <p class="text-2xl font-bold text-foreground">@Model.CurrentProvider</p>
                    </div>
                    <div class="flex items-center justify-center w-12 h-12 rounded-full bg-primary/10">
                        <i data-lucide="brain" class="w-6 h-6 text-primary"></i>
                    </div>
                </div>
                <div class="mt-4 flex items-center gap-2">
                    @if (Model.GeminiConfigured)
                    {
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400">
                            <i data-lucide="check" class="w-3 h-3 mr-1"></i>
                            Gemini
                        </span>
                    }
                    @if (Model.HuggingFaceConfigured)
                    {
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400">
                            <i data-lucide="check" class="w-3 h-3 mr-1"></i>
                            HuggingFace
                        </span>
                    }
                </div>
            </div>
        </div>

        <!-- Total Conversations -->
        <div class="card">
            <div class="card-content p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-muted-foreground">Total Conversations</p>
                        <p class="text-2xl font-bold text-foreground">@Model.TotalConversations.ToString("N0")</p>
                    </div>
                    <div class="flex items-center justify-center w-12 h-12 rounded-full bg-blue-100 dark:bg-blue-900/30">
                        <i data-lucide="message-circle" class="w-6 h-6 text-blue-600 dark:text-blue-400"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <a asp-action="Conversations" class="text-sm text-primary hover:text-primary/80 transition-colors">
                        View all conversations â†’
                    </a>
                </div>
            </div>
        </div>

        <!-- Total Messages -->
        <div class="card">
            <div class="card-content p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-muted-foreground">Total Messages</p>
                        <p class="text-2xl font-bold text-foreground">@Model.TotalMessages.ToString("N0")</p>
                    </div>
                    <div class="flex items-center justify-center w-12 h-12 rounded-full bg-green-100 dark:bg-green-900/30">
                        <i data-lucide="messages" class="w-6 h-6 text-green-600 dark:text-green-400"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <span class="text-sm text-muted-foreground">
                        Avg: @(Model.TotalMessages / Math.Max(Model.TotalConversations, 1)) per conversation
                    </span>
                </div>
            </div>
        </div>

        <!-- Response Time -->
        <div class="card">
            <div class="card-content p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-muted-foreground">Avg Response Time</p>
                        <p class="text-2xl font-bold text-foreground">@Model.AverageResponseTime.TotalMilliseconds.ToString("F0")ms</p>
                    </div>
                    <div class="flex items-center justify-center w-12 h-12 rounded-full bg-orange-100 dark:bg-orange-900/30">
                        <i data-lucide="zap" class="w-6 h-6 text-orange-600 dark:text-orange-400"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <span class="text-sm text-green-600 dark:text-green-400">
                        <i data-lucide="trending-up" class="w-3 h-3 inline mr-1"></i>
                        Fast response
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Sentiment Distribution -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Sentiment Distribution</h3>
                <p class="card-description">Overall sentiment analysis of conversations</p>
            </div>
            <div class="card-content">
                <div class="space-y-4">
                    @foreach (var sentiment in Model.SentimentDistribution)
                    {
                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-3">
                                <div class="w-3 h-3 rounded-full @(sentiment.Key == "Positive" ? "bg-green-500" : sentiment.Key == "Negative" ? "bg-red-500" : "bg-gray-500")"></div>
                                <span class="text-sm font-medium">@sentiment.Key</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <div class="w-24 h-2 bg-muted rounded-full overflow-hidden">
                                    <div class="h-full @(sentiment.Key == "Positive" ? "bg-green-500" : sentiment.Key == "Negative" ? "bg-red-500" : "bg-gray-500") transition-all duration-300" style="width: @sentiment.Value%"></div>
                                </div>
                                <span class="text-sm text-muted-foreground w-8">@sentiment.Value%</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Top Topics -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Top Discussion Topics</h3>
                <p class="card-description">Most frequently discussed topics</p>
            </div>
            <div class="card-content">
                <div class="space-y-3">
                    @for (int i = 0; i < Model.TopTopics.Count; i++)
                    {
                        <div class="flex items-center justify-between p-3 rounded-lg bg-muted/50">
                            <div class="flex items-center gap-3">
                                <span class="flex items-center justify-center w-6 h-6 rounded-full bg-primary text-primary-foreground text-xs font-bold">
                                    @(i + 1)
                                </span>
                                <span class="font-medium">@Model.TopTopics[i]</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <div class="w-16 h-2 bg-background rounded-full overflow-hidden">
                                    <div class="h-full bg-primary transition-all duration-300" style="width: @((100 - i * 15))%"></div>
                                </div>
                                <span class="text-sm text-muted-foreground">@((100 - i * 15))%</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="card hover:shadow-lg transition-shadow">
            <div class="card-content p-6">
                <div class="flex items-center gap-4">
                    <div class="flex items-center justify-center w-12 h-12 rounded-full bg-blue-100 dark:bg-blue-900/30">
                        <i data-lucide="bar-chart-3" class="w-6 h-6 text-blue-600 dark:text-blue-400"></i>
                    </div>
                    <div class="flex-1">
                        <h3 class="font-semibold text-foreground">Analytics</h3>
                        <p class="text-sm text-muted-foreground">View detailed AI analytics and insights</p>
                    </div>
                </div>
                <div class="mt-4">
                    <a asp-action="Analytics" class="btn btn-outline w-full">
                        View Analytics
                    </a>
                </div>
            </div>
        </div>

        <div class="card hover:shadow-lg transition-shadow">
            <div class="card-content p-6">
                <div class="flex items-center gap-4">
                    <div class="flex items-center justify-center w-12 h-12 rounded-full bg-purple-100 dark:bg-purple-900/30">
                        <i data-lucide="graduation-cap" class="w-6 h-6 text-purple-600 dark:text-purple-400"></i>
                    </div>
                    <div class="flex-1">
                        <h3 class="font-semibold text-foreground">Training</h3>
                        <p class="text-sm text-muted-foreground">Manage AI model training and feedback</p>
                    </div>
                </div>
                <div class="mt-4">
                    <a asp-action="Training" class="btn btn-outline w-full">
                        Manage Training
                    </a>
                </div>
            </div>
        </div>

        <div class="card hover:shadow-lg transition-shadow">
            <div class="card-content p-6">
                <div class="flex items-center gap-4">
                    <div class="flex items-center justify-center w-12 h-12 rounded-full bg-green-100 dark:bg-green-900/30">
                        <i data-lucide="flask" class="w-6 h-6 text-green-600 dark:text-green-400"></i>
                    </div>
                    <div class="flex-1">
                        <h3 class="font-semibold text-foreground">Test Console</h3>
                        <p class="text-sm text-muted-foreground">Test AI responses and debug issues</p>
                    </div>
                </div>
                <div class="mt-4">
                    <a asp-action="Test" class="btn btn-outline w-full">
                        Open Console
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize icons
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        });
    </script>
}