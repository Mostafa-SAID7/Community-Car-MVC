@model dynamic
@{
    ViewData["Title"] = "Conversation Details";
    Layout = "_DashboardLayout";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-foreground">Conversation Details</h1>
            <p class="text-muted-foreground">@Model.Title</p>
        </div>
        <div class="flex items-center gap-3">
            <a asp-action="Conversations" class="btn btn-outline">
                <i data-lucide="arrow-left" class="w-4 h-4 mr-2"></i>
                Back to Conversations
            </a>
        </div>
    </div>

    <!-- Conversation Info -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="card">
            <div class="card-content p-4">
                <div class="text-center">
                    <div class="text-2xl font-bold text-primary">@Model.Messages.Length</div>
                    <div class="text-sm text-muted-foreground">Messages</div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-content p-4">
                <div class="text-center">
                    <div class="text-2xl font-bold text-primary">@Model.Status</div>
                    <div class="text-sm text-muted-foreground">Status</div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-content p-4">
                <div class="text-center">
                    <div class="text-2xl font-bold text-primary">@Model.CreatedAt.ToString("MMM dd")</div>
                    <div class="text-sm text-muted-foreground">Started</div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-content p-4">
                <div class="text-center">
                    <div class="text-2xl font-bold text-primary">@Model.UpdatedAt.ToString("MMM dd")</div>
                    <div class="text-sm text-muted-foreground">Last Update</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Messages -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Conversation Messages</h3>
            <p class="card-description">Full conversation history</p>
        </div>
        <div class="card-content p-6">
            <div class="space-y-4 max-h-96 overflow-y-auto">
                @foreach (var message in Model.Messages)
                {
                    <div class="flex @(message.IsFromUser ? "justify-end" : "justify-start")">
                        <div class="max-w-xs lg:max-w-md">
                            <div class="flex items-start gap-3 @(message.IsFromUser ? "flex-row-reverse" : "")">
                                <div class="flex items-center justify-center w-8 h-8 rounded-full @(message.IsFromUser ? "bg-primary text-primary-foreground" : "bg-muted")">
                                    @if (message.IsFromUser)
                                    {
                                        <i data-lucide="user" class="w-4 h-4"></i>
                                    }
                                    else
                                    {
                                        <i data-lucide="bot" class="w-4 h-4"></i>
                                    }
                                </div>
                                <div class="flex-1">
                                    <div class="@(message.IsFromUser ? "bg-primary text-primary-foreground" : "bg-muted") rounded-lg p-3">
                                        <p class="text-sm">@message.Content</p>
                                    </div>
                                    <div class="flex items-center gap-2 mt-1 @(message.IsFromUser ? "justify-end" : "")">
                                        <span class="text-xs text-muted-foreground">@message.Timestamp.ToString("HH:mm")</span>
                                        @if (!string.IsNullOrEmpty(message.Sentiment))
                                        {
                                            var sentimentClass = message.Sentiment switch
                                            {
                                                "Positive" => "text-green-600",
                                                "Negative" => "text-red-600",
                                                _ => "text-yellow-600"
                                            };
                                            <span class="text-xs @sentimentClass">@message.Sentiment</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-end gap-3">
        <button class="btn btn-outline">
            <i data-lucide="download" class="w-4 h-4 mr-2"></i>
            Export Conversation
        </button>
        <button class="btn btn-outline text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20">
            <i data-lucide="trash-2" class="w-4 h-4 mr-2"></i>
            Delete Conversation
        </button>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize icons
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        });
    </script>
}