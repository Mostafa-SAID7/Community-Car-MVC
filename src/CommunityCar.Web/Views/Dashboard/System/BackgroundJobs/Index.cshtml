@model CommunityCar.Web.Models.Dashboard.System.BackgroundJobs.BackgroundJobsViewModel
@{
    ViewData["Title"] = "Background Jobs - System Management";
    ViewData["PageHeader"] = "Background Jobs";
    ViewData["PageDescription"] = "Monitor and manage system background job processing";
}

<div class="max-w-6xl mx-auto space-y-8 animate-in fade-in duration-700">
    <!-- Breadcrumb Protocol -->
    <nav class="flex items-center gap-3 text-[10px] font-black uppercase tracking-widest text-muted-foreground/60 px-2">
        <a href="@Url.Action("Index", "Overview")" class="hover:text-primary transition-colors flex items-center gap-2">
            <i data-lucide="chevron-left" class="w-3.5 h-3.5"></i> Dashboard
        </a>
        <span class="opacity-20">/</span>
        <span class="text-foreground/40">System Background Jobs</span>
    </nav>

    <!-- Job Statistics Overview -->
    <div class="eng-card overflow-hidden">
        <div class="flex flex-col lg:flex-row border-b border-border/30">
            <div class="flex-1 p-8 md:p-12 space-y-6">
                <div class="space-y-4">
                    <div class="flex flex-wrap gap-2">
                        <span class="px-3 py-1 rounded-2xl text-[9px] font-black uppercase tracking-widest bg-green-500/10 text-green-600 border border-green-500/20 flex items-center gap-1.5 shadow-sm">
                            <i data-lucide="activity" class="w-3.5 h-3.5"></i> System Active
                        </span>
                    </div>
                    <h1 class="text-4xl md:text-5xl font-black text-foreground tracking-tighter leading-[1.1]">Background Job System</h1>
                    <p class="text-sm font-medium text-muted-foreground/80 leading-relaxed">Monitor job queues, manage recurring tasks, and optimize system processing</p>
                </div>

                <div class="flex items-center gap-6 pt-4">
                    <button onclick="refreshStatistics()" class="flex items-center gap-3 px-6 py-3 bg-primary/10 text-primary border border-primary/20 rounded-2xl hover:bg-primary/20 transition-all active:scale-95 group/btn">
                        <i data-lucide="refresh-cw" class="w-4 h-4 group-hover/btn:rotate-180 transition-transform duration-500"></i>
                        <span class="text-xs font-black uppercase tracking-widest">Refresh Stats</span>
                    </button>
                </div>
            </div>

            <!-- Stats Panel -->
            <div class="lg:w-80 bg-muted/20 border-l border-border/30 p-8 flex flex-col justify-center gap-8">
                <div class="grid grid-cols-2 gap-8 lg:grid-cols-1">
                    <div class="space-y-1">
                        <span class="eng-stat-value text-[32px] leading-none tracking-tighter">@Model.JobStatistics.ProcessingCount.ToString("D2")</span>
                        <span class="eng-stat-label tracking-[0.2em] opacity-50">Processing</span>
                    </div>
                    <div class="space-y-1">
                        <span class="eng-stat-value text-[32px] leading-none tracking-tighter">@Model.JobStatistics.EnqueuedCount.ToString("D2")</span>
                        <span class="eng-stat-label tracking-[0.2em] opacity-50">Queued</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Maintenance -->
        <div class="relative group/operation">
            <div class="eng-card p-6 hover:-translate-y-1 transition-all">
                <div class="space-y-4">
                    <div class="w-12 h-12 bg-blue-500/10 rounded-2xl flex items-center justify-center text-blue-600">
                        <i data-lucide="wrench" class="w-6 h-6"></i>
                    </div>
                    <div>
                        <h4 class="text-sm font-black text-foreground mb-2">Run Maintenance</h4>
                        <p class="text-xs text-muted-foreground/80 leading-relaxed">Execute system maintenance tasks</p>
                    </div>
                    <form asp-action="RunMaintenance" method="post" class="w-full">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="w-full px-4 py-3 bg-blue-500/10 text-blue-600 border border-blue-500/20 rounded-2xl hover:bg-blue-500/20 transition-all active:scale-95 text-xs font-black uppercase tracking-widest" onclick="return confirm('Run maintenance tasks now?')">
                            Execute
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Feed Update -->
        <div class="relative group/operation">
            <div class="eng-card p-6 hover:-translate-y-1 transition-all">
                <div class="space-y-4">
                    <div class="w-12 h-12 bg-green-500/10 rounded-2xl flex items-center justify-center text-green-600">
                        <i data-lucide="rss" class="w-6 h-6"></i>
                    </div>
                    <div>
                        <h4 class="text-sm font-black text-foreground mb-2">Update Feeds</h4>
                        <p class="text-xs text-muted-foreground/80 leading-relaxed">Refresh community feed data</p>
                    </div>
                    <form asp-action="UpdateFeeds" method="post" class="w-full">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="w-full px-4 py-3 bg-green-500/10 text-green-600 border border-green-500/20 rounded-2xl hover:bg-green-500/20 transition-all active:scale-95 text-xs font-black uppercase tracking-widest" onclick="return confirm('Update feeds now?')">
                            Execute
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Gamification -->
        <div class="relative group/operation">
            <div class="eng-card p-6 hover:-translate-y-1 transition-all">
                <div class="space-y-4">
                    <div class="w-12 h-12 bg-purple-500/10 rounded-2xl flex items-center justify-center text-purple-600">
                        <i data-lucide="trophy" class="w-6 h-6"></i>
                    </div>
                    <div>
                        <h4 class="text-sm font-black text-foreground mb-2">Process Gamification</h4>
                        <p class="text-xs text-muted-foreground/80 leading-relaxed">Update badges and achievements</p>
                    </div>
                    <form asp-action="ProcessGamification" method="post" class="w-full">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="w-full px-4 py-3 bg-purple-500/10 text-purple-600 border border-purple-500/20 rounded-2xl hover:bg-purple-500/20 transition-all active:scale-95 text-xs font-black uppercase tracking-widest" onclick="return confirm('Process gamification now?')">
                            Execute
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Email Digest -->
        <div class="relative group/operation">
            <div class="eng-card p-6 hover:-translate-y-1 transition-all">
                <div class="space-y-4">
                    <div class="w-12 h-12 bg-amber-500/10 rounded-2xl flex items-center justify-center text-amber-600">
                        <i data-lucide="mail" class="w-6 h-6"></i>
                    </div>
                    <div>
                        <h4 class="text-sm font-black text-foreground mb-2">Send Email Digest</h4>
                        <p class="text-xs text-muted-foreground/80 leading-relaxed">Send daily email notifications</p>
                    </div>
                    <form asp-action="SendEmailDigest" method="post" class="w-full">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="w-full px-4 py-3 bg-amber-500/10 text-amber-600 border border-amber-500/20 rounded-2xl hover:bg-amber-500/20 transition-all active:scale-95 text-xs font-black uppercase tracking-widest" onclick="return confirm('Send email digest now?')">
                            Execute
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Job Statistics Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="eng-card p-6">
            <div class="flex items-center justify-between mb-4">
                <h4 class="text-sm font-black text-foreground">Succeeded Jobs</h4>
                <div class="w-8 h-8 bg-green-500/10 rounded-xl flex items-center justify-center text-green-600">
                    <i data-lucide="check-circle" class="w-4 h-4"></i>
                </div>
            </div>
            <div class="space-y-2">
                <span class="eng-stat-value text-2xl">@Model.JobStatistics.SucceededCount.ToString("N0")</span>
                <div class="h-1 bg-muted/40 rounded-full overflow-hidden">
                    <div class="h-full bg-green-500/60 rounded-full w-4/5"></div>
                </div>
            </div>
        </div>

        <div class="eng-card p-6">
            <div class="flex items-center justify-between mb-4">
                <h4 class="text-sm font-black text-foreground">Failed Jobs</h4>
                <div class="w-8 h-8 bg-red-500/10 rounded-xl flex items-center justify-center text-red-600">
                    <i data-lucide="x-circle" class="w-4 h-4"></i>
                </div>
            </div>
            <div class="space-y-2">
                <span class="eng-stat-value text-2xl">@Model.JobStatistics.FailedCount.ToString("N0")</span>
                <div class="h-1 bg-muted/40 rounded-full overflow-hidden">
                    <div class="h-full bg-red-500/60 rounded-full w-1/5"></div>
                </div>
            </div>
        </div>

        <div class="eng-card p-6">
            <div class="flex items-center justify-between mb-4">
                <h4 class="text-sm font-black text-foreground">Scheduled Jobs</h4>
                <div class="w-8 h-8 bg-blue-500/10 rounded-xl flex items-center justify-center text-blue-600">
                    <i data-lucide="clock" class="w-4 h-4"></i>
                </div>
            </div>
            <div class="space-y-2">
                <span class="eng-stat-value text-2xl">@Model.JobStatistics.ScheduledCount.ToString("N0")</span>
                <div class="h-1 bg-muted/40 rounded-full overflow-hidden">
                    <div class="h-full bg-blue-500/60 rounded-full w-2/5"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Jobs -->
    <div class="eng-card p-8 md:p-12">
        <div class="flex items-center justify-between mb-8">
            <h3 class="text-xl font-black text-foreground tracking-tighter flex items-center gap-3">
                <span class="flex items-center justify-center w-8 h-8 rounded-2xl bg-primary text-primary-foreground text-xs leading-none">@Model.RecentJobs.Count</span>
                Recent Job Activity
            </h3>
            <a href="@Url.Action("RecurringJobs")" class="flex items-center gap-2 text-[10px] font-black uppercase tracking-widest text-muted-foreground hover:text-primary transition-colors">
                <i data-lucide="calendar" class="w-4 h-4"></i>
                View Recurring Jobs
            </a>
        </div>

        @if (Model.RecentJobs.Any())
        {
            <div class="space-y-4">
                @foreach (var job in Model.RecentJobs.Take(10))
                {
                    <div class="flex items-center gap-4 p-4 bg-muted/10 border border-border/30 rounded-2xl">
                        <div class="w-10 h-10 rounded-xl bg-@(job.State == "Succeeded" ? "green-500" : "red-500")/10 flex items-center justify-center text-@(job.State == "Succeeded" ? "green-500" : "red-500")">
                            <i data-lucide="@(job.State == "Succeeded" ? "check" : "x")" class="w-4 h-4"></i>
                        </div>
                        <div class="flex-1">
                            <div class="flex items-center justify-between">
                                <span class="text-sm font-black text-foreground">@job.Method</span>
                                <span class="text-xs text-muted-foreground">@job.CreatedAt?.ToString("HH:mm:ss")</span>
                            </div>
                            <div class="flex items-center gap-4 mt-1">
                                <span class="px-2 py-1 rounded-lg text-[9px] font-black uppercase tracking-widest bg-@(job.State == "Succeeded" ? "green-500" : "red-500")/10 text-@(job.State == "Succeeded" ? "green-500" : "red-500")">
                                    @job.State
                                </span>
                                @if (job.Duration.HasValue)
                                {
                                    <span class="text-xs text-muted-foreground">@job.Duration.Value.TotalSeconds.ToString("F1")s</span>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="py-20 flex flex-col items-center justify-center text-center bg-muted/10 border-2 border-dashed border-border/40 rounded-[2.5rem]">
                <div class="w-16 h-16 bg-muted/40 rounded-2xl flex items-center justify-center mb-6">
                    <i data-lucide="activity" class="w-8 h-8 text-muted-foreground opacity-20"></i>
                </div>
                <h4 class="text-xl font-black text-foreground tracking-tight mb-3">No Recent Activity</h4>
                <p class="text-xs font-medium text-muted-foreground uppercase tracking-widest opacity-60">Job activity will appear here</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function refreshStatistics() {
            $.get('@Url.Action("GetStatistics")', function(data) {
                if (data.error) {
                    toastr.error(data.error);
                    return;
                }
                
                // Update statistics display
                location.reload(); // Simple refresh for now
                
                toastr.success('Statistics refreshed successfully');
            }).fail(function() {
                toastr.error('Failed to refresh statistics');
            });
        }
        
        // Auto-refresh every 30 seconds
        setInterval(refreshStatistics, 30000);
    </script>
}