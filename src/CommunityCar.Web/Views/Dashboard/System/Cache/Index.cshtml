@model CommunityCar.Application.Features.Dashboard.ViewModels.Cache.CacheManagementViewModel
@{
    ViewData["Title"] = "Cache Management";
    ViewData["PageHeader"] = "Cache Management";
    ViewData["PageDescription"] = "Monitor and manage application cache";
}

<div class="animate-slide-up">
    <!-- Breadcrumb Protocol -->
    <nav class="d-flex align-items-center gap-2 xx-small fw-bold text-uppercase tracking-wider text-muted opacity-50 mb-3 px-1">
        <a href="@Url.Action("Index", "Overview")" class="text-decoration-none text-reset hover-primary">
            Dashboard
        </a>
        <span>/</span>
        <span>System Cache</span>
    </nav>

    <!-- Cache Overview Card -->
    <div class="card-modern p-0 overflow-hidden mb-4">
        <div class="row g-0">
            <div class="col-12 col-lg-8 p-4 p-md-5">
                <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
                    <span class="badge @(Model.IsRedisConnected ? "bg-success-subtle text-success" : "bg-danger-subtle text-danger") rounded-pill px-3 py-1 xx-small fw-bold border border-current border-opacity-10">
                        <i data-lucide="zap" class="w-3 h-3 me-1"></i> @(Model.IsRedisConnected ? "Connected" : "Disconnected")
                    </span>
                    <span class="badge bg-primary-subtle text-primary rounded-pill px-3 py-1 xx-small fw-bold border border-primary border-opacity-10">
                        @Model.CacheType Engine
                    </span>
                </div>
                <h1 class="display-5 fw-black mb-3">Cache Management</h1>
                <p class="text-muted mb-4 pe-lg-5">Monitor cache performance, manage keys, and optimize data access patterns.</p>
                
                <button onclick="refreshStatistics()" class="btn-modern-primary d-inline-flex">
                    <i data-lucide="refresh-cw" class="w-4 h-4 me-2"></i>
                    Refresh Stats
                </button>
            </div>
            <div class="col-12 col-lg-4 bg-light bg-opacity-30 border-start border-light p-4 p-md-5 d-flex flex-column justify-content-center">
                <div class="row g-4">
                    <div class="col-6 col-lg-12">
                        <div class="xx-small fw-bold text-muted text-uppercase tracking-wider mb-1">Memory Usage</div>
                        <div class="display-6 fw-black" id="memory-usage">@(Model.Statistics.ContainsKey("used_memory_human") ? Model.Statistics["used_memory_human"] : "N/A")</div>
                    </div>
                    <div class="col-6 col-lg-12">
                        <div class="xx-small fw-bold text-muted text-uppercase tracking-wider mb-1">Total Keys</div>
                        <div class="display-6 fw-black" id="total-keys">@(Model.Statistics.ContainsKey("db0") ? Model.Statistics["db0"] : "N/A")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cache Operations -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card-modern h-100 d-flex flex-column">
                <div class="w-10 h-10 rounded-3 bg-success bg-opacity-10 text-success d-flex align-items-center justify-content-center mb-3">
                    <i data-lucide="flame" class="w-5 h-5"></i>
                </div>
                <h4 class="small fw-bold mb-2">Warm Up Cache</h4>
                <p class="xx-small text-muted mb-4 flex-grow-1">Pre-load frequently accessed data to optimize performance.</p>
                <form asp-action="WarmupCache" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-light w-100 rounded-pill xx-small fw-bold border-0 shadow-sm py-2" onclick="return confirm('Warm up cache now?')">
                        Execute
                    </button>
                </form>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card-modern h-100 d-flex flex-column">
                <div class="w-10 h-10 rounded-3 bg-danger bg-opacity-10 text-danger d-flex align-items-center justify-content-center mb-3">
                    <i data-lucide="trash-2" class="w-5 h-5"></i>
                </div>
                <h4 class="small fw-bold mb-2">Clear All Cache</h4>
                <p class="xx-small text-muted mb-4 flex-grow-1">Remove all cached entries. Use with caution in production.</p>
                <form asp-action="ClearCache" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-light w-100 rounded-pill xx-small fw-bold border-0 shadow-sm py-2" onclick="return confirm('Confirm clear all?')">
                        Execute
                    </button>
                </form>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card-modern h-100 d-flex flex-column">
                <div class="w-10 h-10 rounded-3 bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center mb-3">
                    <i data-lucide="key" class="w-5 h-5"></i>
                </div>
                <h4 class="small fw-bold mb-2">Browse Keys</h4>
                <p class="xx-small text-muted mb-4 flex-grow-1">Inspect individual entries and manage specific cache keys.</p>
                <a href="@Url.Action("ViewKeys")" class="btn btn-sm btn-light w-100 rounded-pill xx-small fw-bold border-0 shadow-sm py-2 text-decoration-none text-center">
                    Browse
                </a>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card-modern h-100 d-flex flex-column">
                <div class="w-10 h-10 rounded-3 bg-warning bg-opacity-10 text-warning d-flex align-items-center justify-content-center mb-3">
                    <i data-lucide="search" class="w-5 h-5"></i>
                </div>
                <h4 class="small fw-bold mb-2">Pattern Clear</h4>
                <p class="xx-small text-muted mb-4 flex-grow-1">Clear specific groups of entries using wildcard matching.</p>
                <button onclick="showPatternClearModal()" class="btn btn-sm btn-light w-100 rounded-pill xx-small fw-bold border-0 shadow-sm py-2">
                    Configure
                </button>
            </div>
        </div>
    </div>

    <!-- Performance Metrics -->
    <div class="card-modern p-4 p-md-5">
        <h3 class="h5 fw-black mb-4 d-flex align-items-center gap-2">
            <i data-lucide="bar-chart-3" class="text-primary w-5 h-5"></i>
            Performance Metrics
        </h3>

        <div id="cache-statistics">
            @if (Model.Statistics.Any())
            {
                <div class="row g-4">
                    @foreach (var stat in Model.Statistics.Take(12))
                    {
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="d-flex justify-content-between align-items-end mb-1">
                                <span class="xx-small fw-bold text-muted text-uppercase tracking-wider">@stat.Key.Replace("_", " ")</span>
                                <span class="small fw-bold tabular-nums">@stat.Value</span>
                            </div>
                            <div class="progress" style="height: 2px; background: rgba(0,0,0,0.05)">
                                <div class="progress-bar bg-primary" style="width: 35%"></div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="py-5 text-center bg-light bg-opacity-30 rounded-4 border-2 border-dashed border-light">
                    <i data-lucide="database" class="w-10 h-10 text-muted opacity-20 mb-3"></i>
                    <h4 class="h6 fw-bold mb-1">No Statistics Available</h4>
                    <p class="xx-small text-muted text-uppercase tracking-wider">Metics will appear here after activity</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Pattern Clear Modal -->
<div class="modal fade" id="patternClearModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 shadow-lg">
            <div class="modal-body p-4 p-md-5">
                <div class="d-flex align-items-center gap-3 mb-4">
                    <div class="w-12 h-12 bg-warning bg-opacity-10 text-warning rounded-3 d-flex align-items-center justify-content-center">
                        <i data-lucide="search" class="w-6 h-6"></i>
                    </div>
                    <div>
                        <h3 class="h5 fw-black mb-1">Clear Cache Pattern</h3>
                        <p class="xx-small text-muted text-uppercase tracking-wider mb-0">Specify wildcard pattern to clear</p>
                    </div>
                </div>
                
                <form asp-action="ClearCachePattern" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-4">
                        <label class="xx-small fw-bold text-muted text-uppercase tracking-wider mb-2 d-inline-block">Pattern</label>
                        <input type="text" name="pattern" class="form-control border-0 bg-light rounded-3 px-3 py-2 small" placeholder="user:*, feed:*" required>
                        <p class="xx-small text-muted mt-2 mb-0">Use * as wildcard. Examples: user:*, feed:trending:*</p>
                    </div>
                    
                    <div class="row g-2">
                        <div class="col-6">
                            <button type="button" class="btn btn-light w-100 rounded-pill xx-small fw-bold py-2 shadow-sm border-0" data-bs-dismiss="modal">Cancel</button>
                        </div>
                        <div class="col-6">
                            <button type="submit" class="btn btn-warning w-100 rounded-pill xx-small fw-bold py-2 shadow-sm text-white" onclick="return confirm('Clear entries matching pattern?')">Clear Pattern</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function refreshStatistics() {
            $.get('@Url.Action("GetStatistics")', function(data) {
                if (data.error) {
                    toastr.error(data.error);
                    return;
                }
                
                // Update memory usage
                if (data.used_memory_human) {
                    $('#memory-usage').text(data.used_memory_human);
                }
                
                // Update total keys
                if (data.db0) {
                    $('#total-keys').text(data.db0);
                }
                
                // Update statistics
                updateStatisticsGrid(data);
                
                toastr.success('Statistics refreshed successfully');
            }).fail(function() {
                toastr.error('Failed to refresh statistics');
            });
        }
        
        function updateStatisticsGrid(data) {
            // Update statistics grid if needed
            console.log('Statistics updated:', data);
        }
        
        function showPatternClearModal() {
            document.getElementById('patternClearModal').classList.remove('hidden');
            document.getElementById('patternClearModal').classList.add('flex');
        }
        
        function hidePatternClearModal() {
            document.getElementById('patternClearModal').classList.add('hidden');
            document.getElementById('patternClearModal').classList.remove('flex');
        }
        
        // Auto-refresh every 30 seconds
        setInterval(refreshStatistics, 30000);
    </script>
}