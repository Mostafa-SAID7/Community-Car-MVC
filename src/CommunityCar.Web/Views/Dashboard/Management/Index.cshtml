@model IEnumerable<CommunityCar.Application.Features.Dashboard.ViewModels.UserManagementVM>
@{
    ViewData["Title"] = "Admin Control";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="space-y-8 animate-in fade-in duration-700">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h2 class="text-3xl font-black text-foreground tracking-tight">Admin Control</h2>
            <p class="text-sm text-muted-foreground font-medium opacity-70">Review and manage community activity logs</p>
        </div>
        <div class="flex items-center gap-3">
            <button class="inline-flex items-center gap-2.5 px-8 py-2.5 bg-primary text-primary-foreground hover:bg-primary/90 rounded-xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg active:scale-95">
                <i class="fas fa-file-export"></i> Export Logs
            </button>
        </div>
    </div>

    <!-- Management Table -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-xl shadow-md overflow-hidden transition-all">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-muted/20 border-b border-border/50">
                        <th class="px-6 py-4 text-[10px] font-black uppercase tracking-widest text-muted-foreground">User</th>
                        <th class="px-6 py-4 text-[10px] font-black uppercase tracking-widest text-muted-foreground">Action</th>
                        <th class="px-6 py-4 text-[10px] font-black uppercase tracking-widest text-muted-foreground">Reason</th>
                        <th class="px-6 py-4 text-[10px] font-black uppercase tracking-widest text-muted-foreground">Date</th>
                        <th class="px-6 py-4 text-[10px] font-black uppercase tracking-widest text-muted-foreground">Performed By</th>
                        <th class="px-6 py-4 text-[10px] font-black uppercase tracking-widest text-muted-foreground text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-border/30">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-muted/10 transition-colors group">
                            <td class="px-6 py-4">
                                <div class="flex flex-col">
                                    <span class="text-sm font-black text-foreground italic decoration-primary/30 decoration-2 underline-offset-4 group-hover:decoration-primary transition-all">@item.UserName</span>
                                    <span class="text-[10px] font-medium text-muted-foreground opacity-60">@item.Email</span>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="inline-flex px-2 py-1 rounded-md text-[9px] font-black uppercase tracking-tighter bg-primary/10 text-primary border border-primary/20">
                                    @item.Action
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                <span class="text-xs font-medium text-foreground/80 line-clamp-1">@item.Reason</span>
                            </td>
                            <td class="px-6 py-4 text-[10px] font-black text-muted-foreground tabular-nums opacity-80">
                                @item.ActionDate.ToString("MMM dd, yyyy HH:mm")
                            </td>
                            <td class="px-6 py-4 text-xs font-bold text-foreground/70">
                                @item.PerformedByName
                            </td>
                            <td class="px-6 py-4 text-right">
                                @if (item.IsReversible)
                                {
                                    <form asp-action="ReverseAction" asp-route-actionId="@item.Id" method="post" class="inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="p-2 text-destructive hover:bg-destructive/10 rounded-lg transition-all" title="Reverse Action">
                                            <i class="fas fa-undo-alt text-xs"></i>
                                        </button>
                                    </form>
                                }
                                <a href="@Url.Action("UserHistory", new { userId = item.UserId })" class="p-2 text-primary hover:bg-primary/10 rounded-lg transition-all" title="View User History">
                                    <i class="fas fa-history text-xs"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    <div class="flex items-center justify-between">
        <p class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-50">
            Showing records from page @ViewBag.CurrentPage
        </p>
        <div class="flex gap-2">
            <a href="?page=@(ViewBag.CurrentPage - 1)&pageSize=@ViewBag.PageSize" class="px-4 py-2 bg-muted/40 border border-border rounded-lg text-[10px] font-black uppercase tracking-widest hover:bg-muted/60 transition-all @(ViewBag.CurrentPage <= 1 ? "opacity-30 pointer-events-none" : "")">
                Previous
            </a>
            <a href="?page=@(ViewBag.CurrentPage + 1)&pageSize=@ViewBag.PageSize" class="px-4 py-2 bg-muted/40 border border-border rounded-lg text-[10px] font-black uppercase tracking-widest hover:bg-muted/60 transition-all">
                Next
            </a>
        </div>
    </div>
</div>
