@inject IViewLocalizer Localizer
@model CommunityCar.Application.Features.Dashboard.ViewModels.Cache.CacheManagementViewModel
@{
    ViewData["Title"] = Localizer["CacheManagementTitle"];
    ViewData["PageHeader"] = Localizer["CacheManagementHeader"];
    ViewData["PageDescription"] = Localizer["CacheManagementDescription"];
}

<div class="max-w-6xl mx-auto space-y-8 animate-in fade-in duration-700">
    <div id="loading-skeleton" class="hidden space-y-8">
        <skeleton type="Line" class="w-1/4" />
        <skeleton type="Card" class="h-64" />
        <skeleton type="Card" class="h-96" />
    </div>

    <div id="main-content" class="space-y-8">
        <!-- Breadcrumb Protocol -->
        <nav class="flex items-center gap-3 text-[10px] font-black uppercase tracking-widest text-muted-foreground/60 px-2">
            <a href="@Url.Action("Index", "Overview")" class="hover:text-primary transition-colors flex items-center gap-2">
                <i data-lucide="chevron-left" class="w-3.5 h-3.5"></i> @Localizer["Dashboard"]
            </a>
            <span class="opacity-20">/</span>
            <span class="text-foreground/40">@Localizer["CacheManagement"]</span>
        </nav>

        <!-- Cache Overview Card -->
        <div class="relative group">
            <div class="eng-card overflow-hidden">
                <!-- Header Section: High-Contrast Stats & Title -->
                <div class="flex flex-col lg:flex-row border-b border-border/30">
                    <div class="flex-1 p-8 md:p-12 space-y-6">
                        <div class="space-y-4">
                            <div class="flex flex-wrap gap-2">
                                <span class="px-3 py-1 rounded-2xl text-[9px] font-black uppercase tracking-widest @(Model.IsRedisConnected ? "bg-green-500/10 text-green-600 border border-green-500/20" : "bg-red-500/10 text-red-600 border border-red-500/20") flex items-center gap-1.5 shadow-sm">
                                    <div class="w-1.5 h-1.5 rounded-full bg-current @(Model.IsRedisConnected ? "" : "animate-ping")"></div>
                                    @(Model.IsRedisConnected ? Localizer["Connected"] : Localizer["Disconnected"])
                                </span>
                                <span class="px-3 py-1 rounded-2xl text-[9px] font-black uppercase tracking-widest bg-primary/10 text-primary border border-primary/10 shadow-sm">
                                    @string.Format(Localizer["CacheEngine"].Value, Model.CacheType)
                                </span>
                            </div>
                            <h1 class="text-4xl md:text-5xl font-black text-foreground tracking-tighter leading-[1.1]">@Localizer["CacheManagementHeader"]</h1>
                            <p class="text-sm font-medium text-muted-foreground/80 leading-relaxed">@Localizer["CacheManagementDesc"]</p>
                        </div>

                        <div class="flex items-center gap-6 pt-4">
                            <button onclick="refreshStatistics()" class="flex items-center gap-3 px-6 py-3 bg-primary/10 text-primary border border-primary/20 rounded-2xl hover:bg-primary/20 transition-all active:scale-95 group/btn">
                                <i data-lucide="refresh-cw" class="w-4 h-4 group-hover/btn:rotate-180 transition-transform duration-500"></i>
                                <span class="text-xs font-black uppercase tracking-widest">@Localizer["RefreshStats"]</span>
                            </button>
                        </div>
                    </div>

                    <!-- Right Stats Panel: Engineering Aesthetic -->
                    <div class="lg:w-80 bg-muted/20 border-l border-border/30 p-8 flex flex-col justify-center gap-8">
                        <div class="grid grid-cols-2 gap-8 lg:grid-cols-1">
                            <div class="space-y-1">
                                <span class="eng-stat-value text-[32px] leading-none tracking-tighter" id="memory-usage">
                                    @(Model.Statistics.ContainsKey("used_memory_human") ? Model.Statistics["used_memory_human"] : "N/A")
                                </span>
                                <span class="eng-stat-label tracking-[0.2em] opacity-50">@Localizer["MemoryUsage"]</span>
                            </div>
                            <div class="space-y-1">
                                <span class="eng-stat-value text-[32px] leading-none tracking-tighter" id="total-keys">
                                    @(Model.Statistics.ContainsKey("db0") ? Model.Statistics["db0"] : "N/A")
                                </span>
                                <span class="eng-stat-label tracking-[0.2em] opacity-50">@Localizer["TotalKeys"]</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cache Operations Section -->
                <div class="p-8 md:p-12">
                    <h3 class="text-xl font-black text-foreground tracking-tighter flex items-center gap-3 mb-8">
                        <span class="flex items-center justify-center w-8 h-8 rounded-2xl bg-primary text-primary-foreground text-xs leading-none">
                            <i data-lucide="settings" class="w-4 h-4"></i>
                        </span>
                        @Localizer["CacheOperations"]
                    </h3>

                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                        <!-- Warm Up Cache -->
                        <div class="relative group/operation">
                            <div class="eng-card p-6 hover:-translate-y-1 transition-all">
                                <div class="space-y-4">
                                    <div class="w-12 h-12 bg-green-500/10 rounded-2xl flex items-center justify-center text-green-600">
                                        <i data-lucide="flame" class="w-6 h-6"></i>
                                    </div>
                                    <div>
                                        <h4 class="text-sm font-black text-foreground mb-2">@Localizer["WarmUpCache"]</h4>
                                        <p class="text-xs text-muted-foreground/80 leading-relaxed">@Localizer["WarmUpCacheDesc"]</p>
                                    </div>
                                    <form asp-action="WarmupCache" method="post" class="w-full">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="w-full px-4 py-3 bg-green-500/10 text-green-600 border border-green-500/20 rounded-2xl hover:bg-green-500/20 transition-all active:scale-95 text-xs font-black uppercase tracking-widest" onclick="return confirm('@Localizer["ConfirmWarmUp"]')">
                                            @Localizer["Execute"]
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Clear All Cache -->
                        <div class="relative group/operation">
                            <div class="eng-card p-6 hover:-translate-y-1 transition-all">
                                <div class="space-y-4">
                                    <div class="w-12 h-12 bg-red-500/10 rounded-2xl flex items-center justify-center text-red-600">
                                        <i data-lucide="trash-2" class="w-6 h-6"></i>
                                    </div>
                                    <div>
                                        <h4 class="text-sm font-black text-foreground mb-2">@Localizer["ClearAllCache"]</h4>
                                        <p class="text-xs text-muted-foreground/80 leading-relaxed">@Localizer["ClearAllCacheDesc"]</p>
                                    </div>
                                    <form asp-action="ClearCache" method="post" class="w-full">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="w-full px-4 py-3 bg-red-500/10 text-red-600 border border-red-500/20 rounded-2xl hover:bg-red-500/20 transition-all active:scale-95 text-xs font-black uppercase tracking-widest" onclick="return confirm('@Localizer["ConfirmClearAll"]')">
                                            @Localizer["Execute"]
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- View Keys -->
                        <div class="relative group/operation">
                            <div class="eng-card p-6 hover:-translate-y-1 transition-all">
                                <div class="space-y-4">
                                    <div class="w-12 h-12 bg-blue-500/10 rounded-2xl flex items-center justify-center text-blue-600">
                                        <i data-lucide="key" class="w-6 h-6"></i>
                                    </div>
                                    <div>
                                        <h4 class="text-sm font-black text-foreground mb-2">@Localizer["BrowseKeys"]</h4>
                                        <p class="text-xs text-muted-foreground/80 leading-relaxed">@Localizer["BrowseKeysDesc"]</p>
                                    </div>
                                    <a href="@Url.Action("ViewKeys")" class="block w-full px-4 py-3 bg-blue-500/10 text-blue-600 border border-blue-500/20 rounded-2xl hover:bg-blue-500/20 transition-all active:scale-95 text-xs font-black uppercase tracking-widest text-center">
                                        @Localizer["Browse"]
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Pattern Clear -->
                        <div class="relative group/operation">
                            <div class="eng-card p-6 hover:-translate-y-1 transition-all">
                                <div class="space-y-4">
                                    <div class="w-12 h-12 bg-amber-500/10 rounded-2xl flex items-center justify-center text-amber-600">
                                        <i data-lucide="search" class="w-6 h-6"></i>
                                    </div>
                                    <div>
                                        <h4 class="text-sm font-black text-foreground mb-2">@Localizer["PatternClear"]</h4>
                                        <p class="text-xs text-muted-foreground/80 leading-relaxed">@Localizer["PatternClearDesc"]</p>
                                    </div>
                                    <button onclick="showPatternClearModal()" class="w-full px-4 py-3 bg-amber-500/10 text-amber-600 border border-amber-500/20 rounded-2xl hover:bg-amber-500/20 transition-all active:scale-95 text-xs font-black uppercase tracking-widest">
                                        @Localizer["Configure"]
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cache Statistics -->
        <div class="eng-card p-8 md:p-12">
            <h3 class="text-xl font-black text-foreground tracking-tighter flex items-center gap-3 mb-8">
                <span class="flex items-center justify-center w-8 h-8 rounded-2xl bg-primary text-primary-foreground text-xs leading-none">
                    <i data-lucide="bar-chart-3" class="w-4 h-4"></i>
                </span>
                @Localizer["PerformanceMetrics"]
            </h3>

            <div id="cache-statistics">
                @if (Model.Statistics.Any())
                {
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        @foreach (var stat in Model.Statistics.Take(12))
                        {
                            <div class="space-y-2">
                                <div class="flex justify-between items-end">
                                    <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@stat.Key.Replace("_", " ")</span>
                                    <span class="text-sm font-black tabular-nums text-foreground">@stat.Value</span>
                                </div>
                                <div class="h-1 bg-muted/40 rounded-full overflow-hidden">
                                    <div class="h-full bg-primary/60 rounded-full w-1/3"></div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="py-20 flex flex-col items-center justify-center text-center bg-muted/10 border-2 border-dashed border-border/40 rounded-[2.5rem]">
                        <div class="w-16 h-16 bg-muted/40 rounded-2xl flex items-center justify-center mb-6">
                            <i data-lucide="database" class="w-8 h-8 text-muted-foreground opacity-20"></i>
                        </div>
                        <h4 class="text-xl font-black text-foreground tracking-tight mb-3">@Localizer["NoStatistics"]</h4>
                        <p class="text-xs font-medium text-muted-foreground uppercase tracking-widest opacity-60">@Localizer["NoStatisticsDesc"]</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Pattern Clear Modal -->
<div id="patternClearModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 hidden items-center justify-center p-4">
    <div class="eng-card max-w-md w-full p-8 animate-in fade-in slide-in-from-bottom-4">
        <div class="space-y-6">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-amber-500/10 rounded-2xl flex items-center justify-center text-amber-600">
                    <i data-lucide="search" class="w-5 h-5"></i>
                </div>
                <h3 class="text-lg font-black text-foreground">@Localizer["ClearCachePattern"]</h3>
            </div>
            
            <form asp-action="ClearCachePattern" method="post" class="space-y-4">
                @Html.AntiForgeryToken()
                <div class="space-y-2">
                    <label class="text-xs font-black uppercase tracking-widest text-muted-foreground">@Localizer["Pattern"]</label>
                    <input type="text" name="pattern" class="w-full px-4 py-3 bg-muted/20 border border-border rounded-2xl focus:border-primary focus:ring-0 text-foreground" placeholder="@Localizer["PatternPlaceholder"]" required>
                    <p class="text-xs text-muted-foreground/80">@Localizer["PatternHelp"]</p>
                </div>
                
                <div class="flex gap-3 pt-4">
                    <button type="button" onclick="hidePatternClearModal()" class="flex-1 px-4 py-3 bg-muted/40 text-muted-foreground border border-border rounded-2xl hover:bg-muted/60 transition-all text-xs font-black uppercase tracking-widest">
                        @Localizer["Cancel"]
                    </button>
                    <button type="submit" class="flex-1 px-4 py-3 bg-amber-500/10 text-amber-600 border border-amber-500/20 rounded-2xl hover:bg-amber-500/20 transition-all text-xs font-black uppercase tracking-widest" onclick="return confirm('@Localizer["ConfirmPatternClear"]')">
                        @Localizer["ClearPattern"]
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function refreshStatistics() {
            $.get('@Url.Action("GetStatistics")', function(data) {
                if (data.error) {
                    toastr.error(data.error);
                    return;
                }
                
                // Update memory usage
                if (data.used_memory_human) {
                    $('#memory-usage').text(data.used_memory_human);
                }
                
                // Update total keys
                if (data.db0) {
                    $('#total-keys').text(data.db0);
                }
                
                // Update statistics
                updateStatisticsGrid(data);
                
                toastr.success('@Localizer["StatsRefreshedJS"]');
            }).fail(function() {
                toastr.error('@Localizer["StatsRefreshFailedJS"]');
            });
        }
        
        function updateStatisticsGrid(data) {
            // Update statistics grid if needed
            console.log('Statistics updated:', data);
        }
        
        function showPatternClearModal() {
            document.getElementById('patternClearModal').classList.remove('hidden');
            document.getElementById('patternClearModal').classList.add('flex');
        }
        
        function hidePatternClearModal() {
            document.getElementById('patternClearModal').classList.add('hidden');
            document.getElementById('patternClearModal').classList.remove('flex');
        }
        
        // Auto-refresh every 30 seconds
        setInterval(refreshStatistics, 30000);
    </script>
}