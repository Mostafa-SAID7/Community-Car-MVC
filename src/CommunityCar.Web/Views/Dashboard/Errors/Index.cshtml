@using CommunityCar.Domain.Entities.Shared
@model IEnumerable<ErrorLog>
@{
    ViewData["Title"] = "Error Management Dashboard";
    var stats = ViewBag.Stats as ErrorStats;
}

<div class="space-y-8 animate-in fade-in duration-700">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tight">Error Management</h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">Monitor and manage application errors</p>
        </div>
        <div class="flex items-center gap-4">
            <form method="post" asp-action="Cleanup" class="inline">
                <button type="submit" class="inline-flex items-center gap-2.5 px-6 py-2.5 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95 group">
                    <i data-lucide="trash-2" class="w-4 h-4 group-hover:scale-125 transition-transform"></i>
                    Cleanup Old Errors
                </button>
            </form>
            <form method="post" asp-action="UpdateStats" class="inline">
                <button type="submit" class="inline-flex items-center gap-2.5 px-8 py-3 bg-primary text-primary-foreground hover:bg-primary/90 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-primary/20 active:scale-95 group">
                    <i data-lucide="refresh-cw" class="w-4 h-4 group-hover:scale-125 transition-transform"></i>
                    Update Stats
                </button>
            </form>
        </div>
    </div>

    <!-- Error Statistics -->
    @if (stats != null)
    {
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-red-500/20">
                <div class="w-10 h-10 rounded-xl bg-red-500/10 flex items-center justify-center text-red-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                    <i data-lucide="alert-circle" class="w-5 h-5"></i>
                </div>
                <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@stats.TotalErrors</div>
                <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">Total Errors</div>
            </div>
            
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-green-500/10">
                <div class="w-10 h-10 rounded-xl bg-green-500/10 flex items-center justify-center text-green-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                    <i data-lucide="check-circle" class="w-5 h-5"></i>
                </div>
                <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@stats.ResolvedErrors</div>
                <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">Resolved</div>
            </div>
            
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-amber-500/10">
                <div class="w-10 h-10 rounded-xl bg-amber-500/10 flex items-center justify-center text-amber-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                    <i data-lucide="clock" class="w-5 h-5"></i>
                </div>
                <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@stats.UnresolvedErrors</div>
                <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">Unresolved</div>
            </div>
            
            <div class="bg-card/50 backdrop-blur-md border border-border rounded-2xl p-6 shadow-lg group transition-all hover:border-red-500/10">
                <div class="w-10 h-10 rounded-xl bg-red-500/10 flex items-center justify-center text-red-600 mb-4 group-hover:scale-110 group-hover:rotate-6 transition-all">
                    <i data-lucide="alert-triangle" class="w-5 h-5"></i>
                </div>
                <div class="text-2xl font-black text-foreground mb-1 tabular-nums">@stats.CriticalErrors</div>
                <div class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">Critical</div>
            </div>
        </div>
    }

    <!-- Filters -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl space-y-6">
        <form method="get" id="errorFiltersForm">
            <div class="flex flex-col lg:flex-row gap-4 items-center">
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 flex-1">
                    <div class="space-y-2">
                        <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">Category</label>
                        <div class="relative">
                            <select name="category" class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold outline-none appearance-none">
                                <option value="">All Categories</option>
                                <option value="General" selected="@(ViewBag.Category == "General")">General</option>
                                <option value="Database" selected="@(ViewBag.Category == "Database")">Database</option>
                                <option value="Network" selected="@(ViewBag.Category == "Network")">Network</option>
                                <option value="Validation" selected="@(ViewBag.Category == "Validation")">Validation</option>
                                <option value="Business" selected="@(ViewBag.Category == "Business")">Business</option>
                                <option value="Security" selected="@(ViewBag.Category == "Security")">Security</option>
                            </select>
                            <i data-lucide="chevron-down" class="absolute right-4 top-1/2 -translate-y-1/2 w-3 h-3 text-muted-foreground pointer-events-none"></i>
                        </div>
                    </div>
                    
                    <div class="space-y-2">
                        <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">Severity</label>
                        <div class="relative">
                            <select name="severity" class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold outline-none appearance-none">
                                <option value="">All Severities</option>
                                <option value="Critical" selected="@(ViewBag.Severity == "Critical")">Critical</option>
                                <option value="Error" selected="@(ViewBag.Severity == "Error")">Error</option>
                                <option value="Warning" selected="@(ViewBag.Severity == "Warning")">Warning</option>
                                <option value="Info" selected="@(ViewBag.Severity == "Info")">Info</option>
                            </select>
                            <i data-lucide="chevron-down" class="absolute right-4 top-1/2 -translate-y-1/2 w-3 h-3 text-muted-foreground pointer-events-none"></i>
                        </div>
                    </div>
                    
                    <div class="space-y-2">
                        <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">Status</label>
                        <div class="relative">
                            <select name="isResolved" class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold outline-none appearance-none">
                                <option value="">All Status</option>
                                <option value="false" selected="@(ViewBag.IsResolved == false)">Unresolved</option>
                                <option value="true" selected="@(ViewBag.IsResolved == true)">Resolved</option>
                            </select>
                            <i data-lucide="chevron-down" class="absolute right-4 top-1/2 -translate-y-1/2 w-3 h-3 text-muted-foreground pointer-events-none"></i>
                        </div>
                    </div>
                </div>
                
                <div class="flex gap-2">
                    <button type="submit" class="h-[42px] px-6 py-2 rounded-xl bg-primary text-primary-foreground hover:bg-primary/90 text-[10px] font-black uppercase tracking-widest shadow-lg transition-all flex items-center justify-center gap-2 active:scale-95">
                        <i data-lucide="filter" class="w-4 h-4"></i>
                        Filter
                    </button>
                    <a href="@Url.Action("Index")" class="h-[42px] px-6 py-2 rounded-xl bg-background border border-border hover:border-primary hover:text-primary text-[10px] font-black uppercase tracking-widest shadow-lg shadow-black/5 transition-all flex items-center justify-center gap-2 active:scale-95">
                        <i data-lucide="x" class="w-4 h-4"></i>
                        Clear
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- Error List -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
        <div class="p-6 border-b border-border">
            <h2 class="text-xl font-black text-foreground">Recent Errors</h2>
        </div>
        
        @if (Model.Any())
        {
            <div class="divide-y divide-border">
                @foreach (var error in Model)
                {
                    <div class="p-6 hover:bg-muted/20 transition-colors">
                        <div class="flex items-start justify-between gap-4">
                            <div class="flex-1 min-w-0">
                                <div class="flex items-center gap-3 mb-2">
                                    <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-lg text-xs font-bold @GetSeverityClass(error.Severity)">
                                        <i data-lucide="@GetSeverityIcon(error.Severity)" class="w-3 h-3"></i>
                                        @error.Severity
                                    </span>
                                    <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-lg text-xs font-bold bg-muted text-muted-foreground">
                                        @error.Category
                                    </span>
                                    @if (error.IsResolved)
                                    {
                                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-lg text-xs font-bold bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                                            <i data-lucide="check" class="w-3 h-3"></i>
                                            Resolved
                                        </span>
                                    }
                                </div>
                                
                                <h3 class="text-lg font-bold text-foreground mb-2 line-clamp-2">
                                    @error.Message
                                </h3>
                                
                                <div class="flex items-center gap-4 text-sm text-muted-foreground mb-3">
                                    <span class="flex items-center gap-1">
                                        <i data-lucide="code" class="w-4 h-4"></i>
                                        @error.Source
                                    </span>
                                    <span class="flex items-center gap-1">
                                        <i data-lucide="repeat" class="w-4 h-4"></i>
                                        @error.OccurrenceCount occurrences
                                    </span>
                                    <span class="flex items-center gap-1">
                                        <i data-lucide="clock" class="w-4 h-4"></i>
                                        @error.LastOccurrence.ToString("MMM dd, yyyy HH:mm")
                                    </span>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(error.RequestPath))
                                {
                                    <div class="text-sm text-muted-foreground mb-2">
                                        <span class="font-medium">Path:</span> @error.RequestPath
                                    </div>
                                }
                            </div>
                            
                            <div class="flex items-center gap-2">
                                <a href="@Url.Action("Details", new { errorId = error.ErrorId })" 
                                   class="inline-flex items-center gap-2.5 px-4 py-2.5 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95 group">
                                    <i data-lucide="eye" class="w-4 h-4 group-hover:scale-125 transition-transform"></i>
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="p-12 text-center">
                <div class="bg-muted/20 border border-border/50 rounded-2xl p-8 max-w-md mx-auto">
                    <i data-lucide="check-circle" class="w-16 h-16 text-green-500 mx-auto mb-4"></i>
                    <h3 class="text-xl font-black text-foreground mb-2">No Errors Found</h3>
                    <p class="text-muted-foreground">Great! No errors match your current filters.</p>
                </div>
            </div>
        }
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <a href="@Url.Action("Stats")" class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all group">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-blue-500/10 flex items-center justify-center text-blue-600 group-hover:scale-110 transition-transform">
                    <i data-lucide="bar-chart-3" class="w-6 h-6"></i>
                </div>
                <div>
                    <h3 class="text-lg font-black text-foreground">Error Statistics</h3>
                    <p class="text-sm text-muted-foreground">View detailed error analytics</p>
                </div>
            </div>
        </a>
        
        <a href="@Url.Action("Boundaries")" class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all group">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-purple-500/10 flex items-center justify-center text-purple-600 group-hover:scale-110 transition-transform">
                    <i data-lucide="shield-alert" class="w-6 h-6"></i>
                </div>
                <div>
                    <h3 class="text-lg font-black text-foreground">Error Boundaries</h3>
                    <p class="text-sm text-muted-foreground">Manage component errors</p>
                </div>
            </div>
        </a>
        
        <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-green-500/10 flex items-center justify-center text-green-600">
                    <i data-lucide="activity" class="w-6 h-6"></i>
                </div>
                <div>
                    <h3 class="text-lg font-black text-foreground">System Health</h3>
                    <p class="text-sm text-muted-foreground">
                        @if (stats != null && stats.TotalErrors > 0)
                        {
                            var healthPercentage = Math.Round((double)stats.ResolvedErrors / stats.TotalErrors * 100, 1);
                            <span class="text-@(healthPercentage > 80 ? "green" : healthPercentage > 60 ? "yellow" : "red")-600 font-bold">@healthPercentage% resolved</span>
                        }
                        else
                        {
                            <span class="text-green-600 font-bold">100% healthy</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetSeverityClass(string severity)
    {
        return severity switch
        {
            "Critical" => "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200",
            "Error" => "bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-200",
            "Warning" => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200",
            "Info" => "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200",
            _ => "bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-200"
        };
    }
    
    private string GetSeverityIcon(string severity)
    {
        return severity switch
        {
            "Critical" => "alert-triangle",
            "Error" => "x-circle",
            "Warning" => "alert-circle",
            "Info" => "info",
            _ => "help-circle"
        };
    }
}