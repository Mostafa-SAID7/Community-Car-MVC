@inject IViewLocalizer Localizer
@using CommunityCar.Application.Features.Dashboard.ErrorReporting.ViewModels
@model IEnumerable<ErrorBoundaryVM>
@{
    ViewData["Title"] = Localizer["ErrorBoundaries"];
    var pagination = ViewBag.Pagination as CommunityCar.Application.Common.Models.PaginationInfo;
}

<div class="space-y-8 animate-in fade-in duration-700">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tight">@Localizer["ErrorBoundaries"]</h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">@Localizer["ErrorBoundariesDesc"]</p>
        </div>
        <div class="flex items-center gap-4">
            <a href="@Url.Action("Index")" class="inline-flex items-center gap-2.5 px-6 py-2.5 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95 group">
                <i data-lucide="arrow-left" class="w-4 h-4 group-hover:scale-125 transition-transform"></i>
                @Localizer["BackToErrors"]
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl p-6 shadow-xl">
        <form method="get" class="flex flex-col lg:flex-row gap-4 items-center">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 flex-1">
                <div class="space-y-2">
                    <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["BoundaryName"]</label>
                    <input type="text" name="boundaryName" value="@ViewBag.BoundaryName" placeholder="@Localizer["FilterByBoundaryName"]"
                           class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold outline-none">
                </div>
                <div class="space-y-2">
                    <label class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["Status"]</label>
                    <select name="isRecovered" class="w-full bg-background border border-border px-4 py-2.5 rounded-xl text-xs font-bold outline-none">
                        <option value="">@Localizer["AllStatus"]</option>
                        <option value="false" selected="@(ViewBag.IsRecovered == false)">@Localizer["NotRecovered"]</option>
                        <option value="true" selected="@(ViewBag.IsRecovered == true)">@Localizer["Recovered"]</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="h-[42px] px-6 py-2 rounded-xl bg-primary text-primary-foreground hover:bg-primary/90 text-[10px] font-black uppercase tracking-widest shadow-lg transition-all flex items-center justify-center gap-2 active:scale-95">
                <i data-lucide="filter" class="w-4 h-4"></i>
                @Localizer["Filter"]
            </button>
        </form>
    </div>

    <!-- Boundaries List -->
    <div class="bg-card/40 backdrop-blur-md border border-border rounded-2xl shadow-xl overflow-hidden">
        <div class="p-6 border-b border-border">
            <div class="flex items-center justify-between">
                <h2 class="text-xl font-black text-foreground">@Localizer["ErrorBoundariesList"]</h2>
                @if (pagination != null)
                {
                    <div class="text-sm text-muted-foreground">
                        Showing @pagination.StartItem - @pagination.EndItem of @pagination.TotalItems boundaries
                    </div>
                }
            </div>
        </div>
        
        @if (Model.Any())
        {
            <div class="divide-y divide-border">
                @foreach (var boundary in Model)
                {
                    <div class="p-6 hover:bg-muted/20 transition-colors">
                        <div class="flex items-start justify-between gap-4">
                            <div class="flex-1 min-w-0">
                                <div class="flex items-center gap-3 mb-2">
                                    <h3 class="text-lg font-bold text-foreground">@boundary.BoundaryName</h3>
                                    @if (boundary.IsRecovered)
                                    {
                                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-lg text-xs font-bold bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                                            <i data-lucide="check" class="w-3 h-3"></i>
                                            @Localizer["Recovered"]
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-lg text-xs font-bold bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200">
                                            <i data-lucide="alert-triangle" class="w-3 h-3"></i>
                                            @Localizer["NotRecovered"]
                                        </span>
                                    }
                                </div>
                                
                                <div class="text-sm text-muted-foreground mb-3">
                                    @boundary.ErrorMessage
                                </div>
                                
                                <div class="flex items-center gap-4 text-sm text-muted-foreground mb-3">
                                    <span class="flex items-center gap-1">
                                        <i data-lucide="clock" class="w-4 h-4"></i>
                                        @(boundary.OccurredAt?.ToString("MMM dd, yyyy HH:mm") ?? "N/A")
                                    </span>
                                    @if (boundary.RecoveredAt.HasValue)
                                    {
                                        <span class="flex items-center gap-1">
                                            <i data-lucide="check-circle" class="w-4 h-4"></i>
                                            Recovered: @boundary.RecoveredAt.Value.ToString("MMM dd, yyyy HH:mm")
                                        </span>
                                    }
                                    <span class="flex items-center gap-1">
                                        <i data-lucide="repeat" class="w-4 h-4"></i>
                                        @boundary.FailureCount failures
                                    </span>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(boundary.RecoveryAction))
                                {
                                    <div class="text-sm text-muted-foreground mb-2">
                                        <span class="font-medium">Recovery Action:</span> @boundary.RecoveryAction
                                    </div>
                                }
                            </div>
                            
                            <div class="flex items-center gap-2">
                                @if (!boundary.IsRecovered)
                                {
                                    <form method="post" asp-action="RecoverBoundary" asp-route-boundaryId="@boundary.Id" class="inline">
                                        <input type="hidden" name="recoveryAction" value="Manual Recovery" />
                                        <button type="submit" class="inline-flex items-center gap-2.5 px-4 py-2.5 bg-green-600 text-white hover:bg-green-700 rounded-xl text-xs font-black uppercase tracking-widest transition-all shadow-lg active:scale-95 group">
                                            <i data-lucide="refresh-cw" class="w-4 h-4 group-hover:scale-125 transition-transform"></i>
                                            @Localizer["Recover"]
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <!-- Pagination -->
            @if (pagination != null && pagination.TotalPages > 1)
            {
                <div class="p-6 border-t border-border">
                    <div class="flex items-center justify-between">
                        <div class="text-sm text-muted-foreground">
                            Page @pagination.CurrentPage of @pagination.TotalPages
                        </div>
                        <div class="flex items-center gap-2">
                            @if (pagination.HasPreviousPage)
                            {
                                <a href="@Url.Action("Boundaries", new { page = pagination.CurrentPage - 1, boundaryName = ViewBag.BoundaryName, isRecovered = ViewBag.IsRecovered })" 
                                   class="inline-flex items-center gap-2 px-4 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95">
                                    <i data-lucide="chevron-left" class="w-4 h-4"></i>
                                    Previous
                                </a>
                            }
                            
                            @for (int i = Math.Max(1, pagination.CurrentPage - 2); i <= Math.Min(pagination.TotalPages, pagination.CurrentPage + 2); i++)
                            {
                                if (i == pagination.CurrentPage)
                                {
                                    <span class="inline-flex items-center justify-center w-10 h-10 bg-primary text-primary-foreground rounded-xl text-xs font-black">@i</span>
                                }
                                else
                                {
                                    <a href="@Url.Action("Boundaries", new { page = i, boundaryName = ViewBag.BoundaryName, isRecovered = ViewBag.IsRecovered })" 
                                       class="inline-flex items-center justify-center w-10 h-10 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs font-black transition-all shadow-lg shadow-black/5 active:scale-95">@i</a>
                                }
                            }
                            
                            @if (pagination.HasNextPage)
                            {
                                <a href="@Url.Action("Boundaries", new { page = pagination.CurrentPage + 1, boundaryName = ViewBag.BoundaryName, isRecovered = ViewBag.IsRecovered })" 
                                   class="inline-flex items-center gap-2 px-4 py-2 bg-background border border-border hover:border-primary hover:text-primary rounded-xl text-xs font-black uppercase tracking-widest transition-all shadow-lg shadow-black/5 active:scale-95">
                                    Next
                                    <i data-lucide="chevron-right" class="w-4 h-4"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="p-12 text-center">
                <div class="bg-muted/20 border border-border/50 rounded-2xl p-8 max-w-md mx-auto">
                    <i data-lucide="shield-check" class="w-16 h-16 text-green-500 mx-auto mb-4"></i>
                    <h3 class="text-xl font-black text-foreground mb-2">@Localizer["NoBoundariesFound"]</h3>
                    <p class="text-muted-foreground">@Localizer["NoBoundariesFoundDesc"]</p>
                </div>
            </div>
        }
    </div>
</div>