@inject IViewLocalizer Localizer
@model CommunityCar.Application.Features.Dashboard.ViewModels.BackgroundJobs.RecurringJobsViewModel
@{
    ViewData["Title"] = Localizer["RecurringJobsTitle"];
    Layout = "_DashboardLayout";
}

<div class="d-flex flex-column gap-5 animate-in fade-in duration-700">
    <!-- Breadcrumb Protocol -->
    <nav class="d-flex align-items-center gap-2 small text-uppercase fw-bold tracking-wider text-muted opacity-75">
        <a href="@Url.Action("Index", "Dashboard")" class="text-decoration-none text-reset hover-primary transition-all">
            <i data-lucide="layout-dashboard" class="w-14px h-14px me-1"></i> @Localizer["Dashboard"]
        </a>
        <i data-lucide="chevron-right" class="w-12px h-12px opacity-50"></i>
        <a href="@Url.Action("Index")" class="text-decoration-none text-reset hover-primary transition-all">@Localizer["BackgroundJobs"]</a>
        <i data-lucide="chevron-right" class="w-12px h-12px opacity-50"></i>
        <span class="text-primary">@Localizer["RecurringSchedulerEngine"]</span>
    </nav>

    <!-- Header Section -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-4">
        <div>
            <div class="d-flex align-items-center gap-2 mb-2">
                <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-20 px-3 py-2 rounded-pill small fw-bold text-uppercase tracking-widest">
                    <i data-lucide="repeat" class="w-12px h-12px me-1"></i> @Localizer["SchedulerActive"]
                </span>
            </div>
            <h1 class="display-5 fw-black text-gradient-red mb-2">@Localizer["RecurringJobRegistry"]</h1>
            <p class="text-muted fw-medium border-start border-primary border-4 ps-3">@Localizer["RecurringJobsDescription"]</p>
        </div>
    </div>

    <!-- Recurring Jobs Registry Header Card -->
    <div class="card card-premium overflow-hidden">
        <div class="row g-0">
            <div class="col-lg-8 border-end border-border border-opacity-50">
                <div class="p-4 p-md-5">
                    <div class="d-flex align-items-center gap-4">
                        <div class="w-64px h-64px rounded-4 bg-primary bg-opacity-10 d-flex align-items-center justify-content-center text-primary shadow-inner">
                            <i data-lucide="calendar-clock" class="w-32px h-32px"></i>
                        </div>
                        <div>
                            <h2 class="h4 fw-black text-foreground mb-1">@Localizer["AutomatedScheduler"]</h2>
                            <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-20 rounded-pill xx-small fw-black text-uppercase tracking-widest">
                                @Localizer["CronBasedEngine"]
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 bg-primary bg-opacity-5 d-flex align-items-center p-4 p-md-5">
                <div class="row w-100 g-4">
                    <div class="col-6 lg-col-12">
                        <div class="display-6 fw-black text-primary mb-0">@Model.Jobs.Count.ToString("D2")</div>
                        <div class="xx-small fw-black text-uppercase tracking-widest text-muted opacity-60">@Localizer["ScheduledJobs"]</div>
                    </div>
                    <div class="col-6 lg-col-12">
                        <div class="display-6 fw-black text-success mb-0">@Model.Jobs.Count(j => string.IsNullOrEmpty(j.Error)).ToString("D2")</div>
                        <div class="xx-small fw-black text-uppercase tracking-widest text-muted opacity-60">@Localizer["HealthyJobs"]</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Jobs Registry Stream -->
    <div class="d-flex flex-column gap-4">
        <div class="d-flex align-items-center justify-content-between px-3">
            <h3 class="h6 fw-black text-uppercase tracking-widest text-muted mb-0">
                <span class="badge bg-primary text-white rounded-pill me-2">@Model.Jobs.Count</span>
                @Localizer["ScheduledJobEntries"]
            </h3>
        </div>

        @if (Model.Jobs.Any())
        {
            <div class="row g-4">
                @foreach (var job in Model.Jobs)
                {
                    <div class="col-12">
                        <div class="card card-premium overflow-hidden transition-all hover-translate-y @(string.IsNullOrEmpty(job.Error) ? "" : "border-danger border-opacity-50 bg-danger bg-opacity-5")">
                            @if (!string.IsNullOrEmpty(job.Error))
                            {
                                <div class="position-absolute top-0 start-0 w-100 h-4px bg-danger"></div>
                            }
                            <div class="card-body p-4 p-md-5">
                                <div class="row g-4 align-items-center">
                                    <!-- Job Status & Icon -->
                                    <div class="col-auto">
                                        <div class="d-flex flex-column align-items-center gap-3">
                                            <div class="w-64px h-64px rounded-4 bg-@(string.IsNullOrEmpty(job.Error) ? "success" : "danger") bg-opacity-10 border border-@(string.IsNullOrEmpty(job.Error) ? "success" : "danger") border-opacity-20 d-flex align-items-center justify-content-center text-@(string.IsNullOrEmpty(job.Error) ? "success" : "danger")">
                                                <i data-lucide="@(string.IsNullOrEmpty(job.Error) ? "check-circle" : "alert-triangle")" class="w-32px h-32px"></i>
                                            </div>
                                            <button onclick="showJobDetails('@job.Id', '@job.Cron', '@job.NextExecution', '@job.LastExecution')" class="btn btn-sm btn-outline-secondary rounded-pill w-48px h-48px d-flex align-items-center justify-content-center active-scale shadow-sm">
                                                <i data-lucide="info" class="w-18px h-18px"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <!-- Job Info -->
                                    <div class="col">
                                        <div class="d-flex flex-column gap-4">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <h4 class="h3 fw-black text-foreground mb-1 tracking-tighter">@System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(job.Id.Replace("-", " "))</h4>
                                                    <div class="d-flex align-items-center gap-2">
                                                        <span class="xx-small fw-black text-uppercase tracking-widest text-muted opacity-50">@Localizer["JobID"]:</span>
                                                        <code class="small fw-bold text-primary">#@job.Id</code>
                                                    </div>
                                                </div>
                                                <span class="badge bg-@(string.IsNullOrEmpty(job.Error) ? "success" : "danger") bg-opacity-10 text-@(string.IsNullOrEmpty(job.Error) ? "success" : "danger") border border-@(string.IsNullOrEmpty(job.Error) ? "success" : "danger") border-opacity-20 px-4 py-2 rounded-pill small fw-black text-uppercase tracking-widest d-flex align-items-center gap-2 shadow-sm">
                                                    @(string.IsNullOrEmpty(job.Error) ? Localizer["Healthy"] : Localizer["ErrorState"])
                                                </span>
                                            </div>

                                            <div class="row g-3">
                                                <div class="col-sm-6 col-lg-3">
                                                    <div class="p-3 rounded-4 bg-muted bg-opacity-5 border border-border border-opacity-30 h-100">
                                                        <span class="xx-small d-block fw-black text-uppercase tracking-widest text-muted opacity-50 mb-1">@Localizer["CronExpression"]</span>
                                                        <code class="small fw-black text-foreground d-block">@job.Cron</code>
                                                        <div class="xx-small fw-black text-uppercase tracking-widest text-primary mt-1 opacity-75">@GetCronDescription(job.Cron)</div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-lg-3">
                                                    <div class="p-3 rounded-4 bg-muted bg-opacity-5 border border-border border-opacity-30 h-100">
                                                        <span class="xx-small d-block fw-black text-uppercase tracking-widest text-muted opacity-50 mb-1">@Localizer["NextExecution"]</span>
                                                        @if (job.NextExecution.HasValue)
                                                        {
                                                            <div class="small fw-black text-primary">@job.NextExecution.Value.ToString("yyyy-MM-dd HH:mm:ss")</div>
                                                            <div class="xx-small fw-black text-uppercase tracking-widest text-muted mt-1 opacity-75">@GetTimeUntil(job.NextExecution.Value)</div>
                                                        }
                                                        else
                                                        {
                                                            <div class="small fw-bold text-muted">@Localizer["NotScheduled"]</div>
                                                        }
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-lg-3">
                                                    <div class="p-3 rounded-4 bg-muted bg-opacity-5 border border-border border-opacity-30 h-100">
                                                        <span class="xx-small d-block fw-black text-uppercase tracking-widest text-muted opacity-50 mb-1">@Localizer["LastExecution"]</span>
                                                        @if (job.LastExecution.HasValue)
                                                        {
                                                            <div class="small fw-black text-foreground">@job.LastExecution.Value.ToString("yyyy-MM-dd HH:mm:ss")</div>
                                                            <div class="xx-small fw-black text-uppercase tracking-widest text-muted mt-1 opacity-75">@GetTimeAgo(job.LastExecution.Value)</div>
                                                        }
                                                        else
                                                        {
                                                            <div class="small fw-bold text-muted">@Localizer["NeverExecuted"]</div>
                                                        }
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-lg-3">
                                                    <div class="p-3 rounded-4 bg-muted bg-opacity-5 border border-border border-opacity-30 h-100">
                                                        <span class="xx-small d-block fw-black text-uppercase tracking-widest text-muted opacity-50 mb-1">@Localizer["LastState"]</span>
                                                        @if (!string.IsNullOrEmpty(job.LastJobState))
                                                        {
                                                            <span class="badge bg-@GetStateBadgeColor(job.LastJobState) bg-opacity-10 text-@GetStateBadgeColor(job.LastJobState) border border-@GetStateBadgeColor(job.LastJobState) border-opacity-20 px-3 py-1 rounded-pill xx-small fw-black text-uppercase tracking-widest">
                                                                @job.LastJobState
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <div class="small fw-bold text-muted">@Localizer["NoHistory"]</div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="d-flex align-items-center gap-4 pt-3 border-top border-border border-opacity-30 mt-auto">
                                                <button type="submit" onclick="return confirm('@Localizer["ConfirmTrigger"]')" class="btn btn-link p-0 text-decoration-none small fw-black text-uppercase tracking-widest text-muted hover-primary transition-all d-flex align-items-center gap-2">
                                                    <i data-lucide="play" class="w-16px h-16px"></i>
                                                    @Localizer["TriggerExecution"]
                                                </button>
                                                
                                                @if (!string.IsNullOrEmpty(job.Error))
                                                {
                                                    <button onclick="showJobError('@job.Id', '@job.Error')" class="btn btn-link p-0 text-decoration-none small fw-black text-uppercase tracking-widest text-muted hover-danger transition-all d-flex align-items-center gap-2">
                                                        <i data-lucide="alert-triangle" class="w-16px h-16px"></i>
                                                        @Localizer["ViewErrorDetails"]
                                                    </button>
                                                }
                                                
                                                <button onclick="showJobDetails('@job.Id', '@job.Cron', '@job.NextExecution', '@job.LastExecution')" class="btn btn-link p-0 text-decoration-none small fw-black text-uppercase tracking-widest text-muted hover-info transition-all ms-auto d-flex align-items-center gap-2">
                                                    <i data-lucide="zoom-in" class="w-16px h-16px"></i>
                                                    @Localizer["InspectDetails"]
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="card card-premium py-5 text-center opacity-75">
                <i data-lucide="calendar-x" class="w-64px h-64px text-muted mb-4 opacity-10 mx-auto"></i>
                <h4 class="fw-black text-foreground mb-2">@Localizer["NoRecurringJobs"]</h4>
                <p class="small text-muted mb-0 mx-auto max-w-lg">@Localizer["NoRecurringJobsConfigDesc"]</p>
            </div>
        }
    </div>
</div>

<!-- Job Details Modal -->
<div class="modal fade" id="jobDetailsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content card-premium border-0 shadow-2xl">
            <div class="modal-header border-bottom border-border border-opacity-50 p-4">
                <h5 class="modal-title fw-black d-flex align-items-center gap-2">
                    <i data-lucide="info" class="text-primary"></i>
                    @Localizer["JobConfigDetails"]
                </h5>
                <button type="button" class="btn-close btn-close-white opacity-50 transition-all hover-opacity-100" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4 p-md-5">
                <div class="grid-stats-2 gap-4 mb-4">
                    <div class="p-4 rounded-4 bg-muted bg-opacity-5 border border-border border-opacity-30">
                        <span class="xx-small d-block fw-black text-uppercase tracking-widest text-muted opacity-50 mb-2">@Localizer["JobIdentifier"]</span>
                        <code class="small fw-bold text-foreground">#<span id="detail-job-id"></span></code>
                    </div>
                    <div class="p-4 rounded-4 bg-muted bg-opacity-5 border border-border border-opacity-30">
                        <span class="xx-small d-block fw-black text-uppercase tracking-widest text-muted opacity-50 mb-2">@Localizer["CronExpression"]</span>
                        <code class="small fw-bold text-foreground" id="detail-cron"></code>
                    </div>
                    <div class="p-4 rounded-4 bg-muted bg-opacity-5 border border-border border-opacity-30">
                        <span class="xx-small d-block fw-black text-uppercase tracking-widest text-muted opacity-50 mb-2">@Localizer["NextExecution"]</span>
                        <span class="small fw-bold text-foreground" id="detail-next-execution"></span>
                    </div>
                    <div class="p-4 rounded-4 bg-muted bg-opacity-5 border border-border border-opacity-30">
                        <span class="xx-small d-block fw-black text-uppercase tracking-widest text-muted opacity-50 mb-2">@Localizer["LastExecution"]</span>
                        <span class="small fw-bold text-foreground" id="detail-last-execution"></span>
                    </div>
                </div>
                
                <div class="p-4 rounded-4 bg-primary bg-opacity-5 border border-primary border-opacity-10">
                    <span class="xx-small d-block fw-black text-uppercase tracking-widest text-muted opacity-50 mb-2">@Localizer["ScheduleDescription"]</span>
                    <span id="detail-schedule-description" class="small fw-black text-primary"></span>
                </div>
            </div>
            <div class="modal-footer border-top border-border border-opacity-50 p-4">
                <button type="button" class="btn btn-secondary px-4 rounded-pill fw-bold text-uppercase tracking-wider small shadow-sm active-scale" data-bs-dismiss="modal">
                    @Localizer["CloseDetails"]
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Job Error Modal -->
<div class="modal fade" id="jobErrorModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content card-premium border-0 shadow-2xl">
            <div class="modal-header border-bottom border-border border-opacity-50 p-4">
                <h5 class="modal-title fw-black d-flex align-items-center gap-2 text-danger">
                    <i data-lucide="alert-triangle"></i>
                    @Localizer["JobErrorAnalysis"]
                </h5>
                <button type="button" class="btn-close btn-close-white opacity-50 transition-all hover-opacity-100" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4 p-md-5">
                <div class="p-3 rounded-4 bg-muted bg-opacity-5 border border-border border-opacity-30 mb-4">
                    <span class="xx-small d-block fw-black text-uppercase tracking-widest text-muted opacity-50 mb-1">Job Identifier:</span>
                    <code class="small fw-bold text-foreground">#<span id="error-job-id"></span></code>
                </div>
                <div class="p-4 rounded-4 bg-danger bg-opacity-5 border border-danger border-opacity-10">
                    <span class="xx-small d-block fw-black text-uppercase tracking-widest text-danger opacity-75 mb-3">@Localizer["ErrorDetails"]:</span>
                    <pre id="error-details" class="small text-danger font-mono mb-0 whitespace-pre-wrap" style="max-height: 300px; overflow-y: auto;"></pre>
                </div>
            </div>
            <div class="modal-footer border-top border-border border-opacity-50 p-4">
                <button type="button" class="btn btn-secondary px-4 rounded-pill fw-bold text-uppercase tracking-wider small shadow-sm active-scale" data-bs-dismiss="modal">
                    @Localizer["CloseAnalysis"]
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showJobDetails(jobId, cron, nextExecution, lastExecution) {
            $('#detail-job-id').text(jobId);
            $('#detail-cron').text(cron);
            $('#detail-next-execution').text(nextExecution || '@Localizer["NotScheduledJS"]');
            $('#detail-last-execution').text(lastExecution || '@Localizer["NeverExecutedJS"]');
            $('#detail-schedule-description').text(getCronDescription(cron));
            const modal = new bootstrap.Modal(document.getElementById('jobDetailsModal'));
            modal.show();
        }
        
        function showJobError(jobId, error) {
            $('#error-job-id').text(jobId);
            $('#error-details').text(error);
            const modal = new bootstrap.Modal(document.getElementById('jobErrorModal'));
            modal.show();
        }
        
        function getCronDescription(cron) {
            const descriptions = {
                '0 2 * * *': '@Localizer["Daily2AM"]',
                '0 * * * *': '@Localizer["EveryHour"]',
                '*/15 * * * *': '@Localizer["Every15Min"]',
                '*/30 * * * *': '@Localizer["Every30Min"]',
                '0 3 * * 0': '@Localizer["WeeklySunday3AM"]',
                '0 8 * * *': '@Localizer["Daily8AM"]',
                '0 */4 * * *': '@Localizer["Every4Hours"]'
            };
            return descriptions[cron] || '@Localizer["CustomScheduleJS"]';
        }
    </script>
}

@functions {
    private string GetCronDescription(string cron)
    {
        return cron switch
        {
            "0 2 * * *" => Localizer["Daily2AM"].Value,
            "0 * * * *" => Localizer["EveryHour"].Value,
            "*/15 * * * *" => Localizer["Every15Min"].Value,
            "*/30 * * * *" => Localizer["Every30Min"].Value,
            "0 3 * * 0" => Localizer["WeeklySunday3AM"].Value,
            "0 8 * * *" => Localizer["Daily8AM"].Value,
            "0 */4 * * *" => Localizer["Every4Hours"].Value,
            _ => Localizer["CustomSchedule"].Value
        };
    }
    
    private string GetStateBadgeColor(string state)
    {
        return state?.ToLower() switch
        {
            "succeeded" => "success",
            "failed" => "danger",
            "processing" => "warning",
            "enqueued" => "primary",
            _ => "secondary"
        };
    }
    
    private string GetTimeUntil(DateTime dateTime)
    {
        var timeSpan = dateTime - DateTime.UtcNow;
        if (timeSpan.TotalMinutes < 1)
            return Localizer["LessMin"].Value;
        if (timeSpan.TotalHours < 1)
            return string.Format(Localizer["InMinutes"].Value, timeSpan.Minutes);
        if (timeSpan.TotalDays < 1)
            return string.Format(Localizer["InHours"].Value, timeSpan.Hours);
        return string.Format(Localizer["InDays"].Value, timeSpan.Days);
    }
    
    private string GetTimeAgo(DateTime dateTime)
    {
        var timeSpan = DateTime.UtcNow - dateTime;
        if (timeSpan.TotalMinutes < 1)
            return Localizer["JustNow"].Value;
        if (timeSpan.TotalHours < 1)
            return string.Format(Localizer["MinutesAgo"].Value, timeSpan.Minutes);
        if (timeSpan.TotalDays < 1)
            return string.Format(Localizer["HoursAgo"].Value, timeSpan.Hours);
        return string.Format(Localizer["DaysAgo"].Value, timeSpan.Days);
    }
}
