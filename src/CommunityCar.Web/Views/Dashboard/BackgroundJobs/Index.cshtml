@inject IViewLocalizer Localizer
@model CommunityCar.Web.Models.Dashboard.BackgroundJobs.BackgroundJobsViewModel
@{
    ViewData["Title"] = Localizer["BackgroundJobsTitle"];
    ViewData["PageHeader"] = Localizer["BackgroundJobsManagement"];
    ViewData["PageDescription"] = Localizer["BackgroundJobsDescription"];
}

<div class="max-w-6xl mx-auto space-y-8 animate-in fade-in duration-700">
    <!-- Breadcrumb Protocol -->
    <nav class="flex items-center gap-3 text-[10px] font-black uppercase tracking-widest text-muted-foreground/60 px-2">
        <a href="@Url.Action("Index", "Dashboard")" class="hover:text-primary transition-colors flex items-center gap-2">
            <i data-lucide="chevron-left" class="w-3.5 h-3.5"></i> @Localizer["Dashboard"]
        </a>
        <span class="opacity-20">/</span>
        <span class="text-foreground/40">@Localizer["BackgroundProcessingEngine"]</span>
    </nav>

    <!-- Job Statistics Engine -->
    <div class="eng-card overflow-hidden">
        <div class="flex flex-col lg:flex-row border-b border-border/30">
            <div class="flex-1 p-8 md:p-12 space-y-6">
                <div class="space-y-4">
                    <div class="flex flex-wrap gap-2">
                        <span class="px-3 py-1 rounded-2xl text-[9px] font-black uppercase tracking-widest bg-green-500/10 text-green-600 border border-green-500/20 flex items-center gap-1.5 shadow-sm">
                            <i data-lucide="activity" class="w-3.5 h-3.5"></i> @Localizer["ProcessingEngineActive"]
                        </span>
                    </div>
                    <h1 class="text-4xl md:text-5xl font-black text-foreground tracking-tighter leading-[1.1]">@Localizer["JobProcessingEngine"]</h1>
                </div>

                <div class="flex items-center gap-6 pt-4">
                    <button onclick="refreshStatistics()" class="px-6 py-3 bg-primary text-primary-foreground font-black text-xs uppercase tracking-[0.2em] rounded-2xl shadow-xl shadow-primary/30 hover:shadow-primary/50 hover:-translate-y-1 active:scale-[0.98] transition-all flex items-center gap-3">
                        <i data-lucide="refresh-cw" class="w-4 h-4"></i> @Localizer["RefreshStatistics"]
                    </button>
                    <div class="flex items-center gap-2">
                        <span class="text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["SystemStatus"]:</span>
                        <span class="w-2 h-2 rounded-full bg-green-500 shadow-glow-success"></span>
                    </div>
                </div>
            </div>

            <!-- Stats Panel -->
            <div class="lg:w-80 bg-muted/20 border-l border-border/30 p-8 flex flex-col justify-center">
                <div class="grid grid-cols-2 gap-6 lg:grid-cols-1">
                    <div class="space-y-1">
                        <span class="eng-stat-value text-[32px] leading-none tracking-tighter" id="processing-count">@Model.JobStatistics.ProcessingCount.ToString("D2")</span>
                        <span class="eng-stat-label tracking-[0.2em] opacity-50">@Localizer["ActiveJobs"]</span>
                    </div>
                    <div class="space-y-1">
                        <span class="eng-stat-value text-[32px] leading-none tracking-tighter" id="servers-count">@Model.JobStatistics.ServersCount.ToString("D2")</span>
                        <span class="eng-stat-label tracking-[0.2em] opacity-50">@Localizer["ServerNodes"]</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Detailed Statistics Grid -->
        <div class="p-8 md:p-12">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                <div class="space-y-4 p-6 bg-blue-500/[0.03] border border-blue-500/10 rounded-2xl shadow-inner">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-xl bg-blue-500/10 flex items-center justify-center text-blue-500">
                            <i data-lucide="clock" class="w-5 h-5"></i>
                        </div>
                        <span class="text-[10px] font-black uppercase tracking-widest text-blue-500/60">@Localizer["Enqueued"]</span>
                    </div>
                    <span class="eng-stat-value text-2xl text-blue-500" id="enqueued-count">@Model.JobStatistics.EnqueuedCount</span>
                </div>

                <div class="space-y-4 p-6 bg-green-500/[0.03] border border-green-500/10 rounded-2xl shadow-inner">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-xl bg-green-500/10 flex items-center justify-center text-green-500">
                            <i data-lucide="check-circle" class="w-5 h-5"></i>
                        </div>
                        <span class="text-[10px] font-black uppercase tracking-widest text-green-500/60">@Localizer["Succeeded"]</span>
                    </div>
                    <span class="eng-stat-value text-2xl text-green-500" id="succeeded-count">@Model.JobStatistics.SucceededCount</span>
                </div>

                <div class="space-y-4 p-6 bg-red-500/[0.03] border border-red-500/10 rounded-2xl shadow-inner">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-xl bg-red-500/10 flex items-center justify-center text-red-500">
                            <i data-lucide="x-circle" class="w-5 h-5"></i>
                        </div>
                        <span class="text-[10px] font-black uppercase tracking-widest text-red-500/60">@Localizer["Failed"]</span>
                    </div>
                    <span class="eng-stat-value text-2xl text-red-500" id="failed-count">@Model.JobStatistics.FailedCount</span>
                </div>

                <div class="space-y-4 p-6 bg-amber-500/[0.03] border border-amber-500/10 rounded-2xl shadow-inner">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-xl bg-amber-500/10 flex items-center justify-center text-amber-500">
                            <i data-lucide="calendar" class="w-5 h-5"></i>
                        </div>
                        <span class="text-[10px] font-black uppercase tracking-widest text-amber-500/60">@Localizer["Scheduled"]</span>
                    </div>
                    <span class="eng-stat-value text-2xl text-amber-500" id="scheduled-count">@Model.JobStatistics.ScheduledCount</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Manual Job Execution Interface -->
    <div class="flex flex-col lg:flex-row gap-8">
        <div class="flex-1">
            <div class="eng-card overflow-hidden">
                <div class="border-b border-border/30 p-8 md:p-12">
                    <h3 class="text-xl font-black text-foreground tracking-tighter flex items-center gap-3">
                        <div class="w-8 h-8 bg-primary/10 rounded-2xl flex items-center justify-center text-primary">
                            <i data-lucide="play-circle" class="w-4 h-4"></i>
                        </div>
                        @Localizer["ManualJobExecution"]
                    </h3>
                </div>

                <div class="p-8 md:p-12">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-6 p-6 bg-primary/[0.03] border border-primary/10 rounded-2xl shadow-inner">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary">
                                    <i data-lucide="wrench" class="w-5 h-5"></i>
                                </div>
                                <div>
                                    <span class="block text-xs font-black text-foreground">@Localizer["SystemMaintenance"]</span>
                                    <span class="block text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["DatabaseHealthChecks"]</span>
                                </div>
                            </div>
                            <p class="text-sm font-medium text-muted-foreground leading-relaxed">@Localizer["SystemMaintenanceDesc"]</p>
                            <form asp-action="RunMaintenance" method="post" class="space-y-4">
                                @Html.AntiForgeryToken()
                                <button type="submit" onclick="return confirm('@Localizer["ConfirmMaintenance"]')" class="w-full px-6 py-3 bg-primary text-primary-foreground font-black text-xs uppercase tracking-[0.2em] rounded-2xl shadow-xl shadow-primary/30 hover:shadow-primary/50 hover:-translate-y-1 active:scale-[0.98] transition-all flex items-center justify-center gap-3">
                                    <i data-lucide="play" class="w-4 h-4"></i> @Localizer["ExecuteMaintenance"]
                                </button>
                            </form>
                        </div>

                        <div class="space-y-6 p-6 bg-green-500/[0.03] border border-green-500/10 rounded-2xl shadow-inner">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-xl bg-green-500/10 flex items-center justify-center text-green-500">
                                    <i data-lucide="rss" class="w-5 h-5"></i>
                                </div>
                                <div>
                                    <span class="block text-xs font-black text-foreground">@Localizer["FeedUpdates"]</span>
                                    <span class="block text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["ContentSynchronization"]</span>
                                </div>
                            </div>
                            <p class="text-sm font-medium text-muted-foreground leading-relaxed">@Localizer["FeedUpdatesDesc"]</p>
                            <form asp-action="UpdateFeeds" method="post" class="space-y-4">
                                @Html.AntiForgeryToken()
                                <button type="submit" onclick="return confirm('@Localizer["ConfirmFeedUpdate"]')" class="w-full px-6 py-3 bg-green-500 text-white font-black text-xs uppercase tracking-[0.2em] rounded-2xl shadow-xl shadow-green-500/30 hover:shadow-green-500/50 hover:-translate-y-1 active:scale-[0.98] transition-all flex items-center justify-center gap-3">
                                    <i data-lucide="play" class="w-4 h-4"></i> @Localizer["UpdateFeeds"]
                                </button>
                            </form>
                        </div>

                        <div class="space-y-6 p-6 bg-amber-500/[0.03] border border-amber-500/10 rounded-2xl shadow-inner">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-xl bg-amber-500/10 flex items-center justify-center text-amber-500">
                                    <i data-lucide="trending-up" class="w-5 h-5"></i>
                                </div>
                                <div>
                                    <span class="block text-xs font-black text-foreground">@Localizer["TrendingTopics"]</span>
                                    <span class="block text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["AlgorithmRefresh"]</span>
                                </div>
                            </div>
                            <p class="text-sm font-medium text-muted-foreground leading-relaxed">@Localizer["TrendingTopicsDesc"]</p>
                            <form asp-action="UpdateTrending" method="post" class="space-y-4">
                                @Html.AntiForgeryToken()
                                <button type="submit" onclick="return confirm('@Localizer["ConfirmTrendingUpdate"]')" class="w-full px-6 py-3 bg-amber-500 text-white font-black text-xs uppercase tracking-[0.2em] rounded-2xl shadow-xl shadow-amber-500/30 hover:shadow-amber-500/50 hover:-translate-y-1 active:scale-[0.98] transition-all flex items-center justify-center gap-3">
                                    <i data-lucide="play" class="w-4 h-4"></i> @Localizer["UpdateTrending"]
                                </button>
                            </form>
                        </div>

                        <div class="space-y-6 p-6 bg-purple-500/[0.03] border border-purple-500/10 rounded-2xl shadow-inner">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-xl bg-purple-500/10 flex items-center justify-center text-purple-500">
                                    <i data-lucide="trophy" class="w-5 h-5"></i>
                                </div>
                                <div>
                                    <span class="block text-xs font-black text-foreground">@Localizer["Gamification"]</span>
                                    <span class="block text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["AchievementProcessing"]</span>
                                </div>
                            </div>
                            <p class="text-sm font-medium text-muted-foreground leading-relaxed">@Localizer["GamificationDesc"]</p>
                            <form asp-action="ProcessGamification" method="post" class="space-y-4">
                                @Html.AntiForgeryToken()
                                <button type="submit" onclick="return confirm('@Localizer["ConfirmGamification"]')" class="w-full px-6 py-3 bg-purple-500 text-white font-black text-xs uppercase tracking-[0.2em] rounded-2xl shadow-xl shadow-purple-500/30 hover:shadow-purple-500/50 hover:-translate-y-1 active:scale-[0.98] transition-all flex items-center justify-center gap-3">
                                    <i data-lucide="play" class="w-4 h-4"></i> @Localizer["ProcessGamification"]
                                </button>
                            </form>
                        </div>

                        <div class="md:col-span-2 space-y-6 p-6 bg-slate-500/[0.03] border border-slate-500/10 rounded-2xl shadow-inner">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-xl bg-slate-500/10 flex items-center justify-center text-slate-500">
                                    <i data-lucide="mail" class="w-5 h-5"></i>
                                </div>
                                <div>
                                    <span class="block text-xs font-black text-foreground">@Localizer["EmailDigest"]</span>
                                    <span class="block text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["NotificationDistribution"]</span>
                                </div>
                            </div>
                            <p class="text-sm font-medium text-muted-foreground leading-relaxed">@Localizer["EmailDigestDesc"]</p>
                            <form asp-action="SendEmailDigest" method="post" class="space-y-4">
                                @Html.AntiForgeryToken()
                                <button type="submit" onclick="return confirm('@Localizer["ConfirmEmailDigest"]')" class="w-full px-6 py-3 bg-slate-500 text-white font-black text-xs uppercase tracking-[0.2em] rounded-2xl shadow-xl shadow-slate-500/30 hover:shadow-slate-500/50 hover:-translate-y-1 active:scale-[0.98] transition-all flex items-center justify-center gap-3">
                                    <i data-lucide="play" class="w-4 h-4"></i> @Localizer["SendDigest"]
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Recurring Jobs Sidebar -->
        <div class="lg:w-80">
            <div class="eng-card overflow-hidden">
                <div class="border-b border-border/30 p-8">
                    <div class="flex items-center justify-between">
                        <h3 class="text-xl font-black text-foreground tracking-tighter flex items-center gap-3">
                            <div class="w-8 h-8 bg-blue-500/10 rounded-2xl flex items-center justify-center text-blue-500">
                                <i data-lucide="repeat" class="w-4 h-4"></i>
                            </div>
                            @Localizer["RecurringJobs"]
                        </h3>
                        <a href="@Url.Action("RecurringJobs")" class="px-4 py-2 bg-muted/40 rounded-2xl text-[10px] font-black uppercase tracking-widest text-muted-foreground border border-border/50 hover:bg-muted/60 transition-all flex items-center gap-2">
                            <i data-lucide="eye" class="w-3 h-3"></i> @Localizer["ViewAll"]
                        </a>
                    </div>
                </div>

                <div class="p-8">
                    @if (Model.RecurringJobs.Any())
                    {
                        <div class="space-y-4">
                            @foreach (var job in Model.RecurringJobs.Take(5))
                            {
                                <div class="p-4 bg-muted/10 border border-border/30 rounded-2xl">
                                    <div class="flex items-center justify-between mb-2">
                                        <span class="text-xs font-black text-foreground">@System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(job.Id.Replace("-", " "))</span>
                                        <span class="px-2 py-1 rounded-xl text-[8px] font-black uppercase tracking-widest @(string.IsNullOrEmpty(job.Error) ? "bg-green-500/10 text-green-600 border border-green-500/20" : "bg-red-500/10 text-red-600 border border-red-500/20")">
                                            @(string.IsNullOrEmpty(job.Error) ? Localizer["Healthy"] : Localizer["Error"])
                                        </span>
                                    </div>
                                    <div class="space-y-1">
                                        <span class="block text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["NextExecution"]:</span>
                                        <span class="block text-xs text-muted-foreground">@(job.NextExecution?.ToString("HH:mm") ?? "Not Scheduled")</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="py-8 text-center">
                            <div class="w-12 h-12 bg-muted/40 rounded-2xl flex items-center justify-center mx-auto mb-4">
                                <i data-lucide="calendar-x" class="w-6 h-6 text-muted-foreground opacity-20"></i>
                            </div>
                            <span class="block text-xs font-black text-foreground mb-1">@Localizer["NoRecurringJobs"]</span>
                            <span class="block text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["NoRecurringJobsDesc"]</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Jobs History -->
    <div class="eng-card overflow-hidden">
        <div class="border-b border-border/30 p-8 md:p-12">
            <h3 class="text-xl font-black text-foreground tracking-tighter flex items-center gap-3">
                <div class="w-8 h-8 bg-slate-500/10 rounded-2xl flex items-center justify-center text-slate-500">
                    <i data-lucide="history" class="w-4 h-4"></i>
                </div>
                @Localizer["RecentJobHistory"]
            </h3>
        </div>

        <div class="p-8 md:p-12">
            @if (Model.RecentJobs.Any())
            {
                <div class="space-y-4">
                    @foreach (var job in Model.RecentJobs)
                    {
                        <div class="relative group/job animate-in fade-in slide-in-from-bottom-4 transition-all hover:-translate-y-1">
                            <div class="eng-card p-6 md:p-8 bg-muted/10 border border-border/30">
                                <div class="flex flex-col md:flex-row gap-6">
                                    <!-- Job Status Indicator -->
                                    <div class="md:w-16 flex flex-col items-center gap-2 pt-2">
                                        <div class="w-12 h-12 rounded-2xl bg-@GetJobStateColor(job.State)/10 border border-@GetJobStateColor(job.State)/20 flex items-center justify-center text-@GetJobStateColor(job.State)">
                                            <i data-lucide="@GetJobStateIcon(job.State)" class="w-5 h-5"></i>
                                        </div>
                                        <span class="w-8 h-px bg-border/40"></span>
                                    </div>

                                    <div class="flex-1 space-y-4">
                                        <!-- Job Identity -->
                                        <div class="flex items-center justify-between">
                                            <div class="space-y-1">
                                                <span class="block text-xs font-black text-foreground">@job.Method</span>
                                                <span class="block text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["JobID"]: @job.Id</span>
                                            </div>
                                            <span class="px-3 py-1 rounded-2xl text-[9px] font-black uppercase tracking-widest bg-@GetJobStateColor(job.State)/10 text-@GetJobStateColor(job.State) border border-@GetJobStateColor(job.State)/20 shadow-sm">
                                                @job.State
                                            </span>
                                        </div>

                                        <!-- Job Metrics -->
                                        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                                            <div class="space-y-1">
                                                <span class="text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["Created"]:</span>
                                                <span class="block text-xs text-foreground">@job.CreatedAt?.ToString("yyyy-MM-dd HH:mm:ss")</span>
                                            </div>
                                            <div class="space-y-1">
                                                <span class="text-[9px] font-black uppercase tracking-widest text-muted-foreground opacity-40">@Localizer["Duration"]:</span>
                                                <span class="block text-xs text-foreground">@(job.Duration?.ToString(@"mm\:ss") ?? "N/A")</span>
                                            </div>
                                            @if (!string.IsNullOrEmpty(job.Error))
                                            {
                                                <div class="space-y-1">
                                                    <span class="text-[9px] font-black uppercase tracking-widest text-red-500/60">@Localizer["ErrorStatus"]:</span>
                                                    <button onclick="showError('@job.Error')" class="text-xs text-red-500 hover:text-red-400 transition-colors flex items-center gap-1">
                                                        <i data-lucide="alert-triangle" class="w-3 h-3"></i> @Localizer["ViewDetails"]
                                                    </button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="py-20 flex flex-col items-center justify-center text-center bg-muted/10 border-2 border-dashed border-border/40 rounded-[2.5rem] animate-pulse">
                    <div class="w-16 h-16 bg-muted/40 rounded-2xl flex items-center justify-center mb-6">
                        <i data-lucide="clock" class="w-8 h-8 text-muted-foreground opacity-20"></i>
                    </div>
                    <h4 class="text-xl font-black text-foreground tracking-tight underline decoration-primary/40 decoration-4 underline-offset-8 mb-3">@Localizer["NoJobHistory"]</h4>
                    <p class="text-xs font-medium text-muted-foreground uppercase tracking-widest opacity-60">@Localizer["NoJobHistoryDesc"]</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Error Modal -->
<div class="modal fade" id="errorModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content bg-background border border-border/50 rounded-[2rem] shadow-2xl">
            <div class="modal-header border-b border-border/30 p-8">
                <h5 class="modal-title text-xl font-black text-foreground tracking-tighter flex items-center gap-3">
                    <div class="w-8 h-8 bg-red-500/10 rounded-2xl flex items-center justify-center text-red-500">
                        <i data-lucide="alert-triangle" class="w-4 h-4"></i>
                    </div>
                    @Localizer["JobErrorAnalysis"]
                </h5>
                <button type="button" class="close text-muted-foreground hover:text-foreground transition-colors" data-dismiss="modal">
                    <i data-lucide="x" class="w-6 h-6"></i>
                </button>
            </div>
            <div class="modal-body p-8">
                <div class="space-y-2">
                    <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground opacity-60">@Localizer["ErrorDetails"]:</span>
                    <div class="bg-red-500/[0.03] border border-red-500/10 rounded-2xl p-6 max-h-96 overflow-y-auto">
                        <pre id="error-details" class="text-sm text-red-600 font-mono whitespace-pre-wrap"></pre>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-t border-border/30 p-8">
                <button type="button" class="px-6 py-3 bg-muted/40 text-foreground font-black text-xs uppercase tracking-[0.2em] rounded-2xl border border-border/50 hover:bg-muted/60 transition-all" data-dismiss="modal">
                    @Localizer["CloseAnalysis"]
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function refreshStatistics() {
            $.get('@Url.Action("GetStatistics")', function(data) {
                if (data.error) {
                    toastr.error('Statistics refresh failed: ' + data.error);
                    return;
                }
                
                $('#enqueued-count').text(data.EnqueuedCount || 0);
                $('#processing-count').text((data.ProcessingCount || 0).toString().padStart(2, '0'));
                $('#succeeded-count').text(data.SucceededCount || 0);
                $('#failed-count').text(data.FailedCount || 0);
                $('#scheduled-count').text(data.ScheduledCount || 0);
                $('#servers-count').text((data.ServersCount || 0).toString().padStart(2, '0'));
                
                toastr.success('Processing statistics synchronized');
            }).fail(function() {
                toastr.error('Statistics synchronization failed');
            });
        }
        
        function showError(error) {
            $('#error-details').text(error);
            $('#errorModal').modal('show');
        }
        
        // Auto-refresh every 30 seconds
        setInterval(refreshStatistics, 30000);
    </script>
}

@functions {
    private string GetJobStateColor(string state)
    {
        return state?.ToLower() switch
        {
            "succeeded" => "green-500",
            "failed" => "red-500",
            "processing" => "amber-500",
            "enqueued" => "blue-500",
            _ => "slate-500"
        };
    }
    
    private string GetJobStateIcon(string state)
    {
        return state?.ToLower() switch
        {
            "succeeded" => "check-circle",
            "failed" => "x-circle",
            "processing" => "loader",
            "enqueued" => "clock",
            _ => "help-circle"
