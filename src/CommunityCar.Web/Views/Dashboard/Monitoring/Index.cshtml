@inject IViewLocalizer Localizer
@model CommunityCar.Application.Features.Dashboard.System.ViewModels.SystemHealthVM
@{
    ViewData["Title"] = Localizer["SystemMonitoringTitle"];
    ViewData["PageType"] = "Monitoring";
    var isSystemHealthy = ViewBag.IsSystemHealthy as bool? ?? false;
    Layout = "_DashboardLayout";
}

<div class="row g-4 animate-in">
    <!-- Header -->
    <div class="col-12 mb-2">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-4">
            <div>
                <p class="xx-small text-uppercase tracking-widest text-muted opacity-60 fw-black mb-1">Infrastructure</p>
                <h1 class="h2 fw-black text-white mb-0">System Monitoring</h1>
            </div>
            <div class="d-flex align-items-center gap-3">
                <div class="d-inline-flex align-items-center gap-2 px-3 py-2 bg-white bg-opacity-5 rounded-3 border border-white border-opacity-10 xx-small fw-black text-white text-uppercase tracking-widest shadow-sm">
                    <div class="@(isSystemHealthy ? "bg-success" : "bg-danger") w-2 h-2 rounded-circle shadow-glow-primary @(isSystemHealthy ? "" : "animate-pulse")"></div>
                    @(isSystemHealthy ? Localizer["SystemHealthy"] : Localizer["SystemIssuesDetected"])
                </div>
                <button type="button" data-action="refresh-data" 
                        class="btn btn-gradient-premium px-4 xx-small fw-black text-uppercase tracking-widest shadow-glow-primary border-0 rounded-3">
                    <i data-lucide="refresh-cw" class="w-3.5 h-3.5 me-2"></i>
                    @Localizer["Refresh"]
                </button>
            </div>
        </div>
    </div>

    <!-- Main Stats Grid -->
    <div class="col-12">
        <div class="row g-4">
            <!-- CPU Activity (Integrated Glass Card) -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card card-premium-glass p-4 group">
                    <p class="xx-small fw-black text-uppercase tracking-widest text-muted opacity-60 mb-3">Processor Load</p>
                    <div class="d-flex align-items-end justify-content-between mb-3">
                        <div>
                            <h3 class="h2 fw-black text-white mb-0 tabular-nums">45%</h3>
                            <p class="xx-small fw-bold text-success mt-1 d-flex align-items-center gap-1">
                                <i data-lucide="trending-down" class="w-3 h-3"></i> -2.4%
                            </p>
                        </div>
                        <div class="w-12 h-12 rounded-4 bg-white bg-opacity-5 d-flex align-items-center justify-content-center text-muted group-hover:text-white group-hover:bg-opacity-10 transition-all border border-white border-opacity-5">
                            <i data-lucide="cpu" class="w-6 h-6"></i>
                        </div>
                    </div>
                    <div class="progress bg-white bg-opacity-5" style="height: 4px;">
                        <div class="progress-bar bg-gradient-premium shadow-sm transition-all duration-700" style="width: 45%"></div>
                    </div>
                </div>
            </div>

            <!-- Memory Allocation -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card card-premium-glass p-4 group">
                    <p class="xx-small fw-black text-uppercase tracking-widest text-muted opacity-60 mb-3">Memory Usage</p>
                    <div class="d-flex align-items-end justify-content-between mb-3">
                        <div>
                            <h3 class="h2 fw-black text-white mb-0 tabular-nums">6.2 <span class="xx-small font-normal text-muted opacity-40">GB</span></h3>
                            <p class="xx-small fw-bold text-danger mt-1 d-flex align-items-center gap-1">
                                <i data-lucide="trending-up" class="w-3 h-3"></i> +0.8%
                            </p>
                        </div>
                        <div class="w-12 h-12 rounded-4 bg-white bg-opacity-5 d-flex align-items-center justify-content-center text-muted group-hover:text-white group-hover:bg-opacity-10 transition-all border border-white border-opacity-5">
                            <i data-lucide="database" class="w-6 h-6"></i>
                        </div>
                    </div>
                    <div class="progress bg-white bg-opacity-5" style="height: 4px;">
                        <div class="progress-bar bg-info shadow-sm transition-all duration-700" style="width: 62%"></div>
                    </div>
                </div>
            </div>

            <!-- Storage Capacity -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card card-premium-glass p-4 group">
                    <p class="xx-small fw-black text-uppercase tracking-widest text-muted opacity-60 mb-3">Disk Capacity</p>
                    <div class="d-flex align-items-end justify-content-between mb-3">
                        <div>
                            <h3 class="h2 fw-black text-white mb-0 tabular-nums">78%</h3>
                            <p class="xx-small fw-bold text-muted mt-1 opacity-60">1.2 TB Free</p>
                        </div>
                        <div class="w-12 h-12 rounded-4 bg-white bg-opacity-5 d-flex align-items-center justify-content-center text-muted group-hover:text-white group-hover:bg-opacity-10 transition-all border border-white border-opacity-5">
                            <i data-lucide="hard-drive" class="w-6 h-6"></i>
                        </div>
                    </div>
                    <div class="progress bg-white bg-opacity-5" style="height: 4px;">
                        <div class="progress-bar bg-warning shadow-sm transition-all duration-700" style="width: 78%"></div>
                    </div>
                </div>
            </div>

            <!-- Thread Pool -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card card-premium-glass p-4 group">
                    <p class="xx-small fw-black text-uppercase tracking-widest text-muted opacity-60 mb-3">Active Threads</p>
                    <div class="d-flex align-items-end justify-content-between mb-3">
                        <div>
                            <h3 class="h2 fw-black text-white mb-0 tabular-nums">142</h3>
                            <p class="xx-small fw-bold text-success mt-1 d-flex align-items-center gap-1">
                                <i data-lucide="activity" class="w-3 h-3"></i> Optimal
                            </p>
                        </div>
                        <div class="w-12 h-12 rounded-4 bg-white bg-opacity-5 d-flex align-items-center justify-content-center text-muted group-hover:text-white group-hover:bg-opacity-10 transition-all border border-white border-opacity-5">
                            <i data-lucide="layers" class="w-6 h-6"></i>
                        </div>
                    </div>
                    <div class="progress bg-white bg-opacity-5" style="height: 4px;">
                        <div class="progress-bar bg-success shadow-sm transition-all duration-700" style="width: 35%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cluster Management -->
    <div class="col-12 col-xl-8">
        <div class="card card-premium-glass p-0 h-100">
            <div class="card-header border-0 bg-transparent p-4 d-flex justify-content-between align-items-center">
                <h6 class="xx-small fw-black text-uppercase tracking-widest text-white mb-0">Cluster Health Matrix</h6>
                <div class="dropdown">
                    <button class="btn btn-link text-muted p-0" data-bs-toggle="dropdown"><i data-lucide="more-horizontal" class="w-4 h-4"></i></button>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0 align-middle">
                        <thead class="bg-white bg-opacity-5">
                            <tr>
                                <th class="ps-4 py-3 xx-small fw-black text-uppercase tracking-widest text-muted border-0">Service Node</th>
                                <th class="py-3 xx-small fw-black text-uppercase tracking-widest text-muted border-0">Status</th>
                                <th class="py-3 xx-small fw-black text-uppercase tracking-widest text-muted border-0">Latency</th>
                                <th class="py-3 xx-small fw-black text-uppercase tracking-widest text-muted border-0">Uptime</th>
                                <th class="pe-4 py-3 xx-small fw-black text-uppercase tracking-widest text-muted border-0 text-end">Load</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="border-top border-white border-opacity-5">
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="w-2 h-2 rounded-circle bg-success"></div>
                                        <span class="text-xs fw-black text-white">API Gateway Cluster</span>
                                    </div>
                                </td>
                                <td><span class="badge bg-success-subtle text-success xx-small fw-black tracking-widest">RUNNING</span></td>
                                <td class="text-xs fw-bold text-muted">12ms</td>
                                <td class="text-xs fw-bold text-muted">14d 2h 5m</td>
                                <td class="pe-4 py-3 text-end"><span class="text-xs fw-black text-white">12%</span></td>
                            </tr>
                            <tr class="border-top border-white border-opacity-5">
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="w-2 h-2 rounded-circle bg-success"></div>
                                        <span class="text-xs fw-black text-white">Database Primary</span>
                                    </div>
                                </td>
                                <td><span class="badge bg-success-subtle text-success xx-small fw-black tracking-widest">RUNNING</span></td>
                                <td class="text-xs fw-bold text-muted">4ms</td>
                                <td class="text-xs fw-bold text-muted">45d 1h 12m</td>
                                <td class="pe-4 py-3 text-end"><span class="text-xs fw-black text-white">28%</span></td>
                            </tr>
                            <tr class="border-top border-white border-opacity-5">
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="w-2 h-2 rounded-circle bg-warning"></div>
                                        <span class="text-xs fw-black text-white">Redis Cache Node 01</span>
                                    </div>
                                </td>
                                <td><span class="badge bg-warning-subtle text-warning xx-small fw-black tracking-widest">LATENCY</span></td>
                                <td class="text-xs fw-bold text-muted">156ms</td>
                                <td class="text-xs fw-bold text-muted">8d 4h 22m</td>
                                <td class="pe-4 py-3 text-end"><span class="text-xs fw-black text-white">85%</span></td>
                            </tr>
                            <tr class="border-top border-white border-opacity-5">
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="w-2 h-2 rounded-circle bg-success"></div>
                                        <span class="text-xs fw-black text-white">Object Storage Edge</span>
                                    </div>
                                </td>
                                <td><span class="badge bg-success-subtle text-success xx-small fw-black tracking-widest">RUNNING</span></td>
                                <td class="text-xs fw-bold text-muted">42ms</td>
                                <td class="text-xs fw-bold text-muted">122d 8h 1m</td>
                                <td class="pe-4 py-3 text-end"><span class="text-xs fw-black text-white">5%</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Alert History -->
    <div class="col-12 col-xl-4">
        <div class="card card-premium-glass p-0 h-100">
            <div class="card-header border-0 bg-transparent p-4">
                <h6 class="xx-small fw-black text-uppercase tracking-widest text-white mb-0">Diagnostic Events</h6>
            </div>
            <div class="card-body p-0">
                <div class="d-flex flex-column">
                    <div class="p-4 border-top border-white border-opacity-5 hover:bg-white hover:bg-opacity-5 transition-all group">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <span class="badge bg-warning-subtle text-warning xx-small fw-black tracking-widest">WARNING</span>
                            <span class="xx-small text-muted opacity-40">2m ago</span>
                        </div>
                        <h6 class="text-[11px] fw-black text-white mb-1 group-hover:text-primary-red transition-colors">High Memory Threshold</h6>
                        <p class="xx-small fw-bold text-muted mb-0 opacity-60 leading-relaxed">Memory usage exceeded 85% on node REDIS-01. Checking thread pool.</p>
                    </div>
                    <div class="p-4 border-top border-white border-opacity-5 hover:bg-white hover:bg-opacity-5 transition-all group">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <span class="badge bg-success-subtle text-success xx-small fw-black tracking-widest">CRITICAL RESOLVED</span>
                            <span class="xx-small text-muted opacity-40">15m ago</span>
                        </div>
                        <h6 class="text-[11px] fw-black text-white mb-1 group-hover:text-primary-red transition-colors">Database Backup Complete</h6>
                        <p class="xx-small fw-bold text-muted mb-0 opacity-60 leading-relaxed">Weekly full verification backup successfully migrated to Azure Blob.</p>
                    </div>
                    <div class="p-4 border-top border-white border-opacity-5 hover:bg-white hover:bg-opacity-5 transition-all group">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <span class="badge bg-info-subtle text-info xx-small fw-black tracking-widest">INFO</span>
                            <span class="xx-small text-muted opacity-40">1h ago</span>
                        </div>
                        <h6 class="text-[11px] fw-black text-white mb-1 group-hover:text-primary-red transition-colors">System Update Scheduled</h6>
                        <p class="xx-small fw-bold text-muted mb-0 opacity-60 leading-relaxed">Security patch v1.4.2 scheduled for deployment at 03:00 UTC.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
             lucide.createIcons();
        });
    </script>
}

<style>
    .table-dark {
        --bs-table-bg: transparent;
        --bs-table-color: rgba(255, 255, 255, 0.8);
        --bs-table-hover-bg: rgba(255, 255, 255, 0.02);
    }
    .hover-translate-y-n2px:hover {
        transform: translateY(-2px);
    }
    .xx-small { font-size: 0.65rem; }
</style>
