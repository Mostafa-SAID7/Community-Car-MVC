@inject IViewLocalizer Localizer
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = Localizer["SystemMaintenanceControl"];
    bool isEnabled = ViewBag.IsMaintenanceEnabled ?? false;
    string message = ViewBag.MaintenanceMessage ?? "";
}

<!-- Maintenance Control Panel -->
<div class="d-flex flex-column gap-5 animate-in fade-in duration-700 pb-5">
    <!-- Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-4 border-bottom border-border border-opacity-30 pb-4">
        <div>
            <h1 class="h1 fw-black text-uppercase mb-1 italic tracking-tighter">
                <span class="text-primary-red">@Localizer["Protocol"]</span> 503
            </h1>
            <p class="xx-small fw-black text-muted text-uppercase tracking-widest opacity-70">@Localizer["SystemWideMaintenanceLockdown"]</p>
        </div>
        <div class="d-flex align-items-center gap-4 bg-muted bg-opacity-5 px-4 py-2 rounded-4 border border-border border-opacity-20 shadow-sm">
            <div class="w-8px h-8px rounded-circle @(isEnabled ? "bg-primary-red animate-pulse shadow-primary-red" : "bg-success shadow-success")" style="box-shadow: 0 0 10px currentColor;"></div>
            <span class="xx-small font-black uppercase tracking-widest text-foreground">
                @Localizer["Status"]: <span class="@(isEnabled ? "text-primary-red" : "text-success")">@(isEnabled ? Localizer["ActiveLockdown"] : Localizer["GridOperational"])</span>
            </span>
        </div>
    </div>

    <form asp-action="Toggle" method="post" class="d-flex flex-column gap-5">
        @Html.AntiForgeryToken()

        <!-- Warning Card -->
        <div class="card card-premium shadow-xl border-opacity-20 overflow-hidden group">
            <div class="card-body p-4 p-md-5">
                <div class="d-flex flex-column flex-md-row align-items-start gap-4">
                    <div class="w-64px h-64px rounded-4 @(isEnabled ? "bg-success bg-opacity-10 text-success" : "bg-primary-red bg-opacity-10 text-primary-red") d-flex align-items-center justify-content-center shadow-sm">
                        <i data-lucide="@(isEnabled ? "power" : "zap-off")" class="w-32px h-32px"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h3 class="h4 fw-black mb-2 text-uppercase tracking-tight text-foreground">
                            @(isEnabled ? Localizer["DeactivateLockdown"] : Localizer["InitiateSystemShutdown"])
                        </h3>
                        <p class="small fw-bold text-muted opacity-70 mb-4 lh-lg" style="max-width: 600px;">
                            @(isEnabled 
                                ? Localizer["DeactivateLockdownDesc"] 
                                : Localizer["InitiateSystemShutdownDesc"])
                        </p>
                        
                        <input type="hidden" name="isEnabled" value="@((!isEnabled).ToString().ToLower())" />
                        
                        <button type="submit" class="btn btn-primary-red px-5 py-3 rounded-3 small fw-black text-uppercase tracking-widest shadow-lg hover-scale-105 transition-all d-flex align-items-center gap-3">
                            @(isEnabled ? Localizer["RestoreGridAccess"] : Localizer["ExecuteSystemKillSwitch"])
                            <i data-lucide="chevron-right" class="w-16px h-16px"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Configuration Section -->
        <div class="d-flex flex-column gap-4">
            <div class="d-flex align-items-center gap-4">
                <div class="flex-grow-1 h-1px bg-border bg-opacity-30"></div>
                <h2 class="xx-small fw-black text-uppercase tracking-widest text-muted opacity-60">@Localizer["TransmissionTelemetry"]</h2>
                <div class="flex-grow-1 h-1px bg-border bg-opacity-30"></div>
            </div>

            <div class="row g-4">
                <!-- Message Input -->
                <div class="col-12">
                    <div class="card card-premium shadow-lg border-opacity-20">
                        <div class="card-body p-4">
                            <label class="xx-small fw-black text-uppercase tracking-widest text-muted opacity-60 mb-3 d-block">@Localizer["PublicBroadcastMessage"]</label>
                            <div class="position-relative">
                                <textarea name="message" rows="4" 
                                    class="form-control bg-background border border-border border-opacity-30 rounded-4 p-4 small fw-bold text-foreground shadow-none focus-border-primary-red transition-all resize-none"
                                    placeholder="@Localizer["MaintenanceMessagePlaceholder"]">@message</textarea>
                                <div class="position-absolute bottom-0 end-0 p-3 xx-small fw-black text-muted opacity-30 text-uppercase tracking-widest">
                                    @Localizer["Protocol"]: @Localizer["Standard"]
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Safety Check -->
                <div class="col-12">
                    <div class="d-flex align-items-center gap-4 p-4 border border-border border-opacity-20 rounded-4 bg-muted bg-opacity-5">
                        <div class="w-40px h-40px rounded-3 bg-muted bg-opacity-10 d-flex align-items-center justify-content-center">
                            <i data-lucide="shield-check" class="w-20px h-20px text-muted"></i>
                        </div>
                        <p class="xx-small fw-black text-muted text-uppercase tracking-widest opacity-60 mb-0 lh-base">
                            @Localizer["VerifiedAdminDesc"]
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!-- Footer Stats -->
    <div class="mt-5 row g-4 border-top border-border border-opacity-20 pt-4">
        <div class="col-4">
            <div class="xx-small fw-black text-muted text-uppercase tracking-widest mb-1 opacity-40">@Localizer["Node"] 01</div>
            <div class="x-small fw-black text-foreground opacity-60">@Localizer["Link"]: <span class="text-success">@Localizer["Secure"]</span></div>
        </div>
        <div class="col-4">
            <div class="xx-small fw-black text-muted text-uppercase tracking-widest mb-1 opacity-40">@Localizer["Node"] 02</div>
            <div class="x-small fw-black text-foreground opacity-60">@Localizer["Link"]: <span class="text-warning">@Localizer["Standby"]</span></div>
        </div>
        <div class="col-4">
            <div class="xx-small fw-black text-muted text-uppercase tracking-widest mb-1 opacity-40">@Localizer["Node"] 03</div>
            <div class="x-small fw-black text-foreground opacity-60">@Localizer["Link"]: <span class="text-primary-red">@Localizer["Active"]</span></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Lucide icons are initialized globally in the dashboard
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    </script>
}
