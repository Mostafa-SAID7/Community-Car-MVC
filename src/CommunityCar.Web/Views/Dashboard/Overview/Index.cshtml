@model CommunityCar.Application.Features.Dashboard.ViewModels.DashboardOverviewVM
@{
    ViewData["Title"] = "Dashboard Overview";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="dashboard-overview">
    <!-- Stats Cards Row -->
    <div class="dashboard-grid">
        <div class="stat-card">
            <div class="stat-icon" style="background-color: var(--color-blue-500);">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@Model.Stats.TotalUsers.ToString("N0")</div>
                <div class="stat-label">Total Users</div>
                <div class="stat-change positive">+@Model.Stats.GrowthRate% this month</div>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon" style="background-color: var(--color-green-500);">
                <i class="fas fa-edit"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@Model.Stats.TotalPosts.ToString("N0")</div>
                <div class="stat-label">Total Posts</div>
                <div class="stat-change">Active today: @Model.Stats.ActiveUsersToday</div>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon" style="background-color: var(--color-blue-500);">
                <i class="fas fa-comments"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@Model.Stats.TotalComments.ToString("N0")</div>
                <div class="stat-label">Total Comments</div>
                <div class="stat-change">Engagement: @Model.Stats.EngagementRate%</div>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon" style="background-color: var(--color-yellow-500);">
                <i class="fas fa-question-circle"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@(Model.Stats.TotalQuestions + Model.Stats.TotalAnswers)</div>
                <div class="stat-label">Q&A Items</div>
                <div class="stat-change">@Model.Stats.TotalQuestions Q / @Model.Stats.TotalAnswers A</div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="flex flex-wrap -mx-3 mb-4">
        <div class="w-full lg:w-2/3 px-3 mb-3">
            <div class="card">
                <div class="card-header flex justify-between items-center">
                    <h5 class="card-title">User Growth</h5>
                    <div class="flex" role="group">
                        <button type="button" class="btn btn-outline btn-sm active" data-period="7">7D</button>
                        <button type="button" class="btn btn-outline btn-sm" data-period="30">30D</button>
                        <button type="button" class="btn btn-outline btn-sm" data-period="90">90D</button>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="userGrowthChart" height="300"></canvas>
                </div>
            </div>
        </div>
        
        <div class="w-full lg:w-1/3 px-3 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">System Health</h5>
                </div>
                <div class="card-body">
                    <div class="system-health">
                        <div class="mb-3">
                            <span class="badge badge-@(Model.SystemHealth.IsHealthy ? "success" : "danger")">
                                @(Model.SystemHealth.IsHealthy ? "Healthy" : "Issues Detected")
                            </span>
                        </div>
                        
                        <div class="health-metrics">
                            <div class="mb-2">
                                <div class="flex justify-between">
                                    <span>CPU Usage</span>
                                    <span>@Model.SystemHealth.CpuUsage%</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar" 
                                         style="width: @Model.SystemHealth.CpuUsage%; background-color: @(Model.SystemHealth.CpuUsage > 70 ? "var(--color-red-500)" : Model.SystemHealth.CpuUsage > 50 ? "var(--color-yellow-500)" : "var(--color-green-500)")"></div>
                                </div>
                            </div>
                            
                            <div class="mb-2">
                                <div class="flex justify-between">
                                    <span>Memory Usage</span>
                                    <span>@Model.SystemHealth.MemoryUsage%</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar" 
                                         style="width: @Model.SystemHealth.MemoryUsage%; background-color: @(Model.SystemHealth.MemoryUsage > 80 ? "var(--color-red-500)" : Model.SystemHealth.MemoryUsage > 60 ? "var(--color-yellow-500)" : "var(--color-green-500)")"></div>
                                </div>
                            </div>
                            
                            <div class="mb-2">
                                <div class="flex justify-between">
                                    <span>Disk Usage</span>
                                    <span>@Model.SystemHealth.DiskUsage%</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar" 
                                         style="width: @Model.SystemHealth.DiskUsage%; background-color: @(Model.SystemHealth.DiskUsage > 85 ? "var(--color-red-500)" : Model.SystemHealth.DiskUsage > 70 ? "var(--color-yellow-500)" : "var(--color-green-500)")"></div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="fas fa-clock"></i> Last check: @Model.SystemHealth.LastCheck.ToString("HH:mm")
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Row -->
    <div class="flex flex-wrap -mx-3">
        <div class="w-full lg:w-1/3 px-3 mb-3">
            <div class="card">
                <div class="card-header flex justify-between items-center">
                    <h5 class="card-title">Recent Activity</h5>
                    <button class="btn btn-outline btn-sm" onclick="refreshActivity()">
                        <i class="fas fa-sync-alt"></i>
                    </button>
                </div>
                <div class="card-body p-0">
                    <div class="activity-list" id="activityList">
                        @foreach (var activity in Model.RecentActivity)
                        {
                            <div class="activity-item">
                                <div class="activity-icon" style="background-color: var(--color-@activity.Color-500);">
                                    <i class="@activity.Icon"></i>
                                </div>
                                <div class="activity-content">
                                    <div class="activity-description">@activity.Description</div>
                                    <div class="activity-meta">
                                        <span class="activity-user">@activity.UserName</span>
                                        <span class="activity-time">@activity.TimeAgo</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <div class="w-full lg:w-1/3 px-3 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Top Content</h5>
                </div>
                <div class="card-body p-0">
                    <div class="top-content-list">
                        @foreach (var content in Model.TopContent)
                        {
                            <div class="top-content-item">
                                <div class="content-info">
                                    <div class="content-title">@content.Title</div>
                                    <div class="content-meta">
                                        <span class="badge badge-secondary">@content.Type</span>
                                        <span class="content-author">by @content.AuthorName</span>
                                    </div>
                                </div>
                                <div class="content-stats">
                                    <div class="stat">
                                        <i class="fas fa-eye"></i> @content.Views
                                    </div>
                                    <div class="stat">
                                        <i class="fas fa-heart"></i> @content.Likes
                                    </div>
                                    <div class="stat">
                                        <i class="fas fa-comment"></i> @content.Comments
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <div class="w-full lg:w-1/3 px-3 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Active Users</h5>
                </div>
                <div class="card-body p-0">
                    <div class="active-users-list">
                        @foreach (var user in Model.ActiveUsers)
                        {
                            <div class="active-user-item">
                                <div class="user-avatar">
                                    @if (!string.IsNullOrEmpty(user.ProfilePictureUrl))
                                    {
                                        <img src="@user.ProfilePictureUrl" alt="@user.UserName" class="user-avatar" />
                                    }
                                    else
                                    {
                                        <div class="user-avatar">
                                            @user.UserName.Substring(0, 1).ToUpper()
                                        </div>
                                    }
                                    @if (user.IsOnline)
                                    {
                                        <span class="status-badge status-online"></span>
                                    }
                                </div>
                                <div class="user-info">
                                    <div class="user-name">@user.UserName</div>
                                    <div class="user-activity">@user.LastActivityText</div>
                                </div>
                                <div class="user-stats">
                                    <div class="stat-item">
                                        <span class="stat-value">@user.PostsCount</span>
                                        <span class="stat-label">Posts</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Initialize charts
        const userGrowthCtx = document.getElementById('userGrowthChart').getContext('2d');
        const userGrowthChart = new Chart(userGrowthCtx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.UserGrowthChart.Select(x => x.Label))),
                datasets: [{
                    label: 'New Users',
                    data: @Html.Raw(Json.Serialize(Model.UserGrowthChart.Select(x => x.Value))),
                    borderColor: '#007bff',
                    backgroundColor: 'rgba(0, 123, 255, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Refresh activity function
        function refreshActivity() {
            fetch('/dashboard/recent-activity')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Update activity list
                        console.log('Activity refreshed');
                    }
                })
                .catch(error => console.error('Error refreshing activity:', error));
        }

        // Auto-refresh every 30 seconds
        setInterval(refreshActivity, 30000);
    </script>
}