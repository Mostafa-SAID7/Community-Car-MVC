@model CommunityCar.Domain.Entities.Localization.LocalizationResource
@{
    var isEdit = Model.Id != Guid.Empty;
    ViewData["Title"] = isEdit ? "Edit Resource" : "Add Resource";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var cultures = ViewBag.Cultures as List<CommunityCar.Domain.Entities.Localization.LocalizationCulture>;
}

<div class="dashboard-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@(isEdit ? "Edit Resource" : "Add Resource")</h1>
        <a href="@Url.Action("Resources")" class="btn btn-outline-secondary">Back to List</a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="SaveResource" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-3">
                            <label asp-for="Key" class="form-label">Key</label>
                            <input asp-for="Key" class="form-control" placeholder="e.g. Navigation_Home" required />
                            <small class="text-muted">The unique key used in the code to fetch this translation.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Culture" class="form-label">Culture</label>
                            <select asp-for="Culture" class="form-select" required>
                                <option value="">Select Culture...</option>
                                @foreach (var c in cultures ?? new())
                                {
                                    <option value="@c.Name">@c.DisplayName (@c.Name)</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ResourceGroup" class="form-label">Resource Group (Optional)</label>
                            <input asp-for="ResourceGroup" class="form-control" placeholder="e.g. SharedResource" />
                            <small class="text-muted">Used to group translations (e.g. by View or Component).</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Value" class="form-label">Value</label>
                            <textarea asp-for="Value" class="form-control" rows="4" required></textarea>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Save Translation</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
