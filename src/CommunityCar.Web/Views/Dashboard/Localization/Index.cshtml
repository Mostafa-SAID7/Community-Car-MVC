@inject IViewLocalizer Localizer
@model List<CommunityCar.Domain.Entities.Localization.LocalizationCulture>
@{
    ViewData["Title"] = Localizer["LocalizationHubTitle"];
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["UseModernTheme"] = true;
}

<div class="animate-slide-up">
    <!-- Top Header Section -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
        <div>
            <h1 class="page-title mb-1">
                <i data-lucide="languages" class="text-muted opacity-40 me-2"></i> @Localizer["LocalizationHub"]
            </h1>
            <p class="text-muted small">@Localizer["LocalizationHubDesc"]</p>
        </div>
        <div class="d-flex flex-wrap align-items-center gap-2">
            <form asp-action="ImportFromFiles" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-sm btn-light rounded-pill xx-small fw-bold px-3 py-2 border-0 shadow-sm border border-light">
                    <i data-lucide="refresh-cw" class="w-3 h-3 me-1"></i> @Localizer["SyncFiles"]
                </button>
            </form>
            <a href="@Url.Action("Resources", "Localization")" class="btn btn-sm btn-light rounded-pill xx-small fw-bold px-3 py-2 border-0 shadow-sm border border-light text-decoration-none">
                <i data-lucide="book" class="w-3 h-3 me-1"></i> @Localizer["Dictionary"]
            </a>
            <a href="@Url.Action("AddCulture", "Localization")" class="btn-modern-primary py-2">
                <i data-lucide="plus" class="w-4 h-4 me-1"></i> @Localizer["AddCulture"]
            </a>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="card-modern p-0 overflow-hidden">
        <div class="table-responsive">
            <table class="modern-table mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">@Localizer["CultureCode"]</th>
                        <th>@Localizer["IdentityName"]</th>
                        <th class="text-center">@Localizer["Protocol"]</th>
                        <th class="text-center">@Localizer["Priority"]</th>
                        <th class="text-center">@Localizer["Health"]</th>
                        <th class="text-end pe-4">@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var culture in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <span class="badge bg-light text-dark font-monospace px-2 py-1 border border-light rounded-2 xx-small fw-bold">@culture.Name</span>
                            </td>
                            <td>
                                <span class="small fw-bold">@culture.DisplayName</span>
                            </td>
                            <td class="text-center">
                                <span class="badge @(culture.IsRTL ? "bg-warning-subtle text-warning" : "bg-info-subtle text-info") rounded-pill px-2 py-1 xx-small fw-bold">
                                    @(culture.IsRTL ? Localizer["RTLBase"] : Localizer["LTRBase"])
                                </span>
                            </td>
                            <td class="text-center">
                                @if (culture.IsDefault)
                                {
                                    <span class="badge bg-success-subtle text-success rounded-pill px-2 py-1 xx-small fw-bold d-inline-flex align-items-center gap-1">
                                        <i data-lucide="star" class="w-3 h-3 fill-current"></i> @Localizer["Default"]
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted opacity-30 small">â€¢</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="d-inline-flex align-items-center gap-2">
                                    <div class="status-dot @(culture.IsActive ? "online" : "offline")"></div>
                                    <span class="xx-small fw-bold text-uppercase @(culture.IsActive ? "text-success" : "text-danger")">
                                        @(culture.IsActive ? Localizer["Operational"] : Localizer["Offline"])
                                    </span>
                                </div>
                            </td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <a href="@Url.Action("EditCulture", "Localization", new { id = culture.Id })" class="btn btn-sm btn-light rounded-pill xx-small fw-bold p-2 text-primary" title="@Localizer["Edit"]">
                                        <i data-lucide="edit-3" class="w-4 h-4"></i>
                                    </a>
                                    <form asp-action="DeleteCulture" asp-route-id="@culture.Id" method="post" class="delete-culture-form">
                                        @Html.AntiForgeryToken()
                                        <button type="button" 
                                                data-action="confirm-delete-culture"
                                                class="btn btn-sm btn-light rounded-pill xx-small fw-bold p-2 text-danger border-0" 
                                                title="@Localizer["Delete"]">
                                            <i data-lucide="trash-2" class="w-4 h-4"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/dashboard-localization.js" asp-append-version="true"></script>
}
