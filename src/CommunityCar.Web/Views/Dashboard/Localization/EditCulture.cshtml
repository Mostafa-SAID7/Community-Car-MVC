@inject IViewLocalizer Localizer
@model CommunityCar.Domain.Entities.Localization.LocalizationCulture
@{
    var isEdit = Model.Id != Guid.Empty;
    ViewData["Title"] = isEdit ? Localizer["ModifyCulture"] : Localizer["DeployCulture"];
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["UseModernTheme"] = true;
}

<div class="animate-slide-up mx-auto" style="max-width: 900px;">
    <!-- Top Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="page-title mb-2">@(isEdit ? Localizer["AdjustProfile"] : Localizer["InitializeLocale"])</h1>
            <p class="text-muted fw-medium">@Localizer["GlobalizingDesc"]</p>
        </div>
        <a href="@Url.Action("Index")" class="btn-modern-outline">@Localizer["ReturnToHub"]</a>
    </div>

    <!-- Form Section -->
    <div class="card-modern">
        <form asp-action="SaveCulture" method="post">
            <input type="hidden" asp-for="Id" />
            
            <div class="row g-4 mb-5">
                <div class="col-12 col-md-6">
                    <label asp-for="Name" class="modern-label">@Localizer["IETFLanguagePort"]</label>
                    <input asp-for="Name" class="modern-input" placeholder="e.g. ja-JP" required />
                    <p class="xx-small text-muted mt-2">@Localizer["IETFLanguagePortDesc"]</p>
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="DisplayName" class="modern-label">@Localizer["IdentityLabel"]</label>
                    <input asp-for="DisplayName" class="modern-input" placeholder="e.g. Japanese (Internal)" required />
                    <p class="xx-small text-muted mt-2">@Localizer["IdentityLabelDesc"]</p>
                </div>
            </div>

            <div class="row g-3 mb-5">
                <div class="col-12 col-md-4">
                    <label class="modern-checkbox-card">
                        <div>
                            <span class="d-block fw-bold small">@Localizer["RTLLogic"]</span>
                            <span class="xx-small text-muted">@Localizer["RTLLogicDesc"]</span>
                        </div>
                        <input asp-for="IsRTL" type="checkbox" class="modern-checkbox" />
                    </label>
                </div>

                <div class="col-12 col-md-4">
                    <label class="modern-checkbox-card">
                        <div>
                            <span class="d-block fw-bold small">@Localizer["SystemDefault"]</span>
                            <span class="xx-small text-muted">@Localizer["SystemDefaultDesc"]</span>
                        </div>
                        <input asp-for="IsDefault" type="checkbox" class="modern-checkbox" />
                    </label>
                </div>

                <div class="col-12 col-md-4">
                    <label class="modern-checkbox-card">
                        <div>
                            <span class="d-block fw-bold small">@Localizer["ActiveStatus"]</span>
                            <span class="xx-small text-muted">@Localizer["ActiveStatusDesc"]</span>
                        </div>
                        <input asp-for="IsActive" type="checkbox" class="modern-checkbox" />
                    </label>
                </div>
            </div>

            <div class="pt-4 border-top">
                <button type="submit" class="btn-modern-primary w-100 justify-content-center py-3">
                    @Localizer["DeployProfile"]
                </button>
            </div>
        </form>
    </div>
</div>
