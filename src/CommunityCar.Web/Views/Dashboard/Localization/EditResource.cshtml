@model CommunityCar.Domain.Entities.Localization.LocalizationResource
@{
    var isEdit = Model.Id != Guid.Empty;
    ViewData["Title"] = isEdit ? "Edit Mapping" : "Initialize Mapping";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var cultures = ViewBag.Cultures as List<CommunityCar.Domain.Entities.Localization.LocalizationCulture>;
}

<div class="max-w-4xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-4 duration-700">
    <div class="flex items-center justify-between border-b border-border/50 pb-6">
        <div>
            <h1 class="text-3xl font-black text-foreground tracking-tighter">@(isEdit ? "Refine Protocol" : "New Translation Node")</h1>
            <p class="text-sm text-muted-foreground font-medium opacity-70 mt-1">Resource orchestration for global enthusiasts</p>
        </div>
        <a href="@Url.Action("Resources")" class="px-6 py-2.5 bg-muted/50 hover:bg-muted text-foreground rounded-xl text-[10px] font-black uppercase tracking-widest transition-all border border-border/50">Escape to Registry</a>
    </div>

    <div class="bg-card/40 backdrop-blur-xl border border-border rounded-3xl p-10 shadow-2xl relative overflow-hidden group">
        <div class="absolute top-0 right-0 w-64 h-64 bg-primary/5 rounded-full blur-3xl -mr-32 -mt-32 transition-colors group-hover:bg-primary/10"></div>
        
        <form asp-action="SaveResource" method="post" class="relative space-y-8">
            <input type="hidden" asp-for="Id" />
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="space-y-2">
                    <label asp-for="Key" class="text-[10px] font-black uppercase tracking-widest text-primary">System Identifier Key</label>
                    <div class="relative group/input">
                        <input asp-for="Key" class="w-full bg-background/50 border border-border px-4 py-3.5 rounded-2xl text-sm font-black tracking-tight outline-none focus:ring-4 focus:ring-primary/10 focus:border-primary transition-all shadow-inner" placeholder="e.g. NAV_CHASSIS_CONTROL" required />
                        <i data-lucide="key" class="absolute right-4 top-1/2 -translate-y-1/2 w-4 h-4 text-muted-foreground opacity-30 group-focus-within/input:opacity-100 group-focus-within/input:text-primary transition-all"></i>
                    </div>
                    <p class="text-[9px] font-black uppercase text-muted-foreground tracking-widest opacity-50 px-1">Immutable system reference for this node</p>
                </div>

                <div class="space-y-2">
                    <label asp-for="Culture" class="text-[10px] font-black uppercase tracking-widest text-primary">Locale Target</label>
                    <div class="relative">
                        <select asp-for="Culture" class="w-full bg-background/50 border border-border px-4 py-3.5 rounded-2xl text-xs font-black uppercase tracking-widest outline-none focus:ring-4 focus:ring-primary/10 focus:border-primary transition-all appearance-none shadow-inner" required>
                            <option value="">Select Protocol...</option>
                            @foreach (var c in cultures ?? new())
                            {
                                <option value="@c.Name">@c.DisplayName (@c.Name)</option>
                            }
                        </select>
                        <i data-lucide="chevron-down" class="absolute right-4 top-1/2 -translate-y-1/2 w-4 h-4 text-muted-foreground pointer-events-none opacity-40"></i>
                    </div>
                </div>
            </div>

            <div class="space-y-2">
                <label asp-for="ResourceGroup" class="text-[10px] font-black uppercase tracking-widest text-primary">Domain Namespace</label>
                <div class="relative group/input">
                    <input asp-for="ResourceGroup" class="w-full bg-background/50 border border-border px-4 py-3.5 rounded-2xl text-sm font-medium outline-none focus:ring-4 focus:ring-primary/10 focus:border-primary transition-all shadow-inner" placeholder="e.g. Components_Dashboard_Telemetry" />
                    <i data-lucide="layers" class="absolute right-4 top-1/2 -translate-y-1/2 w-4 h-4 text-muted-foreground opacity-30 group-focus-within/input:opacity-100 transition-all"></i>
                </div>
            </div>

            <div class="space-y-2">
                <label asp-for="Value" class="text-[10px] font-black uppercase tracking-widest text-primary">Localized Content Payload</label>
                <textarea asp-for="Value" class="w-full bg-background/50 border border-border p-6 rounded-3xl text-sm font-medium outline-none focus:ring-4 focus:ring-primary/10 focus:border-primary transition-all min-h-[160px] shadow-inner resize-none" required placeholder="Enter the high-fidelity translation here..."></textarea>
            </div>

            <div class="pt-6">
                <button type="submit" class="w-full bg-primary text-primary-foreground py-5 rounded-2xl text-[11px] font-black uppercase tracking-[0.2em] shadow-xl shadow-primary/30 hover:shadow-primary/40 hover:-translate-y-0.5 active:scale-[0.98] transition-all">
                    Commit to Registry
                </button>
            </div>
        </form>
    </div>
</div>
